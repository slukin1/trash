<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/global_button_start_color" android:endColor="@color/global_button_end_color" android:angle="45" android:type="linear"/>
            <corners android:radius="@dimen/dimen_5"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <gradient android:startColor="@color/global_button_start_color" android:endColor="@color/global_button_end_color" android:angle="45" android:type="linear"/>
            <corners android:radius="@dimen/dimen_5"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/global_button_press_color"/>
            <corners android:radius="@dimen/dimen_5"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/global_button_enable_false"/>
            <corners android:radius="@dimen/dimen_5"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/global_button_start_color" android:endColor="@color/global_button_end_color" android:angle="45" android:type="linear"/>
            <corners android:radius="@dimen/dimen_5"/>
        </shape>
    </item>
</selector>
