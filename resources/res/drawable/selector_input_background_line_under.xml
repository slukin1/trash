<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_selected="true">
        <layer-list>
            <item android:left="-5dp" android:top="-5dp" android:right="-5dp">
                <shape>
                    <stroke android:width="@dimen/dimen_0_6" android:color="@color/baseColorMajorTheme100"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item android:left="-5dp" android:top="-5dp" android:right="-5dp">
                <shape>
                    <stroke android:width="@dimen/dimen_0_6" android:color="@color/baseColorInputField"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
