<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/coupon_dialog_receive_color" android:endColor="@color/coupon_dialog_receive_color" android:angle="45"/>
            <corners android:radius="@dimen/dimen_0"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <gradient android:startColor="@color/coupon_dialog_receive_color" android:endColor="@color/coupon_dialog_receive_color" android:angle="45"/>
            <corners android:radius="@dimen/dimen_0"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/coupon_dialog_receive_color"/>
            <corners android:radius="@dimen/dimen_0"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/global_button_enable_false"/>
            <corners android:radius="@dimen/dimen_0"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/coupon_dialog_receive_color" android:endColor="@color/coupon_dialog_receive_color" android:angle="45"/>
            <corners android:radius="@dimen/dimen_0"/>
        </shape>
    </item>
</selector>
