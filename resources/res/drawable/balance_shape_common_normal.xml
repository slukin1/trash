<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_focused="true">
        <shape>
            <stroke android:width="@dimen/global_divider_width" android:color="@color/baseColorMajorTheme100"/>
            <solid android:color="@color/global_item_bg"/>
            <corners android:radius="@dimen/dimen_3"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <stroke android:width="@dimen/global_divider_width" android:color="@color/baseColorMajorTheme100"/>
            <solid android:color="@color/global_item_bg"/>
            <corners android:radius="@dimen/dimen_3"/>
        </shape>
    </item>
    <item android:state_focused="false">
        <shape>
            <stroke android:width="@dimen/global_divider_width" android:color="@color/baseColorPrimarySeparator"/>
            <solid android:color="@color/global_item_bg"/>
            <corners android:radius="@dimen/dimen_3"/>
        </shape>
    </item>
</selector>
