<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/global_item_bg" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/line1" android:background="@color/otc_list_divide_color" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_10"/>
    <RelativeLayout android:id="@+id/content" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/line1">
        <RelativeLayout android:id="@+id/flag" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15" android:layout_marginTop="@dimen/dimen_14">
            <ImageView android:id="@+id/coin_logo" android:layout_width="@dimen/dimen_21" android:layout_height="@dimen/dimen_21" android:src="@drawable/otc_market_largebitcoin_icon" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/global_text_size_18" android:textColor="@color/baseColorPrimaryText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_6_5" android:text="@string/otc_one_key_to_buy" android:layout_toRightOf="@+id/coin_logo" android:layout_centerVertical="true" android:fontFamily="@font/roboto_medium"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/buy_model_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/fastbuy_switch"/>
                <TextView android:textSize="@dimen/global_text_size_12" android:textColor="@color/baseColorMajorTheme100" android:layout_gravity="center_vertical" android:id="@+id/buy_model_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_3" android:text="@string/n_otc_buy_coin_by_amount"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/input_rl" android:background="@drawable/otc_selector" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15" android:layout_marginTop="@dimen/dimen_14" android:layout_marginRight="@dimen/dimen_15" android:layout_marginBottom="@dimen/dimen_15" android:layout_below="@+id/flag">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/dimen_40" android:layout_toLeftOf="@+id/buy_rl">
                <EditText android:textSize="@dimen/global_text_size_14" android:textColor="@color/baseColorPrimaryText" android:gravity="center_vertical" android:id="@+id/money_count" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dimen_10" android:inputType="numberDecimal" android:imeOptions="actionNone" android:textCursorDrawable="@drawable/cursor"/>
                <com.hbg.lib.widgets.AlphaAnimTextView android:id="@+id/text_hint" android:paddingLeft="@dimen/dimen_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" app:anim_tv_text_color="@color/baseColorInputField" app:anim_tv_text_size="@dimen/dimen_5"/>
                <com.hbg.lib.widgets.RotateAnimTextView android:textSize="@dimen/dimen_14" android:textColor="@color/baseColorPrimaryText" android:id="@+id/pay_flag" android:paddingRight="@dimen/dimen_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/otc_cny" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/buy_rl" android:background="@drawable/otc_buy" android:layout_width="@dimen/dimen_100" android:layout_height="@dimen/dimen_40" android:layout_alignParentRight="true">
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                    <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_5" android:src="@drawable/trade_quickbuy_button_icon"/>
                    <TextView android:textSize="@dimen/dimen_16" android:textColor="@color/baseTextColor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/otc_buy" android:fontFamily="@font/roboto_medium"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <View android:id="@+id/line" android:background="@color/otc_list_divide_color" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_10" android:layout_below="@+id/content"/>
    <TextView android:textSize="@dimen/dimen_18" android:textColor="@color/baseColorPrimaryText" android:gravity="center_vertical" android:id="@+id/view" android:paddingLeft="@dimen/dimen_15" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_50" android:text="@string/otc_self_trade" android:layout_below="@+id/line" android:fontFamily="@font/roboto_medium"/>
    <RelativeLayout android:orientation="vertical" android:id="@+id/empty_rl" android:background="@color/global_item_bg" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/view">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/home_buy_empty_image"/>
            <TextView android:textSize="@dimen/global_text_size_14" android:textColor="@color/global_default_text_color" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16" android:text="@string/otc_order_no_ads"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
