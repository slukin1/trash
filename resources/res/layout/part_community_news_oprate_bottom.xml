<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rlvCommunityFromList" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout android:gravity="center_vertical" android:id="@+id/rl_sharelikercomment_container" android:visibility="visible" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginTop="12dp">
            <RelativeLayout android:id="@+id/rl_circle_share_clk" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="21dp" android:minWidth="47dp" android:layout_alignParentLeft="true" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0">
                <ImageView android:id="@+id/iv_circle_share_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_community_moment_share" android:scaleType="centerCrop" android:layout_centerVertical="true"/>
                <TextView android:textSize="12dp" android:textColor="#9c9da5" android:gravity="center" android:id="@+id/tv_circle_share" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="6dp" android:text="@string/text_shared" android:maxLines="1" android:singleLine="true" android:layout_toRightOf="@+id/iv_circle_share_image"/>
            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:id="@+id/rl_circle_like_clk" android:layout_width="wrap_content" android:layout_height="match_parent" android:minWidth="47dp" android:layout_centerHorizontal="true" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
                <ImageView android:id="@+id/iv_circle_like_image" android:layout_width="24dp" android:layout_height="30dp" android:src="@drawable/ic_community_holder_like_normal" android:scaleType="centerCrop" android:layout_centerVertical="true"/>
                <TextView android:textSize="12dp" android:textColor="#9c9da5" android:gravity="center_vertical" android:id="@+id/tv_circle_like" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="6dp" android:minWidth="15dp" android:text="@string/text_praise" android:maxLines="1" android:singleLine="true" android:layout_toRightOf="@+id/iv_circle_like_image"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl_circle_comment_clk" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="21dp" android:minWidth="47dp" android:layout_alignParentRight="true" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
                <ImageView android:id="@+id/iv_circle_comment_image" android:layout_width="24dp" android:layout_height="30dp" android:src="@drawable/ic_community_holder_comment" android:scaleType="centerCrop" android:layout_centerVertical="true"/>
                <TextView android:textSize="12dp" android:textColor="#9c9da5" android:gravity="center_vertical" android:id="@+id/tv_circle_comment" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="6dp" android:text="@string/text_comment" android:maxLines="1" android:singleLine="true" android:layout_toRightOf="@+id/iv_circle_comment_image"/>
            </RelativeLayout>
            <View android:id="@+id/v_line_1" android:background="#e7ebee" android:layout_width="0.5dp" android:layout_height="@dimen/dimen_13" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="@+id/rl_circle_share_clk" app:layout_constraintRight_toRightOf="@+id/rl_circle_like_clk" app:layout_constraintTop_toTopOf="0"/>
            <View android:id="@+id/v_line_2" android:background="#e7ebee" android:layout_width="0.5dp" android:layout_height="@dimen/dimen_13" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="@+id/rl_circle_like_clk" app:layout_constraintRight_toRightOf="@+id/rl_circle_comment_clk" app:layout_constraintTop_toTopOf="0"/>
            <View android:id="@+id/v_menu_share_click" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toLeftOf="@+id/v_line_1" app:layout_constraintTop_toTopOf="0"/>
            <View android:id="@+id/v_menu_like_click" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/v_line_1" app:layout_constraintRight_toLeftOf="@+id/v_line_2" app:layout_constraintTop_toTopOf="0"/>
            <View android:id="@+id/v_menu_comment_click" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/v_line_2" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <RelativeLayout android:id="@+id/ll_comment_panel" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_arraw_dropup" android:background="@drawable/ic_arrow_dropup" android:layout_width="12dp" android:layout_height="6dp" android:layout_marginTop="2dp" android:layout_marginRight="25dp" android:scaleType="centerCrop" android:adjustViewBounds="true" android:layout_alignParentRight="true"/>
            <LinearLayout android:orientation="vertical" android:background="@drawable/bg_color_f9f9f9_r_2px" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/iv_arraw_dropup">
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rlv_comment_list" android:paddingLeft="8dp" android:paddingTop="10dp" android:paddingRight="8dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:scrollingCache="false"/>
                <TextView android:textSize="14dp" android:textColor="#999999" android:id="@+id/tv_more_comment_tips" android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingBottom="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="查看全部评论" android:drawableRight="@drawable/ic_arrow_dropright"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ll_browse_location" android:paddingTop="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-30dp">
        <TextView android:textSize="14dp" android:textColor="@color/color_9B9B9B" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="上次看到这里 "/>
        <TextView android:textSize="14dp" android:textColor="@color/color_0091FD" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="点击刷新" android:drawableRight="@drawable/ic_community_moment_refresh" android:drawablePadding="5dp"/>
    </LinearLayout>
    <View android:id="@+id/v_list_dividing_line" android:background="@color/color_E7EBEE" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
</LinearLayout>
