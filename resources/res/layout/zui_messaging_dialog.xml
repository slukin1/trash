<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="300dp" android:layout_height="match_parent" android:layout_marginLeft="24dp" android:layout_marginTop="24dp" android:layout_marginRight="24dp" android:layout_marginBottom="8dp" android:minHeight="100dp">
    <TextView android:textSize="@dimen/zui_text_size_xlarge" android:textStyle="bold" android:textColor="@color/zui_color_black_100" android:id="@+id/zui_dialog_title" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:textSize="18sp" android:id="@+id/zui_dialog_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>
    <com.google.android.material.textfield.TextInputLayout android:id="@+id/zui_dialog_input_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
        <com.google.android.material.textfield.TextInputEditText android:id="@+id/zui_dialog_input" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout android:layout_gravity="end" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp">
        <Button android:textColor="@color/zui_color_primary" android:id="@+id/zui_dialog_negative_button" android:layout_width="wrap_content" android:layout_height="wrap_content" app:backgroundTint="@color/zui_color_transparent" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
        <Button android:textColor="@color/zui_color_primary" android:id="@+id/zui_dialog_positive_button" android:layout_width="wrap_content" android:layout_height="wrap_content" app:backgroundTint="@color/zui_color_transparent" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    </LinearLayout>
</LinearLayout>
