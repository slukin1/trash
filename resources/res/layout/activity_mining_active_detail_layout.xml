                <LinearLayout android:orientation="horizontal" android:id="@+id/autoMiningTipsLayout" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/dimen_16" android:textColor="@color/baseColorPrimaryText" android:id="@+id/autoMiningLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="@dimen/dimen_220" android:text="@string/n_mining_balance_auto_mining" android:includeFontPadding="false"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/askIcon" android:layout_width="@dimen/dimen_12" android:layout_height="@dimen/dimen_12" android:layout_marginLeft="@dimen/dimen_4" android:src="@drawable/icon_ask"/>
                </LinearLayout>
                <com.hbg.lib.widgets.CommonSwitchButton android:id="@+id/switchButton" android:layout_width="@dimen/dimen_28" android:layout_height="@dimen/dimen_16" android:layout_marginTop="@dimen/dimen_2" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:ballCheckedColor="@color/baseColorContentBackground" app:ballUnCheckedColor="@color/baseColorContentBackground" app:ball_radius="@dimen/dimen_6" app:checkedBackgroundColor="@color/baseColorMajorTheme100" app:corner_radius="@dimen/dimen_8" app:is_checked="false" app:unCheckedBackgroundColor="@color/baseColorPrimarySeparator"/>
