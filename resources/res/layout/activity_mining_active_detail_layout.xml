    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/btnLayout" android:layout_below="@+id/topBar">
        <LinearLayout android:orientation="vertical" android:paddingTop="@dimen/dimen_15" android:paddingBottom="@dimen/dimen_15" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/dimen_16" android:paddingRight="@dimen/dimen_16" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/global_text_size_12" android:textColor="@color/baseColorPrimaryText" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_14" android:text="@string/n_mining_amount" android:maxLines="1"/>
                <TextView android:textSize="@dimen/global_text_size_24" android:textColor="@color/baseColorPrimaryText" android:gravity="center_vertical" android:id="@+id/amountText" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_28" android:layout_marginTop="@dimen/dimen_2" android:maxLines="1" android:includeFontPadding="false" android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/contentLayout" android:paddingLeft="@dimen/dimen_16" android:paddingTop="@dimen/dimen_15" android:paddingRight="@dimen/dimen_16" android:paddingBottom="@dimen/dimen_11" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <View android:id="@+id/view_line1" android:background="@color/me_kyc_warn_bg" android:layout_width="match_parent" android:layout_height="@dimen/dimen_6"/>
            <include android:id="@+id/time_line" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/layout_huobi_earn_fixed_time_line"/>
            <View android:id="@+id/view_line2" android:background="@color/me_kyc_warn_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_6"/>
