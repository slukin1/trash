    <LinearLayout android:orientation="horizontal" android:id="@+id/btnLayout" android:padding="@dimen/dimen_15" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_15" android:layout_alignParentBottom="true">
