                <TextView android:textSize="@dimen/global_text_size_16" android:textColor="@color/baseColorPrimaryText" android:gravity="center_vertical" android:id="@+id/tv_redemption_way" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_18_5" android:layout_marginBottom="@dimen/dimen_4" android:text="@string/n_mining_ransom_way" android:maxLines="1" android:includeFontPadding="false" android:fontFamily="@font/roboto_medium"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_auto_ybb" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/global_text_size_12" android:textColor="@color/baseColorPrimaryText" android:id="@+id/tv_auto_ybb" android:background="@null" android:paddingTop="@dimen/dimen_10" android:paddingBottom="@dimen/dimen_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:text="@string/n_mining_auto_transfer_to_active" android:drawablePadding="@dimen/dimen_8" app:drawableStartCompat="@drawable/icon_circle_unselected"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/askYbbIcon" android:layout_width="@dimen/dimen_12" android:layout_height="match_parent" android:src="@drawable/icon_ask" android:layout_marginStart="@dimen/dimen_4"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_auto_continue" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/global_text_size_12" android:textColor="@color/baseColorPrimaryText" android:id="@+id/tv_auto_continue" android:background="@null" android:paddingTop="@dimen/dimen_10" android:paddingBottom="@dimen/dimen_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:text="@string/n_mining_auto_transfer_continue" android:drawablePadding="@dimen/dimen_8" app:drawableStartCompat="@drawable/icon_circle_unselected"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/askContinueIcon" android:layout_width="@dimen/dimen_12" android:layout_height="match_parent" android:src="@drawable/icon_ask" android:layout_marginStart="@dimen/dimen_4"/>
                </LinearLayout>
                <TextView android:textSize="@dimen/global_text_size_12" android:textColor="@color/baseColorPrimaryText" android:id="@+id/tv_auto_spot" android:background="@null" android:paddingTop="@dimen/dimen_10" android:paddingBottom="@dimen/dimen_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:text="@string/n_mining_auto_transfer_to_spot" android:drawablePadding="@dimen/dimen_8" app:drawableStartCompat="@drawable/icon_circle_unselected"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.hbg.lib.widgets.LoadingLayout android:id="@+id/loadingLayout" android:background="@color/app_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/topBar"/>
</RelativeLayout>
