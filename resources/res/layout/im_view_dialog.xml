        <View android:id="@+id/img_line" android:background="@color/baseColorContentBackground" android:visibility="invisible" android:layout_width="10dp" android:layout_height="50dp"/>
        <Button android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_pos" android:background="@drawable/im_chat_dialog_button_bg_blue" android:layout_width="138dp" android:layout_height="40dp" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
