<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root_view" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_content" android:background="@drawable/bg_live_prepare_dialog" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:textSize="20sp" android:textColor="@color/baseColorPrimaryText" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_prepare_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="85dp" android:text="@string/n_live_iappointment_alert_nviteSuccess"/>
        <TextView android:textSize="16sp" android:textColor="@color/baseColorSecondaryText" android:ellipsize="end" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/n_live_appointment_alert_inviteFriend"/>
        <RelativeLayout android:id="@+id/rl_into_group" android:background="@drawable/bg_live_prepare_into" android:visibility="gone" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginLeft="20dp" android:layout_marginTop="12dp" android:layout_marginRight="20dp">
            <ImageView android:id="@+id/iv_icon" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginLeft="8dp" android:src="@drawable/icon_dialog_live_prepare_user" android:layout_centerVertical="true"/>
            <TextView android:textSize="14sp" android:textColor="@color/baseColorPrimaryText" android:ellipsize="end" android:id="@+id/tv_talk_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="10dp" android:text="Edward LEE 的直播讨..." android:lines="1" android:layout_toLeftOf="@+id/tv_into" android:layout_toRightOf="@+id/iv_icon"/>
            <TextView android:textSize="10sp" android:textColor="@color/baseColorSecondaryText" android:ellipsize="end" android:id="@+id/tv_talk_sub_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/n_live_into_talk_room" android:lines="1" android:layout_toLeftOf="@+id/tv_into" android:layout_toRightOf="@+id/iv_icon" android:layout_below="@+id/tv_talk_title"/>
            <TextView android:textSize="12sp" android:textColor="@color/white" android:id="@+id/tv_into" android:background="@drawable/bg_live_hot_talk_into" android:paddingLeft="10dp" android:paddingTop="6dp" android:paddingRight="10dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/n_live_join_group" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_share" android:background="@drawable/bg_live_hot_talk_into" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:text="@string/n_live_appointment_alert_shareToFriend"/>
        <TextView android:textSize="16sp" android:textColor="@color/baseColorPrimaryText" android:id="@+id/tv_cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:text="@string/n_cancel"/>
    </LinearLayout>
    <ImageView android:id="@+id/iv_prepare" android:layout_width="178dp" android:layout_height="102dp" android:layout_marginTop="-36dp" android:src="@drawable/icon_live_prepare_icon" android:layout_alignTop="@+id/ll_content" android:layout_centerHorizontal="true"/>
</RelativeLayout>
