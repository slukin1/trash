<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:id="@+id/rl_parent" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center" android:id="@+id/lin_content" android:layout_width="match_parent" android:layout_height="36dp">
        <RelativeLayout android:id="@+id/rl_loading" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <ProgressBar android:id="@+id/pr_loading" android:layout_width="24dp" android:layout_height="24dp" android:layout_centerInParent="true" style="@style/Widget.AppCompat.ProgressBar"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:gravity="center" android:id="@+id/rl_error_retry_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="36dp">
            <TextView android:textSize="14sp" android:gravity="center" android:id="@+id/tv_error_state" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
