<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/top_status_bar" android:layout_width="match_parent" android:layout_height="0dp"/>
    <RelativeLayout android:id="@+id/rl_title_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/top_status_bar">
        <ImageView android:id="@+id/ps_iv_left_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ps_ic_back" android:scaleType="centerInside" android:layout_centerVertical="true"/>
        <RelativeLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ps_rl_album_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
            <com.luck.picture.lib.widget.MarqueeTextView android:textSize="18sp" android:textColor="@color/ps_color_white" android:ellipsize="marquee" android:gravity="center" android:id="@+id/ps_tv_title" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxEms="6" android:scrollHorizontally="true" android:singleLine="true" android:includeFontPadding="false" android:layout_centerVertical="true" android:marqueeRepeatLimit="marquee_forever"/>
            <ImageView android:id="@+id/ps_iv_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ps_ic_default_arrow" android:scaleType="centerInside" android:layout_centerVertical="true" android:layout_toEndOf="@+id/ps_tv_title"/>
        </RelativeLayout>
        <View android:id="@+id/ps_rl_album_click" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignStart="@+id/ps_rl_album_bg" android:layout_alignEnd="@+id/ps_rl_album_bg"/>
        <com.luck.picture.lib.widget.MediumBoldTextView android:textSize="14sp" android:textColor="@color/ps_color_white" android:gravity="center" android:id="@+id/ps_tv_cancel" android:background="@drawable/ps_cancel_default_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ps_cancel" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
        <ImageView android:id="@+id/ps_iv_delete" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="centerInside" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View android:id="@+id/title_bar_line" android:background="@color/ps_color_ec" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0.8dp" android:layout_below="@+id/rl_title_bar"/>
</merge>
