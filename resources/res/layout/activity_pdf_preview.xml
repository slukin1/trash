<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/otc_chat_rl_root" android:background="@color/baseColorContentBackground" android:layout_width="match_parent" android:layout_height="match_parent">
