<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/iproov__fullFrame" android:layout_width="match_parent" android:layout_height="match_parent" android:filterTouchesWhenObscured="true">
    <com.iproov.sdk.graphics.iproov.OpenGLRenderer android:id="@+id/iproov__rendererView" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.iproov.sdk.ui.views.ShimmeringImageView android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/iproov__iproovLogoImageView" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_securedbyiproov" android:scaleType="fitXY" android:adjustViewBounds="true" android:contentDescription="@string/iproov_accessibility_label_secured_by_iproov"/>
    <com.iproov.sdk.ui.views.HovalayView android:id="@+id/iproov__hovalView" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="0dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:id="@+id/iproov_header_container" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:id="@+id/iproov__header" android:layout_width="match_parent" android:layout_height="@dimen/iproov__app_bar_size">
                <FrameLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.15">
                    <ImageView android:layout_gravity="center" android:id="@+id/iproov__closeButtonImageView" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_arrow_back" android:adjustViewBounds="true" android:contentDescription="@string/iproov_accessibility_label_close_button"/>
                </FrameLayout>
                <androidx.appcompat.widget.AppCompatTextView android:textSize="@dimen/iproov__title_text_size" android:textColor="@android:color/white" android:ellipsize="end" android:gravity="center" android:id="@+id/iproov__titleTextView" android:layout_width="0dp" android:layout_height="match_parent" android:maxLines="2" android:layout_weight="0.8"/>
                <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/iproov__logoImageView" android:padding="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:adjustViewBounds="true" android:layout_weight="0.15" android:importantForAccessibility="no"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <FrameLayout android:layout_width="wrap_content" android:layout_height="match_parent">
                <ImageView android:id="@+id/iproov__imageHistogramPreView" android:visibility="invisible" android:layout_width="50dp" android:layout_height="75dp" android:scaleType="fitCenter" android:importantForAccessibility="no"/>
                <androidx.appcompat.widget.AppCompatTextView android:textStyle="bold" android:textColor="#555555" android:id="@+id/iproov__textViewDebug" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_margin="12dp" android:layout_marginTop="458dp" android:layout_marginBottom="12dp" android:text="Loading..." android:importantForAccessibility="no" app:autoSizeMaxTextSize="18sp" app:autoSizeMinTextSize="10sp" app:autoSizeStepGranularity="2sp" app:autoSizeTextType="1"/>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
    <com.iproov.sdk.ui.views.LivenessDebugOverlay android:id="@+id/iproov__liveness_debug_overlay" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <TextView android:textSize="@dimen/iproov__prompt_text_size" android:textColor="@color/iproov__white" android:layout_gravity="center_horizontal" android:id="@+id/iproov__promptTextView" android:paddingLeft="10dp" android:paddingTop="8dp" android:paddingRight="10dp" android:paddingBottom="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="100dp" android:textAlignment="center"/>
</FrameLayout>
