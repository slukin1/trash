<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#ffffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/title_layout" android:background="#ffffffff" android:layout_width="match_parent" android:layout_height="48dp" android:minHeight="48dp">
        <RelativeLayout android:id="@+id/left_top_layout" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_centerVertical="true">
            <TextView android:layout_gravity="center_vertical" android:id="@+id/left_top_image" android:background="@drawable/ali_vsdk_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_centerVertical="true"/>
            <TextView android:textSize="16sp" android:textColor="#505156" android:gravity="center" android:id="@+id/left_top_text" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="3dp" android:text="@string/ali_vsdk_titlebar_back" android:layout_toRightOf="@+id/left_top_image" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:layout_gravity="center" android:id="@+id/title_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/ali_vsdk_titlebar_name" android:singleLine="true" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="30dp" android:layout_marginRight="15dp">
            <TextView android:textSize="24sp" android:textStyle="normal" android:textColor="#000000" android:gravity="center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="@string/ali_vsdk_verify_sms_title" android:maxLines="2"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#adadad" android:gravity="center" android:id="@+id/subtitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="8dp" android:layout_marginRight="20dp" android:text="@string/ali_vsdk_verify_sms_subtitle" android:maxLines="2"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp">
                <RelativeLayout android:id="@+id/number_layout" android:layout_width="match_parent" android:layout_height="46dp">
                    <TextView android:textSize="17dp" android:textColor="#adadad" android:id="@+id/number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ali_vsdk_verify_number" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                    <EditText android:enabled="false" android:textSize="17dp" android:textColor="#adadad" android:id="@+id/number_et" android:background="@null" android:focusable="false" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="46dp" android:layout_marginLeft="20dp" android:layout_toRightOf="@+id/number" android:layout_centerVertical="true" android:inputType="phone"/>
                </RelativeLayout>
                <TextView android:background="#dedede" android:layout_width="match_parent" android:layout_height="1dp"/>
                <RelativeLayout android:id="@+id/code_layout" android:layout_width="match_parent" android:layout_height="46dp">
                    <TextView android:textSize="17dp" android:textColor="#000000" android:gravity="center" android:id="@+id/code" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/ali_vsdk_verify_code" android:layout_alignParentLeft="true"/>
                    <TextView android:textSize="17dp" android:textColor="#1475ea" android:gravity="center" android:id="@+id/verify_send_code" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/ali_vsdk_verify_sms_send_code" android:layout_alignParentRight="true"/>
                    <EditText android:textSize="17dp" android:id="@+id/code_et" android:background="@null" android:layout_width="100dp" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:maxLength="10" android:layout_toRightOf="@+id/code" android:layout_centerVertical="true" android:inputType="number" android:imeOptions="actionDone" android:imeActionLabel="@string/ali_vsdk_verify_submit" android:imeActionId="@+id/submit"/>
                </RelativeLayout>
                <TextView android:background="#dedede" android:layout_width="match_parent" android:layout_height="1dp"/>
            </LinearLayout>
            <RelativeLayout android:layout_gravity="center" android:id="@+id/btn_submit" android:background="@drawable/ali_vsdk_button" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginTop="30dp">
                <TextView android:textSize="19sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/submit_tx" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/ali_vsdk_verify_submit" android:layout_centerInParent="true"/>
                <com.alibaba.verificationsdk.widgets.ALiLoadingView android:id="@+id/submit_loading" android:background="@drawable/ali_vsdk_button_icon_dengdai" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_toLeftOf="@+id/submit_tx" android:layout_centerVertical="true" app:ali_vsdk_loading_type="1"/>
            </RelativeLayout>
            <TextView android:textSize="14sp" android:textColor="#1475ea" android:gravity="center" android:id="@+id/btn_call" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="12dp" android:layout_marginRight="20dp" android:text="@string/ali_vsdk_verify_sms_use_call" android:maxLines="2" android:lineSpacingExtra="6dp"/>
        </LinearLayout>
    </ScrollView>
    <ImageView android:gravity="center" android:id="@+id/logo" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/ali_vsdk_logo"/>
</LinearLayout>
