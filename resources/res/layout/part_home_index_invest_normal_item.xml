    </RelativeLayout>
    <TextView android:textSize="10sp" android:textColor="#909090" android:gravity="center" android:id="@+id/tv_normal_content_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/dimen_16"/>
    <TextView android:textSize="10sp" android:textColor="#909090" android:gravity="left" android:id="@+id/tv_normal_earn_ad_tip" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginStart="@dimen/dimen_16"/>
</LinearLayout>
