        <TextView android:textSize="12sp" android:textColor="#000000" android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_normal_earn_user_nick_name" android:layout_width="match_parent" android:layout_height="match_parent" android:maxLines="1" android:lines="1" android:layout_marginStart="4dp" android:layout_marginEnd="16dp" android:layout_toEndOf="@+id/rl_coin_image_container" app:autoSizeMaxTextSize="12sp" app:autoSizeMinTextSize="6sp" app:autoSizeTextType="1"/>
