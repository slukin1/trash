<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
    <TextView android:textSize="12sp" android:textColor="#000000" android:gravity="center" android:id="@+id/tv_normal_invest_type_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginStart="@dimen/dimen_16"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="16dp" android:layout_marginTop="6dp" android:layout_marginStart="@dimen/dimen_16">
        <RelativeLayout android:id="@+id/rl_coin_image_container" android:layout_width="wrap_content" android:layout_height="match_parent">
            <com.huobi.view.roundimg.RoundedImageView android:id="@+id/iv_normal_invest_user_icon2" android:visibility="gone" android:layout_width="14dp" android:layout_height="14dp" android:layout_centerVertical="true" android:layout_marginStart="8dp" app:riv_border_color="@color/invest_dual_border_color" app:riv_border_width="1dp" app:riv_corner_radius="@dimen/dimen_7"/>
            <com.huobi.view.roundimg.RoundedImageView android:id="@+id/iv_normal_invest_user_icon" android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/ic_invest_currency_default" android:layout_centerVertical="true" app:riv_border_color="@color/invest_dual_border_color" app:riv_border_width="1dp" app:riv_corner_radius="@dimen/dimen_7"/>
