    <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_apy_and_coupon" android:layout_width="wrap_content" android:layout_height="21dp" android:layout_marginTop="2dp" android:layout_marginStart="@dimen/dimen_16">
