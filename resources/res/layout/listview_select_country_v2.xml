                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15" android:layout_marginTop="@dimen/dimen_10" android:layout_marginBottom="@dimen/dimen_10" android:src="@drawable/btn_market_search" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <com.hbg.lib.widgets.LoadingLayout android:id="@+id/select_country_layout" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/listview_country" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </com.hbg.lib.widgets.LoadingLayout>
    </LinearLayout>
</LinearLayout>
