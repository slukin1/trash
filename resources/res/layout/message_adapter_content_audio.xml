<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="28dp" android:minWidth="@dimen/item_width">
    <LinearLayout android:orientation="horizontal" android:id="@+id/audio_content_ll" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
        <TextView android:textSize="14.5sp" android:textColor="#ffffff" android:layout_gravity="center_vertical" android:id="@+id/audio_time_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/audio_play_iv" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:src="@drawable/voice_msg_playing_3" android:scaleType="centerCrop"/>
    </LinearLayout>
</RelativeLayout>
