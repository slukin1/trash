            <ImageView android:layout_width="@dimen/dimen_13" android:layout_height="@dimen/dimen_13" android:src="@drawable/green_selected_icon"/>
            <TextView android:textSize="@dimen/dimen_13" android:textColor="@color/baseColorSecondaryText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5" android:text="@string/n_otc_payment_order_nick_auth_pass_check"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_width="@dimen/dimen_13" android:layout_height="@dimen/dimen_13" android:src="@drawable/green_selected_icon"/>
            <TextView android:textSize="@dimen/dimen_13" android:textColor="@color/baseColorSecondaryText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5" android:text="@string/n_otc_payment_order_nick_auth_pay_money"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/guarantee_ll" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_width="@dimen/dimen_13" android:layout_height="@dimen/dimen_13" android:src="@drawable/green_selected_icon"/>
            <TextView android:textSize="@dimen/dimen_13" android:textColor="@color/baseColorSecondaryText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5" android:text="@string/n_otc_payment_order_nick_auth_guarantee_trade"/>
        </LinearLayout>
    </com.huobi.otc.widget.OrderAutoWrapViewGroup>
</LinearLayout>
