<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.huobi.view.title.HbTitleBar android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="@dimen/dimen_44" app:titleText="@string/dt_mock_hybrid_debug"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/bottom_bar" android:layout_below="@+id/title_bar">
        <LinearLayout android:orientation="vertical" android:padding="@dimen/dimen_20" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="@dimen/dimen_15" android:textStyle="bold" android:textColor="@android:color/holo_red_light" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="页面加载信息"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_info" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="@dimen/dimen_17" android:textStyle="bold" android:textColor="@android:color/holo_red_light" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10" android:layout_marginBottom="@dimen/dimen_5" android:text="jsbridge 调用记录"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_jscall_list" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:orientation="vertical" android:id="@+id/bottom_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <Button android:textSize="@dimen/dimen_15" android:id="@+id/btn_reload" android:layout_width="match_parent" android:layout_height="@dimen/dimen_50" android:text="重新加载"/>
    </LinearLayout>
</RelativeLayout>
