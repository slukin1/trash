<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/dialog_contract_bg" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_root" android:background="@drawable/common_dialog_bg" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25" android:layout_marginRight="@dimen/dimen_25" android:layout_centerInParent="true">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_title" android:layout_width="match_parent" android:layout_height="@dimen/dimen_50">
                <TextView android:textSize="@dimen/global_text_size_16" android:textStyle="bold" android:textColor="@color/baseColorPrimaryText" android:layout_gravity="center_vertical" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/global_margin_left" android:text="@string/n_contract_close_lightning_confirm" android:layout_weight="1"/>
                <ImageView android:id="@+id/iv_close" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/dialog_common_icon_close" android:scaleType="centerInside" android:paddingEnd="@dimen/dimen_16"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_btc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/global_margin_left" android:layout_marginTop="@dimen/dimen_6" android:layout_marginRight="@dimen/global_margin_right" android:layout_below="@+id/ll_title">
                <TextView android:textSize="@dimen/global_text_size_14" android:textStyle="bold" android:textColor="@color/baseColorPrimaryText" android:layout_gravity="center_vertical" android:id="@+id/tv_contract" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="@dimen/global_text_size_14" android:textStyle="bold" android:textColor="@color/baseColorPrimaryText" android:layout_gravity="center_vertical" android:id="@+id/tv_times" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_hint" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/global_margin_left" android:layout_marginTop="@dimen/dimen_8" android:layout_marginRight="@dimen/global_margin_right" android:layout_below="@+id/ll_btc">
                <TextView android:textSize="@dimen/global_text_size_14" android:textColor="@color/baseColorPrimaryText" android:layout_gravity="center_vertical" android:id="@+id/tv_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineHeight="@dimen/dimen_18"/>
                <TextView android:textSize="@dimen/global_text_size_14" android:textColor="@color/baseColorSecondaryText" android:layout_gravity="center_vertical" android:id="@+id/tv_hint_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_6" android:lineHeight="@dimen/dimen_18"/>
            </LinearLayout>
            <CheckBox android:textSize="@dimen/global_text_size_12" android:textColor="@color/trade_dialog_safeguard_text_color" android:id="@+id/agreement_cb" android:paddingLeft="@dimen/dimen_6" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15" android:layout_marginTop="@dimen/dimen_16" android:text="@string/n_contract_close_lightning_do_not_prompt" android:layout_below="@+id/ll_hint" style="@style/EditCollCustomCheckboxTheme"/>
            <FrameLayout android:id="@+id/dialog_contract_price_root" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_40" android:layout_marginLeft="@dimen/global_margin_left" android:layout_marginTop="@dimen/dimen_15" android:layout_marginRight="@dimen/global_margin_right" android:layout_below="@+id/agreement_cb">
                <com.huobi.view.TradePriceEditext android:id="@+id/dialog_contract_price_et" android:background="@drawable/custom_edittext_normal_5_radius_bg" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent" app:price_editext_paddingleft="@dimen/dimen_10" app:price_eidttext_hint="@string/trade_input_price" app:price_label_text="@string/usd_en_uppercase"/>
                <TextView android:textColor="@color/baseColorSecondaryText" android:gravity="center_vertical" android:id="@+id/dialog_contract_price_hint_et" android:paddingLeft="@dimen/dimen_10" android:paddingRight="@dimen/dimen_10" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </FrameLayout>
            <com.huobi.view.HorizontalTradeAmountPercentEdittext android:id="@+id/dialog_contract_amount_et" android:background="@drawable/custom_edittext_normal_5_radius_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_40" android:layout_marginLeft="@dimen/global_margin_left" android:layout_marginTop="@dimen/dimen_13" android:layout_marginRight="@dimen/global_margin_right" app:horizontal_amount_edittext_paddingleft="@dimen/dimen_10" app:horizontal_amount_eidttext_hint="@string/n_exchange_order_list_amount" app:horizontal_amount_label_text="@string/contract_trade_unit_sheet"/>
            <TextView android:textSize="@dimen/global_text_size_12" android:textColor="@color/baseColorSecondaryText" android:id="@+id/dialog_contract_position_tv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/global_margin_left" android:layout_marginTop="@dimen/dimen_3" android:layout_marginBottom="@dimen/dimen_5" android:layout_below="@+id/dialog_contract_amount_et"/>
            <LinearLayout android:gravity="center" android:id="@+id/dialog_position_trade" android:background="@drawable/common_blue_5_radius_selector" android:layout_width="match_parent" android:layout_height="@dimen/dimen_40" android:layout_marginLeft="@dimen/global_margin_left" android:layout_marginTop="@dimen/dimen_24" android:layout_marginRight="@dimen/global_margin_right" android:layout_marginBottom="@dimen/dimen_20" android:layout_below="@+id/agreement_cb">
                <TextView android:textSize="@dimen/global_text_size_14" android:textColor="@color/global_button_text_color" android:gravity="center" android:id="@+id/dialog_position_trade_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/n_confirm" android:drawablePadding="@dimen/dimen_3" android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <include android:id="@+id/dialog_loading" android:visibility="gone" layout="@layout/dialog_fragment_loading"/>
</RelativeLayout>
