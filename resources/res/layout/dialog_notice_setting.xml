<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root_view" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/parent_view" android:background="@color/global_dialog_bg_alpha_color" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_content" android:background="@color/dialog_bg_color" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:background="@color/color_common_btn_bg" android:layout_width="match_parent" android:layout_height="40dp">
                <com.huobi.view.FontIconTextView android:textSize="12sp" android:textColor="@color/color_0066ed" android:id="@+id/fitv_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="6dp" android:text="@string/icon_font_small_i" android:layout_centerVertical="true"/>
                <TextView android:textSize="12sp" android:textColor="@color/color_0066ed" android:id="@+id/tv_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="设置首页资讯类型，不错过重要市场动态" android:layout_toRightOf="@+id/fitv_icon" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginLeft="15dp" android:layout_marginTop="14.4dp" android:layout_marginRight="15dp">
                <RelativeLayout android:id="@+id/rl_hot" android:background="@drawable/bg_notice_dialog_item_select" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="10dp" android:layout_weight="1">
                    <TextView android:textColor="@color/color_0066ed" android:id="@+id/tv_hot" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="最新热点" android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/rl_new_coin" android:background="@drawable/bg_notice_dialog_item_unselect" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="10dp" android:layout_weight="1">
                    <TextView android:textSize="12sp" android:textColor="@color/baseColorPrimaryText" android:id="@+id/tv_new_coin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="新币上线" android:layout_centerInParent="true"/>
                    <ImageView android:id="@+id/iv_select_new_coin" android:visibility="gone" android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/icon_notice_dialog_select" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/rl_project" android:background="@drawable/bg_notice_dialog_item_unselect" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="10dp" android:layout_weight="1">
                    <TextView android:textSize="12sp" android:textColor="@color/baseColorPrimaryText" android:id="@+id/tv_project" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="项目介绍" android:layout_centerInParent="true"/>
                    <ImageView android:id="@+id/iv_select_project" android:visibility="gone" android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/icon_notice_dialog_select" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginLeft="15dp" android:layout_marginTop="15dp" android:layout_marginRight="15dp">
                <RelativeLayout android:id="@+id/rl_new_event" android:background="@drawable/bg_notice_dialog_item_unselect" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="10dp" android:layout_weight="1">
                    <TextView android:textColor="@color/baseColorPrimaryText" android:id="@+id/tv_new_event" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="最新活动" android:layout_centerInParent="true"/>
                    <ImageView android:id="@+id/iv_select_new_event" android:visibility="gone" android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/icon_notice_dialog_select" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/rl_live" android:background="@drawable/bg_notice_dialog_item_unselect" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="10dp" android:layout_weight="1">
                    <TextView android:textSize="12sp" android:textColor="@color/baseColorPrimaryText" android:id="@+id/tv_live" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="最新直播" android:layout_centerInParent="true"/>
                    <ImageView android:id="@+id/iv_select_live" android:visibility="gone" android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/icon_notice_dialog_select" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/rl_fast_news" android:background="@drawable/bg_notice_dialog_item_unselect" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="10dp" android:layout_weight="1">
                    <TextView android:textSize="12sp" android:textColor="@color/baseColorPrimaryText" android:id="@+id/tv_fast_news" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="前沿快讯" android:layout_centerInParent="true"/>
                    <ImageView android:id="@+id/iv_select_fase_news" android:visibility="gone" android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/icon_notice_dialog_select" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
            <View android:background="@color/color_E7EBEE" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="20dp"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="40dp">
                <TextView android:textSize="14sp" android:textColor="@color/baseColorSecondaryTextNew" android:gravity="center" android:id="@+id/tv_reset" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/n_exchange_order_reset" android:layout_weight="1"/>
                <TextView android:textSize="14sp" android:textColor="@color/baseTextColor" android:gravity="center" android:id="@+id/tv_confirm" android:background="@color/bar_dialog_btn" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/n_sure" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
