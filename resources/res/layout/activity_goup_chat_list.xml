    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_group_chat_list_all" android:background="@color/baseColorContentBackground" android:layout_width="match_parent" android:layout_height="0dp" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintTop_toBottomOf="@+id/vBgEmpty"/>
</androidx.constraintlayout.widget.ConstraintLayout>
