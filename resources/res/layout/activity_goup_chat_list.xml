<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/baseColorDeepestBackground" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/titleBar" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="44dp" app:layout_constraintTop_toTopOf="0">
        <ImageView android:id="@+id/iv_group_list_back" android:padding="@dimen/dimen_14" android:layout_width="44dp" android:layout_height="44dp" android:src="@drawable/im_chat_icon_back" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/global_text_size_18" android:textColor="@color/baseColorPrimaryText" android:id="@+id/tv_group_list_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/n_content_chat_msg" android:layout_centerInParent="true"/>
