    <androidx.constraintlayout.widget.Group android:id="@+id/vChatEmptyGroup" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:constraint_referenced_ids="vBgEmpty,ivChatEmpty,rv_group_chat_list_all,tvChatEmpty"/>
    <View android:id="@+id/vBgEmpty" android:background="@color/baseColorContentBackground" android:layout_width="match_parent" android:layout_height="187dp" app:layout_constraintTop_toBottomOf="@+id/titleBar"/>
