<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/baseColorContentBackground" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/baseColorContentBackground" android:layout_width="match_parent" android:layout_height="44dp">
        <FrameLayout android:id="@+id/fl_back" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
            <ImageView android:id="@+id/iv_back" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginLeft="10dp" android:src="@drawable/im_chat_icon_back"/>
        </FrameLayout>
        <LinearLayout android:orientation="horizontal" android:paddingLeft="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:textSize="16sp" android:textColor="@color/baseColorPrimaryText" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="150dp" android:text="@string/n_im_group_info" android:singleLine="true" android:fontFamily="@font/roboto_medium" android:textAlignment="center"/>
            <TextView android:textSize="18sp" android:textColor="@color/baseColorPrimaryText" android:id="@+id/tv_title_extra" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="(0)" android:singleLine="true" android:fontFamily="@font/roboto_medium" android:textAlignment="center"/>
        </LinearLayout>
    </RelativeLayout>
    <com.hbg.lib.widgets.LoadingLayout android:id="@+id/loading_layout" android:background="@color/baseColorDeepestBackground" android:layout_width="match_parent" android:layout_height="match_parent" app:error_view="@layout/common_error_view">
        <androidx.core.widget.NestedScrollView android:background="@color/baseColorContentBackground" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_user_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15" android:layout_marginTop="@dimen/dimen_6" android:layout_marginRight="@dimen/dimen_15"/>
                <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                    <TextView android:textSize="14sp" android:textColor="@color/color_909090" android:id="@+id/tv_user_info" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/n_im_check_all_member" android:fontFamily="@font/roboto_medium"/>
                    <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/im_icon_into"/>
                </LinearLayout>
                <View android:background="@color/baseColorDeepestBackground" android:layout_width="match_parent" android:layout_height="6dp" android:layout_marginTop="20dp"/>
                <RelativeLayout android:id="@+id/rl_notice" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="19dp" android:layout_marginRight="15dp">
                    <TextView android:textSize="16sp" android:textColor="@color/color_live_square_two_base" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/n_im_group_notice" android:fontFamily="@font/roboto_regular"/>
                    <ImageView android:id="@+id/iv_notice_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/im_icon_into" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="10sp" android:textColor="@color/baseColorContentBackground" android:id="@+id/tv_notice_count" android:background="@drawable/im_at_count_bg" android:paddingLeft="4dp" android:paddingTop="0.5dp" android:paddingRight="4dp" android:paddingBottom="0.5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="10dp" android:text="0" android:layout_toLeftOf="@+id/iv_notice_hint" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView android:textSize="12sp" android:textColor="@color/color_909090" android:id="@+id/tv_notice" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="8dp" android:layout_marginRight="15dp" android:text="" android:lineSpacingExtra="@dimen/dimen_8" android:fontFamily="@font/roboto_regular"/>
                <TextView android:textSize="14sp" android:textColor="@color/baseColorPrimaryText" android:gravity="center" android:id="@+id/tv_no_notice" android:layout_width="match_parent" android:layout_height="@dimen/dimen_28" android:layout_marginTop="20dp" android:text="@string/n_im_no_group_notice"/>
                <View android:background="@color/baseColorDeepestBackground" android:layout_width="match_parent" android:layout_height="6dp" android:layout_marginTop="20dp"/>
                <RelativeLayout android:id="@+id/rl_all_forbid" android:layout_width="match_parent" android:layout_height="60dp">
                    <TextView android:textSize="16sp" android:textColor="@color/baseColorPrimaryText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15" android:text="@string/n_content_chat_forbin_all" android:layout_centerVertical="true"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/sc_all_forbid" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:switchMinWidth="@dimen/dimen_60" app:theme="@style/live_switch_style" app:trackTint="@color/color_E9EAED"/>
                </RelativeLayout>
                <View android:id="@+id/v_all_forbid_line" android:background="@color/baseColorDeepestBackground" android:layout_width="match_parent" android:layout_height="6dp"/>
                <RelativeLayout android:id="@+id/rlyt_no_disturb" android:paddingLeft="@dimen/dimen_15" android:layout_width="match_parent" android:layout_height="@dimen/dimen_60">
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/sc_no_disturb" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/dimen_15" android:checked="false" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:switchMinWidth="@dimen/dimen_60" app:theme="@style/live_switch_style" app:trackTint="@color/color_E9EAED"/>
                    <RelativeLayout android:id="@+id/rlyt_no_disturb_title" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginRight="@dimen/dimen_4" android:layout_toLeftOf="@+id/sc_no_disturb">
                        <TextView android:textSize="@dimen/global_text_size_16" android:textColor="@color/global_main_text_color" android:layout_gravity="center" android:id="@+id/tv_no_disturb_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/n_im_chat_no_disturbing" android:drawablePadding="@dimen/dimen_5" android:layout_centerVertical="true" android:fontFamily="@font/roboto_regular"/>
                    </RelativeLayout>
                </RelativeLayout>
                <View android:id="@+id/v_no_disturb_line" android:background="@color/baseColorDeepestBackground" android:layout_width="match_parent" android:layout_height="6dp"/>
                <RelativeLayout android:id="@+id/rl_share_contract" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp">
                    <TextView android:textSize="16sp" android:textColor="@color/baseColorPrimaryText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15" android:text="@string/n_content_share_power_tip" android:layout_centerVertical="true"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/sc_share_contract" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:switchMinWidth="@dimen/dimen_60" app:theme="@style/live_switch_style" app:trackTint="@color/color_E9EAED"/>
                </RelativeLayout>
                <View android:id="@+id/v_share_contract_line" android:background="@color/baseColorDeepestBackground" android:visibility="gone" android:layout_width="match_parent" android:layout_height="6dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/llVerify" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="60dp">
                        <TextView android:textSize="16sp" android:textColor="@color/baseColorPrimaryText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15" android:text="@string/n_live_group_verify" android:layout_centerVertical="true"/>
                        <androidx.appcompat.widget.SwitchCompat android:id="@+id/sc_verify" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:switchMinWidth="@dimen/dimen_60" app:theme="@style/live_switch_style" app:trackTint="@color/color_E9EAED"/>
                    </RelativeLayout>
                    <View android:id="@+id/vVerifyLine" android:background="@color/baseColorDeepestBackground" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginStart="@dimen/dimen_15"/>
                    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llVerifyFunc" android:layout_width="match_parent" android:layout_height="60dp">
                        <TextView android:textSize="16sp" android:textColor="@color/baseColorPrimaryText" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15" android:text="@string/n_live_group_verify_func" android:layout_weight="1" android:layout_centerVertical="true"/>
                        <TextView android:textSize="@dimen/global_text_size_14" android:textColor="@color/baseColorSecondaryTextNew" android:id="@+id/tvVerifyFunc" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/im_icon_into" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginStart="10dp" android:layout_marginEnd="@dimen/dimen_16"/>
                    </LinearLayout>
                    <RelativeLayout android:id="@+id/rlJoinAdmin" android:layout_width="match_parent" android:layout_height="60dp">
                        <TextView android:textSize="16sp" android:textColor="@color/baseColorPrimaryText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15" android:text="@string/n_live_group_join_admin" android:layout_centerVertical="true"/>
                        <TextView android:textSize="@dimen/global_text_size_14" android:textColor="@color/baseColorSecondaryTextNew" android:id="@+id/tvJoinAdmin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/dimen_10" android:layout_toStartOf="@+id/ivArray"/>
                        <ImageView android:id="@+id/ivArray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/im_icon_into" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/dimen_16"/>
                    </RelativeLayout>
                </LinearLayout>
                <View android:id="@+id/v_verify_line" android:background="@color/baseColorDeepestBackground" android:layout_width="match_parent" android:layout_height="6dp"/>
                <TextView android:textSize="16dp" android:textColor="@color/color_D14B64" android:layout_gravity="center_horizontal" android:id="@+id/tv_exit_group" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="19dp" android:layout_marginBottom="19dp" android:text="@string/n_im_delete_and_out" android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.hbg.lib.widgets.LoadingLayout>
</LinearLayout>
