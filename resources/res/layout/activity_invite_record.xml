            <TextView android:textSize="@dimen/global_text_size_14" android:textColor="@color/global_default_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20" android:text="@string/trade_no_record"/>
