<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="?attr/chat_input_area_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.tencent.qcloud.tuikit.tuichat.classicui.widget.input.ReplyPreviewBar android:id="@+id/reply_preview_bar" android:paddingTop="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/baseColorContentBackground" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="56dp">
        <ImageView android:id="@+id/voice_input_switch" android:layout_width="@dimen/chat_input_icon_size" android:layout_height="@dimen/chat_input_icon_size" android:layout_margin="5dp" android:src="@drawable/ic_voice" android:scaleType="fitXY"/>
        <com.tencent.qcloud.tuikit.tuichat.classicui.widget.input.TIMMentionEditText android:textSize="@dimen/chat_input_text_size" android:textColor="@color/kColorPrimaryText" android:layout_gravity="center_vertical" android:id="@+id/chat_message_input" android:background="@drawable/chat_input_bg" android:padding="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="5dp" android:maxHeight="120dp" android:minHeight="@dimen/chat_input_editor_height" android:layout_weight="1" android:imeOptions="actionSend" android:textCursorDrawable="@drawable/my_cursor" android:letterSpacing="0.02"/>
        <Button android:textColor="@color/text_color_gray" android:id="@+id/chat_voice_input" android:background="@drawable/voice_btn_selector" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="5dp" android:text="@string/n_group_im_press_talk" android:layout_weight="1" style="?android:attr/borderlessButtonStyle"/>
        <ImageView android:id="@+id/face_btn" android:visibility="gone" android:layout_width="@dimen/chat_input_icon_size" android:layout_height="@dimen/chat_input_icon_size" android:layout_margin="5dp" android:src="@drawable/action_face_selector" android:scaleType="fitXY"/>
        <ImageView android:id="@+id/more_btn" android:layout_width="@dimen/chat_input_icon_size" android:layout_height="@dimen/chat_input_icon_size" android:layout_margin="5dp" android:src="@drawable/action_more_selector" android:scaleType="fitXY"/>
        <Button android:textSize="13sp" android:textColor="#fff" android:id="@+id/send_btn" android:background="@drawable/im_bg_goto_chat" android:visibility="gone" android:layout_width="40dp" android:layout_height="@dimen/chat_input_icon_size" android:layout_marginBottom="3dp" android:text="@string/n_otc_chat_send"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/more_groups" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
