<LinearLayout width="match_parent" height="wrap_content" orientation="vertical" gravity="center" marginBottom="16" background="@color/KBaseColorContentBackground" onClick="@event.guide.openGuidPage()" visibility="{{@data.guide.show|gone}}">

  <ImageView height="130" width="165" marginTop="0" src="@drawable/edge_engine_home_guid"/>

      <!-- richText="{{@data.guide.title}}" -->
  <TextView width="wrap_content" maxWidth="310" richText="{{@data.guide.title}}" height="wrap_content" gravity="center" marginTop="16" maxLines="2" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="22"/>

  <TextView width="310" height="wrap_content" gravity="center" marginTop="6" maxHeight="32" maxLines="2" text="{{@data.guide.subTitle}}" textColor="@color/kColorSecondaryText" textFontWeight="400" textSize="12"/>


  <TextView width="240" height="40" marginLeft="67" marginRight="67" marginTop="16" marginBottom="16" gravity="center" text="{{@data.guide.buttonTitle}}" textColor="@color/KBaseTextColor" textFontWeight="500" textSize="14" cornerRadius="4" background="@color/kColorMajorTheme100"/>

</LinearLayout>
