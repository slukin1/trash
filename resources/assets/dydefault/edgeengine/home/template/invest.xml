<LinearLayout width="match_parent" height="wrap_content" marginBottom="16" orientation="vertical" background="@color/KBaseColorContentBackground" visibility="{{@data.invest.visibility|gone}}">

  <FrameLayout width="match_parent" height="40" marginLeft="16" marginRight="16" marginTop="12" onClick="@event.invest.moreTapAction()" orientation="horizontal">

    <TextView width="wrap_content" height="wrap_content" layout_gravity="center|left" textSize="20" text="{{@data.invest.showTitleText}}" textColor="@color/kColorPrimaryText" textFontWeight="500"/>

    <ImageView width="24" height="24" layout_gravity="center|right" src="@drawable/edge_engine_home_investment_arrow"/>
  </FrameLayout>

  <!-- tradingToEarn -->
  <FrameLayout width="match_parent" height="94" marginLeft="16" marginRight="16" marginTop="4" cornerRadius="6" visibility="{{@data.invest.tradingToEarn.visibility|gone}}">

      <ImageView width="match_parent" height="match_parent" src="@drawable/edge_engine_home_invest_tradingtoearn_bg"/>

      <LinearLayout width="match_parent" height="match_parent" orientation="vertical" onClick="@event.invest.tapAction('{{@data.invest.tradingToEarn.key}}')">

        <LinearLayout width="match_parent" height="42" marginTop="12" orientation="horizontal" gravity="left">

        <LinearLayout width="wrap_content" height="42" orientation="vertical">

            <TextView width="wrap_content" height="20" maxWidth="115" marginLeft="16" marginRight="5" gravity="center|left" autoSizeTextType="uniform" textSize="16" text="{{@data.invest.tradingToEarn.showTitleText}}" textColor="@color/kColorPrimaryText" textFontWeight="500"/>

            <LinearLayout width="wrap_content" marginTop="2" height="20" gravity="left" orientation="horizontal">

            <ImageView marginLeft="16" marginTop="4" src="{{@data.invest.tradingToEarn.coinIcon}}" width="16" height="16" cornerRadius="8" placeholder="@drawable/edge_engine_home_coin_placeholder_16"/>

            <TextView width="wrap_content" height="16" gravity="left|center" marginLeft="3" marginTop="4" textSize="11" text="{{@data.invest.tradingToEarn.symbol}}" textColor="@color/kColorThreeLevelText" textFontWeight="400"/>
            </LinearLayout>
        </LinearLayout>

        <TextView width="wrap_content" height="wrap_content" maxWidth="92" background="@color/kHomeInvestTagBackground" marginTop="1" marginLeft="8" paddingLeft="6" paddingRight="6" paddingTop="3" paddingBottom="3" cornerRadius="8" textSize="11" text="{{@data.invest.tradingToEarn.countDownTimeStr}}" textColor="@color/kHomeTextGreenColor" textFontWeight="400" autoSizeTextType="uniform" autoSizeMinTextSize="6" gravity="top|center" visibility="{{@data.invest.tradingToEarn.showRemain|gone}}"/>

        <View width="match_parent" height="1" weight="1"/>

        <LinearLayout width="wrap_content" layout_gravity="right" height="38" orientation="vertical">

            <TextView width="wrap_content" height="24" maxWidth="84" layout_gravity="right" marginLeft="3" marginRight="16" textSize="18" autoSizeTextType="uniform" text="{{@data.invest.tradingToEarn.apyPercent}}" textColor="@color/kColorPrimaryText" textFontWeight="500"/>

            <TextView width="wrap_content" height="14" maxWidth="84" layout_gravity="right" marginLeft="3" marginRight="16" textSize="11" autoSizeTextType="uniform" text="{{@data.invest.tradingToEarn.prizeCurrency}}" textColor="@color/kColorThreeLevelText" textFontWeight="400"/>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout width="match_parent" height="14" marginLeft="16" marginRight="16" gravity="left" orientation="horizontal" marginTop="17">

      <LinearLayout width="51" height="4" orientation="horizontal" marginTop="5" cornerRadius="2" background="@color/kHomeInvestProgreesRemainingColor">
          
        <View width="0" height="match_parent" background="@color/kHomeInvestProgreesUsedColor" cornerRadius="2" weight="{{@data.invest.tradingToEarn.usedProportion|1}}" visibility="{{@data.invest.tradingToEarn.usedProportionShow|gone}}"/>

        <View width="0" height="match_parent" background="@color/kHomeInvestProgreesRemainingColor" cornerRadius="2" weight="{{@data.invest.tradingToEarn.remainingProportion|1}}" visibility="{{@data.invest.tradingToEarn.remainingProportionShow|gone}}"/>
      </LinearLayout>

      <LinearLayout width="wrap_content" height="match_parent" marginLeft="8" orientation="horizontal">
        <TextView gravity="left" width="wrap_content" height="match_parent" textSize="11" text="{{@data.invest.tradingToEarn.allocatedScoreString}}" textColor="@color/kColorPrimaryText" textFontWeight="400"/>
        <TextView gravity="left" width="wrap_content" height="match_parent" textSize="11" text="{{@data.invest.tradingToEarn.prizeAmountString}}" textColor="@color/kColorThreeLevelText" textFontWeight="400"/>
      </LinearLayout>
    </LinearLayout>

  </LinearLayout>

  </FrameLayout>

  <!-- spot -->
  <FrameLayout width="match_parent" marginLeft="16" marginRight="16" marginTop="8" height="64" gravity="centerHorizontal" cornerRadius="6" borderWidth="0.5" borderColor="@color/kHomeInvestOtherBorderColor" onClick="@event.invest.tapAction('{{@data.invest.spot.key}}')" visibility="{{@data.invest.spot.visibility|gone}}">

    <LinearLayout width="wrap_content" height="match_parent" gravity="left" layout_gravity="left" orientation="vertical">
      <TextView width="wrap_content" height="20" maxWidth="155" marginTop="13" marginLeft="16" autoSizeTextType="uniform" gravity="center" textSize="16" text="{{@data.invest.spot.showTitleText}}" textColor="@color/kColorPrimaryText" textFontWeight="500"/>

      <LinearLayout width="wrap_content" height="26" marginTop="5" gravity="left" marginLeft="16" orientation="horizontal">
        <ImageView width="16" height="16" gravity="center" marginRight="3" src="{{@data.invest.spot.img}}" cornerRadius="8" visibility="{{@data.invest.spot.imgVisibility | gone}}" placeholder="@drawable/balances_currencyicon"/>

        <TextView width="wrap_content" height="16" maxWidth="155" gravity="center" textSize="11" autoSizeTextType="uniform" text="{{@data.invest.spot.showSubTitleText}}" textColor="@color/kColorThreeLevelText" textFontWeight="400"/>
      </LinearLayout>

    </LinearLayout>

    <LinearLayout width="wrap_content" height="match_parent" gravity="right" marginRight="16" layout_gravity="right" orientation="vertical">
      <TextView width="wrap_content" height="20" gravity="right" marginTop="13" textSize="18" text="{{@data.invest.spot.totalProfitAmount}}" textColor="@color/kColorPrimaryText" textFontWeight="500"/>
      <TextView width="wrap_content" height="16" gravity="right|center" maxWidth="155" autoSizeTextType="uniform" marginTop="5" textSize="11" text="{{@data.invest.spot.showContentText}}" textColor="@color/kColorThreeLevelText" textFontWeight="400"/>
    </LinearLayout>
  </FrameLayout>

  <!-- contractCopyTrade -->
  <FrameLayout onClick="@event.invest.tapAction('{{@data.invest.contractCopyTrade.key}}')" width="match_parent" marginLeft="16" marginRight="16" marginTop="8" height="wrap_content" gravity="centerHorizontal" cornerRadius="6" borderWidth="0.5" borderColor="@color/kHomeInvestOtherBorderColor" visibility="{{@data.invest.contractCopyTrade.visibility|gone}}">

    <LinearLayout width="wrap_content" height="wrap_content" gravity="left" marginTop="12" marginBottom="12" layout_gravity="left" orientation="vertical">
      <TextView width="wrap_content" height="20" marginLeft="16" autoSizeTextType="uniform" maxWidth="155" gravity="center" textSize="16" text="{{@data.invest.contractCopyTrade.showTitleText}}" textColor="@color/kColorPrimaryText" textFontWeight="500"/>

      <LinearLayout height="wrap_content" width="wrap_content" marginTop="4" gravity="left" orientation="horizontal">
        <TextView width="155" height="wrap_content" maxLines="2" marginLeft="16" textSize="11" autoSizeTextType="uniform" text="{{@data.invest.contractCopyTrade.showSubTitleText}}" textColor="@color/kColorThreeLevelText" textFontWeight="400"/>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout width="wrap_content" height="wrap_content" gravity="right" marginRight="16" layout_gravity="right" orientation="vertical">
      <TextView width="wrap_content" height="20" gravity="right" marginTop="12" textSize="18" text="{{@data.invest.contractCopyTrade.totalProfitAmount}}" textColor="@color/kColorPrimaryText" textFontWeight="500"/>
      <TextView width="155" height="wrap_content" maxLines="2" gravity="right" marginTop="4" textSize="11" text="{{@data.invest.contractCopyTrade.showContentText}}" textColor="@color/kColorThreeLevelText" textFontWeight="400"/>
    </LinearLayout>
  </FrameLayout>

  <!-- dual -->
  <FrameLayout onClick="@event.invest.tapAction('{{@data.invest.dual.key}}')" width="match_parent" marginLeft="16" marginRight="16" marginTop="8" height="64" gravity="centerHorizontal" cornerRadius="6" borderWidth="0.5" borderColor="@color/kHomeInvestOtherBorderColor" visibility="{{@data.invest.dual.visibility|gone}}">
    <LinearLayout width="wrap_content" height="match_parent" gravity="left" layout_gravity="left" orientation="vertical">
      <TextView width="wrap_content" height="20" maxWidth="155" marginTop="13" marginLeft="16" autoSizeTextType="uniform" gravity="left" textSize="16" text="{{@data.invest.dual.showTitleText}}" textColor="@color/kColorPrimaryText" textFontWeight="500"/>
      <LinearLayout height="26" width="wrap_content" marginTop="5" gravity="left" orientation="horizontal">
        <ImageView marginLeft="16" src="{{@data.invest.dual.imgCurrency}}" width="16" height="16" cornerRadius="8" placeholder="@drawable/edge_engine_home_coin_placeholder_16"/>
        <ImageView marginLeft="-8" src="{{@data.invest.dual.imgeCovertCurrency}}" width="16" height="16" cornerRadius="8" placeholder="@drawable/edge_engine_home_coin_placeholder_16"/>
        <TextView width="wrap_content" height="16" maxWidth="100" gravity="center" marginLeft="3" textSize="11" autoSizeTextType="uniform" text="{{@data.invest.dual.productName}}" textColor="@color/kColorThreeLevelText" textFontWeight="400"/>
      </LinearLayout>
    </LinearLayout>
   
    <LinearLayout width="wrap_content" height="match_parent" gravity="right" marginRight="16" layout_gravity="right" orientation="vertical">
      <TextView width="wrap_content" height="20" gravity="right" marginTop="13" textSize="18" text="{{@data.invest.dual.apyPercent}}" textColor="@color/kColorPrimaryText" textFontWeight="500"/>
      <TextView width="wrap_content" height="26" gravity="right" marginTop="5" textSize="11" text="{{@data.invest.dual.rateTitle}}" textColor="@color/kColorThreeLevelText" textFontWeight="400"/>
    </LinearLayout>
  </FrameLayout>

  <View width="1" height="8"/>

</LinearLayout>
