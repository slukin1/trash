<FrameLayout width="345" height="wrap_content" background="@color/KAssetTopHeaderContentBackground" marginLeft="15" marginRight="15" cornerRadius="8" marginBottom="16">

  <!-- 图片 -->
  <LinearLayout width="match_parent" height="16" marginTop="118" marginLeft="1" marginRight="1" gravity="centerVertical" visibility="{{@data.banner.bannerVisibility | gone}}" orientation="horizontal">
    <ImageView width="match_parent" height="16" src="@drawable/home_banner_shadow"/>
  </LinearLayout>

  <LinearLayout width="match_parent" height="wrap_content" orientation="vertical">
    <FrameLayout width="345" height="132" visibility="{{@data.banner.bannerVisibility | visible}}">
      <SliderView width="match_parent" height="match_parent" direction="horizontal" autoScroll="{{@data.banner.autoScroll}}" timeInterval="5" scrollMode="infinite" onSelected="@event.banner.selectedBannerIndex(@eventParams)" borderColor="@color/kHomeEarnOtherBorderColor" borderWidth="0.5" cornerRadius="8" currentIndex="@data.banner.currentIndex" clipRadius="9">
        <For data="@data.banner.bannerList" itemKey="element" typeKey="type">
          <Cell width="match_parent" height="match_parent" type="1">
            <LinearLayout width="match_parent" height="match_parent" gravity="centerVertical" orientation="horizontal">
              <ImageView width="match_parent" height="match_parent" src="{{@element.currentImageURL}}" scaleType="center_crop" onClick="@event.banner.bannerClickBanner()" placeholder="@drawable/home_new_banner_placeholder"/>
            </LinearLayout>
          </Cell>
        </For>
      </SliderView>
      <ImageView width="match_parent" height="match_parent" src="{{@data.banner.bannerPlaceholerImage}}" borderColor="@color/kHomeEarnOtherBorderColor" scaleType="fitXY" borderWidth="0.5" cornerRadius="8" clipRadius="9" visibility="{{@data.banner.bannerPlaceholerVisibility | visible}}"/>
      <LinearLayout width="wrap_content" height="23" orientation="horizontal" gravity="right" layout_gravity="right|bottom" paddingRight="8" paddingBottom="8" visibility="{{@data.banner.bannerTextVisibility}}">
        <TextView width="wrap_content" height="wrap_content" text="{{@data.banner.bannerCurrentIndex}}" textSize="11" textColor="@color/kColorPrimaryText" textFontWeight="500" autoSizeTextType="uniform" gravity="right"/>
        <TextView width="wrap_content" height="wrap_content" text="/" textSize="11" textColor="@color/kColorThreeLevelText" textFontWeight="500" autoSizeTextType="uniform" gravity="right"/>
        <TextView width="wrap_content" height="wrap_content" text="{{@data.banner.totalPage}}" textSize="11" textColor="@color/kColorThreeLevelText" textFontWeight="500" autoSizeTextType="uniform" gravity="right"/>
      </LinearLayout>
      
      <ImageView width="match_parent" height="match_parent" borderColor="@color/kHomeEarnOtherBorderColor" borderWidth="0.5" cornerRadius="8" visibility="{{@data.banner.bannerAndroidStrokeVisibility | gone}}"/>
    </FrameLayout>

    <FrameLayout width="345" height="32" visibility="{{@data.banner.noticeVisibility | visible}}">
      <LinearLayout width="match_parent" height="32" gravity="centerVertical" orientation="horizontal">
        <SliderView width="315" height="match_parent" direction="vertical" autoScroll="{{@data.banner.autoScroll}}" timeInterval="5" scrollMode="infinite" currentIndex="@data.banner.currentNoticeIndex" onSelected="@event.banner.selectedNoticeIndex(@eventParams)">
          <For data="@data.banner.noticeList" itemKey="element" typeKey="type">
            <Cell width="match_parent" height="match_parent" type="1">
              <LinearLayout width="match_parent" height="match_parent" gravity="centerVertical" orientation="horizontal" onClick="@event.banner.bannerClickNotice()">
                <TextView height="16" width="wrap_content" text="{{@element.tag}}" textColor="{{@element.color}}" textSize="10" borderColor="{{@element.color}}" borderWidth="0.5" topLeftRadius="2" topRightRadius="2" bottomLeftRadius="2" bottomRightRadius="2" marginLeft="8" paddingLeft="3" paddingRight="3" gravity="center"/>
                <TextView marginLeft="8" height="wrap_content" width="wrap_content" text="{{@element.title}}" textColor="@color/kColorSecondaryText" textSize="12" weight="3"/>
              </LinearLayout>
            </Cell>
          </For>
        </SliderView>
        <LinearLayout width="28" height="32" orientation="horizontal" gravity="center" onClick="@event.banner.bannerClickMore()">
          <ImageView width="12" height="12" src="@drawable/home_notice_more_btn"/>
        </LinearLayout>
      </LinearLayout>
      <LinearLayout width="match_parent" height="32" gravity="centerVertical" orientation="horizontal" visibility="{{@data.banner.noticePlaceholerVisibility | visible}}" marginLeft="8" marginRight="8">
        <TextView height="16" width="27" background="@color/KBaseColorPrimarySeparator" cornerRadius="2"/>
        <TextView height="12" width="295" background="@color/KBaseColorPrimarySeparator" cornerRadius="2" marginLeft="8"/>
      </LinearLayout>
    </FrameLayout>
  </LinearLayout>

</FrameLayout>
