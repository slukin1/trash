<LinearLayout width="375" height="wrap_content" marginBottom="16" grivaty="centerHorizontal" orientation="vertical" background="@color/KBaseColorContentBackground" visibility="{{@data.earn.visibility|gone}}">

  <LinearLayout width="match_parent" height="40" marginLeft="16" marginTop="4" marginRight="16" gravity="center" orientation="horizontal" onClick="@event.earn.moreTapAction()" visibility="{{@data.earn.visibility|gone}}">

    <TextView width="wrap_content" height="50" text="{{@data.earn.title}}" textSize="20" textFontWeight="500" textColor="@color/kColorPrimaryText" gravity="left|center"/>

    <View width="match_parent" height="match_parent" weight="1"/>

    <ImageView width="24" height="24" gravity="center" src="@drawable/edge_engine_home_earn_arrow"/>
  </LinearLayout>

  <!--水平滚动-->
  <Scroller width="match_parent" height="wrap_content" marginTop="4" orientation="horizontal" marginLeft="16" scrollOffsetX="{{@data.earn.offsetX}}" endScrollX="@event.earn.endScrollXAction(@eventParams)">

    <LinearLayout width="wrap_content" height="wrap_content" grivaty="centerVertical" orientation="horizontal">

      <For data="@data.earn.earnList" itemKey="element" typeKey="earnType">

        <Cell type="normal" width="wrap_content" height="110" visibility="{{@element.visibility|gone}}">
            <!-- 理财新用户 -->
            <FrameLayout width="343" height="match_parent" marginRight="8" orientation="vertical" borderWidth="0.5" cornerRadius="8" borderColor="@color/kHomeEarnOtherBorderColor" onClick="@event.earn.earnTapAction('{{@element.index}}')" visibility="{{@data.earn.isNewUser|gone}}">
            <LinearLayout orientation="vertical" width="match_parent" height="wrap_content" paddingTop="12" paddingLeft="16" paddingRight="16" paddingBottom="6" gravity="center|left">
                <!-- 图标+币种名称+标签 -->
                <LinearLayout orientation="horizontal" width="match_parent" height="wrap_content" gravity="center|left">
                    <ImageView width="24" height="24" cornerRadius="12" src="{{@element.iconUrl}}" placeholder="@drawable/home_coin_placeholder_24"/>
                    <View width="12"/>
                    <TextView height="wrap_content" width="wrap_content" maxWidth="100" textSize="16" text="{{@element.coinName}}" textColor="@color/kColorPrimaryText" textFontWeight="500" gravity="center|left" autoSizeTextType="uniform" autoSizeMinTextSize="12"/>
                    <View width="8"/>
                    <!-- 标签 -->
                    <LinearLayout orientation="horizontal" width="wrap_content" height="18" paddingTop="3" paddingLeft="6" paddingBottom="3" paddingRight="6" gravity="center" background="{{@element.tagBgColor}}" cornerRadius="9" visibility="{{@element.tagShow|gone}}">
                        <TextView height="wrap_content" width="wrap_content" maxWidth="86" textSize="12" text="{{@element.tag}}" textColor="{{@element.tagTextColor}}" textFontWeight="500"/>
                    </LinearLayout>
                </LinearLayout>
                <View height="14"/>
                <!-- APY -->
                <LinearLayout orientation="horizontal" width="wrap_content" height="wrap_content" gravity="center|bottom">
                    <!-- 现 APY --> 
                    <TextView height="wrap_content" width="wrap_content" maxWidth="96" textSize="20" text="{{@element.rateString}}" textColor="@color/kHomeTextGreenColor" textFontWeight="500" autoSizeTextType="uniform" autoSizeMinTextSize="10"/>
                    <View width="4"/>
                    <!-- 原 APY -->
                    <FrameLayout orientation="vertical" width="wrap_content" height="wrap_content" marginBottom="2" visibility="{{@element.originalRateShow|gone}}">
                        <TextView height="wrap_content" width="wrap_content" textSize="12" text="{{@element.originalRateString}}" textColor="@color/kColorThreeLevelText" textFontWeight="400"/>
                            <TextView height="1" width="wrap_content" textSize="12" marginTop="7" text="{{@element.originalRateString}}" textColor="#FFFFFFFF" background="@color/kColorThreeLevelText" textFontWeight="400"/> 
                    </FrameLayout>
                </LinearLayout>
                <View height="2"/>
                <!-- 底部描述 -->
                <TextView height="wrap_content" width="wrap_content" maxWidth="217" maxLines="2" richText="{{@element.projectDesc}}" textFontWeight="400"/>
            </LinearLayout>

                <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal" gravity="right">
                    <ImageView width="60" height="60" marginTop="22" marginRight="24" src="@drawable/edge_engine_home_earn_t"/>
                </LinearLayout>
            <!-- 开始理财 -->
            <LinearLayout orientation="horizontal" width="match_parent" height="72" marginTop="22" gravity="bottom|right">
                    <LinearLayout orientation="horizontal" width="80" height="28" paddingTop="7" marginTop="44" marginRight="16" paddingBottom="7" gravity="center" background="@color/kColorMajorTheme100" cornerRadius="4">
                    <TextView height="wrap_content" width="wrap_content" maxWidth="74" textSize="12" text="{{@element.url.button}}" textColor="#FFFFFF" textFontWeight="500"/>
                    </LinearLayout>
            </LinearLayout>
          </FrameLayout>
            <!-- 理财老用户 -->
          <FrameLayout width="160" height="match_parent" marginRight="8" orientation="vertical" borderWidth="0.5" cornerRadius="8" borderColor="@color/kHomeEarnOtherBorderColor" onClick="@event.earn.earnTapAction('{{@element.index}}')" visibility="{{@data.earn.isOldUser|gone}}">
            <LinearLayout orientation="vertical" width="match_parent" height="wrap_content" paddingTop="12" paddingLeft="16" paddingRight="6" paddingBottom="6" gravity="center|left">

                <LinearLayout orientation="horizontal" width="wrap_content" height="wrap_content" gravity="center">
                    <ImageView width="24" height="24" cornerRadius="12" src="{{@element.iconUrl}}" placeholder="@drawable/home_coin_placeholder_24"/>
                    <View width="12"/>
                    <TextView height="wrap_content" width="wrap_content" maxWidth="100" textSize="16" text="{{@element.coinName}}" textColor="@color/kColorPrimaryText" textFontWeight="500" gravity="center|left" autoSizeTextType="uniform" autoSizeMinTextSize="12"/>
                </LinearLayout>
                <View height="14"/>
                <LinearLayout orientation="horizontal" width="wrap_content" height="wrap_content" gravity="center|bottom">
                    <!-- 现 APY -->
                    <TextView height="wrap_content" width="wrap_content" maxWidth="96" textSize="20" text="{{@element.rateString}}" textColor="@color/kHomeTextGreenColor" textFontWeight="500" autoSizeTextType="uniform" autoSizeMinTextSize="10"/>
                    <View width="4"/>
                    <!-- 原 APY -->
                    <FrameLayout orientation="vertical" width="wrap_content" height="wrap_content" marginBottom="2" visibility="{{@element.originalRateShow|gone}}">
                        <TextView height="wrap_content" width="wrap_content" textSize="12" text="{{@element.originalRateString}}" textColor="@color/kColorThreeLevelText" textFontWeight="400"/>
                            <TextView height="1" width="wrap_content" textSize="12" marginTop="7" text="{{@element.originalRateString}}" textColor="#FFFFFFFF" background="@color/kColorThreeLevelText" textFontWeight="400"/> 
                    </FrameLayout>
                </LinearLayout>
                <View height="2"/>
                <!-- 底部描述 -->
                <TextView height="wrap_content" width="match_parent" maxLines="2" richText="{{@element.projectDesc}}" textFontWeight="400"/>
            </LinearLayout>
            <!-- 标签 -->
            <LinearLayout orientation="horizontal" width="match_parent" height="wrap_content" gravity="center|right" visibility="{{@element.tagShow|gone}}">
                <LinearLayout orientation="horizontal" width="wrap_content" height="wrap_content" paddingTop="3" paddingLeft="6" paddingBottom="3" paddingRight="6" gravity="center" background="{{@element.tagBgColor}}" bottomLeftRadius="8" topRightRadius="8">
                    <TextView height="wrap_content" width="wrap_content" maxWidth="120" textSize="12" text="{{@element.tag}}" textColor="{{@element.tagTextColor}}" textFontWeight="500"/>
                </LinearLayout>
            </LinearLayout>
          </FrameLayout>
        </Cell>

        <Cell type="saving" width="128" height="108" visibility="{{@element.visibility|gone}}">
          <LinearLayout width="match_parent" height="match_parent" marginRight="8" orientation="vertical" borderWidth="0.5" cornerRadius="8" borderColor="@color/kHomeEarnOtherBorderColor" onClick="@event.earn.earnTapAction('{{@element.index}}')">

            <LinearLayout orientation="horizontal" width="match_parent" marginRight="6" height="36">

               <ImageView width="56" height="24" marginTop="12" marginLeft="12" src="{{@element.iconUrl}}" placeholder="@drawable/edge_engine_more_balances_currencyicon"/>  

                <View width="match_parent" height="1" weight="1"/>

               <TextView width="wrap_content" height="wrap_content" maxWidth="40" gravity="center" background="@color/kHomeEarnTagBackground" marginTop="6" paddingLeft="4" paddingRight="4" paddingTop="3" paddingBottom="3" cornerRadius="8" textSize="10" text="{{@element.projectName}}" textColor="@color/kHomeTextGreenColor" textFontWeight="400"/>

                <View width="match_parent" height="1" weight="1"/>

            </LinearLayout>


            <LinearLayout width="match_parent" height="16" marginTop="16" gravity="center|left" orientation="horizontal">

              <TextView height="match_parent" width="wrap_content" maxWidth="66" marginLeft="12" textSize="14" text="{{@element.coinName}}" textColor="@color/kColorPrimaryText" textFontWeight="500" gravity="center|left" autoSizeTextType="uniform" autoSizeMinTextSize="12"/>

              <TextView height="match_parent" width="wrap_content" marginLeft="2" marginRight="12" textSize="12" text="{{@element.rateTitle}}" textColor="@color/kColorSecondaryText" extFontWeight="500" gravity="center|left" autoSizeTextType="uniform" autoSizeMinTextSize="10"/>

            </LinearLayout>

            <TextView height="26" width="match_parent" marginLeft="12" marginRight="12" textSize="18" marginTop="2" text="{{@element.rateString}}" textColor="@color/kHomeTextGreenColor" textFontWeight="500"/>

          </LinearLayout>
        </Cell>

      </For>

      <View width="8" height="1"/>
    </LinearLayout>
  </Scroller>

</LinearLayout>
