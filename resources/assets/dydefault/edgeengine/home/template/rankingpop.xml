<LinearLayout width="375" height="wrap_content" orientation="vertical" topLeftRadius="8" topRightRadius="8">

  <TextView width="match_parent" height="48" textFontWeight="500" gravity="center" topLeftRadius="8" topRightRadius="8" textColor="{{@data.rankingpop.spot.color}}" textSize="14" text="{{@data.rankingpop.spot.name}}" background="@color/KBaseColorContentBackground" onClick="@event.rankingpop.rankingPopClick('{{@data.rankingpop.spot.screenTitle}}')"/>

  <TextView width="match_parent" height="48" textFontWeight="500" gravity="center" textColor="{{@data.rankingpop.future.color}}" textSize="14" text="{{@data.rankingpop.future.name}}" background="@color/KBaseColorContentBackground" onClick="@event.rankingpop.rankingPopClick('{{@data.rankingpop.future.screenTitle}}')"/>

  <View width="match_parent" height="8" background="@color/KBaseColorDeepestBackground"/>

  <TextView width="match_parent" height="48" textFontWeight="400" text="{{@i18n/n_contract_cancel}}" textColor="@color/kColorPrimaryText" textSize="14" background="@color/KBaseColorContentBackground" gravity="center" onClick="@event.rankingpop.cancel()"/>

  <View width="match_parent" height="34" background="@color/KBaseColorContentBackground"/>
</LinearLayout>
