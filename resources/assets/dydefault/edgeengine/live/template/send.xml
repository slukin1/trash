                            textSize="14" textFontWeight="500" />
                        <LinearLayout
                            width="16" height="2"
                            cornerRadius="1"
                            background="#0173E5"
                            visibility="{{@data.redPacket.currencyList.8.line | gone}}" />
                    </LinearLayout>

                    <LinearLayout
                        paddingLeft="10"
                        paddingRight="10"
                        height="match_parent"
                        orientation="vertical"
                        gravity="center"
                        width="wrap_content"
                        visibility="{{@data.redPacket.currencyList.9.visibility | gone}}"
                        onClick="@event.redPacket.currencyClicked(9)">
                        <TextView
                            width="wrap_content"
                            height="38"
                            gravity="center"
                            text="{{@data.redPacket.currencyList.9.currency}}"
                            textColor="{{@data.redPacket.currencyList.9.color}}"
                            textSize="14" textFontWeight="500" />
                        <LinearLayout
                            width="16" height="2"
                            cornerRadius="1"
                            background="#0173E5"
                            visibility="{{@data.redPacket.currencyList.9.line | gone}}" />
                    </LinearLayout>
                </LinearLayout>
            </Scroller>
        </FrameLayout>
        <!-- 红包列表 -->
        <RecyclerView
            width="match_parent"
            height="232"
            gravity="centerVertical"
            orientation="horizontal"
            showDividers="true"
            dividerPadding="0"
            dividerHeight="10"
            dividerColor="#313132"
            data="@data.redPacket.cellDataList"
            itemKey="element">

            <Header width="match_parent" height="16" />

            <Cell type="normal" width="match_parent" height="103">
                <LinearLayout
                    marginLeft="16"
                    marginRight="16"
                    width="match_parent"
                    height="103"
                    orientation="horizontal">

                    <LinearLayout
                        height="match_parent"
                        orientation="vertical"
                        gravity="centerHorizontal"
                        width="108"
                        opacity="{{@element.list.0.opacity | 0.5}}"
                        visibility="{{@element.list.0.visibility | gone}}"
                        background="{{@element.list.0.color}}"
                        cornerRadius="4"
                        borderWidth="{{@element.list.0.borderWidth | 0}}"
                        borderColor="#5E5E61"
                        onClick="@event.redPacket.cellDidSelected({{@element.list.0.section}}, {{@element.list.0.row}})">

                        <FrameLayout marginTop="10" width="64" height="64">
                            <ImageView
                                width="64"
                                height="64"
                                src="@drawable/edge_engine_live_redpacket_card" />

                            <TextView
                                marginTop="23"
                                marginLeft="4"
                                marginRight="4"
                                width="match_parent"
                                height="20"
                                gravity="center"
                                text="{{@element.list.0.data.amountStr}}"
                                textColor="#FFFFFF"
                                textSize="20" textFontWeight="600"
                                autoSizeTextType="uniform" />

                            <TextView
                                marginTop="47"
                                width="match_parent"
                                height="10"
                                gravity="center"
                                text="{{@element.list.0.data.currency}}"
                                textColor="#FFFFFF"
                                textSize="10" textFontWeight="400" />
                        </FrameLayout>

                        <TextView
                            marginTop="2"
                            width="match_parent"
                            height="wrap_content"
                            gravity="center"
                            text="{{@element.list.0.content}}"
                            textColor="#E6E6E6"
                            textSize="11" textFontWeight="400"
                            maxLines="0" />
                    </LinearLayout>

                    <LinearLayout
                        height="match_parent"
                        width="0"
                        weight="1"
                        gravity="centerHorizontal">
                        <LinearLayout
                            height="match_parent"
                            orientation="vertical"
                            gravity="centerHorizontal"
                            width="108"
                            opacity="{{@element.list.1.opacity | 0.5}}"
                            visibility="{{@element.list.1.visibility | gone}}"
                            background="{{@element.list.1.color}}"
                            cornerRadius="4"
                            borderWidth="{{@element.list.1.borderWidth | 0}}"
                            borderColor="#5E5E61"
                            onClick="@event.redPacket.cellDidSelected({{@element.list.1.section}}, {{@element.list.1.row}})">

                            <FrameLayout marginTop="10" width="64" height="64">
                                <ImageView
                                    width="64"
                                    height="64"
                                    src="@drawable/edge_engine_live_redpacket_card" />

                                <TextView
                                    marginTop="23"
                                    marginLeft="4"
                                    marginRight="4"
                                    width="match_parent"
                                    height="20"
                                    gravity="center"
                                    text="{{@element.list.1.data.amountStr}}"
                                    textColor="#FFFFFF"
                                    textSize="20" textFontWeight="600"
                                    autoSizeTextType="uniform" />

                                <TextView
                                    marginTop="47"
                                    width="match_parent"
                                    height="10"
                                    gravity="center"
                                    text="{{@element.list.1.data.currency}}"
                                    textColor="#FFFFFF"
                                    textSize="10" textFontWeight="400" />
                            </FrameLayout>

                            <TextView
                                marginTop="2"
                                width="108"
                                height="wrap_content"
                                gravity="center"
                                text="{{@element.list.1.content}}"
                                textColor="#E6E6E6"
                                textSize="11" textFontWeight="400"
                                maxLines="0" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        height="match_parent"
                        width="108">
                        <LinearLayout
                            height="match_parent"
                            orientation="vertical"
                            gravity="centerHorizontal"
                            width="108"
                            opacity="{{@element.list.2.opacity | 0.5}}"
                            visibility="{{@element.list.2.visibility | gone}}"
                            background="{{@element.list.2.color}}"
                            cornerRadius="4"
                            borderWidth="{{@element.list.2.borderWidth | 0}}"
                            borderColor="#5E5E61"
                            onClick="@event.redPacket.cellDidSelected({{@element.list.2.section}}, {{@element.list.2.row}})">

                            <FrameLayout marginTop="10" width="64" height="64">
                                <ImageView
                                    width="64"
                                    height="64"
                                    src="@drawable/edge_engine_live_redpacket_card" />

                                <TextView
                                    marginTop="23"
                                    marginLeft="4"
                                    marginRight="4"
                                    width="match_parent"
                                    height="20"
                                    gravity="center"
                                    text="{{@element.list.2.data.amountStr}}"
                                    textColor="#FFFFFF"
                                    textSize="20" textFontWeight="600"
                                    autoSizeTextType="uniform" />

                                <TextView
                                    marginTop="47"
                                    width="match_parent"
                                    height="10"
                                    gravity="center"
                                    text="{{@element.list.2.data.currency}}"
                                    textColor="#FFFFFF"
                                    textSize="10" textFontWeight="400" />
                            </FrameLayout>

                            <TextView
                                marginTop="2"
                                width="match_parent"
                                height="wrap_content"
                                gravity="center"
                                text="{{@element.list.2.content}}"
                                textColor="#E6E6E6"
                                textSize="11" textFontWeight="400"
                                maxLines="0" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </Cell>
        </RecyclerView>
        <!-- 半透明 -->
        <ImageView marginTop="-33" width="match_parent" height="33"
            src="@drawable/edge_engine_live_redpacket_mask" />
        <!-- time -->
        <LinearLayout
            width="match_parent"
            height="40"
            orientation="horizontal"
            gravity="centerHorizontal">
            <LinearLayout
                marginRight="10"
                height="match_parent"
                orientation="horizontal"
                gravity="center"
                width="wrap_content"
                onClick="@event.redPacket.optionClicked(2)">

                <ImageView width="16" height="16"
                    src="{{@data.redPacket.delayOptionImage}}" />

                <TextView
                    paddingLeft="4"
                    paddingTop="12"
                    paddingBottom="12"
                    width="wrap_content"
                    height="match_parent"
                    gravity="right"
                    text="{{@data.redPacket.afterTime}}"
                    textColor="#FFFFFF"
                    textSize="12" textFontWeight="600" />
            </LinearLayout>

            <LinearLayout
                marginLeft="10"
                height="match_parent"
                orientation="horizontal"
                gravity="center"
                width="wrap_content"
                onClick="@event.redPacket.optionClicked(1)">

                <ImageView width="16" height="16"
                    src="{{@data.redPacket.realOptionImage}}" />

                <TextView
                    paddingLeft="4"
                    paddingTop="12"
                    paddingBottom="12"
                    width="wrap_content"
                    height="match_parent"
                    gravity="left"
                    text="{{@i18n/n_redpacket_now}}"
                    textColor="#FFFFFF"
                    textSize="12" textFontWeight="600" />
            </LinearLayout>
        </LinearLayout>
        <!-- 发布按钮 -->
        <LinearLayout
            background="@color/kColorMajorTheme100"
            cornerRadius="4"
            gravity="center"
            height="44"
            marginTop="16"
            marginLeft="16"
            marginRight="16"
            orientation="vertical"
            width="match_parent"
            onClick="@event.redPacket.submitClicked()">

            <TextView
                width="match_parent"
                height="0"
                text=""
                popTemplate="modal_pop.xml"
                popShow="{{@data.redPacket.popShow}}"
                popCancelOnTouchOutside="false"
                popBackgroundDimmed="false"
                popShowMode="modal"
                popModalPositon="center" />
            <TextView
                width="wrap_content" height="wrap_content"
                text="{{@i18n/n_redpacket_send_title}} "
                textColor="#FFFFFF"
                textFontWeight="500"
                textSize="14"
            />
        </LinearLayout>
        <!-- 资产 -->
        <LinearLayout
            gravity="center"
            height="40"
            marginLeft="16"
            marginRight="16"
            orientation="horizontal"
            width="wrap_content"
            onClick="@event.redPacket.openDepositRoute()">

            <ImageView width="14" height="14"
                src="@drawable/edge_engine_live_redpacket_logo" />

            <TextView
                marginLeft="6"
                width="wrap_content" height="wrap_content"
                text="{{@i18n/n_redpacket_balance}}"
                textColor="#E6E6E6"
                textFontWeight="400"
                textSize="10" />

            <TextView
                width="wrap_content" height="wrap_content"
                text="{{@data.redPacket.showBalance | }}"
                textColor="#0173E5"
                textFontWeight="400"
                textSize="10" />

            <ImageView
                marginLeft="4"
                width="12" height="12"
                src="@drawable/live_gift_bottom_arrow" />

        </LinearLayout>
    </LinearLayout>
    <!-- 红包记录 -->
    <LinearLayout
        width="match_parent"
        height="match_parent"
        orientation="vertical"
        topLeftRadius="8"
        topRightRadius="8"
        background="#313132"
        visibility="{{@data.redPacket.recordShow}}">
        <!-- 红包记录 -->
        <FrameLayout
            height="44"
            orientation="horizontal"
            gravity="centerVertical"
            width="match_parent">

            <TextView
                width="match_parent"
                height="match_parent"
                gravity="center"
                text="{{@i18n/n_redpacket_record}}"
                textColor="#E6E6E6"
                textSize="14" textFontWeight="400" />

            <ImageView
                paddingLeft="16"
                paddingRight="16"
                paddingTop="8"
                paddingBottom="8"
                width="60"
                height="44"
                src="@drawable/edge_engine_live_redpacket_back"
                onClick="@event.redPacket.recordClicked(1)" />
        </FrameLayout>

        <FrameLayout width="match_parent" height="40">
            <LinearLayout
                width="match_parent" height="0.5" marginTop="39.5" background="#333333" />

            <LinearLayout
                paddingLeft="6"
                paddingRight="6"
                width="wrap_content"
                height="40"
                orientation="horizontal"
                gravity="centerHorizontal">
                <LinearLayout
                    paddingLeft="10"
                    paddingRight="10"
                    height="match_parent"
                    orientation="vertical"
                    gravity="center"
                    width="wrap_content"
                    onClick="@event.redPacketRecord.tabClicked(0)">
                    <TextView
                        width="wrap_content"
                        height="38"
                        gravity="center"
                        text="{{@i18n/n_redpacket_record_send}}"
                        textColor="{{@data.redPacketRecord.recordTypes.0.color}}"
                        textSize="14" textFontWeight="500" />
                    <LinearLayout
                        width="16" height="2"
                        cornerRadius="1"
                        background="#0173E5"
                        visibility="{{@data.redPacketRecord.recordTypes.0.line | gone}}" />
                </LinearLayout>

                <LinearLayout
                    paddingLeft="10"
                    paddingRight="10"
                    height="match_parent"
                    orientation="vertical"
                    gravity="center"
                    width="wrap_content"
                    onClick="@event.redPacketRecord.tabClicked(1)">
                    <TextView
                        width="wrap_content"
                        height="38"
                        gravity="center"
                        text=" {{@i18n/n_redpacket_record_receive}}"
                        textColor="{{@data.redPacketRecord.recordTypes.1.color}}"
                        textSize="14" textFontWeight="500" />
                    <LinearLayout
                        width="16" height="2"
                        cornerRadius="1"
                        background="#0173E5"
                        visibility="{{@data.redPacketRecord.recordTypes.1.line | gone}}" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <!-- 红包列表 -->
        <RecyclerView
            width="match_parent"
            height="374"
            gravity="centerVertical"
            orientation="horizontal"
            showDividers="false"
            onRefresh="@event.refresh()"
            refreshStatus="{{@data.redPacketRecord.refreshStatus}}"
            data="@data.redPacketRecord.recordList"
            itemKey="recordItem"
            visibility="{{@data.redPacketRecord.recordShow}}">

            <Header width="match_parent" height="16" />

            <Cell type="normal" width="match_parent" height="40">
                <LinearLayout
                    paddingLeft="16"
                    paddingRight="16"
                    width="match_parent"
                    height="40"
                    orientation="horizontal">

                    <TextView
                        paddingTop="12"
                        width="wrap_content"
                        height="match_parent"
                        gravity="left"
                        text="{{@recordItem.amount}} {{@recordItem.currency}}"
                        textColor="#E6E6E6"
                        textSize="14" textFontWeight="400" />

                    <TextView
                        paddingTop="12"
                        weight="1"
                        width="0"
                        height="match_parent"
                        gravity="right"
                        text="{{@recordItem.createTime}}"
                        textColor="#8C8C93"
                        textSize="14" textFontWeight="400" />
                </LinearLayout>
            </Cell>
        </RecyclerView>
        <!-- empty  -->
        <LinearLayout
            height="374"
            orientation="vertical"
            gravity="center"
            width="match_parent"
            visibility="{{@data.redPacketRecord.recordEmptyShow}}">

            <ImageView
                width="60"
                height="60"
                src="@drawable/edge_engine_live_redpacket_empty" />

            <TextView
                marginLeft="16"
                marginRight="16"
                marginTop="12"
                width="wrap_content"
                height="wrap_content"
                gravity="center"
                text="{{@i18n/n_redpacket_record_nodata}}"
                textColor="#5E5E61"
                textSize="12" textFontWeight="400" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
