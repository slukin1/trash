<FrameLayout width="wrap_content" height="375" gravity="center">

    <LinearLayout
        marginLeft="37.5"
        marginRight="37.5"
        width="300"
        height="306"
        orientation="vertical"
        gravity="center"
        cornerRadius="8"
        background="#FFFFFF">

        <LinearLayout
            marginLeft="0"
            marginRight="0"
            width="match_parent"
            height="52"
            orientation="horizontal"
            gravity="center">

            <TextView
                paddingLeft="40"
                width="0"
                weight="1"
                height="20"
                gravity="center"
                text="{{@data.redPacketGrap.title | }}"
                textColor="#000000"
                textSize="16" textFontWeight="600" />

            <ImageView
                width="40"
                height="52"
                paddingTop="12"
                paddingBottom="12"
                paddingRight="12"
                src="@drawable/edge_engine_live_redpacket_close"
                visibility="visible"
                onClick="@event.redPacketGrap.closeView()" />
        </LinearLayout>
        <!-- 马上抢弹窗 -->
        <LinearLayout
            width="match_parent"
            height="170"
            orientation="vertical"
            gravity="center"
            visibility="{{@data.redPacketGrap.grapStatus}}">

            <LottieView
                width="141"
                height="126"
                marginTop="12"
                loop="true"
                playStatus="@data.redPacketGrap.waitStatus"
                onStatusChange="@event.redPacketGrap.statusChange(@eventParams, 'wait')"
                resource="@raw/live_redpacket_wait" />

            <TextView
                marginBottom="12"
                width="match_parent"
                height="20"
                gravity="center"
                text="{{@data.redPacketGrap.content | }}"
                textColor="#000000"
                textSize="16" textFontWeight="500" />
        </LinearLayout>
        <!-- 抢到了弹窗 -->
        <LinearLayout
            width="match_parent"
            height="170"
            orientation="vertical"
            gravity="center"
            visibility="{{@data.redPacketGrap.snatchedStatus}}">

            <FrameLayout
                marginTop="8"
                marginBottom="6"
                width="150"
                height="130">

                <LottieView
                    width="150"
                    height="130"
                    loop="false"
                    playStatus="@data.redPacketGrap.alertStatus"
                    onStatusChange="@event.redPacketGrap.statusChange(@eventParams, 'alert')"
                    resource="@raw/live_redpacket_alert" />

                <LinearLayout
                    width="match_parent"
                    height="120"
                    orientation="horizontal"
                    gravity="center"
                    visibility="{{@data.redPacketGrap.snatch}}">

                    <TextView
                        width="wrap_content"
                        height="32"
                        gravity="right"
                        text="{{@data.redPacketGrap.amount | }}"
                        textColor="#E94359"
                        textSize="24" textFontWeight="500"
                        autoSizeTextType="uniform" />

                    <TextView
                        marginTop="10"
                        width="wrap_content"
                        height="13"
                        gravity="left"
                        text="{{@data.redPacketGrap.currency | }}"
                        textColor="#E94359"
                        textSize="10" textFontWeight="500" />
                </LinearLayout>

                <TextView
                    paddingLeft="12"
                    paddingRight="12"
                    width="match_parent"
                    height="120"
                    gravity="center"
                    text="{{@i18n/n_redpacket_alert_thinks}}"
                    textColor="#E94359"
                    textSize="15" textFontWeight="500"
                    maxLines="2"
                    visibility="{{@data.redPacketGrap.snatchFail}}" />
            </FrameLayout>

            <TextView
                marginBottom="6"
                width="match_parent"
                height="20"
                gravity="center"
                text="{{@data.redPacketGrap.content | }}"
                textColor="#8A8A8E"
                textSize="12" textFontWeight="500" />
        </LinearLayout>
        <!-- 按钮 -->
        <LinearLayout
            background="@color/kColorMajorTheme100"
            cornerRadius="4"
            gravity="center"
            height="44"
            marginTop="20"
            marginBottom="20"
            marginLeft="16"
            marginRight="16"
            orientation="horizontal"
            width="match_parent"
            onClick="@event.redPacketGrap.submitClicked()">

            <TextView
                width="wrap_content" height="wrap_content"
                text="{{@data.redPacketGrap.buttonTitle}}"
                textColor="#FFFFFF"
                textFontWeight="500"
                textSize="14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        width="375"
        height="375"
        visibility="{{@data.redPacketGrap.snatchAnimate}}">

        <LottieView
            width="375"
            height="375"
            loop="false"
            playStatus="@data.redPacketGrap.snatchStatus"
            onStatusChange="@event.redPacketGrap.statusChange(@eventParams, 'snatch')"
            resource="@raw/live_redpacket_snatch" />
    </LinearLayout>
</FrameLayout>
