<!-- p2p主页筛选栏：筛选区+交易提示 -->
<LinearLayout background="@color/kColorContentBackground" height="wrap_content" visibility="{{@data.p2pMainTab.brand.filterBarTipVisible | gone}}" orientation="vertical" topLeftRadius="0" topRightRadius="0" width="match_parent">
    <!--  筛选栏  -->
    <LinearLayout height="48" marginLeft="16" orientation="horizontal" width="match_parent">

        <LinearLayout gravity="left" height="match_parent" orientation="horizontal" weight="1" width="0">
            <!--币对-->
            <LinearLayout gravity="centerVertical" height="match_parent" marginRight="16" onClick="@event.p2pFilter.clickFilterOptionWithCryptoCurrency()" orientation="horizontal" width="wrap_content">
                <ImageView height="14" marginRight="2" src="{{@data.p2pFilter.brand.cryptoIcon}}" width="14"/>
                <TextView gravity="centerVertical" height="match_parent" marginRight="2" text="{{@data.p2pFilter.brand.cryptoCurrency}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
                <ImageView height="12" src="@drawable/otc_trade_filter_arrow" width="12"/>
            </LinearLayout>
            <!--金额-->
            <LinearLayout gravity="centerVertical" height="match_parent" marginRight="16" onClick="@event.p2pFilter.clickFilterOptionWithAmount()" orientation="horizontal" width="wrap_content">
                <TextView gravity="centerVertical" height="match_parent" marginRight="2" text="{{@i18n/otc_trade_filter_amount_title}}" textColor="{{@data.p2pFilter.brand.amountTextColor}}" textFontWeight="400" textSize="12" width="wrap_content"/>
                <ImageView height="12" src="@drawable/otc_trade_filter_arrow" width="12"/>
            </LinearLayout>
            <!--支付-->
            <LinearLayout gravity="centerVertical" height="match_parent" marginRight="16" onClick="@event.p2pFilter.clickFilterOptionWithPayMehod()" orientation="horizontal" width="wrap_content">
                <TextView gravity="centerVertical" height="match_parent" marginRight="2" text="{{@i18n/otc_trade_filter_payment_title}}" textColor="{{@data.p2pFilter.brand.payMethodTextColor}}" textFontWeight="400" textSize="12" width="wrap_content"/>
                <ImageView height="12" src="@drawable/otc_trade_filter_arrow" width="12"/>
            </LinearLayout>
            <!--可交易-->
            <LinearLayout gravity="centerVertical" height="match_parent" marginRight="16" onClick="@event.p2pFilter.clickFilterOptionWithTradable()" orientation="horizontal" width="wrap_content">
                <TextView gravity="centerVertical" height="match_parent" marginRight="2" text="{{@i18n/n_otc_advert_trade_p2p_new_user_avaliable_title}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
                <ImageView height="12" src="{{@data.p2pFilter.brand.tradableSwitchIcon}}" width="20"/>
            </LinearLayout>
        </LinearLayout>
        <!--更多筛选-->
        <LinearLayout gravity="center" height="match_parent" onClick="@event.p2pFilter.clickFilterOptionWithMore()" width="47">
            <ImageView height="16" src="{{@data.p2pFilter.brand.moreIcon}}" width="16"/>
        </LinearLayout>

    </LinearLayout>
    <!--分割线-->
    <View background="@color/KBaseColorPrimarySeparator" height="0.5" width="match_parent"/>
    <!--交易提示-->
    <FrameLayout height="wrap_content" visibility="{{@data.p2pFilter.tradeTipsVisible}}" width="match_parent">
        <!-- 买 -->
        <LinearLayout background="@color/kColorTipsBackground" gravity="left" height="wrap_content" orientation="horizontal" paddingBottom="10" paddingLeft="16" paddingRight="16" paddingTop="10" visibility="{{@data.p2pFilter.buyTradeTipsVisible}}" width="match_parent">
            <ImageView height="12" marginTop="1" src="@drawable/c2c_advert_auth_tip" width="12"/>
            <TextView gravity="left" height="wrap_content" lineSpacing="1.3" marginLeft="4" maxLines="0" richText="{{@data.p2pFilter.buyTradeTips}}" weight="1" width="0"/>
            <ImageView height="12" onClick="@event.p2pFilter.closeTipsWithTrade()" src="@drawable/c2c_advert_auth_close" width="12"/>
        </LinearLayout>
        <!-- 卖 -->
        <LinearLayout background="@color/kColorTipsBackground" gravity="left" height="wrap_content" orientation="horizontal" paddingBottom="10" paddingLeft="16" paddingRight="16" paddingTop="10" visibility="{{@data.p2pFilter.sellTradeTipsVisible}}" width="match_parent">
            <ImageView height="12" marginTop="1" src="@drawable/c2c_advert_auth_tip" width="12"/>
            <TextView gravity="left" height="wrap_content" lineSpacing="1.3" marginLeft="4" maxLines="0" richText="{{@data.p2pFilter.sellTradeTips}}" weight="1" width="0"/>
            <ImageView height="12" onClick="@event.p2pFilter.closeTipsWithTrade()" src="@drawable/c2c_advert_auth_close" width="12"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
