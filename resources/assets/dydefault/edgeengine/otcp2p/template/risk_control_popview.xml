<!--风控弹窗-->
<LinearLayout background="@color/KBaseColorContentBackground" cornerRadius="4" width="325" height="wrap_content" orientation="vertical" paddingLeft="16" paddingRight="16">
    <TextView text="{{@data.riskControl.popState.title}}" textSize="16" width="wrap_content" marginTop="16" height="20" textFontWeight="500" textColor="@color/kColorPrimaryText"/>
    <TextView text="{{@data.riskControl.popState.content}}" textSize="14" width="293" height="wrap_content" textFontWeight="400" marginTop="16" maxLines="0" lineSpacing="4" textColor="@color/kColorPrimaryText"/>
    <LinearLayout background="@color/kColorMajorTheme100" cornerRadius="4" width="293" onClick="@event.riskControl.popDismiss()" marginTop="16" marginBottom="16" gravity="center" height="40">
        <TextView text="{{@data.riskControl.popState.buttonTitle}}" textColor="@color/KBaseTextColor" textSize="14" height="wrap_content" width="wrap_content" textFontWeight="500"/>
    </LinearLayout>
</LinearLayout>
