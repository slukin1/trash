<!-- p2p主页筛选栏：离线提示+买/卖 -->
<LinearLayout background="{{@data.p2pMainTab.containerBgColor}}" height="wrap_content" orientation="vertical" visibility="{{@data.p2pMainTab.normal.buySellBarVisible | gone}}" width="375">
    <LinearLayout background="@color/kColorContentBackground" gravity="left|bottom" height="wrap_content" orientation="vertical" topLeftRadius="16" topRightRadius="16" width="match_parent">

        <!--  离线提示     -->
        <!-- 显示visible，隐藏：gone-->
        <LinearLayout background="@color/kColorTipsBackground" bottomLeftRadius="8" bottomRightRadius="8" gravity="left" height="wrap_content" marginLeft="16" marginRight="16" marginTop="12" orientation="horizontal" paddingBottom="8" paddingLeft="8" paddingRight="8" paddingTop="8" topLeftRadius="8" topRightRadius="8" visibility="{{@data.p2pFilter.offlineTipsVisible}}" width="match_parent">
            <TextView gravity="left" height="wrap_content" maxLines="0" richText="{{@data.p2pFilter.offlineTips}}" weight="1" width="0"/>
            <ImageView height="12" onClick="@event.p2pFilter.closeTipsWithMerchantOffline()" src="@drawable/c2c_advert_auth_close" width="12"/>
        </LinearLayout>
        <LinearLayout gravity="bottom" height="34" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent">
            <!--  购买/出售     -->
            <LinearLayout gravity="left|bottom" height="match_parent" orientation="horizontal" width="wrap_content">
                <TextView gravity="left|bottom" height="wrap_content" onClick="@event.p2pFilter.clickFilterOptionWithDirection('buy')" text="{{@i18n/n_otc_buy}}" textColor="{{@data.p2pFilter.normal.buyTabStyle.textColor}}" textFontWeight="600" textSize="16" width="wrap_content"/>
                <View width="12"/>
                <TextView gravity="left|bottom" height="wrap_content" onClick="@event.p2pFilter.clickFilterOptionWithDirection('sell')" text="{{@i18n/n_otc_sell}}" textColor="{{@data.p2pFilter.normal.sellTabStyle.textColor}}" textFontWeight="600" textSize="16" width="wrap_content"/>
            </LinearLayout>
            <View height="match_parent" weight="1" width="0"/>
            <!-- 法币 -->
            <LinearLayout borderColor="@color/KBaseColorPrimarySeparator" borderWidth="0.5" cornerRadius="10" gravity="centerVertical" height="20" marginBottom="2" onClick="@event.p2pFilter.clickFilterOptionWithCurrency(1)" orientation="horizontal" width="wrap_content">
                <TextView gravity="centerVertical" height="match_parent" marginLeft="8" text="{{@data.p2pFilter.normal.currencyName}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
                <ImageView height="12" marginRight="8" src="@drawable/otc_trade_filter_arrow" width="12"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
