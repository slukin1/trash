<!-- p2p主页筛选栏：筛选区+交易提示 -->
<LinearLayout width="375" height="wrap_content" orientation="vertical" visibility="{{@data.p2pMainTab.normal.filterBarTipVisible | gone}}" background="@color/kColorContentBackground">
    <LinearLayout width="match_parent" height="wrap_content" orientation="vertical" gravity="left|bottom" topLeftRadius="16" topRightRadius="16" background="@color/kColorContentBackground">
        <!--  筛选栏  -->
        <LinearLayout width="match_parent" orientation="horizontal" marginLeft="16" height="48">
            
            <LinearLayout width="0" weight="1" height="match_parent" gravity="left" orientation="horizontal">
                <!--币对-->
                <LinearLayout width="wrap_content" height="match_parent" orientation="horizontal" gravity="centerVertical" marginRight="16" onClick="@event.p2pFilter.clickFilterOptionWithCryptoCurrency()">
                    <ImageView height="14" width="14" marginRight="2" src="{{@data.p2pFilter.normal.cryptoIcon}}"/>
                    <TextView width="wrap_content" height="match_parent" text="{{@data.p2pFilter.normal.cryptoCurrency}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" gravity="centerVertical" marginRight="2"/>
                     <ImageView height="12" width="12" src="@drawable/otc_trade_filter_arrow"/>
                </LinearLayout>
                <!--金额-->
                <LinearLayout width="wrap_content" height="match_parent" orientation="horizontal" gravity="centerVertical" marginRight="16" onClick="@event.p2pFilter.clickFilterOptionWithAmount()">
                    <TextView width="wrap_content" height="match_parent" text="{{@i18n/otc_trade_filter_amount_title}}" textColor="{{@data.p2pFilter.normal.amountTextColor}}" textFontWeight="400" textSize="12" gravity="centerVertical" marginRight="2"/>
                     <ImageView height="12" width="12" src="@drawable/otc_trade_filter_arrow"/>
                </LinearLayout>
                <!--支付-->
                <LinearLayout width="wrap_content" height="match_parent" orientation="horizontal" gravity="centerVertical" marginRight="16" onClick="@event.p2pFilter.clickFilterOptionWithPayMehod()">
                    <TextView width="wrap_content" height="match_parent" text="{{@i18n/otc_trade_filter_payment_title}}" textColor="{{@data.p2pFilter.normal.payMethodTextColor}}" textFontWeight="400" textSize="12" gravity="centerVertical" marginRight="2"/>
                     <ImageView height="12" width="12" src="@drawable/otc_trade_filter_arrow"/>
                </LinearLayout>
                <!--可交易-->
                <LinearLayout width="wrap_content" height="match_parent" orientation="horizontal" gravity="centerVertical" marginRight="16" onClick="@event.p2pFilter.clickFilterOptionWithTradable()">
                    <TextView width="wrap_content" height="match_parent" text="{{@i18n/n_otc_advert_trade_p2p_new_user_avaliable_title}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" gravity="centerVertical" marginRight="2"/>
                     <ImageView src="{{@data.p2pFilter.normal.tradableSwitchIcon}}" width="20" height="12"/>
                </LinearLayout>
            </LinearLayout>
            <!--更多筛选-->
            <LinearLayout height="match_parent" gravity="center" width="47" onClick="@event.p2pFilter.clickFilterOptionWithMore()">
                <ImageView src="{{@data.p2pFilter.normal.moreIcon}}" width="16" height="16"/>
            </LinearLayout>
            
        </LinearLayout>
        <!--分割线-->
        <View height="0.5" width="match_parent" background="@color/KBaseColorPrimarySeparator"/>
        <!--交易提示-->
        <FrameLayout width="match_parent" height="wrap_content" visibility="{{@data.p2pFilter.tradeTipsVisible}}">
            <!-- 买 -->
            <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal" gravity="left" background="@color/kColorTipsBackground" paddingLeft="16" paddingRight="16" paddingTop="10" paddingBottom="10" visibility="{{@data.p2pFilter.buyTradeTipsVisible}}">
                <ImageView src="@drawable/c2c_advert_auth_tip" width="12" height="12" marginTop="1"/>
                <TextView richText="{{@data.p2pFilter.buyTradeTips}}" maxLines="0" gravity="left" height="wrap_content" width="0" weight="1" lineSpacing="1.3" marginLeft="4"/>
                <ImageView onClick="@event.p2pFilter.closeTipsWithTrade()" src="@drawable/c2c_advert_auth_close" width="12" height="12"/>
            </LinearLayout>
            <!-- 卖 -->
            <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal" gravity="left" background="@color/kColorTipsBackground" paddingLeft="16" paddingRight="16" paddingTop="10" paddingBottom="10" visibility="{{@data.p2pFilter.sellTradeTipsVisible}}">
                <ImageView src="@drawable/c2c_advert_auth_tip" width="12" height="12" marginTop="1"/>
                <TextView richText="{{@data.p2pFilter.sellTradeTips}}" maxLines="0" gravity="left" height="wrap_content" width="0" weight="1" lineSpacing="1.3" marginLeft="4"/>
                <ImageView onClick="@event.p2pFilter.closeTipsWithTrade()" src="@drawable/c2c_advert_auth_close" width="12" height="12"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
