<LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content" topLeftRadius="8" topRightRadius="8" width="match_parent">
    <FrameLayout height="wrap_content" width="match_parent">
        <LinearLayout height="wrap_content" marginBottom="16" marginLeft="16" marginRight="16" orientation="vertical" width="match_parent">
            <!--分时委托title-->
            <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="12" orientation="horizontal" width="match_parent">

                <TextView height="wrap_content" text="{{@i18n/n_exchange_timing_deal}}" textColor="@color/kColorPrimaryText" textFontWeight="500"
                    textSize="16" width="wrap_content" />

                <View height="0" weight="1" width="0" />

                <ImageView height="28" onClick="@event.close()" src="@drawable/trade_margin_coupon_title_close" width="28" />
            </LinearLayout>
            <!--币种信息-->
            <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="12" orientation="horizontal" width="match_parent">

                <TextView height="wrap_content" text="{{@data.symbolName}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="16"
                    width="wrap_content" />

                <TextView height="wrap_content" marginLeft="4" text="{{@data.lastPrice}}" textColor="{{@data.lastPriceColor}}" textFontWeight="500"
                    textSize="16" width="wrap_content" />
            </LinearLayout>
            <!--买入/卖出-->
            <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" width="match_parent">
                <TextView background="{{@data.tabBuyBgColor}}" bottomLeftRadius="4" gravity="center" height="wrap_content"
                    onClick="@event.onTabSelect(0)" paddingBottom="4" paddingTop="4" text="{{@i18n/n_exchange_buy_in}}"
                    textColor="{{@data.tabBuyTextColor}}" textFontWeight="500" textSize="14" topLeftRadius="4" weight="1" width="wrap_content" />

                <TextView background="{{@data.tabSellBgColor}}" bottomRightRadius="4" gravity="center" height="wrap_content"
                    onClick="@event.onTabSelect(1)" paddingBottom="4" paddingTop="4" text="{{@i18n/n_exchange_sell_out}}"
                    textColor="{{@data.tabSellTextColor}}" textFontWeight="500" textSize="14" topRightRadius="4" weight="1" width="wrap_content" />
            </LinearLayout>
            <!--吃单限制范围-->
            <TextView height="wrap_content" marginTop="13" text="{{@i18n/n_exchange_timing_taker_set_price_range}}"
                textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="match_parent" />

            <LinearLayout background="@color/KBaseColorInputBackground" borderColor="{{@data.edt1BoardColor}}" borderWidth="0.5" cornerRadius="4"
                gravity="centerVertical" height="36" marginTop="4" onClick="@event.requestFocus(1)" orientation="horizontal" width="match_parent">

                <TextView autoSizeMinTextSize="12" autoSizeTextType="uniform" gravity="centerVertical" height="wrap_content" marginBottom="4"
                    marginLeft="8" marginRight="8" marginTop="4" maxLines="2" text="{{@i18n/n_exchange_timing_taker_price_limit}}"
                    textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="14" width="100" />

                <EditText background="@color/KBaseColorInputBackground" gravity="right" hasFocus="true" height="wrap_content"
                    inputType="numberDecimal" marginBottom="8" marginTop="8" onFocusChange="@event.onFocusChange(1,@eventParams)"
                    onTextChange="@event.onTextChange(1,@eventParams)" requestFocus="{{@data.edt1Focus}}" text="{{@data.limitPrice}}"
                    textColor="@color/kColorPrimaryText"
                    textFilter="@dataParser.trade_parser(@data.precisionPriceInt,@data.precisionPriceFloat,@eventParams)" textFontWeight="400"
                    textSize="14" weight="1" width="0" />

                <TextView gravity="center" height="wrap_content" marginLeft="2" marginRight="8" paddingBottom="4" paddingTop="4"
                    text="{{@data.quoteCurrency}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="500" textSize="14"
                    width="wrap_content" />
            </LinearLayout>
            <!--吃单价优于盘口-->
            <LinearLayout height="36" marginTop="4" orientation="horizontal" width="match_parent">

                <LinearLayout background="@color/KBaseColorInputBackground" borderColor="{{@data.edt2BoardColor}}" borderWidth="0.5" cornerRadius="4"
                    gravity="centerVertical" height="wrap_content" onClick="@event.requestFocus(2)" orientation="horizontal" width="259">

                    <TextView autoSizeMinTextSize="12" autoSizeTextType="uniform" height="wrap_content" marginBottom="4" marginLeft="8"
                        marginRight="8" marginTop="4" maxLines="2" text="{{@i18n/n_exchange_timing_taker_price_be_superior_to_handicap}}"
                        textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="14" width="100" />

                    <EditText background="@color/KBaseColorInputBackground" gravity="right" height="wrap_content" inputType="numberDecimal"
                        marginBottom="8" marginTop="8" onFocusChange="@event.onFocusChange(2,@eventParams)"
                        onTextChange="@event.onTextChange(2,@eventParams)" requestFocus="{{@data.edt2Focus}}" text="{{@data.limitRange}}"
                        textColor="@color/kColorPrimaryText"
                        textFilter="@dataParser.trade_parser(@data.precisionPriceRangeInt,@data.precisionPriceRangeFloat,@eventParams)"
                        textFontWeight="400" textSize="14" weight="1" width="0" />

                    <TextView gravity="center" height="wrap_content" marginLeft="2" marginRight="8" paddingBottom="4" paddingTop="4"
                        text="{{@data.priceRangeUnit}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="500" textSize="14"
                        width="wrap_content" />
                </LinearLayout>

                <View height="0" weight="1" width="0" />

                <LinearLayout background="@color/KBaseColorInputBackground" cornerRadius="4" gravity="centerVertical" height="36" marginLeft="4"
                    onClick="@event.clickPopRange()" onPopDismiss="@event.popDismiss()" orientation="horizontal" popArrowDirection="up"
                    popArrowHeight="0" popArrowWidth="0" popCancelOnTouchOutside="true" popShow="{{@data.popRangeShow}}"
                    popTemplate="trade_time_pop_range.xml" width="wrap_content">

                    <TextView height="wrap_content" marginBottom="4" marginLeft="8" marginTop="4" text="{{@data.rangeTypeName}}"
                        textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="14" width="54" />

                    <ImageView gravity="centerVertical" height="4" marginLeft="4" marginRight="8" src="@drawable/edge_engine_trade_arrow_down" width="6" />
                </LinearLayout>
            </LinearLayout>
            <TextView height="wrap_content" marginTop="5"
                autoSizeMinTextSize="10" autoSizeTextType="uniform" maxLines="2"
                text="{{@data.eatRangeTips|@i18n/n_exchange_timing_maker_eat_order_price_superior_handicap_range}}"
                textColor="{{@data.inputInvalidTipColor}}" textSize="12" visibility="{{@data.edtPriceRangeTipVisible|gone}}" width="match_parent" />
            <!--设置委托数量-->
            <TextView height="wrap_content" marginTop="13" text="{{@i18n/n_exchange_timing_maker_setting_amount}}"
                textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="match_parent" />

            <LinearLayout background="@color/KBaseColorInputBackground" borderColor="{{@data.edt3BoardColor}}" borderWidth="0.5" cornerRadius="4"
                gravity="centerVertical" height="36" marginTop="4" onClick="@event.requestFocus(3)" orientation="horizontal" width="match_parent">

                <TextView autoSizeMinTextSize="12" autoSizeTextType="uniform" gravity="centerVertical" height="wrap_content" marginBottom="4"
                    marginLeft="8" marginRight="8" marginTop="4" maxLines="2" text="{{@i18n/n_exchange_timing_order_total_amount}}"
                    textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="14" width="100" />

                <EditText background="@color/KBaseColorInputBackground" gravity="right" height="wrap_content" inputType="numberDecimal"
                    marginBottom="8" marginTop="8" onFocusChange="@event.onFocusChange(3,@eventParams)"
                    onTextChange="@event.onTextChange(3,@eventParams)" requestFocus="{{@data.edt3Focus}}" text="{{@data.totalAmount}}"
                    textColor="@color/kColorPrimaryText"
                    textFilter="@dataParser.trade_parser(@data.precisionTotalAmountInt,@data.precisionTotalAmountFloat,@eventParams)"
                    textFontWeight="400" textSize="14" weight="1" width="0" />

                <TextView gravity="center" height="wrap_content" marginLeft="2" marginRight="8" paddingBottom="4" paddingTop="4"
                    text="{{@data.baseCurrency}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="500" textSize="14"
                    width="wrap_content" />
            </LinearLayout>
            <!--待添加seekbar-->
            <SeekBar bubbleShow="{{@data.seekbarShow}}" bubbleTextColor="#FFFFFF" bubbleTextSize="11" height="36" marginTop="4"
                onValueChange="@event.seekBarValueChange(@eventParams)" progress="{{@data.progress}}" sectionCount="5" width="match_parent" />
            <!--单笔数量-->
            <LinearLayout height="36" marginTop="4" orientation="horizontal" width="match_parent">

                <LinearLayout background="@color/KBaseColorInputBackground" borderColor="{{@data.edt4BoardColor}}" borderWidth="0.5" cornerRadius="4"
                    gravity="centerVertical" height="wrap_content" onClick="@event.requestFocus(4)" orientation="horizontal" width="259">

                    <TextView autoSizeMinTextSize="12" autoSizeTextType="uniform" height="wrap_content" marginBottom="4" marginLeft="8"
                        marginRight="8" marginTop="4" maxLines="2" text="{{@i18n/n_exchange_timing_one_order_amount}}"
                        textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="14" width="100" />

                    <EditText background="@color/KBaseColorInputBackground" gravity="right" height="wrap_content" inputType="numberDecimal"
                        marginBottom="8" marginTop="8" onFocusChange="@event.onFocusChange(4,@eventParams)"
                        onTextChange="@event.onTextChange(4,@eventParams)" requestFocus="{{@data.edt4Focus}}" text="{{@data.singleAmount}}"
                        textColor="@color/kColorPrimaryText"
                        textFilter="@dataParser.trade_parser(@data.precisionSingleAmountInt,@data.precisionSingleAmountFloat,@eventParams)"
                        textFontWeight="400" textSize="14" weight="1" width="0" />

                    <TextView gravity="center" height="wrap_content" marginLeft="2" marginRight="8" paddingBottom="4" paddingTop="4"
                        text="{{@data.volumeRangeUnit}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="500" textSize="14"
                        width="wrap_content" />
                </LinearLayout>

                <View height="0" weight="1" width="0" />

                <LinearLayout background="@color/KBaseColorInputBackground" cornerRadius="4" gravity="centerVertical" height="36" marginLeft="4"
                    onClick="@event.clickPopVolume()" onPopDismiss="@event.popDismiss()" orientation="horizontal" popArrowDirection="up"
                    popArrowHeight="0" popArrowWidth="0" popCancelOnTouchOutside="true" popShow="{{@data.popVolumeShow}}"
                    popTemplate="trade_time_pop_volume.xml" width="wrap_content">

                    <TextView height="wrap_content" marginBottom="4" marginLeft="8" marginTop="4" text="{{@data.volumeTypeName}}"
                        textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="14" width="54" />

                    <ImageView gravity="centerVertical" height="4" marginLeft="4" marginRight="8" src="@drawable/edge_engine_trade_arrow_down" width="6" />
                </LinearLayout>
            </LinearLayout>
            <TextView height="wrap_content" marginTop="5"
                autoSizeMinTextSize="10" autoSizeTextType="uniform" maxLines="2"
                text="{{@data.singleAmountTips|@i18n/n_exchange_timing_order_one_amount_must_less_total_amount}}"
                textColor="{{@data.inputInvalidTipColor}}" textSize="12" visibility="{{@data.edtSingleAmountTipVisible|gone}}" width="match_parent" />
            <!--设置分批下单时间间隔-->
            <TextView height="wrap_content" marginTop="13" text="{{@i18n/n_exchange_timing_order_interval_setting}}"
                textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="match_parent" />

            <LinearLayout background="@color/KBaseColorInputBackground" borderColor="{{@data.edt5BoardColor}}" borderWidth="0.5" cornerRadius="4"
                gravity="centerVertical" height="36" marginTop="4" onClick="@event.requestFocus(5)" orientation="horizontal" width="match_parent">

                <TextView autoSizeMinTextSize="12" autoSizeTextType="uniform" height="wrap_content" marginBottom="4" marginLeft="8" marginRight="8"
                    marginTop="4" maxLines="2" text="{{@i18n/n_exchange_timing_maker_make_order_interval}}" textColor="@color/KBaseColorSecondaryText"
                    textFontWeight="400" textSize="14" width="100" />

                <EditText background="@color/KBaseColorInputBackground" gravity="right" height="wrap_content" inputType="number" marginBottom="8"
                    marginTop="8" onFocusChange="@event.onFocusChange(5,@eventParams)" onTextChange="@event.onTextChange(5,@eventParams)"
                    requestFocus="{{@data.edt5Focus}}" text="{{@data.timeInterval}}" textColor="@color/kColorPrimaryText"
                    textFilter="@dataParser.trade_parser(@data.precisionSingleAmountInt,0,@eventParams)" textFontWeight="400" textSize="14" weight="1"
                    width="0" />

                <TextView gravity="center" height="wrap_content" marginLeft="2" marginRight="8" paddingBottom="4" paddingTop="4"
                    text="{{@i18n/n_exchange_timing_second}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="500" textSize="14"
                    width="wrap_content" />
            </LinearLayout>
            <TextView height="wrap_content" marginTop="5"
                autoSizeMinTextSize="10" autoSizeTextType="uniform" maxLines="2"
                text="{{@data.intervalRangeTips|@i18n/n_exchange_timing_order_one_amount_must_less_total_amount}}"
                textColor="{{@data.inputInvalidTipColor}}" textSize="12" visibility="{{@data.edtIntervalRangeTipVisible|gone}}"
                width="match_parent" />

            <!--可用-->
            <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="13" orientation="horizontal" width="match_parent">

                <TextView height="wrap_content" marginBottom="8" marginTop="8" text="{{@i18n/n_balance_otc_avaiable}}"
                    textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="14" width="100" />

                <View height="0" weight="1" width="0" />

                <TextView gravity="center" height="wrap_content" marginLeft="2" text="{{@data.assetAvailableValue}}"
                    textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="wrap_content" />

                <TextView gravity="center" height="wrap_content" marginLeft="2" text="{{@data.assetAvailableUnit}}"
                    textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="wrap_content" />

                <ImageView gravity="center" height="wrap_content" marginLeft="2" src="@drawable/trade_transfer" visibility="gone"
                    width="wrap_content" />
            </LinearLayout>
            <!--确认-->
            <LinearLayout background="{{@data.confirmBgColor}}" bottomLeftRadius="4" bottomRightRadius="4" height="wrap_content" marginTop="4"
                onClick="@event.confirm()" orientation="horizontal" topLeftRadius="4" topRightRadius="4" width="match_parent">
                <View height="0" weight="1" width="0" />
                <LinearLayout gravity="right" height="wrap_content" orientation="horizontal" paddingBottom="12" paddingTop="12" width="wrap_content">
                    <TextView gravity="center" height="wrap_content" text="{{@data.confirmBtnValue}}" textColor="{{@data.confirmTextColor}}"
                        textFontWeight="500" textSize="14" width="wrap_content" />
                    <TextView gravity="center" height="wrap_content" text="{{@data.baseCurrency}}" textColor="{{@data.confirmTextColor}}"
                        textFontWeight="500" textSize="14" width="wrap_content" />
                </LinearLayout>
                <View height="0" weight="1" width="0" />
            </LinearLayout>
        </LinearLayout>
        <FrameLayout background="@color/KBasePopCoverColor" height="match_parent" visibility="{{@data.popCoverVisible|gone}}" width="match_parent" />
    </FrameLayout>
</LinearLayout>

