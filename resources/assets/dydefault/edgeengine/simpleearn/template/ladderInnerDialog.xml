<!-- 币种选择弹框 -->
<LinearLayout orientation="vertical" topLeftRadius="8" topRightRadius="8" height="match_parent" width="match_parent">

  <View onClick="@event.ladder.closeInnerDialog()" width="match_parent" height="88"/>

  <RecyclerView background="@color/kColorContentBackground" data="@data.ladder.ladderInnerList" paddingTop="12" height="match_parent" width="match_parent" orientation="vertical" itemKey="item" typeKey="type">

    <Header width="match_parent" height="wrap_content">

      <LinearLayout onClick="@event.ladder.closeInnerDialog()" width="match_parent" height="21" gravity="centerHorizontal" orientation="horizontal">

        <View opacity="0.2" marginTop="12" cornerRadius="8" background="@color/kColorPrimaryText" width="37" height="5"/>

      </LinearLayout>
    </Header>

    <Cell type="1" width="match_parent" height="wrap_content">

      <LinearLayout onClick="@event.ladder.onItemClick('{{@item.index}}')" paddingRight="16" paddingLeft="16" width="match_parent" height="56" gravity="centerVertical" orientation="horizontal">

        <ImageView width="24" height="24" src="{{@item.currentcyImg}}"/>

        <TextView maxLines="1" text="{{@item.currency}}" textColor="{{@item.currencyColor}}" textSize="16" textFontWeight="500" marginLeft="10" height="wrap_content" weight="1" width="0"/>

        <ImageView width="20" height="20" src="{{@item.selectedImg}}"/>

      </LinearLayout>

    </Cell>
  </RecyclerView>

  <View background="@color/kColorContentBackground" width="match_parent" weight="1" height="0"/>

</LinearLayout>
