<!-- 对应收益概览弹框 -->
<LinearLayout background="@color/kColorContentBackground" height="wrap_content" orientation="vertical" topLeftRadius="8" topRightRadius="8" width="375">

  <!-- 顶部title -->
  <LinearLayout height="44" width="match_parent" gravity="centerVertical" orientation="horizontal">

    <TextView width="wrap_content" height="wrap_content" marginLeft="16" textSize="16" weight="1" textFontWeight="500" textColor="@color/kColorPrimaryText" text="{{@data.profitOverview.title}}"/>

    <ImageView onClick="@event.profitOverview.closeDialog()" height="28" marginLeft="8" marginRight="16" src="@drawable/edge_engine_copy_trading_dialog_close" width="28"/>

  </LinearLayout>

  <View width="match_parent" height="1" background="@color/KBaseColorPrimarySeparator"/>

  <!-- 表格标题 -->
  <TextView maxLines="0" marginTop="16" marginLeft="16" marginRight="16" text="{{@data.profitOverview.tableTitle}}" textColor="@color/kColorPrimaryText" textSize="14" lineSpacing="2" textFontWeight="400" height="wrap_content" width="match_parent"/>

  <!-- 表格 -->
  <LinearLayout marginTop="12" marginLeft="16" marginRight="16" cornerRadius="4" borderWidth="0.5" borderColor="@color/KBaseColorPrimarySeparator" orientation="vertical" height="144" width="match_parent">

    <!-- 表格头部 -->
    <LinearLayout background="@color/kColorTipsBackground" width="match_parent" height="32" gravity="centerVertical" orientation="horizontal">

      <TextView maxLines="1" text="{{@data.profitOverview.headTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" paddingLeft="12" height="wrap_content" weight="1" width="0"/>

      <TextView maxLines="1" text="{{@data.profitOverview.headTitle2}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" marginLeft="8" marginRight="8" height="wrap_content" gravity="left" weight="1" width="0"/>

      <TextView maxLines="1" text="{{@data.profitOverview.headTitle3}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" paddingRight="12" height="wrap_content" gravity="right" weight="1" width="0"/>

    </LinearLayout>

    <RecyclerView data="@data.profitOverview.profitOverviewList" height="0" weight="1" width="match_parent" orientation="vertical" itemKey="item" typeKey="type">

      <Cell type="1" width="match_parent" height="wrap_content">

        <LinearLayout width="match_parent" height="36" gravity="centerVertical" orientation="horizontal">

          <TextView maxLines="1" text="{{@item.currency}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" paddingLeft="12" height="wrap_content" weight="1" width="0"/>

          <TextView maxLines="1" text="{{@item.perkLimit}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" marginLeft="8" marginRight="8" height="wrap_content" gravity="left" weight="1" width="0"/>

          <TextView maxLines="1" text="{{@item.perkApy}}" textColor="@color/kColorPrimaryText" textSize="14" textFontWeight="500" paddingRight="12" height="wrap_content" gravity="right" weight="1" width="0"/>

        </LinearLayout>
      </Cell>
    </RecyclerView>
  </LinearLayout>

  <!-- 奖励规则 -->
  <TextView visibility="{{@data.profitOverview.rewardRuleVis}}" text="{{@data.profitOverview.rewardRuleTitle}}" textColor="@color/kColorPrimaryText" marginLeft="16" marginTop="16" marginRight="16" textSize="12" textFontWeight="400" lineSpacing="2" maxLines="0" height="wrap_content" width="match_parent"/>

  <TextView visibility="{{@data.profitOverview.rewardRuleVis}}" text="{{@data.profitOverview.rewardRuleContent1}}" textColor="@color/kColorPrimaryText" marginLeft="16" marginTop="2" marginRight="16" textSize="12" textFontWeight="400" lineSpacing="2" maxLines="0" height="wrap_content" width="match_parent"/>

  <TextView visibility="{{@data.profitOverview.rewardRuleVis}}" text="{{@data.profitOverview.rewardRuleContent2}}" textColor="@color/kColorPrimaryText" marginLeft="16" marginTop="2" marginRight="16" textSize="12" textFontWeight="400" lineSpacing="2" maxLines="0" height="wrap_content" width="match_parent"/>

  <!-- 举例 -->
  <TextView visibility="{{@data.profitOverview.exampleVis}}" text="{{@data.profitOverview.exampleTitle}}" textColor="@color/kColorThreeLevelText" marginLeft="16" marginTop="16" marginRight="16" textSize="12" textFontWeight="400" lineSpacing="2" maxLines="0" height="wrap_content" width="match_parent"/>

  <TextView visibility="{{@data.profitOverview.exampleVis}}" text="{{@data.profitOverview.exampleContent1}}" textColor="@color/kColorThreeLevelText" marginLeft="16" marginTop="2" marginRight="16" textSize="12" textFontWeight="400" lineSpacing="2" maxLines="0" height="wrap_content" width="match_parent"/>

  <TextView visibility="{{@data.profitOverview.exampleVis}}" text="{{@data.profitOverview.exampleContent2}}" textColor="@color/kColorThreeLevelText" marginLeft="16" marginTop="2" marginRight="16" textSize="12" textFontWeight="400" lineSpacing="2" maxLines="0" height="wrap_content" width="match_parent"/>

  <!-- 我知道了 -->
  <TextView background="@color/kColorMajorTheme100" gravity="center" height="40" cornerRadius="4" textFontWeight="500" marginLeft="16" marginRight="16" marginTop="32" marginBottom="16" onClick="@event.profitOverview.closeDialog()" text="{{@i18n/n_known}}" textColor="@color/KBaseColorContentBackground" textSize="14" width="match_parent"/>

  <View width="0" height="{{@data.commonData.bottomSafeAreaHeight}}"/>
</LinearLayout>
