<LinearLayout width="match_parent" height="wrap_content" background="@color/KBaseColorContentBackground" orientation="vertical" topLeftRadius="8" topRightRadius="8">

  <LinearLayout width="match_parent" height="52" gravity="centerVertical" orientation="horizontal">
    <TextView width="0" weight="1" height="wrap_content" marginLeft="16" text="{{@data.dialog.availableQuotaTitle}}" textSize="16" textFontWeight="500" textColor="@color/kColorPrimaryText"/>
    <ImageView width="wrap_content" height="wrap_content" marginRight="16" onClick="@event.dialog.closeAvailableQuotaDialog()" src="@drawable/edge_engine_copy_trading_dialog_close"/>
  </LinearLayout>

  <TextView marginLeft="16" marginRight="16" height="wrap_content" text="{{@data.dialog.quotaQ1}}" textColor="@color/kColorPrimaryText" textSize="14" textFontWeight="500" width="match_parent" maxLines="0"/>

  <TextView marginLeft="16" marginRight="16" height="wrap_content" text="{{@data.dialog.quotaA1}}" textColor="@color/kColorPrimaryText" textSize="14" width="match_parent" maxLines="0"/>

  <TextView marginTop="16" marginLeft="16" marginRight="16" height="wrap_content" text="{{@data.dialog.quotaQ2}}" textColor="@color/kColorPrimaryText" textSize="14" textFontWeight="500" width="match_parent" maxLines="0"/>

  <TextView marginLeft="16" marginRight="16" height="wrap_content" text="{{@data.dialog.quotaA2}}" textColor="@color/kColorPrimaryText" textSize="14" width="match_parent" maxLines="0"/>

  <TextView marginTop="16" marginLeft="16" marginRight="16" height="wrap_content" richText="{{@data.dialog.quotaText1}}" textColor="@color/kColorPrimaryText" textSize="14" width="match_parent" maxLines="0"/>

  <TextView marginLeft="16" marginRight="16" height="wrap_content" richText="{{@data.dialog.quotaText2}}" textColor="@color/kColorPrimaryText" textSize="14" width="match_parent" maxLines="0"/>

  <TextView marginLeft="16" marginRight="16" height="wrap_content" richText="{{@data.dialog.quotaText3}}" textColor="@color/kColorPrimaryText" textSize="14" width="match_parent" maxLines="0"/>

  <TextView width="match_parent" height="44" marginLeft="16" marginTop="32" marginRight="16" textFontWeight="500" marginBottom="16" background="@color/kColorMajorTheme100" gravity="center" text="{{@i18n/n_otc_balance_trade_deal_confirm}}" onClick="@event.dialog.closeAvailableQuotaDialog()" cornerRadius="4" textColor="@color/KBaseTextColor" textSize="14"/>

  <View width="0" height="{{@data.commonData.bottomSafeAreaHeight}}"/>
</LinearLayout>
