<!-- 加息券解释弹框 -->
<LinearLayout background="@color/kColorContentBackground" height="wrap_content" orientation="vertical" topLeftRadius="8" topRightRadius="8" width="375">

  <!-- 顶部title -->
  <LinearLayout height="44" width="match_parent" gravity="centerVertical" orientation="horizontal">

    <TextView width="wrap_content" height="wrap_content" marginLeft="16" textSize="16" weight="1" textFontWeight="500" textColor="@color/kColorPrimaryText" text="{{@i18n/n_coupon_type_saving}}"/>

    <ImageView onClick="@event.coupon.closeDialog()" height="28" marginLeft="8" marginRight="16" src="@drawable/edge_engine_copy_trading_dialog_close" width="28"/>

  </LinearLayout>

  <View width="match_parent" height="1" background="@color/KBaseColorPrimarySeparator"/>

  <TextView maxLines="0" marginTop="16" marginLeft="16" marginRight="16" text="{{@data.coupon.tableTitle}}" textColor="@color/kColorPrimaryText" textSize="14" lineSpacing="2" textFontWeight="400" height="wrap_content" width="match_parent"/>

  <TextView maxLines="0" marginTop="2" marginLeft="16" marginRight="16" text="{{@data.coupon.tableTitleContent}}" textColor="@color/kColorPrimaryText" textSize="14" lineSpacing="2" textFontWeight="400" height="wrap_content" width="match_parent"/>

  <LinearLayout marginTop="12" marginLeft="16" marginRight="16" cornerRadius="4" borderWidth="0.5" borderColor="@color/KBaseColorPrimarySeparator" orientation="vertical" height="110" width="match_parent">

    <!-- 表格头部 -->
    <LinearLayout background="@color/kColorTipsBackground" width="match_parent" height="32" gravity="centerVertical" orientation="horizontal">

      <TextView maxLines="1" text="{{@data.coupon.headTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" paddingLeft="12" height="wrap_content" weight="1" width="0"/>

      <TextView maxLines="1" text="{{@data.coupon.headTitle2}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" marginLeft="8" marginRight="8" height="wrap_content" gravity="center" weight="1" width="0"/>

      <TextView maxLines="1" text="{{@data.coupon.headTitle3}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" paddingRight="12" height="wrap_content" gravity="right" weight="1" width="0"/>

    </LinearLayout>

    <For data="@data.coupon.couponList" height="wrap_content" width="match_parent" orientation="vertical" itemKey="item" typeKey="type">

      <Cell type="1" width="match_parent" height="wrap_content">

        <LinearLayout width="match_parent" height="36" gravity="centerVertical" orientation="horizontal">

          <TextView maxLines="1" text="{{@item.amount}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" paddingLeft="12" height="wrap_content" weight="1" width="0"/>

          <TextView maxLines="1" text="{{@item.apy}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" marginLeft="8" marginRight="8" height="wrap_content" gravity="center" weight="1" width="0"/>

          <TextView maxLines="1" text="{{@item.perkApy}}" textColor="{{@item.color}}" textSize="{{@item.size}}" textFontWeight="{{@item.fontWeight}}" paddingRight="12" height="wrap_content" gravity="right" weight="1" width="0"/>

        </LinearLayout>
      </Cell>
    </For>
  </LinearLayout>

  <TextView maxLines="0" lineSpacing="2" text="{{@data.coupon.bottomText1}}" textColor="@color/kColorPrimaryText" textSize="12" textFontWeight="400" marginTop="16" marginLeft="16" marginRight="16" height="wrap_content" width="wrap_content"/>

  <TextView maxLines="0" lineSpacing="2" text="{{@data.coupon.bottomText2}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" marginTop="16" marginLeft="16" marginRight="16" height="wrap_content" width="wrap_content"/>

  <!-- 我知道了 -->
  <TextView background="@color/kColorMajorTheme100" gravity="center" height="40" cornerRadius="4" textFontWeight="500" marginLeft="16" marginRight="16" marginTop="16" marginBottom="16" onClick="@event.coupon.closeDialog()" text="{{@i18n/n_copy_trading_i_got_it}}" textColor="@color/KBaseTextColor" textSize="14" width="match_parent"/>

  <View width="0" height="{{@data.commonData.bottomSafeAreaHeight}}"/>
</LinearLayout>
