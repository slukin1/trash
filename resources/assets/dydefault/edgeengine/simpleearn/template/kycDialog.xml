<LinearLayout background="@color/KBaseTextColor" height="wrap_content" orientation="vertical" width="325" cornerRadius="8" paddingLeft="16" paddingRight="16">

  <LinearLayout marginTop="16" width="match_parent" height="wrap_content" gravity="centerVertical" orientation="horizontal">
    <TextView width="0" weight="1" height="wrap_content" text="{{@data.kycDialog.tipTitle}}" textSize="16" textFontWeight="600" textColor="@color/kColorPrimaryText"/>
    <ImageView width="wrap_content" height="wrap_content" marginLeft="8" onClick="@event.kycDialog.closeDialog()" src="@drawable/edge_engine_copy_trading_dialog_close"/>
  </LinearLayout>

  <TextView height="wrap_content" maxLines="0" textFontWeight="400" text="{{@data.kycDialog.tipContent}}" textColor="@color/kColorPrimaryText" textSize="14" marginTop="16" width="293"/>

  <LinearLayout height="wrap_content" orientation="horizontal" width="match_parent" gravity="center" marginTop="16" marginBottom="16">

    <TextView background="@color/KBaseColorInputBackground" gravity="center" height="40" cornerRadius="4" textFontWeight="500" onClick="@event.kycDialog.gotoKycAuth()" text="{{@i18n/n_simple_earn_kyc_verify}}" textColor="@color/kColorPrimaryText" textSize="14" width="0" weight="1"/>

    <View width="10" height="0"/>

    <TextView background="@color/kColorMajorTheme100" gravity="center" height="40" cornerRadius="4" textFontWeight="500" onClick="@event.kycDialog.closeDialog()" text="{{@i18n/n_simple_earn_kyc_close}}" textColor="@color/KBaseTextColor" textSize="14" width="0" weight="1"/>
  </LinearLayout>
</LinearLayout>
