<!-- 资金来源弹框 -->
<LinearLayout orientation="vertical" background="@color/kColorContentBackground" topLeftRadius="8" topRightRadius="8" marginBottom="{{@data.commonData.bottomSafeAreaHeight}}" height="380" width="375">

  <!-- 标题：确认资金来源 -->
  <LinearLayout height="44" width="match_parent" gravity="centerVertical" orientation="horizontal">

    <TextView width="wrap_content" height="wrap_content" marginLeft="16" textSize="16" weight="1" textFontWeight="500" textColor="@color/kColorPrimaryText" text="{{@i18n/n_confirm_asset_source}}"/>

    <ImageView onClick="@event.fund.closeDialog()" height="28" marginLeft="8" marginRight="16" src="@drawable/edge_engine_copy_trading_dialog_close" width="28"/>

  </LinearLayout>

  <View width="match_parent" height="0.5" background="@color/KBaseColorPrimarySeparator"/>

  <!-- 有选中时的提示 -->
  <LinearLayout visibility="{{@data.fund.tip1Vis | gone}}" height="50" width="match_parent" background="@color/kColorTipsBackground" orientation="horizontal">

    <ImageView src="@drawable/edge_engine_maintain_tip_icon_light" marginTop="11" marginLeft="16" height="12" width="12"/>

    <!-- 提示文案 -->
    <TextView lineSpacing="4" layout_gravity="centerVertical" width="wrap_content" height="wrap_content" marginLeft="4" marginRight="16" textSize="12" maxLines="0" weight="1" textFontWeight="400" textColor="@color/kColorPrimaryText" text="{{@i18n/n_confirm_purchase_top_tip}}"/>

  </LinearLayout>

  <!-- 请至少选择一个资金来源提示 -->
  <LinearLayout visibility="{{@data.fund.tip2Vis | gone}}" height="36" width="match_parent" gravity="centerVertical" background="@color/KColor12FE8731" orientation="horizontal">

    <ImageView height="12" marginLeft="18" src="@drawable/edge_engine_copy_trading_tip" width="12"/>

    <!-- 提示文案 -->
    <TextView width="wrap_content" height="wrap_content" marginLeft="4" marginRight="16" textSize="12" weight="1" textFontWeight="400" textColor="@color/kColorPrimaryText" text="{{@i18n/n_select_one_source_at_least}}"/>

  </LinearLayout>

  <!-- 列表 -->
  <RecyclerView data="@data.fund.items" height="0" weight="1" paddingTop="4" width="match_parent" orientation="vertical" itemKey="item" typeKey="type">

    <Cell type="1" width="match_parent" height="wrap_content">

      <LinearLayout onClick="@event.fund.itemClick('{{@item.index}}')" gravity="centerVertical" marginTop="14" marginLeft="16" marginRight="16" background="@color/KBaseColorInputBackground" cornerRadius="8" height="70" width="match_parent">

        <LinearLayout orientation="vertical" marginTop="14" marginLeft="12" marginBottom="14" height="wrap_content" width="0" weight="1">

          <TextView width="wrap_content" height="wrap_content" textSize="16" textFontWeight="500" textColor="@color/kColorPrimaryText" text="{{@item.title}}"/>

          <TextView width="wrap_content" height="wrap_content" marginTop="4" textSize="14" textFontWeight="400" textColor="@color/kColorSecondaryText" text="{{@item.balance}}"/>

        </LinearLayout>

        <!-- 复选框 -->
        <ImageView src="{{@item.checkImg}}" marginRight="12" width="15" height="15"/>

      </LinearLayout>

    </Cell>

  </RecyclerView>

  <LinearLayout gravity="centerVertical" marginTop="12" height="20" width="match_parent">

    <TextView marginLeft="16" textColor="@color/kColorThreeLevelText" textSize="14" textFontWeight="400" text="{{@i18n/n_otc_available}}" width="wrap_content" height="wrap_content"/>

    <TextView gravity="right" marginLeft="2" textColor="@color/kColorPrimaryText" textSize="14" textFontWeight="500" text="{{@data.fund.totalBalance}}" weight="1" width="wrap_content" height="wrap_content"/>

    <TextView marginRight="16" textColor="@color/kColorPrimaryText" textSize="14" textFontWeight="500" text=" {{@data.home.currency}}" width="wrap_content" height="wrap_content"/>
  </LinearLayout>

  <TextView height="44" marginLeft="16" marginRight="16" marginTop="16" marginBottom="16" maxLines="0" text="{{@i18n/n_coupon_select_confirm}}" cornerRadius="4" textFontWeight="500" textSize="14" gravity="center" onClick="@event.fund.confirm()" textColor="{{@data.fund.confirmTextColor}}" background="{{@data.fund.confirmBgColor}}" width="match_parent"/>

</LinearLayout>
