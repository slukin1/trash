<!-- 对应阶梯年化弹框 -->
<LinearLayout background="@color/kColorContentBackground" height="wrap_content" orientation="vertical" topLeftRadius="8" topRightRadius="8" width="375">

  <!-- 顶部title -->
  <LinearLayout height="44" width="match_parent" gravity="centerVertical" orientation="horizontal">

    <TextView width="wrap_content" height="wrap_content" marginLeft="16" textSize="16" weight="1" textFontWeight="500" textColor="@color/kColorPrimaryText" text="{{@data.ladder.title}}"/>

    <ImageView onClick="@event.ladder.closeDialog()" height="28" marginLeft="8" marginRight="16" src="@drawable/edge_engine_copy_trading_dialog_close" width="28"/>

  </LinearLayout>

  <View width="match_parent" height="1" background="@color/KBaseColorPrimarySeparator"/>

  <!-- 提示 -->
  <LinearLayout background="@color/KAssetTopHeaderContentBackground" height="36" paddingLeft="16" paddingRight="16" width="match_parent" gravity="centerVertical" orientation="horizontal">

    <ImageView src="@drawable/edge_engine_maintain_tip_icon_light" height="wrap_content" width="wrap_content"/>

    <TextView maxLines="0" textFontWeight="400" text="{{@data.ladder.tip}}" textColor="@color/kColorPrimaryText" textSize="12" marginLeft="3" height="wrap_content" width="match_parent"/>

  </LinearLayout>

  <!-- 表格标题 -->
  <LinearLayout height="20" marginTop="16" paddingLeft="16" paddingRight="16" width="match_parent" gravity="centerVertical" orientation="horizontal">

    <TextView maxLines="1" text="{{@data.ladder.tableTitle}}" textColor="@color/kColorPrimaryText" textSize="14" textFontWeight="400" height="wrap_content" weight="1" width="0"/>

    <TextView onClick="@event.ladder.openInnerDialog()" onPopDismiss="@event.ladder.closeInnerDialog()" popBackgroundDimmed="false" popCancelOnTouchOutside="true" popShow="{{@data.ladder.isShowInner | false}}" popShowMode="modal" popModalPositon="bottom" popTemplate="ladderInnerDialog.xml" maxLines="1" text="{{@data.ladder.tableCurrency}}" textColor="@color/kColorPrimaryText" textSize="14" textFontWeight="500" height="wrap_content" width="wrap_content"/>

    <ImageView marginLeft="4" src="@drawable/edge_engine_strutured_arrow_down" height="10" width="10"/>

  </LinearLayout>

  <LinearLayout marginTop="12" marginLeft="16" marginRight="16" cornerRadius="4" borderWidth="0.5" borderColor="@color/KBaseColorPrimarySeparator" orientation="vertical" height="wrap_content" width="match_parent">

    <!-- 表格头部 -->
    <LinearLayout background="@color/kColorTipsBackground" width="match_parent" height="32" gravity="centerVertical" orientation="horizontal">

      <TextView maxLines="1" text="{{@data.ladder.headTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" paddingLeft="12" height="wrap_content" weight="1" width="0"/>

      <TextView maxLines="1" text="{{@data.ladder.headTitle2}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" paddingRight="12" height="wrap_content" gravity="right" weight="1" width="0"/>

    </LinearLayout>

    <For data="@data.ladder.ladderList" height="wrap_content" width="match_parent" orientation="vertical" itemKey="item" typeKey="type">

      <Cell type="1" width="match_parent" height="wrap_content">

        <LinearLayout width="match_parent" height="36" gravity="centerVertical" orientation="horizontal">

          <TextView maxLines="1" text="{{@item.amountText}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" paddingLeft="12" height="wrap_content" weight="1" width="0"/>

          <TextView maxLines="1" text="{{@item.rate}}" textColor="@color/kColorPrimaryText" textSize="14" textFontWeight="500" paddingRight="12" height="wrap_content" gravity="right" weight="1" width="0"/>

        </LinearLayout>

      </Cell>

    </For>
  </LinearLayout>

  <!-- 举例 -->
  <TextView text="{{@data.ladder.example}}" visibility="{{@data.ladder.exampleVis}}" textColor="@color/kColorThreeLevelText" marginLeft="16" marginTop="16" marginRight="16" textSize="12" textFontWeight="400" lineSpacing="2" maxLines="0" height="wrap_content" width="match_parent"/>

  <TextView background="@color/kColorMajorTheme100" gravity="center" height="40" cornerRadius="4" textFontWeight="500" marginLeft="16" marginRight="16" marginTop="16" marginBottom="16" onClick="@event.ladder.closeDialog()" text="{{@i18n/n_known}}" textColor="@color/KBaseColorContentBackground" textSize="14" width="match_parent"/>

  <View width="0" height="{{@data.commonData.bottomSafeAreaHeight}}"/>
</LinearLayout>
