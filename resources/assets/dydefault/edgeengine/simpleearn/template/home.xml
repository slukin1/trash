<LinearLayout background="@color/kColorContentBackground" width="match_parent" height="match_parent" orientation="vertical">

    <!--页面顶部导航栏-->
    <FrameLayout width="match_parent" height="44">

        <ImageView src="@drawable/edge_engine_top_bar_back_normal" onClick="@event.home.backClicked()" paddingLeft="16" paddingRight="16" layout_gravity="centerVertical" width="wrap_content" height="wrap_content"/>

        <LinearLayout layout_gravity="center" gravity="center" width="wrap_content" height="match_parent">

            <ImageView src="{{@data.home.topIcon}}" width="20" height="20"/>

            <TextView text="{{@data.home.topTitle}}" textSize="15" textFontWeight="500" textColor="@color/kColorPrimaryText" marginLeft="4" width="wrap_content" height="wrap_content"/>

        </LinearLayout>

    </FrameLayout>

    <Scroller width="match_parent" height="64" orientation="horizontal" marginTop="16" scrollToTag="{{@data.home.scrollToTag}}">

        <LinearLayout visibility="{{@data.home.dataVis}}" width="wrap_content" height="64" orientation="horizontal" gravity="centerVertical">

            <View width="8" height="1"/>
            
            <For data="@data.home.earnTabList" itemKey="element" typeKey="type">

                <Cell width="{{@element.tabWidth | 102}}" height="64" tag="{{@element.tag}}" onClick="@event.home.scrollToTag(`{{@element.tag}}`)" type="1">

                    <FrameLayout width="match_parent" height="64" cornerRadius="4" marginLeft="8" borderColor="{{@element.borderColor}}" borderWidth="1">

                        <FrameLayout width="match_parent" height="match_parent" orientation="horizontal">

                            <LinearLayout width="wrap_content" height="14" layout_gravity="right|top" orientation="horizontal" topRightRadius="4" bottomLeftRadius="4" visibility="{{@element.tagVis}}" background="{{@element.tagBg}}" gravity="center">

                                <TextView paddingLeft="4" paddingRight="4" width="wrap_content" height="wrap_content" textSize="10" textFontWeight="500" textColor="{{@element.tagTextColor}}" text="{{@element.tagText}}"/>
                            </LinearLayout>

                            <LinearLayout width="wrap_content" height="16" layout_gravity="bottom|right" orientation="horizontal" topRightRadius="4" bottomLeftRadius="4" visibility="{{@element.timeVis}}" gravity="center">

                                <ImageView width="12" height="12" src="{{@element.timeIcon}}"/>

                                <TextView width="wrap_content" height="wrap_content" textSize="9" marginRight="4" textColor="@color/kColorSecondaryText" text="{{@element.timeText}}"/>

                            </LinearLayout>
                        </FrameLayout>

                        <LinearLayout width="wrap_content" height="wrap_content" orientation="vertical" marginTop="12" marginLeft="10">

                            <TextView width="wrap_content" height="wrap_content" textSize="18" marginLeft="2" textFontWeight="500" textColor="@color/kColorPriceGreen" text="{{@element.earnings}}"/>

                            <TextView width="wrap_content" height="wrap_content" textSize="12" marginLeft="2" marginTop="2" textColor="@color/kColorPrimaryText" text="{{@element.cycle}}"/>

                        </LinearLayout>

                    </FrameLayout>

                </Cell>

            </For>

            <View width="16" height="1"/>
        </LinearLayout>

    </Scroller>

  <LinearLayout width="match_parent" height="0" weight="1" orientation="vertical">
    
    <SliderView visibility="{{@data.home.dataVis}}" width="match_parent" height="match_parent" autoScroll="false" direction="horizontal" scrollbars="false" onSelected="@event.home.bannerIndexChange(@eventParams)" currentIndex="@data.home.currentIndex" swipeEnable="true" disableCache="true">

        <For data="@data.home.sliderData" itemKey="element" typeKey="type">

            <!-- 活期  -->
            <Cell width="match_parent" height="match_parent" type="1">

                <Scroller height="match_parent" orientation="vertical" width="match_parent">
                    <!-- 活期 -->
                    <LinearLayout width="375" height="wrap_content" orientation="vertical" paddingLeft="16" paddingRight="16" background="@color/kColorContentBackground">

                        <!-- 申购数量 -->
                        <LinearLayout width="match_parent" height="wrap_content" orientation="vertical">

                            <!-- 标题 -->
                            <TextView marginTop="32" width="wrap_content" height="22" text="{{@i18n/n_asset_subscribe_number}}" textFontWeight="500" textColor="@color/kColorPrimaryText" textSize="16"/>

                            <!-- 输入框 -->
                            <LinearLayout width="match_parent" height="52" marginTop="8" orientation="horizontal" background="@color/KBaseColorInputBackground" cornerRadius="4" borderColor="{{@element.subBorderColor}}" borderWidth="1" gravity="centerVertical">

                                <EditText width="0" weight="1" height="match_parent" inputType="numberDecimal" textColorHint="@color/baseColorThreeLevelText" paddingLeft="12" paddingRight="8" textFontWeight="500" textSize="20" textColor="@color/kColorPrimaryText" onReturn="@event.flexible.subOnReturn()" onTextChange="@event.flexible.subTextChange(@eventParams, '{{@element.index}}')" onFocusChange="@event.flexible.subFocusChange(@eventParams)" requestFocus="{{@element.subOnFocus}}" hint="{{@element.subHint}}" text="{{@element.subInput}}" textFilter="@dataParser.trade_parser(22,8,@eventParams)"/>

                                <TextView width="wrap_content" height="wrap_content" text="{{@data.home.currency}}" marginLeft="8" textColor="@color/KBaseColorSecondaryText" textFontWeight="500" textSize="14"/>

                                <View width="1" height="18" marginLeft="8" marginRight="8" background="@color/KBaseColorPrimarySeparator"/>

                                <TextView width="wrap_content" height="wrap_content" textFontWeight="500" textSize="14" text="{{@i18n/n_otc_max}}" onClick="@event.flexible.maxSub('{{@element.index}}')" marginRight="12" textColor="@color/kColorPrimaryText"/>

                            </LinearLayout>

                            <!-- 错误提示 -->
                            <TextView height="wrap_content" text="{{@element.subErrorStr}}" textColor="@color/KBaseInputInvalidTipColor" textSize="12" visibility="{{@element.subErrorVis}}" marginTop="8" width="wrap_content"/>

                            <!-- 可用余额 -->
                            <LinearLayout width="match_parent" marginTop="8" gravity="centerVertical" height="16">

                                <TextView width="wrap_content" height="wrap_content" textFontWeight="400" textSize="12" text="{{@i18n/n_otc_available}}" textColor="@color/KBaseColorSecondaryText"/>

                                <TextView height="wrap_content" marginLeft="2" text="{{@element.balanceText}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" width="wrap_content"/>

                                <TextView height="wrap_content" marginLeft="3" text="{{@data.home.currency}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" width="wrap_content"/>

                                <!-- 买币 -->
                                <TextView width="wrap_content" height="wrap_content" textFontWeight="400" textSize="12" text="{{@i18n/n_shark_fin_buy_coin}}" onClick="@event.home.buyCoin()" marginLeft="8" textColor="@color/kColorMajorTheme100"/>

                                <View width="1" height="12" marginLeft="4" marginRight="4" background="@color/KBaseColorPrimarySeparator"/>

                                <!-- 划转 -->
                                <TextView width="wrap_content" height="wrap_content" textFontWeight="400" textSize="12" onClick="@event.home.transfer()" text="{{@i18n/n_balance_contract_transfer}}" textColor="@color/kColorMajorTheme100"/>

                            </LinearLayout>


                             <!-- 资金来源 -->
                            <LinearLayout width="match_parent" marginTop="8" height="16" gravity="centerVertical" visibility="{{@element.assetSourceDisplay}}">

                            <!-- 资产来源popup-->
                            <View width="0" height="0" popArrowDirection="down" popArrowHeight="0" popArrowWidth="0" popShowMode="anchor" popCancelOnTouchOutside="true" popBackgroundDimmed="false" popShow="{{@data.assetSource.popShow}}" popTemplate="assetSourcePopup.xml"/>

                                <!-- 资金来源标题 -->
                                <TextView height="wrap_content" width="wrap_content" textFontWeight="400" textSize="12" text="{{@element.assetSourceTitle}}" textColor="@color/kColorThreeLevelText"/>

                                <TextView onClick="@event.fund.openDialog('{{@element.index}}')" weight="1" width="0" height="wrap_content" textFontWeight="400" textSize="12" text="{{@element.assetSourceDesc}}" marginLeft="2" gravity="right" textColor="@color/kColorPrimaryText"/>

                                <ImageView height="10" width="10" marginLeft="4" src="@drawable/edge_engine_simple_earn_right_arrow"/>
                            </LinearLayout>

                            <!-- 剩余可投 -->
                            <LinearLayout width="match_parent" marginTop="8" height="16">
                                <!-- 剩余可投标题 -->
                                <BottomLineTextView height="wrap_content" width="wrap_content" textFontWeight="400" textSize="12" text="{{@element.availableQuotaTitle}}" onClick="@event.fixed.availableQuotaClicked({{@element.index}})" textColor="@color/kColorThreeLevelText"/>

                                <TextView weight="1" width="0" height="wrap_content" textFontWeight="400" textSize="12" text="{{@element.availableQuotaText}}" marginLeft="2" gravity="right" textColor="@color/kColorPrimaryText"/>

                                <TextView height="wrap_content" text=" {{@data.home.currency}}" textColor="@color/kColorPrimaryText" textSize="12" textFontWeight="400" width="wrap_content"/>
                            </LinearLayout>

                            <!-- 预估每日收益 -->
                            <LinearLayout visibility="{{@element.profitEveryDay | gone}}" width="match_parent" marginTop="8" height="16">

                                <TextView width="wrap_content" height="wrap_content" textFontWeight="400" textSize="12" text="{{@i18n/n_simple_earn_estimated_profit_everyday}}" textColor="@color/KBaseColorSecondaryText"/>

                                <TextView weight="1" width="0" height="wrap_content" textFontWeight="400" textSize="12" text="{{@element.estimatedProfit}}" marginLeft="2" gravity="right" textColor="@color/kColorPrimaryText"/>
                            </LinearLayout>

                            <!-- 加息券 -->
                            <LinearLayout visibility="{{@element.couponVis}}" width="match_parent" marginTop="8" gravity="centerVertical" height="wrap_content">

                                <!-- 加息券标题 -->
                                <BottomLineTextView onClick="@event.coupon.openDialog('{{@element.index}}')" width="wrap_content" height="wrap_content" textFontWeight="400" textSize="12" text="{{@i18n/n_coupon_type_saving}}" textColor="@color/KBaseColorSecondaryText"/>

                                <FrameLayout onClick="@event.couponList.openDialog('{{@element.index}}')" weight="1" width="0" height="wrap_content">

                                    <LinearLayout visibility="{{@element.couponMidVis}}" gravity="centerVertical" width="match_parent" orientation="vertical" height="wrap_content">

                                        <TextView width="match_parent" height="wrap_content" textFontWeight="400" textSize="12" text="{{@element.couponTextUp}}" gravity="right" textColor="@color/kSecurityMiddleLevelColor"/>

                                        <TextView width="match_parent" height="wrap_content" textFontWeight="400" textSize="10" text="{{@element.couponTextDown}}" visibility="{{@element.couponTextDownVis}}" gravity="right" textColor="@color/baseColorThreeLevelText"/>
                                    </LinearLayout>

                                    <!-- 展示暂无可用/不使用加息券 -->
                                    <TextView width="match_parent" height="wrap_content" textFontWeight="400" textSize="12" text="{{@element.couponTextMid}}" visibility="{{@element.couponTextMidVis}}" gravity="right|centerVertical" textColor="@color/baseColorThreeLevelText"/>

                                </FrameLayout>
                                <!-- 加息券最右侧箭头 10-->
                                <ImageView width="10" height="10" visibility="{{@element.couponRightImgVis}}" marginLeft="4" src="@drawable/edge_engine_simple_earn_right_arrow"/>
                            </LinearLayout>

                        </LinearLayout>

                        <!-- 阶梯年化 -->
                        <LinearLayout visibility="{{@element.ladderVis}}" width="match_parent" height="wrap_content" orientation="vertical">

                            <!-- 阶梯年化 标题 -->
                            <LinearLayout onClick="@event.ladder.openDialog('{{@element.index}}')" marginTop="32" gravity="centerVertical" orientation="horizontal" width="match_parent" height="wrap_content">

                                <TextView weight="1" width="0" height="wrap_content" text="{{@i18n/n_simple_earn_ladder_title}}" textFontWeight="500" textColor="@color/kColorPrimaryText" textSize="16"/>

                                <ImageView width="10" height="10" visibility="visible" marginLeft="4" src="@drawable/edge_engine_simple_earn_right_arrow"/>
                            </LinearLayout>

                            <LinearLayout paddingTop="4" paddingBottom="4" width="match_parent" height="wrap_content" marginTop="8" borderWidth="0.5" borderColor="@color/KBaseColorPrimarySeparator" cornerRadius="4" orientation="vertical">

                                <For data="@element.ladderList" width="match_parent" height="wrap_content" onRefresh="@event.refresh()" orientation="vertical" itemKey="item" typeKey="type">

                                    <Cell type="1" width="match_parent" height="wrap_content">

                                        <LinearLayout paddingRight="14" paddingLeft="12" width="match_parent" height="36" gravity="centerVertical" orientation="horizontal">

                                            <!-- 阶梯 -->
                                            <TextView width="wrap_content" height="wrap_content" textFontWeight="400" textSize="12" text="{{@i18n/n_simple_earn_ladder}}" textColor="{{@item.ladderColor}}"/>

                                            <!-- index -->
                                            <TextView width="12" height="12" textFontWeight="400" marginLeft="4" marginRight="4" textSize="10" borderWidth="0.5" gravity="center" cornerRadius="6" borderColor="{{@item.ladderColor}}" text="{{@item.indexText}}" textColor="{{@item.ladderColor}}"/>

                                            <!-- 阶梯年化信息 0 ~ 1000 \ > 1000 -->
                                            <TextView width="wrap_content" height="wrap_content" textFontWeight="400" textSize="12" text="{{@item.content}}" textColor="{{@item.ladderColor}}"/>

                                            <TextView weight="1" width="0" gravity="right" height="wrap_content" textFontWeight="400" textSize="12" text="{{@item.rateText}}" textColor="{{@item.ladderColor}}"/>

                                            <ImageView marginLeft="8" width="14" height="14" src="{{@item.ladderImg}}"/>

                                        </LinearLayout>

                                    </Cell>

                                    <Cell type="2" width="match_parent" height="wrap_content">

                                        <LinearLayout onClick="@event.flexible.clickLaunchpool('{{@element.launchPoolActivityId}}')" paddingRight="14" paddingLeft="12" width="match_parent" height="36" gravity="centerVertical" orientation="horizontal">

                                            <TextView weight="1" width="wrap_content" height="wrap_content" textFontWeight="400" textSize="12" text="{{@i18n/n_simple_earn_get_launchpool}}" textColor="@color/kColorPrimaryText"/>

                                            <ImageView width="10" height="10" src="@drawable/edge_engine_simple_earn_right_arrow"/>

                                        </LinearLayout>

                                    </Cell>

                                </For>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- 收益概览 -->
                        <LinearLayout visibility="{{@element.profitVis}}" width="match_parent" height="wrap_content" orientation="vertical">

                            <!-- 标题 -->
                            <LinearLayout onClick="@event.profitOverview.openDialog()" width="wrap_content" height="wrap_content" marginTop="32" gravity="centerVertical" orientation="horizontal">

                                <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_simple_earn_profit_overview}}" textFontWeight="500" textColor="@color/kColorPrimaryText" textSize="16"/>

                                <ImageView width="12" height="12" visibility="visible" marginLeft="4" src="@drawable/icon_ask"/>

                            </LinearLayout>

                            <!-- 表格内容 -->
                            <LinearLayout paddingTop="4" paddingBottom="4" width="match_parent" height="wrap_content" marginTop="8" borderWidth="0.5" borderColor="@color/KBaseColorPrimarySeparator" cornerRadius="4" orientation="vertical">
                                <For data="@element.profitList" height="wrap_content" width="match_parent" itemKey="item" typeKey="type">

                                    <Cell type="1" width="match_parent" height="wrap_content">

                                        <LinearLayout paddingRight="14" paddingLeft="12" width="match_parent" height="36" gravity="centerVertical" orientation="horizontal">

                                            <TextView weight="1" width="0" height="wrap_content" textFontWeight="500" textSize="12" text="{{@item.title}}" textColor="@color/kColorPrimaryText"/>

                                            <TextView visibility="{{@item.perkVis}}" background="#12109E65" cornerRadius="4" marginLeft="4" marginRight="4" gravity="center" textSize="10" textColor="#109E65" text="{{@i18n/n_simple_earn_platform_subsidy}}" width="48" height="14"/>

                                            <TextView width="wrap_content" height="wrap_content" textFontWeight="500" textSize="12" text="{{@item.rate}}" textColor="@color/kColorPriceGreen"/>

                                        </LinearLayout>

                                    </Cell>

                                     <Cell type="2" width="match_parent" height="wrap_content">

                                        <LinearLayout onClick="@event.flexible.clickLaunchpool('{{@element.launchPoolActivityId}}')" paddingRight="14" paddingLeft="12" width="match_parent" height="36" gravity="centerVertical" orientation="horizontal">

                                            <TextView weight="1" width="wrap_content" height="wrap_content" textFontWeight="500" textSize="12" text="{{@i18n/n_simple_earn_get_launchpool}}" textColor="@color/kColorPrimaryText"/>

                                            <ImageView width="10" height="10" src="@drawable/edge_engine_simple_earn_right_arrow"/>

                                        </LinearLayout>

                                    </Cell>

                                </For>
                            </LinearLayout>

                        </LinearLayout>

                        <TextView width="wrap_content" height="wrap_content" marginTop="8" textFontWeight="400" textSize="10" visibility="{{@element.profitHintVis}}" text="{{@element.profitHint}}" textColor="@color/kColorThreeLevelText"/>

                        <!-- 申购概览 -->
                        <LinearLayout width="match_parent" height="wrap_content" orientation="vertical">

                            <!-- 标题 -->
                            <TextView marginTop="32" width="wrap_content" height="wrap_content" text="{{@i18n/n_simple_earn_subscribe_overview}}" textFontWeight="500" textColor="@color/kColorPrimaryText" textSize="16"/>

                            <TextView maxLines="0" ellipsis="false" text="{{@element.subOverviewTitle}}" marginTop="8" marginBottom="4" lineSpacing="2" width="match_parent" height="wrap_content" textFontWeight="400" textSize="12" textColor="@color/KBaseColorSecondaryText"/>

                            <!-- 申购日 -->
                            <LinearLayout gravity="centerVertical" width="match_parent" height="24" orientation="horizontal">

                                <LinearLayout gravity="centerHorizontal" marginRight="8" orientation="vertical" width="5" height="match_parent">

                                    <View visibility="invisible" background="@color/KBaseColorPrimarySeparator" width="1" height="0" weight="1"/>

                                    <View cornerRadius="4" background="@color/baseColorThreeLevelText" width="5" height="5"/>

                                    <View visibility="visible" background="@color/KBaseColorPrimarySeparator" width="1" height="0" weight="1"/>

                                </LinearLayout>

                                <TextView text="{{@element.subOverviewT1}}" weight="1" width="0" height="wrap_content" textFontWeight="400" textSize="12" textColor="@color/KBaseColorSecondaryText"/>

                                <TextView text="{{@element.subOverviewC1}}" width="wrap_content" height="wrap_content" textFontWeight="400" textSize="12" textColor="@color/kColorPrimaryText"/>

                            </LinearLayout>

                            <!-- 起息日 -->
                            <LinearLayout gravity="centerVertical" width="match_parent" height="24" orientation="horizontal">

                                <LinearLayout gravity="centerHorizontal" marginRight="8" orientation="vertical" width="5" height="match_parent">

                                    <View visibility="visible" background="@color/KBaseColorPrimarySeparator" width="1" height="0" weight="1"/>

                                    <View cornerRadius="4" background="@color/baseColorThreeLevelText" width="5" height="5"/>

                                    <View visibility="visible" background="@color/KBaseColorPrimarySeparator" width="1" height="0" weight="1"/>

                                </LinearLayout>

                                <TextView text="{{@element.subOverviewT2}}" weight="1" width="0" height="wrap_content" textFontWeight="400" textSize="12" textColor="@color/KBaseColorSecondaryText"/>

                                <TextView text="{{@element.subOverviewC2}}" width="wrap_content" height="wrap_content" textFontWeight="400" textSize="12" textColor="@color/kColorPrimaryText"/>

                            </LinearLayout>

                            <!-- 到账日 -->
                            <LinearLayout gravity="centerVertical" width="match_parent" height="24" orientation="horizontal">

                                <LinearLayout gravity="centerHorizontal" marginRight="8" orientation="vertical" width="5" height="match_parent">

                                    <View visibility="visible" background="@color/KBaseColorPrimarySeparator" width="1" height="0" weight="1"/>

                                    <View cornerRadius="4" background="@color/baseColorThreeLevelText" width="5" height="5"/>

                                    <View visibility="invisible" background="@color/KBaseColorPrimarySeparator" width="1" height="0" weight="1"/>

                                </LinearLayout>

                                <!-- 首次收益发放 -->
                                <TextView visibility="{{@element.subOverviewT3Vis}}" text="{{@element.subOverviewT3}}" weight="1" width="0" height="wrap_content" textFontWeight="400" textSize="12" textColor="@color/KBaseColorSecondaryText"/>

                                <!-- 到账日 -->
                                <BottomLineTextView onClick="@event.receiptdialog.openCurrentDialog({{@element.index}}, {{@element.redeemLimitPerDay}})" visibility="{{@element.subOverviewT3ULVis}}" height="wrap_content" weight="1" width="0" textFontWeight="400" textSize="12" text="{{@i18n/n_mining_refund_time_label}}" textColor="@color/KBaseColorSecondaryText"/>

                                <TextView text="{{@element.subOverviewC3}}" width="wrap_content" height="wrap_content" textFontWeight="400" textSize="12" textColor="@color/kColorPrimaryText"/>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- 自动申购 -->
                        <LinearLayout marginTop="16" gravity="centerVertical" width="match_parent" height="54" orientation="horizontal">

                                <!-- 自动申购 标题 -->
                                <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_earn_auto_subscribe}}" textFontWeight="500" textColor="@color/kColorPrimaryText" textSize="16"/>
                                
                                <FrameLayout width="wrap_content" height="match_parent">

                                    <ImageView layout_gravity="centerVertical" width="12" height="12" marginLeft="4" src="@drawable/edge_engine_shark_info_icon"/>

                                    <!-- 自动申购 提示热区 -->
                                    <View layout_gravity="centerVertical" onClick="@event.autoearn.openDialog()" width="40" height="32"/>
                                
                                </FrameLayout>

                                <View height="0" width="0" weight="1"/>
                                
                                <FrameLayout gravity="centerVertical" width="wrap_content" height="match_parent">

                                    <!-- 自动申购开关 -->
                                    <ImageView layout_gravity="centerVertical" width="28" height="16" src="{{@element.autoEarnSwitcher}}"/>

                                    <!-- 开关热区 -->
                                    <View layout_gravity="centerVertical" onClick="@event.flexible.clickAutoEarnSwitch('{{@element.index}}')" width="35" height="32"/>

                                </FrameLayout>    

                        </LinearLayout>

                    </LinearLayout>
                </Scroller>

            </Cell>

            <!--  定期 -->
            <Cell width="match_parent" height="match_parent" onClick="@event.fixed.clearFocus({{@element.index}})" type="2">

                <Scroller height="match_parent" orientation="vertical" width="match_parent">

                  <LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content" orientation="vertical" paddingLeft="16" paddingRight="16" width="match_parent">

                        <TextView height="22" marginTop="32" text="{{@i18n/n_asset_subscribe_number}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="16" width="wrap_content"/>

                        <LinearLayout background="@color/KBaseColorInputBackground" gravity="centerVertical" height="52" marginTop="8" cornerRadius="4" borderColor="{{@element.subBorderColor}}" borderWidth="1" orientation="horizontal" width="match_parent">

                            <EditText height="match_parent" hint="{{@element.subHint}}" inputType="numberDecimal" onReturn="@event.fixed.subOnReturn(@eventParams,{{@element.index}})" onTextChange="@event.fixed.subTextChange(@eventParams,{{@element.index}})" onFocusChange="@event.fixed.subFocusChange(@eventParams,{{@element.index}})" paddingLeft="12" paddingRight="8" requestFocus="{{@element.subOnFocus}}" text="{{@element.subInput}}" textFilter="@dataParser.trade_parser(22,8,@eventParams)" textColor="@color/kColorPrimaryText" textColorHint="@color/baseColorThreeLevelText" textFontWeight="500" textSize="20" weight="1" width="0"/>

                            <TextView height="wrap_content" text="{{@data.home.currency}}" textColor="@color/kColorThreeLevelText" textFontWeight="500" textSize="14" width="wrap_content"/>

                            <View background="@color/KBaseColorPrimarySeparator" height="18" marginLeft="8" marginRight="8" width="1"/>

                            <TextView height="wrap_content" marginRight="12" onClick="@event.fixed.maxSub({{@element.index}})" text="{{@i18n/n_otc_max}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
                    </LinearLayout>

                        <TextView height="wrap_content" text="{{@element.subErrorStr}}" textColor="@color/KBaseInputInvalidTipColor" textSize="12" visibility="{{@element.subErrorVis|gone}}" marginTop="8" width="wrap_content"/>
                        <!-- 可用余额 -->
                        <LinearLayout gravity="centerVertical" height="16" marginTop="8" width="match_parent">

                            <TextView height="wrap_content" text="{{@i18n/n_otc_available}}" textColor="@color/kColorThreeLevelText" textSize="12" width="wrap_content" maxWidth="150" autoSizeTextType="uniform" autoSizeMinTextSize="10" maxLines="0"/>

                            <TextView height="wrap_content" marginLeft="2" text="{{@data.home.balanceText}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" width="wrap_content"/>

                            <TextView height="wrap_content" marginLeft="3" text="{{@data.home.currency}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" width="wrap_content"/>

                            <TextView height="wrap_content" marginLeft="8" onClick="@event.home.buyCoin()" text="{{@i18n/n_shark_fin_buy_coin}}" textColor="@color/kColorMajorTheme100" textSize="12" width="wrap_content"/>

                            <View background="@color/KBaseColorPrimarySeparator" height="12" marginLeft="4" marginRight="4" width="1"/>

                            <TextView height="wrap_content" onClick="@event.home.transfer()" text="{{@i18n/n_balance_contract_transfer}}" textColor="@color/kColorMajorTheme100" textSize="12" width="wrap_content"/>

                        </LinearLayout>
                        <!-- 剩余可投 -->
                        <LinearLayout gravity="centerVertical" height="16" marginTop="8" width="match_parent">

                            <BottomLineTextView height="wrap_content" width="wrap_content" textSize="12" text="{{@element.availableQuotaTitle}}" onClick="@event.fixed.availableQuotaClicked({{@element.index}})" textColor="@color/kColorThreeLevelText"/>

                            <TextView gravity="right" height="wrap_content" marginLeft="2" text="{{@element.availableQuotaText}}" textColor="@color/kColorPrimaryText" textSize="12" textFontWeight="400" weight="1" width="0"/>

                            <TextView height="wrap_content" text=" {{@data.home.currency}}" textColor="@color/kColorPrimaryText" textSize="12" textFontWeight="400" width="wrap_content"/>
                        </LinearLayout>
                        <!-- 预估收益 -->
                        <LinearLayout gravity="centerVertical" height="16" marginTop="8" width="match_parent">

                            <TextView height="wrap_content" text="{{@i18n/n_double_coin_estimated_profit}}" textColor="@color/kColorThreeLevelText" textSize="12" width="wrap_content"/>

                            <TextView gravity="right" height="wrap_content" marginLeft="2" text="{{@element.profit}}" textColor="@color/kColorPrimaryText" textSize="12" textFontWeight="400" weight="1" width="0"/>

                            <TextView height="wrap_content" text=" {{@data.home.currency}}" textColor="@color/kColorPrimaryText" textSize="12" textFontWeight="400" width="wrap_content"/>
                        </LinearLayout>

                        <!-- 加息券 -->
                        <LinearLayout visibility="{{@element.couponVis}}" width="match_parent" marginTop="8" gravity="centerVertical" height="wrap_content">

                            <!-- 加息券标题 -->
                            <BottomLineTextView onClick="@event.coupon.openDialog('{{@element.index}}')" width="wrap_content" height="wrap_content" textFontWeight="400" textSize="12" text="{{@i18n/n_coupon_type_saving}}" textColor="@color/KBaseColorSecondaryText"/>

                            <FrameLayout onClick="@event.couponList.openDialog('{{@element.index}}')" weight="1" width="0" height="wrap_content">

                                <LinearLayout visibility="{{@element.couponMidVis}}" gravity="centerVertical" width="match_parent" orientation="vertical" height="wrap_content">

                                    <TextView width="match_parent" height="wrap_content" textFontWeight="400" textSize="12" text="{{@element.couponTextUp}}" gravity="right" textColor="@color/color_FE8731"/>

                                    <TextView width="match_parent" height="wrap_content" textFontWeight="400" textSize="10" text="{{@element.couponTextDown}}" visibility="{{@element.couponTextDownVis}}" gravity="right" textColor="@color/baseColorThreeLevelText"/>
                                </LinearLayout>

                                <!-- 展示暂无可用/不使用加息券 -->
                                <TextView width="match_parent" height="wrap_content" textFontWeight="400" textSize="12" text="{{@element.couponTextMid}}" visibility="{{@element.couponTextMidVis}}" gravity="right|centerVertical" textColor="@color/baseColorThreeLevelText"/>

                            </FrameLayout>
                            <!-- 加息券最右侧箭头 10-->
                            <ImageView width="10" height="10" visibility="{{@element.couponRightImgVis}}" marginLeft="4" src="@drawable/edge_engine_simple_earn_right_arrow"/>
                        </LinearLayout>

                        <TextView height="22" marginTop="32" text="{{@i18n/n_simple_earn_subscribe_overview}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="16" width="wrap_content"/>

                        <TextView marginTop="8" height="wrap_content" text="{{@element.overview}}" textColor="@color/kColorThreeLevelText" textSize="12" maxLines="0" lineSpacing="2" width="match_parent"/>

                        <FrameLayout width="match_parent" height="wrap_content">

                            <View marginLeft="2" marginTop="18" width="1" height="{{@element.timeAxisHeight}}" background="@color/KBaseColorPrimarySeparator"/>

                            <LinearLayout width="match_parent" height="wrap_content" orientation="vertical">

                                <For data="@element.timeAxisData" itemKey="itemxb" typeKey="type">

                                    <Cell height="wrap_content" width="match_parent" type="normal">

                                        <LinearLayout gravity="centerVertical" height="16" marginTop="8" width="match_parent">

                                            <View width="5" height="5" cornerRadius="2.5" marginRight="8" background="@color/baseColorThreeLevelText"/>

                                            <TextView height="wrap_content" text="{{@itemxb.title}}" textColor="@color/kColorThreeLevelText" textSize="12" width="wrap_content"/>

                                            <BottomLineTextView onClick="@event.receiptdialog.openRegularDialog({{@element.index}}, {{@element.receiptDelayDays}})" height="wrap_content" width="wrap_content" textSize="12" text="{{@itemxb.lineTitle}}" textColor="@color/kColorThreeLevelText"/>

                                            <TextView gravity="right" height="wrap_content" text="{{@itemxb.date}}" textColor="@color/kColorPrimaryText" textSize="12" textFontWeight="400" width="0" weight="1"/>
                                        </LinearLayout>
                                    </Cell>
                                </For>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </Scroller>
            </Cell>
        </For>
    </SliderView>
  </LinearLayout>
    <!-- 立即申购 -->
    <LinearLayout width="match_parent" height="wrap_content" orientation="vertical">

        <View height="0.5" width="match_parent" background="@color/KBaseColorPrimarySeparator"/>

        <LinearLayout marginLeft="8" marginRight="16" marginTop="7.5" height="wrap_content" orientation="horizontal" gravity="centerVertical" width="match_parent">
            <ImageView width="26" height="30" paddingLeft="8" paddingRight="4" paddingTop="8" paddingBottom="8" src="{{@data.deposit.huobiAgreeImage}}" onClick="@event.deposit.huobiSelected()"/>

            <RichTextView width="0" weight="1" height="wrap_content" richText="{{@data.deposit.richTextData}}" textColor="@color/kColorPrimaryText" textSize="12"/>
        </LinearLayout>

        <TextView background="{{@data.deposit.btnColor}}" cornerRadius="4" gravity="center" height="44" marginBottom="16" marginLeft="16" marginRight="16" marginTop="4" onClick="@event.deposit.submitClicked()" text="{{@data.home.submitText}}" textColor="{{@data.deposit.btnTitleColor}}" textFontWeight="600" textSize="14" width="match_parent"/>

    <!-- 确认申购信息 弹窗-->
    <View width="0" height="0" onPopDismiss="@event.dialog.closeConfirmDialog()" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="bottom" popShow="{{@data.dialog.showConfirmDialog}}" popShowMode="modal" popTemplate="confirmDialog.xml"/>
    <View width="0" height="0" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="bottom" popShow="{{@data.dialog.showAvailableQuota}}" popShowMode="modal" popTemplate="availableQuota.xml"/>

    <!-- 加息券弹窗 -->
    <View width="0" height="0" onPopDismiss="@event.coupon.closeDialog()" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="bottom" popShow="{{@data.coupon.isShow | false}}" popShowMode="modal" popTemplate="couponDialog.xml"/>
    <!-- 加息列表 -->
    <View width="0" height="0" onPopDismiss="@event.couponList.closeDialog()" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="bottom" popShow="{{@data.couponList.isShow}}" popShowMode="modal" popTemplate="couponListDialog.xml"/>

    <!-- 到账日弹窗 -->
    <View width="0" height="0" onPopDismiss="@event.receiptdialog.closeDialog()" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="center" popShow="{{@data.receiptdialog.isShow | false}}" popShowMode="modal" popTemplate="receiptDialog.xml"/>

    <View width="0" height="0" onPopDismiss="@event.ladder.closeDialog()" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="bottom" popShow="{{@data.ladder.isShow | false}}" popShowMode="modal" popTemplate="ladderDialog.xml"/>

    <View width="0" height="0" onPopDismiss="@event.profitOverview.closeDialog()" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="bottom" popShow="{{@data.profitOverview.isShow | false}}" popShowMode="modal" popTemplate="profitOverviewDialog.xml"/>

    <View width="0" height="0" onPopDismiss="@event.autoearn.closeDialog()" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="center" popShow="{{@data.autoearn.isShow | false}}" popShowMode="modal" popTemplate="autoEarnDialog.xml"/>

    <!-- USDD 活期申购提示弹窗-->
      <View width="0" height="0" onPopDismiss="@event.purchaseTip.closeDialog()" popBackgroundDimmed="true" popCancelOnTouchOutside="false" popModalPositon="center" popShow="{{@data.purchaseTip.isShow | false}}" popShowMode="modal" popTemplate="purchaseTipDialog.xml"/>

    <View width="0" height="0" onPopDismiss="@event.kycDialog.closeDialog()" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="center" popShow="{{@data.kycDialog.isShow | false}}" popShowMode="modal" popTemplate="kycDialog.xml"/>

    <View width="0" height="0" onPopDismiss="@event.fund.closeDialog()" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="bottom" popShow="{{@data.fund.isShow | false}}" popShowMode="modal" popTemplate="fundDialog.xml"/>
  </LinearLayout>
</LinearLayout>
