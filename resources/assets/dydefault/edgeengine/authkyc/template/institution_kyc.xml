<LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content"
    orientation="vertical" width="match_parent">
    <!--名称-->
    <TextView height="wrap_content" marginBottom="13" marginLeft="16" marginTop="12.5"
        text="{{@data.orgName}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="20"
        width="wrap_content" />
    <!--手机-->
    <TextView height="wrap_content" marginBottom="12.5" marginLeft="16"
        text="{{@i18n/n_kyc_inst_phone}} {{@data.phone}}" textColor="@color/kColorPrimaryText" textFontWeight="400"
        textSize="12" visibility="{{@data.phoneVisible | gone}}" width="wrap_content" />
    <!--邮箱-->
    <TextView height="wrap_content" marginBottom="12.5" marginLeft="16"
        text="{{@i18n/n_kyc_inst_mail}} {{@data.email}}" textColor="@color/kColorPrimaryText" textFontWeight="400"
        textSize="12" visibility="{{@data.emailVisible | gone}}" width="wrap_content" />
    <!--注册地区-->
    <TextView height="wrap_content" marginBottom="12.5" marginLeft="16"
        text="{{@i18n/n_kyc_inst_area}} {{@data.countryName}}" textColor="@color/kColorPrimaryText"
        textFontWeight="400" textSize="12" width="wrap_content" />
    <!--分割线-->
    <View background="@color/KBaseColorDeepestBackground" height="8" width="match_parent" />
    <!--L1基础权限-->
    <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal"
        visibility="{{@data.L1Visible | gone}}" width="match_parent">

        <TextView gravity="start" height="wrap_content" marginBottom="14" marginLeft="16"
            marginTop="14" text="{{@data.L1Title}}" textColor="@color/kColorPrimaryText" textFontWeight="500"
            textSize="14" weight="1" width="0" />

        <ImageView height="14" marginLeft="3" src="{{@data.L1stateIcon}}"
            visibility="{{@data.L1stateIconVisible | gone}}" width="14" />

        <!--已通过/认证失败-->
        <FrameLayout width="wrap_content" height="wrap_content" marginRight="16" background="{{@data.L1GoAuthBorder}}">
            <FrameLayout width="wrap_content" height="wrap_content" background="@color/KBaseColorContentBackground" marginLeft="1" marginTop="1" marginRight="1" marginBottom="1">
                <TextView height="wrap_content" width="wrap_content" onClick="@event.kycAuthTap()"
                    text="{{@data.L1StateTitle}}" textColor="{{@data.L1stateColor}}" textFontWeight="500" textSize="12"
                    marginLeft="5" marginTop="2" marginBottom="2" marginRight="5"/>
            </FrameLayout>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout background="#0FF95A50" gravity="centerVertical" height="wrap_content" onClick="@event.kycAuthTap()"
        orientation="horizontal" visibility="{{@data.L1ErrVisible | gone}}" width="match_parent">
        <!--用于超强的警示信息提示、错误提示 -->
        <TextView gravity="start" height="wrap_content" marginBottom="10" marginLeft="16"
            marginTop="10" text="{{@data.L1ErrMsg}}" textColor="@color/kColorPrimaryText" textFontWeight="400"
            textSize="12" weight="1" width="0" />
        <!--重新认证-->
        <TextView height="wrap_content" marginBottom="10" marginRight="2" marginTop="10"
            text="{{@i18n/n_fiat_recertification}}" textColor="@color/kColorPrimaryText" textFontWeight="500"
            textSize="12" width="wrap_content" />
        <ImageView height="10" marginRight="16" src="@drawable/ic_kyc_go_auth" width="10" />
    </LinearLayout>

    <LinearLayout gravity="centerVertical" height="wrap_content" marginBottom="3" marginTop="10"
        orientation="horizontal" visibility="{{@data.L1TextConfig0Visible | gone}}"
        width="match_parent">
        <!--买币额度-->
        <TextView gravity="start" height="wrap_content" marginLeft="16"
            text="{{@data.L1TextConfig0Title}}" textColor="@color/kColorSecondaryText" textFontWeight="400"
            textSize="12" weight="1" width="0" />
        <!--累计不超过157 USD-->
        <TextView height="wrap_content" marginRight="16" text="{{@data.L1TextConfig0Value}}"
            textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" width="wrap_content" />
    </LinearLayout>

    <LinearLayout gravity="centerVertical" height="wrap_content" marginBottom="3" marginTop="3"
