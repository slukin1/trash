<!-- 多米尼克认证页面模版，列表无法支持，暂时弃用 -->
<LinearLayout background="@color/KBaseColorDeepestBackground" height="wrap_content"
    orientation="vertical" width="match_parent">


    <LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content" orientation="vertical"
        paddingEnd="16" paddingStart="16" width="match_parent">

        <!--  头部身份证  -->
        <LinearLayout borderColor="@color/kColorThreeLevelText" borderWidth="1" cornerRadius="8"
            height="wrap_content" orientation="vertical" width="match_parent">

            <!--   证件头部     -->
            <LinearLayout gravity="centerVertical" height="wrap_content" marginStart="14"
                orientation="horizontal" paddingTop="14" width="match_parent">

                <!-- 多米尼克国徽 -->
                <ImageView height="24" src="@color/kColorPrimaryText" width="38" />

                <LinearLayout height="wrap_content" marginStart="8" orientation="vertical"
                    width="wrap_content">

                    <TextView height="wrap_content" text="COMMONWEALTH OF DOMINICA"
                        textColor="@color/kColorPrimaryText" textFontWeight="700" textSize="12"
                        width="wrap_content" />


                    <!-- 多米尼克身份证编号 -->
                    <LinearLayout height="wrap_content" orientation="horizontal"
                        width="wrap_content">

                        <TextView height="wrap_content" text="IDENTIFICATION CARD NO."
                            textColor="@color/KDominicaCardTextColor" textFontWeight="500"
                            textSize="10" width="wrap_content" />

                        <TextView height="wrap_content" text="SRT0679J"
                            textColor="@color/kColorPrimaryText" textFontWeight="900" textSize="10"
                            width="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--  证件信息部分  -->
            <LinearLayout background="#E6F5EA" height="wrap_content" marginTop="14"
                orientation="vertical" paddingBottom="20" paddingStart="14" paddingTop="10"
                width="match_parent">

                <!--  姓名  -->
                <LinearLayout height="wrap_content" orientation="horizontal" width="match_parent">

                    <TextView height="wrap_content" text="NAME"
                        textColor="@color/KDominicaCardTextColor" textFontWeight="500" textSize="8"
                        width="wrap_content" />

                    <TextView height="wrap_content" marginStart="4" text="Alonzo Atkinson"
                        textColor="@color/kColorPrimaryText" textFontWeight="700" textSize="12"
                        width="wrap_content" />

                </LinearLayout>

                <!--  性别、年龄、登记  -->
                <LinearLayout height="wrap_content" marginTop="16" orientation="horizontal"
                    width="match_parent">

                    <TextView height="wrap_content" text="DOB"
                        textColor="@color/KDominicaCardTextColor" textFontWeight="500" textSize="8"
                        width="wrap_content" />

                    <TextView height="wrap_content" marginStart="4" text="MAR 24 1978"
                        textColor="@color/kColorPrimaryText" textFontWeight="700" textSize="10"
                        width="wrap_content" />

                    <!--  性别   -->
                    <TextView height="wrap_content" marginStart="16" text="SEX"
                        textColor="@color/KDominicaCardTextColor" textFontWeight="500" textSize="8"
                        width="wrap_content" />

                    <TextView height="wrap_content" marginStart="4" text="M"
                        textColor="@color/kColorPrimaryText" textFontWeight="700" textSize="10"
                        width="wrap_content" />

                    <!--  等级   -->
                    <TextView height="wrap_content" marginStart="16" text="等级"
                        textColor="@color/KDominicaCardTextColor" textFontWeight="500" textSize="8"
                        width="wrap_content" />

                    <TextView height="wrap_content" marginStart="4" text="入门"
                        textColor="@color/kColorPrimaryText" textFontWeight="700" textSize="10"
                        width="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!--  多米克数字公民介绍  -->
        <LinearLayout height="wrap_content" orientation="vertical" paddingBottom="16" paddingTop="12" width="match_parent">

            <TextView height="wrap_content" text="多米尼克元宇宙数字公民" textColor="@color/kColorPrimaryText"
                textFontWeight="500" textSize="14" width="wrap_content" />

            <!--  介绍富文本组件  -->
            <KycExpandTextView height="wrap_content" marginTop="4"
                textContent="介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 介绍富文本组件 "
                width="match_parent" />

        </LinearLayout>

    </LinearLayout>


    <!--  L1等级（体验权益）  -->
    <LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content"
        marginTop="8" orientation="vertical" paddingBottom="16" paddingEnd="16" paddingStart="16"
        width="match_parent">

        <!--  体验权益  -->
        <LinearLayout gravity="centerVertical" height="48" orientation="horizontal"
            width="match_parent">

            <TextView height="wrap_content" text="体验权益" textColor="@color/kColorPrimaryText"
                textFontWeight="500" textSize="14" weight="1" width="wrap_content" />

            <!--  认证状态(已认证)  -->
            <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal"
                visibility="{{@data.statusSucceedL1 | gone}}" width="wrap_content">

                <ImageView height="15" src="@drawable/ic_check_selected_kyc" width="15" />

                <TextView height="wrap_content" marginStart="4" text="已通过"
                    textColor="@color/KBaseRiskTextColorLow" textFontWeight="500" textSize="12"
                    weight="1" width="wrap_content" />

            </LinearLayout>

            <!--  认证状态(待认证)  -->
            <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal"
                visibility="{{@data.statusSucceedL1 | visible}}" width="wrap_content">

                <TextView height="wrap_content" marginStart="4" text="去认证"
                    textColor="@color/kColorMajorTheme100" textFontWeight="500" textSize="12"
                    weight="1" width="wrap_content" />
                <ImageView height="12" src="@drawable/ic_kyc_arrow_right" width="12" />

            </LinearLayout>

        </LinearLayout>

        <!--  提币额度  -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal"
            width="match_parent">

            <TextView height="wrap_content" text="提币额度" textColor="@color/kColorThreeLevelText"
                textFontWeight="400" textSize="12" weight="1" width="wrap_content" />

            <TextView gravity="right" height="wrap_content" text="24小时限额 5 BTC "
                textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" weight="1"
                width="wrap_content" />

        </LinearLayout>

        <!--  更多权益待运营确认  -->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="8"
            orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" text="更多权益待运营确认" textColor="@color/kColorThreeLevelText"
                textFontWeight="400" textSize="12" weight="1" width="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <!--  L2等级（正式权益）  -->
    <LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content"
        marginTop="8" orientation="vertical" paddingBottom="16" paddingEnd="16" paddingStart="16"
        width="match_parent">

        <!--  正式权益  -->
        <LinearLayout gravity="centerVertical" height="48" orientation="horizontal"
            width="match_parent">

            <TextView height="wrap_content" text="正式权益" textColor="@color/kColorPrimaryText"
                textFontWeight="500" textSize="14" weight="1" width="wrap_content" />

            <!--  认证状态(已认证)  -->
            <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal"
                visibility="{{@data.statusSucceedL1 | gone}}" width="wrap_content">

                <ImageView height="15" src="@drawable/ic_check_selected_kyc" width="15" />

                <TextView height="wrap_content" marginStart="4" text="已通过"
                    textColor="@color/KBaseRiskTextColorLow" textFontWeight="500" textSize="12"
                    weight="1" width="wrap_content" />

            </LinearLayout>

            <!--  认证状态(待认证)  -->
            <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal"
                visibility="{{@data.statusSucceedL1 | visible}}" width="wrap_content">

                <TextView height="wrap_content" marginStart="4" text="去认证"
                    textColor="@color/kColorMajorTheme100" textFontWeight="500" textSize="12"
                    weight="1" width="wrap_content" />
                <ImageView height="12" src="@drawable/ic_kyc_arrow_right" width="12" />

            </LinearLayout>

        </LinearLayout>

        <!--  提币额度  -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal"
            width="match_parent">

            <TextView height="wrap_content" text="提币额度" textColor="@color/kColorThreeLevelText"
                textFontWeight="400" textSize="12" weight="1" width="wrap_content" />

            <TextView gravity="right" height="wrap_content" text="24小时限额 200 BTC"
                textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" weight="1"
                width="wrap_content" />

        </LinearLayout>

        <!--  更多权益待运营确认  -->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="8"
            orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" text="更多权益待运营确认" textColor="@color/kColorThreeLevelText"
                textFontWeight="400" textSize="12" weight="1" width="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <!--  L3等级（高级权益）  -->
    <LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content"
        marginTop="8" orientation="vertical" paddingBottom="16" paddingEnd="16" paddingStart="16"
        width="match_parent">

        <!--  高级权益  -->
        <LinearLayout gravity="centerVertical" height="48" orientation="horizontal"
            width="match_parent">

            <TextView height="wrap_content" text="高级权益" textColor="@color/kColorPrimaryText"
                textFontWeight="500" textSize="14" weight="1" width="wrap_content" />

            <!--  认证状态(已认证)  -->
            <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal"
                visibility="{{@data.statusSucceedL1 | gone}}" width="wrap_content">

                <ImageView height="15" src="@drawable/ic_check_selected_kyc" width="15" />

                <TextView height="wrap_content" marginStart="4" text="已通过"
                    textColor="@color/KBaseRiskTextColorLow" textFontWeight="500" textSize="12"
                    weight="1" width="wrap_content" />

            </LinearLayout>

            <!--  认证状态(待认证)  -->
            <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal"
                visibility="{{@data.statusSucceedL1 | visible}}" width="wrap_content">

                <TextView height="wrap_content" marginStart="4" text="去认证"
                    textColor="@color/kColorMajorTheme100" textFontWeight="500" textSize="12"
                    weight="1" width="wrap_content" />
                <ImageView height="12" src="@drawable/ic_kyc_arrow_right" width="12" />

            </LinearLayout>

        </LinearLayout>

        <!--  提币额度  -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal"
            width="match_parent">

            <TextView height="wrap_content" text="提币额度" textColor="@color/kColorThreeLevelText"
                textFontWeight="400" textSize="12" weight="1" width="wrap_content" />

            <TextView gravity="right" height="wrap_content" text="24小时限额 3000 BTC"
                textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" weight="1"
                width="wrap_content" />

        </LinearLayout>

        <!--  高阶权益  -->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="8"
            orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" text="高阶权益" textColor="@color/kColorThreeLevelText"
                textFontWeight="400" textSize="12" weight="1" width="wrap_content" />

            <TextView gravity="right" height="wrap_content" text="邮寄实体卡"
                textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" weight="1"
                width="wrap_content" />

        </LinearLayout>

        <!--  更多权益待运营确认  -->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="8"
            orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" text="更多权益待运营确认" textColor="@color/kColorThreeLevelText"
                textFontWeight="400" textSize="12" weight="1" width="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
