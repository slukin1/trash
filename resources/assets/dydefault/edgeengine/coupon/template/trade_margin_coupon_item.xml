<FrameLayout
    width="375"
    height="wrap_content"
    onClick="@event.onSelected({{@initData.couponId}},{{@initData.isSelected}})">
    <FrameLayout
        width="343"
        height="wrap_content"
        marginTop="8"
        marginLeft="16"
        background="{{@initData.borderColor}}">
        <LinearLayout
            width="341"
            height="wrap_content"
            marginLeft="1"
            marginTop="1"
            marginBottom="1"
            orientation="vertical"
            background="@color/KBaseColorContentBackground">
            <LinearLayout
                width="match_parent"
                height="wrap_content"
                marginLeft="11"
                marginRight="11"
                marginTop="9"
                marginBottom="8.5"
                orientation="horizontal">
                <LinearLayout
                    width="195"
                    height="wrap_content"
                    marginTop="2"
                    orientation="vertical">
                    <TextView
                        width="wrap_content"
                        height="wrap_content"
                        text="{{@i18n/n_coupon_return_item_title}}"
                        textSize="14"
                        maxLines="4"
                        textWeight="500"
                        textColor="@color/kColorPrimaryText"/>
                    <TextView
                        width="wrap_content"
                        height="wrap_content"
                        textSize="10"
                        maxLines="10"
                        marginTop="6"
                        text="{{@initData.validAtTitle}}"
                        textWeight="500"
                        textColor="@color/kColorSecondaryText"/>
                </LinearLayout>
                <LinearLayout
                    width="80"
                    marginLeft="16"
                    height="wrap_content"
                    orientation="vertical">
                    <TextView
                        width="80"
                        height="wrap_content"
                        text="{{@initData.amount}}U"
                        textSize="24"
                        gravity="center"
                        autoSizeMinTextSize="10"
                        autoSizeTextType="uniform"
                        textWeight="500"
                        textColor="@color/kColorPrimaryText"/>
                    <TextView
                        width="80"
                        height="wrap_content"
                        textSize="10"
                        maxLines="10"
                        marginTop="4"
                        gravity="center"
                        text="{{@initData.meetConditionTitle}}"
                        textWeight="400"
                        textColor="@color/kColorSecondaryText"/>
                </LinearLayout>
                <ImageView
                    width="12"
                    height="12"
                    marginTop="2"
                    marginLeft="16"
                    src="{{@initData.selectedImage}}"/>
            </LinearLayout>
            <ImageView
                width="341"
                height="2"
                scaleType="fitXY"
                src="@drawable/trade_margin_coupon_item_divider"/>

            <LinearLayout
                width="wrap_content"
                height="wrap_content"
                marginLeft="11"
                marginTop="8.5"
                marginBottom="12"
                onClick="@event.onExpanded({{@initData.couponId}},{{@initData.isExpand}})"
                orientation="horizontal">
                <TextView
                    width="291"
                    height="wrap_content"
                    textSize="10"
                    text="{{@initData.rules}}"
                    textWeight="400"
                    maxLines="{{@initData.maxLines}}"
                    textColor="@color/kColorSecondaryText"/>
                <ImageView
                    width="12"
                    height="12"
                    marginLeft="16"
                    src="{{@initData.arrowImageName}}"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>

