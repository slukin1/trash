<LinearLayout height="match_parent" orientation="vertical" width="match_parent" background="#FFFFFF">
    <Scroller width="match_parent" height="0" weight="1" orientation="vertical">
        <LinearLayout width="match_parent" height="wrap_content" paddingStart="16" paddingEnd="16"
            paddingTop="16" orientation="vertical">
            <TextView width="wrap_content" height="wrap_content" text="{{@i18n/network_base_info}}"
                textColor="#000000" textSize="12" textWeight="400" />
            <!-- 设备信息 -->
            <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal"
                marginTop="20">
                <TextView width="80" height="wrap_content" text="{{@i18n/network_device_info}}"
                    textColor="#8A8A8E" textSize="12" textWeight="400" />
                <LinearLayout width="wrap_content" height="wrap_content" orientation="vertical"
                    marginStart="4">
                    <TextView width="wrap_content" height="wrap_content"
                        text="{{@i18n/network_phone_model }}：{{@data.phone}}" textColor="#000000"
                        textSize="12" textWeight="400" />
                    <TextView width="wrap_content" height="wrap_content"
                        text="{{@i18n/network_app_version}}：{{@data.version}}" textColor="#000000"
                        textSize="12" textWeight="400" />
                    <TextView width="wrap_content" height="wrap_content"
                        text="{{@i18n/network_device_identifier}}：{{@data.vtoken}}"
                        textColor="#000000" textSize="12" textWeight="400" />
                </LinearLayout>
            </LinearLayout>
            <!-- 操作系统 -->
            <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal"
                marginTop="20">
                <TextView width="80" height="wrap_content" text="{{@i18n/network_operating_system}}"
                    textColor="#8A8A8E" textSize="12" textWeight="400" />
                <LinearLayout width="wrap_content" height="wrap_content" orientation="vertical"
                    marginStart="4">
                    <TextView width="wrap_content" height="wrap_content" text="{{@data.osVersion}}"
                        textColor="#000000" textSize="12" textWeight="400" />
                </LinearLayout>
            </LinearLayout>
            <!-- 屏幕尺寸 -->
            <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal"
                marginTop="20">
                <TextView width="80" height="wrap_content" text="{{@i18n/network_screen_size}}"
                    textColor="#8A8A8E" textSize="12" textWeight="400" />
                <LinearLayout width="wrap_content" height="wrap_content" orientation="vertical"
                    marginStart="4">
                    <TextView width="wrap_content" height="wrap_content"
                        text="{{@i18n/network_screen_width}} {{@data.screenWidth}}"
                        textColor="#000000" textSize="12" textWeight="400" />
                    <TextView width="wrap_content" height="wrap_content"
                        text="{{@i18n/network_screen_height}} {{@data.screenHeight}}"
                        textColor="#000000" textSize="12" textWeight="400" />
                </LinearLayout>
            </LinearLayout>
            <!-- 语种 -->
            <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal"
                marginTop="20">
                <TextView width="80" height="wrap_content" text="{{@i18n/network_language}}"
                    textColor="#8A8A8E" textSize="12" textWeight="400" />
                <LinearLayout width="wrap_content" height="wrap_content" orientation="vertical"
                    marginStart="4">
                    <TextView width="wrap_content" height="wrap_content" text="{{@data.language}}"
                        textColor="#000000" textSize="12" textWeight="400" />
                </LinearLayout>
            </LinearLayout>
            <!-- 地区信息 -->
            <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal"
                marginTop="20" visibility="{{@data.regionVisible | gone}}">
                <TextView width="80" height="wrap_content"
                    text="{{@i18n/n_login_country_or_region}}"
                    textColor="#8A8A8E" textSize="12" textWeight="400" />
                <LinearLayout width="wrap_content" height="wrap_content" orientation="vertical"
                    marginStart="4">
                    <TextView width="wrap_content" height="wrap_content" text="{{@data.region}}"
                        textColor="#000000" textSize="12" textWeight="400" />
                </LinearLayout>
            </LinearLayout>
            <View width="match_parent" height="0.5" marginTop="20" marginStart="16" marginEnd="16"
                background="#DDDDDD" />
            <TextView width="wrap_content" height="wrap_content" text="{{@i18n/network_info}}"
                textColor="#000000" textSize="12" textWeight="400" marginTop="20" />
            <!-- IP -->
            <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal"
                marginTop="20">
                <TextView width="80" height="wrap_content" text="{{@i18n/network_user_ip}}"
                    textColor="#8A8A8E" textSize="12" textWeight="400" />
                <LinearLayout width="wrap_content" height="wrap_content" orientation="vertical"
                    marginStart="4">
                    <TextView width="wrap_content" height="wrap_content" text="{{@data.ip}}"
                        textColor="#000000" textSize="12" textWeight="400" />
                </LinearLayout>
            </LinearLayout>
            <!-- 网络运营商 -->
            <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal"
                marginTop="20">
                <TextView width="80" height="wrap_content" text="{{@i18n/network_operators}}"
                    textColor="#8A8A8E" textSize="12" textWeight="400" />
                <LinearLayout width="wrap_content" height="wrap_content" orientation="vertical"
                    marginStart="4">
                    <TextView width="wrap_content" height="wrap_content" text="{{@data.operator}}"
                        textColor="#000000" textSize="12" textWeight="400" />
                </LinearLayout>
            </LinearLayout>
            <!-- DNS 地址 -->
            <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal"
                marginTop="20">
                <TextView width="80" height="wrap_content" text="{{@i18n/network_address}}"
                    textColor="#8A8A8E" textSize="12" textWeight="400" />
                <LinearLayout width="wrap_content" height="wrap_content" orientation="vertical"
                    marginStart="4">
                    <TextView width="wrap_content" height="wrap_content"
                        text="{{@i18n/network_dns_address}}：{{@data.dns}}" textColor="#000000"
                        textSize="12" textWeight="400" />
                </LinearLayout>
            </LinearLayout>
            <!-- VPN 信息 -->
            <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal"
                marginTop="20">
                <TextView width="80" height="wrap_content" text="VPN"
                    textColor="#8A8A8E" textSize="12" textWeight="400" />
                <LinearLayout width="wrap_content" height="wrap_content" orientation="vertical"
                    marginStart="4">
                    <TextView width="wrap_content" height="wrap_content"
                        text="{{@data.vpn}}" textColor="#000000"
                        textSize="12" textWeight="400" />
                </LinearLayout>
            </LinearLayout>
            <!-- 网络链接状态信息 -->
            <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal"
                marginTop="20">
                <TextView width="80" height="wrap_content" text="{{@i18n/network_permission}}"
                    textColor="#8A8A8E" textSize="12" textWeight="400" />
                <LinearLayout width="wrap_content" height="wrap_content" orientation="vertical"
                    marginStart="4">
                    <TextView width="wrap_content" height="wrap_content"
                        text="{{@data.networkType}}" textColor="#000000" textSize="12"
                        textWeight="400" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal"
                marginTop="20">
                <TextView width="80" height="wrap_content" text="{{@i18n/network_connections}}"
                    textColor="#8A8A8E" textSize="12" textWeight="400" />
                <LinearLayout width="wrap_content" height="wrap_content" orientation="vertical"
                    marginStart="4">
                    <TextView width="wrap_content" height="wrap_content"
                        text="B：{{@data.bPing | @i18n/network_connecting}}" textColor="#000000"
                        textSize="12" textWeight="400" />
                    <TextView width="wrap_content" height="wrap_content"
                        text="D：{{@data.dPing | @i18n/network_connecting}}" textColor="#000000"
                        textSize="12" textWeight="400" />    
                    <TextView width="wrap_content" height="wrap_content"
                        text="G：{{@data.gPing | @i18n/network_connecting}}" textColor="#000000"
                        textSize="12" textWeight="400" />
                    <TextView width="wrap_content" height="wrap_content"
                        text="H：{{@data.hPing | @i18n/network_connecting}}" textColor="#000000"
                        textSize="12" textWeight="400" />
                    <TextView width="wrap_content" height="wrap_content"
                        text="O：{{@data.oPing | @i18n/network_connecting}}" textColor="#000000"
                        textSize="12" textWeight="400" />
                    <TextView width="wrap_content" height="wrap_content"
                        text="{{@data.spot | @i18n/network_connecting}}" textColor="#000000"
                        textSize="12" textWeight="400" />
                    <TextView width="wrap_content" height="wrap_content"
                        text="{{@data.web | @i18n/network_connecting}}" textColor="#000000"
                        textSize="12" textWeight="400" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </Scroller>
</LinearLayout>
