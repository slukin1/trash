<FrameLayout
    width="match_parent"
    height="match_parent"
    orientation="vertical"
    gravity="top">
  <!-- 列表 -->
  <LinearLayout
      width="match_parent"
      height="match_parent"
      orientation="vertical"
      gravity="top"
      visibility="{{@data.klineHistory.listVisible | invisible}}">
    <RecyclerView
        width="match_parent"
        height="match_parent"
        gravity="centerVertical"
        orientation="horizontal"
        onRefresh="@event.klineHistory.onRefresh()"
        refreshStatus="{{@data.klineHistory.refreshStatus}}"
        data="@data.klineHistory.normalHistory"
        itemKey="element"
        typeKey="type">

      <Header
          width="match_parent"
          height="wrap_content">
        <LinearLayout
            width="match_parent"
            height="wrap_content"
            grivaty="centerHorizontal"
            orientation="vertical">

          <LinearLayout
              width="match_parent"
              height="50"
              gravity="centerVertical"
              orientation="horizontal"
              paddingLeft="16"
              paddingRight="16"
              visibility="{{@data.klineHistory.showOftenHistory | gone}}">
            <TextView
                text="{{@i18n/n_kline_browsing_history_often}}"
                width="match_parent"
                height="wrap_content"
                textSize="15"
                textColor="@color/kColorPrimaryText" />
          </LinearLayout>

          <LinearLayout
              width="match_parent"
              height="wrap_content"
              grivaty="centerHorizontal"
              orientation="vertical">
            <For
                data="@data.klineHistory.oftenHistory"
                itemKey="element"
                typeKey="type">
              <Cell
                  width="match_parent"
                  height="wrap_content"
                  type="often">
                <LinearLayout
                    width="match_parent"
                    height="48"
                    gravity="centerVertical"
                    orientation="horizontal"
                    paddingLeft="16"
                    paddingRight="16"
                    onClick="@event.klineHistory.clickedOftenHistoryItem({{@element.index}})">
                  <ImageView
                      width="24"
                      height="24"
                      src="{{@element.iconUrl}}"
                      placeholder="@drawable/balances_currencyicon"
                      cornerRadius="12" />
                  <View width="8" />
                  <!--币种名称-->
                  <LinearLayout
                      width="100"
                      height="24"
                      gravity="centerVertical"
                      orientation="horizontal">
                    <TextView
                        text="{{@element.baseCurrency}}"
                        width="wrap_content"
                        height="wrap_content"
                        textSize="14"
                        textColor="@color/kColorPrimaryText"
                        gravity="left"
                        maxWidth="71"
                        autoSizeMinTextSize="10"
                        autoSizeTextType="uniform"
                        textFontWeight="500" />
                    <TextView
                        text="/{{@element.quoteCurrency}}"
                        width="wrap_content"
                        height="wrap_content"
                        textSize="10"
                        textColor="@color/KBaseColorSecondaryText"
                        gravity="left"
                        marginTop="1"
                        textFontWeight="500" />
                    <View weight="1" />
                  </LinearLayout>
                  <View width="7" />
                  <!--价格+涨跌幅-->
                  <LinearLayout
                      width="105"
                      height="wrap_content"
                      gravity="left | center"
                      orientation="vertical">
                    <TextView
                        text="{{@element.price}}"
                        width="match_parent"
                        height="wrap_content"
                        textSize="14"
                        textColor="@color/kColorPrimaryText"
                        gravity="left"
                        autoSizeMinTextSize="10"
                        autoSizeTextType="uniform"
                        textFontWeight="500" />
                    <TextView
                        text="{{@element.upAndDownText}}"
                        width="match_parent"
                        height="wrap_content"
                        textSize="10"
                        textColor="{{@element.upAndDownColor}}"
                        gravity="left"
                        textFontWeight="500" />
                  </LinearLayout>
                  <View weight="1" />
                  <!--自选-->
                  <LinearLayout
                      width="wrap_content"
                      height="24"
                      gravity="centerVertical"
                      orientation="horizontal"
                      onClick="@event.klineHistory.clickedOftenHistoryItemFavorite({{@element.index}})">
                    <LinearLayout
                        width="wrap_content"
                        height="wrap_content"
                        gravity="centerVertical"
                        orientation="horizontal"
                        visibility="{{@element.showUnAddFavorite | gone}}"
                        paddingTop="6"
                        paddingBottom="6"
                        paddingLeft="7"
                        paddingRight="7"
                        cornerRadius="4"
                        borderWidth="1"
                        borderColor="@color/kColorMajorTheme100">
                      <TextView
                          text="+ {{@i18n/n_kline_favorite}}"
                          width="wrap_content"
                          height="wrap_content"
                          textSize="12"
                          textColor="@color/kColorMajorTheme100"
                          gravity="center"
                          maxWidth="74"
                          autoSizeMinTextSize="10"
                          autoSizeTextType="uniform"
                          textFontWeight="500" />
                    </LinearLayout>
                    <LinearLayout
                        width="wrap_content"
                        height="24"
                        gravity="centerVertical"
                        orientation="horizontal"
                        visibility="{{@element.showAddFavorite | gone}}"
                        paddingTop="6"
                        paddingBottom="6"
                        paddingLeft="8"
                        paddingRight="8"
                        background="@color/KBaseColorInputBackground"
                        cornerRadius="4">
                      <TextView
                          text="{{@i18n/n_kline_favorite_added}}"
                          width="wrap_content"
                          height="wrap_content"
                          textSize="12"
                          textColor="@color/kColorSecondaryText"
                          gravity="center"
                          maxWidth="74"
                          autoSizeMinTextSize="10"
                          autoSizeTextType="uniform"
                          textFontWeight="500" />
                    </LinearLayout>
                  </LinearLayout>
                </LinearLayout>
              </Cell>
            </For>
          </LinearLayout>

          <!--历史浏览-->
          <LinearLayout
              width="match_parent"
              height="58"
              gravity="top"
              orientation="horizontal"
              paddingTop="8"
              paddingLeft="16"
              paddingRight="16"
              visibility="{{@data.klineHistory.showNormalHistory | gone}}">
            <TextView
                gravity="left | center"
                text="{{@i18n/n_kline_browsing_history_normal}}"
                width="match_parent"
                height="50"
                textSize="15"
                textColor="@color/kColorPrimaryText" />
          </LinearLayout>

        </LinearLayout>
      </Header>

      <Cell
          width="match_parent"
          height="wrap_content"
          type="normal">
        <LinearLayout
            width="match_parent"
            height="48"
            gravity="centerVertical"
            orientation="horizontal"
            paddingLeft="16"
            paddingRight="16"
            onClick="@event.klineHistory.clickedNormalHistoryItem({{@element.index}})">
          <ImageView
              width="24"
              height="24"
              src="{{@element.iconUrl}}"
              background="000000"
              placeholder="@drawable/balances_currencyicon"
              cornerRadius="12" />
          <View width="8" />
          <!--币种名称-->
          <LinearLayout
              width="100"
              height="24"
              gravity="centerVertical"
              orientation="horizontal">
            <TextView
                text="{{@element.baseCurrency}}"
                width="wrap_content"
                height="wrap_content"
                textSize="14"
                textColor="@color/kColorPrimaryText"
                gravity="left"
                maxWidth="71"
                autoSizeMinTextSize="10"
                autoSizeTextType="uniform"
                textFontWeight="500" />
            <TextView
                text="/{{@element.quoteCurrency}}"
                width="wrap_content"
                height="wrap_content"
                textSize="10"
                textColor="@color/KBaseColorSecondaryText"
                gravity="left"
                marginTop="1"
                textFontWeight="500" />
            <View weight="1" />
          </LinearLayout>
          <View width="7" />
          <!--价格+涨跌幅-->
          <LinearLayout
              width="105"
              height="wrap_content"
              gravity="left | center"
              orientation="vertical">
            <TextView
                text="{{@element.price}}"
                width="match_parent"
                height="wrap_content"
                textSize="14"
                textColor="@color/kColorPrimaryText"
                gravity="left"
                autoSizeMinTextSize="10"
                autoSizeTextType="uniform"
                textFontWeight="500" />
            <TextView
                text="{{@element.upAndDownText}}"
                width="match_parent"
                height="wrap_content"
                textSize="10"
                textColor="{{@element.upAndDownColor}}"
                gravity="left"
                textFontWeight="500" />
          </LinearLayout>
          <View weight="1" />
          <!--自选-->
          <LinearLayout
              width="wrap_content"
              height="24"
              gravity="centerVertical"
              orientation="horizontal"
              onClick="@event.klineHistory.clickedNormalHistoryItemFavorite({{@element.index}})">
            <LinearLayout
                width="wrap_content"
                height="wrap_content"
                gravity="centerVertical"
                orientation="horizontal"
                visibility="{{@element.showUnAddFavorite | gone}}"
                paddingTop="6"
                paddingBottom="6"
                paddingLeft="7"
                paddingRight="7"
                cornerRadius="4"
                borderWidth="1"
                borderColor="@color/kColorMajorTheme100">
              <TextView
                  text="+ {{@i18n/n_kline_favorite}}"
                  width="wrap_content"
                  height="wrap_content"
                  textSize="12"
                  textColor="@color/kColorMajorTheme100"
                  gravity="center"
                  maxWidth="74"
                  autoSizeMinTextSize="10"
                  autoSizeTextType="uniform"
                  textFontWeight="500" />
            </LinearLayout>
            <LinearLayout
                width="wrap_content"
                height="24"
                gravity="centerVertical"
                orientation="horizontal"
                visibility="{{@element.showAddFavorite | gone}}"
                paddingTop="6"
                paddingBottom="6"
                paddingLeft="7"
                paddingRight="7"
                background="@color/KBaseColorInputBackground"
                cornerRadius="4">
              <TextView
                  text="{{@i18n/n_kline_favorite_added}}"
                  width="wrap_content"
                  height="wrap_content"
                  textSize="12"
                  textColor="@color/kColorSecondaryText"
                  gravity="center"
                  maxWidth="74"
                  autoSizeMinTextSize="10"
                  autoSizeTextType="uniform"
                  textFontWeight="500" />
            </LinearLayout>
          </LinearLayout>
        </LinearLayout>
      </Cell>

    </RecyclerView>

  </LinearLayout>
  <!-- 空样式 -->
  <LinearLayout
      width="match_parent"
      height="wrap_content"
      orientation="vertical"
      gravity="center"
      visibility="{{@data.klineHistory.emptyVisible | gone}}">
    <ImageView
        marginTop="40"
        width="60"
        height="60"
        src="@drawable/edge_engine_empty" />
    <TextView
        marginTop="8"
        width="match_parent"
        height="wrap_content"
        gravity="center"
        textSize="12"
        text="{{@i18n/n_contract_trade_no_record}}"
        textColor="@color/eBaseColorThreeLevelText" />
  </LinearLayout>
</FrameLayout>
