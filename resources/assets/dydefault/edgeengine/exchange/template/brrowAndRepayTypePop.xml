<LinearLayout
    height="wrap_content"
    width="375"
    background="@color/KBaseColorContentBackground"
    gravity="center|top"
    orientation="vertical"
    topLeftRadius="8"
    topRightRadius="8">
  <LinearLayout
      width="match_parent"
      height="44"
      paddingLeft="16"
      paddingRight="16"
      gravity="centerVertical"
      orientation="horizontal">
    <TextView
        width="wrap_content"
        height="wrap_content"
        text="{{@i18n/n_trade_margin_borrow_and_repay}}"
        textSize="16"
        textColor="@color/kColorPrimaryText"
        textFontWeight="500" />
    <View
        width="0"
        height="0"
        weight="1" />
    <LinearLayout
      width="80"
      height="match_parent"
      gravity="center|right"
      orientation="horizontal"
      onClick="@event.brrowAndRepayTypePop.popDismiss()">
      <ImageView
        width="28"
        height="28"
        src="@drawable/edge_engine_copy_trading_dialog_close" />
    </LinearLayout>
  </LinearLayout>
  <View
      width="match_parent"
      height="0.5"
      background="@color/kColorPrimarySeparator" />
  <LinearLayout
      width="match_parent"
      height="wrap_content"
      paddingTop="16"
      paddingLeft="16"
      paddingRight="16"
      paddingBottom="8"
      gravity="centerVertical"
      orientation="horizontal"> 
      <LinearLayout
          width="0"
          height="wrap_content"
          gravity="left"
          orientation="vertical"
          weight="1"> 
          <TextView 
            width="match_parent"
            height="wrap_content"
            text="{{@i18n/n_trade_margin_auto_borrow}}"
            textSize="14"
            textColor="@color/kColorPrimaryText"
            textFontWeight="500"/>
          <TextView 
            width="match_parent"
            height="wrap_content"
            text="{{@i18n/n_trade_margin_auto_borrow_desc}}"
            textSize="12"
            textColor="@color/KBaseColorSecondaryText"
            textFontWeight="400"
            maxLines="0"
            marginTop="4"/>
      </LinearLayout>
      <ImageView marginLeft="35" height="16" width="28" src="{{@data.brrowAndRepayTypePop.brrowSrc}}" onClick="@event.brrowAndRepayTypePop.switchClick('brrow')"/>
  </LinearLayout>
  <LinearLayout
      width="match_parent"
      height="wrap_content"
      paddingTop="16"
      paddingLeft="16"
      paddingRight="16"
      paddingBottom="8"
      gravity="centerVertical"
      orientation="horizontal"> 
      <LinearLayout
          width="0"
          height="wrap_content"
          gravity="left"
          orientation="vertical"
          weight="1"> 
          <TextView 
            width="match_parent"
            height="wrap_content"
            text="{{@i18n/n_trade_margin_auto_repay}}"
            textSize="14"
            textColor="@color/kColorPrimaryText"
            textFontWeight="500"/>
          <TextView 
            width="match_parent"
            height="wrap_content"
            text="{{@i18n/n_trade_margin_auto_repay_desc}}"
            textSize="12"
            textColor="@color/KBaseColorSecondaryText"
            textFontWeight="400"
            maxLines="0"
            marginTop="4"/>
      </LinearLayout>
      <ImageView marginLeft="35" height="16" width="28" src="{{@data.brrowAndRepayTypePop.repaySrc}}" onClick="@event.brrowAndRepayTypePop.switchClick('repay')"/>
  </LinearLayout>
  <LinearLayout
      width="match_parent"
      height="wrap_content"
      paddingTop="16"
      paddingLeft="16"
      paddingRight="16"
      paddingBottom="8"
      gravity="centerVertical"
      orientation="horizontal"> 
      <TextView 
        width="match_parent"
        height="wrap_content"
        text="{{@i18n/n_trade_margin_auto_not_desc}}"
        textSize="12"
        textColor="@color/KBaseColorSecondaryText"
        textFontWeight="400"
        maxLines="0"/>
  </LinearLayout>
  <View
      width="match_parent"
      height="36" />
</LinearLayout>
