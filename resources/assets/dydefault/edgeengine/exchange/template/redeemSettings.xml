<LinearLayout
    height="match_parent"
    width="match_parent"
    background="@color/kColorContentBackground"
    gravity="center|top"
    orientation="vertical">
  <LinearLayout
      height="wrap_content"
      width="match_parent"
      background="@color/kColorTipsBackground"
      gravity="top|left"
      orientation="horizontal"
      paddingTop="8"
      paddingLeft="16"
      paddingBottom="8"
      paddingRight="16">
    <ImageView
        width="12"
        height="16"
        src="@drawable/edge_engine_exchange_redeempage_exm" />
    <View width="4" />
    <TextView
        width="wrap_content"
        maxWidth="327"
        height="wrap_content"
        text="{{@i18n/n_exchange_redeem_page_desc}}"
        textSize="12"
        lineSpacing="5"
        maxLines="0"
        textColor="@color/kColorPrimaryText"
        textFontWeight="400" />
  </LinearLayout>
  <View height="12" />
  <!-- 标题+开关 -->
  <LinearLayout
      height="48"
      width="match_parent"
      gravity="center"
      orientation="horizontal"
      paddingLeft="16"
      paddingRight="16"
      onClick="@event.redeemSettings.clickedAutoRedeem()">
    <TextView
        width="wrap_content"
        height="wrap_content"
        text="{{@i18n/n_exchange_auto_redeem}}"
        textSize="14"
        maxLines="0"
        textColor="@color/kColorPrimaryText"
        textFontWeight="400" />
    <View weight="1" />
    <TextView
        width="wrap_content"
        height="wrap_content"
        text="{{@data.redeemSettings.openText}}"
        textSize="12"
        maxLines="0"
        textColor="@color/kColorThreeLevelText"
        textFontWeight="400" />
    <!-- 开关 -->
    <FrameLayout
        height="48"
        width="28"
        gravity="center"
        marginLeft="8"
        marginRight="12"
        paddingTop="16"
        paddingBottom="16"
        onClick="@event.redeemSettings.clickedSwitch()">
      <ImageView
          width="28"
          height="16"
          visibility="{{@data.redeemSettings.switchOpen|gone}}"
          src="@drawable/edge_engine_exchange_redeempage_switch_open" />
      <ImageView
          width="28"
          height="16"
          visibility="{{@data.redeemSettings.switchClose|gone}}"
          src="@drawable/edge_engine_exchange_redeempage_switch_close" />
    </FrameLayout>

    <ImageView
        height="9"
        src="@drawable/edge_engine_exchange_redeempage_arrow_right"
        width="5" />
  </LinearLayout>
</LinearLayout>
