<LinearLayout
    height="240"
    width="375"
    background="@color/KBaseColorContentBackground"
    gravity="center|top"
    orientation="vertical"
    topLeftRadius="8"
    topRightRadius="8">
  <LinearLayout
      width="match_parent"
      height="44"
      paddingLeft="16"
      paddingRight="16"
      gravity="centerVertical"
      orientation="horizontal">
    <TextView
        width="wrap_content"
        height="wrap_content"
        text="{{@i18n/n_contract_more_functions}}"
        textSize="16"
        textColor="@color/kColorPrimaryText"
        textFontWeight="500" />
    <View
        width="0"
        height="0"
        weight="1" />
    <ImageView
        width="28"
        height="28"
        onClick="@event.exchange.popDismiss()"
        src="@drawable/edge_engine_copy_trading_dialog_close" />
  </LinearLayout>
  <View
      width="match_parent"
      height="0.5"
      background="@color/kColorPrimarySeparator" />
  <View
      width="match_parent"
      height="24" />
  <LinearLayout
      width="match_parent"
      height="116"
      paddingLeft="16"
      paddingRight="16"
      gravity="centerVertical"
      orientation="horizontal">
    <GirdView
        height="match_parent"
        width="match_parent"
        data="@data.exchange.moreFunctions"
        itemKey="item"
        typeKey="cellType"
        orientation="vertical"
        mainAxisSpace="32"
        crossAxisSpace="12"
        crossAxisItemCount="4">
      <GirdCell
          cellType="1"
          width="76"
          height="42">
        <LinearLayout
            width="match_parent"
            height="match_parent"
            gravity="center|top"
            orientation="vertical"
            onClick="@event.exchange.moreFunctionItemClick({{@item.type}})">
          <ImageView
              width="24"
              height="24"
              src="{{@item.icon}}" />
          <View height="4" />
          <TextView
              height="wrap_content"
              width="wrap_content"
              maxWidth="76"
              maxLines="2"
              text="{{@item.title}}"
              gravity="center"
              textColor="@color/kColorPrimaryText"
              textSize="12"
              textWeight="400"
              autoSizeMinTextSize="10"
              autoSizeTextType="uniform">
          </TextView>
        </LinearLayout>
      </GirdCell>
    </GirdView>
  </LinearLayout>
  <View
      width="match_parent"
      height="24" />
</LinearLayout>
