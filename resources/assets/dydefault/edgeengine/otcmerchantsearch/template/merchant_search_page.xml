<!-- 商家主页搜索-->
<LinearLayout background="@color/kColorContentBackground" height="match_parent" orientation="vertical" width="match_parent">
    <!-- 导航栏 -->
    <LinearLayout gravity="center" height="44" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">
        <ImageView height="28" marginRight="8" onClick="@event.merchantSearchPage.onBackClick()" src="@drawable/otc_title_back" width="28"/>
        <LinearLayout width="0" weight="1" height="36" background="@color/baseColorInputBackground" gravity="centerVertical" cornerRadius="18" borderWidth="1" borderColor="{{@data.merchantSearchPage.borderColor}}" orientation="horizontal" marginRight="16">
            <ImageView height="28" marginLeft="8" marginRight="8" src="@drawable/otc_merchant_edit_search_icon" width="28"/>
            <EditText height="match_parent" hint="{{@i18n/n_merchant_search_hint}}" onFocusChange="@event.merchantSearchPage.focusChange(@eventParams)" onTextChange="@event.merchantSearchPage.textChange(@eventParams)" requestFocus="{{@data.merchantSearchPage.onFocus}}" text="{{@data.merchantSearchPage.searchInput}}" textColor="@color/kColorPrimaryText" textColorHint="@color/baseColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="0"/>
            <ImageView height="match_parent" onClick="@event.merchantSearchPage.onClearClick()" paddingLeft="8" paddingRight="12" scaleType="center" src="@drawable/otc_merchant_search_clear" visibility="{{@data.merchantSearchPage.inputClearButtonVisible | gone }}" width="34"/>
        </LinearLayout>

        <TextView height="wrap_content" onClick="@event.merchantSearchPage.searchMerchantClick()" text="{{@i18n/n_balance_otc_search}}" textColor="@color/kColorPrimaryText" textFontWeight="600" textSize="14" width="wrap_content"/>
    </LinearLayout>
    <FrameLayout width="match_parent" height="match_parent">
        <!-- 搜索结果列表 -->
        <RecyclerView data="@data.merchantSearchPage.datas" height="match_parent" indexKey="index" itemKey="element" orientation="vertical" paddingBottom="16" paddingLeft="16" paddingRight="16" paddingTop="16" typeKey="type" visibility="{{@data.merchantSearchPage.listVisible | invisible}}" width="match_parent">
            <Cell height="48" type="searchCell" width="match_parent">
                <LinearLayout gravity="centerVertical" height="match_parent" onClick="@event.merchantSearchPage.onClickItem({{@element.index}})" orientation="horizontal" width="match_parent">
                    <View background="{{@element.onlineColor}}" cornerRadius="2.5" height="5" width="5"/>
                    <TextView ellipsis="true" height="wrap_content" marginLeft="2" maxLines="1" text="{{@element.userName}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
                    <ImageView height="16" marginLeft="4" src="@drawable/edge_engine_trading_ad_merchant_brand_icon" visibility="{{@element.brandIconVisible | gone}}" width="16"/>
                </LinearLayout>
            </Cell>
        </RecyclerView>
        <!-- 无数据 -->
        <LinearLayout gravity="center" height="match_parent" orientation="vertical" visibility="{{@data.merchantSearchPage.emptyVisible | gone}}" width="match_parent">
            <LinearLayout gravity="top|centerHorizontal" height="wrap_content" orientation="vertical" width="match_parent">
                <ImageView height="wrap_content" src="@drawable/pro_empty" width="wrap_content"/>
                <TextView gravity="center" height="wrap_content" marginLeft="16" marginRight="16" marginTop="12" maxLines="0" text="{{@i18n/n_trade_bot_search_empty}}" textColor="@color/kColorThreeLevelText" textSize="12" width="match_parent"/>
                <View height="{{@data.merchantSearchPage.additionalViewCententY}}"/>
            </LinearLayout>
        </LinearLayout>
        <!-- 加载中 -->
        <LinearLayout gravity="center" height="match_parent" orientation="vertical" visibility="{{@data.merchantSearchPage.loadingVisible | gone}}" width="match_parent">
            <LottieView height="60" layout_gravity="center" loop="true" playStatus="@data.merchantSearchPage.loadingStatus" resource="@raw/nd_middle_bg" width="60"/>
            <View height="{{@data.merchantSearchPage.additionalViewCententY}}"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
