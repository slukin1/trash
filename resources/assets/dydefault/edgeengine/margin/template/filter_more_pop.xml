<LinearLayout
                topLeftRadius="8"
                topRightRadius="8"
                width="375"
                height="wrap_content"
                background="@color/KBaseColorContentBackground"
                orientation="vertical">
        <LinearLayout
                        width="match_parent"
                        height="28"
                        marginTop="8"
                        marginLeft="16"
                        marginRight="16"
                        gravity="centerVertical"
                        orientation="horizontal">
                <TextView
                                width="wrap_content"
                                height="wrap_content"
                                text="{{@i18n/n_order_filter_more}}"
                                textSize="16"
                                textColor="@color/kColorPrimaryText"
                                textFontWeight="500" />
                <View
                                weight="1"
                                height="0"
                                width="0" />
                <ImageView
                                width="wrap_content"
                                height="wrap_content"
                                src="@drawable/edge_engine_copy_trading_dialog_close"
                                onClick="@event.leverHistory.filterMorePopDismiss()" />
        </LinearLayout>
        <View
                        marginTop="8"
                        height="0.5"
                        background="@color/kColorPrimarySeparator"
                        width="match_parent" />
        <TextView
                        marginLeft="16"
                        marginTop="16"
                        width="wrap_content"
                        height="wrap_content"
                        text="{{@i18n/n_order_filter_time}}"
                        textSize="14"
                        textColor="@color/kColorPrimaryText"
                        textFontWeight="500" />
        <LinearLayout
                        width="match_parent"
                        height="36"
                        marginLeft="16"
                        marginRight="16"
                        marginTop="8"
                        gravity="centerVertical"
                        orientation="horizontal">
                <LinearLayout
                                cornerRadius="4"
                                width="157"
                                height="match_parent"
                                background="@color/KBaseColorInputBackground"
                                gravity="centerVertical"
                                onClick="@event.leverHistory.filterStartTime()">
                        <TextView
                                        marginLeft="10"
                                        width="wrap_content"
                                        height="wrap_content"
                                        text="{{@data.leverHistory.startTime}}"
                                        textSize="12"
                                        textColor="@color/kColorPrimaryText"
                                        textFontWeight="400" />
                </LinearLayout>
                <TextView
                                width="30"
                                weight="1"
                                text="/"
                                textSize="14"
                                textColor="@color/KBaseColorSecondaryText"
                                gravity="center"
                                textFontWeight="400" />
                <LinearLayout
                                cornerRadius="4"
                                width="wrap_content"
                                height="match_parent"
                                background="@color/KBaseColorInputBackground"
                                gravity="centerVertical"
                                onClick="@event.leverHistory.filterEndTime()">
                        <TextView
                                        width="157"
                                        height="wrap_content"
                                        marginLeft="10"
                                        text="{{@data.leverHistory.endTime}}"
                                        textSize="12"
                                        textColor="@color/kColorPrimaryText"
                                        textFontWeight="400" />
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
                        width="match_parent"
                        height="28"
                        marginLeft="16"
                        marginRight="16"
                        marginTop="8"
                        gravity="centerVertical"
                        orientation="horizontal">
                <For
                                data="@data.leverHistory.filterTimes"
                                itemKey="item">
                        <Cell
                                        type="normal"
                                        width="60"
                                        height="28"
                                        marginRight="12">
                                <LinearLayout
                                                cornerRadius="4"
                                                width="match_parent"
                                                height="match_parent"
                                                background="{{@item.timeBackColor}}"
                                                onClick="@event.leverHistory.filterTime({{@item.tag}})">
                                        <TextView
                                                        width="match_parent"
                                                        height="match_parent"
                                                        text="{{@item.title}}"
                                                        textSize="12"
                                                        autoSizeMinTextSize="8"
                                                        maxLines="2"
                                                        gravity="center"
                                                        textColor="{{@item.titleColor}}"
                                                        textFontWeight="400" />
                                </LinearLayout>
                        </Cell>
                </For>
        </LinearLayout>
        <TextView
                        marginLeft="16"
                        marginTop="20"
                        marginRight="16"
                        width="match_parent"
                        height="wrap_content"
                        text="{{@i18n/n_margin_displays_four_months}}"
                        textSize="12"
                        maxLines="0"
                        textColor="@color/KBaseColorSecondaryText"
                        textFontWeight="400" />
        <TextView
                        marginLeft="16"
                        marginTop="20"
                        width="wrap_content"
                        height="wrap_content"
                        text="{{@i18n/n_mining_type}}"
                        textSize="14"
                        textColor="@color/kColorPrimaryText"
                        textFontWeight="500" />
        <GirdView
                        crossAxisItemCount="3"
                        crossAxisSpace="12"
                        mainAxisSpace="12"
                        data="@data.leverHistory.filterTypes"
                        height="{{@data.leverHistory.typeHeight}}"
                        itemKey="item"
                        marginTop="8"
                        marginLeft="16"
                        marginRight="16"
                        orientation="vertical"
                        typeKey="type"
                        width="match_parent">
                <GirdCell
                                type="normal"
                                height="36"
                                width="106">
                        <LinearLayout
                                        background="{{@item.backColor}}"
                                        cornerRadius="4"
                                        gravity="centerVertical"
                                        height="36"
                                        onClick="@event.leverHistory.filterType({{@item.index}})"
                                        orientation="horizontal"
                                        width="106">
                                <TextView
                                                autoSizeMinTextSize="10"
                                                autoSizeTextType="uniform"
                                                height="wrap_content"
                                                marginLeft="6"
                                                text="{{@item.title}}"
                                                textColor="{{@item.titleColor}}"
                                                textFontWeight="400"
                                                textSize="12"
                                                gravity="center"
                                                width="match_parent" />
                        </LinearLayout>
                </GirdCell>
        </GirdView>
        <LinearLayout
                        width="343"
                        marginLeft="16"
                        marginRight="16"
                        marginTop="16"
                        marginBottom="16"
                        gravity="center"
                        height="44">
                <LinearLayout
                                background="@color/KBaseColorInputBackground"
                                cornerRadius="4"
                                width="167"
                                gravity="center"
                                height="match_parent"
                                onClick="@event.leverHistory.filterReset()">
                        <TextView
                                        text="{{@i18n/n_otc_order_filter_reset}}"
                                        textColor="@color/kColorSecondaryButtonText"
                                        textSize="14"
                                        height="wrap_content"
                                        width="match_parent"
                                        gravity="center"
                                        textFontWeight="500" />
                </LinearLayout>
                <View
                                weight="1"
                                height="0"
                                width="0" />
                <LinearLayout
                                background="@color/kColorMajorTheme100"
                                cornerRadius="4"
                                width="167"
                                gravity="center"
                                height="match_parent"
                                onClick="@event.leverHistory.filterSure()">
                        <TextView
                                        text="{{@i18n/n_sure}}"
                                        textColor="@color/KBaseTextColor"
                                        textSize="14"
                                        height="wrap_content"
                                        width="match_parent"
                                        gravity="center"
                                        textFontWeight="500" />
                </LinearLayout>
        </LinearLayout>

</LinearLayout>
