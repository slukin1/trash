<LinearLayout
        topLeftRadius="8"
        topRightRadius="8"
        width="375"
        height="wrap_content"
        background="@color/KBaseColorContentBackground"
        orientation="vertical">

    <FrameLayout
            width="match_parent"
            height="44">
        <LinearLayout
                width="match_parent"
                height="44"
                gravity="centerVertical"
                orientation="horizontal">
            <TextView
                    width="wrap_content"
                    height="wrap_content"
                    marginStart="16"
                    text="{{@i18n/n_exchange_timing_order_confirm}}"
                    textSize="16"
                    textColor="@color/kColorPrimaryText"
                    textFontWeight="500" />
            <View
                    width="0"
                    height="0"
                    weight="1" />
            <ImageView
                    width="wrap_content"
                    height="wrap_content"
                    marginRight="16"
                    onClick="@event.deposit.popConfirmClose()"
                    src="@drawable/edge_engine_copy_trading_dialog_close" />
        </LinearLayout>
        <View
                layout_gravity="bottom"
                width="match_parent"
                height="0.5"
                background="@color/KBaseColorPrimarySeparator" />
    </FrameLayout>
    <LinearLayout
            marginBottom="8"
            width="match_parent"
            height="wrap_content"
            background="@color/KAssetTopHeaderContentBackground"
            orientation="horizontal">
        <ImageView
                width="12"
                height="16"
                marginTop="8"
                marginLeft="16"
                src="@drawable/edge_engine_sharkfin_pop_tips" />
        <TextView
                marginLeft="4"
                marginRight="16"
                marginTop="8"
                marginBottom="8"
                width="0"
                weight="1"
                height="wrap_content"
                text="{{@i18n/n_shark_fin_pop_tips_1}}"
                textSize="12"
                textFontWeight="400"
                textColor="@color/kColorPrimaryText"
                gravity="left"
                maxLines="0"/>
    </LinearLayout>
    <For
            data="@data.deposit.confirmlist"
            itemKey="item">
        <Cell
                type="num"
                width="match_parent"
                height="44">
            <LinearLayout
                    marginLeft="16"
                    marginRight="16"
                    width="match_parent"
                    height="match_parent"
                    gravity="centerVertical"
                    orientation="vertical">
                <LinearLayout
                        width="match_parent"
                        height="wrap_content"
                        gravity="centerVertical"
                        orientation="horizontal">
                    <TextView
                            weight="1"
                            width="0"
                            height="wrap_content"
                            text="{{@item.name}}"
                            textSize="14"
                            textFontWeight="400"
                            textColor="@color/kColorThreeLevelText" />
                    <TextView
                            width="wrap_content"
                            height="wrap_content"
                            text="{{@item.value}}"
                            textSize="14"
                            textFontWeight="400"
                            textColor="@color/kColorPrimaryText"
                            gravity="right" />
                </LinearLayout>
                <TextView
                        width="match_parent"
                        height="wrap_content"
                        text="{{@item.state | }}"
                        textSize="12"
                        textFontWeight="400"
                        gravity="right"
                        textColor="@color/kColorThreeLevelText" />
            </LinearLayout>
        </Cell>
        <Cell
                type="normal"
                width="match_parent"
                height="28">
            <LinearLayout
                    marginLeft="16"
                    marginRight="16"
                    width="match_parent"
                    height="match_parent"
                    gravity="centerVertical"
                    orientation="horizontal">
                <TextView
                        weight="1"
                        width="0"
                        height="wrap_content"
                        text="{{@item.name}}"
                        textSize="14"
                        textFontWeight="400"
                        textColor="@color/kColorThreeLevelText" />
                <TextView
                        marginLeft="4"
                        width="wrap_content"
                        height="wrap_content"
                        text="{{@item.state | }}"
                        textSize="14"
                        textFontWeight="400"
                        textColor="{{@item.stateColor}}" />
                <TextView
                        width="wrap_content"
                        height="wrap_content"
                        text="{{@item.value}}"
                        textSize="14"
                        textFontWeight="400"
                        textColor="@color/kColorPrimaryText"
                        gravity="right" />
            </LinearLayout>
        </Cell>
    </For>

    <LinearLayout
            marginLeft="8"
            marginRight="16"
            marginTop="12"
            height="wrap_content"
            orientation="horizontal"
            gravity="left"
            width="match_parent">
        <ImageView
                width="30"
                height="30"
                paddingLeft="8"
                paddingRight="4"
                paddingTop="12"
                src="{{@data.deposit.huobiAgreeImage}}"
                onClick="@event.deposit.huobiSelected()" />
        <TextView
                paddingTop="12"
                width="0"
                weight="1"
                height="wrap_content"
                gravity="left"
                text="{{@i18n/n_shark_fin_user_agreement_change_1}}"
                textColor="@color/kColorPrimaryText"
                textSize="14"
                textFontWeight="400"
                maxLines="0"
                onClick="@event.deposit.huobilink()" />
    </LinearLayout>

    <TextView
            width="match_parent"
            height="44"
            marginLeft="16"
            marginRight="16"
            marginTop="16"
            marginBottom="40"
            cornerRadius="4"
            textColor="@color/KBaseTextColor"
            background="{{@data.deposit.confirmBtnColor}}"
            onClick="@event.deposit.popSuccessOpen()"
            gravity="center"
            textSize="14"
            textFontWeight="500"
            text="{{@i18n/n_otc_balance_trade_deal_confirm}}" />
</LinearLayout>
