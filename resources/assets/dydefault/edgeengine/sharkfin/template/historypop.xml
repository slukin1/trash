<LinearLayout
		width="375"
		height="wrap_content"
		orientation="vertical"
		topLeftRadius="8"
		topRightRadius="8"
		background="@color/KBaseColorContentBackground">

	<!-- tab 区域 -->
	<FrameLayout
			width="match_parent"
			marginLeft="16"
			marginRight="16"
			height="44">

		<TextView
				width="wrap_content"
				height="match_parent"
				gravity="center"
				textSize="16"
				textFontWeight="500"
				textColor="@color/kColorPrimaryText"
				text="{{@data.history.poplistData.title}}" />

		<ImageView
				width="20"
				height="20"
				src="@drawable/edge_engine_copy_trading_dialog_close"
				onClick="@event.historyPop.cancel()"
				layout_gravity="right|center" />

	</FrameLayout>

	<View
			width="match_parent"
			height="0.5"
			background="@color/KBaseColorPrimarySeparator"
			layout_gravity="bottom" />

	<!-- title -->
	<LinearLayout
			width="match_parent"
			height="40"
			marginLeft="16"
			marginRight="16"
			orientation="horizontal">

		<TextView
				width="114"
				height="match_parent"
				weight="1"
				maxLines="0"
				gravity="left|center"
				text="{{@data.history.poplistData.left}}"
				textSize="12"
				textFontWeight="400"
				textColor="@color/kColorThreeLevelText" />

		<TextView
				width="114"
				height="match_parent"
				weight="1"
				maxLines="0"
				gravity="center"
				text="{{@data.history.poplistData.middle}}"
				textSize="12"
				textFontWeight="400"
				textColor="@color/kColorThreeLevelText" />

		<TextView
				width="114"
				height="match_parent"
				weight="1"
				maxLines="0"
				gravity="right|center"
				layout_gravity="right|center"
				text="{{@data.history.poplistData.right}}"
				textSize="12"
				textFontWeight="400"
				textColor="@color/kColorThreeLevelText" />

	</LinearLayout>

	<!-- 数据列表区域 -->
	<LinearLayout
			width="match_parent"
			height="wrap_content"
			marginLeft="16"
			marginRight="16"
			orientation="vertical">

		<For
				data="@data.history.poplistData.projectList"
				itemKey="item"
				typeKey="cellType">

			<Cell
					width="match_parent"
					height="wrap_content"
					type="normal">

				<LinearLayout
						width="match_parent"
						height="44"
						gravity="center"
						orientation="horizontal">

					<TextView
							width="114"
							height="match_parent"
							weight="1"
							maxLines="0"
							gravity="left|center"
							text="{{@item.left}}"
							textSize="14"
							textFontWeight="500"
							textColor="@color/kColorPrimaryText" />

					<TextView
							width="114"
							height="match_parent"
							weight="1"
							maxLines="0"
							gravity="center"
							text="{{@item.middle}}"
							textSize="14"
							textFontWeight="500"
							textColor="@color/kColorPrimaryText" />

					<TextView
							width="114"
							height="match_parent"
							weight="1"
							maxLines="0"
							gravity="right|center"
							layout_gravity="right|center"
							text="{{@item.right}}"
							textSize="14"
							textFontWeight="500"
							textColor="@color/kColorPrimaryText" />

				</LinearLayout>

			</Cell>
		</For>

	</LinearLayout>

	<View
			width="match_parent"
			height="0.5"
			marginLeft="16"
			marginRight="16"
			background="@color/KBaseColorPrimarySeparator"
			layout_gravity="bottom" />


	<LinearLayout
			width="match_parent"
			height="40"
			marginLeft="16"
			marginRight="16"
			gravity="right"
			orientation="horizontal">

		<TextView
				width="wrap_content"
				height="match_parent"
				gravity="center"
				text="{{@i18n/n_shark_fin_total_principal}}"
				textSize="14"
				textFontWeight="400"
				textColor="@color/kColorThreeLevelText" />

		<TextView
				width="wrap_content"
				height="match_parent"
				gravity="center"
				text="{{@data.history.poplistData.finishAmountStr}}"
				textSize="14"
				textFontWeight="500"
				marginLeft="4"
				textColor="@color/kColorPrimaryText" />

		<TextView
				width="wrap_content"
				height="match_parent"
				gravity="center"
				marginLeft="5"
				layout_gravity="right|center"
				text="{{@i18n/n_shark_fin_total_interest}}"
				textSize="14"
				textFontWeight="400"
				textColor="@color/kColorThreeLevelText"
				visibility="{{@data.history.poplistData.isShowIncome}}" />

		<TextView
				width="wrap_content"
				height="match_parent"
				gravity="center"
				text="{{@data.history.poplistData.settleIncomeAmountStr}}"
				textSize="14"
				textFontWeight="500"
				marginLeft="4"
				textColor="@color/kColorPrimaryText"
				visibility="{{@data.history.poplistData.isShowIncome}}" />

	</LinearLayout>

	<TextView
			width="343"
			height="44"
			marginLeft="16"
			marginRight="16"
			marginBottom="40"
			marginTop="15"
			cornerRadius="4"
			background="@color/KBaseColorMajorTheme100"
			textColor="@color/KBaseTextColor"
			textSize="14"
			textFontWeight="500"
			text="{{@i18n/n_sure}}"
			gravity="center"
			onClick="@event.historyPop.cancel()" />
</LinearLayout>
