<LinearLayout
        width="match_parent"
        height="match_parent"
        orientation="vertical"
        gravity="left"
        background="@color/KBaseColorContentBackground">
    <LinearLayout
            paddingBottom="16"
            width="match_parent"
            height="wrap_content"
            orientation="vertical"
            gravity="centerHorizontal"
            background="@color/KBaseColorDeepestBackground">
        <View
                width="match_parent"
                height="{{@data.detail.statusHeight}}"
                popTemplate="alert.xml"
                popShow="{{@data.alert.alertPopShow | false}}"
                popCancelOnTouchOutside="false"
                popBackgroundDimmed="true"
                popShowMode="modal"
                popModalPositon="center" />
        <LinearLayout
                width="match_parent"
                height="44"
                marginBottom="16"
                gravity="center"
                orientation="horizontal">
            <LinearLayout
                    marginLeft="16"
                    width="44"
                    height="44"
                    gravity="centerVertical"
                    onClick="@event.detail.backClicked()">
                <ImageView
                        width="28"
                        height="28"
                        gravity="center"
                        src="@drawable/edge_engine_top_bar_back_normal" />
            </LinearLayout>
            <TextView
                    width="0"
                    height="match_parent"
                    weight="1"
                    gravity="center"
                    text="{{@data.detail.navTitle}}"
                    textSize="18"
                    textFontWeight="500"
                    textColor="@color/kColorPrimaryText" />
            <View
                    width="44"
                    height="44"
                    marginRight="16" />
        </LinearLayout>
        <ImageView
                width="32"
                height="32"
                src="@drawable/edge_engine_sharkfin_currency" />
        <TextView
                marginTop="4"
                width="wrap_content"
                height="wrap_content"
                gravity="center"
                text="{{@data.detail.unit}}"
                textColor="@color/kColorPrimaryText"
                textSize="16"
                textFontWeight="500" />
        <LinearLayout
                marginTop="24"
                marginLeft="16"
                marginRight="16"
                width="match_parent"
                height="20"
                orientation="horizontal"
                gravity="centerVertical"
                visibility="{{@data.detail.orderShow}}">
            <TextView
                    width="0"
                    weight="1"
                    height="wrap_content"
                    gravity="left"
                    text="{{@data.detail.buyNumberAmount}}"
                    textColor="@color/kColorPrimaryText"
                    textSize="16"
                    textFontWeight="500" />
            <TextView
                    width="wrap_content"
                    height="wrap_content"
                    gravity="right"
                    text="{{@data.detail.buyPnlAmount}}"
                    textColor="@color/kColorPrimaryText"
                    textSize="16"
                    textFontWeight="500" />   
        </LinearLayout>
        <LinearLayout
                marginLeft="16"
                marginRight="16"
                width="match_parent"
                height="14"
                orientation="horizontal"
                gravity="centerVertical"
                visibility="{{@data.detail.orderShow}}">
            <TextView
                    width="0"
                    weight="1"
                    height="wrap_content"
                    gravity="left"
                    text="{{@data.detail.buyNumber}}"
                    textColor="@color/kColorThreeLevelText"
                    textSize="11"
                    textFontWeight="400" />
            <TextView
                    width="wrap_content"
                    height="wrap_content"
                    gravity="right"
                    text="{{@data.detail.buyPnl}}"
                    textColor="@color/kColorThreeLevelText"
                    textSize="11"
                    textFontWeight="400" />   
        </LinearLayout>
    </LinearLayout>
    <!-- 空样式 -->
    <LinearLayout
            width="match_parent"
            height="match_parent"
            orientation="vertical"
            gravity="center"
            visibility="{{@data.detail.empty}}">
        <ImageView
                width="60"
                height="60"
                src="@drawable/edge_engine_empty" />
        <TextView
                marginTop="8"
                marginBottom="178"
                width="match_parent"
                height="wrap_content"
                gravity="center"
                textSize="12"
                text="{{@i18n/n_redpacket_record_nodata}}"
                textColor="@color/eBaseColorThreeLevelText" />
    </LinearLayout>
    <LinearLayout
            width="match_parent"
            height="0"
            weight="1"
            orientation="vertical"
            background="@color/KBaseColorDeepestBackground"
            visibility="{{@data.detail.notEmpty}}">
        <RecyclerView
                width="match_parent"
                height="match_parent"
                orientation="vertical"
                data="@data.detail.celllist"
                topLeftRadius="8"
                topRightRadius="8"
                background="@color/KBaseColorContentBackground"
                itemKey="item">
            <Cell
                    type="H1"
                    width="wrap_content"
                    height="44"
                    marginLeft="16"
                    marginRight="16"
                    gravity="centerVertical">
                <TextView
                        width="wrap_content"
                        height="44"
                        text="{{@item.name}}"
                        textSize="16"
                        gravity="center"
                        textFontWeight="500"
                        textColor="@color/kColorPrimaryText" />
            </Cell>
            <Cell
                    type="normal"
                    width="match_parent"
                    height="28">
                <LinearLayout
                        marginLeft="16"
                        marginRight="16"
                        width="match_parent"
                        height="match_parent"
                        gravity="centerVertical"
                        orientation="horizontal">
                    <TextView
                            weight="1"
                            width="0"
                            height="wrap_content"
                            text="{{@item.name}}"
                            textSize="14"
                            textFontWeight="400"
                            textColor="@color/kColorThreeLevelText" />
                    <TextView
                            marginLeft="4"
                            width="wrap_content"
                            height="wrap_content"
                            text="{{@item.state | }}"
                            textSize="14"
                            textFontWeight="400"
                            textColor="{{@item.stateColor}}" />
                    <TextView
                            width="wrap_content"
                            height="wrap_content"
                            text="{{@item.value}}"
                            textSize="14"
                            textFontWeight="400"
                            textColor="@color/kColorPrimaryText"
                            gravity="right" />
                    <ImageView
                            paddingLeft="4"
                            width="16"
                            height="12"
                            src="@drawable/edge_engine_copy_trading_fok"
                            onClick="@event.detail.statusAlert()"
                            visibility="{{@item.tipsShow}}" />
                </LinearLayout>
            </Cell>
            <Footer
                    width="match_parent"
                    height="wrap_content"
                    marginTop="16"
                    marginLeft="16"
                    marginRight="16">
                <LinearLayout
                        width="match_parent"
                        height="wrap_content"
                        orientation="vertical"
                        gravity="centerVertical">
                        <!-- 自动复投 -->
                        <LinearLayout
                        marginBottom="12"
                        width="match_parent"
                        height="wrap_content"
                        orientation="vertical"
                        gravity="centerVertical"
                        visibility="{{@data.detail.orderShow}}">
                      <LinearLayout
                          marginBottom="8"
                          width="match_parent"
                          height="22"
                          orientation="horizontal"
                          gravity="centerVertical">
                        <TextView
                            width="wrap_content"
                            height="22"
                            text="{{@i18n/n_shark_fin_autoSubscribe}}"
                            textSize="16"
                            textFontWeight="500"
                            textColor="@color/kColorPrimaryText"
                            gravity="center" />
                        <ImageView
                            paddingLeft="4"
                            paddingTop="5"
                            paddingBottom="5"
                            width="16"
                            height="22"
                            src="@drawable/edge_engine_sharkfin_auto_icon"
                            onClick="@event.alert.showAutoSubscribeAlert()" />
                        <View width="0" weight="1" height="0"/>
                        <LinearLayout
                            width="28"
                            height="16"
                            cornerRadius="8.4"
                            background="{{@data.detail.switchBackColor}}"
                            gravity="centerVertical"
                            onClick="@event.detail.autoClicked()"
                            opacity="{{@data.detail.switchOpacity}}">
                          <View 
                            width="{{@data.detail.switchWidth}}"
                            height="0"/>
                          <View 
                            width="12" 
                            height="12"
                            cornerRadius="6"
                            background="{{@data.detail.switchColor}}"/>
                        </LinearLayout>
                      </LinearLayout>
                      <TextView
                          height="wrap_content"
                          width="343"
                          maxWidth="343"
                          maxLines="0"
                          text="{{@data.detail.resultRemark}}"
                          textColor="{{@data.detail.resultColor}}"
                          textFontWeight="400"
                          textSize="12" />                
                    </LinearLayout>
                    <!-- 收益规则 -->
                    <TextView
                            width="wrap_content"
                            height="44"
                            text="{{@i18n/n_shark_fin_pnl_rule}}"
                            textSize="16"
                            textFontWeight="500"
                            textColor="@color/kColorPrimaryText"
                            gravity="center" />
                    <!-- 参考年化 -->
                    <TextView
                            marginTop="8"
                            width="wrap_content"
                            height="16"
                            text="{{@i18n/n_shark_fin_APY_Est}}"
                            textSize="12"
                            textFontWeight="400"
                            textColor="@color/kColorThreeLevelText"
                            gravity="center" />
                    <LinearLayout
                            width="match_parent"
                            height="144"
                            orientation="horizontal">
                        <LinearLayout
                                width="45"
                                height="144"
                                orientation="vertical">
                            <TextView
                                    text="{{@data.pnlrule.maxRate}}"
                                    textSize="12"
                                    width="wrap_content"
                                    height="wrap_content"
                                    marginTop="8"
                                    textFontWeight="400"
                                    textColor="@color/kColorSecondaryText"
                                    maxWidth="45"
                                    autoSizeTextType="uniform"
                                    autoSizeMinTextSize="6" />
                            <TextView
                                    text="{{@data.pnlrule.minRate}}"
                                    textSize="12"
                                    marginTop="80"
                                    width="wrap_content"
                                    height="wrap_content"
                                    textFontWeight="400"
                                    textColor="@color/kColorSecondaryText"
                                    autoSizeTextType="uniform"
                                    autoSizeMinTextSize="6"
                                    maxWidth="45" />
                        </LinearLayout>
                        <ImageView
                                width="0"
                                height="128"
                                weight="1"
                                marginTop="16"
                                src="{{@data.pnlrule.src}}" />
                    </LinearLayout>
                    <LinearLayout
                            width="match_parent"
                            height="wrap_content"
                            orientation="horizontal"
                            marginTop="8"
                            marginLeft="77">
                        <TextView
                                text="{{@data.pnlrule.minPrice}}"
                                textSize="12"
                                width="110"
                                height="wrap_content"
                                textFontWeight="400"
                                textColor="@color/kColorSecondaryText"
                                gravity="center" />
                        <TextView
                                text="{{@data.pnlrule.maxPrice}}"
                                textSize="12"
                                width="110"
                                height="wrap_content"
                                textFontWeight="400"
                                textColor="@color/kColorSecondaryText"
                                gravity="center" />
                        <TextView
                                text="{{@i18n/n_shark_fin_price}}"
                                textSize="12"
                                width="0"
                                weight="1"
                                height="wrap_content"
                                textFontWeight="400"
                                textColor="@color/kColorSecondaryText"
                                gravity="right" />
                    </LinearLayout>
                    <!-- BTC现价 -->
                    <LinearLayout
                        marginTop="24"
                        width="wrap_content"
                        height="wrap_content"
                        gravity="centerVertical">
                      <TextView
                          width="wrap_content"
                          height="wrap_content"
                          text="{{@data.pnlrule.subTitle}}"
                          textSize="12"
                          textFontWeight="400"
                          textColor="@color/kColorSecondaryText"
                          gravity="center"
                          maxLines="2"
                          maxWidth="323" />
                      <ImageView
                          paddingLeft="4"
                          width="16"
                          height="12"
                          src="@drawable/edge_engine_copy_trading_fok"
                          onClick="@event.pnlrule.showIconAlert()"
                          visibility="{{@data.pnlrule.showIcon}}" />
                    </LinearLayout>
                    <!-- 表格 -->
                    <LinearLayout
                            marginTop="8"
                            width="match_parent"
                            height="120"
                            orientation="vertical"
                            cornerRadius="4"
                            borderWidth="0.5"
                            borderColor="@color/KBaseColorPrimarySeparator">
                        <LinearLayout
                                width="match_parent"
                                height="40"
                                orientation="horizontal"
                                gravity="centerVertical"
                                background="@color/KAssetTopHeaderContentBackground">
                            <LinearLayout
                                    width="220"
                                    height="wrap_content"
                                    orientation="horizontal"
                                    gravity="center">
                                <TextView
                                        width="wrap_content"
                                        height="wrap_content"
                                        text="{{@data.pnlrule.KeyTitle}}"
                                        textSize="12"
                                        textFontWeight="400"
                                        gravity="center"
                                        textColor="@color/kColorThreeLevelText"
                                        maxLines="0"
                                        maxWidth="188" />
                                <ImageView
                                        paddingLeft="4"
                                        width="16"
                                        height="12"
                                        src="@drawable/edge_engine_copy_trading_fok"
                                        onClick="@event.alert.showSettlementAlert()" />
                            </LinearLayout>
                            <LinearLayout
                                    width="0.5"
                                    height="match_parent"
                                    background="@color/KBaseColorPrimarySeparator" />
                            <TextView
                                    width="0"
                                    weight="1"
                                    height="wrap_content"
                                    text="{{@i18n/n_shark_fin_APY_Est}}"
                                    textSize="12"
                                    textFontWeight="400"
                                    gravity="center"
                                    textColor="@color/kColorThreeLevelText" />
                        </LinearLayout>
                        <LinearLayout
                                width="match_parent"
                                height="0.5"
                                background="@color/KBaseColorPrimarySeparator" />
                        <LinearLayout
                                width="match_parent"
                                height="0"
                                weight="1"
                                orientation="horizontal"
                                gravity="centerVertical">
                            <TextView
                                    width="220"
                                    height="wrap_content"
                                    text="{{@data.pnlrule.key1}}"
                                    textSize="12"
                                    textFontWeight="400"
                                    gravity="center"
                                    textColor="@color/kColorPrimaryText" />
                            <LinearLayout
                                    width="0.5"
                                    height="match_parent"
                                    background="@color/KBaseColorPrimarySeparator" />
                            <TextView
                                    width="0"
                                    weight="1"
                                    height="wrap_content"
                                    text="{{@data.pnlrule.value1}}"
                                    textSize="12"
                                    textFontWeight="400"
                                    gravity="center"
                                    textColor="@color/kColorPrimaryText" />
                        </LinearLayout>
                        <LinearLayout
                                width="match_parent"
                                height="0.5"
                                background="@color/KBaseColorPrimarySeparator" />
                        <LinearLayout
                                width="match_parent"
                                height="40"
                                orientation="horizontal"
                                gravity="centerVertical">
                            <TextView
                                    width="220"
                                    height="wrap_content"
                                    text="{{@data.pnlrule.key2}}"
                                    textSize="12"
                                    textFontWeight="400"
                                    gravity="center"
                                    textColor="@color/kColorPrimaryText" />
                            <LinearLayout
                                    width="0.5"
                                    height="match_parent"
                                    background="@color/KBaseColorPrimarySeparator" />
                            <TextView
                                    width="0"
                                    weight="1"
                                    height="wrap_content"
                                    text="{{@data.pnlrule.value2}}"
                                    textSize="12"
                                    textFontWeight="400"
                                    gravity="center"
                                    textColor="@color/kColorPrimaryText" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </Footer>
        </RecyclerView>
    </LinearLayout>
</LinearLayout>
