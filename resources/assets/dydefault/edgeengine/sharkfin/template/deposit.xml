<FrameLayout
        width="match_parent"
        height="match_parent"
        orientation="vertical"
        background="@color/KBaseColorContentBackground">
    <LinearLayout
            width="match_parent"
            height="match_parent"
            orientation="vertical">
        <View
                width="match_parent"
                height="{{@data.deposit.statusHeight}}"
                background="@color/KBaseColorDeepestBackground" />
        <LinearLayout
                width="match_parent"
                height="44"
                gravity="center"
                orientation="horizontal"
                background="@color/KBaseColorDeepestBackground">
            <LinearLayout
                    marginLeft="16"
                    width="44"
                    height="44"
                    gravity="centerVertical"
                    onClick="@event.deposit.backClicked()">
                <ImageView
                        width="28"
                        height="28"
                        gravity="center"
                        src="@drawable/edge_engine_top_bar_back_normal" />
            </LinearLayout>
            <TextView
                    width="0"
                    height="match_parent"
                    weight="1"
                    gravity="center"
                    text="{{@data.deposit.navTitle}}"
                    textSize="18"
                    textFontWeight="500"
                    textColor="@color/kColorPrimaryText" />
            <View
                    width="44"
                    height="44"
                    marginRight="16" />
        </LinearLayout>
        <!-- 空样式 -->
        <LinearLayout
                width="match_parent"
                height="match_parent"
                orientation="vertical"
                gravity="center"
                visibility="{{@data.deposit.empty}}">
            <ImageView
                    width="60"
                    height="60"
                    src="@drawable/edge_engine_empty" />
            <TextView
                    marginTop="8"
                    marginBottom="64"
                    width="match_parent"
                    height="wrap_content"
                    gravity="center"
                    textSize="12"
                    text="{{@i18n/n_redpacket_record_nodata}}"
                    textColor="@color/eBaseColorThreeLevelText" />
        </LinearLayout>
        <LinearLayout
                width="match_parent"
                height="wrap_content"
                paddingTop="12"
                paddingBottom="12"
                orientation="vertical"
                background="@color/KBaseColorDeepestBackground"
                visibility="{{@data.deposit.notEmpty}}">
            <For
                    data="@data.deposit.datalist"
                    itemKey="item">
                <Cell
                        type="normal"
                        width="match_parent"
                        height="28">
                    <LinearLayout
                            width="match_parent"
                            height="match_parent"
                            gravity="centerVertical"
                            orientation="horizontal">
                        <TextView
                                marginLeft="16"
                                weight="1"
                                width="0"
                                height="wrap_content"
                                text="{{@item.name}}"
                                textSize="14"
                                textFontWeight="400"
                                textColor="@color/kColorThreeLevelText" />
                        <TextView
                                marginLeft="4"
                                marginRight="16"
                                width="wrap_content"
                                height="wrap_content"
                                text="{{@item.value}}"
                                textSize="14"
                                textFontWeight="400"
                                textColor="@color/kColorPrimaryText"
                                gravity="right" />
                    </LinearLayout>
                </Cell>
            </For>
        </LinearLayout>
        <LinearLayout
            width="match_parent"
            height="0"
            weight="1"
            background="@color/KBaseColorDeepestBackground"
            visibility="{{@data.deposit.notEmpty}}">
        <Scroller
                width="match_parent"
                height="match_parent"
                orientation="vertical"
                topLeftRadius="8"
                topRightRadius="8"
                background="@color/KBaseColorContentBackground">
            <LinearLayout
                    width="match_parent"
                    height="wrap_content"
                    orientation="vertical">
                <LinearLayout
                        marginLeft="16"
                        marginRight="16"
                        width="match_parent"
                        height="wrap_content"
                        orientation="vertical"
                        visibility="{{@data.deposit.showInput}}">
                    <TextView
                            marginTop="16"
                            marginBottom="12"
                            width="wrap_content"
                            height="22"
                            text="{{@data.deposit.inputData.name}}"
                            textSize="16"
                            textFontWeight="500"
                            gravity="center"
                            textColor="@color/kColorPrimaryText" />
                    <LinearLayout
                            width="match_parent"
                            height="56"
                            gravity="centerVertical"
                            orientation="horizontal"
                            background="@color/KBaseColorInputBackground"
                            cornerRadius="4"
                            borderColor="{{@data.deposit.borderColor}}"
                            borderWidth="1">
                        <EditText
                                weight="1"
                                width="0"
                                height="44"
                                hint="{{@data.deposit.inputData.hint | }}"
                                inputType="numberDecimal"
                                textColorHint="@color/kColorThreeLevelText"
                                background="@color/baseColorInputBackground"
                                paddingLeft="12"
                                paddingRight="8"
                                onFocusChange="@event.deposit.focusChange(@eventParams)"
                                textFontWeight="500"
                                textSize="24"
                                textColor="@color/kColorPrimaryText"
                                onTextChange="@event.deposit.textChange(@eventParams)"
                                requestFocus="{{@data.deposit.onFocus}}"
                                onReturn="@event.deposit.onReturn(@eventParams)"
                                text="{{@data.deposit.editText | }}" />
                        <TextView
                                width="wrap_content"
                                height="wrap_content"
                                text="{{@data.deposit.inputData.unit}}"
                                textSize="14"
                                textFontWeight="500"
                                gravity="center"
                                textColor="@color/kColorThreeLevelText" />
                        <LinearLayout
                                marginLeft="8"
                                marginRight="8"
                                width="0.5"
                                height="18"
                                background="@color/KBaseColorPrimarySeparator">
                        </LinearLayout>
                        <TextView
                                marginRight="12"
                                width="wrap_content"
                                height="wrap_content"
                                text="{{@i18n/n_balance_all}}"
                                textSize="14"
                                textFontWeight="500"
                                gravity="center"
                                textColor="@color/kColorPrimaryText"
                                onClick="@event.deposit.clickedAll()" />
                    </LinearLayout>
                    <!-- 可用余额 -->
                    <LinearLayout
                            width="wrap_content"
                            height="16"
                            gravity="centerVertical"
                            orientation="horizontal"
                            marginTop="8">
                        <TextView
                                height="wrap_content"
                                width="wrap_content"
                                text="{{@i18n/n_otc_available}} "
                                textColor="{{@data.deposit.inputData.balanceTitleColor}}"
                                textFontWeight="400"
                                textSize="12" />
                        <TextView
                                height="wrap_content"
                                width="wrap_content"
                                text="{{@data.deposit.inputData.balance | }}"
                                textColor="{{@data.deposit.inputData.balanceColor}}"
                                textFontWeight="500"
                                textSize="12" />
                        <TextView
                                marginLeft="8"
                                width="wrap_content"
                                height="wrap_content"
                                text="{{@i18n/n_shark_fin_buy_coin}}"
                                textSize="12"
                                textFontWeight="400"
                                gravity="center"
                                textColor="@color/kColorMajorTheme100"
                                onClick="@event.deposit.jumpToBuyCoin('{{@data.deposit.inputData.unit}}')" />
                        <LinearLayout
                                marginLeft="4"
                                marginRight="4"
                                width="0.5"
                                height="12"
                                background="@color/KBaseColorPrimarySeparator">
                        </LinearLayout>
                        <TextView
                                marginRight="12"
                                width="wrap_content"
                                height="wrap_content"
                                text="{{@i18n/n_live_gift_transfer}}"
                                textSize="12"
                                textFontWeight="400"
                                gravity="center"
                                textColor="@color/kColorMajorTheme100"
                                onClick="@event.deposit.jumpToTransfer('{{@data.deposit.inputData.unit}}')" />
                    </LinearLayout>
                    <!-- 个人剩余额度 -->
                    <LinearLayout
                            width="match_parent"
                            height="16"
                            gravity="centerVertical"
                            orientation="horizontal"
                            marginTop="8">
                        <TextView
                                height="wrap_content"
                                width="wrap_content"
                                text="{{@i18n/n_shark_fin_available_limit_new}}"
                                textColor="@color/kColorThreeLevelText"
                                textFontWeight="400"
                                textSize="12" />
                        <TextView
                                weight="1"
                                height="wrap_content"
                                width="0"
                                text="{{@data.deposit.inputData.userSurplus | }}"
                                textColor="{{@data.deposit.inputData.userSurplusColor}}"
                                textFontWeight="400"
                                textSize="12"
                                gravity="right" />
                    </LinearLayout>
                    <!-- 项目剩余额度 -->
                    <LinearLayout
                            width="match_parent"
                            height="16"
                            gravity="centerVertical"
                            orientation="horizontal"
                            marginTop="8"
                            marginBottom="24">
                        <TextView
                                height="wrap_content"
                                width="0"
                                weight="1"
                                text="{{@i18n/n_shark_fin_fund_limit_new}}"
                                textColor="@color/kColorThreeLevelText"
                                textFontWeight="400"
                                textSize="12" />
                        <TextView
                                height="wrap_content"
                                width="wrap_content"
                                text="{{@data.deposit.inputData.surplus | }}"
                                textColor="{{@data.deposit.inputData.surplusColor}}"
                                textFontWeight="400"
                                textSize="12" />
                    </LinearLayout>
                </LinearLayout>
                <!-- 自动复投 -->
                <LinearLayout
                    marginLeft="16"
                    marginRight="16"
                    marginBottom="12"
                    width="match_parent"
                    height="wrap_content"
                    orientation="vertical"
                    gravity="centerVertical"
                    visibility="{{@data.deposit.showInput}}">
                  <LinearLayout
                      marginBottom="8"
                      width="match_parent"
                      height="22"
                      orientation="horizontal"
                      gravity="centerVertical">
                    <TextView
                        width="wrap_content"
                        height="22"
                        text="{{@i18n/n_shark_fin_autoSubscribe}}"
                        textSize="16"
                        textFontWeight="500"
                        textColor="@color/kColorPrimaryText"
                        gravity="center" />
                    <ImageView
                        paddingLeft="4"
                        paddingTop="5"
                        paddingBottom="5"
                        width="16"
                        height="22"
                        src="@drawable/edge_engine_sharkfin_auto_icon"
                        onClick="@event.alert.showAutoSubscribeAlert()" />
                    <View width="0" weight="1" height="0"/>
                    <LinearLayout
                        width="28"
                        height="16"
                        cornerRadius="8.4"
                        background="{{@data.deposit.switchBackColor}}"
                        gravity="centerVertical"
                        onClick="@event.deposit.autoClicked()">
                      <View 
                        width="{{@data.deposit.switchWidth}}"
                        height="0"/>
                      <View 
                        width="12" 
                        height="12"
                        cornerRadius="6"
                        background="{{@data.deposit.switchColor}}"/>
                    </LinearLayout>
                  </LinearLayout>
                  <TextView
                      height="wrap_content"
                      width="343"
                      maxWidth="343"
                      maxLines="0"
                      text="{{@i18n/n_shark_fin_autoSubscribe_desc}}"
                      textColor="@color/kColorThreeLevelText"
                      textFontWeight="400"
                      textSize="12" />                
                </LinearLayout>
                <LinearLayout
                        marginLeft="16"
                        marginRight="16"
                        width="match_parent"
                        height="wrap_content"
                        orientation="vertical"
                        gravity="centerVertical">
                    <!-- 收益规则 -->
                    <TextView
                            width="wrap_content"
                            height="44"
                            text="{{@i18n/n_shark_fin_pnl_rule}}"
                            textSize="16"
                            textFontWeight="500"
                            textColor="@color/kColorPrimaryText"
                            gravity="center" />
                    <!-- 参考年化 -->
                    <TextView
                            width="wrap_content"
                            height="16"
                            text="{{@i18n/n_shark_fin_APY_Est}}"
                            textSize="12"
                            textFontWeight="400"
                            textColor="@color/kColorThreeLevelText"
                            gravity="center" />
                    <LinearLayout
                            width="match_parent"
                            height="144"
                            orientation="horizontal">
                        <LinearLayout
                                width="45"
                                height="144"
                                orientation="vertical">
                            <TextView
                                    text="{{@data.pnlrule.maxRate}}"
                                    textSize="12"
                                    width="wrap_content"
                                    height="wrap_content"
                                    marginTop="8"
                                    textFontWeight="400"
                                    textColor="@color/kColorSecondaryText"
                                    maxWidth="45"
                                    autoSizeTextType="uniform"
                                    autoSizeMinTextSize="6" />
                            <TextView
                                    text="{{@data.pnlrule.minRate}}"
                                    textSize="12"
                                    marginTop="80"
                                    width="wrap_content"
                                    height="wrap_content"
                                    textFontWeight="400"
                                    textColor="@color/kColorSecondaryText"
                                    maxWidth="45"
                                    autoSizeTextType="uniform"
                                    autoSizeMinTextSize="6" />
                        </LinearLayout>
                        <ImageView
                                width="0"
                                height="128"
                                weight="1"
                                marginTop="16"
                                src="{{@data.pnlrule.src}}" />
                    </LinearLayout>
                    <LinearLayout
                            width="match_parent"
                            height="wrap_content"
                            orientation="horizontal"
                            marginTop="8"
                            marginLeft="77">
                        <TextView
                                text="{{@data.pnlrule.minPrice}}"
                                textSize="12"
                                width="110"
                                height="wrap_content"
                                textFontWeight="400"
                                textColor="@color/kColorSecondaryText"
                                gravity="center" />
                        <TextView
                                text="{{@data.pnlrule.maxPrice}}"
                                textSize="12"
                                width="110"
                                height="wrap_content"
                                textFontWeight="400"
                                textColor="@color/kColorSecondaryText"
                                gravity="center" />
                        <TextView
                                text="{{@i18n/n_shark_fin_price}}"
                                textSize="12"
                                width="0"
                                weight="1"
                                height="wrap_content"
                                textFontWeight="400"
                                textColor="@color/kColorSecondaryText"
                                gravity="right" />
                    </LinearLayout>
                    <!-- BTC现价 -->
                    <TextView
                            marginTop="24"
                            width="wrap_content"
                            height="16"
                            text="{{@data.pnlrule.subTitle}}"
                            textSize="12"
                            textFontWeight="400"
                            textColor="@color/kColorSecondaryText"
                            gravity="center" />
                    <!-- 表格 -->
                    <LinearLayout
                            marginTop="8"
                            width="match_parent"
                            height="120"
                            orientation="vertical"
                            cornerRadius="4"
                            borderWidth="0.5"
                            borderColor="@color/KBaseColorPrimarySeparator">
                        <LinearLayout
                                width="match_parent"
                                height="40"
                                orientation="horizontal"
                                gravity="centerVertical"
                                background="@color/KAssetTopHeaderContentBackground">
                            <LinearLayout
                                    width="220"
                                    height="wrap_content"
                                    orientation="horizontal"
                                    gravity="center">
                                <TextView
                                        width="wrap_content"
                                        height="wrap_content"
                                        text="{{@data.pnlrule.KeyTitle}}"
                                        textSize="12"
                                        textFontWeight="400"
                                        gravity="center"
                                        textColor="@color/kColorThreeLevelText"
                                        maxLines="0"
                                        maxWidth="188" />
                                <ImageView
                                        paddingLeft="4"
                                        width="16"
                                        height="12"
                                        src="@drawable/edge_engine_copy_trading_fok"
                                        onClick="@event.alert.showSettlementAlert()" />
                            </LinearLayout>
                            <LinearLayout
                                    width="0.5"
                                    height="match_parent"
                                    background="@color/KBaseColorPrimarySeparator" />
                            <TextView
                                    width="0"
                                    weight="1"
                                    height="wrap_content"
                                    text="{{@i18n/n_shark_fin_APY_Est}}"
                                    textSize="12"
                                    textFontWeight="400"
                                    gravity="center"
                                    textColor="@color/kColorThreeLevelText" />
                        </LinearLayout>
                        <LinearLayout
                                width="match_parent"
                                height="0.5"
                                background="@color/KBaseColorPrimarySeparator" />
                        <LinearLayout
                                width="match_parent"
                                height="0"
                                weight="1"
                                orientation="horizontal"
                                gravity="centerVertical">
                            <TextView
                                    width="220"
                                    height="wrap_content"
                                    text="{{@data.pnlrule.key1}}"
                                    textSize="12"
                                    textFontWeight="400"
                                    gravity="center"
                                    textColor="@color/kColorPrimaryText" />
                            <LinearLayout
                                    width="0.5"
                                    height="match_parent"
                                    background="@color/KBaseColorPrimarySeparator" />
                            <TextView
                                    width="0"
                                    weight="1"
                                    height="wrap_content"
                                    text="{{@data.pnlrule.value1}}"
                                    textSize="12"
                                    textFontWeight="400"
                                    gravity="center"
                                    textColor="@color/kColorPrimaryText" />
                        </LinearLayout>
                        <LinearLayout
                                width="match_parent"
                                height="0.5"
                                background="@color/KBaseColorPrimarySeparator" />
                        <LinearLayout
                                width="match_parent"
                                height="40"
                                orientation="horizontal"
                                gravity="centerVertical">
                            <TextView
                                    width="220"
                                    height="wrap_content"
                                    text="{{@data.pnlrule.key2}}"
                                    textSize="12"
                                    textFontWeight="400"
                                    gravity="center"
                                    textColor="@color/kColorPrimaryText" />
                            <LinearLayout
                                    width="0.5"
                                    height="match_parent"
                                    background="@color/KBaseColorPrimarySeparator" />
                            <TextView
                                    width="0"
                                    weight="1"
                                    height="wrap_content"
                                    text="{{@data.pnlrule.value2}}"
                                    textSize="12"
                                    textFontWeight="400"
                                    gravity="center"
                                    textColor="@color/kColorPrimaryText" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </Scroller>
        </LinearLayout>
        <!-- 申购按钮 -->
        <FrameLayout
                width="match_parent"
                height="76"
                background="@color/KBaseColorContentBackground"
                visibility="{{@data.deposit.notEmpty}}"
                orientation="vertical">
            <View
                width="match_parent"
                height="0.5"
                background="@color/KBaseColorPrimarySeparator" />
            <LinearLayout
                    marginLeft="16"
                    marginRight="16"
                    marginTop="16"
                    marginBottom="16"
                    width="match_parent"
                    height="44"
                    orientation="horizontal"
                    background="{{@data.deposit.btnColor}}"
                    gravity="center"
                    cornerRadius="4"
                    onClick="@event.deposit.popConfirmOpen()">
                <ImageView
                        width="16"
                        height="12"
                        paddingRight="4"
                        src="@drawable/edge_engine_sharkfin_clock"
                        visibility="{{@data.deposit.needCountDown}}" />
                <TextView
                        width="wrap_content"
                        height="wrap_content"
                        text="{{@data.deposit.btnTitle}}"
                        textSize="14"
                        textFontWeight="500"
                        gravity="center"
                        textColor="@color/KBaseTextColor" />
                <View
                        width="0"
                        height="match_parent"
                        popTemplate="deposit_confirm.xml"
                        popShow="{{@data.deposit.confirmShow}}"
                        popCancelOnTouchOutside="true"
                        popBackgroundDimmed="true"
                        popShowMode="modal"
                        popModalPositon="bottom"
                        onPopDismiss="@event.deposit.popConfirmClose()" />
                <View
                        width="0"
                        height="match_parent"
                        popTemplate="alert.xml"
                        popShow="{{@data.alert.alertPopShow | false}}"
                        popCancelOnTouchOutside="false"
                        popBackgroundDimmed="true"
                        popShowMode="modal"
                        popModalPositon="center" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <!-- 成功 -->
    <LinearLayout
            width="match_parent"
            height="match_parent"
            background="@color/KBaseColorContentBackground"
            orientation="vertical"
            visibility="{{@data.deposit.successShow}}">
        <View
                width="match_parent"
                height="{{@data.deposit.statusHeight}}" />
        <LinearLayout
                marginLeft="16"
                width="44"
                height="44"
                gravity="centerVertical"
                orientation="horizontal">
            <ImageView
                    width="wrap_content"
                    height="wrap_content"
                    onClick="@event.deposit.popSuccessClose()"
                    src="@drawable/edge_engine_sharkfin_close" />
        </LinearLayout>

        <LinearLayout
                marginTop="48"
                marginLeft="16"
                marginRight="16"
                width="match_parent"
                height="wrap_content"
                gravity="center"
                orientation="vertical">
            <ImageView
                    width="wrap_content"
                    height="wrap_content"
                    src="@drawable/edge_engine_sharkfin_success" />
            <TextView
                    marginTop="16"
                    width="wrap_content"
                    height="wrap_content"
                    gravity="center"
                    text="{{@i18n/n_shark_fin_deposit_success}}"
                    textColor="@color/kColorPrimaryText"
                    textSize="16"
                    textFontWeight="400"
                    maxLines="0" />
            <TextView
                    marginTop="16"
                    width="wrap_content"
                    height="wrap_content"
                    gravity="center"
                    text="{{@data.deposit.successText}}"
                    textColor="@color/kColorPrimaryText"
                    textSize="36"
                    textFontWeight="500"
                    maxLines="0" />
            <TextView
                    width="wrap_content"
                    height="44"
                    paddingLeft="65"
                    paddingRight="65"
                    marginTop="121"
                    cornerRadius="4"
                    textColor="@color/kColorPrimaryText"
                    background="@color/baseColorInputBackground"
                    onClick="@event.deposit.openDetail()"
                    gravity="center"
                    textSize="14"
                    textFontWeight="500"
                    text="{{@i18n/n_otc_check_my_order}}" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
