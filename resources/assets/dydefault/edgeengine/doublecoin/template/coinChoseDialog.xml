<LinearLayout
    width="375"
    height="{{@data.custom.coinChoseAlertHeight}}"
    orientation="vertical"
    gravity="center"
    background="@color/KBaseColorContentBackground"
    topLeftRadius="8"
    topRightRadius="8">
    <RecyclerView
        width="match_parent"
        height="0"
		weight="1"
        data="@data.custom.navigations"
        itemKey="element"
        typeKey="type"
        orientation="vertical"
        topLeftRadius="8"
        topRightRadius="8">
        <Header
            width="375"
            height="8">
            <LinearLayout
                width="match_parent"
                height="8"
                background="@color/KBaseColorContentBackground">
            </LinearLayout>
        </Header>
        <Cell
            type="1"
            width="match_parent"
            height="56">
            <LinearLayout
                orientation="horizontal"
                width="match_parent"
                height="match_parent"
                topLeftRadius="8"
                topRightRadius="8"
                gravity="centerVertical"
                onClick="@event.custom.choseCoin('{{@element.index}}')">
                <ImageView
                    src="{{@element.mainIcon}}"
                    width="24"
                    height="24"
                    marginLeft="16" />
                <TextView
                    text="{{@element.coinName}}"
                    textSize="14"
                    textFontWeight="400"
                    height="wrap_content"
                    weight="1"
                    textColor="{{@element.dialogTextColor}}"
                    marginLeft="10"
                    marginRight="10" />
                <ImageView
                    src="@drawable/edge_engine_dbcoin_coin_selected"
                    width="20"
                    height="20"
                    marginRight="16"
                    visibility="{{@element.selected|gone}}" />
            </LinearLayout>
        </Cell>
    </RecyclerView>

    <LinearLayout
        orientation="horizontal"
        width="match_parent"
        height="{{@data.custom.footerHeight}}"
        gravity="center"
        onClick="@event.custom.closeAlert('coinChoseAlertShow')"
        background="@color/eSecondarySeparatorColor">
        <TextView
            text="{{@i18n/n_cancel}}"
            height="match_parent"
            gravity="center"
            width="match_parent"
            background="@color/KBaseColorContentBackground"
            textSize="16"
            marginTop="8"
            textFontWeight="500"
            textColor="@color/kColorPrimaryText" />
    </LinearLayout>
</LinearLayout>
