<LinearLayout
		width="375"
		height="wrap_content"
		orientation="vertical"
		gravity="center">
	<!-- 申购 -->
	<LinearLayout
			background="@color/KBaseColorContentBackground"
			height="wrap_content"
			orientation="vertical"
			marginLeft="8"
			marginRight="8"
			cornerRadius="8"
			width="match_parent">

		<LinearLayout
				background="@color/KBaseColorInputBackground"
				gravity="centerVertical"
				height="44"
				marginTop="12"
				marginLeft="8"
				marginRight="8"
				cornerRadius="4"
				borderColor="{{@data.productsub.subBorderColor}}"
				borderWidth="1"
				orientation="horizontal"
				width="match_parent">

			<TextView
					height="match_parent"
					paddingLeft="12"
					paddingRight="8"
					gravity="left|center"
					text="{{@data.productsub.subHint}}"
					textColor="@color/baseColorThreeLevelText"
					textFontWeight="500"
					textSize="20"
					weight="1"
					width="0" />

			<TextView
					height="wrap_content"
					marginLeft="8"
					text="{{@data.productsub.subUnit}}"
					textColor="@color/kColorThreeLevelText"
					textFontWeight="500"
					textSize="14"
					width="wrap_content" />

			<View
					background="@color/KBaseColorPrimarySeparator"
					height="20"
					marginLeft="8"
					marginRight="8"
					width="1" />

			<TextView
					height="wrap_content"
					marginRight="16"
					text="{{@i18n/n_otc_max}}"
					textColor="@color/kColorPrimaryText"
					textFontWeight="500"
					textSize="14"
					width="wrap_content" />

		</LinearLayout>

		<LinearLayout
				gravity="centerVertical"
				height="16"
				marginTop="8"
				marginLeft="8"
				marginRight="8"
				marginBottom="8"
				width="match_parent">

			<TextView
					height="wrap_content"
					text="{{@i18n/n_double_coin_balance}}"
					textColor="@color/kColorThreeLevelText"
					textSize="12"
					width="wrap_content" />

			<TextView
					height="wrap_content"
					marginLeft="2"
					text="{{@data.productsub.balance}}"
					textColor="@color/kColorPrimaryText"
					textFontWeight="500"
					textSize="12"
					width="wrap_content" />

			<TextView
					height="wrap_content"
					marginLeft="3"
					text="{{@data.productsub.subUnit}}"
					textColor="@color/kColorPrimaryText"
					textFontWeight="500"
					textSize="12"
					width="wrap_content" />

			<TextView
					height="wrap_content"
					marginLeft="8"
					text="{{@i18n/n_shark_fin_buy_coin}}"
					textColor="@color/kColorMajorTheme100"
					textSize="12"
					width="wrap_content" />

			<View
					background="@color/KBaseColorPrimarySeparator"
					height="12"
					marginLeft="4"
					marginRight="4"
					width="2" />

			<TextView
					height="wrap_content"
					text="{{@i18n/n_balance_contract_transfer}}"
					textColor="@color/kColorMajorTheme100"
					textSize="12"
					width="wrap_content" />

		</LinearLayout>
	</LinearLayout>

	<!-- 引导框 -->
	<ImageView
			marginTop="8"
			width="8"
			height="4"
			layout_gravity="center"
			src="@drawable/edge_engine_earn_pop_up" />
	<LinearLayout
			width="240"
			height="wrap_content"
			orientation="vertical"
			cornerRadius="8"
			background="@color/KBaseColorContentBackground">
		<TextView
				width="wrap_content"
				height="wrap_content"
				marginTop="12"
				marginLeft="12"
				textSize="12"
				textFontWeight="400"
				textColor="@color/kColorSecondaryText"
				text="1/3" />
		<TextView
				width="match_parent"
				height="wrap_content"
				marginTop="4"
				marginLeft="12"
				marginRight="12"
				textSize="12"
				textFontWeight="400"
				maxLines="0"
				maxWidth="216"
				textColor="@color/kColorSecondaryText"
				text="{{@i18n/n_double_coin_guide_step_1}}" />
		<LinearLayout
				marginTop="12"
				marginLeft="12"
				marginRight="12"
				marginBottom="12"
				width="match_parent"
				height="24"
				orientation="horizontal"
				gravity="right"
				layout_gravity="right">
			<TextView
					width="wrap_content"
					height="match_parent"
					paddingLeft="16"
					paddingRight="16"
					gravity="center"
					background="@color/KBaseColorInputBackground"
					cornerRadius="4"
					textSize="12"
					textFontWeight="500"
					textColor="@color/kColorPrimaryText"
					text="{{@i18n/n_grid_user_guide_skip}}"
					onClick="@event.productsub.hidePop()" />
			<TextView
					width="wrap_content"
					height="match_parent"
					marginLeft="12"
					paddingLeft="16"
					paddingRight="16"
					gravity="center"
					background="@color/kColorMajorTheme100"
					cornerRadius="4"
					textSize="12"
					textFontWeight="500"
					textColor="@color/KBaseTextColor"
					text="{{@i18n/n_exchange_guide_next}}"
					onClick="@event.productsub.nextPop(2)" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
