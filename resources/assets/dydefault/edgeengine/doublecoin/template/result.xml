<LinearLayout
    width="match_parent"
    height="match_parent"
    orientation="vertical"
    background="@color/KBaseColorContentBackground">

    <ImageView
        height="28"
        width="28"
        marginLeft="16"
        marginTop="8"
        onClick="@event.result.continueBuy()"
        gravity="left"
        src="@drawable/edge_engine_sharkfin_close" />

    <LinearLayout
        width="match_parent"
        height="match_parent"
        orientation="vertical"
        gravity="centerHorizontal"
        background="@color/KBaseColorContentBackground">

        <LottieView
            width="375"
            height="187"
            loop="false"
            playStatus="@data.result.loadingLottieStatus"
            resource="@raw/edge_engine_earn_result" />

        <TextView
            text="{{@data.result.resultStr}}"
            marginTop="19"
            width="wrap_content"
            height="wrap_content"
            textSize="36"
            textFontWeight="500"
            textColor="@color/kColorPrimaryText" />

        <TextView
            text="{{@i18n/n_shark_fin_deposit_success}}"
            width="wrap_content"
            height="wrap_content"
            textSize="16"
            textFontWeight="400"
            textColor="@color/kColorPrimaryText" />

        <LinearLayout
            width="match_parent"
            height="wrap_content"
            marginTop="36"
            gravity="center">
            <TextView
                text="{{@i18n/n_otc_check_my_order}}"
                width="130"
                height="44"
                textSize="14"
                textFontWeight="500"
                paddingTop="13"
                paddingBottom="13"
                gravity="center"
                onClick="@event.result.checkMyOrder()"
                textColor="@color/kColorPrimaryText"
                cornerRadius="4"
                background="@color/KBaseColorDeepestBackground" />
            <TextView
                text="{{@i18n/n_double_coin_continue_buy}}"
                width="130"
                height="44"
                textSize="14"
                marginLeft="12"
                textFontWeight="500"
                paddingTop="13"
                paddingBottom="13"
                onClick="@event.result.continueBuy()"
                cornerRadius="4"
                gravity="center"
                textColor="#FFFFFF"
                background="#0173E5" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
