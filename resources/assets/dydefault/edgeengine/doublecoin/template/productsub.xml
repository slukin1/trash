<LinearLayout
    height="match_parent"
    orientation="vertical"
    background="@color/KBaseColorContentBackground"
    width="match_parent">

    <Scroller
        height="0"
        orientation="vertical"
        weight="1"
        width="match_parent">

        <LinearLayout
            height="wrap_content"
            orientation="vertical"
            background="@color/KBaseColorDeepestBackground"
            onClick="@event.productsub.clearFocus()"
            width="match_parent">

            <LinearLayout
                gravity="centerVertical"
                height="24"
                marginLeft="16"
                marginRight="16"
                marginTop="16"
                width="match_parent">

                <TextView
                    height="wrap_content"
                    text="{{@i18n/n_shark_fin_APY_Est}}"
                    textColor="@color/kColorThreeLevelText"
                    textSize="14"
                    width="wrap_content" />

                <View
                    height="0"
                    weight="1"
                    width="0" />

                <TextView
                    height="wrap_content"
                    text="{{@data.productsub.yearYield}}"
                    textColor="@color/kColorPriceGreen"
                    textSize="14"
                    textFontWeight="500"
                    width="wrap_content" />

            </LinearLayout>

            <LinearLayout
                gravity="centerVertical"
                height="36"
                marginLeft="16"
                marginRight="16"
                onClick="@event.productsub.openTipsDialog('1')"
                onPopDismiss="@event.productsub.closeTipsDialog()"
                popBackgroundDimmed="true"
                popCancelOnTouchOutside="true"
                popModalPositon="center"
                popShow="{{@data.productsub.tipsAlertShowCommon}}"
                popShowMode="modal"
                popTemplate="tipsDialogCommon.xml"
                width="match_parent">

				<FrameLayout
						weight="1"
						width="0"
						height="match_parent">

					<TextView
							marginTop="20"
							height="wrap_content"
							text="------------------------------------------------------"
							textColor="@color/kColorThreeLevelText"
							textSize="12"
							width="match_parent"
							ellipsis="false" />

					<LinearLayout
							width="match_parent"
							height="match_parent"
							gravity="centerVertical">

						<TextView
								height="wrap_content"
								text="{{@i18n/n_double_coin_yield}}"
								textColor="@color/kColorThreeLevelText"
								textSize="14"
								width="wrap_content" />
								
						<View
								weight="1"
								width="0"
								height="match_parent"
								background="@color/KBaseColorDeepestBackground" />
					</LinearLayout>
				</FrameLayout>

                <TextView
                    height="wrap_content"
                    text="{{@data.productsub.yield}}"
                    textColor="@color/kColorPrimaryText"
                    textSize="14"
                    width="wrap_content" />

            </LinearLayout>

            <LinearLayout
                gravity="centerVertical"
                height="20"
                marginLeft="16"
                marginRight="16"
                width="match_parent">

                <TextView
                    height="wrap_content"
                    text="{{@i18n/n_home_index_earn_time_limit}}"
                    textColor="@color/kColorThreeLevelText"
                    textSize="14"
                    width="wrap_content" />

                <View
                    height="0"
                    weight="1"
                    width="0" />

                <TextView
                    height="wrap_content"
                    text="{{@data.productsub.expireDate}}"
                    textColor="@color/kColorPrimaryText"
                    textSize="14"
                    width="wrap_content" />

            </LinearLayout>

            <LinearLayout
                gravity="centerVertical"
                height="20"
                marginLeft="16"
                marginRight="16"
                marginTop="8"
                width="match_parent">

                <TextView
                    height="wrap_content"
                    text="{{@i18n/n_asset_options_target_price}}"
                    textColor="@color/kColorThreeLevelText"
                    textSize="14"
                    width="wrap_content" />

                <View
                    height="0"
                    weight="1"
                    width="0" />

                <TextView
                    height="wrap_content"
                    text="{{@data.productsub.hookPrice}}"
                    textColor="@color/kColorPrimaryText"
                    textSize="14"
                    width="wrap_content" />

                <TextView
                    background="@color/KBaseColorContentBackground"
                    height="18"
                    marginLeft="4"
                    cornerRadius="2"
                    paddingLeft="4"
                    paddingRight="4"
					gravity="center"
                    text="{{@data.productsub.priceLimit}}"
                    textColor="@color/kColorSecondaryText"
                    textSize="10"
                    width="wrap_content" />

            </LinearLayout>

            <LinearLayout
                background="@color/KBaseColorContentBackground"
                height="wrap_content"
                marginTop="16"
                orientation="vertical"
                paddingLeft="16"
                paddingRight="16"
                topLeftRadius="8"
                topRightRadius="8"
                width="match_parent">

                <TextView
                    height="wrap_content"
                    marginTop="16"
                    text="{{@i18n/n_asset_subscribe_number}}"
                    textColor="@color/kColorPrimaryText"
                    textFontWeight="500"
                    textSize="16"
                    width="wrap_content" />

				<!-- pop1 -->
				<View
						width="0"
						height="0"
						popArrowDirection="up"
						popArrowHeight="0"
						popArrowWidth="0"
						popShowMode="anchor"
						popCancelOnTouchOutside="false"
						popBackgroundDimmed="true"
						popShow="{{@data.productsub.pop1Show}}"
						popTemplate="guideStep1.xml"
						popBackgroundAlpha="0.5" />

                <LinearLayout
                    background="@color/KBaseColorInputBackground"
                    gravity="centerVertical"
                    height="44"
                    marginTop="12"
                    cornerRadius="4"
                    borderColor="{{@data.productsub.subBorderColor}}"
                    borderWidth="1"
                    orientation="horizontal"
                    width="match_parent">

                    <EditText
                        height="match_parent"
                        hint="{{@data.productsub.subHint}}"
                        inputType="numberDecimal"
                        onReturn="@event.productsub.subOnReturn(@eventParams)"
                        onTextChange="@event.productsub.subTextChange(@eventParams)"
                        onFocusChange="@event.productsub.subFocusChange(@eventParams)"
                        paddingLeft="12"
                        paddingRight="8"
                        requestFocus="{{@data.productsub.subOnFocus}}"
                        text="{{@data.productsub.subInput}}"
                        textColor="@color/kColorPrimaryText"
                        textColorHint="@color/baseColorThreeLevelText"
                        textFontWeight="500"
                        textSize="20"
                        weight="1"
                        width="0" />

                    <TextView
                        height="wrap_content"
                        marginLeft="8"
                        text="{{@data.productsub.subUnit}}"
                        textColor="@color/kColorThreeLevelText"
                        textFontWeight="500"
                        textSize="14"
                        width="wrap_content" />

                    <View
                        background="@color/KBaseColorPrimarySeparator"
                        height="20"
                        marginLeft="8"
                        marginRight="8"
                        width="1" />

                    <TextView
                        height="wrap_content"
                        marginRight="16"
                        onClick="@event.productsub.maxSub()"
                        text="{{@i18n/n_otc_max}}"
                        textColor="@color/kColorPrimaryText"
                        textFontWeight="500"
                        textSize="14"
                        width="wrap_content" />

                </LinearLayout>

                <TextView
                    height="wrap_content"
                    text="{{@data.productsub.subErrorStr}}"
                    textColor="@color/KBaseInputInvalidTipColor"
                    textSize="12"
                    visibility="{{@data.productsub.subErrorVis}}"
                    marginTop="8"
                    width="wrap_content" />

                <LinearLayout
                    gravity="centerVertical"
                    height="wrap_content"
                    marginTop="8"
                    width="match_parent">

                    <TextView
                        height="wrap_content"
                        text="{{@i18n/n_double_coin_balance}}"
                        textColor="@color/kColorThreeLevelText"
                        textSize="12"
                        width="wrap_content"
						maxWidth="150"
						autoSizeTextType="uniform"
						autoSizeMinTextSize="10"
						maxLines="0" />

                    <TextView
                        height="wrap_content"
                        marginLeft="2"
                        text="{{@data.productsub.balance}}"
                        textColor="@color/kColorPrimaryText"
                        textFontWeight="500"
                        textSize="12"
                        width="wrap_content" />

                    <TextView
                        height="wrap_content"
                        marginLeft="3"
                        text="{{@data.productsub.subUnit}}"
                        textColor="@color/kColorPrimaryText"
                        textFontWeight="500"
                        textSize="12"
                        width="wrap_content" />

                    <TextView
                        height="wrap_content"
                        marginLeft="8"
                        onClick="@event.productsub.buyCoin()"
                        text="{{@i18n/n_shark_fin_buy_coin}}"
                        textColor="@color/kColorMajorTheme100"
                        textSize="12"
                        width="wrap_content" />

                    <View
                        background="@color/KBaseColorPrimarySeparator"
                        height="12"
                        marginLeft="4"
                        marginRight="4"
                        width="1" />

                    <TextView
                        height="wrap_content"
                        onClick="@event.productsub.transfer()"
                        onPopDismiss="@event.productsub.closeOpenAccountAlert()"
                        popBackgroundDimmed="true"
                        popCancelOnTouchOutside="true"
                        popModalPositon="bottom"
                        popShow="{{@data.productsub.openAccountAlertShow}}"
                        popShowMode="modal"
                        popTemplate="openAccountDialog.xml"
                        text="{{@i18n/n_balance_contract_transfer}}"
                        textColor="@color/kColorMajorTheme100"
                        textSize="12"
                        width="wrap_content" />

                </LinearLayout>

                <!-- <TextView
                    height="wrap_content"
                    text="{{@i18n/n_double_coin_sub_come_money_new}}"
                    textColor="@color/kColorThreeLevelText"
                    textSize="11"
                    textFontWeight="400"
                    layout_gravity="right"
                    width="wrap_content" /> -->

                <LinearLayout
                    gravity="centerVertical"
                    height="16"
                    marginTop="8"
                    width="match_parent">

                    <TextView
                        height="wrap_content"
                        text="{{@i18n/n_double_coin_residue_can_buy}}"
                        textColor="@color/kColorThreeLevelText"
                        textSize="12"
                        width="wrap_content" />

                    <TextView
                        gravity="right"
                        height="wrap_content"
                        marginLeft="2"
                        text="{{@data.productsub.residueBuy}}"
                        textColor="@color/kColorPrimaryText"
                        textSize="12"
                        textFontWeight="400"
                        weight="1"
                        width="0" />

                    <TextView
                        height="wrap_content"
                        marginLeft="2"
                        text="{{@data.productsub.subUnit}}"
                        textColor="@color/kColorPrimaryText"
                        textSize="12"
                        textFontWeight="400"
                        width="wrap_content" />

                </LinearLayout>

				<!-- pop2 -->
				<View
						width="0"
						height="0"
						popArrowDirection="up"
						popArrowHeight="0"
						popArrowWidth="0"
						popShowMode="anchor"
						popCancelOnTouchOutside="false"
						popBackgroundDimmed="true"
						popShow="{{@data.productsub.pop2Show}}"
						popTemplate="guideStep2.xml"
						popBackgroundAlpha="0.5" />

                <LinearLayout
                    gravity="centerVertical"
                    height="32"
                    width="match_parent"
                    visibility="{{@data.productsub.redeemPriceVis}}">

					<FrameLayout
							weight="1"
							width="0"
							height="match_parent">

						<TextView
								marginTop="16"
								height="wrap_content"
								text="------------------------------------------------------"
								textColor="@color/kColorThreeLevelText"
								textSize="12"
								width="match_parent"
								ellipsis="false" />

						<LinearLayout
								width="match_parent"
								height="match_parent"
								onClick="@event.productsub.openTipsDialog('2')"
								gravity="centerVertical">

							<TextView
									height="match_parent"
									onPopDismiss="@event.productsub.closeTipsDialog()"
									popBackgroundDimmed="true"
									popCancelOnTouchOutside="true"
									popModalPositon="center"
									popShow="{{@data.productsub.tipsAlertShowWp}}"
									popShowMode="modal"
									popTemplate="tipsDialogWp.xml"
									text="{{@i18n/n_double_coin_set_withdraw_price}}"
									textColor="@color/kColorThreeLevelText"
									textSize="12"
									gravity="center|left"
									width="wrap_content" />

							<View
									weight="1"
									width="0"
									height="match_parent"
									background="@color/KBaseColorContentBackground" />
						</LinearLayout>
					</FrameLayout>

					<LinearLayout
						paddingLeft="16"
						width="wrap_content"
						height="match_parent"
						onClick="@event.productsub.openWithdrawPriceInput()"
						orientation="horizontal"
						gravity="centerVertical">
						<TextView
							gravity="right"
							height="wrap_content"
							marginLeft="2"
							text="{{@data.productsub.openCloseStr}}"
							textColor="@color/kColorMajorTheme100"
							textSize="12"
							width="wrap_content" />

						<ImageView
							height="12"
							marginLeft="4"
							src="{{@data.productsub.openCloseRes}}"
							width="12" />
					</LinearLayout>
                    
                </LinearLayout>

                <LinearLayout
                    background="@color/KBaseColorInputBackground"
                    gravity="centerVertical"
                    height="44"
					marginBottom="8"
                    cornerRadius="4"
                    borderColor="{{@data.productsub.wpBorderColor}}"
                    borderWidth="1"
                    orientation="horizontal"
                    visibility="{{@data.productsub.withdrawPriceVis}}"
                    width="match_parent">

                    <EditText
                        height="match_parent"
                        hint="{{@data.productsub.withdrawPriceHint}}"
                        inputType="numberDecimal"
                        onReturn="@event.productsub.wpOnReturn(@eventParams)"
                        onTextChange="@event.productsub.wpTextChange(@eventParams)"
                        onFocusChange="@event.productsub.wpFocusChange(@eventParams)"
                        paddingLeft="12"
                        paddingRight="8"
                        requestFocus="{{@data.productsub.wpOnFocus}}"
                        textColor="@color/kColorPrimaryText"
                        textColorHint="@color/baseColorThreeLevelText"
                        textFontWeight="400"
                        textSize="14"
                        weight="1"
                        width="0" />

                    <TextView
                        height="wrap_content"
                        marginLeft="8"
                        marginRight="16"
                        text="{{@data.productsub.quoteCoin}}"
                        textColor="@color/kColorThreeLevelText"
                        textSize="14"
                        textFontWeight="500"
                        width="wrap_content" />

                </LinearLayout>

                <TextView
					marginBottom="8"
                    height="wrap_content"
                    text="{{@data.productsub.wpErrorStr}}"
                    textColor="@color/KBaseInputInvalidTipColor"
                    textSize="12"
                    visibility="{{@data.productsub.wpErrorVis}}"
                    width="wrap_content" />

                <LinearLayout
                    gravity="centerVertical"
                    height="22"
                    marginTop="24"
                    width="match_parent">

                    <TextView
                        height="wrap_content"
                        text="{{@i18n/n_double_coin_return_money}}"
                        textColor="@color/kColorPrimaryText"
                        textSize="16"
                        textFontWeight="500"
                        width="wrap_content" />

                    <ImageView
                        height="12"
                        marginLeft="4"
                        src="@drawable/edge_engine_shark_info_icon"
                        visibility="gone"
                        width="12" />

                    <View
                        height="0"
                        weight="1"
                        width="0" />

                    <TextView
                        height="wrap_content"
                        text="{{@data.productsub.indexPrice}}"
                        textColor="@color/kColorPrimaryText"
                        textSize="12"
                        width="wrap_content" />

                </LinearLayout>

                <DoubleCoinChart
                    chartBaseData="{{@data.productsub.chartBaseData}}"
                    height="wrap_content"
                    marginTop="12"
                    quantity="{{@data.productsub.quantity}}"
                    width="343"
                    withDrawPrice="{{@data.productsub.withDrawPrice}}" />

                <TextView
                    height="wrap_content"
                    text="{{@i18n/n_double_coin_expire_time_tips_latest}}"
                    textColor="@color/kColorThreeLevelText"
                    textSize="10"
                    marginTop="12"
                    marginBottom="8"
                    width="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </Scroller>

    <View
        height="0.5"
        width="match_parent"
        background="@color/KBaseColorPrimarySeparator" />

    <LinearLayout
        height="20"
        marginTop="16"
        width="match_parent"
        gravity="centerVertical"
        marginLeft="16"
        marginRight="16"
		orientation="horizontal">

        <TextView
            height="wrap_content"
            text="{{@i18n/n_double_coin_estimated_profit_new}}"
            textColor="@color/kColorThreeLevelText"
            textSize="12"
            width="wrap_content" />

        <TextView
            height="wrap_content"
            marginLeft="2"
            text="{{@data.productsub.estimatedProfit}}"
            textColor="@color/kColorPrimaryText"
            textSize="14"
            gravity="right"
            textFontWeight="500"
            width="0"
            weight="1" />

        <TextView
            height="wrap_content"
            marginLeft="2"
            textFontWeight="400"
            text=" {{@data.productsub.quoteCoin}}"
            textColor="@color/kColorPrimaryText"
            textSize="12"
			gravity="right"
            width="wrap_content" />

    </LinearLayout>

    <TextView
        background="{{@data.productsub.btnColor}}"
        cornerRadius="4"
        gravity="center"
        height="44"
        marginBottom="16"
        marginLeft="16"
        marginRight="16"
        marginTop="16"
        onClick="@event.productsub.showSubDialog()"
        text="{{@i18n/n_balance_mining_deposit}}"
        textColor="{{@data.productsub.btnTitleColor}}"
        textFontWeight="600"
        textSize="14"
        width="match_parent"
        onPopDismiss="@event.productsub.closeSubDialog()"
        popBackgroundDimmed="true"
        popCancelOnTouchOutside="true"
        popModalPositon="bottom"
        popShow="{{@data.productsub.subAlertShow}}"
        popShowMode="modal"
        popTemplate="confirmOrderDialog.xml" />
	
	<!-- pop3 -->
	<View
			width="0"
			height="0"
			popArrowDirection="down"
			popArrowHeight="0"
			popArrowWidth="0"
			popShowMode="anchor"
			popCancelOnTouchOutside="false"
			popBackgroundDimmed="true"
			popShow="{{@data.productsub.pop3Show}}"
			popTemplate="guideStep3.xml"
			popBackgroundAlpha="0.5" />

</LinearLayout>
