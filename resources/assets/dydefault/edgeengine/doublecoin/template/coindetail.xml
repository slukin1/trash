<RecyclerView
    data="@data.coindetail.mainData"
    height="match_parent"
    itemKey="element"
    onRefresh="@event.coindetail.refresh()"
    orientation="vertical"
    refreshStatus="{{@data.coindetail.refreshStatus}}"
    typeKey="type"
    background="@color/KBaseColorDeepestBackground"
    width="match_parent">

    <!-- 详情头部 -->
    <Header
        height="wrap_content"
        width="match_parent">

        <LinearLayout
            background="@color/KBaseColorDeepestBackground"
            height="wrap_content"
            orientation="vertical"
            width="match_parent">

            <!-- 副标题 -->
            <LinearLayout
                gravity="centerVertical"
                height="64"
                marginLeft="16"
                marginRight="16"
                orientation="horizontal"
                width="match_parent">

                <FrameLayout
                    height="24"
                    width="28">

                    <ImageView
                        height="24"
                        src="{{@data.coindetail.baseCoinIcon}}"
                        width="24" />

                    <ImageView
                        height="12"
                        layout_gravity="right|bottom"
                        src="{{@data.coindetail.quoteCoinIcon}}"
                        width="12"
						cornerRadius="6"
						borderWidth="1"
						borderColor="@color/KBaseColorDeepestBackground" />

                </FrameLayout>

                <TextView
                    height="wrap_content"
                    marginLeft="8"
                    text="{{@data.coindetail.subTitle}}"
                    textColor="@color/kColorPrimaryText"
                    textSize="16"
					textFontWeight="500"
                    width="wrap_content"
					maxWidth="203"
					autoSizeTextType="uniform"
					autoSizeMinTextSize="14" />

                <View
                    height="0"
                    weight="1"
                    width="0" />
                <!-- 计价币种切换 -->
                <LinearLayout
                    borderColor="@color/KBaseColorPrimarySeparator"
                    borderWidth="1"
                    gravity="centerVertical"
                    height="28"
                    cornerRadius="8"
                    visibility="{{@data.coindetail.quoteVis}}"
                    orientation="horizontal"
                    width="100">

                    <TextView
                        background="{{@data.coindetail.usdtBg}}"
                        gravity="center"
                        height="20"
                        onClick="@event.coindetail.usdtClick()"
                        text="USDT"
                        topLeftRadius="4"
                        topRightRadius="4"
                        bottomRightRadius="4"
                        bottomLeftRadius="4"
                        marginLeft="4"
                        textColor="{{@data.coindetail.usdtColor}}"
                        textFontWeight="500"
                        textSize="11"
                        width="44" />

                    <TextView
                        background="{{@data.coindetail.usdcBg}}"
                        gravity="center"
                        height="20"
                        topLeftRadius="4"
                        topRightRadius="4"
                        bottomRightRadius="4"
                        bottomLeftRadius="4"
                        marginLeft="4"
                        onClick="@event.coindetail.usdcClick()"
                        text="USDC"
                        textColor="{{@data.coindetail.usdcColor}}"
                        textFontWeight="500"
                        textSize="11"
                        width="44" />

                </LinearLayout>

            </LinearLayout>

            <!-- 三级文案 -->
            <TextView
                height="wrap_content"
                marginLeft="16"
                marginRight="16"
                text="{{@data.coindetail.threeTitle}}"
                textColor="@color/kColorSecondaryText"
                textSize="12"
                maxLines="0"
				lineSpacing="4"
                width="match_parent" />

            <LinearLayout
                background="@color/KBaseColorContentBackground"
                height="wrap_content"
                marginTop="16"
                orientation="vertical"
                topLeftRadius="8"
                topRightRadius="8"
                width="match_parent">

                <!-- 分时tab -->
                <Scroller
                    height="56"
                    orientation="horizontal"
                    width="match_parent">

                    <LinearLayout
                        gravity="center"
                        height="56"
                        marginLeft="8"
                        marginRight="8"
                        orientation="horizontal"
                        width="wrap_content">
                        <For
                            data="@data.coindetail.tabData"
                            itemKey="element"
                            typeKey="element">
                            <Cell
                                height="56"
                                marginLeft="8"
                                marginRight="8"
                                width="wrap_content">
                                <TextView
									paddingTop="6"
                                    gravity="center"
                                    height="56"
                                    onClick="@event.coindetail.tabClick('{{@element.tag}}')"
                                    text="{{@element.title}}"
                                    textColor="{{@element.titleColor}}"
                                    textFontWeight="500"
                                    textSize="{{@element.titleSize}}"
                                    width="wrap_content" />
                            </Cell>
                        </For>
                    </LinearLayout>
                </Scroller>
                <!-- 分割线 -->
                <View
                    background="@color/eColorPrimarySeparator"
                    height="0.5"
                    width="match_parent" />

                <!-- 指数价 -->
                <LinearLayout
                    gravity="centerVertical"
                    height="wrap_content"
                    width="match_parent"
                    marginLeft="16"
                    orientation="horizontal">

                    <TextView
						marginTop="12"
						marginBottom="12"
                        height="wrap_content"
                        text="{{@data.coindetail.indexPrice}}"
                        textColor="@color/kColorPrimaryText"
                        textSize="14"
                        textFontWeight="500"
                        width="wrap_content" />

                    <View
                        height="0"
                        width="0"
                        weight="1" />

                    <ImageView
						paddingLeft="12"
						paddingTop="12"
						paddingBottom="12"
                        height="wrap_content"
                        width="wrap_content"
                        paddingRight="4"
						onClick="@event.coindetail.toCustom()"
                        src="@drawable/edge_engine_double_coin_custom" />

                    <TextView
						paddingTop="12"
						paddingBottom="12"
						paddingRight="16"
                        height="wrap_content"
                        width="wrap_content"
                        text="{{@i18n/n_double_coin_free_custom}}"
                        textColor="@color/kColorThreeLevelText"
                        textSize="12"
                        onClick="@event.coindetail.toCustom()"
                        textFontWeight="500" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </Header>

    <Cell
        height="wrap_content"
        width="match_parent"
        background="@color/KBaseColorContentBackground"
        type="1">

        <LinearLayout
            width="match_parent"
            height="wrap_content"
            orientation="vertical">

            <!-- 期限cell -->
            <LinearLayout
                gravity="centerVertical"
                height="wrap_content"
                marginLeft="16"
                marginRight="16"
                marginTop="8"
                orientation="horizontal"
                width="match_parent">

                <TextView
                    height="wrap_content"
                    text="{{@element.timeLimit}}"
                    textColor="@color/kColorSecondaryText"
                    textSize="12"
                    width="wrap_content" />

                <View
                    background="@color/baseColorThreeLevelText"
                    height="10"
                    marginLeft="8"
                    marginRight="8"
                    width="1" />

                <TextView
                    height="wrap_content"
                    text="{{@element.dueDate}}"
                    textColor="@color/baseColorThreeLevelText"
                    textSize="12"
                    width="wrap_content" />

            </LinearLayout>

            <!-- 产品cell -->
            <LinearLayout
                width="match_parent"
                height="wrap_content"
                orientation="vertical"
                borderColor="@color/KBaseColorPrimarySeparator"
                borderWidth="0.5"
                cornerRadius="8"
                marginLeft="16"
                marginTop="12"
                paddingBottom="4"
                paddingTop="4"
                marginRight="16"
				marginBottom="8">

                <LinearLayout
                    width="match_parent"
                    height="wrap_content"
                    orientation="horizontal"
                    marginTop="8"
                    marginLeft="16"
                    marginRight="16">

                    <TextView
                        width="wrap_content"
                        height="wrap_content"
                        text="{{@i18n/n_double_coin_earn_target_price}}"
                        textColor="@color/eBaseColorThreeLevelText"
                        textSize="11" />

                    <View
                        width="0"
                        height="0"
                        weight="1" />

                    <TextView
                        width="wrap_content"
                        height="wrap_content"
                        text="{{@i18n/n_shark_fin_APY_Est}}"
                        textColor="@color/eBaseColorThreeLevelText"
                        textSize="11" />

                </LinearLayout>

                <For
                    data="@element.products"
                    itemKey="childElement"
                    typeKey="type">
                    <!-- 产品cell -->
                    <Cell
                        height="60"
                        width="match_parent"
                        type="2">

                        <LinearLayout
                            gravity="centerVertical"
                            height="22"
                            marginLeft="16"
                            marginRight="16"
                            marginTop="19"
                            marginBottom="19"
                            orientation="horizontal"
                            onClick="@event.coindetail.itemOnClick({{@element.index}},{{@childElement.index}})"
                            width="match_parent">

                            <TextView
                                height="wrap_content"
                                text="{{@childElement.price}}"
                                textColor="@color/kColorPrimaryText"
                                textSize="16"
                                textFontWeight="500"
                                width="wrap_content" />

                            <TextView
                                bottomLeftRadius="4"
                                bottomRightRadius="4"
                                topLeftRadius="4"
                                topRightRadius="4"
                                height="18"
                                marginLeft="8"
                                paddingLeft="4"
                                paddingRight="4"
								gravity="center"
                                text="{{@childElement.yieldByDay}}"
                                textColor="@color/kColorSecondaryText"
                                textSize="11"
                                textFontWeight="500"
                                background="@color/kColorInputFill"
                                width="wrap_content" />

                            <View
                                height="0"
                                weight="1"
                                width="0" />

                            <TextView
                                height="wrap_content"
                                text="{{@childElement.yieldByYear}}"
                                textColor="@color/kColorPriceGreen"
                                textSize="18"
                                textFontWeight="500"
                                width="wrap_content" />

                        </LinearLayout>
                    </Cell>
                </For>
            </LinearLayout>
        </LinearLayout>

    </Cell>

    <Cell
        type="2"
        width="match_parent"
        height="wrap_content">
        <LinearLayout
            width="match_parent"
            paddingTop="6"
            background="@color/KBaseColorContentBackground"
            height="520"
            gravity="centerHorizontal"
            orientation="vertical">
            <ImageView
                src="@drawable/edge_engine_double_coin_empty_data"
                marginTop="80"
                width="76"
                height="76" />
            <TextView
                text="{{@i18n/n_double_coin_earn_home_empty}}"
                width="wrap_content"
                height="wrap_content"
                textSize="12"
                textFontWeight="400"
                textColor="@color/eBaseColorThreeLevelText"
                marginTop="12" />
            <TextView
                text="{{@i18n/n_exchange_prime_refresh}}"
                marginTop="12"
                marginRight="10"
                marginLeft="10"
                cornerRadius="4"
                marginBottom="10"
                width="165"
                height="36"
                textSize="12"
                gravity="center"
                textFontWeight="400"
                background="@color/kColorInputFill"
                onClick="@event.coindetail.refresh()"
                textColor="@color/kColorPrimaryText">
            </TextView>
        </LinearLayout>
    </Cell>

</RecyclerView>
