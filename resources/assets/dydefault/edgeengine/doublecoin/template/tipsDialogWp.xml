<LinearLayout
    background="@color/KBaseColorInputBackground"
    height="wrap_content"
    orientation="vertical"
    width="325"
    cornerRadius="4"
    paddingLeft="16"
    paddingRight="16">

    <TextView
        height="wrap_content"
        maxLines="0"
        textFontWeight="500"
        text="{{@i18n/n_double_coin_set_withdraw_price}}"
        textColor="@color/kColorPrimaryText"
        textSize="16"
        marginTop="16"
        width="match_parent" />

    <Scroller
        height="270"
        width="match_parent"
        marginTop="16"
        orientation="vertical">

        <TextView
            height="wrap_content"
            maxLines="0"
            textFontWeight="400"
            text="{{@data.productsub.tipsStr}}"
            textColor="@color/kColorPrimaryText"
            textSize="14"
			lineSpacing="2"
            width="match_parent" />
            
    </Scroller>

    <TextView
        background="@color/kColorMajorTheme100"
        gravity="center"
        height="40"
        cornerRadius="4"
        textFontWeight="500"
        marginTop="16"
        marginBottom="16"
        onClick="@event.productsub.closeTipsDialog()"
        text="{{@i18n/n_sure}}"
        textColor="@color/KBaseColorContentBackground"
        textSize="14"
        width="match_parent" />

</LinearLayout>
