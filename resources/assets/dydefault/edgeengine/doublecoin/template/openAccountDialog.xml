<LinearLayout
    width="375"
    height="wrap_content"
    topLeftRadius="8"
    topRightRadius="8"
    background="@color/KBaseColorInputBackground"
    orientation="vertical">


    <LinearLayout
        width="match_parent"
        height="wrap_content"
        orientation="horizontal">

        <TextView
            width="wrap_content"
            height="wrap_content"
            textColor="@color/kColorPrimaryText"
            textSize="16"
            textFontWeight="500"
            marginTop="14"
            marginLeft="16"
            text="{{@i18n/n_double_coin_open_account}}" />
        <View
            width="0"
            height="0"
            weight="1" />

        <ImageView
            width="wrap_content"
            height="wrap_content"
            marginTop="10"
            onClick="@event.productsub.closeOpenAccountAlert()"
            marginRight="16"
            src="@drawable/edge_engine_copy_trading_dialog_close" />

    </LinearLayout>

    <LinearLayout
        width="match_parent"
        height="wrap_content"
        marginTop="5"
        gravity="center"
        orientation="horizontal">

        <TextView
            width="0"
            weight="1"
            textSize="20"
            textColor="@color/kColorPrimaryText"
            text="{{@i18n/n_double_coin_open_account_tips}}"
            marginRight="20"
            maxLines="0"
            textFontWeight="500"
            marginLeft="16"
            height="wrap_content" />


        <ImageView
            width="wrap_content"
            height="wrap_content"
            marginRight="38"
            src="@drawable/double_coin_open_account" />


    </LinearLayout>

    <TextView
        width="match_parent"
        height="44"
        background="@color/kColorMajorTheme100"
        marginLeft="16"
        marginRight="16"
        text="{{@i18n/n_double_coin_pro_open}}"
        gravity="center"
        textSize="14"
        cornerRadius="4"
        textFontWeight="500"
        marginBottom="16"
        onClick="@event.productsub.openDoubleCoinAccount()"
        textColor="@color/KBaseTextColor"
        marginTop="20" />


</LinearLayout>
