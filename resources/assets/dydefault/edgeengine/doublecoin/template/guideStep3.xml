<LinearLayout
		width="375"
		height="wrap_content"
		orientation="vertical"
		gravity="center">
	<LinearLayout
			width="240"
			height="wrap_content"
			orientation="vertical"
			cornerRadius="8"
			background="@color/KBaseColorContentBackground">
		<TextView
				width="wrap_content"
				height="wrap_content"
				marginTop="12"
				marginLeft="12"
				textSize="12"
				textFontWeight="400"
				textColor="@color/kColorSecondaryText"
				text="3/3" />
		<TextView
				width="match_parent"
				height="wrap_content"
				marginTop="4"
				marginLeft="12"
				marginRight="12"
				textSize="12"
				textFontWeight="400"
				maxLines="0"
				maxWidth="216"
				textColor="@color/kColorSecondaryText"
				text="{{@i18n/n_double_coin_guide_step_3}}" />
		<LinearLayout
				marginTop="12"
				marginLeft="12"
				marginRight="12"
				marginBottom="12"
				width="match_parent"
				height="24"
				orientation="horizontal"
				gravity="right"
				layout_gravity="right">
			<TextView
					width="wrap_content"
					height="match_parent"
					paddingLeft="16"
					paddingRight="16"
					gravity="center"
					background="@color/KBaseColorInputBackground"
					cornerRadius="4"
					textSize="12"
					textFontWeight="500"
					textColor="@color/kColorPrimaryText"
					text="{{@i18n/n_exchange_guide_last}}"
					onClick="@event.productsub.nextPop(2)" />
			<TextView
					width="wrap_content"
					height="match_parent"
					marginLeft="12"
					paddingLeft="16"
					paddingRight="16"
					gravity="center"
					background="@color/kColorMajorTheme100"
					cornerRadius="4"
					textSize="12"
					textFontWeight="500"
					textColor="@color/KBaseTextColor"
					text="{{@i18n/n_new_user_guide_enter}}"
					onClick="@event.productsub.hidePop()" />
		</LinearLayout>
	</LinearLayout>

	<ImageView
			marginBottom="8"
			width="8"
			height="4"
			src="@drawable/edge_engine_earn_pop_down" />

	<!--pop3-->
	<LinearLayout
			width="match_parent"
			height="wrap_content"
			marginLeft="8"
			marginRight="8"
			marginBottom="8"
			paddingLeft="8"
			paddingRight="8"
			paddingBottom="8"
			gravity="centerVertical"
			orientation="vertical"
			background="@color/KBaseColorContentBackground"
			cornerRadius="8">

		<LinearLayout
				height="20"
				marginTop="16"
				width="match_parent"
				gravity="centerVertical"
				orientation="horizontal">

			<TextView
					height="wrap_content"
					text="{{@i18n/n_double_coin_estimated_profit_new}}"
					textColor="@color/kColorThreeLevelText"
					textSize="12"
					width="wrap_content" />

			<TextView
					height="wrap_content"
					marginLeft="2"
					text="{{@data.productsub.estimatedProfit}}"
					textColor="@color/kColorPrimaryText"
					textSize="12"
					gravity="right"
					textFontWeight="500"
					width="0"
					weight="1" />

			<TextView
					height="wrap_content"
					marginLeft="2"
					textFontWeight="400"
					text="{{@data.productsub.quoteCoin}}"
					textColor="@color/kColorPrimaryText"
					textSize="12"
					width="wrap_content" />

		</LinearLayout>

		<TextView
				background="{{@data.productsub.btnColor}}"
				cornerRadius="4"
				gravity="center"
				height="44"
				marginTop="16"
				text="{{@i18n/n_balance_mining_deposit}}"
				textColor="@color/KBaseColorContentBackground"
				textFontWeight="600"
				textSize="14"
				width="match_parent" />
	</LinearLayout>
</LinearLayout>
