<LinearLayout
    width="match_parent"
    height="match_parent"
    orientation="vertical"
    background="@color/KBaseColorContentBackground">

    <Scroller
        height="0"
        orientation="vertical"
        weight="1"
        width="match_parent">

        <LinearLayout
            width="match_parent"
            height="match_parent"
            paddingTop="16"
            paddingLeft="16"
            paddingRight="16"
            paddingBottom="16"
            orientation="vertical">
            <!-- 币种选择 -->
            <TextView
                text="{{@i18n/n_double_coin_earn_coin}}"
                textFontWeight="400"
                height="wrap_content"
                width="wrap_content"
                textSize="12"
                textColor="@color/kColorPrimaryText" />
            <LinearLayout
                marginTop="8"
                height="44"
                width="343"
                cornerRadius="4"
                orientation="horizontal"
                gravity="centerVertical"
                background="@color/KBaseColorInputBackground"
                onClick="@event.custom.openAlert('coinChoseAlertShow')"
                onPopDismiss="@event.custom.closeAlert('coinChoseAlertShow')"
                popBackgroundDimmed="true"
                popCancelOnTouchOutside="true"
                popModalPositon="bottom"
                popShow="{{@data.custom.coinChoseAlertShow}}"
                popShowMode="modal"
                popTemplate="coinChoseDialog.xml">
                <ImageView
                    src="{{@data.custom.selectedIcon}}"
                    width="24"
                    marginLeft="10"
                    height="24" />
                <TextView
                    text="{{@data.custom.selectedCoin}}"
                    marginLeft="3"
                    textSize="14"
                    weight="1"
                    height="18"
                    textFontWeight="400"
                    textColor="@color/kColorPrimaryText" />

                <ImageView
                    width="12"
                    height="12"
                    marginRight="10"
                    src="@drawable/edge_engine_dbcoin_arrow" />
            </LinearLayout>
            <!-- 类型选择 -->
            <TextView
                text="{{@i18n/n_shark_fin_product_type}}"
                textFontWeight="400"
                height="wrap_content"
                width="wrap_content"
                textSize="12"
                marginTop="24"
                textColor="@color/kColorPrimaryText" />
            <LinearLayout
                marginTop="8"
                height="44"
                width="343"
                cornerRadius="4"
                orientation="horizontal"
                gravity="centerVertical"
                background="@color/KBaseColorInputBackground"
                onClick="@event.custom.openAlert('typeChoseAlertShow')"
                onPopDismiss="@event.custom.closeAlert('typeChoseAlertShow')"
                popBackgroundDimmed="true"
                popCancelOnTouchOutside="true"
                popModalPositon="bottom"
                popShow="{{@data.custom.typeChoseAlertShow}}"
                popShowMode="modal"
                popTemplate="typeChoseDialog.xml">
                <FrameLayout
                    width="wrap_content"
                    height="wrap_content"
                    marginLeft="10">
                    <ImageView
                        width="24"
                        height="24"
                        src="{{@data.custom.bigIcon}}" />
                    <ImageView
                        width="12"
                        height="12"
                        marginLeft="16"
                        marginTop="12"
                        src="{{@data.custom.smallIcon}}" />
                </FrameLayout>
                <TextView
                    text="{{@data.custom.selectedType}}"
                    marginLeft="3"
                    textSize="14"
                    weight="1"
                    height="18"
                    textFontWeight="400"
                    textColor="@color/kColorPrimaryText" />

                <ImageView
                    width="12"
                    height="12"
                    marginRight="10"
                    src="@drawable/edge_engine_dbcoin_arrow" />
            </LinearLayout>
            <!-- 日期选择 -->
            <TextView
                text="{{@i18n/n_double_coin_earn_product_due_date}}"
                textFontWeight="400"
                height="wrap_content"
                width="wrap_content"
                textSize="12"
                marginTop="24"
                textColor="@color/kColorPrimaryText" />
            <LinearLayout
                marginTop="8"
                height="44"
                width="343"
                cornerRadius="4"
                orientation="horizontal"
                gravity="centerVertical"
                onClick="@event.custom.showDatePicker()"
                background="@color/KBaseColorInputBackground">
                <TextView
                    text="{{@data.custom.selectedDate}}"
                    marginLeft="10"
                    textSize="14"
                    weight="1"
                    height="18"
                    textFontWeight="400"
                    textColor="{{@data.custom.selectedDateColor}}" />

                <ImageView
                    width="12"
                    height="12"
                    marginRight="10"
                    src="@drawable/edge_engine_dbcoin_arrow" />
            </LinearLayout>

            <TextView
                text="{{@data.custom.productDate}}"
                visibility="{{@data.custom.productDateVisible|gone}}"
                textFontWeight="400"
                height="wrap_content"
                width="wrap_content"
                textSize="12"
                marginTop="8"
                textColor="@color/KBaseColorSecondaryText" />
            <!-- 目标价 -->
            <LinearLayout
                marginTop="24"
                height="20"
                width="343"
                orientation="horizontal"
                gravity="centerVertical">
                <TextView
                    text="{{@i18n/n_double_coin_earn_target_price}}"
                    textSize="12"
                    weight="1"
                    height="20"
                    textFontWeight="400"
                    textColor="@color/kColorPrimaryText" />

                <TextView
                    text="{{@data.custom.coinIndexPrice}}"
                    textSize="12"
                    width="wrap_content"
                    height="20"
                    gravity="right"
                    textFontWeight="400"
                    textColor="@color/kColorPrimaryText" />
            </LinearLayout>
            <!-- 目标价输入 -->
            <LinearLayout
                marginTop="4"
                height="44"
                width="343"
                cornerRadius="4"
                orientation="horizontal"
                gravity="centerVertical"
                borderWidth="1"
                borderColor="{{@data.custom.editTextBorderColor}}"
                background="@color/KBaseColorInputBackground">
                <EditText
                    inputType="numberDecimal"
                    hint="{{@data.custom.priceRange}}"
                    height="18"
                    weight="1"
                    textColor="@color/kColorPrimaryText"
                    textColorHint="@color/baseColorThreeLevelText"
                    marginLeft="10"
                    textSize="14"
                    requestFocus="{{@data.custom.onFocus}}"
                    onTextChange="@event.custom.textChange(@eventParams)"
                    onFocusChange="@event.custom.focusChange(@eventParams)"
                    text="{{@data.custom.targetPriceText}}"
                    textFontWeight="400">
                </EditText>
                <ImageView
                    src="@drawable/edge_engine_dbcoin_edit_clean"
                    width="20"
                    visibility="{{@data.custom.clearVisibility|gone}}"
                    height="20"
                    marginLeft="4"
                    onClick="@event.custom.cleanPrice()" />
                <TextView
                    text="{{@data.custom.priceUnit}}"
                    marginLeft="4"
                    textSize="14"
                    width="wrap_content"
                    height="wrap_content"
                    textFontWeight="500"
                    marginRight='10'
                    textColor="@color/KBaseColorSecondaryText" />
            </LinearLayout>

            <TextView
                marginTop="8"
                text="{{@data.custom.priceRange}}"
                textFontWeight="400"
                height="wrap_content"
                width="wrap_content"
                textSize="12"
                textColor="#E94359"
                visibility="{{@data.custom.editErrorShow|gone}}" />

            <LinearLayout
                marginTop="8"
                orientation="horizontal"
                width="wrap_content"
                height="wrap_content"
                visibility="{{@data.custom.productYieldVisible|gone}}">
                <TextView
                    text="{{@i18n/n_double_coin_earn_estimate_annual_yield}}"
                    textFontWeight="400"
                    height="wrap_content"
                    width="wrap_content"
                    textSize="12"
                    textColor="@color/KBaseColorSecondaryText" />
                <TextView
                    text="{{@data.custom.productYield}}"
                    textFontWeight="400"
                    height="wrap_content"
                    width="wrap_content"
                    textSize="12"
                    textColor="#00A171" />
            </LinearLayout>

        </LinearLayout>
    </Scroller>

    <View
        width="match_parent"
        height="1"
        background="@color/KBaseColorInputBackground" />

    <LinearLayout
        width="match_parent"
        height="44"
        cornerRadius="4"
        gravity="center"
        marginLeft="16"
        marginRight="16"
        marginBottom="16"
        marginTop="16"
        onClick="@event.custom.submit()"
        background="{{@data.custom.btnBgColor}}">
        <TextView
            text="{{@i18n/n_sure}}"
            gravity="center"
            width="wrap_content"
            height="wrap_content"
            textSize="14"
            textFontWeight="600"
            textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
