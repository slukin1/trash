<LinearLayout
    width="375"
    height="wrap_content"
    orientation="vertical"
    gravity="center"
    paddingLeft="16"
    paddingRight="16">
  <TextView
      width="343"
      height="wrap_content"
      text="{{@i18n/n_contract_no_data_deposit}}"
      textSize="12"
      maxLines="0"
      marginTop="30"
      textColor="@color/kColorThreeLevelText"
      textFontWeight="400"
      gravity="center" />
  <View height="12" />
  <LinearLayout
      width="343"
      height="wrap_content"
      orientation="horizontal"
      gravity="center">
    <!-- 买币 -->
    <LinearLayout
        width="wrap_content"
        height="wrap_content"
        orientation="vertical"
        gravity="center"
        onClick="@event.futures.buy()">
      <ImageView
          width="30"
          height="30"
          src="@drawable/edge_engine_ic_asset_top_buy" />
      <View height="4" />
      <TextView
          width="80"
          height="wrap_content"
          text="{{@i18n/n_shark_fin_buy_coin}}"
          textSize="12"
          textColor="@color/kColorPrimaryText"
          textFontWeight="400"
          gravity="center" />
    </LinearLayout>
    <!-- 充值 -->
    <LinearLayout
        width="wrap_content"
        height="wrap_content"
        orientation="vertical"
        gravity="center"
        onClick="@event.futures.recharge()">
      <ImageView
          width="30"
          height="30"
          src="@drawable/ic_asset_top_deposit" />
      <View height="4" />
      <TextView
          width="80"
          height="wrap_content"
          text="{{@i18n/n_currency_operation_type_deposit}}"
          textSize="12"
          textColor="@color/kColorPrimaryText"
          textFontWeight="400"
          gravity="center" />
    </LinearLayout>
    <!-- 跟单 -->
    <LinearLayout
        width="wrap_content"
        height="wrap_content"
        orientation="vertical"
        gravity="center"
        onClick="@event.futures.copytrading()">
      <ImageView
          width="30"
          height="30"
          src="@drawable/edge_engine_ic_copytrading" />
      <View height="4" />
      <TextView
          width="80"
          height="wrap_content"
          text="{{@i18n/n_asset_contract_to_copy_trading}}"
          textSize="12"
          textColor="@color/kColorPrimaryText"
          textFontWeight="400"
          gravity="center" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
