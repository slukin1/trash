<LinearLayout height="match_parent" orientation="vertical" width="match_parent">
    <RecyclerView height="match_parent" width="match_parent" gravity="centerVertical" orientation="vertical" data="@data.historyPosition.historyPositionList" onRefresh="@event.historyPosition.onRefresh()" onLoadMore="@event.historyPosition.onLoadMore()" refreshStatus="{{@data.historyPosition.refreshStatus}}" loadMoreStatus="{{@data.historyPosition.loadMoreStatus}}" visibility="{{@data.historyPosition.listViewVisibility | gone}}" itemKey="item" typeKey="type">

        <!-- 平仓卡片 -->
        <Cell width="match_parent" height="wrap_content" type="1">
            <LinearLayout width="match_parent" height="wrap_content" orientation="vertical" borderWidth="0.5" borderColor="@color/KBaseColorPrimarySeparator" cornerRadius="8" marginStart="16" marginEnd="16" marginTop="16">
                <TextView width="match_parent" height="wrap_content" paddingStart="8" paddingTop="5" paddingEnd="8" paddingBottom="5" text="{{@item.title}}" textColor="@color/kColorThreeLevelText" textSize="12" background="@color/kColorTipsBackground" topLeftRadius="8" topRightRadius="8"/>
                <LinearLayout width="match_parent" height="wrap_content" paddingStart="12" paddingEnd="12" orientation="vertical">
                    <LinearLayout width="match_parent" height="wrap_content" marginTop="12" gravity="centerVertical" orientation="horizontal">
                        <ImageView width="30" height="30" src="{{@item.icon}}"/>
                        <LinearLayout width="wrap_content" height="wrap_content" orientation="vertical" paddingStart="6">
                            <TextView width="wrap_content" height="wrap_content" text="{{@item.symbol}}" textFontWeight="500" textColor="@color/kColorPrimaryText" textSize="16"/>
                            <LinearLayout width="wrap_content" height="wrap_content" orientation="horizontal">
                                <TextView width="wrap_content" height="wrap_content" background="{{@item.posSidebackColor}}" paddingStart="4" paddingTop="2" paddingEnd="4" paddingBottom="2" text="{{@item.posSide}}" textColor="{{@item.posSideColor}}" textFontWeight="500" textSize="10" cornerRadius="2"/>
                                <TextView width="wrap_content" height="wrap_content" marginLeft="4" background="@color/kColorInputFill" paddingStart="4" paddingTop="2" paddingEnd="4" paddingBottom="2" text="{{@item.marginMode}}" textColor="@color/kColorSecondaryText" textFontWeight="500" textSize="10" cornerRadius="2"/>
                                <TextView width="wrap_content" height="wrap_content" marginLeft="4" background="@color/kColorInputFill" paddingStart="4" paddingTop="2" paddingEnd="4" paddingBottom="2" text="{{@item.lever}}" textColor="@color/kColorSecondaryText" textFontWeight="500" textSize="10" cornerRadius="2"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout width="match_parent" height="wrap_content" marginTop="12" orientation="horizontal">
                        <LinearLayout width="0" height="wrap_content" weight="1" gravity="start" orientation="vertical">
                            <TextView width="wrap_content" height="wrap_content" text="{{@item.pnlName}}" textColor="@color/kColorThreeLevelText" maxLines="2" textSize="12"/>
                            <TextView width="wrap_content" height="wrap_content" text="{{@item.pnl}}" textColor="{{@item.pnlColor}}" textFontWeight="500" textSize="20"/>
                        </LinearLayout>
                        <LinearLayout width="0" height="wrap_content" weight="1" gravity="end" orientation="vertical">
                            <TextView width="match_parent" height="wrap_content" text="{{@item.pnlRatioName}}" textColor="@color/kColorThreeLevelText" maxLines="2" gravity="right" textSize="12"/>
                            <TextView width="wrap_content" height="wrap_content" text="{{@item.pnlRatio}}" textFontWeight="500" textColor="{{@item.pnlRatioColor}}" textSize="20"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout width="match_parent" height="wrap_content" marginTop="12" orientation="horizontal">
                        <LinearLayout width="0" height="wrap_content" weight="1" gravity="start" orientation="vertical">
                            <TextView width="match_parent" height="wrap_content" text="{{@item.szName}}" textColor="@color/kColorThreeLevelText" maxLines="2" textSize="12"/>
                            <TextView width="wrap_content" height="wrap_content" text="{{@item.sz}}" textFontWeight="500" textColor="@color/kColorPrimaryText" textSize="14"/>
                        </LinearLayout>
                        <LinearLayout width="0" height="wrap_content" weight="1" gravity="start" orientation="vertical">
                            <TextView width="match_parent" height="wrap_content" text="{{@item.openAvgPxName}}" textColor="@color/kColorThreeLevelText" maxLines="2" textSize="12"/>
                            <TextView width="wrap_content" height="wrap_content" text="{{@item.openAvgPx}}" textFontWeight="500" textColor="@color/kColorPrimaryText" textSize="14"/>
                        </LinearLayout>
                        <LinearLayout width="0" height="wrap_content" weight="1" gravity="end" orientation="vertical">
                            <TextView width="match_parent" height="wrap_content" text="{{@item.closeAvgPxName}}" textColor="@color/kColorThreeLevelText" maxLines="2" gravity="right" textSize="12"/>
                            <TextView width="wrap_content" height="wrap_content" text="{{@item.closeAvgPx}}" textFontWeight="500" textColor="@color/kColorPrimaryText" textSize="14"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout width="match_parent" height="wrap_content" marginTop="12" orientation="horizontal">
                        <TextView width="0" height="wrap_content" weight="1" text="{{@item.openTimeName}}" textColor="@color/kColorThreeLevelText" textSize="12"/>
                        <TextView width="0" height="wrap_content" weight="1" text="{{@item.openTime}}" gravity="end" textColor="@color/kColorThreeLevelText" textSize="12"/>
                    </LinearLayout>
                    <LinearLayout width="match_parent" height="wrap_content" marginTop="2" marginBottom="12" orientation="horizontal">
                        <TextView width="0" height="wrap_content" weight="1" text="{{@item.closeTimeName}}" textColor="@color/kColorThreeLevelText" textSize="12"/>
                        <TextView width="0" height="wrap_content" weight="1" text="{{@item.closeTime}}" gravity="end" textColor="@color/kColorThreeLevelText" textSize="12"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </Cell>

        <!-- 回收卡片 -->
        <Cell width="match_parent" height="wrap_content" type="2">
            <LinearLayout width="match_parent" height="wrap_content" orientation="vertical" borderWidth="0.5" borderColor="@color/KBaseColorPrimarySeparator" cornerRadius="8" marginStart="16" marginEnd="16" marginTop="16">
                <TextView width="match_parent" height="wrap_content" paddingStart="8" paddingTop="5" paddingEnd="8" paddingBottom="5" text="{{@item.title}}" textColor="@color/kColorThreeLevelText" textSize="12" background="@color/kColorTipsBackground" topLeftRadius="8" topRightRadius="8"/>
                <LinearLayout width="match_parent" height="wrap_content" paddingStart="12" paddingEnd="12" orientation="vertical">
                    <LinearLayout width="match_parent" height="wrap_content" marginTop="12" gravity="centerVertical" orientation="horizontal">
                        <ImageView width="30" height="30" src="{{@item.icon}}"/>
                        <LinearLayout width="wrap_content" height="wrap_content" orientation="vertical" paddingStart="6">
                            <TextView width="wrap_content" height="wrap_content" text="{{@item.symbol}}" textFontWeight="500" textColor="@color/kColorPrimaryText" textSize="16"/>
                            <LinearLayout width="wrap_content" height="wrap_content" orientation="horizontal">
                                <TextView width="wrap_content" height="wrap_content" background="{{@item.posSidebackColor}}" paddingStart="4" paddingTop="2" paddingEnd="4" paddingBottom="2" text="{{@item.posSide}}" textColor="{{@item.posSideColor}}" textFontWeight="500" textSize="10" cornerRadius="2"/>
                                <TextView width="wrap_content" height="wrap_content" marginLeft="4" background="@color/kColorInputFill" paddingStart="4" paddingTop="2" paddingEnd="4" paddingBottom="2" text="{{@item.marginMode}}" textColor="@color/kColorSecondaryText" textFontWeight="500" textSize="10" cornerRadius="2"/>
                                <TextView width="wrap_content" height="wrap_content" marginLeft="4" background="@color/kColorInputFill" paddingStart="4" paddingTop="2" paddingEnd="4" paddingBottom="2" text="{{@item.lever}}" textColor="@color/kColorSecondaryText" textFontWeight="500" textSize="10" cornerRadius="2"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout width="match_parent" height="wrap_content" marginTop="12" orientation="horizontal">
                        <LinearLayout width="0" height="wrap_content" weight="1" gravity="start" orientation="vertical">
                            <TextView width="wrap_content" height="wrap_content" text="{{@item.szName}}" textColor="@color/kColorThreeLevelText" maxLines="2" textSize="12"/>
                            <TextView width="wrap_content" height="wrap_content" text="{{@item.sz}}" textFontWeight="500" textColor="@color/kColorPrimaryText" textSize="14"/>
                        </LinearLayout>
                        <LinearLayout width="0" height="wrap_content" weight="1" gravity="end" orientation="vertical">
                            <TextView width="wrap_content" height="wrap_content" text="{{@item.openAvgPxName}}" textColor="@color/kColorThreeLevelText" maxLines="2" textSize="12"/>
                            <TextView width="wrap_content" height="wrap_content" text="{{@item.openAvgPx}}" textFontWeight="500" textColor="@color/kColorPrimaryText" textSize="14"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout width="match_parent" height="wrap_content" marginTop="12" orientation="horizontal">
                        <TextView width="0" height="wrap_content" weight="1" text="{{@item.openTimeName}}" textColor="@color/kColorThreeLevelText" textSize="12"/>
                        <TextView width="0" height="wrap_content" weight="1" text="{{@item.openTime}}" gravity="end" textColor="@color/kColorThreeLevelText" textSize="12"/>
                    </LinearLayout>
                    <LinearLayout width="match_parent" height="wrap_content" marginTop="2" marginBottom="12" orientation="horizontal">
                        <TextView width="0" height="wrap_content" weight="1" text="{{@item.closeTimeName}}" textColor="@color/kColorThreeLevelText" textSize="12"/>
                        <TextView width="0" height="wrap_content" weight="1" text="{{@item.closeTime}}" gravity="end" textColor="@color/kColorThreeLevelText" textSize="12"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </Cell>
    </RecyclerView>
    <LinearLayout width="wrap_content" height="wrap_content" layout_gravity="center" gravity="center" visibility="{{@data.historyPosition.emptyViewVisibility | gone}}" marginTop="96" orientation="vertical">
        <ImageView width="76" height="76" src="@drawable/edge_engine_zero_swap_activity_empty"/>
        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_contract_trade_no_record}}" textColor="@color/eBaseColorThreeLevelText" textSize="12" marginTop="12"/>
    </LinearLayout>
</LinearLayout>
