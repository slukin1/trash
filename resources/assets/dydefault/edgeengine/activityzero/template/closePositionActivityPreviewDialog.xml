<FrameLayout background="@color/KBaseColorContentBackground" width="match_parent" height="wrap_content" orientation="vertical" topLeftRadius="8" topRightRadius="8">
  <LinearLayout width="match_parent" height="wrap_content" orientation="vertical" paddingRight="16" paddingLeft="16" marginBottom="{{@data.openPosition.bottomBarHeight}}">
    <ImageView width="40" height="40" layout_gravity="center" marginTop="24" src="@drawable/edge_engine_zero_swap_usdt"/>
    <TextView width="wrap_content" height="wrap_content" layout_gravity="center" marginTop="8" text="{{@data.openPosition.closePositionActivityDialog.pnl}}" textColor="{{@data.openPosition.closePositionActivityDialog.pnlColor}}" textSize="28" textFontWeight="500"/>
    <TextView width="match_parent" height="wrap_content" marginTop="8" gravity="center" text="{{@i18n/n_zero_swap_loss_prompt}}" maxLines="0" textColor="@color/kColorSecondaryText" marginStart="10" marginEnd="10" lineSpacing="6" visibility="{{@data.openPosition.closePositionActivityDialog.lossVisibility | gone}}" textSize="14"/>
    <LinearLayout width="match_parent" height="wrap_content" marginTop="2" gravity="center" visibility="{{@data.openPosition.closePositionActivityDialog.profitVisibility | gone}}" orientation="horizontal">
      <TextView width="wrap_content" height="wrap_content" text="{{@data.openPosition.closePositionActivityDialogMaxPnlPrefix}}" textColor="@color/kColorSecondaryText" textSize="14"/>
      <TextView width="wrap_content" height="wrap_content" marginStart="2" text="{{@data.openPosition.closePositionActivityDialog.maxPnl}}" textColor="@color/kColorPrimaryText" textSize="14" textFontWeight="500"/>
    </LinearLayout>
    <LinearLayout width="match_parent" height="wrap_content" gravity="centerVertical" orientation="horizontal" borderColor="@color/KBaseColorPrimarySeparator" borderWidth="1" cornerRadius="8" paddingStart="16" onClick="@event.openPosition.hideClosePositionActivityDialog(2)" marginTop="16" paddingEnd="16" paddingTop="12" paddingBottom="12">
      <LinearLayout width="0" height="wrap_content" weight="1" orientation="vertical">
        <LinearLayout width="match_parent" height="wrap_content" layout_gravity="centerVertical" orientation="horizontal">
          <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_zero_swap_close_position_recharge}}" textColor="@color/kColorPrimaryText" textSize="16" textFontWeight="500"/>
          <FrameLayout width="wrap_content" height="wrap_content" background="@color/kSecurityMiddleLevelColor" paddingStart="4" paddingEnd="4" layout_gravity="center" paddingTop="1" paddingBottom="1" topLeftRadius="6" topRightRadius="6" bottomRightRadius="6" marginStart="8">
            <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_zero_swap_recommend}}" textColor="@color/KBaseTextColor" textSize="10"/>
          </FrameLayout>
        </LinearLayout>
        <TextView width="wrap_content" height="wrap_content" marginTop="2" paddingStart="4" paddingEnd="4" paddingTop="1" paddingBottom="1" borderColor="@color/kSecurityMiddleLevelColor" borderWidth="0.5" cornerRadius="2" text="{{@data.openPosition.closePositionActivityDialog.maxActivityPnl}}" textColor="@color/kSecurityMiddleLevelColor" textSize="12"/>
      </LinearLayout>
      <ImageView width="16" height="16" src="@drawable/edge_engine_zero_swap_arrow_end"/>
    </LinearLayout>
    <LinearLayout width="match_parent" height="wrap_content" gravity="centerVertical" orientation="horizontal" borderColor="@color/KBaseColorPrimarySeparator" borderWidth="1" cornerRadius="8" onClick="@event.openPosition.hideClosePositionActivityDialog(1)" paddingStart="16" marginTop="16" paddingEnd="16" marginBottom="16" paddingTop="12" paddingBottom="12">
      <LinearLayout width="0" height="wrap_content" weight="1" orientation="vertical">
        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_zero_swap_only_close_position}}" textColor="@color/kColorPrimaryText" textSize="16" textFontWeight="500"/>
        <TextView width="wrap_content" height="wrap_content" marginTop="2" text="{{@data.openPosition.closePositionActivityDialog.onlyClosePositionPnl}}" textColor="@color/kColorThreeLevelText" textSize="12"/>
      </LinearLayout>
      <ImageView width="16" height="16" src="@drawable/edge_engine_zero_swap_arrow_end"/>
    </LinearLayout>
  </LinearLayout>
  <FrameLayout width="wrap_content" layout_gravity="end" paddingStart="14" paddingEnd="14" marginEnd="2" paddingTop="14" paddingBottom="14" height="wrap_content">
    <ImageView width="16" height="16" onClick="@event.openPosition.hideClosePositionActivityDialog(0)" src="@drawable/edge_engine_asset_fall_coin_close"/>
  </FrameLayout>
</FrameLayout>
