<FrameLayout background="@color/KBaseColorContentBackground" width="match_parent" height="wrap_content" orientation="vertical" topLeftRadius="8" topRightRadius="8">
  <LinearLayout width="match_parent" height="wrap_content" orientation="vertical" paddingRight="16" paddingLeft="16" marginBottom="{{@data.openPosition.bottomBarHeight}}">
    <ImageView width="40" height="40" layout_gravity="center" marginTop="24" src="@drawable/edge_engine_zero_swap_usdt"/>
    <TextView width="wrap_content" height="wrap_content" layout_gravity="center" marginTop="8" text="{{@data.openPosition.closePositionOnlyDialog.pnl}}" textColor="{{@data.openPosition.closePositionOnlyDialog.pnlColor}}" textSize="28" textFontWeight="500"/>
    <TextView width="match_parent" height="wrap_content" marginTop="8" gravity="center" text="{{@i18n/n_zero_swap_loss_prompt}}" maxLines="0" textColor="@color/kColorSecondaryText" marginStart="10" marginEnd="10" lineSpacing="6" visibility="{{@data.openPosition.closePositionOnlyDialog.lossVisibility | gone}}" textSize="14"/>
    <LinearLayout width="match_parent" height="wrap_content" marginTop="2" gravity="center" visibility="{{@data.openPosition.closePositionOnlyDialog.profitVisibility | gone}}" orientation="horizontal">
      <TextView width="wrap_content" height="wrap_content" text="{{@data.openPosition.closePositionActivityDialogMaxPnlPrefix}}" textColor="@color/kColorSecondaryText" textSize="14"/>
      <TextView width="wrap_content" height="wrap_content" marginStart="2" text="{{@data.openPosition.closePositionOnlyDialog.maxPnl}}" textColor="@color/kColorPrimaryText" textSize="14" textFontWeight="500"/>
    </LinearLayout>
    <TextView width="match_parent" height="44" marginTop="24" background="@color/kColorMajorTheme100" marginBottom="16" gravity="center" text="{{@i18n/n_copy_trading_confirm_close_title}}" onClick="@event.openPosition.hideClosePositionOnlyDialog(1)" textColor="@color/KBaseTextColor" textSize="14" cornerRadius="4" textFontWeight="500"/>
  </LinearLayout>
  <FrameLayout width="wrap_content" layout_gravity="end" paddingStart="14" paddingEnd="14" marginEnd="2" paddingTop="14" paddingBottom="14" height="wrap_content">
    <ImageView width="16" height="16" onClick="@event.openPosition.hideClosePositionOnlyDialog(0)" src="@drawable/edge_engine_asset_fall_coin_close"/>
  </FrameLayout>
</FrameLayout>
