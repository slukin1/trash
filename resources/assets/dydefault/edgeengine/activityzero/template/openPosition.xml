<LinearLayout height="match_parent" orientation="vertical" width="match_parent">
    <!-- 平仓且有活动 -->
    <View popTemplate="closePositionActivityPreviewDialog.xml" popArrowDirection="up" popArrowHeight="0" popArrowWidth="0" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="bottom" onPopDismiss="@event.openPosition.hideClosePositionActivityDialog(0)" popShow="{{@data.openPosition.closePositionActivityDialogShow}}" popShowMode="modal" popRefreshPopup="true" width="0" height="0"/>
    <!-- 仅平仓 -->
    <View popTemplate="closePositionOnlyPreviewDialog.xml" popArrowDirection="up" popArrowHeight="0" popArrowWidth="0" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="bottom" onPopDismiss="@event.openPosition.hideClosePositionOnlyDialog(0)" popShow="{{@data.openPosition.closePositionOnlyDialogShow}}" popShowMode="modal" popRefreshPopup="true" width="0" height="0"/>
    <!-- 充值拿奖励 -->
    <View popTemplate="rechargeRewardPreviewDialog.xml" popArrowDirection="up" popArrowHeight="0" popArrowWidth="0" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="bottom" onPopDismiss="@event.openPosition.hideRechargeRewardsDialog(0)" popShow="{{@data.openPosition.rechargeRewardsDialog.show}}" popShowMode="modal" width="0" height="0"/>
    <!-- 公共弹框 -->
    <View height="0" popArrowDirection="up" popArrowHeight="0" popArrowWidth="0" popBackgroundDimmed="true" popCancelOnTouchOutside="false" popModalPositon="center" onPopDismiss="@event.commonPop.popDismiss()" popShow="{{@data.commonPop.popShow}}" popShowMode="modal" popTemplate="commonPop.xml" width="0"/>
    <!-- 盈利平仓 -->
    <View popTemplate="closePositionSuccessDialog.xml" popArrowDirection="up" popArrowHeight="0" popArrowWidth="0" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="center" onPopDismiss="@event.openPosition.hideClosePositionSuccessDialog()" popShow="{{@data.openPosition.closePositionSuccessDialog.show}}" popShowMode="modal" popRefreshPopup="true" width="0" height="0"/>
    <KlineListView height="match_parent" width="match_parent" positionList="{{@data.openPosition.positionList}}" visibility="{{@data.openPosition.osListViewVisibility | gone}}"/>
    <LinearLayout width="wrap_content" height="wrap_content" layout_gravity="center" gravity="center" visibility="{{@data.openPosition.emptyViewVisibility | gone}}" marginTop="96" orientation="vertical">
        <ImageView width="76" height="76" src="@drawable/edge_engine_zero_swap_activity_empty"/>
        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_zero_swap_no_position_1}}" textColor="@color/eBaseColorThreeLevelText" textSize="12" gravity="center" maxLines="0" marginTop="12"/>
        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_zero_swap_no_position_2}}" textColor="@color/eBaseColorThreeLevelText" textSize="12" gravity="center" maxLines="0"/>
    </LinearLayout>
</LinearLayout>
