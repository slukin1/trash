<LinearLayout topLeftRadius="8" topRightRadius="8" width="375" height="wrap_content" background="@color/KBaseColorContentBackground" orientation="vertical">

	<FrameLayout width="match_parent" height="44">
		<LinearLayout width="match_parent" height="44" gravity="centerVertical" orientation="horizontal">
			<TextView width="wrap_content" height="wrap_content" marginStart="16" text="{{@data.coindetail.popTitle| }}" textSize="16" textColor="@color/kColorPrimaryText" textFontWeight="500"/>
			<View width="0" height="0" weight="1"/>
			<ImageView width="wrap_content" height="wrap_content" marginRight="16" onClick="@event.coindetail.popClose()" src="@drawable/edge_engine_copy_trading_dialog_close"/>
		</LinearLayout>
		<View layout_gravity="bottom" width="match_parent" height="0.5" background="@color/KBaseColorPrimarySeparator"/>
	</FrameLayout>

	<LinearLayout width="match_parent" height="104" orientation="vertical" visibility="{{@data.coindetail.popStyle1}}">

		<LinearLayout marginTop="24" marginLeft="16" marginRight="16" width="match_parent" height="20" orientation="horizontal" gravity="centerVertical">
			<TextView width="0" weight="1" height="wrap_content" text="{{@i18n/n_balance_otc_onorders}}" textSize="14" textFontWeight="400" textColor="@color/kColorThreeLevelText" gravity="left"/>

			<TextView width="wrap_content" height="wrap_content" text="{{@data.coindetail.suspenseNum| }}" textSize="14" textFontWeight="400" textColor="@color/kColorPrimaryText" gravity="right"/>
		</LinearLayout>

		<LinearLayout marginTop="16" marginBottom="24" marginLeft="16" marginRight="16" width="match_parent" height="20" orientation="horizontal" gravity="centerVertical">
			<TextView width="0" weight="1" height="wrap_content" text="{{@i18n/n_asset_ybb_lock}}" textSize="14" textFontWeight="400" textColor="@color/kColorThreeLevelText" gravity="left"/>

			<TextView width="wrap_content" height="wrap_content" text="{{@data.coindetail.lockNum| }}" textSize="14" textFontWeight="400" textColor="@color/kColorPrimaryText" gravity="right"/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout width="match_parent" height="wrap_content" orientation="vertical" visibility="{{@data.coindetail.popStyle2}}">

		<TextView marginTop="24" marginBottom="24" marginLeft="16" marginRight="16" width="match_parent" height="wrap_content" text="{{@data.coindetail.popContent| }}" textSize="14" lineSpacing="2" textFontWeight="400" textColor="@color/kColorPrimaryText" gravity="left|center" maxWidth="343" maxLines="0"/>
	</LinearLayout>

	<View width="match_parent" height="{{@data.commonData.bottomSafeAreaHeight}}"/>
</LinearLayout>
