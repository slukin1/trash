<LinearLayout width="375" height="wrap_content" orientation="vertical">
	<FrameLayout width="match_parent" height="84" orientation="vertical">
		<View marginLeft="8" marginRight="8" marginBottom="8" width="match_parent" height="match_parent" background="@color/KBaseColorContentBackground" cornerRadius="8">
		</View>
		<LinearLayout width="match_parent" height="84" orientation="horizontal" marginTop="4" paddingBottom="16">

			<For data="@data.home.funcList" itemKey="element">
				<Cell height="match_parent" width="wrap_content" type="1">
					<LinearLayout width="{{@element.width}}" height="wrap_content" gravity="centerHorizontal" orientation="vertical">
						<ImageView width="40" height="40" src="{{@element.icon}}"/>
						<TextView width="{{@element.width}}" height="wrap_content" marginTop="6" textFontWeight="500" gravity="center" textColor="@color/kColorSecondaryText" textSize="11" maxWidth="{{@element.width}}" maxLines="2" text="{{@element.title}}"/>
					</LinearLayout>
				</Cell>
			</For>
		</LinearLayout>
	</FrameLayout>
	<ImageView marginTop="8" marginLeft="26" width="8" height="4" src="@drawable/edge_engine_earn_pop_up"/>
	<LinearLayout marginLeft="16" width="240" height="wrap_content" orientation="vertical" cornerRadius="8" background="@color/KBaseColorContentBackground">
		<TextView width="wrap_content" height="wrap_content" marginTop="12" marginLeft="12" textSize="12" textFontWeight="400" textColor="@color/kColorSecondaryText" text="1/4"/>
		<TextView width="match_parent" height="wrap_content" marginTop="4" marginLeft="12" marginRight="12" textSize="12" textFontWeight="400" maxLines="0" maxWidth="216" textColor="@color/kColorSecondaryText" text="{{@i18n/n_earnhome_guide_step_1}}"/>
		<LinearLayout marginTop="12" marginLeft="12" marginRight="12" marginBottom="12" width="match_parent" height="24" orientation="horizontal" gravity="right" layout_gravity="right">
			<TextView width="wrap_content" height="match_parent" paddingLeft="16" paddingRight="16" gravity="center" background="@color/KBaseColorInputBackground" cornerRadius="4" textSize="12" textFontWeight="500" textColor="@color/kColorPrimaryText" text="{{@i18n/n_grid_user_guide_skip}}" onClick="@event.home.hidePop()"/>
			<TextView width="wrap_content" height="match_parent" marginLeft="12" paddingLeft="16" paddingRight="16" gravity="center" background="@color/kColorMajorTheme100" cornerRadius="4" textSize="12" textFontWeight="500" textColor="@color/KBaseTextColor" text="{{@i18n/n_exchange_guide_next}}" onClick="@event.home.nextPop(2)"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
