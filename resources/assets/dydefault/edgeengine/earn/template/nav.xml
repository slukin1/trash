<LinearLayout width="375" height="wrap_content" orientation="vertical" background="@color/KBaseColorContentBackground">
	<View width="" height="0" popArrowDirection="up" popArrowHeight="0" popArrowWidth="0" popShowMode="anchor" popCancelOnTouchOutside="true" popBackgroundDimmed="false" popShow="{{@data.introduce.popShow}}" popTemplate="intropop.xml"/>
	<FrameLayout width="match_parent" height="44" orientation="horizontal">
		<LinearLayout width="match_parent" height="match_parent" gravity="center" orientation="horizontal">
			<TextView paddingLeft="16" width="wrap_content" height="match_parent" gravity="center" text="{{@data.introduce.navTitle}}" textSize="18" textFontWeight="500" textColor="@color/kColorPrimaryText" onClick="@event.introduce.selectedNavClicked()"/>
			<ImageView paddingLeft="4" paddingRight="16" paddingTop="16" paddingBottom="16" width="32" height="44" gravity="center" src="{{@data.introduce.navArrow}}" onClick="@event.introduce.selectedNavClicked()"/>
		</LinearLayout>
		<LinearLayout marginLeft="16" width="44" height="44" gravity="centerVertical" onClick="@event.introduce.backClicked()">
			<ImageView width="28" height="28" gravity="center" src="@drawable/edge_engine_top_bar_back_normal"/>
		</LinearLayout>
	</FrameLayout>
</LinearLayout>
