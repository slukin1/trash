<LinearLayout width="match_parent"
    height="match_parent"
    orientation="vertical">

    <LinearLayout width="match_parent"
        height="32"
        gravity="centerVertical"
        orientation="horizontal"
        marginLeft="16"
        marginRight="16">

        <TextView width="wrap_content"
            height="wrap_content"
            text="{{@data.upListData.sectionHeader.leftTitle | Name}}"
            textColor="@color/KBaseColorSecondaryText"
            textSize="11"
            textFontWeight="400"
            weight="1" />

        <TextView width="90"
            height="wrap_content"
            gravity="right"
            text="{{@data.upListData.sectionHeader.middleTitle | Last Price}}"
            textColor="@color/KBaseColorSecondaryText"
            marginRight="16"
            textSize="11"
            autoSizeTextType="uniform"
            textFontWeight="400" />

        <TextView width="80"
            height="wrap_content"
            gravity="right"
            text="{{@data.upListData.sectionHeader.rightTitle | Change}}"
            textColor="@color/KBaseColorSecondaryText"
            textSize="11"
            textFontWeight="400" />

    </LinearLayout>

    <RecyclerView height="match_parent"
        width="match_parent"
        data="@data.upListData.data"
        itemKey="item"
        typeKey="type"
        indexKey="i">

        <Cell type="1"
            width="match_parent"
            height="wrap_content">

            <LinearLayout width="match_parent"
                height="52"
                paddingLeft="16"
                paddingRight="16"
                orientation="horizontal"
                onClick="@event.goToKLine('{{@item.symbol}}')"
                gravity="center">

                <ImageView width="24"
                    height="24"
                    marginRight="12"
                    gravity="right"
                    src="{{@item.iconURL}}"
                    placeholder="@drawable/home_coin_placeholder_24"
                    cornerRadius="12"
                    background="@color/baseCoinLockTipBg" />

                <LinearLayout
                    width="wrap_content"
                    height="24"
                    orientation="horizontal"
                    gravity="center">

                  <TextView
                      height="24"
                      width="wrap_content"
                      maxWidth="68"
                      text="{{@item.baseName}}"
                      textSize="16"
                      textFontWeight="500"
                      gravity="center"
                      marginRight="0"
                      autoSizeTextType="uniform"
                      textColor="@color/kColorPrimaryText" />

                  <TextView
                      height="24"
                      width="wrap_content"
                      maxWidth="35"
                      text="{{@item.quoteName}}"
                      autoSizeTextType="uniform"
                      textSize="12"
                      gravity="center"
                      paddingTop="2"
                      textColor="@color/KBaseColorSecondaryText" />
                </LinearLayout>

                <TextView
                    height="wrap_content"
                    width="wrap_content"
                    text="0 fee"
                    textSize="9"
                    textFontWeight="500"
                    marginLeft="3"
                    paddingBottom="1"
                    paddingTop="1"
                    paddingLeft="2"
                    paddingRight="2"
                    gravity="center"
                    textColor="@color/KBaseColorMajorTheme100"
                    background="@color/KBaseColorMajorTheme006"
                    cornerRadius="3"
                    visibility="{{@item.isZeroFee}}"
                />

                <ImageView
                    width="14"
                    height="14"
                    marginLeft="4"
                    src="{{@item.flagURL}}"
                    visibility="{{@item.flagViewVisibility}}"/>

                <View
                    width="1"
                    height="1"
                    weight="1" />

                <TextView height="24"
                    width="80"
                    text="{{@item.price}}"
                    isSubscript="true"
                    textSize="16"
                    textFontWeight="500"
                    gravity="right|center"
                    textColor="@color/kColorPrimaryText"
                    autoSizeTextType="uniform"
                    marginRight="16" />

                <TextView height="28"
                    width="80"
                    text="{{@item.ratio}}"
                    textSize="14"
                    textFontWeight="500"
                    gravity="center"
                    cornerRadius="3"
                    autoSizeTextType="uniform"
                    textColor="@color/KBaseTextColor"
                    background="{{@item.colorHex|#E94359}}" />
            </LinearLayout>
        </Cell>
    </RecyclerView>
</LinearLayout>

