<FrameLayout
		width="275"
		height="340"
		orientation="vertical"
		background="#161616"
		gravity="center">
	<ImageView
		width="match_parent"
		height="match_parent"
		src="@drawable/edge_engine_share_postersharing" />
	
	<LinearLayout
			width="235"
			height="300"
			marginTop="20"
			marginLeft="20"
			marginRight="20"
			marginBottom="20"
			orientation="vertical"
			gravity="center">
		<ImageView
				marginTop="40"
				width="56"
				height="56"
				src="{{@data.postersharing.avatar}}"
				scaleType="center_crop"
				cornerRadius="28" />
		<TextView
				marginTop="12"
				width="match_parent"
				height="20"
				gravity="center"
				text="{{@data.postersharing.name | }}"
				textColor="#E6E6E6"
				textSize="16"
				textFontWeight="500"
				maxWidth="235" />
		<TextView
				marginTop="7"
				marginBottom="3"
				width="match_parent"
				height="wrap_content"
				gravity="center"
				text="{{@i18n/n_share_personal_poster_desc}}"
				textColor="#8C8C93"
				textSize="12"
				textFontWeight="400"
				maxWidth="235"
				maxLines="0" />
		<LinearLayout
				marginTop="29"
				width="match_parent"
				height="wrap_content"
				orientation="horizontal">
			<TextView
					width="0"
					weight="1"
					height="20"
					gravity="center"
					text="{{@data.postersharing.articleNum | }}"
					textColor="#E6E6E6"
					textSize="18"
					textFontWeight="600"
					maxWidth="113.5"
					autoSizeTextType="uniform"
					autoSizeMinTextSize="16" />
			<View
					width="8"
					height="0" />
			<TextView
					width="0"
					weight="1"
					height="20"
					gravity="center"
					text="{{@data.postersharing.praiseNum | }}"
					textColor="#E6E6E6"
					textSize="18"
					textFontWeight="600"
					maxWidth="113.5"
					autoSizeTextType="uniform"
					autoSizeMinTextSize="16" />
		</LinearLayout>

		<LinearLayout
				width="match_parent"
				height="wrap_content"
				orientation="horizontal">
			<TextView
					width="0"
					weight="1"
					height="20"
					gravity="center"
					text="{{@i18n/n_content_community_userinfo_dynamic}}"
					textColor="#5E5E61"
					textSize="12"
					textFontWeight="400"
					maxLines="0"
					maxWidth="113.5" />
			<View
					width="8"
					height="0" />
			<TextView
					width="0"
					weight="1"
					height="20"
					gravity="center"
					text="{{@i18n/n_content_praise}}"
					textColor="#5E5E61"
					textSize="12"
					textFontWeight="400"
					maxLines="0"
					maxWidth="113.5" />
		</LinearLayout>

		<View
				width="0"
				height="0"
				weight="1" />
		<TextView
				marginBottom="0"
				width="match_parent"
				height="wrap_content"
				gravity="center"
				text="{{@i18n/n_share_personal_poster_download}}"
				textColor="#4C4C4E"
				textSize="12"
				textFontWeight="400"
				maxWidth="235"
				maxLines="0" />
	</LinearLayout>
</FrameLayout>

