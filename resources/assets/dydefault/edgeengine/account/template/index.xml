<LinearLayout
        width="match_parent"
        height="match_parent"
        orientation="vertical"
        background="@color/KBaseColorContentBackground">

    <!-- 列表数据 -->
    <RecyclerView
            height="match_parent"
            width="match_parent"
            gravity="centerVertical"
            orientation="horizontal"
            data="@data.uc.list"
            itemKey="item"
            typeKey="type"
            onRefresh="@event.onRefresh()"
            refreshStatus="{{@data.uc.refresh}}">
        <Header
                width="match_parent"
                height="wrap_content">

            <LinearLayout
                    width="match_parent"
                    height="wrap_content"
                    orientation="vertical">
                <!-- 头像区域 -->
                <LinearLayout
                        width="match_parent"
                        height="wrap_content"
                        orientation="vertical"
                        gravity="center">
                    <For
                            data="@data.headSection"
                            itemKey="item">
                        <!-- 从未登录 -->
                        <Cell
                                width="match_parent"
                                height="160"
                                orientation="vertical"
                                gravity="centerVertical"
                                type="welcome">
                            <LinearLayout
                                    width="match_parent"
                                    height="match_parent"
                                    orientation="vertical"
                                    marginLeft="20"
                                    marginRight="20"
                                    marginTop="10">
                                <!-- 头像及用户名 -->
                                <LinearLayout
                                        orientation="horizontal"
                                        width="match_parent"
                                        onClick="@event.ucHeader.openLogin(1)"
                                        height="72">
                                    <!-- 头像组件 -->
                                    <AccountAvatar
                                            width="72"
                                            height="72"
                                            refreshStatus="{{@item.refreshStatus}}" />
                                    <!-- 欢迎来到火币 -->
                                    <LinearLayout
                                            marginLeft="20"
                                            width="0"
                                            weight="1"
                                            height="match_parent"
                                            gravity="center"
                                            orientation="vertical">
                                        <TextView
                                                marginTop="10"
                                                width="match_parent"
                                                height="31"
                                                gravity="left | center"
                                                text="{{@i18n/n_user_center_login_subtitle}}"
                                                textSize="22"
                                                textColor="@color/kColorPrimaryText"
                                                textFontWeight="600" />
                                        <LinearLayout
                                                width="match_parent"
                                                height="17"
                                                marginTop="4"
                                                marginBottom="10"
                                                orientation="horizontal"
                                                gravity="center">
                                            <ImageView
                                                    width="20"
                                                    height="match_parent"
                                                    src="@drawable/edge_engine_account_gift" />
                                            <TextView
                                                    marginLeft="4"
                                                    width="0"
                                                    weight="1"
                                                    height="wrap_content"
                                                    gravity="left"
                                                    maxLines="1"
                                                    richText="{{@item.richText | }}" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                                <!-- 注册登录 -->
                                <LinearLayout
                                        marginTop="20"
                                        orientation="horizontal"
                                        width="match_parent"
                                        height="40">
                                    <TextView
                                            width="0"
                                            height="match_parent"
                                            weight="1"
                                            gravity="center"
                                            cornerRadius="4"
                                            text="{{@i18n/n_new_user_guide_page_regist_btn}}"
                                            textColor="#FFFFFF"
                                            textSize="14"
                                            textFontWeight="600"
                                            onClick="@event.ucHeader.openLogin(2)"
                                            background="@color/kColorMajorTheme100" />
                                    <LinearLayout
                                            width="8"
                                            height="0" />
                                    <TextView
                                            width="0"
                                            height="match_parent"
                                            weight="1"
                                            gravity="center"
                                            cornerRadius="4"
                                            text="{{@i18n/n_login_login}}"
                                            textColor="@color/kColorPrimaryText"
                                            textSize="14"
                                            textFontWeight="600"
                                            onClick="@event.ucHeader.openLogin(1)"
                                            background="@color/KBaseColorInputBackground" />
                                </LinearLayout>
                            </LinearLayout>

                        </Cell>
                        <!-- 上次登录 -->
                        <Cell
                                width="match_parent"
                                height="160"
                                orientation="vertical"
                                gravity="centerVertical"
                                type="unlogin">
                            <LinearLayout
                                    width="match_parent"
                                    height="match_parent"
                                    orientation="vertical"
                                    marginLeft="20"
                                    marginRight="20"
                                    marginTop="10">
                                <!-- 头像及用户名 -->
                                <LinearLayout
                                        orientation="horizontal"
                                        width="match_parent"
                                        height="72"
                                        onClick="@event.ucHeader.openLogin(1)">
                                    <!-- 头像组件 -->
                                    <AccountAvatar
                                            width="72"
                                            height="72"
                                            refreshStatus="{{@item.refreshStatus}}" />
                                    <!-- 欢迎来到火币 -->
                                    <LinearLayout
                                            marginLeft="20"
                                            width="0"
                                            weight="1"
                                            height="match_parent"
                                            gravity="center"
                                            orientation="vertical">
                                        <TextView
                                                marginTop="10"
                                                width="match_parent"
                                                height="30"
                                                gravity="left"
                                                text="{{@i18n/n_user_center_login_welcome}}"
                                                textSize="22"
                                                textColor="@color/kColorPrimaryText"
                                                textFontWeight="600" />
                                        <LinearLayout
                                                marginTop="2"
                                                width="match_parent"
                                                height="20"
                                                orientation="horizontal">
                                            <TextView
                                                    width="wrap_content"
                                                    height="match_parent"
                                                    gravity="left"
                                                    text=" {{@item.desc}}"
                                                    textSize="14"
                                                    textColor="@color/kColorSecondaryText" />
                                        </LinearLayout>

                                    </LinearLayout>
                                </LinearLayout>
                                <!-- 注册登录 -->
                                <LinearLayout
                                        marginTop="20"
                                        orientation="horizontal"
                                        width="match_parent"
                                        height="40">
                                    <TextView
                                            width="0"
                                            height="match_parent"
                                            weight="1"
                                            gravity="center"
                                            cornerRadius="4"
                                            text="{{@i18n/n_new_user_guide_page_regist_btn}}"
                                            textColor="@color/kColorPrimaryText"
                                            textSize="14"
                                            textFontWeight="600"
                                            background="@color/KBaseColorInputBackground"
                                            onClick="@event.ucHeader.openLogin(2)" />
                                    <LinearLayout
                                            width="8"
                                            height="0" />
                                    <TextView
                                            width="0"
                                            height="match_parent"
                                            weight="1"
                                            gravity="center"
                                            cornerRadius="4"
                                            text="{{@i18n/n_login_login}}"
                                            textColor="#FFFFFF"
                                            textSize="14"
                                            textFontWeight="600"
                                            background="@color/kColorMajorTheme100"
                                            onClick="@event.ucHeader.openLogin(1)" />
                                </LinearLayout>
                            </LinearLayout>
                        </Cell>
                        <!-- 登录 -->
                        <Cell
                                width="match_parent"
                                height="wrap_content"
                                orientation="vertical"
                                gravity="centerVertical"
                                type="login">
                            <LinearLayout
                                    width="match_parent"
                                    height="wrap_content"
                                    orientation="vertical"
                                    marginLeft="20"
                                    marginBottom="20">
                                <!-- 头像及用户名 -->
                                <LinearLayout
                                        orientation="horizontal"
										marginRight="20"
                                        width="match_parent"
                                        height="72"
                                        onClick="@event.ucHeader.openPrersonalCenter('{{@item.uid}}')">
                                    <!-- 头像组件 -->
                                    <AccountAvatar
                                            width="72"
                                            height="72"
                                            refreshStatus="{{@item.refreshStatus}}" />
                                    <!-- nickname -->
                                    <LinearLayout
                                            marginLeft="12"
                                            width="0"
                                            weight="1"
                                            height="match_parent"
                                            gravity="left"
                                            orientation="vertical">
                                        <TextView
                                                marginTop="10"
                                                width="match_parent"
                                                height="30"
                                                gravity="left"
                                                text="{{@item.nickName}}"
                                                textSize="22"
                                                textColor="@color/kColorPrimaryText"
                                                textFontWeight="600" />
                                        <!-- UID 复制黏贴-->
                                        <LinearLayout
                                                marginTop="0"
                                                width="wrap_content"
                                                height="20"
                                                orientation="horizontal"
                                                gravity="centerVertical"
                                                onClick="@event.uc.copyUID()">
                                            <TextView
                                                    marginTop="3"
                                                    width="wrap_content"
                                                    height="match_parent"
                                                    gravity="left"
                                                    text="{{@item.uid}}"
                                                    textSize="12"
                                                    textColor="@color/kColorThreeLevelText" />
                                            <!-- 复制粘贴图标 -->
                                            <ImageView
                                                    marginLeft="4"
                                                    marginRight="16"
                                                    width="9"
                                                    height="16"
                                                    src="@drawable/edge_engine_account_copy" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
								<FrameLayout
										width="match_parent"
										height="48"
										visibility="{{@item.funcShow | visible}}">
									<!-- PRIME DMC KYC -->
									<LinearLayout
											orientation="horizontal"
											marginTop="16"
											marginRight="20"
											width="match_parent"
											height="32">
										<!-- Prime 等级 -->
										<LinearLayout
												width="{{@data.kycWidth}}"
												height="32"
													cornerRadius="4"
													gravity="center"
													background="{{@data.userAuth.prime.backColor}}"
													onClick="@event.uc.openPrime()"
													visibility="{{@data.userAuth.prime.visible | gone}}">
												<LinearLayout
														width="wrap_content"
														height="wrap_content"
														orientation="horizontal">
													<ImageView
															width="wrap_content"
															height="15"
															gravity="left"
															src="{{@data.userAuth.prime.img}}"
															placeholder="drawable/home_operation_placeholder" />
													<TextView
															marginLeft="8"
															width="wrap_content"
															height="15"
															gravity="right"
															text="{{@data.userAuth.prime.title}}"
															textColor="{{@data.userAuth.prime.textColor}}"
															textSize="12"
															textFontWeight="600" />
												</LinearLayout>
										</LinearLayout>
										<!-- DMC 等级 -->
										<LinearLayout
												marginLeft="8"
												width="{{@data.kycWidth}}"
												height="32"
													cornerRadius="4"
													gravity="center"
													background="@color/KBaseColorInputBackground"
													onClick="@event.uc.openDMC()"
													visibility="{{@data.userAuth.dmc.visible | gone}}">
												<LinearLayout
														width="wrap_content"
														height="wrap_content"
														orientation="horizontal">
													<ImageView
															width="15"
															height="15"
															gravity="left"
															cornerRadius="7.5"
															src="{{@data.userAuth.dmc.img}}"
															placeholder="@drawable/edge_engine_account_dmc" />
													<TextView
															marginLeft="8"
															width="wrap_content"
															height="15"
															gravity="right"
															text="{{@data.userAuth.dmc.title}}"
															textColor="@color/kColorPrimaryText"
															textSize="12"
															textFontWeight="600" />
												</LinearLayout>
										</LinearLayout>
										<!-- KYC 等级 -->
										<LinearLayout
												marginLeft="8"
												width="{{@data.kycWidth}}"
												height="32"
													cornerRadius="4"
													gravity="center"
													background="{{@data.userAuth.kyc.backColor}}"
													visibility="{{@data.userAuth.kyc.visible | gone}}"
													onClick="@event.uc.openKYC()">
												<LinearLayout
														width="wrap_content"
														height="wrap_content"
														orientation="horizontal">
													<ImageView
															width="15"
															height="15"
															gravity="left"
															cornerRadius="7.5"
															src="{{@data.userAuth.kyc.img}}"
															placeholder="@drawable/home_operation_placeholder"
															visibility="{{@data.userAuth.kyc.imgVisible | gone}}" />
													<TextView
															marginLeft="8"
															width="wrap_content"
															height="15"
															gravity="right"
															text="{{@data.userAuth.kyc.title}}"
															textColor="{{@data.userAuth.kyc.textColor}}"
															textSize="12"
															textFontWeight="600" />
												</LinearLayout>
										</LinearLayout>
									</LinearLayout>
									<View
											width="8"
											height="8"
											cornerRadius="4"
											marginTop="12"
											marginRight="16"
											layout_gravity="right"
											background="@color/kColorPriceRed"
											visibility="{{@data.userAuth.kyc.redDotVisible | gone}}" />
								</FrameLayout>
                            </LinearLayout>
                        </Cell>
                    </For>
                </LinearLayout>

                <!-- 分割线 -->
                <LinearLayout
                        width="match_parent"
                        height="0.5"
                        orientation="horizontal"
                        background="@color/KBaseColorPrimarySeparator" />
                <!-- 金刚区数据 -->
                <LinearLayout
                        marginLeft="4"
                        marginRight="4"
                        marginBottom="4"
                        marginTop="4"
                        height="86"
                        width="match_parent"
                        orientation="horizontal"
                        visibility="{{@data.uc.featureVisibility}}">
                    <For
                            data="@data.uc.features"
                            itemKey="item"
                            typeKey="funcType">
                        <Cell
                                width="wrap_content"
                                height="match_parent"
                                funcType="normal">
                            <LinearLayout
                                    width="wrap_content"
                                    height="match_parent"
                                    gravity="center"
                                    orientation="vertical"
                                    onClick="@event.uc.openRoute('{{@item.url}}')">
                                <LinearLayout
                                        marginTop="8"
                                        width="40"
                                        height="40"
                                        cornerRadius="20"
                                        background="@color/baseColorInputBackground"
                                        gravity="center">
                                    <ImageView
                                            height="40"
                                            width="40"
                                            src="{{@item.img}}" />
                                </LinearLayout>
                                <TextView
                                        marginTop="8"
                                        height="wrap_content"
                                        width="91.75"
                                        text="{{@item.name | }}"
                                        textSize="11"
                                        textFontWeight="400"
                                        textColor="@color/kColorPrimaryText"
                                        gravity="center"
                                        maxLines="2" />
                            </LinearLayout>
                        </Cell>
                    </For>
                </LinearLayout>
                <View
                        width="0"
                        height="8" />
            </LinearLayout>
        </Header>
        <Cell
                type="normal"
                width="match_parent"
                height="50">
            <LinearLayout
                    marginLeft="20"
                    marginRight="20"
                    width="match_parent"
                    height="50"
                    gravity="centerVertical"
                    orientation="horizontal"
                    onClick="@event.uc.openRoute('{{@item.url}}','{{@item.jumpType}}')">
                <TextView
                        width="0"
                        height="20"
                        weight="1"
                        gravity="left"
                        text="{{@item.name | }}"
                        textColor="@color/kColorPrimaryText"
                        textSize="14"
                        textFontWeight="600" />
                <!-- 带背景的副标题 -->
                <TextView
                        paddingLeft="7"
                        paddingRight="7"
                        cornerRadius="9"
                        background="{{@item.backColor}}"
                        width="wrap_content"
                        height="18"
                        gravity="center"
                        text="{{@item.title | }}"
                        textColor="@color/KBaseTextColor"
                        textSize="12"
                        textFontWeight="400"
                        visibility="{{@item.backVisible | gone}}" />
                <!-- 不带背景的副标题 -->
                <TextView
                        width="wrap_content"
                        height="wrap_content"
                        gravity="right"
                        text="{{@item.title | }}"
                        textColor="@color/KBaseColorSecondaryText"
                        textSize="12"
                        textFontWeight="400"
                        visibility="{{@item.normalVisible | visible}}" />
                <!-- 小红点 -->
                <LinearLayout
                        width="8"
                        height="8"
                        cornerRadius="4"
                        background="@color/kColorPriceRed"
                        marginLeft="8"
                        visibility="{{@item.showRedDot | gone}}" />
				<!-- 数字小红点 -->
                <TextView
                        width="wrap_content"
                        height="14"
						paddingLeft="4"
						paddingRight="4"
                        cornerRadius="7"
                        background="@color/kColorPriceRed"
                        marginLeft="8"
						text="{{@item.redDotNumStr | 1}}"
						textColor="@color/KBaseTextColor"
                        textSize="10"
						textFontWeight="500"
						gravity="center"
                        visibility="{{@item.numRedDot | gone}}" />
                <!-- 查看更多箭头 -->
                <ImageView
                        width="8"
                        height="12"
                        marginLeft="8"
                        src="@drawable/new_account_arrow" />
            </LinearLayout>
        </Cell>
        <!-- 分割线 -->
        <Cell
                type="divider"
                width="match_parent"
                height="16.5">

            <LinearLayout
                    marginLeft="16"
                    marginTop="8"
                    marginBottom="8"
                    width="match_parent"
                    height="0.5"
                    orientation="horizontal"
                    background="@color/KBaseColorPrimarySeparator" />
        </Cell>
    </RecyclerView>
</LinearLayout>
