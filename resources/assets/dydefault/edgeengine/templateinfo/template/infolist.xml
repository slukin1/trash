<LinearLayout
    width="match_parent"
    height="match_parent"
    orientation="vertical"
    gravity="center">

    <RecyclerView
        width="match_parent"
        height="match_parent"
        gravity="centerVertical"
        orientation="horizontal"
        data="@data.infolist.rmslist"
        itemKey="element"
        typeKey="type"
        indexKey="i"
        visibility="{{ @data.infolist.showData | gone }}" >
    
        <Cell 
            type="normal" 
            width="match_parent"
            height="wrap_content"
            background="@color/KBaseColorContentBackground">

            <LinearLayout
                 width="match_parent"
                 height="wrap_content"
                 marginTop="12"
                 borderColor="@color/KBaseColorPrimarySeparator"
                 borderWidth="0.5"
                 cornerRadius="8"
                 orientation="vertical"
                 paddingLeft="16"
                 paddingRight="16"
                 marginLeft="16"
                 marginRight="16">
            
                <!-- 父item -->
                <LinearLayout
                     width="match_parent"
                     height="wrap_content"
                     orientation="horizontal"
                     marginTop="20"
                     marginBottom="20"
                     onClick="@event.infolist.itemClick({{@element.index}})"
                     gravity="centerVertical">

                    <LinearLayout
                         width="0"
                         weight="1"
                         height="wrap_content"
                         orientation="vertical">

                        <TextView
                           width="wrap_content"
                           height="wrap_content"
                           textSize="16"
                           textColor="@color/kColorPrimaryText"
                           text="{{@element.name}}"
                           letterSpacing="0.01"
                           textFontWeight="500" />
                    </LinearLayout>

                    <ImageView
                        width="wrap_content"
                        height="wrap_content"
                        marginLeft="4"
                        src="{{@element.expandStatusRes}}" />
                </LinearLayout>

                <!-- 子item visibility="{{@element.##}}" 控制子条目显示隐藏-->
                <LinearLayout
                     width="match_parent"
                     height="wrap_content"
                     orientation="vertical"
                     visibility="{{@element.childVis}}">

                    <View
                        width="match_parent"
                        height="0.5"
                        marginBottom="12"
                        background="@color/kColorEBEBEB" />
                     <For
                        data="@element.list"
                        itemKey="childElement"
                        typeKey="itemType">

                        <Cell
                           type="1"
                           width="match_parent"
                           height="wrap_content">

                            <LinearLayout
                              width="match_parent"
                              height="wrap_content"
                              gravity="centerVertical"
                              orientation="horizontal"
                              marginBottom="16"
                              onClick="@event.infolist.productClick({{@element.index}},{{@childElement.index}})"
                              marginTop="4">

                                <LinearLayout
                                  width="wrap_content"
                                  height="wrap_content"
                                  orientation="vertical">

                                    <TextView
                                        width="wrap_content"
                                        height="wrap_content"
                                        textSize="14"
                                        textColor="@color/kColorSecondaryText"
                                        textFontWeight="500"
                                        text="{{@childElement.name}}" />
                                </LinearLayout>

                                <View
                                    width="0"
                                    height="0"
                                    weight="1" />

                                <TextView
                                    width="wrap_content"
                                    height="wrap_content"
                                    textSize="12"
                                    marginLeft="4"
                                    textFontWeight="500"
                                    textColor="@color/kColorPriceGreen"
                                    text="{{@childElement.statusDesc}}" />

                            </LinearLayout>
                        </Cell>
                    </For>
                </LinearLayout>
            </LinearLayout>
        </Cell>
    </RecyclerView>

</LinearLayout>
