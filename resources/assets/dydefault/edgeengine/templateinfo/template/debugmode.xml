<LinearLayout
    width="match_parent"
    height="match_parent"
    orientation="vertical"
    background="@color/KBaseColorContentBackground" >

    <FrameLayout
        width="match_parent"
        height = "match_parent">

        <LinearLayout
            width="match_parent"
            height="match_parent"
            orientation="vertical"
            gravity="center"
            visibility="{{@data.debugmode.infoShow | gone}}">
            <TextView
                width="wrap_content"
                height="wrap_content"
                textSize="16"
                textFontWeight="500"
                textColor="@color/KBaseColorMajorTheme100"
                text="已开启" />
        </LinearLayout>

        <LinearLayout
            width="match_parent"
            height="match_parent"
            orientation="vertical"
            gravity="top"
            visibility="{{@data.debugmode.inputShow | gone}}" >
            <EditText
                marginTop="60"
                width="match_parent"
                height="40"
                marginLeft="70"
                marginRight="70"
                paddingLeft="20"
                paddingRight="20"
                onTextChange="@event.debugmode.updateInput(@eventParams)"
                onFocusChange="@event.debugmode.onFocusChange(@eventParams)"
                textSize="14"
                imeOptions="actionDone"
                singleLine="true"
                textColor="@color/kColorPrimaryText"
                background="@color/baseColorInputBackground" />
            <LinearLayout
                width="match_parent"
                height="70"
                orientation="horizontal"
                gravity="center"
                marginTop="40" >
                <TextView
                    gravity="center"
                    width="wrap_content"
                    height="wrap_content"
                    paddingLeft="20"
                    paddingRight="20"
                    paddingTop="5"
                    onClick="@event.debugmode.openInfo()"
                    textSize="14"
                    textColor="FFFFFF"
                    text="开启"
                    background="@color/KBaseColorMajorTheme100" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
