<LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content" topLeftRadius="8" topRightRadius="8" width="match_parent">

    <LinearLayout height="wrap_content" marginBottom="16" marginLeft="16" marginRight="16" orientation="vertical" width="match_parent">
        <!--委托title-->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="12" orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" text="{{@data.displayTitleName}}" textColor="@color/kColorPrimaryText" textSize="16" textWeight="500"
                width="wrap_content" />

            <View height="0" weight="1" width="0" />

            <ImageView height="28" onClick="@event.close()" src="@drawable/trade_margin_coupon_title_close" width="28" />
        </LinearLayout>

        <!--币种信息-->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="12" orientation="horizontal" width="match_parent">

            <TextView background="{{@data.directionColor}}" cornerRadius="2" gravity="centerVertical" height="wrap_content" paddingLeft="2"
                paddingRight="2" paddingTop="1" paddingBottom="1" text="{{@data.directionName}}" textColor="@color/KBaseTextColor" textSize="10" textWeight="500"
                width="wrap_content" />

            <TextView gravity="centerVertical" height="wrap_content" marginLeft="4" text="{{@data.symbolName}}" textColor="@color/kColorPrimaryText"
                textSize="14" textWeight="500" width="wrap_content" />

            <TextView background="@color/baseColorInputBackground" cornerRadius="2" gravity="centerVertical" height="wrap_content"
                paddingLeft="2" paddingRight="2"  paddingTop="2" paddingBottom="2"
                marginLeft="4" text="{{@data.marginName}}" textColor="@color/kColorSecondaryText"
                textSize="10" textWeight="500" width="wrap_content" visibility="{{@data.isTagShow|gone}}" />

        </LinearLayout>

        <!-- 订单类型 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="18" orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" text="{{@i18n/n_kline_money_flow_order_type}}" textColor="@color/kColorThreeLevelText" textSize="14"
                textWeight="400" width="wrap_content" />

            <View height="0" weight="1" width="0" />

            <TextView height="wrap_content" text="{{@data.displayOrderTypeValue}}" textColor="@color/kColorPrimaryText" textSize="14" textWeight="500"
                width="wrap_content" />
        </LinearLayout>

        <!-- 触发价格 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="18" orientation="horizontal" width="match_parent" visibility="{{@data.isTriggerShow|gone}}">

            <TextView height="wrap_content" text="{{@i18n/n_exchange_trade_trigger_price}}" textColor="@color/kColorThreeLevelText" textSize="14"
                textWeight="400" width="wrap_content" />

            <View height="0" weight="1" width="0" />

            <TextView height="wrap_content" text="{{@data.displayOrderTriggerPriceValue}}" textColor="@color/kColorPrimaryText" textSize="14" textWeight="500"
                width="wrap_content" />
        </LinearLayout>

        <!-- 买入价/卖出价 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" text="{{@data.displayOrderPriceTitle}}" textColor="@color/kColorThreeLevelText" textSize="14"
                textWeight="400" width="wrap_content" />

            <View height="0" weight="1" width="0" />

            <TextView height="wrap_content" text="{{@data.displayOrderPriceValue}}" textColor="@color/kColorPrimaryText" textSize="14"
                textWeight="500" width="wrap_content" />
        </LinearLayout>

        <!-- 买入量/卖出量 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" width="match_parent" visibility="{{@data.isAmountShow|gone}}">

            <TextView height="wrap_content" text="{{@data.displayOrderAmountTitle}}" textColor="@color/kColorThreeLevelText"
                textSize="14" textWeight="400" width="wrap_content" />

            <View height="0" weight="1" width="0" />

            <TextView height="wrap_content" text="{{@data.displayOrderAmountValue}}" textColor="@color/kColorPrimaryText" textSize="14"
                textWeight="500" width="wrap_content" />
        </LinearLayout>

        

        <!-- 冰山单数量 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" width="match_parent" visibility="{{@data.isIceAmountShow|gone}}">

            <TextView height="wrap_content" text="{{@i18n/n_trade_iceberg_amount}}" textColor="@color/kColorThreeLevelText" textSize="14"
                textWeight="400" width="wrap_content" />

            <View height="0" weight="1" width="0" />

            <TextView height="wrap_content" text="{{@data.displayIceAmountValue}}" textColor="@color/kColorPrimaryText" textSize="14"
                textWeight="500" width="wrap_content" />
        </LinearLayout>

        <!-- 交易额 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" width="match_parent" visibility="{{@data.isVolumeShow|gone}}">

            <TextView height="wrap_content" text="{{@i18n/n_spot_order_total}}" textColor="@color/kColorThreeLevelText" textSize="14"
                textWeight="400" width="wrap_content" />

            <View height="0" weight="1" width="0" />

            <TextView height="wrap_content" text="{{@data.displayOrderVolumeValue}}" textColor="@color/kColorPrimaryText" textSize="14"
                textWeight="500" width="wrap_content" />
        </LinearLayout>

        <!-- 借币 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" width="match_parent" visibility="{{@data.isLoanShow|gone}}">

            <TextView height="wrap_content" text="{{@i18n/n_trade_margin_loan}}" textColor="@color/kColorThreeLevelText" textSize="14"
                textWeight="400" width="wrap_content" />

            <View height="0" weight="1" width="0" />

            <TextView height="wrap_content" text="{{@data.displayLoanVolumeValue}}" textColor="@color/KBaseRiskTextColorMid" textSize="14"
                textWeight="500" width="wrap_content" />
        </LinearLayout>

        <!-- 币息率（日） -->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" width="match_parent" visibility="{{@data.isLoanShow|gone}}">

            <TextView height="wrap_content" text="{{@i18n/n_trade_day_rate}}" textColor="@color/kColorThreeLevelText" textSize="14"
                textWeight="400" width="wrap_content" />

            <View height="0" weight="1" width="0" />

            <TextView height="wrap_content" text="{{@i18n/n_spot_order_interestRate_title}}" textColor="@color/kColorPrimaryText" textSize="14"
                textWeight="500" width="150" autoSizeTextType="uniform" maxLines="2" gravity="right"/>
        </LinearLayout>

        <!-- 以0.098%为基准上下浮动 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="4" orientation="horizontal" width="match_parent" visibility="{{@data.isLoanShow|gone}}">

            <TextView height="wrap_content" text="    " textColor="@color/kColorThreeLevelText" textSize="14"
                textWeight="400" width="wrap_content" />

            <View height="0" weight="1" width="0" />

            <TextView height="wrap_content" text="{{@data.displayOrderInterestValue}}" textColor="@color/kColorThreeLevelText" textSize="12"
                textWeight="500" width="wrap_content" />
        </LinearLayout>

        <!-- 还币 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" width="match_parent" visibility="{{@data.isRepayShow|gone}}">

            <TextView height="wrap_content" text="{{@i18n/n_trade_margin_repay}}" textColor="@color/kColorThreeLevelText" textSize="14"
                textWeight="400" width="wrap_content" />

            <View height="0" weight="1" width="0" />

            <TextView height="wrap_content" text="{{@data.displayRepayVolumeValue}}" textColor="@color/KBaseRiskTextColorMid" textSize="14"
                textWeight="500" width="wrap_content" />
        </LinearLayout>
        <!-- 归还数量为预估值，以实际归还金额为准 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="4" orientation="horizontal" width="match_parent" visibility="{{@data.isRepayEstimateShow|gone}}">

            <TextView height="wrap_content" text="    " textColor="@color/kColorThreeLevelText" textSize="14"
                textWeight="400" width="wrap_content" />

            <View height="0" weight="1" width="0" />

            <TextView height="wrap_content" text="{{@i18n/n_trade_repay_tips}}" textColor="@color/kColorThreeLevelText" textSize="12"
                textWeight="500" width="260" autoSizeTextType="uniform" maxLines="2" gravity="right"/>
        </LinearLayout>

        <!-- 不再提醒-->
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" width="match_parent">
            <ImageView gravity="centerVertical" height="12" onClick="@event.onCheck(0)" src="@drawable/common_check_new_selected" visibility="{{@data.checkSelect}}"
                width="12" />
            <ImageView gravity="centerVertical" height="12" onClick="@event.onCheck(1)" src="@drawable/common_check_new_unselected"
                visibility="{{@data.checkUnSelect}}" width="12" />
            <TextView gravity="centerVertical" height="wrap_content" marginLeft="4" text="{{@i18n/n_exchange_trade_affirm_tip}}"
                textColor="@color/kColorThreeLevelText" textSize="12"
                textWeight="400" width="327" autoSizeTextType="uniform" maxLines="2"/>
        </LinearLayout>

        <!--确认-->
        <LinearLayout background="@color/kColorMajorTheme100" bottomLeftRadius="4" bottomRightRadius="4" height="wrap_content" marginTop="24"
            onClick="@event.confirm()" orientation="horizontal" topLeftRadius="4" topRightRadius="4" width="match_parent">
            <View height="0" weight="1" width="0" />
            <LinearLayout gravity="right" height="wrap_content" orientation="horizontal" paddingBottom="12" paddingTop="12" width="wrap_content">
                <TextView gravity="center" height="wrap_content" text="{{@i18n/n_sure}}" textColor="@color/KBaseTextColor" textSize="14"
                    textWeight="500" width="wrap_content" />
            </LinearLayout>
            <View height="0" weight="1" width="0" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

