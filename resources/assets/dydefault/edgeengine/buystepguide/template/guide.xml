<LinearLayout width="match_parent" height="match_parent" orientation="vertical" paddingRight="16" paddingLeft="16">

    <TextView width="wrap_content" height="wrap_content" marginTop="100" textFontWeight="500" textColor="@color/kColorPrimaryText" richText="{{@data.info.title}}" textSize="28"/>

    <TextView width="wrap_content" height="wrap_content" marginTop="8" marginBottom="24" textFontWeight="500" text="{{@data.info.desc}}" textColor="@color/kColorThreeLevelText" textSize="14"/>

    <FrameLayout width="match_parent" height="112" background="@color/KBaseColorContentBackground" cornerRadius="8" onClick="@event.goToBuy()">
        <TextView width="match_parent" height="wrap_content" marginTop="20" marginLeft="16" textFontWeight="500" textColor="@color/kColorPrimaryText" text="{{@i18n/n_home_guide_type_want_buy}}" textSize="18"/>

        <LinearLayout width="wrap_content" height="wrap_content" marginTop="74" marginLeft="16" gravity="center" orientation="horizontal">

            <TextView width="wrap_content" height="wrap_content" marginRight="3" textColor="@color/kColorMajorTheme100" text="{{@i18n/n_home_guide_action_buy}}" textSize="12" textFontWeight="400"/>

            <ImageView width="6" height="6" marginLeft="3" gravity="center" src="@drawable/edge_engine_home_blue_right_arrows"/>

        </LinearLayout>

        <ImageView width="80" height="80" layout_gravity="right" marginTop="16" marginRight="16" src="@drawable/edge_engine_home_guide_want_buy"/>
    </FrameLayout>

    <FrameLayout width="match_parent" height="112" marginTop="8" background="@color/KBaseColorContentBackground" cornerRadius="8" onClick="@event.goToDeposit()">
        <TextView width="match_parent" height="wrap_content" marginTop="20" marginLeft="16" textFontWeight="500" textColor="@color/kColorPrimaryText" text="{{@i18n/n_home_guide_type_have_crypto}}" textSize="18"/>

        <LinearLayout width="wrap_content" height="wrap_content" marginTop="74" marginLeft="16" gravity="center" orientation="horizontal">

            <TextView width="wrap_content" height="wrap_content" marginRight="3" textColor="@color/kColorMajorTheme100" text="{{@i18n/n_home_guide_action_deposit}}" textSize="12" textFontWeight="400"/>

            <ImageView width="6" height="6" marginLeft="3" src="@drawable/edge_engine_home_blue_right_arrows"/>

        </LinearLayout>

        <ImageView width="80" height="80" layout_gravity="right" marginTop="16" marginRight="16" gravity="center" src="@drawable/edge_engine_home_guide_have_crypto"/>
    
    </FrameLayout>

</LinearLayout>
