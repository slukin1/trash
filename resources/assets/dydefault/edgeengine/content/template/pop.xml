
<LinearLayout marginStart="13" marginEnd="3" width="wrap_content" height="51" gravity="centerVertical" orientation="horizontal">
    <LinearLayout width="wrap_content" height="51" gravity="centerVertical" orientation="horizontal">
        <For data="@data.attitude.list" itemKey="element" typeKey="itemType">
            <Cell width="wrap_content" height="wrap_content" type="1">
                <LinearLayout width="wrap_content" height="wrap_content" gravity="centerVertical" orientation="horizontal" onClick="@event.clickedAttitude({{@element.index}})">
                    <ImageView height="30" width="30" src="{{@element.selectedUrl}}" background="FFA07A" marginEnd="10" visibility="{{@element.selected}}"/>
                    <ImageView height="30" width="30" src="{{@element.unSelectedUrl}}" background="FFA07A" marginEnd="10" visibility="{{@element.unSelected}}"/>
                </LinearLayout>
            </Cell>
        </For>
    </LinearLayout>
</LinearLayout>

