<LinearLayout
    width="match_parent"
    height="wrap_content"
    marginTop="11"
    gravity="centerVertical"
    orientation="vertical"
    topRightRadius="12"
    topLeftRadius="12"
    paddingTop="8"
    background="@color/KBaseColorContentBackground">
    <LinearLayout width="match_parent"
        height="wrap_content"
        gravity="centerVertical"
        orientation="vertical">
        <For data="@data.detail.topChartPopList" itemKey="element" typeKey="type">
            <Cell width="match_parent" height="wrap_content" type="1">
                <LinearLayout width="match_parent" marginLeft="16" marginRight="16" height="48"
                    gravity="center" orientation="horizontal"
                    onClick="@event.detail.clickedChartMenuItem({{@element.index}})">
                    <TextView gravity="left|center" height="48" width="wrap_content"
                        text="{{@element.title}}" textColor="{{@element.textColor}}"
                        textFontWeight="500" textSize="14" />
                    <View weight="1" />
                    <ImageView width="16" height="16"
                        src="@drawable/edge_engine_copytrading_selection_s"
                        visibility="{{@element.selImageVisibility}}" />
                </LinearLayout>
            </Cell>
        </For>
    </LinearLayout>
    <View width="match_parent" height="8" background="@color/KBaseColorDeepestBackground" />
    <TextView
        gravity="center"
        height="48"
        text="{{@i18n/n_photo_save_cancel}}"
        textColor="@color/KBaseColorSecondaryText"
        textFontWeight="500"
        textSize="16"
        width="match_parent"
        onClick="@event.detail.clickedChartSelectorCancel()" />
    <View width="match_parent" height="{{@data.detail.tradeMarginBottom}}" />
</LinearLayout>
