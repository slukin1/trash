<LinearLayout
    width="325"
    height="wrap_content"
    cornerRadius="8"
    paddingLeft="16"
    paddingRight="16"
    paddingBottom="16"
    gravity="centerVertical"
    orientation="vertical"
    background="@color/kColorContentBackground">
    <TextView
        height="52"
        width="match_parent"
        gravity="center|left"
        text="{{@data.detail.tipAlertTitle}}"
        textSize="16"
        textColor="@color/kColorPrimaryText"
        textFontWeight="600" />
    <TextView
        width="match_parent"
        height="wrap_content"
        maxWidth="293"
        text="{{@data.detail.tipAlertContent}} "
        textSize="14"
        lineSpacing="6"
        textColor="@color/kColorPrimaryText"
        maxLines="0"
        textFontWeight="400" />

    <!--不在提醒-->
    <LinearLayout
        width="wrap_content"
        height="wrap_content"
        gravity="center|left"
        marginTop="16"
        visibility="{{@data.detail.noReminderShow | gone}}"
        onClick="@event.detail.clickedNoReminder()">
        <ImageView
            height="14"
            width="14"
            src="{{@data.detail.noReminderImage}}" />
        <View
            width="4"
            height="1" />
        <TextView
            width="wrap_content"
            height="wrap_content"
            text="{{@i18n/n_hotcoin_radar_disable_reminders}}"
            textSize="12"
            textColor="@color/kColorPrimaryText"
            textFontWeight="400" />
    </LinearLayout>

    <!--确定，取消-->
    <LinearLayout
        width="wrap_content"
        height="wrap_content"
        gravity="center"
        marginTop="20"
        visibility="{{@data.detail.showContinue | gone}}">
        <TextView
            width="142.5"
            height="44"
            cornerRadius="4"
            gravity="center"
            text="{{@i18n/n_trade_reminder_cancel}}"
            textSize="14"
            textFontWeight="500"
            textColor="@color/kColorPrimaryText"
            background="@color/KBaseColorInputBackground"
            onClick="@event.detail.clickedTipCancel()" />
        <View
            width="8"
            height="1" />
        <TextView
            width="142.5"
            height="44"
            cornerRadius="4"
            gravity="center"
            text="{{@i18n/n_security_alert_continue}}"
            textColor="@color/KBaseTextColor"
            textSize="14"
            textFontWeight="500"
            background="@color/kColorMajorTheme100"
            onClick="@event.detail.clickedContinue()" />
    </LinearLayout>

    <!--知道了-->
    <LinearLayout
        width="match_parent"
        height="wrap_content"
        gravity="center"
        marginTop="16"
        visibility="{{@data.detail.showIKnow | gone}}"
        onClick="@event.detail.clickedIKnow()">
        <TextView
            width="match_parent"
            height="44"
            cornerRadius="4"
            gravity="center"
            text="{{@i18n/n_content_live_known}}"
            textColor="@color/KBaseTextColor"
            textSize="14"
            textFontWeight="500"
            background="@color/kColorMajorTheme100" />
    </LinearLayout>

</LinearLayout>
