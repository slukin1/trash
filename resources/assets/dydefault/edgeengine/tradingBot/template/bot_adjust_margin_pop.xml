<LinearLayout
	width="match_parent"
	height="match_parent"
	gravity="centerVertical"
	orientation="vertical">
	<View width="match_parent" height="0" weight="1"/>
	<LinearLayout background="@color/KBaseColorContentBackground" gravity="centerVertical"
		height="wrap_content" orientation="vertical" topLeftRadius="8" topRightRadius="8"
		width="match_parent">

		<!-- 顶部标题+关闭按钮 -->
		<LinearLayout gravity="center" height="44" orientation="horizontal" paddingLeft="16"
			paddingRight="0" width="match_parent">
			<TextView gravity="center|left" height="match_parent"
				text="{{@i18n/n_bot_detail_adjust_margin}}" textColor="@color/kColorPrimaryText"
				textFontWeight="500" textSize="16" width="wrap_content" />
			<View weight="1" />
			<LinearLayout gravity="center|right" height="44"
				onClick="@event.botAdjustMarginPop.popDismiss()" orientation="horizontal" paddingRight="16"
				width="44">
				<ImageView height="28" src="@drawable/edge_engine_copy_trading_dialog_close"
					width="28" />
			</LinearLayout>
		</LinearLayout>

		<!-- 分割线 -->
		<View background="@color/kColorPrimarySeparator" height="0.5" width="match_parent" />
		<!--币对 合约网格 做多 12X-->
		<LinearLayout gravity="left|center" height="wrap_content" marginLeft="16" marginRight="16" marginTop="16"
			orientation="horizontal" width="match_parent">
			<TextView gravity="center" height="20" text="{{@data.botDetailHeader.symbolTitle}}"
				textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14"
				width="wrap_content" />
			<TextView borderColor="@color/kColorPrimarySeparator" borderWidth="0.5" cornerRadius="2"
				gravity="center" height="16" marginLeft="8" paddingLeft="4" paddingRight="4"
				text="{{@data.botDetailHeader.gridModeDisplay}}" textColor="@color/kColorSecondaryText"
				textFontWeight="500" textSize="10" width="wrap_content" />
			<TextView borderColor="{{@data.botDetailHeader.trendTypeBorderColor}}" borderWidth="0.5"
				cornerRadius="2" gravity="center" height="16" marginLeft="4" paddingLeft="4"
				paddingRight="4" text="{{@data.botDetailHeader.trendTypeDisplay}}"
				textColor="{{@data.botDetailHeader.trendTypeColor}}" textFontWeight="500" textSize="10"
				width="wrap_content" />
			<TextView borderColor="@color/kColorPrimarySeparator" borderWidth="0.5" cornerRadius="2"
				gravity="center" height="16" marginLeft="4" paddingLeft="4" paddingRight="4"
				text="{{@data.botDetailHeader.leverDisplay}}" textColor="@color/kColorSecondaryText"
				textFontWeight="500" textSize="10" width="wrap_content" />
		</LinearLayout>

		<!--追加 取出 tab-->
		<LinearLayout background="@color/KBaseColorDeepestBackground" cornerRadius="4" gravity="center"
			height="32" marginLeft="16" marginRight="16" marginTop="8" orientation="horizontal"
			width="match_parent">
			<TextView background="{{@data.botAdjustMarginPop.tab0.background}}" cornerRadius="4"
				gravity="center" height="26" marginBottom="3" marginLeft="3" marginTop="3"
				onClick="@event.botAdjustMarginPop.tabClicked('1')"
				text="{{@i18n/n_bot_detail_tab_append}}"
				textColor="{{@data.botAdjustMarginPop.tab0.textColor}}" textFontWeight="500"
				textSize="14" weight="1" width="0" />
			<TextView background="{{@data.botAdjustMarginPop.tab1.background}}" cornerRadius="4"
				gravity="center" height="26" marginBottom="3" marginLeft="2" marginRight="3"
				marginTop="3" onClick="@event.botAdjustMarginPop.tabClicked('2')"
				text="{{@i18n/n_bot_detail_tab_extraction}}"
				textColor="{{@data.botAdjustMarginPop.tab1.textColor}}" textFontWeight="500"
				textSize="14" weight="1" width="0" />
		</LinearLayout>

		<!--取出保证金会离预估强平价越来越近，有强平风险！-->
		<!--创建机器人时如果使用了体验金券，则只能消耗完体验金或停止机器人才可转出保证金-->
		<LinearLayout gravity="left|top" height="wrap_content" orientation="horizontal"
			marginLeft="16" marginRight="16" marginTop="8"
			visibility="{{@data.botAdjustMarginPop.extractionVisibility | gone}}"
			width="match_parent">
			<ImageView gravity="center" height="16" scaleType="fitCenter" src="@drawable/edge_engine_copy_trading_tip"
				width="12" />
			<TextView gravity="left|top" height="wrap_content" marginLeft="4" maxLines="0"
				text="{{@data.botAdjustMarginPop.extractionMsg}}" textColor="#FE8731"
				textFontWeight="400" lineSpacing="4"
				textSize="12" weight="1" width="0" />
		</LinearLayout>

		<!-- 编辑框 -->
		<LinearLayout background="@color/KBaseColorInputBackground"
			cornerRadius="4" borderColor="{{@data.botAdjustMarginPop.editBorderColor}}"
			borderWidth="1"
			gravity="center" height="44" marginTop="16" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent">
			<EditText
				textColorHint="@color/eButtonUnenabledBgColor"
				height="match_parent" hint="{{@data.botAdjustMarginPop.inputHint}}"
				inputType="numberDecimal" marginLeft="12"
				textFilter="@dataParser.trade_parser(10,4,@eventParams)"
				onFocusChange="@event.botAdjustMarginPop.onFocusChange(1,@eventParams)"
				onTextChange="@event.botAdjustMarginPop.onTextChange(1,@eventParams)"
				bindText="@data.botAdjustMarginPop.inputNum" textColor="@color/kColorPrimaryText"
				textFontWeight="400" textSize="14" weight="1" width="1" />

			<ImageView height="20" marginLeft="4" src="@drawable/edge_engine_dbcoin_edit_clean"
				width="20" visibility="{{@data.botAdjustMarginPop.cleanVisibility | gone}}"
				onClick="@event.botAdjustMarginPop.cleanClick()"/>

			<TextView gravity="center" height="match_parent" marginLeft="12" marginRight="12"
				onClick="@event.botAdjustMarginPop.allIn()"
				text="{{@i18n/n_trade_bot_all}}" textColor="@color/kColorMajorTheme100"
				textFontWeight="400" textSize="14" width="wrap_content" />
		</LinearLayout>

		<TextView
			width="match_parent"
			height="wrap_content"
			gravity="left"
			text="{{@data.botAdjustMarginPop.inputErrorMsg}}"
			textColor="#E94359"
			textFontWeight="400"
			textSize="12"
			marginTop="8"
			marginLeft="16" marginRight="16"
			visibility="{{@data.botAdjustMarginPop.inputErrorVisibility}}"
		/>

		<!--总投入（投资额 + 保证金）：XXX.XXX USDT-->
		<TextView height="wrap_content" marginLeft="16" marginRight="16"
			text="{{@data.botAdjustMarginPop.totalInvestDisplay}}"
			visibility="{{@data.botAdjustMarginPop.totalInvestVisibility}}"
			textColor="@color/kColorSecondaryText" textFontWeight="400" textSize="12"
			width="match_parent" maxLines="0" marginTop="8" />

		<!-- 可追加余额、可取保证金 -->
		<LinearLayout gravity="center" height="wrap_content" marginTop="8" orientation="horizontal"
			width="match_parent" marginLeft="16" marginRight="16">
			<BottomLineTextView gravity="left" height="16"
				onClick="@event.botAdjustMarginPop.appendExtractionDialog()"
				text="{{@data.botAdjustMarginPop.availableTitle}}"
				textColor="@color/kColorSecondaryText" textFontWeight="400" textSize="12"
				width="wrap_content" />
			<View height="match_parent" weight="1" width="0" />
			<TextView gravity="right" height="wrap_content"
				text="{{@data.botAdjustMarginPop.availableDisplay}}"
				textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"
				width="wrap_content" />
		</LinearLayout>

		<SeekBar bubbleShow="ture" bubbleTextColor="#FFFFFF" bubbleTextSize="11" height="14"
			marginTop="8" onValueChange="@event.botAdjustMarginPop.seekBarValueChange(@eventParams)"
			bindProgress="@data.botAdjustMarginPop.progress" sectionCount="4"
			width="match_parent" marginLeft="16" marginRight="16"/>

		<!-- 体验金券 -->
		<LinearLayout
			width="match_parent"
			height="16"
			gravity="center"
			marginTop="8"
			marginLeft="16" marginRight="16"
			orientation="horizontal"
			visibility="{{@data.botAdjustMarginPop.experienceVisibility}}">
			<BottomLineTextView
				height="16"
				width="wrap_content"
				gravity="left|center"
				text="{{@i18n/n_bot_detail_coupon_title}}"
				textColor="@color/kColorSecondaryText"
				textFontWeight="400"
				textSize="12"
				onClick="@event.botAdjustMarginPop.remindClick('coupon')"/>
			<View height="match_parent" width="0" weight="1"/>
			<LinearLayout
				width="wrap_content"
				height="match_parent"
				gravity="center"
				orientation="horizontal"
				onClick="@event.botAdjustMarginPop.couponClick()">
				<TextView
					height="match_parent"
					width="wrap_content"
					gravity="left|center"
					text="{{@data.couponPop.couponTipStr}}"
					textColor="@color/kColorPrimaryText"
					textFontWeight="400"
					textSize="12" />
				<ImageView height="16" width="16" src="@drawable/edge_engine_trade_bot_coupon" marginLeft="4"/>
			</LinearLayout>
		</LinearLayout>

		<!-- 当前价格 -->
		<LinearLayout gravity="center" height="wrap_content" marginTop="8" orientation="horizontal"
			width="match_parent" marginLeft="16" marginRight="16">
			<TextView gravity="left" height="wrap_content"
				text="{{@i18n/n_contarct_share_position_cur_price}}"
				textColor="@color/kColorSecondaryText" textFontWeight="400" textSize="12"
				width="wrap_content" />
			<View height="match_parent" weight="1" width="0" />
			<TextView gravity="right" height="wrap_content"
				text="{{@data.botAdjustMarginPop.curPrice}}"
				textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"
				width="wrap_content" />
		</LinearLayout>

		<!-- 当前预估强平价 -->
		<LinearLayout gravity="center" height="wrap_content" marginTop="8" orientation="horizontal"
			width="match_parent" marginLeft="16" marginRight="16">
			<TextView gravity="left" height="wrap_content"
				text="{{@i18n/n_bot_detail_current_liquidation_price}}"
				textColor="@color/kColorSecondaryText" textFontWeight="400" textSize="12"
				width="wrap_content" />
			<View height="match_parent" weight="1" width="0" />
			<TextView gravity="right" height="wrap_content"
				text="{{@data.botAdjustMarginPop.curLiquidationPrice}}"
				textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"
				width="wrap_content" />
		</LinearLayout>


		<!-- 追加后预估强平价、取出后预估强平价 -->
		<LinearLayout gravity="center" height="wrap_content" marginTop="8" orientation="horizontal"
			width="match_parent" marginLeft="16" marginRight="16">
			<TextView gravity="left" height="wrap_content"
				text="{{@data.botAdjustMarginPop.bottomLiquidationText}}"
				textColor="@color/kColorSecondaryText" textFontWeight="400" textSize="12"
				width="wrap_content" />
			<View height="match_parent" weight="1" width="0" />
			<TextView gravity="right" height="wrap_content"
				text="{{@data.botAdjustMarginPop.bottomLiquidationPrice}}"
				textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"
				width="wrap_content" />
		</LinearLayout>

		<!--确认-->
		<TextView background="{{@data.botAdjustMarginPop.bottomBgColor}}" cornerRadius="4"
			gravity="center" height="44" marginLeft="16" marginRight="16"
			marginTop="16" onClick="@event.botAdjustMarginPop.confirmClick()" orientation="horizontal"
			text="{{@i18n/n_copy_trading_confirm}}"
			textColor="{{@data.botAdjustMarginPop.bottomTextColor}}" textFontWeight="500" textSize="14"
			width="match_parent" />
		<View
			width="match_parent"
			height="34" />

		<View height="0" onPopDismiss="@event.couponPop.popDismiss()" popCancelOnTouchOutside="false"
			popModalPositon="bottom" popShow="{{@data.couponPop.couponPopShow}}" popShowMode="modal"
			popTemplate="couponPop.xml" width="0"/>
	</LinearLayout>
</LinearLayout>
