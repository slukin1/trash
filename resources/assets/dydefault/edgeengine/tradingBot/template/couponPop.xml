<LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content" orientation="vertical"
    topLeftRadius="8" topRightRadius="8" width="375">
    <!-- 顶部标题+关闭按钮 -->
    <LinearLayout gravity="centerVertical" height="44" marginLeft="16" orientation="horizontal"
        width="match_parent">
        <TextView height="wrap_content" text="{{@i18n/n_bot_detail_coupon_title}}"
            textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="16"
            width="wrap_content" />
        <View height="0" weight="1" width="0" />
        <ImageView height="wrap_content" onClick="@event.couponPop.popDismiss()" paddingRight="16"
            src="@drawable/edge_engine_copy_trading_dialog_close" width="wrap_content" />
    </LinearLayout>
    <View background="@color/kColorPrimarySeparator" height="0.5" width="match_parent" />
    <FrameLayout height="501.5" width="match_parent">
        <!-- 有数据视图 -->
        <LinearLayout height="match_parent" orientation="vertical" visibility="{{@data.couponPop.listVisibility}}"
            width="375">
            <!--创建机器人时如果使用了体验金券，则只能消耗完体验金或停止机器人才可转出保证金。-->
            <LinearLayout background="#14FE8731" gravity="left|top" height="wrap_content"
                orientation="horizontal" paddingBottom="10" paddingLeft="16" paddingRight="16"
                paddingTop="10" width="match_parent">
                <ImageView gravity="center" height="16" scaleType="fitCenter"
                    src="@drawable/edge_engine_copy_trading_tip" width="12" />
                <TextView gravity="left|top" height="wrap_content" marginLeft="4" maxLines="0"
                    text="{{@i18n/n_bot_detail_coupon_use_rules}}"
                    textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"
                    weight="1" width="0" />
            </LinearLayout>
            <RecyclerView data="@data.couponPop.coupons" height="0" itemKey="item" marginBottom="4"
                marginTop="4" orientation="vertical" weight="1" width="match_parent">
                <Cell height="wrap_content" marginLeft="16" marginRight="16" marginTop="12"
                    type="normal" width="match_parent">
                    <LinearLayout borderColor="@color/eColorInputFillDisabled" borderWidth="1"
                        cornerRadius="12" gravity="centerVertical" height="wrap_content"
                        orientation="vertical" paddingBottom="12" paddingLeft="16" paddingRight="16"
                        paddingTop="12" width="match_parent" onClick="@event.couponPop.couponTapAction({{@item.index}})">
                        <LinearLayout gravity="centerVertical" height="wrap_content"
                            orientation="horizontal" width="match_parent">
                            <LinearLayout gravity="centerVertical" height="wrap_content"
                                orientation="vertical" width="0" weight="1">
                                <TextView height="wrap_content" maxLines="2" text="{{@item.title}}"
                                    textColor="@color/kColorPrimaryText" textFontWeight="500"
                                    textSize="16" width="match_parent" />
                                <TextView height="wrap_content" marginTop="6" text="{{@item.time}}"
                                    textColor="@color/KBaseColorSecondaryText" textFontWeight="400"
                                    textSize="12" width="match_parent" />
                            </LinearLayout>
                            <TextView height="wrap_content" marginLeft="12" marginRight="2"
                                text="{{@item.amount}}" textColor="@color/kColorPrimaryText"
                                textFontWeight="500" textSize="28" width="wrap_content" />
                            <TextView height="wrap_content" marginTop="6"
                                text="{{@item.baseCurrency}}"
                                textColor="@color/kColorPrimaryText" textFontWeight="500"
                                textSize="12" width="wrap_content" />
                            <ImageView
                                width="15"
                                height="15"
                                marginLeft="12"
                                src="{{@item.selectImage}}"/>
                        </LinearLayout>
                        <!--虚线-->
                        <DashLineView height="1" marginTop="12"
                            dashColor="@color/eColorInputFillDisabled" dashWidth="3" dashGap="3"
                            width="match_parent"/>
                        <!--兑换后7天内使用返现券 使用条件：合约账户至少含5USDT资金合约 有兑换有返现券-->
                        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="12"
                            onClick="@event.couponPop.unfoldRulesTapAction({{@item.index}})"
                            orientation="horizontal" visibility="{{@item.foldVisibility | visible}}"
                            width="match_parent">
                            <TextView height="wrap_content" maxLines="1" text="{{@item.rules}}"
                                textColor="@color/kColorThreeLevelText" textFontWeight="400"
                                textSize="10" weight="1" width="0" />
                            <ImageView gravity="centerVertical" height="12" marginLeft="10"
                                src="@drawable/edge_engine_arrow_down" width="12" />
                        </LinearLayout>
                        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="12"
                            onClick="@event.couponPop.unfoldRulesTapAction({{@item.index}})"
                            orientation="horizontal" visibility="{{@item.unfoldVisibility | gone}}"
                            width="match_parent">
                            <TextView height="wrap_content" maxLines="0" text="{{@item.rules}}"
                                textColor="@color/kColorThreeLevelText" textFontWeight="400"
                                textSize="10" weight="1" width="0" />
                            <ImageView gravity="centerVertical" height="12" marginLeft="10"
                                src="@drawable/edge_engine_arrow_up" width="12" />
                        </LinearLayout>
                    </LinearLayout>
                </Cell>
            </RecyclerView>
            <!-- 确认 -->
            <LinearLayout background="{{@data.couponPop.backgroundColor}}" cornerRadius="4"
                gravity="center" height="44" marginLeft="16" marginRight="16"
                marginTop="16" onClick="@event.couponPop.convertTapAction()" width="match_parent">
                <TextView height="wrap_content" text="{{@i18n/n_sure}}"
                    textColor="{{@data.couponPop.textColor}}" textFontWeight="500" textSize="14"
                    width="wrap_content" />
            </LinearLayout>

            <View
                width="match_parent"
                height="34" />
        </LinearLayout>

        <!-- 空样式 -->
        <LinearLayout gravity="center" height="match_parent" marginRight="16" marginBottom="34"
            marginLeft="16" orientation="vertical" visibility="{{@data.couponPop.emptyVisibility}}"
            width="match_parent">
            <ImageView height="76" scaleType="fitCenter" src="@drawable/edge_engine_empty"
                width="76" />
            <TextView gravity="center" height="wrap_content" marginTop="12" text="{{@i18n/n_contract_grid_coupon_no_record}}"
                textColor="@color/eBaseColorThreeLevelText" textSize="12"
                width="match_parent" />
            <TextView gravity="center" height="wrap_content" paddingTop="12" paddingBottom="12" text="{{@i18n/n_bot_detail_how_to_get_coupon}}"
                textColor="@color/kColorMajorTheme100" textSize="12" visibility="gone"
                width="match_parent" onClick="@event.couponPop.howGetCoupon()"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
