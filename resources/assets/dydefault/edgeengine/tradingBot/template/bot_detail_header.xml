<LinearLayout
	width="match_parent"
	height="wrap_content"
	gravity="center"
	paddingLeft="16"
	paddingRight="16"
	paddingTop="16"
	paddingBottom="16"
	background="@color/KBaseColorInputBackground"
	orientation="vertical"
	visibility="{{@data.botDetailHeader.visibility}}">
	<View height="0" onPopDismiss="@event.commonPop.popDismiss()" popCancelOnTouchOutside="false"
        popModalPositon="center" popShow="{{@data.commonPop.popShow}}" popShowMode="modal"
        popTemplate="commonPop.xml" width="0"/>
	<View 
		width="match_parent"  
		height="0"
		popTemplate="bot_create_confirm_pop.xml"
		popShow="{{@data.botCreateConfirmPop.popShow}}"
		onPopDismiss="@event.botCreateConfirmPop.confirmPopDismiss()"
		popCancelOnTouchOutside="true"
		popBackgroundDimmed="true"
		popShowMode="modal"
		popModalPositon="bottom" />
	<LinearLayout
		width="match_parent"
		height="wrap_content"
		gravity="left|center"
		orientation="horizontal">
		<TextView 
			width="wrap_content" 
			height="20" 
			gravity="center"
			textSize="14"
			textFontWeight="500"
			text="{{@data.botDetailHeader.symbolTitle}}"
			textColor="@color/kColorPrimaryText"/>
		<TextView 
			width="wrap_content" 
			height="16" 
			gravity="center"
			textSize="10"
			textFontWeight="500"
			paddingLeft="4"
			paddingRight="4"
			marginLeft="8"
			cornerRadius="2"
			borderWidth="0.5"
			borderColor="@color/eButtonUnenabledBgColor"
			text="{{@data.botDetailHeader.gridModeDisplay}}"
			textColor="@color/kColorSecondaryText" />
		<TextView 
			width="wrap_content" 
			height="16" 
			gravity="center"
			textSize="10"
			textFontWeight="500"
			paddingLeft="4"
			paddingRight="4"
			marginLeft="4"
			cornerRadius="2"
			borderWidth="0.5"
			borderColor="{{@data.botDetailHeader.trendTypeBorderColor}}"
			text="{{@data.botDetailHeader.trendTypeDisplay}}"
			textColor="{{@data.botDetailHeader.trendTypeColor}}" />
		<TextView 
			width="wrap_content" 
			height="16" 
			gravity="center"
			textSize="10"
			textFontWeight="500"
			paddingLeft="4"
			paddingRight="4"
			marginLeft="4"
			cornerRadius="2"
			borderWidth="0.5"
			borderColor="@color/eButtonUnenabledBgColor"
			text="{{@data.botDetailHeader.leverDisplay}}"
			textColor="@color/kColorSecondaryText" />
	</LinearLayout>
	<LinearLayout
		width="match_parent"
		marginTop="12"
		height="wrap_content"
		gravity="left|center"
		orientation="horizontal">
		<LinearLayout
			width="wrap_content"
			height="wrap_content"
			gravity="left|center"
			orientation="vertical">
			<BottomLineTextView 
				width="wrap_content" 
				height="14" 
				gravity="left"
				textSize="11"
				textFontWeight="400"
				text="{{@data.botDetailHeader.totalInvestmentTitle}}"
				textColor="@color/kColorThreeLevelText"
				onClick="@event.botDetailHeader.remindClick('totalInvestment')"/>
			<TextView 
				width="wrap_content" 
				height="24" 
				marginTop="4"
				gravity="left"
				textSize="18"
				textFontWeight="500"
				text="{{@data.botDetailHeader.totalInvestmentDisplay}}"
				textColor="@color/kColorPrimaryText"/>
		</LinearLayout>
		<View width="0" height="0" weight="1"/>
		<LinearLayout
			width="wrap_content"
			height="wrap_content"
			gravity="right|center"
			orientation="vertical">
			<BottomLineTextView 
				width="wrap_content" 
				height="14" 
				gravity="right"
				textSize="11"
				textFontWeight="400"
				text="{{@data.botDetailHeader.totalProfitTitle}}"
				textColor="@color/kColorThreeLevelText"
				onClick="@event.botDetailHeader.remindClick('totalProfit')"/>
			<LinearLayout
				width="wrap_content"
				height="24"
				marginTop="4"
				gravity="left|bottom"
				orientation="horizontal">
				<TextView 
					width="wrap_content" 
					height="24" 
					gravity="right"
					textSize="18"
					textFontWeight="500"
					text="{{@data.botDetailHeader.totalProfitDisplay}}"
					textColor="{{@data.botDetailHeader.totalTextColor}}"/>
				<TextView 
					width="wrap_content" 
					height="18" 
					marginLeft="4"
					gravity="right"
					textSize="11"
					textFontWeight="400"
					text="{{@data.botDetailHeader.totalProfitRateDisplay}}"
					textColor="{{@data.botDetailHeader.totalTextColor}}"/>
			</LinearLayout>

		</LinearLayout>
		

	</LinearLayout>
	<View width="343" height="0.5" marginTop="12" background="@color/kColorPrimarySeparator"/>
	<LinearLayout
		width="match_parent"
		height="wrap_content"
		marginTop="12"
		gravity="left|top"
		orientation="horizontal">
		<ImageView marginTop="2" width="10" height="10" src="{{@data.botDetailHeader.statusSrc}}"/>
		<TextView 
			width="wrap_content" 
			height="14" 
			marginLeft="4"
			marginTop="0"
			textSize="11"
			textFontWeight="400"
			text="{{@data.botDetailHeader.stateDisplay}}"
			textColor="{{@data.botDetailHeader.stateColor}}"/>
		<View marginTop="3" marginLeft="4" width="0.5" height="8" background="@color/kColorPrimarySeparator" />
		<TextView 
			width="0" 
			height="wrap_content" 
			marginLeft="4"
			marginRight="0"
			gravity="left"
			textSize="11"
			weight="1"
			maxLines="0"
			textFontWeight="400"
			text="{{@data.botDetailHeader.runtimeDisplay}}"
			textColor="@color/kColorThreeLevelText"/>
	</LinearLayout>
	
</LinearLayout>
