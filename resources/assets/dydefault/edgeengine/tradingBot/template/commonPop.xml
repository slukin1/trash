<LinearLayout
                background="@color/KBaseColorContentBackground"
                cornerRadius="8"
                width="325"
                height="wrap_content"
                orientation="vertical"
                paddingLeft="16"
                paddingRight="16">
        <TextView
                        text="{{@data.commonPop.popTitle}}"
                        textSize="16"
                        width="wrap_content"
                        marginTop="16"
                        height="20"
                        textFontWeight="500"
                        textColor="@color/kColorPrimaryText"
                        visibility="{{@data.commonPop.titleVisibility | gone}}" />
        <TextView
                        text="{{@data.commonPop.popContent1}}"
                        textSize="14"
                        width="293"
                        height="wrap_content"
                        textFontWeight="400"
                        marginTop="16"
                        lineSpacing="5"
                        maxLines="0"
                        textColor="@color/kColorPrimaryText" />
		<TextView
                        text="{{@data.commonPop.popContent2}}"
                        textSize="14"
                        width="293"
                        height="wrap_content"
                        textFontWeight="400"
						marginTop="5"
                        lineSpacing="5"
                        maxLines="0"
                        textColor="@color/KBaseRiskTextColorMid" />
        <LinearLayout
                        background="@color/kColorMajorTheme100"
                        cornerRadius="4"
                        width="293"
                        onClick="@event.commonPop.leftButtonClick()"
                        marginTop="16"
                        marginBottom="16"
                        gravity="center"
                        height="40"
                        visibility="{{@data.commonPop.oneButtonVisibility | gone}}">
                <TextView
                                text="{{@data.commonPop.centerButtonText}}"
                                textColor="@color/KBaseTextColor"
                                textSize="14"
                                height="wrap_content"
                                width="wrap_content"
                                textFontWeight="500" />
        </LinearLayout>
        <LinearLayout
                        width="293"
                        marginTop="16"
                        marginBottom="16"
                        gravity="center"
                        height="40"
						
                        visibility="{{@data.commonPop.twoButtonVisibility | gone}}">
                <LinearLayout
                                background="@color/KBaseColorInputBackground"
                                cornerRadius="4"
                                width="142"
                                gravity="center"
								onClick="@event.commonPop.leftButtonClick()"
                                height="40">
                        <TextView
                                        text="{{@data.commonPop.leftButtonText}}"
                                        textColor="@color/kColorPrimaryText"
                                        textSize="14"
                                        height="wrap_content"
                                        width="142"
                                        gravity="center"
                                        textFontWeight="500" />
                </LinearLayout>
                <LinearLayout
                                background="@color/kColorMajorTheme100"
                                marginLeft="8"
                                cornerRadius="4"
                                width="142"
                                gravity="center"
								onClick="@event.commonPop.rightButtonClick()"
                                height="40">
                        <TextView
                                        text="{{@data.commonPop.rightButtonText}}"
                                        textColor="@color/KBaseTextColor"
                                        textSize="14"
                                        height="wrap_content"
                                        width="142"
                                        gravity="center"
                                        textFontWeight="500" />
                </LinearLayout>
        </LinearLayout>
</LinearLayout>
