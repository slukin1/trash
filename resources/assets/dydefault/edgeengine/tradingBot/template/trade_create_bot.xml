<LinearLayout
    width="match_parent"
    height="wrap_content"
    orientation="vertical"
    gravity="left"
    paddingBottom="16"
    paddingLeft="16"
    paddingRight="16"
    background="@color/KBaseColorContentBackground">

    <TextView
      width="wrap_content"
      height="44"
      marginTop="24"
      text="{{@i18n/n_trade_bot_create}}"
      gravity="center"
      textColor="@color/kColorPrimaryText"
      textFontWeight="500"
      textSize="16" />
    
    <LinearLayout
      width="match_parent"
      height="wrap_content"
      orientation="horizontal">

      <FrameLayout
        width="167.5"
        height="wrap_content"
        orientation="vertical"
        paddingLeft="12"
        paddingTop="12"
        paddingBottom="12"
        paddingRight="12"
        cornerRadius="8"
        borderColor="@color/kColorPrimarySeparator"
        borderWidth="0.5"
        onClick="@event.createBot.spotClick()">

        <!-- 显示视图 -->
        <LinearLayout
          width="match_parent"
          height="wrap_content"
          orientation="vertical">

          <!-- 主标题 -->
          <LinearLayout
            width="match_parent"
            height="wrap_content"
            orientation="horizontal"
            gravity="center">

            <ImageView 
              width="14"
              height="14"
              src="@drawable/edge_engine_trading_bot_icon_spot_grid"
              gravity="left"/>
            <View
            width="4"
            height="1"/>

            <TextView 
              width="125.5"
              height="wrap_content"
              gravity="left"
              text="{{@i18n/n_trade_bot_spot_grid}}"
              textColor="@color/kColorPrimaryText"
              textSize="14"
              maxLines="2"
              textFontWeight="500" />

          </LinearLayout>

          <!-- 占位 -->
          <View
            width="1"
            height="4"/>

          <!-- 描述 -->
          <TextView 
              width="143.5"
              height="wrap_content"
              gravity="left"
              text="{{@i18n/n_trade_bot_spot_grid_desc}}"
              textColor="@color/KBaseColorSecondaryText"
              textSize="10"
              maxLines="3"
              textFontWeight="400" />

        </LinearLayout>    

        <!-- 占位视图 -->
        <LinearLayout
          width="match_parent"
          height="wrap_content"
          visibility="invisible"
          orientation="vertical">

          <!-- 主标题 -->
          <LinearLayout
            width="match_parent"
            height="wrap_content"
            orientation="horizontal"
            gravity="centerVertical">

            <ImageView 
              width="14"
              height="14"
              gravity="left"/>
            <View
            width="4"
            height="1"/>

            <TextView 
              width="91.5"
              height="wrap_content"
              gravity="left"
              text="{{@i18n/n_trade_bot_contract_grid}}"
              textColor="@color/kColorPrimaryText"
              textSize="14"
              maxLines="2"
              textFontWeight="500" />

          </LinearLayout>

          <!-- 占位 -->
          <View
            width="1"
            height="4"/>

          <!-- 描述 -->
          <TextView 
              width="143.5"
              height="wrap_content"
              gravity="left"
              text="{{@i18n/n_trade_bot_contract_grid_desc}}"
              textColor="@color/KBaseColorSecondaryText"
              textSize="10"
              maxLines="3"
              textFontWeight="400" />

        </LinearLayout>    
      </FrameLayout>
      <View
        width="0"
        weight="1"/>
      <FrameLayout
          width="167.5"
          height="wrap_content"
          orientation="vertical"
          paddingLeft="12"
          paddingTop="12"
          paddingBottom="12"
          paddingRight="12"
          cornerRadius="8"
