<LinearLayout
	width="match_parent"
	height="wrap_content"
	orientation="vertical"
	topRightRadius="8"
	topLeftRadius="8"
	paddingTop="2"
	background="@color/KBaseColorContentBackground">
	<Scroller
		width="match_parent"
		height="39.5"
		gravity="center"
		orientation="horizontal">
		<LinearLayout
			width="wrap_content"
			height="match_parent"
			paddingLeft="8"
			paddingRight="8"
			orientation="horizontal" >
			<For
				data="@data.botDetailHeader.tabList"
				itemKey="element"
				typeKey="cellType">
				<Cell
					width="wrap_content"
					height="match_parent"
					type="1">
					<LinearLayout
						width="wrap_content"
						height="match_parent"
						gravity="center"
						paddingLeft="8"
						paddingRight="8"
						orientation="vertical"
						onClick="@event.botDetailHeader.tabClick({{@element.index}},true)">
						<TextView 
							height="0"
							width="wrap_content"
							weight="1"
							gravity="center"
							text="{{@element.title}}"
							textColor="{{@element.textColor}}" 
							textFontWeight="500" 
							textSize="14" />
						<View 
							height="2" 
							width="20" 
							cornerRadius="2"
							background="@color/kColorMajorTheme100" 
							visibility="{{@element.selectVisibility}}"/>
					</LinearLayout>
				</Cell>
			</For>
			
		</LinearLayout>
	</Scroller>
	<View width="375" height="0.5" background="@color/kColorPrimarySeparator"/>
</LinearLayout>
