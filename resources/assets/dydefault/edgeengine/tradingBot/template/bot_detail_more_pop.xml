<LinearLayout
	width="match_parent"
	height="wrap_content"
	gravity="centerVertical"
	orientation="vertical"
	topRightRadius="8"
	topLeftRadius="8"
	background="@color/KBaseColorContentBackground">

	<!-- 顶部标题+关闭按钮 -->
    <LinearLayout
		paddingLeft="16"
		paddingRight="0"
		width="match_parent"
		height="44"
		gravity="center"
		orientation="horizontal">
        <TextView
			height="match_parent"
			width="wrap_content"
			gravity="center|left"
			text="{{@i18n/n_home_index_earn_more}}"
			textSize="16"
			textColor="@color/kColorPrimaryText"
			textFontWeight="500" />
        <View weight="1" />
        <LinearLayout
			width="100"
			height="44"
			paddingRight="16"
			gravity="center|right"
			orientation="horizontal"
			onClick="@event.botDetailBottom.morePopClose()">
            <ImageView
				width="28"
				height="28"
				src="@drawable/edge_engine_copy_trading_dialog_close" />
        </LinearLayout>
    </LinearLayout>

    <!-- 分割线 -->
    <View
            background="@color/kColorPrimarySeparator"
            width="match_parent"
            height="0.5" />

	<LinearLayout
		width="match_parent"
		height="52"
		paddingLeft="16"
		paddingRight="16"
		gravity="center"
		orientation="horizontal"
		onClick="@event.botDetailBottom.copyClick()">
		<TextView
			gravity="left|center"
			height="match_parent"
			width="wrap_content"
			text="{{@i18n/n_bot_detail_copy_params}}"
			textColor="@color/kColorPrimaryText"
			textFontWeight="500"
			textSize="14" />
		<View weight="1" />
		<ImageView width="14" height="14" src="@drawable/edge_engine_next_step"/>
	</LinearLayout>
	<LinearLayout
		width="match_parent"
		height="52"
		paddingLeft="16"
		paddingRight="16"
		gravity="center"
		orientation="horizontal"
		onClick="@event.botDetailBottom.editClick()">
		<TextView
			gravity="left|center"
			height="match_parent"
			width="wrap_content"
			text="{{@i18n/n_bot_detail_edit_params}}"
			textColor="@color/kColorPrimaryText"
			textFontWeight="500"
			textSize="14" />
		<View weight="1" />
		<ImageView width="14" height="14" src="@drawable/edge_engine_next_step"/>
	</LinearLayout>
	<LinearLayout
		width="match_parent"
		height="52"
		paddingLeft="16"
		paddingRight="16"
		gravity="center"
		orientation="horizontal">
		<TextView
			gravity="left|center"
			height="match_parent"
			width="wrap_content"
			text="{{@i18n/n_contract_grid_create_show_in_ranking}}"
			textColor="@color/kColorPrimaryText"
			textFontWeight="500"
			textSize="14" />
		<View weight="1" />
		<ImageView height="16" width="28" src="{{@data.botDetailBottom.showBotSrc}}" onClick="@event.botDetailBottom.showBotClick()"/>
	</LinearLayout>
	<View
		width="match_parent"
		height="34" />
</LinearLayout>
