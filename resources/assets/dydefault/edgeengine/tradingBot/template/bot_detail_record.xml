<LinearLayout height="match_parent" orientation="vertical" paddingLeft="16"
    width="match_parent" paddingRight="16" background="@color/KBaseColorContentBackground">
    <!--已套利收益(USDT)-->
    <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal"
        width="match_parent"  marginTop="16">

        <BottomLineTextView height="20" text="{{@i18n/n_bot_detail_arbitrage_profit}}"
            textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14"
            width="wrap_content" onClick="@event.botDetailRecord.bottomLineClick('1')"/>
        <View weight="1" />
        <TextView height="wrap_content" text="{{@data.botDetailRecord.arbitrageProfit}}"
            textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14"
            width="wrap_content" />
    </LinearLayout>

    <!--24小时套利次数-->
    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="8"
        orientation="horizontal" width="match_parent">

        <BottomLineTextView height="20"
            text="{{@i18n/n_trade_bot_title_24H_matched_numbers}}"
            textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14"
            width="wrap_content" onClick="@event.botDetailRecord.bottomLineClick('2')"/>
        <View weight="1" />
        <TextView height="wrap_content" text="{{@data.botDetailRecord.arbitrageTimes24h}}"
            textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14"
            width="wrap_content" />
    </LinearLayout>

    <!--总套利次数-->
    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="8"
        orientation="horizontal" width="match_parent">

        <BottomLineTextView height="20"
            text="{{@i18n/n_trade_bot_title_matched_numbers_total}}"
            textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14"
            width="wrap_content" onClick="@event.botDetailRecord.bottomLineClick('3')"/>
        <View weight="1" />
        <TextView height="wrap_content" text="{{@data.botDetailRecord.totalArbitrageTimes}}"
            textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14"
            width="wrap_content" />
    </LinearLayout>

    <!--累计资金费用(USDT)-->
    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="8"
        orientation="horizontal" width="match_parent">

        <BottomLineTextView height="20"
            text="{{@i18n/n_bot_detail_accumulated_funding_fees}}"
            textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14"
            width="wrap_content" onClick="@event.botDetailRecord.bottomLineClick('4')"/>
        <View weight="1" />
        <TextView height="wrap_content" text="{{@data.botDetailRecord.accumulatedFundingFees}}"
            textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14"
            width="wrap_content" />
    </LinearLayout>

    <FrameLayout height="wrap_content" marginTop="16" width="match_parent">
        <LinearLayout borderColor="@color/kColorPrimarySeparator" borderWidth="0.5" cornerRadius="4"
            gravity="centerVertical" height="wrap_content" orientation="vertical"
            visibility="{{@data.botDetailRecord.contentVisibility | gone}}" width="match_parent">
            <!--成交时间 已套利收益(USDT) -->
            <LinearLayout background="@color/KAssetTopHeaderContentBackground"
                gravity="centerVertical" height="wrap_content" orientation="horizontal"
                paddingBottom="7" paddingTop="7" topLeftRadius="4" topRightRadius="4"
                width="match_parent">

                <TextView gravity="left" height="wrap_content" marginLeft="8"
                    text="{{@i18n/n_exchange_order_detail_trade_time}}"
                    textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="11"
                    width="wrap_content" />
                <TextView gravity="right" height="wrap_content" marginRight="8"
                    text="{{@i18n/n_bot_detail_arbitrage_profit}}"
                    textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="11"
                    weight="1" width="0" />
            </LinearLayout>

            <!-- 列表 -->
            <RecyclerView data="@data.botDetailRecord.matchList" height="{{@data.botDetailRecord.matchListHeight}}"
                itemKey="element" typeKey="traderListType" width="match_parent"
                loadMoreStatus="{{@data.botDetailRecord.loadMoreStatus}}"
                onLoadMore="@event.botDetailRecord.loadMore()">
                <Cell height="40" type="1" width="match_parent"
                    onClick="@event.botDetailRecord.clickItem('{{@element.index}}')">
                    <LinearLayout gravity="centerVertical" height="40" marginLeft="8"
                        marginRight="8" orientation="horizontal" width="match_parent">
                        <!--2024/23/09 12:09:00-->
                        <TextView height="wrap_content" text="{{@element.date | }}"
                            textColor="@color/kColorThreeLevelText" textFontWeight="400"
                            textSize="12" width="wrap_content" />
                        <!--等待卖出-->
                        <TextView gravity="right" height="wrap_content"
                            text="{{@element.content | }}" textColor="{{@element.contentColor}}" textFontWeight="400"
                            textSize="12" weight="1" width="0" />
                        <!---箭头-->
                        <ImageView height="14" scaleType="fitXY"
                            src="@drawable/edge_engine_bot_detail_record_list_arrow" width="14" />
                    </LinearLayout>
                </Cell>
            </RecyclerView>
        </LinearLayout>

        <!-- 暂无记录空样式 -->
        <LinearLayout gravity="center" height="168" orientation="vertical"
            visibility="{{@data.botDetailRecord.listEmptyVisibility | gone}}" width="match_parent">
            <ImageView height="60" src="@drawable/edge_engine_empty" width="60" />
            <TextView gravity="center" height="wrap_content" marginTop="12"
                text="{{@i18n/n_contract_trade_no_record}}"
                textColor="@color/eBaseColorThreeLevelText" textSize="12" width="match_parent" />
        </LinearLayout>
    </FrameLayout>

    <View height="0" onPopDismiss="@event.commonPop.popDismiss()" popCancelOnTouchOutside="false"
        popModalPositon="center" popShow="{{@data.commonPop.popShow}}" popShowMode="modal"
        popTemplate="commonPop.xml" width="0"/>

    <View
        width="0"
        height="0"
        popTemplate="bot_detail_record_pop.xml"
        popShow="{{@data.botDetailRecord.popShow}}"
        onPopDismiss="@event.botDetailRecord.popDismiss()"
        popCancelOnTouchOutside="true"
        popBackgroundDimmed="true"
        popShowMode="modal"
        popModalPositon="bottom" />
</LinearLayout>


