<LinearLayout
    width="match_parent"
    height="match_parent"
	gravity="top|center"
    orientation="vertical"
    background="@color/KBaseColorContentBackground">

	<ImageView gravity="center" width="64" height="64" marginTop="80" src="edge_engine_dbcoin_coin_buy_result" />
	<TextView 
		height="wrap_content" 
		width="wrap_content"
		gravity="center"
		text="{{@data.botHandleCompletionPage.title}}"
		marginTop="16"
		textColor="@color/kColorPrimaryText"
		textFontWeight="500" 
		textSize="16" />
	<LinearLayout
		width="343"
		height="44"
		gravity="center"
		marginTop="48"
		orientation="horizontal">
		<TextView 
			height="match_parent" 
			width="167.5"
			gravity="center"
			text="{{@i18n/n_bot_detail_done}}"
			textColor="@color/kColorPrimaryText" 
			textFontWeight="500" 
			cornerRadius="4"
			textSize="14"
			background="@color/KBaseColorInputBackground"
			onClick="@event.botHandleCompletionPage.doneClick()" />
		<TextView 
			height="match_parent" 
			width="167.5"
			gravity="center"
			marginLeft="8"
			text="{{@data.botHandleCompletionPage.buttonTitle}}"
			textColor="@color/KBaseTextColor" 
			textFontWeight="500"
			cornerRadius="4"
			textSize="14"
			background="@color/kColorMajorTheme100"
			onClick="@event.botHandleCompletionPage.showDetailClick()" />
	</LinearLayout>
</LinearLayout>

