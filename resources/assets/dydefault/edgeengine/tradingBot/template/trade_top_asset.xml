<LinearLayout gravity="centerVertical" height="wrap_content" marginTop="24" orientation="horizontal"
    width="375" visibility="{{@data.tradeTopAsset.assetVisibility | gone}}">
    <LinearLayout height="wrap_content" marginLeft="16" orientation="vertical" width="179">
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal"
            width="match_parent">

            <BottomLineTextView height="16" text="{{@data.tradeTopAsset.totalAssetsTitle}}"
                textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12"
                width="wrap_content" onClick="@event.tradeTopAsset.totalAssetsDialog()"/>

            <ImageView height="16" paddingLeft="6" paddingRight="6" onClick="@event.tradeTopAsset.showHide()"
                src="{{@data.tradeTopAsset.icShowHide}}" width="28" />
        </LinearLayout>

        <TextView height="40" gravity="center|left" text="{{@data.tradeTopAsset.totalAssetDisplay}}"
            textColor="@color/kColorPrimaryText" textFontWeight="700" textSize="24"
            width="match_parent" />
        <!--今日收益-->
        <LinearLayout gravity="centerVertical" height="wrap_content"
            orientation="horizontal" width="match_parent">

            <BottomLineTextView height="16" onClick="@event.tradeTopAsset.todayProfitDialog()"
                text="{{@i18n/n_today_profit}}" textColor="@color/kColorThreeLevelText" textFontWeight="400"
                textSize="12" width="wrap_content" />

            <TextView height="wrap_content" marginLeft="6" text="{{@data.tradeTopAsset.todayProfitDisplay}}"
                textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"
                width="wrap_content" />

            <TextView height="wrap_content" marginLeft="6" text="{{@data.tradeTopAsset.todayRateDisplay}}"
                textColor="{{@data.tradeTopAsset.todayRateColor}}" textFontWeight="400" textSize="12"
                width="wrap_content" />

        </LinearLayout>
        <!--我的机器人-->
        <TextView background="@color/kColorInputFill" cornerRadius="4"
            gravity="center" height="32" onClick="@event.tradeTopAsset.gotoMyBot()" text="{{@i18n/n_trade_bot_my_bot}}"
            textColor="@color/kColorPrimaryText" textFontWeight="500" marginTop="12"
            textSize="12" width="85" />
    </LinearLayout>
    <!--右侧曲线图+遮罩阴影-->
    <FrameLayout height="116" width="180" visibility="{{@data.tradeTopAsset.klineVisibility | gone}}">
        <KlineChat data="{{@data.tradeTopAsset.assetBalanceUSDTChartY}}" height="match_parent"
            rate="{{@data.tradeTopAsset.balanceRate30}}" drawGraphBg = "false"
            width="match_parent" />
        <ImageView height="match_parent" src="@drawable/edge_engine_trading_bot_asset_shadow" width="50" scaleType="fitXY" marginLeft="0"/>
    </FrameLayout>
    <View height="0" onPopDismiss="@event.commonPop.popDismiss()" popCancelOnTouchOutside="false"
        popModalPositon="center" popShow="{{@data.commonPop.popShow}}" popShowMode="modal"
        popTemplate="commonPop.xml" width="0"/>
	<View 
		width="0"  
		height="0"
		popTemplate="common_option_pop.xml"
		popShow="{{@data.commonOptionPop.popShow}}"
		onPopDismiss="@event.commonOptionPop.optionPopDismiss()"
		popCancelOnTouchOutside="true"
		popBackgroundDimmed="true"
		popShowMode="modal"
		popModalPositon="bottom" />
	<View 
		width="match_parent"  
		height="0"
		popTemplate="bot_create_confirm_pop.xml"
		popShow="{{@data.botCreateConfirmPop.popShow}}"
		onPopDismiss="@event.botCreateConfirmPop.confirmPopDismiss()"
		popCancelOnTouchOutside="true"
		popBackgroundDimmed="true"
		popShowMode="modal"
		popModalPositon="bottom" />
</LinearLayout>

