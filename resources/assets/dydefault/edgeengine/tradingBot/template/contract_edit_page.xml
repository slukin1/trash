<Scroller
		height="match_parent"
		orientation="vertical"
		width="match_parent">
		<LinearLayout
			width="match_parent"
			height="wrap_content"
			gravity="center"
			orientation="vertical">
			<!-- 顶部tab -->
			<LinearLayout
				width="match_parent"
				height="40"
				gravity="left|center"
				orientation="horizontal">
				<!-- 做多 -->
				<LinearLayout
					width="wrap_content"
					height="match_parent"
					gravity="center"
					paddingLeft="8"
					paddingRight="8"
					marginLeft="8"
					orientation="vertical"
					onClick="@event.contractEditPage.tabClick('0',true)">
					<TextView 
						height="0"
						width="wrap_content"
						weight = "1"
						gravity="center"
						text="{{@data.contractEditPage.botTrend.buyItem.title}}"
                		textColor="{{@data.contractEditPage.botTrend.buyItem.textColor}}" 
						textFontWeight="500" 
						textSize="14" />
					<View 
						height="2" 
						width="20" 
						cornerRadius="1" 
						background="@color/kColorMajorTheme100" 
						visibility="{{@data.contractEditPage.botTrend.buyItem.selectVisibility}}"/>

				</LinearLayout>
				<!-- 做空 -->
				<LinearLayout
					width="wrap_content"
					height="match_parent"
					gravity="center"
					paddingLeft="8"
					paddingRight="8"
					orientation="vertical"
					onClick="@event.contractEditPage.tabClick('1',true)">
					<TextView 
						height="0"
						width="wrap_content"
						weight = "1"
						gravity="center"
						text="{{@data.contractEditPage.botTrend.sellItem.title}}"
                		textColor="{{@data.contractEditPage.botTrend.sellItem.textColor}}" 
						textFontWeight="500" 
						textSize="14" />
					<View 
						height="2" 
						width="20" 
						cornerRadius="1" 
						background="@color/kColorMajorTheme100" 
						visibility="{{@data.contractEditPage.botTrend.sellItem.selectVisibility}}"/>

				</LinearLayout>
				<!-- 中性 -->
				<LinearLayout
					width="wrap_content"
					height="match_parent"
					gravity="center"
					paddingLeft="8"
					paddingRight="8"
					orientation="vertical"
					onClick="@event.contractEditPage.tabClick('2',true)">
					<TextView
						height="0"
						width="wrap_content"
						weight = "1"
						gravity="center"
						text="{{@data.contractEditPage.botTrend.neutralItem.title}}"
                		textColor="{{@data.contractEditPage.botTrend.neutralItem.textColor}}" 
						textFontWeight="500" 
						textSize="14" />
					<View 
						height="2" 
						width="20" 
						cornerRadius="1" 
						background="@color/kColorMajorTheme100" 
						visibility="{{@data.contractEditPage.botTrend.neutralItem.selectVisibility}}"/>

				</LinearLayout>				
			</LinearLayout>
			<!-- 分割线 -->
			<View 
				height="0.5" 
				width="375" 
				background="@color/kColorPrimarySeparator"/>
			<!-- 1.价格区间 -->
			<LinearLayout
				width="match_parent"
				height="wrap_content"
				gravity="center"
				orientation="vertical"
				paddingLeft="16"
				paddingRight="16"
				paddingTop="24">
				<!-- 标题 -->
				<LinearLayout
					width="match_parent"
					height="20"
					gravity="center"
					orientation="horizontal">
					<BottomLineTextView 
						height="match_parent" 
						width="wrap_content"
						gravity="left"
						text="{{@i18n/n_contract_grid_create_title_price}}"
						textColor="@color/kColorPrimaryText" 
						textFontWeight="500" 
						textSize="14" 
						onClick="@event.contractEditPage.remindClick('price')"/>
					<View height="match_parent" width="0" weight="1"/>
					<LinearLayout
						width="wrap_content"
						height="20"
						gravity="center"
						orientation="horizontal"
						onClick="@event.contractEditPage.aiClick()">
						<ImageView height="16" width="16" src="{{@data.contractEditPage.price.aiImage}}"/>
						<TextView 
							height="16"
							width="wrap_content"
							gravity="left|center"
							paddingLeft="4"
							text="{{@data.contractEditPage.price.aiTitle}}"
							textColor="@color/kColorMajorTheme100" 
							textFontWeight="500" 
							textSize="12" />
					</LinearLayout>

				</LinearLayout>
				<!-- 价格输入 -->
				<LinearLayout
					width="match_parent"
					height="wrap_content"
					marginTop="8"
					gravity="center"
					orientation="horizontal">
					<LinearLayout
						width="163"
						height="44"
						background="@color/KBaseColorInputBackground"
						cornerRadius="4"
						borderColor="#E94359"
						borderWidth="{{@data.contractEditPage.price.minPriceBorderWidth}}"
						gravity="center"
						orientation="horizontal">	
						<EditText
                            textColorHint="@color/eButtonUnenabledBgColor"
							width="match_parent" 
							height="match_parent" 
							marginLeft="12"
							marginRight="12" 
							hint="{{@i18n/n_contract_grid_create_lowest}}"
							bindText="@data.contractEditPage.price.minPrice"
							textFontWeight="400" 
							textSize="14"
							inputType="numberDecimal"
							textColor="@color/kColorPrimaryText"
							textFilter="@dataParser.trade_parser(18,@data.contractEditPage.precision,@eventParams)"
							onTextChange="@event.contractEditPage.onTextChange('minPrice',@eventParams)"				
							onFocusChange="@event.contractEditPage.onFocusChange('minPrice',@eventParams)"/>					
					</LinearLayout>
					<View 
						height="1" 
						width="7" 
						marginLeft="5"
						marginRight="5"
						background="@color/eBaseColorThreeLevelText"/>
					<LinearLayout
						width="163"
						height="44"
						background="@color/KBaseColorInputBackground"
						cornerRadius="4"
						borderColor="#E94359"
						borderWidth="{{@data.contractEditPage.price.maxPriceBorderWidth}}"
						gravity="center"
						orientation="horizontal">
						<EditText
                            textColorHint="@color/eButtonUnenabledBgColor"
							width="match_parent" 
							height="match_parent" 
							marginLeft="12"
							marginRight="12" 
							hint="{{@i18n/n_contract_grid_create_highest}}"
							bindText="@data.contractEditPage.price.maxPrice"
							textFontWeight="400" 
							textSize="14"
							inputType="numberDecimal"
							textColor="@color/kColorPrimaryText"
							textFilter="@dataParser.trade_parser(18,@data.contractEditPage.precision,@eventParams)"
							onTextChange="@event.contractEditPage.onTextChange('maxPrice',@eventParams)"
							onFocusChange="@event.contractEditPage.onFocusChange('maxPrice',@eventParams)"/>						
					</LinearLayout>

				</LinearLayout>
				<TextView 
					width="match_parent" 
					height="wrap_content" 
					gravity="left"
					text="{{@data.contractEditPage.price.errorMsg}}"
					textColor="#E94359" 
					textFontWeight="400" 
					textSize="12"
					marginTop="8"
					maxLines="0"
					visibility="{{@data.contractEditPage.price.errorVisibility}}"
					/>
			</LinearLayout>
			<!-- 2.网格数量 -->
			<LinearLayout
				width="match_parent"
				height="wrap_content"
				orientation="vertical"
				paddingLeft="16"
				paddingRight="16"
				paddingTop="24">
				<BottomLineTextView
					height="20"
					width="wrap_content"
					gravity="left"
					text="{{@i18n/n_contract_grid_create_title_number}}"
					textColor="@color/kColorPrimaryText"
					textFontWeight="500"
					textSize="14"
					onClick="@event.contractEditPage.remindClick('number')" />
				<!-- 数量输入 -->
				<LinearLayout
					width="match_parent"
					height="44"
					background="@color/KBaseColorInputBackground"
					cornerRadius="4"
					borderColor="#E94359"
					borderWidth="{{@data.contractEditPage.number.borderWidth}}"
					gravity="center"
					marginTop="8"
					orientation="horizontal">	
					<EditText
                        textColorHint="@color/eButtonUnenabledBgColor"
						width="1" 
						height="44" 
						marginLeft="12"
						hint="{{@data.contractEditPage.number.gridNumHint}}"
						bindText="@data.contractEditPage.number.gridNum"
						textFontWeight="400" 
						textSize="14"
						inputType="number"
						textFilter="@dataParser.trade_parser(18,0,@eventParams)"
						textColor="@color/kColorPrimaryText"
						onTextChange="@event.contractEditPage.onTextChange('number',@eventParams)"
						onFocusChange="@event.contractEditPage.onFocusChange('number',@eventParams)"
						weight="1"/>	
					<LinearLayout 
						width="wrap_content" 
						height="match_parent" 
						gravity="center"
						marginRight="12"
						onClick="@event.contractEditPage.showOptionPop('runType')">
						<TextView 
							width="wrap_content" 
							height="match_parent" 
							gravity="center"
							text="{{@data.contractEditPage.number.runTypeDisplay}}"
							textColor="@color/kColorPrimaryText" 
							textFontWeight="400" 
							textSize="14"
							/>
						<ImageView height="12" width="12" src="@drawable/edge_engine_trade_bot_arrow_down" marginLeft="4" />
					</LinearLayout>
				</LinearLayout>
				<TextView 
					width="match_parent" 
					height="wrap_content" 
					gravity="left"
					text="{{@data.contractEditPage.number.errorMsg}}"
					textColor="#E94359" 
					textFontWeight="400" 
					textSize="12"
					marginTop="8"
					maxLines="0"
					visibility="{{@data.contractEditPage.number.errorVisibility}}"
					/>
				<!-- 单格利润率 -->
				<LinearLayout
					width="match_parent"
					height="16"
					gravity="center"
					marginTop="8"
					orientation="horizontal">
					<BottomLineTextView 
						height="match_parent" 
						width="wrap_content"
						gravity="left"
						text="{{@i18n/n_contract_grid_create_single_of_profit_rate}}"
						textColor="@color/kColorSecondaryText" 
						textFontWeight="400" 
						textSize="12" 
						onClick="@event.contractEditPage.remindClick('profit')"/>
					<View height="match_parent" width="0" weight="1"/>
					<TextView 
						height="match_parent" 
						width="wrap_content"
						gravity="left"
						text="{{@data.contractEditPage.number.singleProfitRateDisplay}}"
						textColor="@color/kColorPrimaryText" 
						textFontWeight="400" 
						textSize="12" />
				</LinearLayout>
			</LinearLayout>
			<!-- 3.投资额(保证金) -->
			<LinearLayout
				width="match_parent"
				height="wrap_content"
				gravity="center"
				orientation="vertical"
				paddingLeft="16"
				paddingRight="16"
				paddingTop="24">
				<!-- 标题 -->
				<LinearLayout
					width="match_parent"
					height="20"
					gravity="center"
					orientation="horizontal">
					<BottomLineTextView 
						height="match_parent" 
						width="match_parent"
						gravity="left"
						text="{{@i18n/n_contract_grid_create_title_volume}}"
						textColor="@color/kColorPrimaryText" 
						textFontWeight="500" 
						textSize="14" 
						onClick="@event.contractEditPage.remindClick('volume')"/>
				</LinearLayout>
				<!-- 投资额输入 -->
				<LinearLayout
					width="match_parent"
					height="44"
					background="@color/KBaseColorInputBackground"
					cornerRadius="4"
					borderColor="#E94359"
					borderWidth="{{@data.contractEditPage.volume.borderWidth}}"
					gravity="center"
					marginTop="8"
					orientation="horizontal">	
					<EditText
                        textColorHint="@color/eButtonUnenabledBgColor"
						width="1" 
						height="match_parent" 
						marginLeft="12"
						hint="{{@data.contractEditPage.volume.volumeMinHint}}"
						bindText="@data.contractEditPage.volume.volume"
						textFontWeight="400" 
						textSize="14"
						inputType="numberDecimal"
						textFilter="@dataParser.trade_parser(18,4,@eventParams)"
						textColor="@color/kColorPrimaryText"
						onTextChange="@event.contractEditPage.onTextChange('volume',@eventParams)"
						onFocusChange="@event.contractEditPage.onFocusChange('volume',@eventParams)"
						weight="1"/>	
					<LinearLayout 
						width="wrap_content" 
						height="match_parent" 
						gravity="center"
						marginRight="12"
						onClick="@event.contractEditPage.volumeLeverClick()">

						<TextView 
							width="wrap_content" 
							height="match_parent" 
							gravity="center"
							text="{{@data.contractEditPage.volume.volumeLeverDisplay}}"
							textColor="@color/kColorPrimaryText" 
							textFontWeight="400" 
							textSize="14" />
						<ImageView height="12" width="12" src="@drawable/edge_engine_trade_bot_arrow_down" marginLeft="4" />
					</LinearLayout>

				</LinearLayout>
				<TextView 
					width="match_parent" 
					height="wrap_content" 
					gravity="left"
					text="{{@data.contractEditPage.volume.errorMsg}}"
					textColor="#E94359" 
					textFontWeight="400" 
					textSize="12"
					marginTop="8"
					maxLines="0"
					visibility="{{@data.contractEditPage.volume.errorVisibility}}"
					/>
				<TextView 
					width="match_parent" 
					height="wrap_content" 
					gravity="left"
					text="{{@data.contractEditPage.volume.totalVolume}}"
					textColor="@color/kColorSecondaryText" 
					textFontWeight="400" 
					textSize="12"
					marginTop="8"
					maxLines="0"
					visibility="{{@data.contractEditPage.volume.totalVolumeVisibility}}"
					/>
				<!-- 可用 -->
				<LinearLayout
					width="match_parent"
					height="16"
					gravity="center"
					marginTop="8"
					orientation="horizontal"
					onClick="@event.contractEditPage.availableClick()">
					<TextView 
						height="match_parent" 
						width="wrap_content"
						gravity="left|center"
						text="{{@i18n/n_asset_coindetail_available}}"
						textColor="@color/kColorSecondaryText" 
						textFontWeight="400" 
						textSize="12" />
					<View height="match_parent" width="0" weight="1"/>
					<LinearLayout
						width="wrap_content"
						height="match_parent"
						gravity="center"
						orientation="horizontal"
						onClick="@event.contractEditPage.availableClick()">
						<TextView 
							height="match_parent" 
							width="wrap_content"
							gravity="left|center"
							text="{{@data.contractEditPage.volume.availableDisplay}}"
							textColor="@color/kColorPrimaryText" 
							textFontWeight="400" 
							textSize="12" />
						<ImageView height="16" width="16" src="@drawable/edge_engine_trade_bot_transfer" marginLeft="4"/>
					</LinearLayout>

				</LinearLayout>

				<SeekBar
					bubbleShow="ture"
					bubbleTextColor="#FFFFFF"
					bubbleTextSize="11"
					height="14"
					marginTop="8"
					sectionCount="4"
					width="match_parent"
					progress="{{@data.contractEditPage.volume.volumePercent}}"
					onValueChange="@event.contractEditPage.volumeChange(@eventParams)" />

				<!-- 体验金券 -->
				<LinearLayout
					width="match_parent"
					height="16"
					gravity="center"
					marginTop="8"
					orientation="horizontal">
					<BottomLineTextView 
						height="20" 
						width="wrap_content"
						gravity="left"
						text="{{@i18n/n_bot_detail_coupon_title}}"
						textColor="@color/kColorSecondaryText" 
						textFontWeight="400" 
						textSize="12"
						onClick="@event.contractEditPage.remindClick('coupon')"/>
					<View height="match_parent" width="0" weight="1"/>
					<LinearLayout
						width="wrap_content"
						height="match_parent"
						gravity="center"
						orientation="horizontal"
						onClick="@event.contractEditPage.couponClick()">
						<TextView 
							height="match_parent" 
							width="wrap_content"
							gravity="left|center"
							text="{{@data.couponPop.couponTipStr}}"
							textColor="@color/kColorPrimaryText" 
							textFontWeight="{{@data.couponPop.couponTipTextWeight}}" 
							textSize="12" />
						<ImageView height="16" width="16" src="@drawable/edge_engine_trade_bot_coupon" marginLeft="4"/>
					</LinearLayout>

				</LinearLayout>
				<!-- 多头预估强平价 -->
				<LinearLayout
					width="match_parent"
					height="16"
					gravity="center"
					marginTop="8"
					orientation="horizontal"
					visibility="{{@data.contractEditPage.volume.liquidationBuyVisibility}}">
					<BottomLineTextView 
						height="match_parent" 
						width="wrap_content"
						gravity="left"
						text="{{@data.contractEditPage.volume.liquidationPriceBuyTitle}}"
						textColor="@color/kColorSecondaryText" 
						textFontWeight="400" 
						textSize="12"
						onClick="@event.contractEditPage.remindClick('liquidation_buy')" />
					<View height="match_parent" width="0" weight="1"/>
					<TextView 
						height="match_parent" 
						width="wrap_content"
						gravity="left"
						text="{{@data.contractEditPage.volume.liquidationPriceBuyDisplay}}"
						textColor="@color/kColorPrimaryText" 
						textFontWeight="400" 
						textSize="12" />
				</LinearLayout>
				<!-- 空头预估强平价 -->
				<LinearLayout
					width="match_parent"
					height="16"
					gravity="center"
					marginTop="8"
					orientation="horizontal"
					visibility="{{@data.contractEditPage.volume.liquidationSellVisibility}}">
					<BottomLineTextView 
						height="match_parent" 
						width="wrap_content"
						gravity="left"
						text="{{@data.contractEditPage.volume.liquidationPriceSellTitle}}"
						textColor="@color/kColorSecondaryText" 
						textFontWeight="400" 
						textSize="12"
						onClick="@event.contractEditPage.remindClick('liquidation_sell')" />
					<View height="match_parent" width="0" weight="1"/>
					<TextView 
						height="match_parent" 
						width="wrap_content"
						gravity="left"
						text="{{@data.contractEditPage.volume.liquidationPriceSellDisplay}}"
						textColor="@color/kColorPrimaryText" 
						textFontWeight="400" 
						textSize="12" />
				</LinearLayout>
				<TextView 
					width="match_parent" 
					height="wrap_content" 
					gravity="left"
					text="{{@data.contractEditPage.volume.liquidationPriceErrorMsg}}"
					textColor="#E94359" 
					textFontWeight="400" 
					textSize="14"
					marginTop="8"
					maxLines="0"
					visibility="{{@data.contractEditPage.volume.liquidationPriceErrorVisibility}}"
					/>
			</LinearLayout>
			
			<!-- 高级设置 -->
			<LinearLayout
				width="match_parent"
				height="wrap_content"
				gravity="center"
				orientation="vertical"
				paddingLeft="16"
				paddingRight="16"
				paddingTop="24">
				<!-- 标题 -->
				<LinearLayout
					width="match_parent"
					height="20"
					gravity="center"
					orientation="horizontal"
					onClick="@event.contractEditPage.settingClick()">
					<TextView
						height="match_parent"
						width="wrap_content"
						gravity="left"
						text="{{@i18n/n_contract_grid_create_title_set}}"
						textColor="@color/kColorPrimaryText"
						textFontWeight="500"
						textSize="14" />
					<View height="match_parent" width="0" weight="1"/>
					<ImageView height="12" width="12" src="{{@data.contractEditPage.setting.iconSrc}}" />
				</LinearLayout>
				<LinearLayout
					width="match_parent"
					height="wrap_content"
					gravity="center"
					orientation="vertical"
					visibility="{{@data.contractEditPage.setting.visibility}}">
					<!-- 触发价格 -->
					<LinearLayout
						width="match_parent"
						height="wrap_content"
						gravity="center"
						marginTop="8"
						orientation="vertical">
						<LinearLayout
							width="match_parent"
							height="40"
							gravity="center"
							orientation="horizontal">
							<BottomLineTextView 
								height="20" 
								width="wrap_content"
								gravity="left"
								text="{{@i18n/n_contract_grid_create_trigger_price}}"
								textColor="@color/kColorSecondaryText" 
								textFontWeight="400" 
								textSize="14" 
								onClick="@event.contractEditPage.remindClick('trigger')"/>
							<View height="match_parent" width="0" weight="1"/>
							<ImageView height="16" width="28" src="{{@data.contractEditPage.setting.trigger.iconSrc}}" onClick="@event.contractEditPage.triggerClick()"/>
						</LinearLayout>

						<LinearLayout
							width="match_parent"
							height="wrap_content"
							gravity="center"
							orientation="vertical"
							visibility="{{@data.contractEditPage.setting.trigger.visibility}}">
							<!-- 数量输入 -->
							<LinearLayout
								width="match_parent"
								height="44"
								background="@color/KBaseColorInputBackground"
								cornerRadius="4"
								gravity="center"
								marginBottom="8"
								orientation="horizontal"
								borderColor="#E94359"
								borderWidth="{{@data.contractEditPage.setting.trigger.borderWidth}}">	
								<EditText
									textColorHint="@color/eButtonUnenabledBgColor"
									width="1" 
									height="match_parent" 
									marginLeft="12"
									marginRight="12"
									hint="{{@i18n/n_contract_grid_create_trigger_price}}"
									bindText="@data.contractEditPage.setting.trigger.triggerPrice"
									textFontWeight="400" 
									textSize="14"
									inputType="numberDecimal"
									textColor="@color/kColorPrimaryText"
									textFilter="@dataParser.trade_parser(18,@data.contractEditPage.precision,@eventParams)"
									onTextChange="@event.contractEditPage.onTextChange('triggerPrice',@eventParams)"
									onFocusChange="@event.contractEditPage.onFocusChange('triggerPrice',@eventParams)"
									weight="1"/>
								<LinearLayout 
									width="wrap_content" 
									height="match_parent" 
									gravity="center"
									marginRight="12"
									onClick="@event.contractEditPage.showOptionPop('triggerPrice')">
									<TextView 
										width="wrap_content" 
										height="match_parent" 
										gravity="center"
										text="{{@data.contractEditPage.setting.trigger.triggerPriceTypeDisplay}}"
										textColor="@color/kColorPrimaryText" 
										textFontWeight="400" 
										textSize="14"
										/>
									<ImageView height="12" width="12" src="@drawable/edge_engine_trade_bot_arrow_down" marginLeft="4" />
								</LinearLayout>	
							</LinearLayout>
							<TextView 
								width="match_parent" 
								height="wrap_content" 
								gravity="left"
								text="{{@data.contractEditPage.setting.trigger.errorMsg}}"
								textColor="#E94359" 
								textFontWeight="400" 
								textSize="12"
								marginBottom="8"
								maxLines="0"
								visibility="{{@data.contractEditPage.setting.trigger.errorVisibility}}"
								/>
						</LinearLayout>
					</LinearLayout>

					<!-- 止盈止损 -->
					<LinearLayout
						width="match_parent"
						height="wrap_content"
						gravity="center"
						orientation="vertical">
						<LinearLayout
							width="match_parent"
							height="40"
							gravity="center"
							orientation="horizontal">
							<BottomLineTextView 
								height="20" 
								width="wrap_content"
								gravity="left"
								text="{{@data.contractEditPage.setting.tpsl.title}}"
								textColor="@color/kColorSecondaryText" 
								textFontWeight="400" 
								textSize="14" 
								onClick="@event.contractEditPage.remindClick('tpsl')"/>
							<View height="match_parent" width="0" weight="1"/>
							<ImageView height="16" width="28" src="{{@data.contractEditPage.setting.tpsl.iconSrc}}" onClick="@event.contractEditPage.tpslClick()"/>
						</LinearLayout>

						<LinearLayout
							width="match_parent"
							height="wrap_content"
							gravity="center"
							orientation="vertical"
							visibility="{{@data.contractEditPage.setting.tpsl.visibility}}">
							<!-- 止盈 -->
							<LinearLayout
								width="match_parent"
								height="44"
								background="@color/KBaseColorInputBackground"
								cornerRadius="4"
								gravity="center"
								marginBottom="8"
								borderColor="#E94359"
