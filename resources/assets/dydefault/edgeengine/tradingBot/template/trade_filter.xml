<LinearLayout
	width="375"
	height="32"
	gravity="center"
	orientation="vertical"
	background="@color/KBaseColorContentBackground">
	<LinearLayout
		width="375"
		height="24"
		paddingLeft="16"
		paddingRight="0"
		paddingBottom="0"
		gravity="center"
		orientation="horizontal">
        <LinearLayout
			width="wrap_content"
			height="24"
			gravity="center"
			orientation="horizontal"
			onClick="@event.filter.showSortMenuPop()"
			popTemplate="trade_sort_pop.xml"
			popShow="{{@data.filter.sortMenuShow}}"
			onPopDismiss="@event.filter.clickedSortCancel()"
			popCancelOnTouchOutside="true"
			popBackgroundDimmed="true"
			popShowMode="modal"
			popModalPositon="bottom">
			<TextView
				height="match_parent"
				width="wrap_content"
				gravity="center|left"
				textColor="@color/KBaseColorSecondaryText"
				text="{{@data.filter.selectedTitle}}"
				textSize="12"
				textFontWeight="400" />

			<View width="5" />
			<ImageView
				width="14"
				height="14"
				src="@drawable/edge_engine_trader_bot_filter_arrow" />
        </LinearLayout>
        <View weight="1" />
        <LinearLayout
			width="100"
			height="24"
			gravity="center|right"
			orientation="horizontal"
			onClick="@event.filter.filterMenuClick()"
			popTemplate="trade_filter_pop.xml"
			popShow="{{@data.filter.filterMenuShow}}"
			onPopDismiss="@event.filter.filterMenuDismiss()"
			popCancelOnTouchOutside="true"
			popBackgroundDimmed="true"
			popShowMode="modal"
			paddingRight="16"
			popModalPositon="bottom">
			<ImageView
				width="16"
				height="16"
				src="@drawable/edge_engine_trader_bot_filter" />
        </LinearLayout>
	</LinearLayout>

	<View width="375" height="8" visibility="{{@data.filter.filterBottomVisibility}}" />

</LinearLayout>
