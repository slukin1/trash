<RecyclerView 
	data="@data.botDetailInfo.recordList" 
	height="match_parent"
	itemKey="element" 
	typeKey="cellType" 
	onLoadMore="@event.botDetailInfo.loadMore()"
	loadMoreStatus="{{@data.botDetailInfo.loadMoreStatus}}"
	width="match_parent"
	background="@color/KBaseColorContentBackground">
	<Header
		width="match_parent"
		height="wrap_content">
		<LinearLayout
			width="match_parent"
			height="wrap_content"
			marginTop="16"
			marginLeft="16"
			marginRight="16"
			gravity="center"
			orientation="vertical">
			<!-- 套利/收益信息 -->
			<LinearLayout
				width="match_parent"
				height="wrap_content"
				gravity="center"
				orientation="vertical">

				<!-- 第一行 -->
				<LinearLayout
					width="match_parent"
					height="wrap_content"
					gravity="center"
					orientation="horizontal">
					<!-- 未套利收益 -->
					<LinearLayout
						width="167.5" 
						height="wrap_content"
						gravity="left"
						orientation="vertical"
						visibility="{{@data.botDetailInfo.unmatchedProfit.visibility}}">
						
						<BottomLineTextView 
							width="wrap_content" 
							height="wrap_content" 
							gravity="left"
							textSize="12"
							textFontWeight="400"
							text="{{@data.botDetailInfo.unmatchedProfit.title}}"
							textColor="@color/kColorThreeLevelText"
							onClick="@event.botDetailInfo.remindClick('unmatchedProfit')"/>
						<TextView 
							width="match_parent" 
							height="wrap_content" 
							marginTop="2"
							gravity="left"
							textSize="14"
							textFontWeight="500"
							maxLines="2"
							text="{{@data.botDetailInfo.unmatchedProfit.content}}"
							textColor="@color/kColorPrimaryText"/>
					</LinearLayout>
					<View width="0" height="0" weight="1"/>
					<!-- 已套利收益 -->
					<LinearLayout
						width="167.5" 
						height="wrap_content"
						gravity="right"
						orientation="vertical"
						visibility="{{@data.botDetailInfo.matchedProfit.visibility}}">
						
						<BottomLineTextView 
							width="match_parent" 
							height="wrap_content" 
							gravity="right"
							textSize="12"
							textFontWeight="400"
							text="{{@data.botDetailInfo.matchedProfit.title}}"
							textColor="@color/kColorThreeLevelText"
							onClick="@event.botDetailInfo.remindClick('matchedProfit')"/>
						<TextView 
							width="match_parent" 
							height="wrap_content" 
							marginTop="2"
							gravity="right"
							textSize="14"
							textFontWeight="500"
							maxLines="2"
							text="{{@data.botDetailInfo.matchedProfit.content}}"
							textColor="@color/kColorPrimaryText"/>
					</LinearLayout>
				</LinearLayout>

				<!-- 第二行 -->
				<LinearLayout
					width="match_parent"
					height="wrap_content"
					gravity="center"
					marginTop="8"
					orientation="horizontal"
					>
					<!-- 网格年化收益率 -->
					<LinearLayout
						width="167.5" 
						height="wrap_content"
						gravity="left"
						orientation="vertical"
						visibility="{{@data.botDetailInfo.annualizedYield.visibility}}">
						
						<BottomLineTextView 
							width="wrap_content" 
							height="wrap_content" 
							gravity="left"
							textSize="12"
							textFontWeight="400"
							text="{{@data.botDetailInfo.annualizedYield.title}}"
							textColor="@color/kColorThreeLevelText"
							onClick="@event.botDetailInfo.remindClick('annualizedYield')"/>
						<TextView 
							width="wrap_content" 
							height="wrap_content" 
							marginTop="2"
							gravity="left"
							textSize="14"
							textFontWeight="500"
							text="{{@data.botDetailInfo.annualizedYield.content}}"
							textColor="@color/kColorPrimaryText"/>
					</LinearLayout>
					<View width="0" height="0" weight="1"/>
					<!-- 套利次数(24小时｜总) -->
					<LinearLayout
						width="167.5" 
						height="wrap_content"
						gravity="right"
						orientation="vertical"
						visibility="{{@data.botDetailInfo.matchedNumbers.visibility}}">
						
						<BottomLineTextView 
							width="wrap_content" 
							height="wrap_content" 
							gravity="right"
							textSize="12"
							textFontWeight="400"
							text="{{@data.botDetailInfo.matchedNumbers.title}}"
							textColor="@color/kColorThreeLevelText"
							onClick="@event.botDetailInfo.remindClick('matchedNumbers')"/>
						<TextView 
							width="wrap_content" 
							height="wrap_content" 
							marginTop="2"
							gravity="right"
							textSize="14"
							textFontWeight="500"
							text="{{@data.botDetailInfo.matchedNumbers.content}}"
							textColor="@color/kColorPrimaryText"/>
					</LinearLayout>
				</LinearLayout>

				<!-- 第三行 -->
				<LinearLayout
					width="match_parent"
					height="wrap_content"
					gravity="left"
					marginTop="8"
					orientation="horizontal">
					<!-- 账户资产(USDT) -->
					<LinearLayout
						width="167.5" 
						height="wrap_content"
						gravity="left"
						orientation="vertical"
						visibility="{{@data.botDetailInfo.accountBalance.visibility}}">
						
						<BottomLineTextView 
							width="wrap_content" 
							height="wrap_content" 
							gravity="left"
							textSize="12"
							textFontWeight="400"
							text="{{@data.botDetailInfo.accountBalance.title}}"
							textColor="@color/kColorThreeLevelText"
							onClick="@event.botDetailInfo.remindClick('accountBalance')"/>
						<TextView 
							width="wrap_content" 
							height="wrap_content" 
							marginTop="2"
							gravity="left"
							textSize="14"
							textFontWeight="500"
							text="{{@data.botDetailInfo.accountBalance.content}}"
							textColor="@color/kColorPrimaryText"/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<!-- 当前持仓 -->
			<LinearLayout
				width="match_parent"
				height="wrap_content"
				marginTop="24"
				gravity="center"
				orientation="vertical"
				visibility="{{@data.botDetailInfo.positionInfo.visibility}}">

				<LinearLayout
					width="match_parent"
					height="44"
					gravity="centerVertical"
					orientation="horizontal">
					<TextView
						width="wrap_content"
						height="44"
						gravity="left|center"
						textSize="16"
						textFontWeight="500"
						text="{{@i18n/n_copytrading_current_observation}}"
						textColor="@color/kColorPrimaryText"/>
					<TextView
						width="wrap_content"
						height="16"
						gravity="center"
						textSize="10"
						textFontWeight="500"
						paddingLeft="4"
						paddingRight="4"
						marginLeft="4"
						cornerRadius="2"
						borderWidth="0.5"
						borderColor="{{@data.botDetailInfo.positionInfo.trendTypeBorderColor}}"
						text="{{@data.botDetailInfo.positionInfo.trendTypeDisplay}}"
						textColor="{{@data.botDetailInfo.positionInfo.trendTypeColor}}" />
				</LinearLayout>

				<LinearLayout
					width="match_parent"
					height="wrap_content"
					gravity="center"
					orientation="vertical"
					visibility="{{@data.botDetailInfo.positionInfo.contentVisibility}}">
					<!-- 第一行 -->
					<LinearLayout
						width="match_parent"
						height="wrap_content"
						gravity="center"
						orientation="horizontal">
						<!-- 未实现盈亏 -->
						<LinearLayout
							width="167.5" 
							height="wrap_content"
							gravity="left"
							orientation="vertical">
							
							<TextView 
								width="wrap_content" 
								height="16" 
								gravity="left"
								textSize="12"
								textFontWeight="400"
								text="{{@data.botDetailInfo.positionInfo.profitUnrealTitle}}"
								textColor="@color/kColorThreeLevelText"/>
							<TextView 
								width="wrap_content" 
								height="20" 
								marginTop="2"
								gravity="left"
								textSize="14"
								textFontWeight="500"
								text="{{@data.botDetailInfo.positionInfo.profitUnreal}}"
								textColor="{{@data.botDetailInfo.positionInfo.profitUnrealTextColor}}"/>
						</LinearLayout>
						<View width="0" height="0" weight="1"/>
						<!-- 当前持仓 -->
						<LinearLayout
							width="167.5" 
							height="wrap_content"
							gravity="right"
							orientation="vertical">
							
							<TextView 
								width="match_parent" 
								height="16" 
								gravity="right"
								textSize="12"
								textFontWeight="400"
								text="{{@data.botDetailInfo.positionInfo.positionAmountTitle}}"
								textColor="@color/kColorThreeLevelText"/>
							<TextView 
								width="match_parent" 
								height="20" 
								marginTop="2"
								gravity="right"
								textSize="14"
								textFontWeight="500"
								text="{{@data.botDetailInfo.positionInfo.positionAmount}}"
								textColor="@color/kColorPrimaryText"/>
						</LinearLayout>
					</LinearLayout>

					<View marginTop="12" marginBottom="4" width="match_parent" height="0.6" background="@color/kColorPrimarySeparator"/>
					<For
						data="@data.botDetailInfo.positionInfo.infoList"
						itemKey="element"
						typeKey="cellType">
						<Cell
							width="match_parent"
							height="wrap_content"
							type="1">
							<LinearLayout
								width="match_parent"
								height="20"
								gravity="center"
								marginTop="8"
								orientation="horizontal">
								<TextView
									gravity="left|center"
									height="match_parent"
									width="wrap_content"
									text="{{@element.title}}"
									textColor="@color/kColorThreeLevelText"
									textFontWeight="400"
									textSize="14" />
								<View weight="1" />
								<TextView
									gravity="right|center"
									height="match_parent"
									width="wrap_content"
									text="{{@element.content}}"
									textColor="@color/kColorPrimaryText"
									textFontWeight="500"
									textSize="14" />
							</LinearLayout>
						</Cell>
						<Cell
							width="match_parent"
							height="wrap_content"
							type="2">
							<LinearLayout
								width="match_parent"
								height="20"
								gravity="center"
								marginTop="8"
								orientation="horizontal">
								<BottomLineTextView
									gravity="left|center"
									height="match_parent"
									width="wrap_content"
									text="{{@element.title}}"
									textColor="@color/kColorThreeLevelText"
									textFontWeight="400"
									textSize="14" 
									onClick="@event.botDetailInfo.remindClick('{{@element.remindType}}')"/>
								<View weight="1" />
								<TextView
									gravity="right|center"
									height="match_parent"
									width="wrap_content"
									text="{{@element.content}}"
									textColor="@color/kColorPrimaryText"
									textFontWeight="500"
									textSize="14" />
							</LinearLayout>
						</Cell>
					</For>
				</LinearLayout>

				<LinearLayout
					width="match_parent"
					height="168"
					gravity="center"
					orientation="vertical"
					visibility="{{@data.botDetailInfo.positionInfo.emptyVisibility}}">
					<ImageView width="60" height="60" marginTop="40" src="@drawable/edge_engine_empty"/>
					<TextView 
						width="match_parent" 
						height="16" 
						marginTop="12" 
						gravity="center" 
						text="{{@i18n/n_trade_bot_position_empty}}"
						textSize="12"
						textFontWeight="400"
						textColor="@color/eBaseColorThreeLevelText"/>
				</LinearLayout>

				<View width="match_parent" height="32" />
				
			</LinearLayout>


			<TextView 
				width="match_parent" 
				height="44" 
				gravity="left|center"
				textSize="16"
				textFontWeight="500"
				text="{{@i18n/n_trade_bot_handle_record}}"
				textColor="@color/kColorPrimaryText"/>
		</LinearLayout>
	</Header>

	<Cell
		type="1"
		width="match_parent"
		marginLeft="16"
		marginRight="16"
		height="wrap_content">
		<LinearLayout
			width="match_parent"
			height="wrap_content"
			gravity="center"
			orientation="horizontal">
			<!-- 左侧线条 -->
			<LinearLayout
				width="6"
				height="match_parent"
				gravity="center"
				orientation="vertical">
				<View 
					width="0.5" 
					height="15" 
					background="@color/kColorPrimarySeparator"
					visibility="{{@element.showBeforeLine}}"/>
				<View 
					width="6" 
					height="6"
					cornerRadius="3"
					background="{{@element.pointColor}}"/>
				<View 
					width="0.5" 
					height="0"
					weight="1"
					visibility="{{@element.showAfterLine}}"
					background="@color/kColorPrimarySeparator"/>
			</LinearLayout>
			
			<!-- 数据 -->
			<LinearLayout
				width="match_parent"
				height="wrap_content"
				gravity="center"
				marginLeft="8"
				marginTop="8"
				marginBottom="12"
				orientation="vertical">
				<!-- 操作类型与时间 -->
				<LinearLayout
					width="match_parent"
					height="20"
					gravity="center"
					orientation="horizontal">
					<TextView
						gravity="left|center"
						height="match_parent"
						width="wrap_content"
						text="{{@element.title}}"
						textColor="@color/kColorPrimaryText"
						textFontWeight="500"
						textSize="14" />
					<View weight="1" />
					<TextView
						gravity="right|center"
						height="match_parent"
						width="wrap_content"
						text="{{@element.date}}"
						textColor="@color/eBaseColorThreeLevelText"
						textFontWeight="400"
						textSize="11" />
				</LinearLayout>
				<!-- 金额变化 -->
				<LinearLayout
					width="match_parent"
					height="wrap_content"
					marginTop="6"
					gravity="center"
					orientation="horizontal">
					<TextView
						gravity="left"
						height="wrap_content"
						width="wrap_content"
						text="{{@element.desc}}"
						textColor="@color/KBaseColorSecondaryText"
						textFontWeight="400"
						textSize="12"
						maxLines="0"
						marginRight="40"
						weight="1" />
					<TextView
						gravity="right"
						height="wrap_content"
						width="wrap_content"
						text="{{@element.status}}"
						textColor="{{@element.statusColor}}"
						textFontWeight="400"
						textSize="12" />

				</LinearLayout>
			</LinearLayout>

		</LinearLayout>
	</Cell>
</RecyclerView>

