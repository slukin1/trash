<LinearLayout
        width="match_parent"
        height="wrap_content"
        gravity="centerVertical"
        orientation="vertical"
        topRightRadius="8"
        topLeftRadius="8"
        background="@color/KBaseColorContentBackground">

    <!-- 顶部标题+关闭按钮 -->
    <LinearLayout
            paddingLeft="16"
            paddingRight="0"
            width="match_parent"
            height="44"
            gravity="center"
            orientation="horizontal">
        <TextView
                height="match_parent"
                width="wrap_content"
                gravity="center|left"
                text="{{@i18n/n_otc_order_filter}}"
                textSize="16"
                textColor="@color/kColorPrimaryText"
                textFontWeight="500" />
        <View weight="1" />
        <LinearLayout
                width="100"
                height="44"
                paddingRight="16"
                gravity="center|right"
                orientation="horizontal"
                onClick="@event.filter.clickedFilterClose()">
            <ImageView
                    width="28"
                    height="28"
                    src="@drawable/edge_engine_copy_trading_dialog_close" />
        </LinearLayout>
    </LinearLayout>

    <!-- 分割线 -->
    <View
            background="@color/kColorPrimarySeparator"
            width="match_parent"
            height="0.5" />

    <LinearLayout
        width="match_parent"
        height="wrap_content"
        marginTop="16"
        gravity="center|left"
        orientation="vertical">
        <TextView
                marginLeft="16"
                height="20"
                width="wrap_content"
                gravity="center|left"
                text="{{@i18n/n_trade_bot_market}}"
                textSize="14"
                textColor="@color/kColorPrimaryText"
                textFontWeight="500" />
        <LinearLayout
            width="match_parent"
            height="44"
            marginTop="8"
            marginLeft="16"
            marginRight="16"
            gravity="center|left"
            background="@color/KBaseColorInputBackground"
            cornerRadius="4"
            onClick="@event.filter.marketSelected()"
            orientation="horizontal">
            <TextView
                marginLeft="8"
                height="20"
                width="wrap_content"
                gravity="center|left"
                text="{{@data.filter.tempMarketSymbolShow}}"
                textSize="14"
                textColor="@color/kColorPrimaryText"
                textFontWeight="400" />
            <View height="12" weight="1" />
            <ImageView
                width="14"
                height="14"
                marginRight="8"
                src="@drawable/edge_engine_trader_bot_filter_arrow" />
        </LinearLayout>
    </LinearLayout>


    <!--  运行时长  -->
    <LinearLayout
            width="match_parent"
            height="wrap_content"
            marginTop="32"
            gravity="center|left"
            orientation="vertical">
        <TextView
                marginLeft="16"
                height="20"
                width="wrap_content"
                gravity="center|left"
                text="{{@i18n/n_trade_bot_running_time}}"
                textSize="14"
                textColor="@color/kColorPrimaryText"
                textFontWeight="500" />
        <View height="12" />
        <GirdView
                crossAxisItemCount="3"
                crossAxisSpace="0"
                data="@data.filter.tempRunningTimeList"
                height="80"
                itemKey="item"
                mainAxisSpace="8"
                orientation="vertical"
                marginLeft="10"
                marginRight="10"
                typeKey="cellType"
                visibility="visible"
                width="match_parent">
            <GirdCell
                    cellType="1"
                    height="36"
                    paddingLeft="6"
                    paddingRight="6"
                    width="118">
                <LinearLayout
                        cornerRadius="4"
                        gravity="centerVertical"
                        height="36"
                        onClick="@event.filter.runningTimeSelected({{@item.index}})"
                        orientation="horizontal"
                        width="106"
                        background="{{@item.background}}">
                    <TextView
                            height="match_parent"
                            width="match_parent"
                            text="{{@item.text}}"
                            textColor="{{@item.textColor}}"
                            textFontWeight="500"
                            gravity="center"
                            textSize="12" />
                </LinearLayout>
            </GirdCell>
        </GirdView>
    </LinearLayout>

    <!--  收益率  -->
    <LinearLayout
            width="match_parent"
            height="wrap_content"
            marginTop="32"
            gravity="center|left"
            orientation="vertical">
        <TextView
                marginLeft="16"
                height="20"
                width="wrap_content"
                gravity="center|left"
                text="{{@i18n/n_trade_bot_yield_rate}}"
                textSize="14"
                textColor="@color/kColorPrimaryText"
                textFontWeight="500" />
        <View height="12" />
        <GirdView
                crossAxisItemCount="3"
                crossAxisSpace="0"
                data="@data.filter.tempRateList"
                height="80"
                itemKey="item"
                mainAxisSpace="8"
                marginLeft="10"
                marginRight="10"
                orientation="vertical"
                typeKey="cellType"
                visibility="visible"
                width="match_parent">
            <GirdCell
                    cellType="1"
                    height="36"
                    paddingLeft="6"
                    paddingRight="6"
                    width="118">
                <LinearLayout
                        cornerRadius="4"
                        gravity="centerVertical"
                        height="36"
                        onClick="@event.filter.rateSelected({{@item.index}})"
                        orientation="horizontal"
                        width="106"
                        background="{{@item.background}}">
                    <TextView
                            height="match_parent"
                            width="match_parent"
                            text="{{@item.text}}"
                            textColor="{{@item.textColor}}"
                            textFontWeight="500"
                            gravity="center"
                            textSize="12" />
                </LinearLayout>
            </GirdCell>
        </GirdView>
    </LinearLayout>

    <!--  方向  -->
    <LinearLayout
            width="match_parent"
            height="wrap_content"
            marginTop="32"
            gravity="center|left"
            visibility="{{@data.filter.trendTypeVisibility | gone}}"
            orientation="vertical">
        <TextView
                marginLeft="16"
                height="20"
                width="wrap_content"
                gravity="center|left"
                text="{{@i18n/n_trade_bot_direction}}"
                textSize="14"
                textColor="@color/kColorPrimaryText"
                textFontWeight="500" />
        <View height="12" />
        <GirdView
                crossAxisItemCount="3"
                crossAxisSpace="0"
                data="@data.filter.tempTrendTypeList"
                height="80"
                itemKey="item"
                mainAxisSpace="8"
                marginLeft="10"
                marginRight="10"
                orientation="vertical"
                typeKey="cellType"
                visibility="visible"
                width="match_parent">
            <GirdCell
                    cellType="1"
                    height="36"
                    paddingLeft="6"
                    paddingRight="6"
                    width="118">
                <LinearLayout
                        cornerRadius="4"
                        gravity="centerVertical"
                        height="36"
                        onClick="@event.filter.trendTypeSelected({{@item.index}})"
                        orientation="horizontal"
                        width="106"
                        background="{{@item.background}}">
                    <TextView
                            height="match_parent"
                            width="match_parent"
                            text="{{@item.text}}"
                            textColor="{{@item.textColor}}"
                            textFontWeight="500"
                            gravity="center"
                            textSize="12" />
                </LinearLayout>
            </GirdCell>
        </GirdView>
    </LinearLayout>

    <!--  重置、确定  -->
    <LinearLayout
            width="match_parent"
            height="44"
            marginTop="32"
            marginLeft="16"
            marginRight="16"
            gravity="center"
            orientation="horizontal">
        <TextView
                height="match_parent"
                width="167.5"
                cornerRadius="4"
                gravity="center"
                text="{{@i18n/n_exchange_order_reset}}"
                textSize="14"
                textColor="@color/kColorPrimaryText"
                background="@color/KBaseColorInputBackground"
                textFontWeight="500"
                onClick="@event.filter.clickedFilterReset()" />
        <View width="8" />
        <TextView
                height="match_parent"
                width="167.5"
                cornerRadius="4"
                gravity="center"
                text="{{@i18n/n_contract_string_confirm}}"
                textSize="14"
                textColor="@color/kColorWhiteText"
                background="@color/kColorMajorTheme100"
                textFontWeight="500"
                onClick="@event.filter.clickedFilterDone()" />
    </LinearLayout>

    <View
            width="match_parent"
            height="34" />
</LinearLayout>
