<FrameLayout
	width="match_parent"
	height="76"
	paddingTop="16"
	paddingLeft="16"
	paddingRight="16"
	paddingBottom="16"
	background="@color/KBaseColorContentBackground">
	<TextView
		height="44"
		width="match_parent"
		gravity="center"
		cornerRadius="4"
		background="{{@data.contractEditPage.botTrend.bottom.bgColor}}"
		text="{{@data.contractEditPage.botTrend.bottom.titleDisplay}}"
		textColor="{{@data.contractEditPage.botTrend.bottom.titleColor}}"
		textFontWeight="500"
		textSize="14"
		onClick="@event.contractEditPage.createClick()"
		visibility="{{@data.contractEditPage.botTrend.bottom.createVisibility}}"/>
	<TextView
		height="44"
		width="match_parent"
		gravity="center"
		text="{{@i18n/n_trade_bot_sign_service_disclaimer}}"
		cornerRadius="4"
		background="@color/kColorMajorTheme100"
		textColor="@color/KBaseTextColor"
		textFontWeight="500"
		textSize="14"
		onClick="@event.contractEditPage.agreementClick()"
		visibility="{{@data.contractEditPage.botTrend.bottom.agreementVisibility}}"/>
</FrameLayout>

