<Scroller
	height="match_parent"
	orientation="vertical"
	width="match_parent"
	background="@color/KBaseColorContentBackground">
		
	<LinearLayout
		width="match_parent"
		height="wrap_content"
		paddingLeft="16"
		paddingRight="16"
		paddingTop="16"
		gravity="centerVertical"
		orientation="vertical">
		<For
			data="@data.botDetailParam.paramsList"
			itemKey="element"
			typeKey="cellType">
			<Cell
				width="match_parent"
				height="wrap_content"
				marginBottom="8"
				type="1">
				<LinearLayout
					width="match_parent"
					height="20"
					gravity="center"
					orientation="horizontal">
					<TextView
						gravity="left|center"
						height="match_parent"
						width="wrap_content"
						text="{{@element.title}}"
						textColor="@color/kColorThreeLevelText"
						textFontWeight="400"
						textSize="14" />
					<View weight="1" />
					<TextView
						gravity="right|center"
						height="match_parent"
						width="wrap_content"
						text="{{@element.content}}"
						textColor="@color/kColorPrimaryText"
						textFontWeight="500"
						textSize="14" />
				</LinearLayout>
			</Cell>
			<Cell
				width="match_parent"
				height="wrap_content"
				marginBottom="8"
				type="2">
				<LinearLayout
					width="match_parent"
					height="20"
					gravity="center"
					orientation="horizontal">
					<TextView
						gravity="left|center"
						height="match_parent"
						width="wrap_content"
						text="{{@element.title}}"
						textColor="@color/kColorThreeLevelText"
						textFontWeight="400"
						textSize="14"/>
					<View weight="1" />
					<LinearLayout width="20" height="match_parent" gravity="center" visibility="{{@element.remindPointVisibility}}" onClick="@event.botDetailParam.remindClick('{{@element.remindType}}')">
						<ImageView width="12" height="12" gravity="center" scaleType="fitCenter" src="@drawable/edge_engine_copy_trading_tip"/>
					</LinearLayout>
					<TextView
						gravity="right|center"
						height="match_parent"
						width="wrap_content"
						text="{{@element.content}}"
						textColor="@color/kColorPrimaryText"
						textFontWeight="500"
						textSize="14" />
				</LinearLayout>
			</Cell>
			<Cell
				width="match_parent"
				height="16.5"
				marginBottom="8"
				type="3">
				<LinearLayout
					width="match_parent"
					marginTop="8"
					height="0.5"
					gravity="center"
					orientation="horizontal"
					background="@color/kColorPrimarySeparator">
				</LinearLayout>
			</Cell>
			<Cell
				width="match_parent"
				height="wrap_content"
				marginBottom="8"
				type="4">
				<LinearLayout
					width="match_parent"
					height="20"
					gravity="center"
					orientation="horizontal">
					<TextView
						gravity="left|center"
						height="match_parent"
						width="wrap_content"
						text="{{@element.title}}"
						textColor="@color/kColorThreeLevelText"
						textFontWeight="400"
						textSize="14" />
					<View weight="1" />
					<TextView
						gravity="right|center"
						height="match_parent"
						width="wrap_content"
						text="{{@element.content}}"
						textColor="@color/kColorPrimaryText"
						textFontWeight="500"
						textSize="14"
						onClick="@event.botDetailParam.copyClick()" />
					<ImageView marginLeft="4" width="14" height="14" src="@drawable/edge_engine_orderid_copy" onClick="@event.botDetailParam.copyClick()"/>
				</LinearLayout>
			</Cell>
			<Cell 				
				width="match_parent"
				height="wrap_content"
				marginBottom="8"
				type="5"> 
				<LinearLayout 					
					width="match_parent"
					height="20"
					gravity="center"
					orientation="horizontal">
						<BottomLineTextView 
							height="match_parent"
							width="wrap_content"
							text="{{@element.title}}"
							textColor="@color/kColorThreeLevelText"
							textFontWeight="400"
							textSize="14" 
							onClick="@event.botDetailParam.bottomLineClick('1')"/>
						<View weight="1" />
						<TextView
							gravity="right|center"
							height="match_parent"
							width="wrap_content"
							text="{{@element.content}}"
							textColor="@color/kColorPrimaryText"
							textFontWeight="500"
							textSize="14" />
				</LinearLayout>
			</Cell>
		</For>
	</LinearLayout>
</Scroller>
