<LinearLayout
    width="325"
    height="wrap_content"
	gravity="center"
	cornerRadius="8"
    orientation="vertical"
    background="@color/KBaseColorContentBackground">

	<ImageView gravity="center" width="64" height="64" marginTop="24" src="edge_engine_dbcoin_coin_buy_result" />
	<TextView 
		height="wrap_content" 
		width="match_parent"
		gravity="center"
		text="{{@i18n/n_bot_edit_submit_bot_success}}"
		marginTop="16"
		textColor="@color/kColorPrimaryText"
		textFontWeight="500" 
		textSize="16" />
	<LinearLayout
		width="293"
		height="44"
		gravity="center"
		marginTop="48"
		marginBottom="16"
		orientation="horizontal">
		<TextView 
			height="match_parent" 
			width="141.5"
			gravity="center"
			text="{{@i18n/n_cancel}}"
			textColor="@color/kColorPrimaryText" 
			textFontWeight="500" 
			cornerRadius="4"
			textSize="14"
			background="@color/KBaseColorInputBackground"
			onClick="@event.botCreateConfirmPop.submitStatusPopCancel()" />
		<TextView 
			height="match_parent" 
			width="141.5"
			gravity="center"
			marginLeft="8"
			text="{{@i18n/n_bot_edit_view_my_bot}}"
			textColor="@color/KBaseTextColor" 
			textFontWeight="500"
			cornerRadius="4"
			textSize="14"
			background="@color/kColorMajorTheme100"
			onClick="@event.botCreateConfirmPop.goToMyBot()" />
	</LinearLayout>
</LinearLayout>

