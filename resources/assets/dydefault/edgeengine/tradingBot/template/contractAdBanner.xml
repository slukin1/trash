<LinearLayout height="wrap_content"
    orientation="vertical"
    width="375">
    <FrameLayout width="343"
        height="68"
        marginLeft="16"
        marginRight="16"
        marginTop="8"
        marginBottom="8"
        visibility="{{@data.contractAdBanner.bannerVisibility | visible}}">
        <SliderView width="match_parent"
            height="match_parent"
            direction="horizontal"
            autoScroll="{{@data.contractAdBanner.bannerAutoScroll}}"
            timeInterval="5"
            scrollMode="infinite"
            onSelected="@event.contractAdBanner.selectedBannerIndex(@eventParams)"
            borderColor="@color/kColorPrimarySeparator"
            borderWidth="0.5"
            cornerRadius="12"
            currentIndex="@data.contractAdBanner.bannerCurrentIndex"
            clipRadius="12">
            <For data="@data.contractAdBanner.bannerList"
                itemKey="element"
                typeKey="type">
                <Cell width="match_parent"
                    height="match_parent"
                    type="1">
                    <LinearLayout width="match_parent"
                        height="match_parent"
                        gravity="centerVertical"
                        orientation="horizontal">
                        <ImageView width="match_parent"
                            height="match_parent"
                            src="{{@element.currentImageURL}}"
                            scaleType="center_crop"
                            onClick="@event.contractAdBanner.bannerClickBanner()"
                            placeholder="@drawable/home_new_banner_placeholder" />
                    </LinearLayout>
                </Cell>
            </For>
        </SliderView>
        <LinearLayout width="wrap_content"
            height="2"
            orientation="horizontal"
            layout_gravity="left|bottom"
            marginLeft="12"
            marginBottom="8"
            visibility="{{@data.contractAdBanner.bannerIndicatorVisibility}}">
            <For data='@data.contractAdBanner.bannerIndicatorList'
                itemKey='element'
                typeKey='type'>
                <Cell width='wrap_content'
                    height='wrap_content'
                    type='1'>
                    <FrameLayout width='8'
                        height='2'
                        background='@color/kColorIndicatorSelected'
                        marginRight='2'
                        cornerRadius='2' />
                </Cell>
                <Cell width='wrap_content'
                    height='wrap_content'
                    type='2'>
                    <FrameLayout width='2'
                        height='2'
                        background='@color/kColorIndicatorUnSelected'
                        marginRight='2'
                        cornerRadius='2' />
                </Cell>
            </For>
        </LinearLayout>
        <ImageView width="match_parent"
            height="match_parent"
            cornerRadius="12"
            borderColor="@color/kColorPrimarySeparator"
            borderWidth="0.5"
            visibility="{{@data.contractAdBanner.bannerAndroidStrokeVisibility | gone}}" />
    </FrameLayout>
</LinearLayout>
