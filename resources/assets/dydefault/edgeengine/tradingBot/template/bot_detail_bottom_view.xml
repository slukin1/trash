<LinearLayout
	width="match_parent"
	height="76"
	gravity="center"
	orientation="horizontal"
	background="@color/KBaseColorContentBackground"
	visibility="{{@data.botDetailBottom.visibility}}">
	<View height="0" onPopDismiss="@event.botDetailBottom.morePopClose()" popCancelOnTouchOutside="true"
        popModalPositon="bottom" popShow="{{@data.botDetailBottom.morePopShow}}" popShowMode="modal"
        popTemplate="bot_detail_more_pop.xml" width="0"/>
	<View height="0" onPopDismiss="@event.botDetailBottom.editPopClose()" popCancelOnTouchOutside="true"
        popModalPositon="bottom" popShow="{{@data.botDetailBottom.editPopShow}}" popShowMode="modal"
        popTemplate="bot_detail_edit_params_pop.xml" width="0"/>
	<View height="0" onPopDismiss="@event.botDetailBottom.stopPopClose()" popCancelOnTouchOutside="true"
        popModalPositon="bottom" popShow="{{@data.botDetailBottom.stopPopShow}}" popShowMode="modal"
        popTemplate="bot_detail_stop_pop.xml" width="0"/>
	<View
		width="0"
		height="0"
		popTemplate="bot_adjust_margin_pop.xml"
		popShow="{{@data.botAdjustMarginPop.popShow}}"
		onPopDismiss="@event.botAdjustMarginPop.popDismiss()"
		popCancelOnTouchOutside="true"
		popBackgroundDimmed="true"
		popShowMode="modal"
		popModalPositon="bottom" />
	<View 
		width="0"  
		height="0"
		popTemplate="common_option_pop.xml"
		popShow="{{@data.commonOptionPop.popShow}}"
		onPopDismiss="@event.commonOptionPop.optionPopDismiss()"
		popCancelOnTouchOutside="true"
		popBackgroundDimmed="true"
		popShowMode="modal"
		popModalPositon="bottom" />
	<View 
		width="0"  
		height="0"
		popTemplate="bot_copy_edit_pop.xml"
		popShow="{{@data.botCopyPop.copyPopShow}}"
		onPopDismiss="@event.botCopyPop.copyPopDismiss()"
		popCancelOnTouchOutside="true"
		popBackgroundDimmed="true"
		popShowMode="modal"
		popModalPositon="bottom" />
	<LinearLayout
		width="match_parent"
		height="76"
		gravity="center"
		orientation="horizontal"
		visibility="{{@data.botDetailBottom.runningBottomVisibility}}">
		<LinearLayout 
			width="44" 
			height="44" 
			gravity="center" 
			cornerRadius="4"
			background="@color/KBaseColorInputBackground"
			onClick="@event.botDetailBottom.moreClick()">
			<ImageView width="16" height="16" src="@drawable/edge_engine_bot_detail_more"/>
		</LinearLayout>
		<TextView 
			marginLeft="8" 
			width="141.5" 
			height="44" 
			text="{{@i18n/n_bot_detail_adjust_margin}}" 
			gravity="center"
			cornerRadius="4"
			background="@color/KBaseColorInputBackground"
			textSize="14"
			textFontWeight="500"
			textColor="@color/kColorPrimaryText"
			onClick="@event.botDetailBottom.adjustMarginClick()"/>
		<TextView 
			marginLeft="8" 
			width="141.5" 
			height="44" 
			text="{{@i18n/n_bot_detail_stop}}" 
			gravity="center"
			cornerRadius="4"
			background="@color/KBaseColorInputBackground"
			textSize="14"
			textFontWeight="500"
			textColor="@color/kColorPrimaryText"
			onClick="@event.botDetailBottom.stopClick()"/>
	</LinearLayout>
	<LinearLayout
		width="match_parent"
		height="76"
		gravity="center"
		orientation="horizontal"
		visibility="{{@data.botDetailBottom.stopBottomVisibility}}">
		<TextView 
			width="167.5" 
			height="44" 
			text="{{@i18n/n_bot_detail_copy_params}}" 
			gravity="center"
			cornerRadius="4"
			background="@color/KBaseColorInputBackground"
			textSize="14"
			textFontWeight="500"
			textColor="@color/kColorPrimaryText"
			onClick="@event.botDetailBottom.copyClick()"/>
		<TextView 
			marginLeft="8" 
			width="167.5" 
			height="44" 
			text="{{@data.botDetailBottom.showBotTitle}}"
			gravity="center"
			cornerRadius="4"
			background="@color/KBaseColorInputBackground"
			textSize="14"
			textFontWeight="500"
			textColor="@color/kColorPrimaryText"
			onClick="@event.botDetailBottom.showBotClick()"/>
	</LinearLayout>
</LinearLayout>
