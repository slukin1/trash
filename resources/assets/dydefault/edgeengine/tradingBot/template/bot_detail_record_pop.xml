<LinearLayout background="@color/KBaseColorContentBackground" gravity="centerVertical"
    height="wrap_content" orientation="vertical" topLeftRadius="8" topRightRadius="8"
    width="match_parent">

    <!-- 顶部标题+关闭按钮 -->
    <LinearLayout gravity="center" height="44" orientation="horizontal" paddingLeft="16"
        paddingRight="0" width="match_parent">
        <TextView gravity="center|left" height="match_parent"
            text="{{@i18n/n_detail_trade_order_title}}" textColor="@color/kColorPrimaryText"
            textFontWeight="500" textSize="16" width="wrap_content" />
        <View weight="1" />
        <LinearLayout gravity="center|right" height="44"
            onClick="@event.botDetailRecord.popDismiss()" orientation="horizontal" paddingRight="16"
            width="44">
            <ImageView height="28" src="@drawable/edge_engine_copy_trading_dialog_close"
                width="28" />
        </LinearLayout>
    </LinearLayout>

    <!-- 分割线 -->
    <View background="@color/kColorPrimarySeparator" height="0.5" width="match_parent" />

    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="4"
        orientation="vertical" width="match_parent">
        <For data="@data.botDetailRecord.popList" itemKey="element" typeKey="type">
            <Cell height="wrap_content" paddingLeft="16" paddingRight="16"
                paddingTop="12" type="1" width="match_parent">
                <LinearLayout height="wrap_content" orientation="vertical" width="match_parent">
                    <!--第一行-->
                    <LinearLayout gravity="centerVertical" height="22" orientation="horizontal"
                        width="match_parent">
                        <TextView background="{{@element.buySellColor}}" cornerRadius="2"
                            height="wrap_content" paddingBottom="1" paddingLeft="2" paddingRight="2"
                            paddingTop="1" text="{{@element.buySell}}"
                            textColor="@color/KBaseTextColor" textFontWeight="500" textSize="11"
                            width="wrap_content" />
                        <TextView gravity="center" height="wrap_content" marginLeft="4"
                            text="{{@element.symbol}}" textColor="@color/kColorPrimaryText"
                            textFontWeight="500" textSize="16" width="wrap_content" />
                        <TextView gravity="right" height="wrap_content" text="{{@element.date}}"
                            textColor="@color/eBaseColorThreeLevelText" textFontWeight="400"
                            textSize="12" weight="1" width="0" />
                    </LinearLayout>

                    <!--第二行-->
                    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="12"
                        orientation="horizontal" width="match_parent">
                        <TextView height="wrap_content" text="{{@element.entrustPriceTitle}}"
                            textColor="@color/kColorThreeLevelText" textFontWeight="400"
                            textSize="12" weight="1" width="0" />
                        <TextView gravity="left" height="wrap_content"
                            text="{{@element.entrustAmountTitle}}"
                            textColor="@color/kColorThreeLevelText" textFontWeight="400"
                            textSize="12" weight="1" width="0" />
                        <TextView gravity="right" height="wrap_content"
                            text="{{@element.avgPriceTitle}}"
                            textColor="@color/kColorThreeLevelText" textFontWeight="400"
                            textSize="12" weight="1" width="0" />
                    </LinearLayout>

                    <!--第三行-->
                    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="2"
                        orientation="horizontal" width="match_parent">
                        <TextView height="wrap_content" text="{{@element.entrustPriceContent}}"
                            textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"
                            weight="1" width="0" />
                        <TextView gravity="left" height="wrap_content"
                            text="{{@element.entrustAmountContent}}"
                            textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"
                            weight="1" width="0" />
                        <TextView gravity="right" height="wrap_content"
                            text="{{@element.avgPriceContent}}" textColor="@color/kColorPrimaryText"
                            textFontWeight="400" textSize="12" weight="1" width="0" />
                    </LinearLayout>

                    <!--第四行-->
                    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="12"
                        orientation="horizontal" width="match_parent">
                        <TextView height="wrap_content" text="{{@element.dealAmountTitle}}"
                            textColor="@color/kColorThreeLevelText" textFontWeight="400"
                            textSize="12" weight="1" width="0" />
                        <TextView gravity="left" height="wrap_content" text="{{@element.feeTitle}}"
                            textColor="@color/kColorThreeLevelText" textFontWeight="400"
                            textSize="12" weight="1" width="0" />
                        <TextView gravity="right" height="wrap_content"
                            textColor="@color/kColorThreeLevelText" textFontWeight="400"
                            textSize="12" weight="1" width="0" />
                    </LinearLayout>

                    <!--第五行-->
                    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="2"
                        orientation="horizontal" width="match_parent">
                        <TextView height="wrap_content" text="{{@element.dealAmountContent}}"
                            textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"
                            weight="1" width="0" />
                        <TextView gravity="left" height="wrap_content"
                            text="{{@element.feeContent}}" textColor="@color/kColorPrimaryText"
                            textFontWeight="400" textSize="12" weight="1" width="0" />
                        <TextView gravity="right" height="wrap_content"
                            textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"
                            weight="1" width="0" />
                    </LinearLayout>

                    <View background="@color/kColorPrimarySeparator" height="0.5"
                        visibility="{{@element.separatorVisible | invisible}}"
                        width="match_parent" marginTop="12"></View>
                </LinearLayout>
            </Cell>
        </For>
    </LinearLayout>

    <View
        width="match_parent"
        height="16" />

</LinearLayout>
