<!-- <LinearLayout
	width="match_parent"
	height="match_parent"
	gravity="centerVertical"
	orientation="vertical">
	<View width="match_parent" height="98"/> -->

	<LinearLayout
		width="match_parent"
		height="wrap_content"
		gravity="centerVertical"
		orientation="vertical"
		topRightRadius="8"
		topLeftRadius="8"
		background="@color/KBaseColorContentBackground">

	    <!-- 顶部标题+关闭按钮 -->
		<LinearLayout
			paddingLeft="16"
			paddingRight="0"
			width="match_parent"
			height="44"
			gravity="center"
			orientation="horizontal">
			<TextView
				height="match_parent"
				width="wrap_content"
				gravity="center|left"
				text="{{@i18n/n_bot_detail_edit_params}}"
				textSize="16"
				textColor="@color/kColorPrimaryText"
				textFontWeight="500" />
			<View weight="1" />
			<LinearLayout
				width="100"
				height="44"
				paddingRight="16"
				gravity="center|right"
				orientation="horizontal"
				onClick="@event.botDetailBottom.editPopClose()">
				<ImageView
					width="28"
					height="28"
					src="@drawable/edge_engine_copy_trading_dialog_close" />
			</LinearLayout>
		</LinearLayout>

		<!-- 分割线 -->
		<View
			background="@color/kColorPrimarySeparator"
			width="match_parent"
			height="0.5" />

		
		<!-- <Scroller
			height="0"
			orientation="vertical"
			width="match_parent"
			weight="1"> -->

			<LinearLayout
				width="match_parent"
				height="372"
				paddingTop="16"
				paddingLeft="16"
				paddingRight="16"
				orientation="vertical" >

				<LinearLayout
					width="match_parent"
					height="wrap_content"
					gravity="center"
					orientation="vertical">

					<LinearLayout
						width="match_parent"
						height="20"
						gravity="center"
						marginBottom="8"
						orientation="horizontal">
						<TextView
							gravity="left|center"
							height="match_parent"
							width="wrap_content"
							text="{{@data.botDetailBottom.editInfo.lastPriceTitle}}"
							textColor="@color/kColorThreeLevelText"
							textFontWeight="400"
							textSize="14" />
						<View weight="1" />
						<TextView
							gravity="right|center"
							height="match_parent"
							width="wrap_content"
							text="{{@data.botDetailBottom.editInfo.lastPriceDisplay}}"
							textColor="@color/kColorPrimaryText"
							textFontWeight="500"
							textSize="14" />
					</LinearLayout>
					<LinearLayout
						width="match_parent"
						height="20"
						gravity="center"
						marginBottom="8"
						orientation="horizontal">
						<TextView
							gravity="left|center"
							height="match_parent"
							width="wrap_content"
							text="{{@data.botDetailBottom.editInfo.priceRangeTitle}}"
							textColor="@color/kColorThreeLevelText"
							textFontWeight="400"
							textSize="14" />
						<View weight="1" />
						<TextView
							gravity="right|center"
							height="match_parent"
							width="wrap_content"
							text="{{@data.botDetailBottom.editInfo.priceRangeDisplay}}"
							textColor="@color/kColorPrimaryText"
							textFontWeight="500"
							textSize="14" />
					</LinearLayout>
					<LinearLayout
						width="match_parent"
						height="20"
						gravity="center"
						marginBottom="8"
						orientation="horizontal">
						<TextView
							gravity="left|center"
							height="match_parent"
							width="wrap_content"
							text="{{@i18n/n_contract_current_profit_rate}}"
							textColor="@color/kColorThreeLevelText"
							textFontWeight="400"
							textSize="14" />
						<View weight="1" />
						<TextView
							gravity="right|center"
							height="match_parent"
							width="wrap_content"
							text="{{@data.botDetailBottom.editInfo.profitRateDisplay}}"
							textColor="{{@data.botDetailBottom.editInfo.profitRateColor}}"
							textFontWeight="500"
							textSize="14" />
					</LinearLayout>

				</LinearLayout>

				<!-- 触发价格 -->
				<LinearLayout
					width="match_parent"
					height="wrap_content"
					gravity="center"
					marginTop="8"
					marginBottom="8"
					orientation="vertical"
					visibility="{{@data.botDetailBottom.editInfo.triggerPriceVisibility}}">
					<LinearLayout
						width="match_parent"
						height="wrap_content"
						gravity="left"
						orientation="horizontal">
						<TextView 
							height="20" 
							width="wrap_content"
							gravity="left"
							text="{{@i18n/n_contract_grid_create_trigger_price}}"
							textColor="@color/kColorSecondaryText" 
							textFontWeight="400" 
							textSize="14"/>
					</LinearLayout>
					<!-- 数量输入 -->
					<LinearLayout
						width="match_parent"
						height="44"
						background="@color/KBaseColorInputBackground"
						cornerRadius="4"
						gravity="center"
						marginTop="8"
						orientation="horizontal"
						borderColor="#E94359"
						borderWidth="{{@data.botDetailBottom.editInfo.triggerPriceBorderWidth}}">	
						<EditText
                            textColorHint="@color/eButtonUnenabledBgColor"
							width="1" 
							height="match_parent" 
							marginLeft="12"
							marginRight="12"
							hint="{{@i18n/n_contract_grid_create_trigger_price}}"
							bindText="@data.botDetailBottom.editInfo.triggerPrice"
							textFilter="@dataParser.trade_parser(18,@data.botDetailBottom.precision,@eventParams)"
							textColor="@color/kColorPrimaryText"
							textFontWeight="400"
							textSize="14"
							inputType="numberDecimal"
							onTextChange="@event.botDetailBottom.onTextChange('triggerPrice',@eventParams)"
							onFocusChange="@event.botDetailBottom.onFocusChange('triggerPrice',@eventParams)"
							weight="1"/>
						<LinearLayout 
							width="wrap_content" 
							height="match_parent" 
							gravity="center"
							marginRight="12"
							onClick="@event.botDetailBottom.showOptionPop('triggerPrice')">
							<TextView 
								width="wrap_content" 
								height="match_parent" 
								gravity="center"
								text="{{@data.botDetailBottom.editInfo.triggerPriceTypeDisplay}}"
								textColor="@color/kColorPrimaryText" 
								textFontWeight="400" 
								textSize="14"
								/>
							<ImageView height="12" width="12" src="@drawable/edge_engine_trade_bot_arrow_down" marginLeft="4" />
						</LinearLayout>	
					</LinearLayout>
					<TextView 
						width="match_parent" 
						height="wrap_content" 
						gravity="left"
						text="{{@data.botDetailBottom.editInfo.triggerPriceErrorMsg}}"
						textColor="#E94359" 
						textFontWeight="400" 
						textSize="12"
						marginTop="8"
						marginBottom="8"
						maxLines="0"
						visibility="{{@data.botDetailBottom.editInfo.triggerPriceErrorVisibility}}"
						/>
				</LinearLayout>

				<!-- 止盈价格 -->
				<LinearLayout
					width="match_parent"
					height="wrap_content"
					gravity="center"
					marginTop="8"
					marginBottom="8"
					orientation="vertical">
					<LinearLayout
						width="match_parent"
						height="wrap_content"
						gravity="left"
						orientation="horizontal">
						<TextView 
							height="20" 
							width="wrap_content"
							gravity="left"
							text="{{@data.botDetailBottom.editInfo.takeProfitPriceTitle}}"
							textColor="@color/kColorSecondaryText" 
							textFontWeight="400" 
							textSize="14"/>
					</LinearLayout>
					<!-- 数量输入 -->
					<LinearLayout
						width="match_parent"
						height="44"
						background="@color/KBaseColorInputBackground"
						cornerRadius="4"
						gravity="center"
						marginTop="8"
						orientation="horizontal"
						borderColor="#E94359"
						borderWidth="{{@data.botDetailBottom.editInfo.takeProfitPriceBorderWidth}}">	
						<EditText
                            textColorHint="@color/eButtonUnenabledBgColor"
							width="1" 
							height="match_parent" 
							marginLeft="12"
							marginRight="12"
							hint="{{@data.botDetailBottom.editInfo.takeProfitPriceTitle}}"
							bindText="@data.botDetailBottom.editInfo.takeProfitPrice"
							textFontWeight="400" 
							textSize="14"
							inputType="numberDecimal"
							textColor="@color/kColorPrimaryText"
							textFilter="@dataParser.trade_parser(18,@data.botDetailBottom.precision,@eventParams)"
							onTextChange="@event.botDetailBottom.onTextChange('takeProfitPrice',@eventParams)"
							onFocusChange="@event.botDetailBottom.onFocusChange('takeProfitPrice',@eventParams)"
							weight="1"/>
						<LinearLayout 
							width="wrap_content" 
							height="match_parent" 
							gravity="center"
							marginRight="12"
							onClick="@event.botDetailBottom.showOptionPop('takeProfitPrice')">
							<TextView 
								width="wrap_content" 
								height="match_parent" 
								gravity="center"
								text="{{@data.botDetailBottom.editInfo.takeProfitPriceTypeDisplay}}"
								textColor="@color/kColorPrimaryText" 
								textFontWeight="400" 
								textSize="14"
								/>
							<ImageView height="12" width="12" src="@drawable/edge_engine_trade_bot_arrow_down" marginLeft="4" />
						</LinearLayout>	
					</LinearLayout>
					<TextView 
						width="match_parent" 
						height="wrap_content" 
						gravity="left"
						text="{{@data.botDetailBottom.editInfo.takeProfitPriceErrorMsg}}"
						textColor="#E94359" 
						textFontWeight="400" 
						textSize="12"
						marginTop="8"
						marginBottom="8"
						maxLines="0"
						visibility="{{@data.botDetailBottom.editInfo.takeProfitPriceErrorVisibility}}"
						/>
				</LinearLayout>

				<!-- 止损价格 -->
				<LinearLayout
					width="match_parent"
					height="wrap_content"
					gravity="center"
					marginTop="8"
					marginBottom="8"
					orientation="vertical">
					<LinearLayout
						width="match_parent"
						height="wrap_content"
						gravity="left"
						orientation="horizontal">
						<TextView 
							height="20" 
							width="wrap_content"
							gravity="left"
							text="{{@data.botDetailBottom.editInfo.stopLossPriceTitle}}"
							textColor="@color/kColorSecondaryText" 
							textFontWeight="400" 
							textSize="14"/>
					</LinearLayout>
					<!-- 数量输入 -->
					<LinearLayout
						width="match_parent"
						height="44"
						background="@color/KBaseColorInputBackground"
						cornerRadius="4"
						gravity="center"
						marginTop="8"
						orientation="horizontal"
						borderColor="#E94359"
						borderWidth="{{@data.botDetailBottom.editInfo.stopLossPriceBorderWidth}}">	
						<EditText
                            textColorHint="@color/eButtonUnenabledBgColor"
							width="1" 
							height="match_parent" 
							marginLeft="12"
							marginRight="12"
							hint="{{@data.botDetailBottom.editInfo.stopLossPriceTitle}}"
							bindText="@data.botDetailBottom.editInfo.stopLossPrice"
							textFontWeight="400" 
							textSize="14"
							inputType="numberDecimal"
							textColor="@color/kColorPrimaryText"
							textFilter="@dataParser.trade_parser(18,@data.botDetailBottom.precision,@eventParams)"
							onTextChange="@event.botDetailBottom.onTextChange('stopLossPrice',@eventParams)"
							onFocusChange="@event.botDetailBottom.onFocusChange('stopLossPrice',@eventParams)"
							weight="1"/>
						<LinearLayout 
							width="wrap_content" 
							height="match_parent" 
							gravity="center"
							marginRight="12"
							onClick="@event.botDetailBottom.showOptionPop('stopLossPrice')">
							<TextView 
								width="wrap_content" 
								height="match_parent" 
								gravity="center"
								text="{{@data.botDetailBottom.editInfo.stopLossPriceTypeDisplay}}"
								textColor="@color/kColorPrimaryText" 
								textFontWeight="400" 
								textSize="14"
								/>
							<ImageView height="12" width="12" src="@drawable/edge_engine_trade_bot_arrow_down" marginLeft="4" />
						</LinearLayout>	
					</LinearLayout>
					<TextView 
						width="match_parent" 
						height="wrap_content" 
						gravity="left"
						text="{{@data.botDetailBottom.editInfo.stopLossPriceErrorMsg}}"
						textColor="#E94359" 
						textFontWeight="400" 
						textSize="12"
						marginTop="8"
						marginBottom="8"
						maxLines="0"
						visibility="{{@data.botDetailBottom.editInfo.stopLossPriceErrorVisibility}}"
						/>
				</LinearLayout>
			</LinearLayout>

		<!-- </Scroller> -->

		<LinearLayout
			width="match_parent"
			height="44"
			background="{{@data.botDetailBottom.editInfo.bottomBgColor}}"
			gravity="center"
			marginTop="16"
			marginLeft="16"
			marginRight="16"
			cornerRadius="4"
			orientation="horizontal"
			onClick="@event.botDetailBottom.editConfirmClick()">
			<TextView 
				height="match_parent" 
				width="match_parent"
				gravity="center"
				text="{{@i18n/n_copy_trading_confirm}}"
				textColor="{{@data.botDetailBottom.editInfo.bottomTitleColor}}"
				textFontWeight="500" 
				textSize="14" />
		</LinearLayout>
		<View
			width="match_parent"
			height="34" />

	</LinearLayout>
<!-- </LinearLayout> -->
