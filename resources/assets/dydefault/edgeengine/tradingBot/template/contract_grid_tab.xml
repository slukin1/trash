    gravity="center"
    orientation="horizontal">
    <TextView
        gravity="center"
        width="0"
        weight="1"
        height="26"
        marginTop="3"
        marginBottom="3"
        marginLeft="3"
        textSize="14"
        text="{{@i18n/n_contract_grid_recommend_bot}}"
