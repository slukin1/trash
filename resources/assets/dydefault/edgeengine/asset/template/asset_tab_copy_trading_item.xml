<!--  copyTrading Item 模版 -->
<LinearLayout background="@color/KBaseColorContentBackground" height="58" orientation="vertical" width="375">

    <LinearLayout height="58" orientation="horizontal" marginLeft="16" marginRight="16" width="match_parent">

        <LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" width="132">

            <ImageView height="20" src="{{@initData.symbolIcon}}" width="20"/>

            <LinearLayout gravity="centerVertical" height="match_parent" marginLeft="4" orientation="vertical" width="wrap_content">

                <TextView height="wrap_content" text="{{@initData.symbolName}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout gravity="centerVertical" height="match_parent" orientation="vertical" width="100">

            <TextView height="wrap_content" layout_grivity="left" text="{{@initData.available}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="13" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

        </LinearLayout>

        <View width="0" height="0" weight="1"/>
        <LinearLayout gravity="centerVertical" height="match_parent" orientation="vertical" width="wrap_content">
            <TextView height="wrap_content" text="{{@initData.total}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="13" gravity="right" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
