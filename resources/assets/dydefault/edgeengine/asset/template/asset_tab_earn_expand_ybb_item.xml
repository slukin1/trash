<!-- 资产火币Earn(余币宝) Item 折叠部分 模版 -->
<LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content" orientation="vertical" width="match_parent">

    <LinearLayout height="wrap_content" orientation="horizontal" width="match_parent">

        <LinearLayout height="wrap_content" marginBottom="8" marginLeft="16" marginRight="16" marginTop="8" orientation="horizontal" width="match_parent">

            <LinearLayout gravity="left" height="wrap_content" orientation="vertical" width="136">

                <TextView height="wrap_content" text="{{@i18n/n_asset_position_year_profit_duration}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="11" width="wrap_content"/>

                <TextView height="wrap_content" marginTop="4" text="{{@initData.spotExAvailable}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>

                <TextView height="wrap_content" text="{{@initData.spotExDebts}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>

            </LinearLayout>

            <LinearLayout gravity="left" height="wrap_content" orientation="vertical" width="100">

                <TextView height="wrap_content" text="{{@i18n/n_asset_subscribe_number}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="11" width="wrap_content"/>

                <TextView height="wrap_content" marginTop="4" text="{{@initData.spotExPrice}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content" autoSizeMinTextSize="8" autoSizeTextType="uniform" maxWidth="100"/>

            </LinearLayout>

            <LinearLayout gravity="right" height="wrap_content" orientation="vertical" width="0" weight="1">

                <TextView height="wrap_content" text="{{@i18n/n_asset_position_add_total_number_new}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="11" width="wrap_content"/>

                <TextView height="wrap_content" marginTop="4" text="{{@initData.spotExYield}}" textColor="{{@initData.ybbExRiseColor}}" textFontWeight="400" textSize="12" width="wrap_content" autoSizeMinTextSize="8" autoSizeTextType="uniform" maxWidth="107"/>

                <TextView height="wrap_content" text="{{@initData.spotExYieldRate}}" textColor="{{@initData.amountExRiseColor}}" textFontWeight="400" textSize="12" width="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout background="@color/KAssetTopHeaderContentBackground" gravity="centerVertical" height="50" orientation="horizontal" width="match_parent">

        <LinearLayout gravity="center" height="match_parent" onClick="@event.jump(22, {{@initData.index}})" orientation="vertical" width="125">

            <ImageView height="20" src="@drawable/asst_earn_earn_depositnew" width="20"/>

            <TextView height="wrap_content" marginTop="3" text="{{@i18n/n_balance_subscribe_btn}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

        </LinearLayout>

        <LinearLayout gravity="center" height="match_parent" onClick="@event.jump(208, {{@initData.index}})" orientation="vertical" width="125">

            <ImageView height="20" src="@drawable/asst_exc_exc_detailsnew" width="20"/>

            <TextView height="wrap_content" marginTop="3" text="{{@i18n/n_asset_expand_detail}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

        </LinearLayout>

        <LinearLayout gravity="center" height="match_parent" onClick="@event.jump(25, {{@initData.index}})" orientation="vertical" width="125">

            <ImageView height="20" src="@drawable/asst_exc_exc_sharenew" width="20"/>

            <TextView height="wrap_content" marginTop="3" text="{{@i18n/n_share_sys_share}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
