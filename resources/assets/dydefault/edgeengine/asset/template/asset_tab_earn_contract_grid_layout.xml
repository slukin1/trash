<LinearLayout height="match_parent" background="@color/KBaseColorContentBackground" marginBottom="4" orientation="vertical" width="match_parent">
	<RecyclerView height="match_parent" width="match_parent" data="@data.contractGridList" itemKey="item" typeKey="type" indexKey="i">

		<Header width="match_parent" height="wrap_content">
			<LinearLayout orientation="vertical" height="wrap_content" width="match_parent">
				<!-- 合约网格头部 模版 -->
				<LinearLayout background="@color/KBaseColorContentBackground" height="94" orientation="vertical" width="match_parent">

					<LinearLayout marginTop="20" height="30" orientation="horizontal" width="match_parent" gravity="bottom" marginLeft="16" marginRight="16">

						<TextView height="wrap_content" text="{{@data.contractGridTotalAsset}}" textColor="@color/kColorPrimaryText" textSize="22" width="wrap_content" maxWidth="308" textFontWeight="500" autoSizeMinTextSize="12" autoSizeTextType="uniform"/>

						<TextView height="17" marginLeft="4" text="USDT" textColor="@color/kColorPrimaryText" textSize="12" visibility="{{@data.usdtVis}}" width="wrap_content" textFontWeight="500"/>

					</LinearLayout>

					<!-- 今日收益 -->
					<LinearLayout width="match_parent" height="16" marginTop="4" marginBottom="24" marginLeft="16" marginRight="16" gravity="centerVertical" orientation="horizontal">

						<TextView height="wrap_content" width="wrap_content" text="{{@i18n/n_today_profit}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400"/>

						<TextView marginLeft="4" height="wrap_content" width="wrap_content" text="{{@data.contractGridPlNumber}}" textColor="{{@data.contractGridPlNumberColor}}" textSize="12" textFontWeight="400"/>

					</LinearLayout>

					<View background="@color/KBaseColorPrimarySeparator" height="0.5" width="match_parent"/>
				</LinearLayout>
				<!-- 列表头部模版 -->
				<LinearLayout height="16" orientation="horizontal" marginTop="20" marginBottom="4" marginLeft="16" marginRight="16" width="match_parent">
					<TextView height="wrap_content" text="{{@i18n/n_exchange_call_auction_order_symbol}}" textColor="@color/kColorThreeLevelText" textSize="12" width="132"/>
					<TextView height="wrap_content" text="{{@i18n/n_trade_bot_title_total_investment}}({{@data.currency}})" textColor="@color/kColorThreeLevelText" textSize="12" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>
					<View width="0" height="match_parent" weight="1"/>
					<TextView height="wrap_content" text="{{@i18n/n_asset_coindetail_total_pnl}}" gravity="right" textColor="@color/kColorThreeLevelText" textSize="12" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>
				</LinearLayout>
			</LinearLayout>
		</Header>

		<Cell type="1" width="match_parent" height="wrap_content">
			<LinearLayout height="wrap_content" width="match_parent" orientation="vertical">
				<!-- 合约网格 Item 模版 -->
				<LinearLayout width="375" height="wrap_content" orientation="vertical">
					<LinearLayout width="match_parent" height="60" marginLeft="16" marginRight="16" paddingVertical="12" orientation="horizontal" onClick="@event.onContractGridItemClick({{@item.index}})">
						<LinearLayout height="match_parent" orientation="vertical" width="132" gravity="centerVertical">

							<!-- 币种名称 -->
							<TextView width="wrap_content" height="wrap_content" textSize="14" textFontWeight="500" textColor="@color/kColorPrimaryText" text="{{@item.itemName}}"/>

							<!-- 多空标签 杠杆倍数 -->
							<LinearLayout height="wrap_content" orientation="horizontal" width="wrap_content" marginTop="2" gravity="centerVertical">

								<FrameLayout width="wrap_content" height="wrap_content" gravity="center">

									<TextView width="wrap_content" height="wrap_content" textSize="10" textFontWeight="400" paddingLeft="4" paddingRight="4" paddingTop="1" paddingBottom="1" background="{{@item.longOrShortColor}}" opacity="0.1" cornerRadius="2" text="{{@item.trendType}}"/>
									<!-- 多空标签 -->
									<TextView width="wrap_content" height="wrap_content" textSize="10" textFontWeight="400" paddingLeft="4" paddingRight="4" paddingTop="1" paddingBottom="1" textColor="{{@item.longOrShortColor}}" text="{{@item.trendType}}"/>
								</FrameLayout>

								<!-- 杠杆倍数 -->
								<TextView width="wrap_content" height="wrap_content" textSize="10" paddingLeft="4" paddingRight="4" paddingTop="1" paddingBottom="1" marginLeft="2" background="@color/kColorTipsBackground" textColor="@color/kColorSecondaryText" text="{{@item.lever}}"/>

							</LinearLayout>

						</LinearLayout>

						<!-- 总投入 -->
						<LinearLayout height="match_parent" orientation="vertical" width="100" gravity="centerVertical">
							<TextView width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" textSize="14" textFontWeight="500" layout_grivity="left" textColor="@color/kColorPrimaryText" text="{{@item.cost}}"/>
						</LinearLayout>

						<View width="0" height="0" weight="1"/>

						<!-- 收益与收益率 -->
						<LinearLayout height="match_parent" orientation="vertical" width="wrap_content" gravity="centerVertical">
							<TextView width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" textSize="14" textFontWeight="500" gravity="right" textColor="{{@item.spotRiseColor}}" text="{{@item.spotYield}}"/>

							<TextView width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" textSize="12" textFontWeight="400" gravity="right" textColor="{{@item.spotRiseColor}}" text="{{@item.spotYieldRate}}"/>
						</LinearLayout>

					</LinearLayout>

				</LinearLayout>

				<!-- 合约网格 展开部分模版 -->
				<LinearLayout background="@color/KAssetTopHeaderContentBackground" gravity="centerVertical" height="51" visibility="{{@item.visible|gone}}" orientation="horizontal" width="match_parent">

					<LinearLayout gravity="center" height="match_parent" onClick="@event.jump(204, {{@item.index}})" orientation="vertical" width="94">

						<ImageView height="20" src="@drawable/asst_exc_tradingbot_detailsnew" width="20"/>

						<TextView height="wrap_content" marginTop="3" text="{{@i18n/n_assets_futures_grid_create}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

					</LinearLayout>

					<LinearLayout gravity="center" height="match_parent" onClick="@event.jump(205, {{@item.index}})" orientation="vertical" width="94">

						<ImageView height="20" src="@drawable/edge_engine_assets_exc_details" width="20"/>

						<TextView height="wrap_content" marginTop="3" text="{{@i18n/n_asset_expand_detail}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

					</LinearLayout>

					<LinearLayout gravity="center" height="match_parent" onClick="@event.jump(206, {{@item.index}})" orientation="vertical" width="94">

						<ImageView height="20" src="@drawable/edge_engine_asst_exc_tradingbot_close" width="20"/>

						<TextView height="wrap_content" marginTop="3" text="{{@i18n/n_grid_user_guide_close}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

					</LinearLayout>

					<LinearLayout gravity="center" height="match_parent" onClick="@event.jump(207, {{@item.index}})" orientation="vertical" width="93">

						<ImageView height="20" src="@drawable/edge_engine_assets_exc_share" width="20"/>

						<TextView height="wrap_content" marginTop="3" text="{{@i18n/n_share_sys_share}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

					</LinearLayout>

				</LinearLayout>
			</LinearLayout>
		</Cell>
		<Cell type="2" width="match_parent" height="wrap_content">
			<LinearLayout marginTop="115" gravity="center" orientation="vertical" height="wrap_content" width="match_parent">
				<LinearLayout gravity="center" orientation="horizontal" height="wrap_content" width="match_parent">
					<View width="0" height="wrap_content" weight="1"/>
					<ImageView gravity="center" height="63" src="@drawable/edge_engine_current_order_empty" width="63"/>
					<View width="0" height="wrap_content" weight="1"/>
				</LinearLayout>
				<TextView height="wrap_content" marginTop="12" text="{{@i18n/n_contract_trade_no_record}}" textSize="14" textWeight="400" textColor="@color/KBaseColorDefaultPlaceholder" width="wrap_content"/>
				<LinearLayout onClick="@event.goToContractGridPage()" marginTop="15" background="@color/KAssetTopHeaderContentBackground" gravity="center" height="40" orientation="horizontal" width="125">
					<TextView gravity="center" height="wrap_content" text="{{@i18n/n_cloud_wallet_go_create}}" textColor="@color/kColorMajorTheme100" textSize="14" textWeight="500" width="wrap_content"/>
				</LinearLayout>
			</LinearLayout>
		</Cell>
		<Cell type="3" width="match_parent" height="wrap_content">
			<LinearLayout marginTop="115" gravity="center" orientation="vertical" height="wrap_content" width="match_parent">
				<LinearLayout gravity="center" orientation="horizontal" height="wrap_content" width="match_parent">
					<View width="0" height="wrap_content" weight="1"/>
					<ImageView gravity="center" height="63" src="@drawable/edge_engine_common_no_network_icon" width="63"/>
					<View width="0" height="wrap_content" weight="1"/>
				</LinearLayout>
				<TextView height="wrap_content" marginTop="12" text="{{@i18n/n_common_no_internet_access}}" textSize="14" textWeight="400" textColor="@color/KBaseColorDefaultPlaceholder" width="wrap_content"/>
				<LinearLayout onClick="@event.onReloadContractGridClick()" marginTop="15" background="@color/KAssetTopHeaderContentBackground" gravity="center" height="40" orientation="horizontal" width="125">
					<TextView gravity="center" height="wrap_content" text="{{@i18n/n_common_reloading}}" textColor="@color/kColorMajorTheme100" textSize="14" textWeight="500" width="wrap_content"/>
				</LinearLayout>
			</LinearLayout>
		</Cell>
	</RecyclerView>

	<View width="0" height="0" onPopDismiss="@event.stopPopClose()" popCancelOnTouchOutside="true" popModalPositon="bottom" popShow="{{@data.stopPopShow}}" popShowMode="modal" popTemplate="asset_contract_grid_stop.xml"/>
</LinearLayout>
