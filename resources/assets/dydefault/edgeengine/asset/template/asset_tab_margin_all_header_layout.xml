<!-- 全仓杠杆头部卡片 模版 -->
<LinearLayout background="@color/KBaseColorContentBackground" height="94" orientation="vertical" width="match_parent">

	<LinearLayout marginTop="20" marginLeft="16" marginRight="16" height="30" orientation="horizontal" width="match_parent" gravity="bottom">

		<TextView height="wrap_content" text="{{@data.marginAllTotalAsset}}" textColor="@color/kColorPrimaryText" textSize="22" width="wrap_content" maxWidth="308" textFontWeight="500" autoSizeMinTextSize="12" autoSizeTextType="uniform"/>

		<TextView height="17" marginLeft="4" text="USDT" visibility="{{@data.usdtVis}}" textColor="@color/kColorPrimaryText" textSize="12" width="wrap_content" textFontWeight="500"/>

	</LinearLayout>

	<LinearLayout marginTop="4" marginLeft="16" marginRight="16" height="16" orientation="horizontal" width="match_parent" gravity="centerVertical">

		<MarginRateSector width="16" height="16" accountType="{{@data.marginAllAccountType}}" rate="{{@data.marginAllRiskRate}}"/>

		<TextView height="12" text="{{@data.marginAllRate}}" textColor="{{@data.marginAllRateColor}}" textSize="12" textFontWeight="500" marginLeft="4" width="wrap_content"/>

    </LinearLayout>

	<View background="@color/KBaseColorPrimarySeparator" height="0.5" marginTop="23.5" width="match_parent"/>

</LinearLayout>
