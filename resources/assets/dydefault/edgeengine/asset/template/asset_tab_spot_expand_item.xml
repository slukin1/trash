<!-- 现货展开部分模版 -->
<LinearLayout height="116" orientation="vertical" width="match_parent">

    <LinearLayout height="53" marginBottom="6" marginLeft="16" marginRight="16" marginTop="6" orientation="horizontal" width="match_parent">

        <LinearLayout gravity="left" height="match_parent" orientation="vertical" width="136">

            <TextView height="wrap_content" text="{{@i18n/n_asset_position_available_and_inorder}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="10" width="wrap_content" maxWidth="118" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

            <TextView height="wrap_content" marginTop="8" text="{{@initData.spotExAvailable}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>

            <TextView height="wrap_content" text="{{@initData.spotExDebts}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>

        </LinearLayout>

        <LinearLayout gravity="left" height="match_parent" orientation="vertical" width="100">

            <TextView height="wrap_content" text="{{@initData.spotExTopCenterTitle}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="11" width="wrap_content"/>

            <TextView height="wrap_content" marginTop="8" text="{{@initData.spotExPrice | --}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>

            <TextView height="wrap_content" marginTop="1" visibility="{{@initData.avgPositionCostShow}}" text="{{@initData.avgPositionCost}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
            <LinearLayout height="wrap_content" marginTop="1" orientation="horizontal" width="wrap_content" visibility="gone">

                <TextView height="wrap_content" text="{{@initData.spotExCost}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>

                <ImageView height="12" src="@drawable/icon_asset_update_cost" marginLeft="5" width="12" onClick="@event.jump(38, {{@initData.index}})"/>

            </LinearLayout>


        </LinearLayout>

        <View width="7" height="match_parent"/>

        <LinearLayout gravity="right" height="match_parent" orientation="vertical" width="100">

            <TextView gravity="right" height="wrap_content" text="{{@i18n/n_asset_position_all_margin_pl_new}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="11" width="wrap_content"/>

            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" gravity="right" height="wrap_content" marginTop="8" text="{{@initData.spotExYield}}" textColor="{{@initData.spotExRiseColor}}" textFontWeight="400" textSize="12" width="wrap_content"/>

            <TextView gravity="right" height="wrap_content" autoSizeMinTextSize="8" autoSizeTextType="uniform" text="{{@initData.spotExYieldRate}}" textColor="{{@initData.spotExRiseColor}}" textFontWeight="400" textSize="12" width="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout background="@color/KAssetTopHeaderContentBackground" gravity="centerVertical" height="51" orientation="horizontal" width="match_parent">

        <LinearLayout gravity="center" height="match_parent" onClick="@event.jump(8, {{@initData.index}})" orientation="horizontal" width="0" weight="1" visibility="{{@initData.showSpotMarket | gone}}">

            <LinearLayout gravity="center" height="match_parent" orientation="vertical" width="wrap_content" marginRight="1">

                <ImageView height="20" src="@drawable/asst_exc_exc_marknew" width="20"/>

                <TextView height="wrap_content" marginTop="3" text="{{@i18n/n_market_info_quotes_main_title}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout gravity="center" height="match_parent" orientation="horizontal" onClick="@event.jump(9, {{@initData.index}})" width="0" weight="1" visibility="{{@initData.showSpotTrade | gone}}">

            <LinearLayout gravity="center" height="match_parent" orientation="vertical" width="wrap_content" marginRight="1">

                <ImageView height="20" src="{{@initData.spotTradeSrc}}" width="20"/>

                <TextView height="wrap_content" marginTop="3" text="{{@initData.spotTradeTitle}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout gravity="center" height="match_parent" orientation="horizontal" onClick="@event.jump(54, {{@initData.index}})" width="0" weight="1" visibility="{{@initData.showSpotEarn | gone}}">

            <LinearLayout gravity="center" height="match_parent" orientation="vertical" width="wrap_content" marginRight="1">

                <ImageView height="20" src="@drawable/asst_spot_earn_open" width="20"/>

                <TextView height="wrap_content" marginTop="3" text="{{@i18n/n_asset_ybb_stop_financial}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout gravity="center" height="match_parent" onClick="@event.jump(10, {{@initData.index}})" orientation="vertical" width="0" weight="1" visibility="{{@initData.showSpotDetail | gone}}">

            <ImageView height="20" src="@drawable/asst_exc_exc_detailsnew" width="20"/>

            <TextView height="wrap_content" marginTop="3" text="{{@i18n/n_asset_expand_detail}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

        </LinearLayout>

        <LinearLayout gravity="center" height="match_parent" onClick="@event.jump(202, {{@initData.index}})" orientation="vertical" width="0" weight="1" visibility="{{@initData.showSpotUpDetail | gone}}">

            <ImageView height="20" src="@drawable/asst_exc_exc_updetail" width="20"/>

            <TextView height="wrap_content" marginTop="3" text="{{@i18n/n_asset_expand_exchange_detail}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content" paddingLeft="2" paddingRight="2" maxWidth="70" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

        </LinearLayout>

         <LinearLayout gravity="center" height="match_parent" onClick="@event.jump(201, {{@initData.index}})" orientation="vertical" width="0" weight="1" visibility="{{@initData.showSpotUpdate | gone}}">

            <ImageView height="20" src="@drawable/asst_exc_exc_uphtx" width="20"/>

            <TextView height="wrap_content" marginTop="3" text="{{@i18n/n_asset_expand_htx}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
