<!-- 合约头部卡片 模版 -->
<LinearLayout background="@color/KAssetTopHeaderContentBackground" height="96" orientation="vertical" marginLeft="16" marginRight="16" cornerRadius="8" width="match_parent">

    <LinearLayout height="wrap_content" orientation="horizontal" marginTop="12" marginLeft="12" width="match_parent" gravity="centerVertical">

        <TextView height="16" text="{{@i18n/n_asset_all_rights_convert}}" textColor="@color/kColorThreeLevelText" textSize="12" width="210" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

    </LinearLayout>

    <TextView height="21" marginTop="6" marginLeft="12" text="{{@data.coinPHeaderTotalAsset}}" textColor="@color/kColorPrimaryText" textSize="16" width="wrap_content" textFontWeight="700"/>


    <LinearLayout height="wrap_content" orientation="horizontal" marginTop="8" marginLeft="12" width="match_parent" gravity="centerVertical">

        <TextView height="16" text="{{@i18n/asset_spot_table_top_income}}" textColor="@color/kColorThreeLevelText" textSize="12" width="wrap_content" autoSizeMinTextSize="8" textFontWeight="400" autoSizeTextType="uniform"/>

        <TextView height="16" text="{{@data.coinPHeaderIncome}}" textColor="@color/kColorPrimaryText" textSize="12" width="wrap_content" marginLeft="2" textFontWeight="400" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

    </LinearLayout>

</LinearLayout>
