<!-- 合约头部卡片 模版 -->
<LinearLayout height="wrap_content" orientation="vertical" width="match_parent">

    <LinearLayout height="wrap_content" width="match_parent" marginTop="20" orientation="horizontal">

        <LinearLayout height="30" orientation="horizontal" width="wrap_content" marginLeft="16" marginRight="16" gravity="bottom">

            <TextView height="wrap_content" text="{{@data.copyTradingTotal}}" textColor="@color/kColorPrimaryText" textSize="22" width="wrap_content" autoSizeMinTextSize="8" textFontWeight="500" autoSizeTextType="uniform"/>

            <TextView height="17" text="USDT" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" marginLeft="4" visibility="{{@data.usdtVis}}" width="wrap_content"/>

        </LinearLayout>

        <View height="0" width="0" weight="1"/>

        <ImageView height="wrap_content" width="wrap_content" onClick="@event.jump(53)" marginRight="16" src="@drawable/ic_asset_tab_page_history_fait"/>
    </LinearLayout>

    <LinearLayout height="16" orientation="horizontal" marginTop="4" width="match_parent" marginLeft="16" marginRight="16" gravity="centerVertical">

        <TextView height="wrap_content" text="{{@i18n/n_today_profit}}" textColor="@color/kColorThreeLevelText" textSize="12" width="wrap_content" autoSizeMinTextSize="8" textFontWeight="400" autoSizeTextType="uniform"/>

        <TextView height="wrap_content" text="{{@data.copyTradingHeaderIncome}}" textColor="{{@data.copyTradingHeaderIncomeColor}}" textSize="12" width="wrap_content" marginLeft="2" textFontWeight="400" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

    </LinearLayout>

    <View background="@color/KBaseColorPrimarySeparator" height="0.5" marginTop="24" width="match_parent"/>

    <!-- 合约-跟单账户-开启余币宝 -->
    <LinearLayout gravity="centerVertical" height="44" onClick="@event.jump(143)" orientation="horizontal" marginLeft="16" marginRight="16" visibility="{{@data.contractAutoEarnVis | gone}}" width="match_parent">

        <ImageView height="wrap_content" width="wrap_content" src="@drawable/edge_engin_asset_icon_contract_auto_earn"/>

        <!-- text="{{@i18n/n_asset_contract_auto_earn}}" -->
        <TextView height="wrap_content" text="{{@data.contractAutoEarn}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" marginLeft="8" width="wrap_content"/>

        <View height="1" weight="1" width="0"/>

        <TextView height="wrap_content" text="{{@data.contractAutoEarnText}}" textColor="{{@data.contractAutoEarnColor}}" textSize="12" textFontWeight="400" width="wrap_content"/>

        <ImageView height="14" src="@drawable/ic_asset_header_arrow_right" width="14"/>

    </LinearLayout>

    <View background="@color/KBaseColorPrimarySeparator" height="0.5" width="match_parent"/>
</LinearLayout>
