<!-- 现货质押头部卡片 模版 -->
<LinearLayout height="wrap_content" orientation="vertical" width="match_parent">

    <LinearLayout gravity="bottom" height="30" orientation="horizontal" marginLeft="16" marginTop="20" marginRight="16" width="match_parent">

        <TextView height="wrap_content" text="{{@data.collateralTotalAsset}}" textColor="@color/kColorPrimaryText" textSize="22" width="wrap_content" autoSizeMinTextSize="8" textFontWeight="500" autoSizeTextType="uniform"/>

        <TextView height="17" text="USDT" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" marginLeft="4" visibility="{{@data.usdtVis}}" width="wrap_content"/>

    </LinearLayout>

    <LinearLayout height="16" marginLeft="16" marginRight="16" marginTop="16" orientation="horizontal" width="match_parent" gravity="centerVertical">

        <TextView height="wrap_content" text="{{@i18n/n_asset_spot_balance_pledge_loan_amount}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" textFontWeight="400" width="0"/>

        <TextView gravity="left" height="wrap_content" text="{{@i18n/n_asset_spot_balance_pledge_amount}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" marginLeft="8" textFontWeight="400" width="0"/>

    </LinearLayout>

    <LinearLayout height="16" marginLeft="16" marginRight="16" marginTop="4" orientation="horizontal" width="match_parent" gravity="centerVertical">

        <TextView height="wrap_content" text="{{@data.loaned}}" textColor="@color/kColorPrimaryText" textSize="12" width="0" weight="1" autoSizeMinTextSize="8" textFontWeight="400" autoSizeTextType="uniform"/>

        <TextView gravity="left" height="wrap_content" text="{{@data.collateral}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" marginLeft="8" width="0" textFontWeight="400" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

    </LinearLayout>

    <View background="@color/KBaseColorPrimarySeparator" height="0.5" marginTop="24" width="match_parent"/>

    <LinearLayout gravity="centerVertical" height="44" onClick="@event.goToCollateral()" orientation="horizontal" marginLeft="16" marginRight="16" visibility="{{@data.openTextVisible | gone}}" width="match_parent">

        <ImageView height="wrap_content" width="wrap_content" src="@drawable/edge_engine_asset_icon_1"/>

        <TextView height="wrap_content" text="{{@i18n/n_asset_go_to_loan_coin}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" marginLeft="8" width="wrap_content"/>

        <View height="1" weight="1" width="0"/>

        <ImageView height="14" src="@drawable/ic_asset_header_arrow_right" width="14"/>

    </LinearLayout>

    <View background="@color/KBaseColorPrimarySeparator" height="0.5" width="match_parent"/>

</LinearLayout>
