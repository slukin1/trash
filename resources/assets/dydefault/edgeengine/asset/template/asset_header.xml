<LinearLayout width="375" height="wrap_content" orientation="vertical">

    <LinearLayout width="375" height="wrap_content" orientation="horizontal" cornerRadius="4" visibility="{{@data.fallCoinVis | gone}}" background="@color/KAssetTopHeaderContentBackground">

        <ImageView width="12" height="12" marginLeft="16" marginTop="15" src="@drawable/edge_engine_asset_fall_coin_tips"/>

        <RichTextView width="0" weight="1" height="wrap_content" marginTop="12" marginBottom="12" marginLeft="8" text="{{@data.fallCoinText}}"/>

        <ImageView width="12" height="12" marginTop="15" marginRight="16" onClick="@event.closeFallCoin()" src="@drawable/edge_engine_copy_trading_dialog_close"/>

    </LinearLayout>

    <LinearLayout width="375" height="24" gravity="centerVertical" orientation="horizontal">

        <TextView width="wrap_content" height="24" marginLeft="16" textSize="18" textFontWeight="500" textColor="@color/kColorPrimaryText" text="{{ @i18n/n_all_asset_title }}"/>

        <CurrencyChangeView width="wrap_content" height="match_parent" marginLeft="8" text="{{ @data.currency }}" currencyChange="@event.currencyChange()"/>
        <ImageView width="16" height="15" marginLeft="12" visibility="{{@data.openVisibility | visible}}" onClick="@event.toggleShowAsset()" src="@drawable/wallet_icon_invisible_selected"/>
        <ImageView width="16" height="15" marginLeft="12" visibility="{{@data.closeVisibility | gone}}" onClick="@event.toggleShowAsset()" src="@drawable/wallet_icon_invisible"/>
        <View width="0" height="match_parent" weight="1"/>
        <ImageView width="28" height="28" marginRight="17" visibility="{{ @data.shareVisibility | visible }}" onClick="@event.shareAsset()" src="@drawable/ic_asset_position_share"/>
    </LinearLayout>
</LinearLayout>
