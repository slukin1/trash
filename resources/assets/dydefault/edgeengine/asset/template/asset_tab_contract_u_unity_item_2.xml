<!-- 合约 Item 模版 -->
<LinearLayout width="match_parent" height="58" background="@color/KBaseColorContentBackground" orientation="vertical">

    <LinearLayout width="match_parent" height="52" marginLeft="16" marginRight="16" orientation="horizontal">

        <LinearLayout height="match_parent" orientation="horizontal" width="167.5" gravity="centerVertical">

            <ImageView height="20" width="20" src="{{@initData.symbolIcon}}"/>

            <TextView width="wrap_content" height="wrap_content" textSize="14" textFontWeight="500" marginLeft="8" textColor="@color/kColorPrimaryText" text="{{@initData.symbolName}}"/>

        </LinearLayout>

        <LinearLayout width="167.5" marginLeft="8" height="match_parent" orientation="vertical" gravity="centerVertical">

            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" gravity="right" height="wrap_content" text="{{@initData.equityNum}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="match_parent"/>

            <TextView height="wrap_content" gravity="right" text="{{@initData.equity}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="match_parent" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
