<!-- 列表头部模版 -->
<LinearLayout height="16" orientation="horizontal" marginTop="8" marginBottom="4" marginLeft="16" width="match_parent">

    <TextView height="wrap_content" text="{{@initData.listTitleLeft}}" textColor="@color/kColorThreeLevelText" textSize="12" width="132"/>

    <TextView height="wrap_content" text="{{@initData.listTitleCenter}}" textColor="@color/kColorThreeLevelText" textSize="12" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

    <View width="0" height="match_parent" weight="1"/>

    <SortSelectView height="wrap_content" text="{{@initData.listTitleRight}}" showSelect="{{@initData.showSelect | 1}}" textColor="@color/kColorThreeLevelText" textSize="12" width="116" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

</LinearLayout>
