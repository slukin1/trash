<!-- 现货 Trading Bot Item 模版 -->
<LinearLayout background="@color/KBaseColorContentBackground" height="58" orientation="vertical" width="375">

    <LinearLayout height="58" marginLeft="16" marginRight="16" orientation="horizontal" width="343">

        <LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" width="132">

            <ImageView height="20" src="{{@initData.symbolIcon}}" width="20"/>

            <LinearLayout gravity="centerVertical" height="match_parent" marginLeft="4" orientation="vertical" width="112">

                <TextView height="wrap_content" text="{{@initData.symbolName}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>

                <LinearLayout height="16" orientation="horizontal" width="96">

                    <LinearLayout background="@color/KBaseColorInputBackground" height="16" orientation="horizontal" cornerRadius="2" width="wrap_content" gravity="centerVertical">

                        <TextView autoSizeTextType="uniform" height="wrap_content" marginLeft="4" marginRight="4" text="{{@initData.spotLoan}}" maxWidth="96" textColor="@color/kColorSecondaryText" textFontWeight="400" textSize="10" width="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout gravity="centerVertical" height="match_parent" orientation="vertical" width="100">

            <TextView height="wrap_content" gravity="left" text="{{@initData.cost}}" textColor="@color/kColorPrimaryText" textFontWeight="600" textSize="14" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

        </LinearLayout>

        <View width="0" height="match_parent" marginLeft="11" weight="1"/>

        <LinearLayout gravity="right" height="match_parent" orientation="vertical" width="wrap_content">

            <TextView height="wrap_content" gravity="right" text="{{@initData.spotYield}}" textColor="{{@initData.spotRiseColor}}" textFontWeight="600" textSize="14" width="100" marginTop="10" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

            <TextView height="wrap_content" gravity="right" text="{{@initData.spotYieldRate}}" textColor="{{@initData.spotRiseColor}}" textFontWeight="400" textSize="12" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
