
<!-- 合约持仓 Item 模版 -->
<LinearLayout width="375" height="wrap_content" background="@color/KBaseColorContentBackground" orientation="vertical">

	<LinearLayout marginTop="12" marginLeft="16" marginRight="16" height="20" orientation="horizontal" width="match_parent" gravity="centerVertical">
		<LinearLayout width="14" height="14" background="{{@initData.buyOrSellBackGroundColor}}" cornerRadius="2" gravity="center">
			<TextView width="wrap_content" height="wrap_content" textSize="10" textFontWeight="500" textColor="@color/KBaseTextColor" text="{{@initData.buyOrSell}}"/>
		</LinearLayout>

		<TextView marginLeft="4" width="wrap_content" height="wrap_content" textSize="14" textFontWeight="500" textColor="@color/kColorPrimaryText" text="{{@initData.symbolNameFull}}"/>

		<TextView marginLeft="4" width="wrap_content" height="wrap_content" textSize="14" textFontWeight="500" textColor="@color/kColorPrimaryText" text="{{@initData.isolatedName}}"/>

		<View width="0" height="match_parent" weight="1"/>

		<ImageView width="wrap_content" height="wrap_content" src="@drawable/asst_exc_exc_sharenew" onClick="@event.jump(118, {{@initData.index}}, {{@initData.type}})"/>
	</LinearLayout>

	<LinearLayout marginTop="6" marginLeft="16" height="16" orientation="horizontal" width="wrap_content" gravity="centerVertical">

		<TextView paddingStart="4" paddingEnd="4" width="wrap_content" height="match_parent" textSize="10" textFontWeight="500" gravity="center" cornerRadius="2" textColor="@color/kColorSecondaryText" background="@color/KBaseColorInputBackground" text="{{@initData.longOrShort}}"/>

		<TextView marginLeft="4" paddingStart="4" paddingEnd="4" width="wrap_content" height="match_parent" textSize="10" textFontWeight="500" gravity="center" cornerRadius="2" textColor="@color/kColorSecondaryText" background="@color/KBaseColorInputBackground" text="{{@initData.isolated}}"/>

		<TextView marginLeft="4" paddingStart="4" paddingEnd="4" width="wrap_content" height="match_parent" textSize="10" textFontWeight="500" gravity="center" cornerRadius="2" textColor="@color/kColorSecondaryText" background="@color/KBaseColorInputBackground" text="{{@initData.isolatedNumber}}"/>

		<ImageView marginLeft="8" width="wrap_content" height="wrap_content" src="{{@initData.adlRiskSrc}}" visibility="{{@initData.openAdl|gone}}"/>

		<LinearLayout height="14" orientation="horizontal" width="wrap_content" gravity="centerVertical" marginLeft="4" background="@color/trade_st_color_bg" visibility="{{@initData.isRisk | gone}}">

			<ImageView width="8" height="8" src="@drawable/contract_bell"/>

			<TextView width="wrap_content" height="wrap_content" textSize="10" marginLeft="2" marginRight="2" textFontWeight="500" textColor="@color/trade_st_color" text="{{@i18n/n_asset_contract_inquidation}}"/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout width="match_parent" height="wrap_content" marginTop="12" marginLeft="16" marginRight="16" orientation="horizontal">

		<LinearLayout height="wrap_content" orientation="vertical" width="wrap_content" gravity="left">

			<TextView width="wrap_content" height="wrap_content" textSize="12" textFontWeight="400" text="{{@i18n/n_contract_profit}}(USDT)" textColor="@color/kColorThreeLevelText"/>

			<TextView width="wrap_content" autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" textSize="16" textFontWeight="500" layout_grivity="left" textColor="{{@initData.spotRiseColor}}" text="{{@initData.profit}}"/>
		</LinearLayout>

		<View width="0" height="0" weight="1"/>

		<LinearLayout height="wrap_content" orientation="vertical" width="wrap_content" gravity="right">

			<TextView width="wrap_content" height="wrap_content" textSize="12" textFontWeight="400" gravity="right" text="{{@i18n/n_contract_yield}}" textColor="@color/kColorThreeLevelText"/>

			<TextView width="wrap_content" autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" textSize="16" textFontWeight="500" gravity="right" textColor="{{@initData.spotRiseColor}}" text="{{@initData.spotYield}}"/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout height="wrap_content" orientation="horizontal" marginLeft="16" marginRight="16" marginTop="12" width="match_parent">

		<LinearLayout weight="1" width="0" height="wrap_content" orientation="vertical">

			<TextView width="wrap_content" height="wrap_content" textSize="12" textFontWeight="400" maxWidth="104" maxLines="2" autoSizeTextType="uniform" autoSizeMinTextSize="8" text="{{@initData.contractTitle1_1}}" textColor="@color/kColorThreeLevelText"/>

			<TextView width="wrap_content" height="wrap_content" textSize="12" textFontWeight="400" text="{{@initData.contractTitle2_1}}" textColor="@color/kColorPrimaryText"/>
		</LinearLayout>

		<View width="16" height="0"/>

		<LinearLayout weight="1" width="0" height="wrap_content" orientation="vertical">

			<TextView width="wrap_content" height="wrap_content" textSize="12" textFontWeight="400" maxWidth="104" maxLines="2" autoSizeTextType="uniform" autoSizeMinTextSize="8" text="{{@initData.contractTitle1_2}}" textColor="@color/kColorThreeLevelText"/>

			<TextView width="wrap_content" height="wrap_content" textSize="12" textFontWeight="400" text="{{@initData.contractTitle2_2}}" textColor="@color/kColorPrimaryText"/>
		</LinearLayout>

		<View width="16" height="0"/>

		<LinearLayout weight="1" width="0" height="wrap_content" orientation="vertical" gravity="right">

			<TextView width="wrap_content" height="wrap_content" textSize="12" textFontWeight="400" maxWidth="104" maxLines="2" autoSizeTextType="uniform" autoSizeMinTextSize="8" gravity="right" text="{{@initData.contractTitle1_3}}" textColor="@color/kColorThreeLevelText"/>

			<TextView width="wrap_content" height="wrap_content" textSize="12" textFontWeight="400" gravity="right" text="{{@initData.contractTitle2_3}}" textColor="@color/kColorPrimaryText"/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout height="wrap_content" orientation="horizontal" marginBottom="16" marginLeft="16" marginRight="16" marginTop="12" width="match_parent">

		<LinearLayout weight="1" width="0" height="wrap_content" orientation="vertical">

			<TextView width="wrap_content" height="wrap_content" textSize="12" textFontWeight="400" maxWidth="104" maxLines="2" autoSizeTextType="uniform" autoSizeMinTextSize="8" text="{{@initData.contractTitle3_1}}" textColor="@color/kColorThreeLevelText"/>

			<TextView width="wrap_content" height="wrap_content" textSize="12" textFontWeight="400" text="{{@initData.contractTitle4_1}}" textColor="@color/kColorPrimaryText"/>

		</LinearLayout>

		<View width="16" height="0"/>

		<LinearLayout weight="1" width="0" height="wrap_content" orientation="vertical">

			<TextView width="wrap_content" height="wrap_content" textSize="12" textFontWeight="400" maxWidth="104" maxLines="2" autoSizeTextType="uniform" autoSizeMinTextSize="8" text="{{@initData.contractTitle3_2}}" textColor="@color/kColorThreeLevelText"/>

			<TextView width="wrap_content" height="wrap_content" textSize="12" textFontWeight="400" text="{{@initData.contractTitle4_2}}" textColor="@color/kColorPrimaryText"/>

		</LinearLayout>

		<View width="16" height="0"/>

		<LinearLayout weight="1" width="0" height="wrap_content" orientation="vertical" gravity="right">

			<TextView width="wrap_content" height="wrap_content" textSize="12" textFontWeight="400" maxWidth="104" maxLines="2" autoSizeTextType="uniform" autoSizeMinTextSize="8" gravity="right" text="{{@initData.contractTitle3_3}}" textColor="@color/kColorThreeLevelText"/>

			<TextView width="wrap_content" height="wrap_content" textSize="12" textFontWeight="400" gravity="right" text="{{@initData.contractTitle4_3 | --}}" textColor="@color/kColorPrimaryText"/>
		</LinearLayout>
	</LinearLayout>

	<View marginLeft="16" marginRight="16" width="match_parent" height="0.5" background="@color/kColorEBEBEB"/>
</LinearLayout>
