<!-- 资产火币Earn(定期) Item 折叠部分 模版 -->
<LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content" orientation="vertical" width="match_parent">
    <LinearLayout height="wrap_content" orientation="vertical" width="match_parent">

        <LinearLayout height="wrap_content" orientation="horizontal" width="match_parent">

            <LinearLayout height="wrap_content" marginBottom="8" marginLeft="16" marginRight="16" marginTop="6" orientation="horizontal" width="match_parent">

                <LinearLayout gravity="left" height="wrap_content" orientation="vertical" width="136">

                    <TextView height="wrap_content" text="{{@i18n/n_asset_position_year_profit_duration}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="11" width="wrap_content"/>

                    <TextView height="wrap_content" marginTop="4" text="{{@initData.spotExAvailable}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>

                    <TextView height="wrap_content" text="{{@initData.spotExDebts}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>

                </LinearLayout>

                <LinearLayout gravity="left" height="wrap_content" orientation="vertical" width="wrap_content">

                    <TextView height="wrap_content" text="{{@i18n/n_asset_position_confirm_number_new}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="11" width="wrap_content"/>

                    <TextView height="wrap_content" marginTop="4" text="{{@initData.spotExPrice}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>

                    <TextView height="wrap_content" text="{{@initData.spotExCost}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>

                </LinearLayout>

                <View width="0" height="1" weight="1"/>

                <LinearLayout gravity="right" height="wrap_content" orientation="vertical" width="wrap_content">

                    <TextView height="wrap_content" text="{{@i18n/n_asset_position_estimated_gross_revenue_number_new}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="11" width="wrap_content"/>

                    <TextView height="wrap_content" marginTop="4" text="{{@initData.spotExYield}}" textColor="{{@initData.ybbExRiseColor}}" textFontWeight="400" textSize="12" width="wrap_content"/>

                    <TextView height="wrap_content" text="{{@initData.spotExYieldRate}}" textColor="{{@initData.amountExRiseColor}}" textFontWeight="400" textSize="12" width="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout background="@color/KAssetTopHeaderContentBackground" height="50" orientation="horizontal" width="match_parent" gravity="centerVertical">

            <LinearLayout gravity="center" height="match_parent" onClick="@event.jump(102, {{@initData.index}})" orientation="vertical" width="124">

                <ImageView height="20" src="@drawable/asst_earn_earn_depositnew" width="20"/>

                <TextView height="wrap_content" marginTop="3" text="{{@i18n/n_balance_subscribe_btn}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
            </LinearLayout>

            <LinearLayout gravity="center" height="match_parent" onClick="@event.jump(104, {{@initData.index}})" orientation="vertical" width="125">

                <ImageView height="20" src="@drawable/asst_exc_exc_detailsnew" width="20"/>

                <TextView height="wrap_content" marginTop="3" text="{{@i18n/n_asset_expand_detail}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

            </LinearLayout>

            <LinearLayout gravity="center" height="match_parent" onClick="@event.jump(105, {{@initData.index}})" orientation="vertical" width="124">

                <ImageView height="20" src="@drawable/asst_exc_exc_sharenew" width="20"/>

                <TextView height="wrap_content" marginTop="3" text="{{@i18n/n_share_sys_share}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
