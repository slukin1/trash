    <View background="@color/KBaseColorPrimarySeparator" height="0.5" visibility="{{@data.openTextVisible | gone}}" width="match_parent"/>

    <LinearLayout gravity="centerVertical" height="44" onClick="@event.jump(137)" orientation="horizontal" marginLeft="16" marginRight="16" tag="-987" visibility="{{@data.openTextVisible | gone}}" width="match_parent">

        <ImageView height="wrap_content" width="wrap_content" src="@drawable/edge_engine_asset_icon_3"/>

        <TextView height="wrap_content" text="{{@i18n/n_asset_cash_auto_to_yyb}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" marginLeft="8" width="wrap_content"/>

        <ImageView width="12" height="13" marginLeft="2" scaleType="fitXY" src="@drawable/edge_engine_earn_upgrade"/>

        <LinearLayout width="wrap_content" height="13" paddingLeft="1" paddingRight="4" background="{{@data.upgradeBgColor}}" topRightRadius="8" bottomRightRadius="8" gravity="center">

            <TextView autoSizeMinTextSize="7" autoSizeTextType="uniform" height="wrap_content" text="{{@i18n/n_asset_auto_to_yyb_upgrade}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="10" maxWidth="48" maxLines="1" width="wrap_content"/>

        </LinearLayout>

        <View height="1" weight="1" width="0"/>

        <TextView height="wrap_content" text="{{@data.openText}}" textColor="{{@data.openTextColor}}" textSize="12" textFontWeight="400" width="wrap_content"/>

        <ImageView height="14" src="@drawable/ic_asset_header_arrow_right" width="14"/>

        <LinearLayout width="0" height="0" visibility="{{data.spotOpenGuidevisibility | gone}}">
            <View width="0" height="0" popArrowDirection="down" popArrowHeight="0" popArrowWidth="0" popShowMode="anchor" popCancelOnTouchOutside="true" popBackgroundDimmed="false" popShow="{{@data.spotOpenGuideShow | false}}" popTemplate="asset_tab_spot_open_guide.xml"/>
        </LinearLayout>

    </LinearLayout>

    <View background="@color/KBaseColorPrimarySeparator" height="0.5" width="match_parent"/>

</LinearLayout>
