<!-- 现货头部卡片 模版 -->
<LinearLayout orientation="vertical" width="match_parent" height="wrap_content">

    <LinearLayout height="wrap_content" orientation="vertical" marginLeft="16" marginRight="16" marginTop="20" width="match_parent">

        <LinearLayout width="match_parent" height="30" orientation="horizontal" gravity="bottom">

            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" text="{{@data.totalAsset}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="22" width="wrap_content"/>

            <TextView height="17" text="USDT" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" marginLeft="4" visibility="{{@data.usdtVis}}" width="wrap_content"/>

        </LinearLayout>

        <LinearLayout height="16" marginBottom="24" marginTop="4" orientation="horizontal" width="match_parent" gravity="centerVertical">

            <TextView height="wrap_content" text="{{@i18n/n_today_profit}}" textColor="@color/kColorThreeLevelText" textSize="12" width="wrap_content"/>

            <TextView height="wrap_content" marginLeft="4" text="{{@data.todayPlNumber}}" textColor="{{@data.todayPlNumberColor}}" textFontWeight="400" textSize="12" width="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <!-- <View
            height="1"
            weight="1"
            width="0" />
        <TextView
            gravity="right"
            height="wrap_content"
            marginLeft="2"
            marginRight="12"
            marginTop="12"
            maxLines="2"
            onClick="@event.jump(7)"
            text="@data.asset_small_coin_title"
