<!-- 现货 Item 模版 -->
<LinearLayout background="@color/KBaseColorContentBackground" height="58" orientation="vertical" width="375">

    <LinearLayout height="58" marginLeft="16" marginRight="16" orientation="horizontal" width="343">

        <LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" width="132">

            <ImageView height="20" src="{{@initData.symbolIcon}}" width="20"/>

            <LinearLayout gravity="centerVertical" height="match_parent" marginLeft="8" orientation="vertical" width="112">

                <TextView height="wrap_content" text="{{@initData.symbolName}}" textColor="@color/kColorPrimaryText" textFontWeight="600" textSize="14" width="wrap_content"/>

                <LinearLayout width="wrap_content" height="14" marginTop="2" cornerRadius="4" orientation="horizontal" visibility="{{@initData.isLoan | gone}}" background="@color/KBaseColorHandicapRed">
                    <TextView height="wrap_content" marginLeft="4" marginRight="4" text="{{@i18n/n_spot_exchange_debts}}" textColor="@color/baseCoinDangerousTip" textFontWeight="400" textSize="10" width="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout gravity="centerVertical" height="match_parent" orientation="vertical" width="100">

            <TextView height="wrap_content" gravity="left" text="{{@initData.spotNumber}}" textColor="@color/kColorPrimaryText" textFontWeight="600" textSize="14" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

            <TextView height="wrap_content" gravity="left" text="{{@initData.spotNumberEquivalent}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

        </LinearLayout>

        <View width="0" height="match_parent" marginLeft="11" weight="1"/>

        <LinearLayout gravity="centerVertical" height="match_parent" orientation="vertical" width="wrap_content">
            <!-- rise -->
            <TextView height="wrap_content" gravity="right" text="{{@initData.spotYield}}" textColor="{{@initData.spotRiseColor}}" textFontWeight="600" textSize="14" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform" visibility="{{@initData.showSpotRise | gone}}"/>

            <TextView height="wrap_content" gravity="right" text="{{@initData.spotYieldRate}}" textColor="{{@initData.spotRiseColor}}" textFontWeight="400" textSize="12" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform" visibility="{{@initData.showSpotRise | gone}}"/>

            <!--兑换-->
            <LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" width="100" visibility="{{@initData.showSpotUpdateButton | gone}}">
                <View width="0" height="match_parent" weight="1"/>
                <TextView gravity="center" text="{{@i18n/n_asset_expand_htx}}" textColor="@color/eAssetWhiteTextColor" textFontWeight="400" textSize="12" width="wrap_content" height="wrap_content" paddingLeft="8" paddingRight="8" paddingTop="4" paddingBottom="4" autoSizeMinTextSize="8" autoSizeTextType="uniform" background="@color/eAssetBlackButtonColor" cornerRadius="4" maxWidth="65" maxLines="2" maxHeight="62" onClick="@event.jump(201, {{@initData.index}})"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
