<LinearLayout width="match_parent" height="wrap_content" orientation="vertical" background="@color/KBaseColorContentBackground">

    <LinearLayout width="375" height="wrap_content" orientation="horizontal" cornerRadius="4" visibility="{{@data.fallCoinVis | gone}}" background="@color/KAssetTopHeaderContentBackground">

        <ImageView width="12" height="12" marginLeft="16" marginTop="15" src="@drawable/edge_engine_asset_fall_coin_tips"/>

        <TextView width="0" weight="1" height="wrap_content" marginTop="12" marginBottom="12" lineSpacing="2" marginLeft="8" maxLines="0" onClick="@event.jumpFallCoinLink()" richText="{{@data.fallCoinText}}"/>

        <ImageView width="12" height="12" marginTop="15" marginLeft="8" marginRight="16" onClick="@event.closeFallCoin()" src="@drawable/edge_engine_asset_fall_coin_close"/>

    </LinearLayout>

    <LinearLayout height="wrap_content" width="343" orientation="vertical" marginLeft="16" marginTop="14" marginRight="16">

        <LinearLayout height="30" width="match_parent" orientation="horizontal" gravity="centerVertical">

            <TextView height="wrap_content" width="wrap_content" textSize="14" text="{{@i18n/n_all_asset_title}}" textColor="@color/kColorSecondaryText"/>

            <ImageView width="16" height="16" marginLeft="4" visibility="{{@data.openVisibility | visible}}" onClick="@event.toggleShowAsset()" src="@drawable/edge_engine_asset_on_eyes"/>

            <ImageView width="16" height="16" marginLeft="4" visibility="{{@data.closeVisibility | gone}}" onClick="@event.toggleShowAsset()" src="@drawable/edge_engine_asset_off_eyes"/>

            <View height="0" width="0" weight="1"/>

            <ImageView height="wrap_content" width="wrap_content" marginRight="4" visibility="{{@data.restrictionVis | gone}}" onClick="@event.restrictionPop()" src="@drawable/edge_engine_asset_tips_new"/>

            <BottomLineTextView height="wrap_content" width="wrap_content" textSize="12" text="{{@i18n/n_withdrawal_restriction}}" marginRight="16" onClick="@event.restrictionPop()" visibility="{{@data.restrictionVis | gone}}" textColor="@color/kColorPriceRed"/>
            <!-- USDT/USDD  -->
            <LinearLayout width="wrap_content" height="30" paddingLeft="12" paddingRight="12" marginRight="8" orientation="horizontal" background="@color/kColor120173E5" cornerRadius="8" gravity="center" onClick="@event.exchangeUSDDClicked()" visibility="gone">

              <TextView height="wrap_content" width="wrap_content" textSize="12" textFontWeight="500" text="1USDT" textColor="@color/kColorMajorTheme100"/>

              <ImageView width="14" height="14" marginLeft="4" marginRight="4" src="@drawable/edge_engine_asset_usdd_usdt"/>

              <TextView height="wrap_content" width="wrap_content" textSize="12" textFontWeight="500" text="1USDD" textColor="@color/kColorMajorTheme100"/>
            </LinearLayout>

            <ImageView height="wrap_content" width="wrap_content" onClick="@event.jump(4)" src="@drawable/edge_engine_asset_record"/>

        </LinearLayout>

        <!-- 余额模块 -->
        <LinearLayout height="39" width="match_parent" orientation="horizontal" gravity="bottom">

            <AnimTextView height="39" integerTextSize="28" text="{{ @data.assetTotal | -- }}" textColor="@color/kColorPrimaryText" width="wrap_content"/>

            <CurrencyChangeView width="wrap_content" height="14" marginLeft="8" text="{{ @data.currency }}" textSize="12" marginBottom="6" currencyChange="@event.currencyChange()"/>

        </LinearLayout>

        <!-- 今日盈亏 我的火箭 -->
        <LinearLayout height="42" marginTop="16" orientation="horizontal" width="match_parent">

            <LinearLayout height="match_parent" orientation="vertical" width="0" weight="1" onClick="@event.jump(6)">

                <!-- 今日盈亏 -->
                <LinearLayout height="20" orientation="horizontal" width="match_parent" gravity="centerVertical">

                    <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="20" text="{{ @data.profitLegalTitle | @i18n/n_today_profit }}" textColor="@color/kColorSecondaryText" textFontWeight="400" textSize="14" width="wrap_content"/>

                    <ImageView height="wrap_content" width="wrap_content" marginLeft="2" src="@drawable/edge_engine_asset_jump"/>

                </LinearLayout>

                <LinearLayout height="20" marginTop="2" orientation="horizontal" gravity="centerVertical" width="wrap_content">

                    <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="20" text="{{ @data.assetToadyProfit | -- }}" textColor="{{@data.assetToadyProfitColor}}" textFontWeight="400" textSize="14" width="wrap_content"/>

                    <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="20" text="{{ @data.assetToadyProfitRate}}" textColor="{{@data.assetToadyProfitColor}}" textFontWeight="400" textSize="14" width="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout height="match_parent" orientation="vertical" width="0" weight="1" marginLeft="8" onClick="@event.rocketInfoTapAction()">

                <LinearLayout height="20" orientation="horizontal" gravity="centerVertical" width="match_parent">

                    <TextView gravity="right" height="match_parent" text="{{ @data.addProfitTitle | @i18n/n_balance_rocket}}" textColor="@color/kColorSecondaryText" textFontWeight="400" textSize="14" width="wrap_content" tag="-1235"/>

                    <ImageView height="wrap_content" width="wrap_content" marginLeft="2" src="@drawable/edge_engine_asset_jump"/>

                </LinearLayout>

                <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" gravity="right" height="20" marginTop="2" text="{{@data.rocketAmount | --}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout height="wrap_content" width="match_parent" orientation="vertical" marginTop="20" background="@color/KBaseColorDeepestBackground">

        <LinearLayout height="wrap_content" orientation="horizontal" width="match_parent" paddingLeft="16" paddingRight="16" paddingBottom="16" background="@color/KBaseColorContentBackground">

            <TextView autoSizeTextType="uniform" fontFamily="15" gravity="center" height="40" weight="1" width="0" cornerRadius="4" onClick="@event.jump(1)" visibility="{{@data.despositShow|gone}}" marginTop="1" text="{{@i18n/n_otc_deposit_title}}" textColor="@color/KBaseTextColor" textFontWeight="400" marginRight="8" background="@color/kColorMajorTheme100" textSize="14"/>

            <TextView autoSizeTextType="uniform" fontFamily="15" gravity="center" height="40" marginTop="1" weight="1" width="0" cornerRadius="4" onClick="@event.jump(2)" background="@color/kColorInputFill" text="{{@i18n/n_asset_position_trade_coin}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14"/>

            <TextView autoSizeTextType="uniform" fontFamily="15" gravity="center" height="40" marginTop="1" weight="1" width="0" cornerRadius="4" marginLeft="8" onClick="@event.jump(3)" background="@color/kColorInputFill" text="{{@i18n/n_balance_margin_transfer}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14"/>

        </LinearLayout>
		<!-- 充提信息 -->
		<LinearLayout width="match_parent" height="wrap_content" orientation="vertical" bottomLeftRadius="8" bottomRightRadius="8" paddingBottom="8" background="@color/KBaseColorContentBackground" visibility="{{@data.dwInfoShow|gone}}">

			<SliderView marginBottom="8" width="match_parent" height="36" autoScroll="true" timeInterval="10" direction="horizontal" scrollMode="infinite" scrollbars="false" onSelected="@event.dwIndexChange(@eventParams)" currentIndex="@data.dwCurrentIndex" showIndicator="false" disableCache="true">

				<For data="@data.dwInfoList" itemKey="element" typeKey="cellType">

					<Cell height="36" width="match_parent" type="1">

						<LinearLayout marginLeft="16" marginRight="16" width="match_parent" height="36" onClick="@event.dwItemClicked('{{@element.type}}')" cornerRadius="8" borderColor="@color/kColorEBEBEB" borderWidth="0.5" orientation="horizontal" gravity="centerVertical">

							<ImageView marginLeft="12" marginRight="8" width="6" height="6" src="{{@element.iconUrl}}"/>

							<TextView autoSizeTextType="uniform" gravity="left" height="wrap_content" width="0" weight="1" text="{{@element.content}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"/>

							<ImageView marginRight="12" width="wrap_content" height="wrap_content" src="@drawable/edge_engine_asset_jump"/>
						</LinearLayout>
					</Cell>
				</For>
			</SliderView>
			<!-- 指示器 -->
			<LinearLayout width="match_parent" height="4" gravity="centerHorizontal" visibility="{{@data.showIndicator | gone}}">
				<For data="@data.dwInfoList" itemKey="element" typeKey="cellType">

					<Cell marginLeft="2" marginRight="2" height="4" width="{{@element.indicatorWidth|4}}" type="1">

						<View width="match_parent" height="4" cornerRadius="2" background="@color/kColorEBEBEB" gravity="centerVertical"/>
					</Cell>
				</For>
			</LinearLayout>
		</LinearLayout>

        <View width="match_parent" height="8"/>
    </LinearLayout>

</LinearLayout>
