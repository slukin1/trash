<!-- 现货质押头部卡片 模版 -->
<LinearLayout background="@color/KAssetTopHeaderContentBackground" height="121" orientation="vertical" marginLeft="16" cornerRadius="8" marginRight="16" width="match_parent">

    <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" marginLeft="12" marginTop="12" marginRight="12" width="match_parent">

        <TextView height="wrap_content" text="{{@data.collateralTotalAsset}}" textColor="@color/kColorPrimaryText" textSize="16" width="210" autoSizeMinTextSize="8" textFontWeight="700" autoSizeTextType="uniform"/>

    </LinearLayout>

    <LinearLayout height="16" marginLeft="12" marginRight="12" marginTop="8" orientation="horizontal" width="match_parent">

        <TextView height="wrap_content" text="{{@i18n/n_asset_spot_balance_pledge_loan_amount}}" textColor="@color/kColorThreeLevelText" textSize="12" width="wrap_content"/>

        <View width="0" weight="1" height="match_parent"/>

        <TextView gravity="right" height="wrap_content" marginLeft="4" text="{{@i18n/n_asset_spot_balance_pledge_amount}}" textColor="@color/kColorThreeLevelText" textSize="12" width="wrap_content"/>

    </LinearLayout>

    <LinearLayout height="16" marginLeft="12" marginRight="12" marginBottom="12" marginTop="4" orientation="horizontal" width="match_parent">

        <TextView height="wrap_content" text="{{@data.loaned}}" textColor="@color/kColorPrimaryText" textSize="12" width="150" autoSizeMinTextSize="8" textFontWeight="500" autoSizeTextType="uniform"/>

        <View width="0" weight="1" height="match_parent"/>
        <TextView gravity="right" height="wrap_content" marginLeft="4" text="{{@data.collateral}}" textColor="@color/kColorPrimaryText" textSize="12" width="150" textFontWeight="500" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

    </LinearLayout>

    <View background="@color/KBaseColorPrimarySeparator" height="0.5" marginLeft="12" marginRight="12" width="match_parent"/>

    <LinearLayout gravity="centerVertical" height="32" marginLeft="12" marginRight="12" orientation="horizontal" width="match_parent" onClick="@event.jump(39)">

        <TextView height="wrap_content" text="{{@i18n/n_asset_go_to_loan_coin}}" textColor="@color/kColorPrimaryText" textSize="12" width="wrap_content"/>

        <View width="0" height="1" weight="1"/>

        <ImageView height="14" src="@drawable/ic_asset_header_arrow_right" width="14"/>

    </LinearLayout>

</LinearLayout>
