<!-- 逐仓杠杆 Item 折叠部分模版 -->
<LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content" orientation="vertical" width="match_parent">

    <LinearLayout height="wrap_content" orientation="vertical" width="match_parent">

        <LinearLayout height="48" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent" gravity="centerVertical">

            <LinearLayout height="wrap_content" orientation="horizontal" width="136">

                <TextView height="wrap_content" marginLeft="25" text="{{@initData.baseSymbolName}}" textColor="@color/kColorSecondaryText" textFontWeight="500" textSize="14" width="wrap_content"/>

            </LinearLayout>

            <LinearLayout gravity="centerVertical" height="match_parent" orientation="vertical" width="wrap_content">

                <TextView height="wrap_content" text="{{@i18n/n_balance_otc_avaiable}}" textColor="@color/kColorSecondaryText" textFontWeight="500" textSize="10" width="wrap_content"/>


                <TextView height="wrap_content" text="{{@initData.baseAvailable}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>

            </LinearLayout>

            <View width="0" height="0" weight="1"/>

            <LinearLayout gravity="centerVertical" height="match_parent" orientation="vertical" width="wrap_content">

                <LinearLayout gravity="right" height="wrap_content" orientation="vertical" width="wrap_content">

                    <TextView height="wrap_content" text="{{@i18n/n_asset_position_borrow}}" textColor="@color/kColorSecondaryText" textFontWeight="500" textSize="10" width="wrap_content"/>

                    <TextView height="wrap_content" text="{{@initData.baseBorrowed}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout height="48" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent" gravity="centerVertical">

            <LinearLayout height="wrap_content" orientation="horizontal" width="136">

                <TextView height="wrap_content" marginLeft="25" text="{{@initData.chaseSymbolName}}" textColor="@color/kColorSecondaryText" textFontWeight="500" textSize="14" width="wrap_content"/>

            </LinearLayout>

            <LinearLayout gravity="centerVertical" height="match_parent" orientation="vertical" width="wrap_content">

                <TextView height="wrap_content" text="{{@i18n/n_balance_otc_avaiable}}" textColor="@color/kColorSecondaryText" textFontWeight="500" textSize="10" width="wrap_content"/>

                <TextView height="wrap_content" text="{{@initData.chaseAvailable}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>

            </LinearLayout>
            <View width="0" height="0" weight="1"/>

            <LinearLayout gravity="centerVertical" height="match_parent" orientation="vertical" width="wrap_content">

                <LinearLayout gravity="right" height="wrap_content" orientation="vertical" width="wrap_content">
                    <TextView height="wrap_content" text="{{@i18n/n_asset_position_borrow}}" textColor="@color/kColorSecondaryText" textFontWeight="500" textSize="10" width="wrap_content"/>

                    <TextView height="wrap_content" text="{{@initData.chaseBorrowed}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout background="@color/KAssetTopHeaderContentBackground" gravity="centerVertical" height="50" orientation="horizontal" width="match_parent">

            <LinearLayout gravity="center" height="match_parent" onClick="@event.jump(132, {{@initData.index}})" orientation="vertical" width="124">

                <ImageView height="20" src="@drawable/asst_exc_exc_marknew" width="20"/>

                <TextView height="wrap_content" marginTop="3" text="{{@i18n/n_market_info_quotes_main_title}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

            </LinearLayout>

            <View background="@color/kColorDividingLine" height="20" width="0.5"/>

            <LinearLayout gravity="center" height="match_parent" onClick="@event.jump(133, {{@initData.index}})" orientation="vertical" width="125">

                <ImageView height="20" src="@drawable/asst_exc_exc_tradenew" width="20"/>

                <TextView height="wrap_content" marginTop="3" text="{{@i18n/n_asset_loan_coin}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

            </LinearLayout>

            <View background="@color/kColorDividingLine" height="20" width="0.5"/>

            <LinearLayout gravity="center" height="match_parent" onClick="@event.jump(134, {{@initData.index}})" orientation="vertical" width="124">

                <ImageView height="20" src="@drawable/asst_exc_exc_detailsnew" width="20"/>

                <TextView height="wrap_content" marginTop="3" text="{{@i18n/n_asset_expand_detail}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
