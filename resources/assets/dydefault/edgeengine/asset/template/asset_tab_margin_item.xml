<!-- 全仓杠杆 Item 模版 -->
<LinearLayout background="@color/KBaseColorContentBackground" height="58" orientation="vertical" width="match_parent">

    <LinearLayout height="58" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent">

        <LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" width="132">

            <ImageView height="20" src="{{@initData.symbolIcon}}" width="20"/>

            <LinearLayout gravity="centerVertical" height="match_parent" marginLeft="4" orientation="vertical" width="wrap_content">

                <TextView height="wrap_content" text="{{@initData.symbolName}}" textColor="@color/kColorPrimaryText" textFontWeight="600" textSize="14" width="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout gravity="centerVertical" height="match_parent" orientation="vertical" width="100">

            <TextView height="wrap_content" text="{{@initData.spotNumberEquivalent}}" textColor="@color/kColorPrimaryText" textFontWeight="600" textSize="14" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>


            <TextView height="wrap_content" text="{{@initData.spotNumber}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

        </LinearLayout>

        <View width="0" height="0" weight="1"/>

        <LinearLayout gravity="centerVertical" height="match_parent" orientation="vertical" width="wrap_content">

            <LinearLayout grivity="right" height="wrap_content" orientation="vertical" width="wrap_content">

                <TextView height="wrap_content" text="{{@initData.spotYield}}" textColor="@color/kColorPrimaryText" textFontWeight="600" textSize="14" gravity="right" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
