<!-- 赚币-大额活期 头部卡片 模版 -->
<LinearLayout background="@color/KBaseColorContentBackground" height="146" orientation="vertical" width="match_parent">

	<LinearLayout marginLeft="16" marginRight="16" marginTop="20" height="30" orientation="horizontal" width="match_parent" gravity="bottom">

		<TextView height="wrap_content" text="{{@data.earnTotalAsset}}" textColor="@color/kColorPrimaryText" textSize="22" width="wrap_content" maxWidth="308" textFontWeight="500" autoSizeMinTextSize="12" autoSizeTextType="uniform"/>

		<TextView height="17" marginLeft="4" text="USDT" textColor="@color/kColorPrimaryText" textSize="12" width="wrap_content" textFontWeight="500"/>

	</LinearLayout>

	<LinearLayout height="16" marginTop="4" marginLeft="16" marginRight="16" orientation="horizontal" width="wrap_content" gravity="centerVertical">

        <TextView height="wrap_content" text="{{@i18n/n_balance_mining_item_total_yield}}" textColor="@color/kColorThreeLevelText" textSize="12" width="wrap_content"/>

        <TextView height="wrap_content" marginLeft="4" text="{{@data.earnTodayPlNumber}}" textColor="{{@data.earnTodayPlNumberColor}}" textSize="12" width="wrap_content" textFontWeight="400"/>

    </LinearLayout>

    <View background="@color/KBaseColorPrimarySeparator" height="0.5" marginTop="24" width="match_parent"/>

    <LinearLayout gravity="centerVertical" height="43" orientation="horizontal" width="match_parent" onClick="@event.jump(35,2)" marginLeft="16" marginRight="16">

		<ImageView height="20" src="@drawable/edge_engine_asset_icon_3" width="20"/>

        <TextView height="wrap_content" text="{{@i18n/n_balance_goto_earn}}" textColor="@color/kColorPrimaryText" textSize="12" width="wrap_content" marginLeft="8"/>

        <View width="0" height="1" weight="1"/>

        <ImageView height="14" src="@drawable/ic_asset_header_arrow_right" width="14"/>

    </LinearLayout>

	<View background="@color/KBaseColorPrimarySeparator" height="0.5" width="match_parent"/>

</LinearLayout>
