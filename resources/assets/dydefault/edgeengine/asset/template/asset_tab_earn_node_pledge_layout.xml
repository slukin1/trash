<LinearLayout height="match_parent" background="@color/KBaseColorContentBackground" marginBottom="4" orientation="vertical" width="match_parent">
	<RecyclerView height="match_parent" width="match_parent" data="@data.earnNodePledgeList" itemKey="item" typeKey="type" indexKey="i">

		<Header width="match_parent" height="wrap_content">
			<LinearLayout orientation="vertical" height="wrap_content" width="match_parent">
				<!-- 赚币-节点质押 头部卡片 模版 -->
				<LinearLayout background="@color/KBaseColorContentBackground" height="138" orientation="vertical" width="match_parent">

					<LinearLayout marginTop="20" height="30" orientation="horizontal" width="match_parent" gravity="bottom" marginLeft="16" marginRight="16">

						<TextView height="wrap_content" text="{{@data.earnNodePledgeTotalAsset}}" textColor="@color/kColorPrimaryText" textSize="22" width="wrap_content" maxWidth="308" textFontWeight="500" autoSizeMinTextSize="12" autoSizeTextType="uniform"/>

						<TextView height="17" marginLeft="4" text="USDT" visibility="{{@data.usdtVis}}" textColor="@color/kColorPrimaryText" textSize="12" width="wrap_content" textFontWeight="500"/>

					</LinearLayout>

					<LinearLayout height="16" marginTop="4" orientation="horizontal" width="wrap_content" gravity="centerVertical" marginLeft="16" marginRight="16">

						<TextView height="wrap_content" text="{{@i18n/n_balance_mining_item_total_yield}}" textColor="@color/kColorThreeLevelText" textSize="12" width="wrap_content"/>

						<TextView height="wrap_content" marginLeft="4" text="{{@data.earnNodePledgeTodayPlNumber}}" textColor="{{@data.earnNodePledgeTodayPlNumberColor}}" textSize="12" width="wrap_content" textFontWeight="400"/>

					</LinearLayout>

					<View background="@color/KBaseColorPrimarySeparator" height="0.5" marginTop="24" width="match_parent"/>

					<LinearLayout gravity="centerVertical" height="43" orientation="horizontal" width="match_parent" onClick="@event.goToNodePledgePage()" marginLeft="16" marginRight="16">

						<ImageView height="20" src="@drawable/edge_engine_asset_icon_4" width="20"/>

						<TextView height="wrap_content" text="{{@i18n/n_asset_to_pledge}}" textColor="@color/kColorPrimaryText" textSize="12" width="wrap_content" marginLeft="8"/>

						<View width="0" height="1" weight="1"/>

						<ImageView height="14" src="@drawable/ic_asset_header_arrow_right" width="14"/>

					</LinearLayout>

					<View background="@color/KBaseColorPrimarySeparator" height="0.5" width="match_parent"/>
				</LinearLayout>
				<!-- 列表头部模版 -->
				<LinearLayout height="16" orientation="horizontal" marginTop="16" marginBottom="4" width="match_parent" marginLeft="16" marginRight="16">
					<TextView height="wrap_content" text="{{@data.listTitleLeft}}" textColor="@color/kColorThreeLevelText" textSize="12" width="132"/>
					<TextView height="wrap_content" text="{{@data.listTitleCenter}}" textColor="@color/kColorThreeLevelText" textSize="12" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>
					<View width="0" height="match_parent" weight="1"/>
					<TextView height="wrap_content" text="{{@data.listTitleRight}}" gravity="right" textColor="@color/kColorThreeLevelText" textSize="12" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>
				</LinearLayout>
			</LinearLayout>
		</Header>

		<Cell type="1" width="match_parent" height="wrap_content">
			<LinearLayout height="wrap_content" orientation="vertical" width="match_parent">
				<!-- 资产火币Earn(余币宝) Item 模版 -->
				<LinearLayout height="wrap_content" orientation="vertical" width="match_parent" marginLeft="16" marginRight="16" onClick="@event.onNodePledgeItemClick({{@item.index}})">
					<LinearLayout height="58" orientation="horizontal" width="match_parent">
						<LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" width="132">
							<ImageView height="20" src="{{@item.symbolIcon}}" width="20"/>
							<LinearLayout gravity="centerVertical" height="match_parent" marginLeft="4" orientation="vertical" width="wrap_content">
								<TextView height="wrap_content" text="{{@item.symbolName}}" textColor="@color/kColorPrimaryText" textFontWeight="600" textSize="14" width="wrap_content"/>
							</LinearLayout>
						</LinearLayout>
						<LinearLayout gravity="centerVertical" height="match_parent" orientation="vertical" width="100">
							<TextView height="wrap_content" text="{{@item.spotNumber}}" textColor="@color/kColorPrimaryText" textFontWeight="600" textSize="14" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>
							<TextView height="wrap_content" text="{{@item.spotNumberEquivalent}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>
						</LinearLayout>
						<View width="0" height="match_parent" weight="1"/>
						<LinearLayout gravity="centerVertical" height="match_parent" orientation="vertical" width="wrap_content">
							<TextView height="wrap_content" text="{{@item.spotYesterdayYield}}" textColor="{{@item.amountRiseColor}}" textFontWeight="600" textSize="14" gravity="right" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>
							<TextView height="wrap_content" text="{{@item.spotYesterdayNumber}}" textColor="{{@item.amountRiseColor}}" textFontWeight="400" textSize="12" gravity="right" width="100" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<!-- 资产火币Earn(余币宝) Item 折叠部分 模版 -->
				<LinearLayout visibility="{{@item.visible|gone}}" height="wrap_content" orientation="vertical" width="match_parent">
					<LinearLayout height="wrap_content" orientation="horizontal" width="match_parent" marginLeft="16" marginRight="16">
						<LinearLayout height="wrap_content" marginBottom="8" marginTop="8" orientation="horizontal" width="match_parent">
							<LinearLayout gravity="left" height="wrap_content" orientation="vertical" width="132">
								<TextView height="wrap_content" text="{{@i18n/n_grid_apy}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="11" width="wrap_content"/>
								<TextView height="wrap_content" marginTop="4" text="{{@item.spotExYearRate}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
							</LinearLayout>
							<LinearLayout gravity="left" height="wrap_content" orientation="vertical" width="wrap_content">
								<TextView height="wrap_content" text="{{@i18n/n_asset_subscribe_number}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="11" width="wrap_content"/>
								<TextView height="wrap_content" marginTop="4" text="{{@item.spotSubscriptionNumber}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
							</LinearLayout>
							<View width="0" height="0" weight="1"/>
							<LinearLayout gravity="right" height="wrap_content" orientation="vertical" width="wrap_content">
								<TextView height="wrap_content" text="{{@i18n/n_asset_position_add_total_number_new}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="11" width="wrap_content"/>
								<TextView height="wrap_content" marginTop="4" gravity="right" text="{{@item.totalEarnAndQuantity}}" maxLines="2" textColor="{{@item.earnAndQuantityColor}}" textFontWeight="400" textSize="12" width="wrap_content"/>
							</LinearLayout>
						</LinearLayout>
					</LinearLayout>
					<LinearLayout background="@color/KAssetTopHeaderContentBackground" gravity="centerVertical" height="50" orientation="horizontal" width="match_parent">
						<LinearLayout gravity="center" height="match_parent" onClick="@event.jump(138,{{@item.index}})" orientation="vertical" width="125">
							<ImageView height="20" src="@drawable/asst_earn_earn_depositnew" width="20"/>
							<TextView height="wrap_content" marginTop="3" text="{{@i18n/n_asset_mortgage}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
						</LinearLayout>
						<LinearLayout gravity="center" height="match_parent" onClick="@event.jump(139,{{@item.index}})" orientation="vertical" width="125">
							<ImageView height="20" src="@drawable/asst_exc_exc_detailsnew" width="20"/>
							<TextView height="wrap_content" marginTop="3" text="{{@i18n/n_asset_expand_detail}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
						</LinearLayout>
						<LinearLayout gravity="center" height="match_parent" onClick="@event.jump(141,{{@item.index}})" orientation="vertical" width="125">
							<ImageView height="20" src="@drawable/asst_exc_exc_sharenew" width="20"/>
							<TextView height="wrap_content" marginTop="3" text="{{@i18n/n_share_sys_share}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</Cell>
		<Cell type="2" width="match_parent" height="wrap_content">
			<LinearLayout marginTop="115" gravity="center" orientation="vertical" height="wrap_content" width="match_parent">
				<LinearLayout gravity="center" orientation="horizontal" height="wrap_content" width="match_parent">
					<View width="0" height="wrap_content" weight="1"/>
					<ImageView gravity="center" height="63" src="@drawable/edge_engine_current_order_empty" width="63"/>
					<View width="0" height="wrap_content" weight="1"/>
				</LinearLayout>
				<TextView height="wrap_content" marginTop="12" text="{{@i18n/n_contract_trade_no_record}}" textSize="14" textWeight="400" textColor="@color/KBaseColorDefaultPlaceholder" width="wrap_content"/>
				<LinearLayout onClick="@event.goToNodePledgePage()" marginTop="15" background="@color/KAssetTopHeaderContentBackground" gravity="center" height="40" orientation="horizontal" width="125">
					<TextView gravity="center" height="wrap_content" text="{{@i18n/n_asset_to_pledge_now}}" textColor="@color/kColorMajorTheme100" textSize="14" textWeight="500" width="wrap_content"/>
				</LinearLayout>
			</LinearLayout>
		</Cell>
		<Cell type="3" width="match_parent" height="wrap_content">
			<LinearLayout marginTop="115" gravity="center" orientation="vertical" height="wrap_content" width="match_parent">
				<LinearLayout gravity="center" orientation="horizontal" height="wrap_content" width="match_parent">
					<View width="0" height="wrap_content" weight="1"/>
					<ImageView gravity="center" height="63" src="@drawable/edge_engine_common_no_network_icon" width="63"/>
					<View width="0" height="wrap_content" weight="1"/>
				</LinearLayout>
				<TextView height="wrap_content" marginTop="12" text="{{@i18n/n_common_no_internet_access}}" textSize="14" textWeight="400" textColor="@color/KBaseColorDefaultPlaceholder" width="wrap_content"/>
				<LinearLayout onClick="@event.onReloadEarnNodePledgeClick()" marginTop="15" background="@color/KAssetTopHeaderContentBackground" gravity="center" height="40" orientation="horizontal" width="125">
					<TextView gravity="center" height="wrap_content" text="{{@i18n/n_common_reloading}}" textColor="@color/kColorMajorTheme100" textSize="14" textWeight="500" width="wrap_content"/>
				</LinearLayout>
			</LinearLayout>
		</Cell>
	</RecyclerView>
</LinearLayout>
