<LinearLayout background="@color/KBaseColorContentBackground" cornerRadius="4" height="wrap_content" orientation="vertical" paddingBottom="16" paddingLeft="16" paddingRight="16" paddingTop="16" width="325">
    <LinearLayout gravity="centerVertical" height="20" orientation="horizontal" width="match_parent">

        <TextView height="wrap_content" text="{{@i18n/n_all_cancel_title}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="16" width="wrap_content"/>

        <View height="0" weight="1" width="0"/>

        <ImageView height="wrap_content" onClick="@event.position.onTipClose()" src="@drawable/edge_engine_copy_trading_dialog_close" width="wrap_content" marginRight="0"/>
    </LinearLayout>
    <TextView height="wrap_content" maxLines="99" paddingTop="20" text="{{@i18n/n_copytrading_position_close_tips}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="293"/>
        
    <LinearLayout width="match_parent" height="44" marginTop="20" orientation="horizontal" gravity="centerVertical">
        <TextView height="match_parent" gravity="center" text="{{@i18n/n_cancel}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="142.5" background="@color/eContentNavUnselectedBackground" cornerRadius="4" onClick="@event.position.onTipClose()"/>

        <View height="0" weight="1" width="0"/>
                
        <TextView height="match_parent" gravity="center" text="{{@i18n/n_contract_trade_position_close}}" textColor="@color/eContentTabDialogBackground" textFontWeight="500" textSize="14" width="142.5" background="@color/baseColorMajorTheme100" cornerRadius="4" onClick="@event.position.tipConfirm()"/>
    </LinearLayout>

</LinearLayout>
