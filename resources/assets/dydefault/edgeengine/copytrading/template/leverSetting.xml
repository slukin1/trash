<LinearLayout background="@color/KBaseColorContentBackground" height="match_parent" orientation="vertical" width="375">
    <!--设置提示-->
    <LinearLayout height="36" orientation="horizontal" width="match_parent" marginTop="8">
        <ImageView height="12" marginLeft="16" src="@drawable/edge_engine_copy_trading_cp_lev" width="12"/>
        <TextView height="wrap_content" marginLeft="4" marginRight="16" maxWidth="327" text="{{@i18n/n_copy_trading_leversetting_tips}}" maxLines="2" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
    </LinearLayout>
    <!--segment-->
    <LinearLayout gravity="centerVertical" height="36" orientation="horizontal" marginLeft="16" marginTop="16" marginRight="16" width="match_parent" cornerRadius="4" background="@color/KBaseColorInputBackground">
        <LinearLayout background="{{@data.leverSetting.fullPositionBg}}" cornerRadius="4" gravity="centerVertical" height="28" onClick="@event.leverSetting.tabSelect(0)" orientation="horizontal" marginLeft="4" weight="1" width="0">
            <TextView height="wrap_content" text="{{@i18n/n_copy_trading_leversetting_tab_fullPosition}}" textColor="{{@data.leverSetting.fullPositionTextColor}}" textFontWeight="500" textSize="14" width="match_parent" gravity="center"/>
        </LinearLayout>
        <LinearLayout background="{{@data.leverSetting.partPositionBg}}" cornerRadius="4" gravity="centerVertical" height="28" onClick="@event.leverSetting.tabSelect(1)" orientation="horizontal" marginRight="4" weight="1" width="0">
            <TextView height="wrap_content" text="{{@i18n/n_copy_trading_leversetting_tab_partPosition}}" textColor="{{@data.leverSetting.partPositionTextColor}}" textFontWeight="500" textSize="14" width="match_parent" gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <!--标题-->
    <LinearLayout gravity="centerVertical" height="16" orientation="horizontal" marginLeft="16" marginTop="16" marginRight="16" width="match_parent">
        <LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" width="170">
            <TextView height="wrap_content" text="{{@i18n/n_copy_trading_leversetting_symbol}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="12" width="match_parent"/>
        </LinearLayout>
        <LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" width="92">
            <TextView height="wrap_content" text="{{@i18n/n_copy_trading_leversetting_trader_lever}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="12" width="match_parent"/>
        </LinearLayout>
        <LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" width="80">
            <TextView height="wrap_content" text="{{@i18n/n_copy_trading_leversetting_my_lever}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="12" width="match_parent" gravity="right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout height="0" weight="1" orientation="vertical" width="match_parent">
        <RecyclerView data="@data.leverSetting.currentPositions" height="match_parent" indexKey="i" itemKey="recyclerItem" orientation="vertical" typeKey="type" width="match_parent">
            <Cell height="wrap_content" type="full" width="match_parent">
                <LinearLayout gravity="centerVertical" height="24" orientation="horizontal" marginLeft="16" marginTop="20" marginBottom="20" marginRight="16" width="match_parent">
                    <LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" width="170.5">
                        <ImageView height="16" width="16" src="{{@recyclerItem.selectAllImage}}" onClick="@event.leverSetting.selectItem({{@recyclerItem.index}})"/>
                        <ImageView height="24" width="24" cornerRadius="12" src="{{@recyclerItem.icon}}" marginLeft="6"/>
                        <TextView height="wrap_content" text="{{@recyclerItem.symbolText}}" marginLeft="8" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="match_parent"/>
                    </LinearLayout>
                    <LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" width="116">
                        <TextView height="wrap_content" text="{{@recyclerItem.traderLeverText}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="match_parent"/>
                    </LinearLayout>
                    <LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" width="56" cornerRadius="4" background="@color/KBaseColorInputBackground">
                        <TextView height="match_parent" text="{{@recyclerItem.myLeverText}}" gravity="center" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="32"/>
                        <ImageView height="16" width="16" src="@drawable/edge_engine_copy_trading_edit" marginLeft="4" onClick="@event.leverSetting.editItem({{@recyclerItem.index}})"/>
                    </LinearLayout>
                </LinearLayout>
            </Cell>
            <Cell height="wrap_content" type="part" width="match_parent">
                <LinearLayout gravity="centerVertical" height="24" orientation="horizontal" marginLeft="16" marginTop="20" marginBottom="20" marginRight="16" width="match_parent">
                    <LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" width="170.5">
                        <ImageView height="16" width="16" src="{{@recyclerItem.selectAllImage}}" onClick="@event.leverSetting.selectItem({{@recyclerItem.index}})"/>
                        <ImageView height="24" width="24" cornerRadius="12" src="{{@recyclerItem.icon}}" marginLeft="6"/>
                        <TextView height="wrap_content" text="{{@recyclerItem.symbolText}}" marginLeft="8" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="match_parent"/>
                    </LinearLayout>
                    <LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" width="116">
                        <TextView height="wrap_content" text="{{@recyclerItem.traderLeverText}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="match_parent"/>
                    </LinearLayout>
                    <LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" width="56" cornerRadius="4" background="@color/KBaseColorInputBackground">
                        <TextView height="match_parent" text="{{@recyclerItem.myLeverText}}" gravity="center" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="32"/>
                        <ImageView height="16" width="16" src="@drawable/edge_engine_copy_trading_edit" marginLeft="4" onClick="@event.leverSetting.editItem({{@recyclerItem.index}})"/>
                    </LinearLayout>
                </LinearLayout>
            </Cell>
        </RecyclerView>
    </LinearLayout>
    
    <LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content" orientation="vertical" width="match_parent">
        <LinearLayout marginLeft="0" marginRight="0" width="375" height="0.5" background="@color/KBaseColorPrimarySeparator"/>
        <LinearLayout gravity="centerVertical" height="17" marginLeft="16" marginTop="16" marginRight="16" orientation="horizontal" width="match_parent">
            <LinearLayout gravity="centerVertical" height="match_parent" orientation="horizontal" weight="1" width="0">
                <TextView height="match_parent" text="{{@i18n/n_copytrading_selectcurrency_selection}}" width="wrap_content" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"/>
                <TextView height="match_parent" text="{{@data.leverSetting.selectText}}" width="wrap_content" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"/>
            </LinearLayout>
            <ImageView height="14" width="14" src="{{@data.leverSetting.selectAllImage}}" onClick="@event.leverSetting.selectAll()"/>
            <TextView height="wrap_content" marginLeft="2" text="{{@i18n/n_copy_trading_leversetting_selection_all}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content" onClick="@event.leverSetting.selectAll()"/>
        </LinearLayout>
        <TextView background="{{@data.leverSetting.settingBackground}}" cornerRadius="4" gravity="center" height="40" marginBottom="16" marginLeft="16" marginRight="16" marginTop="10" onClick="@event.leverSetting.settingConfirm()" text="{{@i18n/n_copy_trading_leversetting_batch}}" textColor="{{@data.leverSetting.settingTextColor}}" width="match_parent" textFontWeight="500" textSize="14"/>
    </LinearLayout>
    <View height="0" popCancelOnTouchOutside="false" popShowMode="modal" popModalPositon="bottom" onPopDismiss="@event.leverSetting.allSymbolPopDismiss()" popShow="{{@data.leverSetting.allSymbolPopShow}}" popTemplate="lever_all_symbols_setting_pop.xml"/>
    <View height="0" popCancelOnTouchOutside="false" popShowMode="modal" popModalPositon="center" onPopDismiss="@event.leverSetting.allSymbolAlertDismiss()" popShow="{{@data.leverSetting.popShow}}" popTemplate="lever_setting_alert_confirm.xml"/>
    <View height="0" popCancelOnTouchOutside="false" popShowMode="modal" popModalPositon="bottom" onPopDismiss="@event.leverSetting.symbolLeverPopDismiss()" popShow="{{@data.leverSetting.symbolLeverPopShow}}" popTemplate="lever_symbol_setting_pop.xml"/>
</LinearLayout>
