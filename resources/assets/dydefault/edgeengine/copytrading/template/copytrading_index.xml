<LinearLayout width="match_parent" height="wrap_content" background="@color/KBaseColorDeepestBackground" orientation="vertical">

    <LinearLayout width="match_parent" height="32" cornerRadius="4" marginLeft="16" marginRight="16" marginTop="26" gravity="centerVertical" orientation="horizontal" background="@color/KBaseColorContentBackground" onClick="@event.index.goToSearch()">

            <ImageView width="12" height="12" marginLeft="12" marginRight="8" src="@drawable/copytrading_search"/>

            <TextView width="match_parent" height="wrap_content" weight="1" text="输入交易员昵称" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14"/>

            <ImageView width="14" height="14" marginRight="9" marginTop="9" layout_gravity="right" src="@drawable/copytrading_search_clear"/>

        </LinearLayout>

    <LinearLayout width="match_parent" height="32" marginLeft="16" marginRight="16" marginTop="12" marginBottom="12" gravity="centerVertical" orientation="horizontal">

        <TextView width="wrap_content" height="wrap_content" text="交易员列表" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="16"/>

        <View height="match_parent" weight="1" width="match_parent"/>

        <LinearLayout width="match_parent" height="32" orientation="horizontal" onClick="@event.traderFilter()">

            <TextView width="wrap_content" height="wrap_content" text="综合排名" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12"/>

            <ImageView width="14" height="14" marginLeft="4" src="@drawable/copytrading_select"/>
        </LinearLayout>
    </LinearLayout>

    <RecyclerView height="match_parent" width="match_parent" data="@data.index.rankList" gravity="centerVertical" orientation="vertical" itemKey="item" typeKey="type" indexKey="i">

        <Cell type="6" width="match_parent" height="wrap_content">

            <LinearLayout width="match_parent" height="wrap_content" paddingLeft="16" paddingRight="16" orientation="vertical" cornerRadius="8" gravity="center">

                <LinearLayout width="match_parent" height="wrap_content" paddingLeft="12" paddingRight="12" paddingTop="12" paddingBottom="12" orientation="horizontal">
                    <FrameLayout width="match_parent" height="wrap_content">

                        <ImageView width="44" height="44" marginRight="6" gravity="right" src="{{@item.imgUrl}}" cornerRadius="49"/>

                        <ImageView width="24" height="14" gravity="right" src="drawable/copytrading_rank_one"/>
                    </FrameLayout>

                    <LinearLayout width="match_parent" height="wrap_content" marginLeft="10" orientation="vertical">

                        <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal">

                            <TextView height="wrap_content" width="wrap_content" text="Boner.kummy" textSize="16" textFontWeight="400" gravity="center" textColor="@color/kColorPrimaryText"/>

                            <ImageView width="9" height="9" src="@drawable/copytrading_share"/>

                        </LinearLayout>

                        <LinearLayout width="match_parent" height="wrap_content" marginTop="4" orientation="horizontal">

                            <ImageView width="9" height="9" src="@drawable/copytrading_follower"/>

                            <TextView height="wrap_content" width="wrap_content" text="500/1000" textSize="10" textFontWeight="400" gravity="center" marginRight="2" textColor="@color/kColorThreeLevelText"/>

                        </LinearLayout>

                        <RecyclerView height="match_parent" width="match_parent" data="@data.index.tagList" gravity="centerVertical" orientation="vertical" itemKey="tagItem" typeKey="tagType" indexKey="i">
                            <Cell type="7" width="match_parent" height="wrap_content">
                                <TextView height="wrap_content" width="wrap_content" text="{{@tagItem}}" textSize="19" textFontWeight="400" paddingBottom="2" paddingTop="2" paddingLeft="4" paddingRight="4" gravity="center" textColor="@color/kColorSecondaryText" background="@color/KBaseColorInputBackground" cornerRadius="4"/>
                            </Cell>
                        </RecyclerView>

                    </LinearLayout>

                    <View width="1" height="1" weight="1"/>

                    <TextView height="wrap_content" width="wrap_content" text="跟单" textSize="12" textFontWeight="500" paddingBottom="6" paddingTop="6" paddingLeft="16" paddingRight="16" gravity="center" textColor="@color/white" background="@color/KBaseColorMajorTheme100" cornerRadius="4"/>

                </LinearLayout>

                <LinearLayout width="match_parent" height="66" paddingLeft="12" paddingRight="12" orientation="horizontal">

                    <LinearLayout width="match_parent" height="wrap_content" orientation="vertical">

                        <TextView height="wrap_content" width="wrap_content" text="总收益率" textSize="12" textFontWeight="400" gravity="center" textColor="@color/kColorThreeLevelText"/>

                        <TextView height="wrap_content" width="wrap_content" text="+623.25%" textSize="22" textFontWeight="400" gravity="center" textColor="@color/kColorThreeLevelText"/>

                        <TextView height="wrap_content" width="wrap_content" marginTop="8" text="总收益 ₮9,999,999.99" textSize="12" textFontWeight="400" gravity="center" textColor="@color/kColorThreeLevelText"/>
                    </LinearLayout>
                </LinearLayout>

                <View width="match_parent" height="0.5" marginTop="12" marginBottom="12" background="@color/KBaseColorPrimarySeparator"/>

                <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal">

                    <TextView height="wrap_content" width="wrap_content" marginTop="8" text="胜率 84.56%" textSize="12" textFontWeight="400" gravity="center" textColor="@color/kColorThreeLevelText"/>

                    <View width="1" height="1" weight="1"/>

                    <TextView height="wrap_content" width="wrap_content" marginTop="8" text="跟单者总收益 ₮9,999,999.99" textSize="12" textFontWeight="400" gravity="center" textColor="@color/kColorThreeLevelText"/>

                </LinearLayout>


                <TextView height="wrap_content" width="wrap_content" text="曾经跟随的交易员" textSize="10" textFontWeight="400" paddingBottom="4" paddingTop="4" paddingLeft="4" paddingRight="4" gravity="center" textColor="@color/kColorThreeLevelText" background="@color/KAssetTopHeaderContentBackground" cornerRadius="4"/>

            </LinearLayout>
        </Cell>
    </RecyclerView>

</LinearLayout>
