<LinearLayout height="match_parent" orientation="vertical" width="match_parent" marginLeft="0" marginRight="0" background="@color/KBaseColorInputBackground">

    <LinearLayout height="wrap_content" orientation="horizontal" width="match_parent" marginTop="15" marginLeft="16" marginRight="16">
        <TextView height="wrap_content" width="match_parent" text="{{@data.followerShareCard.followerShareCardItem.title}}" textColor="@color/kColorPrimaryText" textSize="16" textFontWeight="500" maxLines="0"/>
    </LinearLayout>
    
    <LinearLayout height="170" width="match_parent" orientation="vertical" marginTop="15" marginLeft="16" marginRight="16" cornerRadius="4" borderWidth="1" borderColor="@color/eColorPrimarySeparator">
        <LinearLayout width="match_parent" height="wrap_content" orientation="vertical">
                <!-- 币种 收益额 -->
            <LinearLayout width="match_parent" height="20" marginTop="16" marginLeft="16" marginRight="16" orientation="horizontal">
                    <!-- 币种名称 -->
                <TextView paddingTop="1" paddingBottom="1" paddingLeft="2" paddingRight="2" cornerRadius="2" width="wrap_content" height="wrap_content" text="{{@i18n/n_content_copy_trading_label}}" textColor="#FFFFFF" textSize="10" background="#E94359"/>
                <TextView marginLeft="4" width="wrap_content" height="wrap_content" textFontWeight="600" textSize="14" textColor="@color/kColorPrimaryText" text="{{@data.followerShareCard.followerShareCardItem.symbolDesc}}"/>
                <TextView width="0" height="wrap_content" weight="1" text="{{@data.followerShareCard.followerShareCardItem.profit}}" textColor="{{@data.followerShareCard.followerShareCardItem.profitColor}}" textSize="16" textFontWeight="600" gravity="right"/>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout width="match_parent" height="16" marginTop="6" marginLeft="16" marginRight="16" orientation="horizontal" gravity="center">
            <LinearLayout width="wrap_content" height="match_parent">
                <TextView paddingTop="2" paddingBottom="2" paddingLeft="4" paddingRight="4" cornerRadius="2" background="@color/baseColorInputBackground" width="wrap_content" height="wrap_content" text="{{@data.followerShareCard.followerShareCardItem.modeTypeName}}" textSize="10" textColor="@color/kColorSecondaryText"/>
                <TextView marginLeft="4" paddingTop="2" paddingBottom="2" paddingLeft="4" paddingRight="4" width="wrap_content" height="wrap_content" cornerRadius="2" background="@color/baseColorInputBackground" text="{{@data.followerShareCard.followerShareCardItem.leverDesc}}" textSize="10" textColor="@color/kColorSecondaryText"/>
                <TextView marginLeft="4" paddingTop="2" paddingBottom="2" paddingLeft="4" paddingRight="4" width="wrap_content" height="wrap_content" cornerRadius="2" background="@color/baseColorInputBackground" text="{{@data.followerShareCard.followerShareCardItem.directionDesc}}" textSize="10" textColor="@color/kColorSecondaryText"/>
            </LinearLayout>
            <TextView width="0" height="wrap_content" weight="1" textSize="12" text="{{@data.followerShareCard.followerShareCardItem.profitRate}}" textColor="{{@data.followerShareCard.followerShareCardItem.profitColor}}" gravity="right"/>
        </LinearLayout>
        
        <LinearLayout width="match_parent" height="wrap_content" marginTop="14" marginLeft="16" orientation="horizontal" marginRight="16">
            <TextView width="0" height="wrap_content" weight="1" textSize="12" textColor="@color/kColorThreeLevelText" text="{{@i18n/n_copy_trading_open_price}}" maxLines="0"/>
            <TextView width="0" height="wrap_content" weight="1" textSize="12" textColor="@color/kColorThreeLevelText" text="{{@i18n/n_copy_trading_position_open_number}}" maxLines="0"/>
            <TextView width="0" height="wrap_content" weight="1" textSize="12" gravity="right" textColor="@color/kColorThreeLevelText" text="{{@i18n/n_bond}}" maxLines="0"/>
        </LinearLayout>
        <LinearLayout width="match_parent" height="16" marginLeft="16" orientation="horizontal" gravity="centerVertical" marginRight="16">
            <TextView width="0" height="wrap_content" weight="1" textSize="12" textColor="@color/kColorPrimaryText" text="{{@data.followerShareCard.followerShareCardItem.openPrice}}" autoSizeTextType="uniform" autoSizeMinTextSize="8"/>
            <TextView width="0" weight="1" height="wrap_content" textSize="12" textColor="@color/kColorPrimaryText" text="{{@data.followerShareCard.followerShareCardItem.openAmountVolume}}" autoSizeTextType="uniform" autoSizeMinTextSize="8"/>
            <TextView width="0" weight="1" height="wrap_content" textSize="12" gravity="right" textColor="@color/kColorPrimaryText" text="{{@data.followerShareCard.followerShareCardItem.bondAmount}}" autoSizeTextType="uniform" autoSizeMinTextSize="8"/>
        </LinearLayout>
                
        <LinearLayout width="match_parent" height="40" marginTop="10.5" marginLeft="16" marginRight="16" orientation="horizontal" gravity="center" background="@color/kColorMajorTheme006">
            <TextView width="0" height="match_parent" weight="1" cornerRadius="4" textSize="14" textFontWeight="500" textColor="@color/kColorMajorTheme100" gravity="center" text="{{@i18n/n_content_copy_trading_follow_invite}}" onClick="@event.followerShareCard.copyTradingTapped()"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
