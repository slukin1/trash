<LinearLayout height="match_parent" orientation="vertical" width="375">
    <LinearLayout gravity="centerVertical" height="40" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">
        <LinearLayout background="{{@data.myTrader.currentBg}}" cornerRadius="4" gravity="centerVertical" height="22" onClick="@event.myTrader.tabSelect(0)" orientation="horizontal" paddingLeft="8" paddingRight="8" width="wrap_content">
            <TextView height="wrap_content" text="{{@i18n/n_copy_trading_now_follower_new}}" textColor="{{@data.myTrader.currentTextColor}}" textFontWeight="400" textSize="12" width="wrap_content"/>
        </LinearLayout>
        <LinearLayout background="{{@data.myTrader.histroyBg}}" cornerRadius="4" gravity="centerVertical" height="22" marginLeft="8" onClick="@event.myTrader.tabSelect(1)" orientation="horizontal" paddingLeft="8" paddingRight="8" width="wrap_content">
            <TextView height="wrap_content" text="{{@i18n/n_copy_trading_historical_follower_new}}" textColor="{{@data.myTrader.histroyTextColor}}" textFontWeight="400" textSize="12" width="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout height="0" weight="1" orientation="vertical" width="match_parent">
        <FrameLayout height="match_parent" width="match_parent">
            <RecyclerView data="@data.myTrader.listData" height="match_parent" indexKey="i" itemKey="recyclerItem" orientation="vertical" typeKey="type" width="match_parent">
                <Cell height="wrap_content" type="current" width="match_parent">
                    <LinearLayout height="wrap_content" orientation="vertical" width="match_parent">
                        <LinearLayout gravity="centerVertical" height="34" marginLeft="16" marginRight="16" marginTop="16" orientation="horizontal" width="match_parent" onClick="@event.myTrader.toTraderDetail('{{@recyclerItem.userSign}}')">
                            <ImageView width="28" height="28" gravity="left" marginTop="3" cornerRadius="14" src="{{@recyclerItem.imgUrl}}"/>

                            <LinearLayout width="wrap_content" height="wrap_content" marginLeft="8" orientation="horizontal">
                                <TextView marginTop="0" width="wrap_content" height="18" gravity="left" text="{{@recyclerItem.nickName}}" textColor="@color/kColorPrimaryText" textSize="16" textFontWeight="500"/>
                                <ImageView width="14" height="14" gravity="left" marginTop="2" src="@drawable/edge_engine_next_step"/>
                            </LinearLayout>
                            <View height="1" weight="1" width="0"/>
                            <LinearLayout height="20" gravity="right" paddingRight="0" width="64" orientation="horizontal">
                                <ImageView width="20" height="20" marginLeft="0" src="@drawable/edge_engine_copytrading_delete" onClick="@event.myTrader.cancel({{@recyclerItem.index}})"/>
                                <ImageView width="20" height="20" gravity="left" marginLeft="24" src="@drawable/edge_engine_copytrading_edit" onClick="@event.myTrader.settingTapped({{@recyclerItem.index}})"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout width="wrap_content" height="wrap_content" marginLeft="15" marginTop="12" visibility="{{@recyclerItem.showlossLimitTips | gone}}" orientation="vertical">
                            <TextView width="wrap_content" height="wrap_content" gravity="left" text="{{@i18n/n_copy_trading_stoploss_tips}}" textColor="@color/KBaseInputInvalidTipColor" textSize="12" textFontWeight="400"/>
                        </LinearLayout>
                        <!-- 今日收益 历史收益 固定金额-->
                        <LinearLayout width="match_parent" height="wrap_content" marginTop="14" marginLeft="16" orientation="horizontal" marginRight="16">
                                <!-- 今日收益 -->
                                <TextView width="0" height="wrap_content" weight="1" textSize="12" textColor="@color/kColorThreeLevelText" text="{{@data.myTrader.todayEarningsTitle}}" maxLines="0"/>
                                <!-- 历史收益 -->
                                <TextView width="0" height="wrap_content" weight="1" textSize="12" textColor="@color/kColorThreeLevelText" text="{{@i18n/n_copy_trading_historical_income}}" maxLines="0"/>
                                <!-- 固定金额 -->
                                <TextView width="0" height="wrap_content" weight="1" textSize="12" gravity="right" textColor="@color/kColorThreeLevelText" text="{{@recyclerItem.xOrLimitTitle}}" maxLines="0"/>
                        </LinearLayout>
                        <LinearLayout width="match_parent" height="16" marginLeft="16" orientation="horizontal" gravity="centerVertical" marginRight="16">
                                <!-- 今日收益 -->
                                <TextView width="0" height="wrap_content" weight="1" textSize="12" textColor="@color/kColorPrimaryText" text="{{@recyclerItem.todayProfit}}" isSubscript="true" autoSizeTextType="uniform" autoSizeMinTextSize="8"/>
                                <!-- 历史收益 -->
                                <TextView width="0" weight="1" height="wrap_content" textSize="12" textColor="@color/kColorPrimaryText" text="{{@recyclerItem.historyProfit}}" isSubscript="true" autoSizeTextType="uniform" autoSizeMinTextSize="8"/>
                                <!-- 固定金额 -->
                                <TextView width="0" weight="1" height="wrap_content" textSize="12" gravity="right" textColor="@color/kColorPrimaryText" text="{{@recyclerItem.xOrLimit}}" autoSizeTextType="uniform" autoSizeMinTextSize="8"/>
                        </LinearLayout>
                        <!-- 最大跟单金额 单笔止盈比例 单笔止损比例-->
                        <LinearLayout width="match_parent" height="wrap_content" marginTop="14" marginLeft="16" orientation="horizontal" marginRight="16">
                                <!-- 最大跟单金额 -->
                                <TextView width="0" height="wrap_content" weight="1" textSize="12" textColor="@color/kColorThreeLevelText" text="{{@recyclerItem.marginLimitTitle}}" maxLines="0"/>
                                <!-- 单笔止盈比例 -->
                                <TextView width="0" height="wrap_content" weight="1" textSize="12" textColor="@color/kColorThreeLevelText" text="{{@i18n/n_copy_trading_tp_percent}}" maxLines="0"/>
                                <!-- 单笔止损比例 -->
                                <TextView width="0" height="wrap_content" weight="1" textSize="12" gravity="right" textColor="@color/kColorThreeLevelText" text="{{@i18n/n_copy_trading_sl_percent}}" maxLines="0"/>
                        </LinearLayout>
                        <LinearLayout width="match_parent" height="16" marginLeft="16" orientation="horizontal" gravity="centerVertical" marginRight="16">
                                <!-- 最大跟单金额 -->
                                <TextView width="0" height="wrap_content" weight="1" textSize="12" textColor="@color/kColorPrimaryText" text="{{@recyclerItem.marginLimit}}" isSubscript="true" autoSizeTextType="uniform" autoSizeMinTextSize="8"/>
                                <!-- 单笔止盈比例 -->
                                <TextView width="0" weight="1" height="wrap_content" textSize="12" textColor="@color/kColorPrimaryText" text="{{@recyclerItem.stopProfitRate}}" isSubscript="true" autoSizeTextType="uniform" autoSizeMinTextSize="8"/>
                                <!-- 单笔止损比例 -->
                                <TextView width="0" weight="1" height="wrap_content" textSize="12" gravity="right" textColor="@color/kColorPrimaryText" text="{{@recyclerItem.stopLossRate}}" autoSizeTextType="uniform" autoSizeMinTextSize="8"/>
                        </LinearLayout>
                        <LinearLayout gravity="centerVertical" height="wrap_content" marginLeft="16" marginRight="16" marginTop="12" orientation="horizontal" width="match_parent">
                            <TextView text="{{@i18n/n_copy_trading_copy_time}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" width="0" weight="1" height="wrap_content"/>
                            <TextView text="{{@recyclerItem.orderTime}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" width="wrap_content" height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </Cell>
                <Cell height="wrap_content" type="histroy" width="match_parent">
                    <LinearLayout height="wrap_content" orientation="vertical" width="match_parent">
                        <!-- 数据行 -->
                        <LinearLayout height="wrap_content" orientation="vertical" width="match_parent">
                            <!-- 用户信息 -->
                            <LinearLayout gravity="centerVertical" height="28" marginLeft="16" marginRight="16" marginTop="16" orientation="horizontal" width="match_parent" onClick="@event.myTrader.toTraderDetail('{{@recyclerItem.userSign}}')">
                                <ImageView width="28" height="28" gravity="left" cornerRadius="10" src="{{@recyclerItem.imgUrl}}"/>
                                <TextView marginLeft="10" width="wrap_content" height="18" gravity="left" text="{{@recyclerItem.nickName}}" textColor="@color/kColorPrimaryText" textSize="16" textFontWeight="500"/>
                            </LinearLayout>
                            <!-- 收益信息 -->
                            <LinearLayout gravity="centerVertical" height="36" marginLeft="16" marginRight="16" marginTop="10" orientation="horizontal" width="match_parent">
                                <LinearLayout width="wrap_content" height="wrap_content" marginLeft="0" orientation="vertical">
                                    <TextView marginTop="0" width="wrap_content" height="18" gravity="left" text="{{@i18n/n_copy_trading_documentary_transaction_volume}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400"/>
                                    <TextView marginTop="0" width="wrap_content" height="16" gravity="left" text="{{@recyclerItem.tradeAggUsdt}}" textColor="@color/kColorPrimaryText" textSize="14" textFontWeight="500"/>
                                </LinearLayout>
                                <View height="1" weight="1" width="0"/>
                                <LinearLayout width="wrap_content" height="wrap_content" marginRight="0" gravity="right" orientation="vertical">
                                    <TextView marginTop="0" width="wrap_content" height="18" gravity="left" text="{{@i18n/n_copy_trading_documentary_income_usdt}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400"/>
                                    <TextView marginTop="0" width="wrap_content" height="16" gravity="left" text="{{@recyclerItem.profitUsdt}}" textColor="@color/kColorPrimaryText" textSize="14" textFontWeight="500"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <!-- 分割线 -->
                        <TextView background="@color/KBaseColorPrimarySeparator" height="0.5" marginLeft="16" marginRight="16" marginTop="16" width="match_parent"/>
                    </LinearLayout>
                </Cell>
            </RecyclerView>
            <LinearLayout gravity="centerHorizontal" height="wrap_content" orientation="vertical" visibility="{{@data.myTrader.showEmpty | gone}}" width="match_parent">
                <ImageView height="60" marginTop="40" src="@drawable/edge_engine_empty" width="60"/>
                <TextView gravity="center" height="wrap_content" marginTop="8" text="{{@i18n/n_contract_trade_no_record}}" textColor="@color/eBaseColorThreeLevelText" textSize="12" width="match_parent"/>
                <LinearLayout background="@color/eContentNavUnselectedBackground" cornerRadius="4" height="40" gravity="center" paddingLeft="40" paddingRight="40" marginTop="20" width="wrap_content">
                    <TextView gravity="center" height="18" text="{{@i18n/n_live_recommend_copy}}" textColor="@color/kColorMajorTheme100" textSize="14" textFontWeight="500" width="wrap_content" onClick="@event.myTrader.gotoTrade()"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <TextView width="0" height="0" text="" popTemplate="cancel_copytrading_alert.xml" popShow="{{@data.myTrader.cancelAlert | false}}" onPopDismiss="@event.myTrader.onClose()" popCancelOnTouchOutside="true" popBackgroundDimmed="true" popShowMode="modal" popModalPositon="center"/>
</LinearLayout>
