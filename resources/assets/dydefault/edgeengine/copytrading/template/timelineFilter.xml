<LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content" orientation="vertical" topLeftRadius="8" topRightRadius="8" width="match_parent">

    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="8" orientation="vertical" width="match_parent">

        <For data="@data.timelineFilter.popFilterContent" itemKey="item" typeKey="type">

            <Cell height="wrap_content" type="normal" width="match_parent">

                <LinearLayout gravity="centerVertical" height="48" onClick="@event.timelineFilter.onItemClick({{@item.index}})" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

                    <TextView height="wrap_content" text="{{@item.title}}" textColor="{{@item.textColor}}" textFontWeight="500" textSize="14" weight="1" width="0"/>

                    <ImageView height="16" src="@drawable/edge_engine_copytrading_selection_s" visibility="{{@item.showChoose | gone}}" width="16"/>
                </LinearLayout>
            </Cell>
        </For>
    </LinearLayout>

    <View background="@color/KBaseColorDeepestBackground" height="8" width="match_parent"/>

    <TextView gravity="center" height="48" onClick="@event.timelineFilter.popDismiss()" text="{{@i18n/n_cancel}}" textColor="@color/kColorThreeLevelText" textFontWeight="500" textSize="14" width="match_parent"/>
</LinearLayout>
