<LinearLayout topLeftRadius="8" topRightRadius="8" width="375" height="wrap_content" background="@color/KBaseColorContentBackground" orientation="vertical">
        <LinearLayout width="match_parent" height="48" marginTop="8" marginLeft="16" gravity="centerVertical" orientation="horizontal" onClick="@event.capitalFlow.modeTypePopSelected(2)">
                <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_contract_super_margin}}" textSize="14" textColor="{{@data.capitalFlow.superMarginColor}}" textFontWeight="500"/>
                <View weight="1" height="0" width="0"/>
                <ImageView marginRight="16" width="16" height="16" src="@drawable/edge_engine_marquee_selected" visibility="{{@data.capitalFlow.superMarginSelected | gone}}"/>
        </LinearLayout>
        <LinearLayout width="match_parent" height="48" marginLeft="16" gravity="centerVertical" orientation="horizontal" onClick="@event.capitalFlow.modeTypePopSelected(1)">
                <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_contract_trade_margin}}" textSize="14" textColor="{{@data.capitalFlow.isolateMarginColor}}" textFontWeight="500"/>
                <View weight="1" height="0" width="0"/>
                <ImageView marginRight="16" width="16" height="16" src="@drawable/edge_engine_marquee_selected" visibility="{{@data.capitalFlow.isolateMarginSelected | gone}}"/>
        </LinearLayout>
        <View background="@color/KBaseColorDeepestBackground" height="8" width="match_parent"/>
        <TextView width="match_parent" height="48" marginLeft="16" marginRight="16" marginTop="16" textColor="@color/kColorThreeLevelText" marginBottom="16" cornerRadius="4" onClick="@event.capitalFlow.modeTypePopDismiss()" gravity="center" textSize="14" textFontWeight="500" text="{{@i18n/n_cancel}}"/>
</LinearLayout>
