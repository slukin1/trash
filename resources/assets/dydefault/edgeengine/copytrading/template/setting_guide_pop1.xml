<LinearLayout width="375" height="wrap_content" orientation="vertical">
    <LinearLayout gravity="centerHorizontal" height="wrap_content" orientation="vertical" width="match_parent">
        <LinearLayout width="240" height="wrap_content" orientation="vertical" cornerRadius="8" background="@color/KBaseColorContentBackground">
            <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal">
                <TextView width="wrap_content" height="wrap_content" marginTop="12" marginLeft="12" textSize="14" textFontWeight="500" textColor="@color/kColorPrimaryText" text="1"/>
                <TextView width="wrap_content" height="wrap_content" marginTop="13" textSize="10" textFontWeight="400" textColor="@color/kColorSecondaryText" text="/2"/>
            </LinearLayout>
            <TextView width="match_parent" height="wrap_content" marginTop="4" marginLeft="12" marginRight="12" textSize="12" textFontWeight="400" maxLines="0" maxWidth="216" textColor="@color/kColorSecondaryText" text="{{@data.copySetting.settingGuideTips}}"/>
            <LinearLayout marginTop="12" marginRight="12" marginBottom="12" width="match_parent" height="24" orientation="horizontal" gravity="right" layout_gravity="right">
                <TextView width="wrap_content" height="match_parent" paddingLeft="16" paddingRight="16" gravity="center" background="@color/KBaseColorInputBackground" cornerRadius="4" textSize="12" textFontWeight="500" textColor="@color/kColorPrimaryText" text="{{@i18n/n_grid_user_guide_skip}}" onClick="@event.copySetting.hidePop()"/>
                <TextView width="wrap_content" height="match_parent" marginLeft="12" paddingLeft="16" paddingRight="16" gravity="center" background="@color/kColorMajorTheme100" cornerRadius="4" textSize="12" textFontWeight="500" textColor="@color/KBaseTextColor" text="{{@i18n/n_exchange_guide_next}}" onClick="@event.copySetting.nextPop(1)"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView width="8" height="4" src="@drawable/edge_engine_earn_pop_down"/>
    </LinearLayout>
    <LinearLayout width="match_parent" height="wrap_content" gravity="top" orientation="vertical" cornerRadius="8" marginLeft="10" marginRight="10" background="@color/KBaseColorContentBackground" enable="false">
        <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="8" marginLeft="6" marginRight="6" marginBottom="8" orientation="horizontal" width="match_parent">
            <TextView height="wrap_content" text="{{@i18n/n_grid_trade_available_money}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>
            <TextView height="wrap_content" marginLeft="4" text="{{@data.copySetting.availableTransferStr}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" width="wrap_content"/>
            <TextView height="wrap_content" marginLeft="8" text="{{@i18n/n_live_gift_transfer}}" textColor="@color/kColorMajorTheme100" textFontWeight="400" textSize="12" width="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
