<LinearLayout width="343" height="wrap_content" background="@color/KBaseColorContentBackground" marginLeft="16" marginRight="16" marginTop="10" marginBottom="8" orientation="vertical">
        <LinearLayout width="match_parent" height="wrap_content" cornerRadius="8" orientation="vertical">
                <FrameLayout width="343" height="80" visibility="{{@data.homePage.bannerVisibility | visible}}">
                        <SliderView width="match_parent" height="match_parent" direction="horizontal" autoScroll="{{@data.homePage.autoScroll}}" timeInterval="5" scrollMode="infinite" onSelected="@event.homePage.selectedBannerIndex(@eventParams)" borderColor="@color/kColorPrimarySeparator" borderWidth="0.5" cornerRadius="8" currentIndex="@data.homePage.currentIndex" clipRadius="9">
                                <For data="@data.homePage.bannerList" itemKey="element" typeKey="type">
                                        <Cell width="match_parent" height="match_parent" type="1">
                                                <LinearLayout width="match_parent" height="match_parent" gravity="centerVertical" orientation="horizontal">
                                                        <ImageView width="match_parent" height="match_parent" src="{{@element.currentImageURL}}" scaleType="center_crop" onClick="@event.homePage.bannerClickBanner()" placeholder="@drawable/kColorPrimarySeparator"/>
                                                </LinearLayout>
                                        </Cell>
                                </For>
                        </SliderView>
                        <ImageView width="match_parent" height="match_parent" src="{{@data.homePage.bannerPlaceholerImage}}" borderColor="@color/kColorPrimarySeparator" borderWidth="0.5" scaleType="fitXY" cornerRadius="8" clipRadius="9" visibility="{{@data.homePage.bannerPlaceholerVisibility | visible}}"/>
                        <LinearLayout width="wrap_content" height="23" orientation="horizontal" gravity="right" layout_gravity="right|bottom" paddingRight="8" paddingBottom="4" visibility="{{@data.homePage.bannerTextVisibility}}">
                                <TextView width="wrap_content" height="wrap_content" text="{{@data.homePage.bannerCurrentIndex}}" textSize="11" textColor="@color/kColorPrimaryText" textFontWeight="500" autoSizeTextType="uniform" gravity="right"/>
                                <TextView width="wrap_content" height="wrap_content" text="/" textSize="11" textColor="@color/kColorThreeLevelText" textFontWeight="500" autoSizeTextType="uniform" gravity="right"/>
                                <TextView width="wrap_content" height="wrap_content" text="{{@data.homePage.totalPage}}" textSize="11" textColor="@color/kColorThreeLevelText" textFontWeight="500" autoSizeTextType="uniform" gravity="right"/>
                        </LinearLayout>
                        <ImageView width="match_parent" height="match_parent" cornerRadius="8" borderColor="@color/kColorPrimarySeparator" borderWidth="0.5" visibility="{{@data.homePage.bannerAndroidStrokeVisibility | gone}}"/>
                </FrameLayout>
        </LinearLayout>
        <LinearLayout width="match_parent" height="wrap_content" orientation="vertical">
                <LinearLayout width="343" height="32" marginTop="8" gravity="centerVertical" visibility="{{@data.homePage.showNotice | gone}}" orientation="horizontal">
                        <ImageView width="18" height="18" src="@drawable/edge_engine_notice" scaleType="center_crop"/>
                        <SliderView marginLeft="4" width="0" height="match_parent" weight="1" direction="vertical" autoScroll="true" timeInterval="3" scrollMode="infinite" currentIndex="@data.homePage.currentNoticeIndex" onSelected="@event.homePage.selectedNoticeIndex(@eventParams)">
                                <For data="@data.homePage.noticeList" itemKey="element" typeKey="type">
                                        <Cell width="match_parent" height="match_parent" type="1">
                                                <LinearLayout width="match_parent" height="match_parent" gravity="centerVertical" orientation="horizontal" onClick="@event.homePage.clickNoticeItem()">
                                                        <TextView height="wrap_content" width="wrap_content" text="{{@element.title}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" weight="1"/>
                                                </LinearLayout>
                                        </Cell>
                                </For>
                        </SliderView>
                </LinearLayout>
        </LinearLayout>
        <TextView width="0" height="0" text="" popTemplate="unified_account_pop.xml" popShow="{{@data.homePage.unifiedAccountShow|false}}" onPopDismiss="@event.homePage.unifiedAccountPopDismiss()" popCancelOnTouchOutside="true" popBackgroundDimmed="true" popShowMode="modal" popModalPositon="center"/>
        <TextView width="0" height="0" text="" popTemplate="u_maintenance_pop.xml" popShow="{{@data.homePage.maintenanceShow|false}}" onPopDismiss="@event.homePage.maintenancePopDismiss()" popCancelOnTouchOutside="false" popBackgroundDimmed="true" popShowMode="modal" popModalPositon="center"/>
        <TextView width="0" height="0" text="" popTemplate="child_account_pop.xml" popShow="{{@data.homePage.childAccountShow|false}}" onPopDismiss="@event.homePage.childAccountPopDismiss()" popCancelOnTouchOutside="false" popBackgroundDimmed="true" popShowMode="modal" popModalPositon="center"/>
        <TextView width="0" height="0" text="" popTemplate="copytrading_exp_gold_pop.xml" popShow="{{@data.homePage.expGoldShow|false}}" onPopDismiss="@event.homePage.expGoldDismiss()" popCancelOnTouchOutside="false" popBackgroundDimmed="true" popShowMode="modal" popModalPositon="center"/>
        <TextView width="0" height="0" text="" popTemplate="couponPop.xml" popShow="{{@data.couponPop.homePopShow|false}}" onPopDismiss="@event.couponPop.popDismiss()" popCancelOnTouchOutside="true" popBackgroundDimmed="true" popShowMode="modal" popModalPositon="bottom"/>
        <TextView width="0" height="0" text="" popTemplate="copytrading_trader_review_pop.xml" popShow="{{@data.homePage.trader_reviewShow|false}}" popCancelOnTouchOutside="false" popBackgroundDimmed="true" popShowMode="modal" popModalPositon="center"/>
        <TextView width="0" height="0" text="" popTemplate="violated_reminder_pop.xml" popShow="{{@data.homePage.violatedReminder|false}}" popCancelOnTouchOutside="false" popBackgroundDimmed="true" popShowMode="modal" popModalPositon="center"/>
        <TextView width="0" height="0" text="" popTemplate="copytrading_sharing_ratio_pop.xml" popShow="{{@data.sharingRatio.popShow|false}}" popCancelOnTouchOutside="true" popBackgroundDimmed="true" popShowMode="modal" popModalPositon="bottom"/>
        <TextView width="0" height="0" text="" popTemplate="copytrading_questionnaire_pop.xml" popShow="{{@data.homePage.questionnaireShow|false}}" popCancelOnTouchOutside="false" popBackgroundDimmed="true" popShowMode="modal" popModalPositon="center"/>
            
</LinearLayout>
