<LinearLayout width="match_parent" height="match_parent" orientation="vertical" background="@color/KBaseColorContentBackground">
        <LinearLayout height="match_parent" width="match_parent" gravity="left" visibility="{{@data.setHigherMargin.listVisible | gone}}" onClick="@event.setHigherMargin.closeKeyBoard()" orientation="vertical">
                <Scroller width="match_parent" paddingLeft="0" paddingRight="0" weight="1" orientation="vertical">
                        <LinearLayout height="wrap_content" width="match_parent" gravity="left" orientation="vertical">
                                <LinearLayout paddingLeft="16" paddingRight="16" paddingTop="10" paddingBottom="10" width="match_parent" height="wrap_content" background="@color/KBaseColorDeepestBackground" orientation="horizontal">
                                        <ImageView marginTop="1" width="12" height="12" src="@drawable/edge_engine_copy_trading_cp_lev"/>
                                        <TextView paddingLeft="4" width="match_parent" height="wrap_content" gravity="centerVertical" textSize="12" text="{{@i18n/n_copy_trading_higher_margin_top_text}}" textFontWeight="400" maxLines="0" textColor="@color/kColorPrimaryText"/>
                                </LinearLayout>
                                <For data="@data.setHigherMargin.list" itemKey="item">
                                        <Cell type="normal" width="match_parent" height="wrap_content">
                                                <LinearLayout marginLeft="16" marginRight="16" marginTop="16" width="match_parent" height="wrap_content" orientation="vertical">
                                                        <LinearLayout width="match_parent" height="20" gravity="centerVertical" orientation="horizontal">
                                                                <ImageView width="20" height="20" src="{{@item.icon}}"/>
                                                                <TextView marginLeft="4" height="20" width="match_parent" gravity="centerVertical" textSize="14" text="{{@item.disPlaySymbol}}" textFontWeight="400" textColor="@color/kColorPrimaryText"/>
                                                        </LinearLayout>
                                                        <FrameLayout marginTop="8" height="44" paddingLeft="12" paddingRight="12" width="343" cornerRadius="4" borderColor="{{@item.borderColor}}" borderWidth="1" background="@color/KBaseColorInputBackground" gravity="centerVertical" orientation="horizontal">
                                                                <LinearLayout width="match_parent" height="match_parent" gravity="centerVertical">
                                                                        <EditText background="@color/KBaseColorInputBackground" inputType="number" hint="{{@item.hint}}" height="match_parent" width="270" text="{{@item.marginFixed}}" requestFocus="{{@item.isFocus}}" textFilter="@dataParser.trade_parser(10,0,@eventParams)" onFocusChange="@event.setHigherMargin.onFocusChange({{@item.index}},@eventParams)" onTextChange="@event.setHigherMargin.onTextChange({{@item.index}},@eventParams)" textColor="@color/kColorPrimaryText" textColorHint="@color/baseColorThreeLevelText" textSize="14"/>
                                                                        <View weight="1" width="12"/>
                                                                        <TextView width="wrap_content" text="{{@item.quoteCurrency}}" textColor="@color/KBaseColorSecondaryText" height="match_parent" textSize="14" gravity="center" textFontWeight="500"/>
                                                                </LinearLayout>
                                                        </FrameLayout>
                                                        <LinearLayout width="343" height="wrap_content" marginTop="8" visibility="{{@item.errorVisible|gone}}" orientation="horizontal">
                                                                <TextView width="match_parent" height="wrap_content" maxLines="0" textSize="12" text="{{@item.errorText}}" textFontWeight="400" textColor="#F95A50"/>
                                                        </LinearLayout>
                                                </LinearLayout>
                                        </Cell>
                                </For>
                                <LinearLayout marginLeft="16" marginRight="16" marginTop="12" marginBottom="12" width="wrap_content" height="wrap_content">
                                        <TextView width="343" height="wrap_content" gravity="centerVertical" textSize="12" maxLines="0" text="{{@i18n/n_copy_trading_higher_margin_bottom_text}}" textFontWeight="400" textColor="@color/kColorSecondaryText"/>
                                </LinearLayout>
                        </LinearLayout>
                </Scroller>
                <FrameLayout width="match_parent" height="76" orientation="horizontal" onClick="@event.setHigherMargin.onConfirm()">
                        <View width="match_parent" height="0.5" background="@color/kColorPrimarySeparator"/>
                        <TextView width="match_parent" height="44" marginLeft="16" marginRight="16" marginTop="16" cornerRadius="4" background="@color/baseColorMajorTheme100" gravity="center" text="{{@i18n/n_coupon_select_confirm}}" textSize="14" textColor="@color/KBaseTextColor" textFontWeight="500"/>
                </FrameLayout>
        </LinearLayout>
        <!-- 空样式 -->
        <LinearLayout width="match_parent" height="match_parent" orientation="vertical" gravity="center" visibility="{{@data.setHigherMargin.emptyVisible | gone}}">
                <ImageView width="60" height="60" src="@drawable/edge_engine_empty"/>
                <TextView marginTop="8" width="match_parent" height="wrap_content" gravity="center" textSize="12" text="{{@i18n/n_contract_trade_no_record}}" textColor="@color/eBaseColorThreeLevelText"/>
        </LinearLayout>
</LinearLayout>
