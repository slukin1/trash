<LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content" orientation="vertical" topLeftRadius="8" topRightRadius="8" width="375">

    <LinearLayout gravity="centerVertical" height="44" orientation="horizontal" width="match_parent">

        <TextView height="wrap_content" marginBottom="12" marginStart="16" marginTop="12" text="{{@i18n/n_copy_trading_order_confirm_title}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="16" width="wrap_content"/>

        <View height="0" weight="1" width="0"/>

        <ImageView height="wrap_content" marginRight="16" onClick="@event.copySetting.popOrderConfirmClose()" src="@drawable/edge_engine_copy_trading_dialog_close" width="wrap_content"/>
    </LinearLayout>

    <LinearLayout background="@color/kColorTipsBackground" gravity="centerVertical" height="36" orientation="horizontal" width="match_parent">

        <ImageView height="12" marginLeft="16" src="@drawable/edge_engine_copy_trading_cp_lev" width="12"/>

        <TextView height="wrap_content" marginLeft="2" text="{{@i18n/n_copy_trading_setting_tips}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" width="329" maxLines="3"/>
    </LinearLayout>
    <!--跟单模式-->
    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

        <TextView height="wrap_content" text="{{@i18n/n_copytrading_setting_model}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" width="wrap_content"/>

        <View height="0" weight="1" width="0"/>

        <TextView height="wrap_content" text="{{@data.copySetting.modelType}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
    </LinearLayout>
    <!--保证金、倍数-->
    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

        <TextView height="wrap_content" text="{{@data.copySetting.modeleTypeTitle}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" width="wrap_content"/>

        <View height="0" weight="1" width="0"/>

        <TextView height="wrap_content" text="{{@data.copySetting.modeleTypeSubtitle}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
    </LinearLayout>
    <!--保证金限额-->
    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

        <TextView height="wrap_content" text="{{@i18n/n_copytrading_setting_limit}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" width="wrap_content"/>

        <View height="0" weight="1" width="0"/>

        <TextView height="wrap_content" text="{{@data.copySetting.marginLimitNumTipsCheck}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
    </LinearLayout>

    <!--止盈止损比例-->
    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

        <TextView height="wrap_content" text="{{@i18n/n_copytrading_setting_proportion}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" width="wrap_content"/>

        <View height="0" weight="1" width="0"/>

        <TextView height="wrap_content" text="{{@data.copySetting.fixedAndLimit}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
    </LinearLayout>
    
    <!--开仓滑点保护-->
    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

        <TextView height="wrap_content" text="{{@i18n/n_copy_trading_leversetting_slidingPoint}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" width="wrap_content"/>

        <View height="0" weight="1" width="0"/>

        <TextView height="wrap_content" text="{{@data.copySetting.slidingPoint}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
    </LinearLayout>

    <!--跟单币种-->
    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

        <TextView height="wrap_content" text="{{@i18n/n_copytrading_setting_currency}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="0"/>

        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="wrap_content">
            <TextView height="wrap_content" text="{{@i18n/n_exchange_order_list_all_symbol}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" visibility="{{@data.copySetting.allTextVisible | gone}}" width="wrap_content"/>

            <FrameLayout height="wrap_content" marginRight="-8" visibility="{{@data.copySetting.iconVisible4|gone}}" width="wrap_content">
                <View background="#FFFFFF" cornerRadius="10" height="20" width="20"/>
                <ImageView cornerRadius="10" height="20" marginLeft="2" src="{{@data.copySetting.icon4}}" width="20"/>
            </FrameLayout>

            <FrameLayout height="wrap_content" marginRight="-8" visibility="{{@data.copySetting.iconVisible3|gone}}" width="wrap_content">
                <View background="#FFFFFF" cornerRadius="10" height="20" width="20"/>
                <ImageView cornerRadius="10" height="20" marginLeft="2" src="{{@data.copySetting.icon3}}" width="20"/>
            </FrameLayout>

            <FrameLayout height="wrap_content" marginRight="-8" visibility="{{@data.copySetting.iconVisible2|gone}}" width="wrap_content">
                <View background="#FFFFFF" cornerRadius="10" height="20" width="20"/>
                <ImageView cornerRadius="10" height="20" marginLeft="2" src="{{@data.copySetting.icon2}}" width="20"/>
            </FrameLayout>
            <FrameLayout height="wrap_content" marginRight="-8" visibility="{{@data.copySetting.iconVisible1|gone}}" width="wrap_content">
                <View background="#FFFFFF" cornerRadius="10" height="20" width="20"/>
                <ImageView cornerRadius="10" height="20" marginLeft="2" src="{{@data.copySetting.icon1}}" width="20"/>
            </FrameLayout>
            <FrameLayout height="wrap_content" visibility="{{@data.copySetting.iconVisible0|gone}}" width="wrap_content">
                <View background="#FFFFFF" cornerRadius="10" height="20" width="20"/>
                <ImageView cornerRadius="10" height="20" marginLeft="2" src="{{@data.copySetting.icon0}}" width="20"/>
                <TextView background="#8A8A8E" cornerRadius="10" gravity="center" height="20" marginLeft="2" text="{{@data.copySetting.moreNum}}" textColor="@color/KBaseTextColor" textFontWeight="400" textSize="12" visibility="{{@data.copySetting.moreVisible | gone}}" width="20"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
        
    <!--跟单止损-->
    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

        <TextView height="wrap_content" text="{{@i18n/n_copy_trading_leversetting_stoploss_title}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" width="wrap_content"/>

        <View height="0" weight="1" width="0"/>

        <TextView height="wrap_content" text="{{@data.copySetting.stoploss}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
    </LinearLayout>

    <TextView background="@color/baseColorMajorTheme100" cornerRadius="4" gravity="center" height="44" marginBottom="16" marginLeft="16" marginRight="16" marginTop="32" onClick="@event.copySetting.copy()" text="{{@i18n/n_otc_balance_trade_deal_confirm}}" textColor="#FFFFFF" textFontWeight="500" textSize="14" width="match_parent"/>
        
    <View background="@color/KBaseColorContentBackground" height="34" width="match_parent"/>
</LinearLayout>
