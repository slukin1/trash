<LinearLayout width="match_parent" height="wrap_content" marginTop="11" gravity="centerVertical" orientation="vertical" topRightRadius="8" topLeftRadius="8" paddingTop="8" background="@color/KBaseColorContentBackground">
        <!-- 顶部标题+关闭按钮 -->
        <LinearLayout paddingLeft="16" paddingRight="16" width="match_parent" height="44" gravity="center" orientation="horizontal">
                <TextView height="match_parent" width="wrap_content" gravity="center|left" text="{{@i18n/n_copy_trading_followsetting_trader_share_ratio_title}}" textSize="16" textColor="@color/kColorPrimaryText" textFontWeight="500"/>
                <View weight="1"/>
                <LinearLayout width="44" height="44" gravity="center|right" orientation="horizontal" onClick="@event.sharingRatio.clickedClose()">
                        <ImageView width="28" height="28" src="@drawable/edge_engine_copy_trading_dialog_close"/>
                </LinearLayout>
        </LinearLayout>
        <!-- 开启带单提示 -->
        <LinearLayout width="match_parent" height="wrap_content" gravity="top|left" paddingLeft="16" paddingRight="16" orientation="horizontal">
                <ImageView width="12" height="12" src="@drawable/edge_engine_copy_trading_cp_lev"/>
                <View width="4"/>
                <TextView height="wrap_content" width="327" maxLines="0" gravity="left" text="{{@i18n/n_copy_trading_followsetting_trader_start_alert}}" textSize="12" textColor="@color/kColorPrimaryText" textFontWeight="400"/>
        </LinearLayout>
        <!-- 分成比例选项菜单 -->
        <LinearLayout width="match_parent" height="wrap_content" gravity="centerVertical" orientation="vertical" onclick="@event.sharingRatio.clickedItem()">
                <For data="@data.sharingRatio.modelList" itemKey="element" typeKey="type">
                        <Cell width="match_parent" height="wrap_content" type="1">
                                <LinearLayout width="match_parent" marginLeft="16" marginRight="16" height="48" gravity="center" orientation="horizontal" onClick="@event.sharingRatio.clickedMenuItem({{@element.index}})">
                                        <TextView gravity="left|center" height="48" width="wrap_content" text="{{@element.ratio}}" textColor="{{@element.textColor}}" textFontWeight="500" textSize="14"/>
                                        <View weight="1"/>
                                        <ImageView width="16" height="16" src="@drawable/edge_engine_trader_list_sort_selected" visibility="{{@element.selImageVisibility}}"/>
                                </LinearLayout>
                        </Cell>
                </For>
        </LinearLayout>
        <LinearLayout gravity="centerVertical" height="wrap_content" marginLeft="16" marginRight="16" marginTop="16" orientation="horizontal" width="match_parent">
                <ImageView height="14" onClick="@event.sharingRatio.checkAgreementChange()" src="{{@data.sharingRatio.checkAgreementBtn}}" width="14"/>
                <RichTextView height="wrap_content" marginLeft="5" marginRight="16" richText="{{@data.sharingRatio.richTextData}}" textColor="@color/kColorPrimaryText" textSize="12" width="match_parent"/>
        </LinearLayout>
        <TextView gravity="center" height="48" marginTop="16" marginLeft="16" marginRight="16" cornerRadius="4" text="{{@i18n/n_contract_string_confirm}}" textColor="@color/kColorWhiteText" textFontWeight="500" textSize="14" width="match_parent" background="@color/kColorMajorTheme100" onClick="@event.sharingRatio.clickedDone()"/>
        <View width="match_parent" height="34"/>
</LinearLayout>
