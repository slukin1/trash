<!-- 币种 收益额 -->
<LinearLayout width="match_parent" height="match_parent" paddingLeft="16" paddingRight="16" orientation="vertical" background="@color/KBaseColorContentBackground">
    <!-- 列表数据 -->
    <RecyclerView height="match_parent" width="match_parent" gravity="left" orientation="vertical" data="@data.orderDetail.list" itemKey="item" visibility="{{@data.orderDetail.listVisible | gone}}">
        <Header marginTop="16" marginBottom="8" width="match_parent" height="wrap_content">
            <LinearLayout width="match_parent" height="wrap_content" orientation="vertical">
                <!-- 币种 状态 -->
                <LinearLayout width="match_parent" height="18" orientation="horizontal" gravity="centerVertical">
                    <!-- 币种名称 -->
                    <TextView paddingTop="1" paddingBottom="1" paddingLeft="2" paddingRight="2" cornerRadius="2" width="wrap_content" height="wrap_content" text="{{@data.orderDetail.header.label}}" textColor="#FFFFFF" textSize="10" textFontWeight="500" background="{{@data.orderDetail.header.labelColor}}"/>
                    <TextView marginLeft="4" width="wrap_content" height="wrap_content" textFontWeight="500" textSize="14" textColor="@color/kColorPrimaryText" text="{{@data.orderDetail.header.symbol}}"/>
                    <TextView width="0" height="wrap_content" weight="1" text="{{@data.orderDetail.header.orderStatus}}" textColor="{{@data.orderDetail.header.orderStatusColor}}" textSize="12" textFontWeight="500" gravity="right"/>
                </LinearLayout>
                <!-- tag -->
                <LinearLayout width="match_parent" height="16" marginTop="6" gravity="centerVertical" orientation="horizontal">
                    <For data="@data.orderDetail.taglist" itemKey="item">
                        <Cell type="normal" width="wrap_content" height="match_parent" background="@color/baseColorInputBackground" marginRight="4" cornerRadius="2">
                            <TextView paddingTop="2" paddingBottom="2" paddingLeft="4" paddingRight="4" width="wrap_content" height="match_parent" text="{{@item.title}}" textSize="10" textFontWeight="500" textColor="@color/kColorSecondaryText"/>
                        </Cell>
                    </For>
                </LinearLayout>
                <!-- 开仓Gird -->
                <LinearLayout marginTop="12" width="match_parent" height="wrap_content" orientation="horizontal">
                    <For data="@data.orderDetail.girdToplist" itemKey="item">
                        <Cell type="normal" width="114" height="wrap_content">
                            <TextView height="wrap_content" width="match_parent" text="{{@item.title}}" gravity="{{@item.gravity}}" textSize="12" textFontWeight="400" textColor="@color/kColorThreeLevelText" maxLines="0"/>
                        </Cell>
                        <Cell type="right" width="114" height="wrap_content">
                            <TextView height="wrap_content" width="match_parent" text="{{@item.title}}" gravity="right" textSize="12" textFontWeight="400" textColor="@color/kColorThreeLevelText" maxLines="0"/>
                        </Cell>
                    </For>
                </LinearLayout>
                <LinearLayout width="match_parent" height="16" orientation="horizontal">
                    <For data="@data.orderDetail.girdToplist" itemKey="item">
                        <Cell type="normal" width="114" height="16">
                            <TextView height="16" width="match_parent" text="{{@item.value}}" gravity="{{@item.gravity}}" textSize="12" textFontWeight="400" textColor="{{@item.color}}" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>
                        </Cell>
                        <Cell type="right" width="114" height="16">
                            <TextView height="16" width="match_parent" text="{{@item.value}}" gravity="right" textSize="12" textFontWeight="400" textColor="{{@item.color}}" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>
                        </Cell>
                    </For>
                </LinearLayout>
                <LinearLayout marginTop="12" width="match_parent" height="wrap_content" orientation="horizontal">
                    <For data="@data.orderDetail.girdBottomlist" itemKey="item">
                        <Cell type="normal" width="114" height="wrap_content">
                            <TextView height="wrap_content" width="match_parent" text="{{@item.title}}" gravity="{{@item.gravity}}" textSize="12" textFontWeight="400" textColor="@color/kColorThreeLevelText" maxLines="0"/>
                        </Cell>
                    </For>
                </LinearLayout>
                <LinearLayout marginBottom="12" width="match_parent" height="16" orientation="horizontal">
                    <For data="@data.orderDetail.girdBottomlist" itemKey="item">
                        <Cell type="normal" width="114" height="16">
                            <TextView height="16" width="match_parent" text="{{@item.value}}" gravity="{{@item.gravity}}" textSize="12" textFontWeight="400" textColor="{{@item.color}}" autoSizeMinTextSize="8" autoSizeTextType="uniform"/>
                        </Cell>
                    </For>
                </LinearLayout>
                <!-- 分割线 -->
                <TextView width="match_parent" height="0.5" background="@color/KBaseColorPrimarySeparator"/>
            </LinearLayout>
        </Header>
        <Cell type="normal" width="match_parent" height="24">
            <LinearLayout width="match_parent" height="match_parent" gravity="centerVertical" orientation="horizontal" onClick="@event.orderDetail.copyOrderNo('{{@item.value}}','{{@item.copy}}')">
                <TextView width="wrap_content" height="wrap_content" text="{{@item.title}}" textColor="@color/kColorThreeLevelText" textSize="12" textFontWeight="400" gravity="left"/>
                <TextView weight="1" width="0" height="wrap_content" text="{{@item.value}}" textColor="@color/kColorPrimaryText" textSize="12" textFontWeight="400" gravity="right"/>
                <!-- 复制粘贴图标 -->
                <ImageView marginLeft="4" width="14" height="14" src="@drawable/edge_engine_orderid_copy" visibility="{{@item.copy}}"/>
            </LinearLayout>
        </Cell>
    </RecyclerView>
    <!-- 空样式 -->
    <LinearLayout width="match_parent" height="match_parent" orientation="vertical" gravity="center" visibility="{{@data.orderDetail.emptyVisible | gone}}">
        <ImageView width="60" height="60" src="@drawable/edge_engine_empty"/>
        <TextView marginTop="8" width="match_parent" height="wrap_content" gravity="center" textSize="12" text="{{@i18n/n_contract_trade_no_record}}" textColor="@color/eBaseColorThreeLevelText"/>
    </LinearLayout>
</LinearLayout>
