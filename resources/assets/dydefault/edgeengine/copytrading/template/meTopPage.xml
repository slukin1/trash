<LinearLayout height="wrap_content" orientation="vertical" width="375">
    <LinearLayout gravity="right" height="0" orientation="horizontal" width="match_parent">

        <TextView height="0" onPopDismiss="@event.meTopPage.selfSettingPopDismiss()" popArrowDirection="up" popArrowHeight="0" popArrowWidth="0" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="bottom" popShow="{{@data.meTopPage.showSelfSetting|false}}" popShowMode="anchor" popTemplate="selfSetting.xml" text="" width="0"/>
    </LinearLayout>
    <LinearLayout gravity="centerVertical" height="wrap_content" marginLeft="16" marginRight="16" marginTop="16" orientation="horizontal" width="match_parent">

        <TextView height="wrap_content" text="{{@i18n/copy_trading_total_profits}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>

        <TextView height="wrap_content" text="(USDT)" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>

        <ImageView height="14" marginLeft="4" onClick="@event.meTopPage.showHide()" src="{{@data.meTopPage.icShowHide}}" width="14"/>
    </LinearLayout>

    <TextView height="wrap_content" marginLeft="16" marginRight="16" marginTop="4" text="{{@data.meTopPage.totalProfit}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="24" width="match_parent"/>

    <LinearLayout gravity="centerVertical" height="wrap_content" marginLeft="16" marginRight="16" marginTop="4" onClick="@event.meTopPage.totalProfitShow()" orientation="horizontal" width="match_parent">

        <TextView height="wrap_content" text="{{@i18n/n_today_profit}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>

        <TextView height="wrap_content" text="{{@data.meTopPage.todayProfit}}" textColor="{{@data.meTopPage.todayProfitColor}}" textFontWeight="400" textSize="12" width="wrap_content"/>

        <ImageView height="14" src="@drawable/edge_engine_next_step" visibility="{{@data.meTopPage.isIncomeArrayShow}}" width="14"/>
    </LinearLayout>

    <LinearLayout background="@color/kColorTipsBackground" cornerRadius="8" gravity="centerVertical" height="wrap_content" marginLeft="16" marginRight="16" marginTop="16" orientation="horizontal" paddingBottom="12" paddingLeft="12" paddingRight="12" paddingTop="8" width="match_parent">

        <LinearLayout height="wrap_content" orientation="vertical" paddingTop="4" weight="1" width="0">
            <TextView height="wrap_content" maxLines="0" text="{{@data.meTopPage.totalAssetsTitle}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="match_parent"/>

            <TextView height="wrap_content" marginTop="8" text="{{@data.meTopPage.totalAsset|--}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
        </LinearLayout>

        <LinearLayout gravity="center" height="wrap_content" orientation="vertical" paddingTop="4" weight="1" width="0">

            <LinearLayout gravity="left" height="wrap_content" orientation="horizontal" width="match_parent">

                <BottomLineTextView gravity="left" height="wrap_content" maxLines="0" onClick="@event.meTopPage.availableTapAction()" text="{{@data.meTopPage.available}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" weight="1" width="200"/>
            </LinearLayout>

            <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="8" onClick="@event.meTopPage.toTransfer()" orientation="horizontal" width="match_parent">

                <TextView height="wrap_content" maxLines="0" text="{{@data.meTopPage.availableTransfer|--}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>

                <ImageView height="12" marginLeft="2" src="@drawable/edge_engine_transfer" width="12"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout gravity="right" height="wrap_content" onClick="@event.meTopPage.couponTapAction()" orientation="vertical" visibility="{{@data.couponPop.meCouponVisibility|gone}}" weight="1" width="0">
            <FrameLayout height="wrap_content" width="match_parent">
                <LinearLayout gravity="right" height="wrap_content" orientation="horizontal" paddingRight="8" visibility="{{@data.couponPop.showCouponPoint|gone}}" width="match_parent">
                    <ImageView height="8" src="@drawable/edge_engine_red_point" width="8"/>
                </LinearLayout>
                <LinearLayout gravity="right" height="wrap_content" orientation="horizontal" width="match_parent">
                    <TextView height="wrap_content" marginTop="4" text="{{@i18n/n_coupon_return_title}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>

                    <ImageView height="14" marginTop="4" src="@drawable/edge_engine_next_step" width="14"/>
                </LinearLayout>
            </FrameLayout>
            <TextView height="wrap_content" marginTop="8" text="{{@data.couponPop.couponNumber}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView height="0" onPopDismiss="@event.couponPop.popDismiss()" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="bottom" popShow="{{@data.couponPop.mePopShow|false}}" popShowMode="modal" popTemplate="couponPop.xml" text="" width="0"/>
    <TextView height="0" onPopDismiss="@event.meTopPage.popDismiss()" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="bottom" popShow="{{@data.meTopPage.totalProfitShow | false}}" popShowMode="modal" popTemplate="incomeLlist_pop.xml" text="" width="0"/>
    <View height="0" onPopDismiss="@event.commonPop.popDismiss()" popCancelOnTouchOutside="false" popModalPositon="center" popShow="{{@data.commonPop.popShow}}" popShowMode="modal" popTemplate="commonPop.xml"/>
</LinearLayout>
