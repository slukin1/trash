<LinearLayout background="@color/eContentTabDialogBackground" height="match_parent" orientation="vertical" width="375">

    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="12" onClick="@event.currencySelection.typeSelelct(0)" orientation="horizontal" width="match_parent">
        <LinearLayout height="wrap_content" orientation="vertical" weight="1">
            <TextView autoSizeMinTextSize="10" autoSizeTextType="uniform" height="20" marginLeft="16" text="{{@i18n/n_copytrading_selectcurrency_all}}" textColor="@color/kColorPrimaryText" textFontWeight="700" textSize="14" width="wrap_content"/>
            <TextView autoSizeMinTextSize="10" autoSizeTextType="uniform" height="wrap_content" marginLeft="16" marginTop="4" maxLines="2" text="{{@i18n/n_copytrading_selectcurrency_all_tips}}" textColor="@color/kColorSecondaryText" textFontWeight="400" textSize="12" width="300"/>
        </LinearLayout>
        <ImageView height="16" marginRight="16" src="{{@data.currencySelection.allSelectionImage}}" width="16"/>
    </LinearLayout>

    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="36" onClick="@event.currencySelection.typeSelelct(1)" orientation="horizontal" width="match_parent">
        <LinearLayout height="wrap_content" orientation="vertical" weight="1">
            <TextView autoSizeMinTextSize="10" autoSizeTextType="uniform" height="20" marginLeft="16" text="{{@i18n/n_copytrading_selectcurrency_custom}}" textColor="@color/kColorPrimaryText" textFontWeight="700" textSize="14" width="wrap_content"/>
            <TextView autoSizeMinTextSize="10" autoSizeTextType="uniform" height="wrap_content" marginLeft="16" marginTop="4" maxLines="2" text="{{@i18n/n_copytrading_selectcurrency_custom_tips}}" textColor="@color/kColorSecondaryText" textFontWeight="400" textSize="12" width="300"/>
        </LinearLayout>
        <ImageView height="16" marginRight="16" src="{{@data.currencySelection.custemSelectionImage}}" width="16"/>
    </LinearLayout>

    <Scroller marginTop="24" orientation="vertical" weight="1" width="375">
        <GirdView crossAxisItemCount="2" crossAxisSpace="6" data="@data.currencySelection.currencys" height="{{@data.currencySelection.currencySelectionHeight}}" itemKey="item" mainAxisSpace="6" marginLeft="16" marginRight="16" orientation="vertical" typeKey="cellType" visibility="{{@data.currencySelection.listVisible | gone}}" width="match_parent">
            <GirdCell cellType="1" height="44" width="165">
                <LinearLayout background="{{@item.selectionCurrencyBackgroudColor}}" borderColor="{{@item.selectionCurrencyBorderColor}}" borderWidth="1" cornerRadius="4" gravity="centerVertical" height="44" onClick="@event.currencySelection.itemSelelct({{@item.index}})" orientation="horizontal" width="165">
                    <ImageView cornerRadius="10" gravity="left | center" height="20" marginLeft="12" src="{{@item.icon}}" width="20"/>
                    <TextView autoSizeMinTextSize="10" autoSizeTextType="uniform" height="wrap_content" marginLeft="6" text="{{@item.title}}" textColor="{{@item.selectionCurrencyTextColor}}" textFontWeight="400" textSize="14" width="match_parent"/>
                </LinearLayout>
            </GirdCell>
        </GirdView>
    </Scroller>

    <View background="@color/KBaseColorPrimarySeparator" height="0.5" width="375"/>

    <LinearLayout height="wrap_content" orientation="vertical" width="match_parent">
        <LinearLayout gravity="centerVertical" height="wrap_content" marginLeft="16" marginRight="16" marginTop="16" orientation="horizontal" visibility="{{@data.currencySelection.controlVisible | gone}}" width="match_parent">
            <TextView autoSizeMinTextSize="10" autoSizeTextType="uniform" height="20" text="{{@data.currencySelection.selectionCountString}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="wrap_content"/>

            <View height="1" weight="1"/>

            <LinearLayout gravity="centerVertical" height="wrap_content" onClick="@event.currencySelection.allSelelct()" orientation="horizontal" width="wrap_content">
                <ImageView height="14" src="{{@data.currencySelection.allImage}}" width="14"/>
                <TextView autoSizeMinTextSize="10" autoSizeTextType="uniform" height="wrap_content" marginLeft="4" text="{{@i18n/n_live_gift_select_all}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <TextView autoSizeMinTextSize="10" autoSizeTextType="uniform" background="{{@data.currencySelection.actionBackgroudColor}}" cornerRadius="4" gravity="center" height="40" marginBottom="16" marginLeft="16" marginRight="16" marginTop="10" onClick="@event.currencySelection.confirm()" text="{{@data.currencySelection.actionTitle}}" textColor="{{@data.currencySelection.actionColor}}" textFontWeight="400" textSize="14" width="match_parent"/>
    </LinearLayout>
</LinearLayout>
