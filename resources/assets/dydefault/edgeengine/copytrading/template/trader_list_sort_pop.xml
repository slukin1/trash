<LinearLayout width="match_parent" height="wrap_content" marginTop="11" gravity="centerVertical" orientation="vertical" topRightRadius="8" topLeftRadius="8" paddingTop="8" background="@color/KBaseColorContentBackground">
    <LinearLayout width="match_parent" height="wrap_content" gravity="centerVertical" orientation="vertical" onclick="@event.clickedItem()">
        <For data="@data.sortPop.sortMenuList" itemKey="element" typeKey="type">
            <Cell width="match_parent" height="wrap_content" type="1">
                <LinearLayout width="match_parent" marginLeft="16" marginRight="16" height="48" gravity="center" orientation="horizontal" onClick="@event.clickedMenuItem({{@element.index}})">
                    <TextView gravity="left|center" height="48" width="wrap_content" text="{{@element.title}}" textColor="{{@element.textColor}}" textFontWeight="500" textSize="14"/>
                    <View weight="1"/>
                    <ImageView width="16" height="16" src="@drawable/edge_engine_trader_list_sort_selected" visibility="{{@element.selImageVisibility}}"/>
                </LinearLayout>
            </Cell>
        </For>
    </LinearLayout>
    <View width="match_parent" height="8" background="@color/kColorDeepestBackground"/>
    <TextView gravity="center" height="48" text="{{@i18n/n_contract_cancel}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="500" textSize="14" width="match_parent" onClick="@event.sortPop.clickedCancel()"/>
    <View width="match_parent" height="34"/>
</LinearLayout>
