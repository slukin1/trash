<LinearLayout background="@color/KBaseColorContentBackground" height="match_parent" orientation="vertical" width="match_parent">
    <View height="0" onPopDismiss="@event.profitTipsPop.popDismiss()" popCancelOnTouchOutside="false" popModalPositon="center" popShow="{{@data.profitTipsPop.popShow}}" popShowMode="modal" popTemplate="profitTipsPop.xml"/>
    <FrameLayout height="match_parent" width="match_parent">
        <!-- 列表数据 -->
        <RecyclerView data="@data.followOrders.list" gravity="centerVertical" height="match_parent" itemKey="item" loadMoreStatus="{{@data.followOrders.loadMoreStatus}}" onLoadMore="@event.followOrders.onLoadMore()" onRefresh="@event.followOrders.onRefresh()" orientation="horizontal" refreshStatus="{{@data.followOrders.refreshStatus}}" typeKey="type" visibility="{{@data.followOrders.listVisible | invisible}}" width="match_parent">
            <Header width="match_parent" height="28">
                <!-- 收益说明 -->
                <LinearLayout width="wrap_content" height="28" marginLeft="16" marginTop="12" onClick="@event.profitTipsPop.popShow(1)">
                        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_copytrading_profit_title}}" textSize="12" textColor="@color/kColorSecondaryText"/>
                        <ImageView marginLeft="4" marginTop="1" width="12" height="12" scaleType="fitXY" src="@drawable/edge_engine_copy_trading_fok"/>
                </LinearLayout>
            </Header>
            <Cell height="wrap_content" type="normal" width="match_parent">
                <LinearLayout height="wrap_content" orientation="vertical" width="match_parent">
                    <!-- 数据行 -->
                    <LinearLayout height="wrap_content" onClick="@event.followOrders.clickedItem({{@item.index}})" orientation="vertical" width="match_parent">
                        <!-- 币种 收益额 -->
                        <LinearLayout height="wrap_content" marginLeft="16" marginRight="16" marginTop="16" orientation="horizontal" width="match_parent">
                            <!-- 币种名称 -->
                            <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" weight="1" width="0">
                                <TextView background="{{@item.directionColor}}" cornerRadius="2" height="14" paddingBottom="1" paddingLeft="2" paddingRight="2" paddingTop="1" text="{{@item.directionLabel}}" textColor="#FFFFFF" textSize="10" width="wrap_content"/>
                                <TextView height="wrap_content" marginLeft="4" text="{{@item.symbolDesc}}" textColor="@color/kColorPrimaryText" textFontWeight="600" textSize="14" width="wrap_content"/>
                                <LinearLayout height="14" marginLeft="10" orientation="horizontal" width="40">
                                    <ImageView height="14" onClick="@event.followOrders.share({{@item.index}})" scaleType="fitXY" src="@drawable/edge_engine_share_list" width="14"/>
                                </LinearLayout>
                            </LinearLayout>

                            <TextView background="@color/KBaseColorInputBackground" cornerRadius="4" gravity="center" height="28" onClick="@event.followOrders.onTradeClose({{@item.index}})" paddingLeft="16" paddingRight="16" text="{{@item.stopLossBtn}}" textColor="{{@item.stopProfitColor}}" textFontWeight="500" textSize="12" width="wrap_content"/>
                        </LinearLayout>
                        <!-- tag行 -->
                        <LinearLayout height="16" marginLeft="16" marginRight="16" orientation="horizontal" width="wrap_content">
                            <TextView background="@color/baseColorInputBackground" cornerRadius="2" height="wrap_content" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@item.modeTypeName}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
                            <TextView background="@color/baseColorInputBackground" cornerRadius="2" height="wrap_content" marginLeft="4" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@item.leverDesc}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
                            <TextView background="@color/baseColorInputBackground" cornerRadius="2" height="wrap_content" marginLeft="4" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@item.directionDesc}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
                        </LinearLayout>
                        <!-- 跟单交易员信息 -->
                        <LinearLayout gravity="centerVertical" height="wrap_content" marginLeft="16" marginRight="16" marginTop="12" onClick="@event.followOrders.toTraderDetail('{{@item.traderUserSign}}')" orientation="horizontal" width="match_parent">

                            <ImageView cornerRadius="12" height="24" scaleType="center_crop" src="{{@item.traderImg}}" width="24"/>

                            <TextView height="wrap_content" marginLeft="4" text="{{@item.traderNick}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" width="match_parent"/>
                        </LinearLayout>
                        <!-- 收益 收益率 -->
                        <LinearLayout height="wrap_content" marginLeft="16" marginRight="16" marginTop="12" orientation="horizontal" width="match_parent">
                            <!-- 收益 -->
                            <TextView height="wrap_content" maxLines="0" text="{{@i18n/n_copy_trading_income}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                            <!-- 收益率 -->
                            <TextView gravity="right" height="wrap_content" maxLines="0" text="{{@i18n/n_copy_trading_yield}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                        </LinearLayout>
                        <LinearLayout gravity="centerVertical" height="16" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent">
                            <!-- 收益 -->
                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" isSubscript="true" text="{{@item.openProfitStr}}" textColor="{{@item.openProfitColor}}" textFontWeight="500" textSize="14" weight="1" width="0"/>
                            <!-- 收益率 -->
                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" gravity="right" height="wrap_content" text="{{@item.openProfitRateStr}}" textColor="{{@item.openProfitColor}}" textFontWeight="500" textSize="14" weight="1" width="0"/>
                        </LinearLayout>
                        <!-- 开仓价格 开仓数量 保证金-->
                        <LinearLayout height="wrap_content" marginLeft="16" marginRight="16" marginTop="12" orientation="horizontal" width="match_parent">
                            <!-- 开仓价格 -->
                            <TextView height="wrap_content" maxLines="0" text="{{@item.openPriceTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                            <!-- 开仓数量 -->
                            <TextView height="wrap_content" maxLines="0" text="{{@item.openAmountTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                            <!-- 保证金 -->
                            <TextView gravity="right" height="wrap_content" maxLines="0" text="{{@item.bondAmountTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                        </LinearLayout>
                        <LinearLayout gravity="centerVertical" height="16" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent">
                            <!-- 开仓价格 -->
                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" isSubscript="true" text="{{@item.openPriceStr}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                            <!-- 开仓数量 -->
                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" text="{{@item.openAmountVolume}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                            <!-- 保证金 -->
                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" gravity="right" height="wrap_content" text="{{@item.bondAmountStr}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                        </LinearLayout>
                        <!-- 止盈价格 止损价格 开仓手续费 -->
                        <LinearLayout height="wrap_content" marginLeft="16" marginRight="16" marginTop="12" orientation="horizontal" width="match_parent">
                            <!-- 止盈价格 -->
                            <TextView height="wrap_content" maxLines="0" text="{{@item.stopProfitPriceTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                            <!-- 止损价格 -->
                            <LinearLayout gravity="left" height="wrap_content" orientation="horizontal" weight="1" width="0">
                                <TextView height="wrap_content" maxLines="0" maxWidth="98" text="{{@item.stopLossPriceTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" width="wrap_content"/>
                                <ImageView height="16" onClick="@event.followOrders.showStopProfitAlert({{@item.index}})" paddingBottom="2" paddingLeft="4" paddingTop="2" src="@drawable/edge_engine_copy_trading_fok" visibility="{{@item.stopProfitPopVisible}}" width="16"/>
                            </LinearLayout>
                            <!-- 开仓手续费 -->
                            <TextView gravity="right" height="wrap_content" maxLines="0" text="{{@item.openFeeTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                        </LinearLayout>
                        <LinearLayout gravity="centerVertical" height="16" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent">
                            <!-- 止盈价格 -->
                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" isSubscript="true" text="{{@item.stopProfitPrice}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                            <!-- 止损价格 -->
                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" isSubscript="true" text="{{@item.stopLossPrice}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                            <!-- 开仓手续费 -->
                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" gravity="right" height="wrap_content" text="{{@item.openFeeStr}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                        </LinearLayout>
                        <LinearLayout height="wrap_content" marginLeft="16" marginRight="16" marginTop="12" orientation="horizontal" width="match_parent">
                            <!-- 预估爆仓价格 -->
                            <TextView height="wrap_content" maxLines="0" text="{{@item.explosionPriceTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                            <!-- 交易员 -->
<!--                            <TextView height="wrap_content" maxLines="0"-->
<!--                                text="{{@item.traderTitle}}" textColor="@color/kColorThreeLevelText"-->
<!--                                textSize="12" weight="2" width="0" />-->
                        </LinearLayout>

                        <LinearLayout gravity="centerVertical" height="16" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent">
                            <!-- 预估爆仓价格 -->
                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" isSubscript="true" text="{{@item.explosionPrice}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                            <!-- 交易员 -->
<!--                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform"-->
<!--                                height="wrap_content" text="{{@item.traderNick}}"-->
<!--                                textColor="@color/kColorPrimaryText" textSize="12" weight="2"-->
<!--                                width="0" />-->
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 开仓时间 订单编号-->
                    <LinearLayout background="@color/KAssetTopHeaderContentBackground" height="48" marginTop="12" orientation="vertical" visibility="{{@item.orderIdVisible}}" width="match_parent">
                        <!-- 开仓时间 -->
                        <LinearLayout gravity="left" height="16" marginLeft="16" marginRight="16" marginTop="6" orientation="horizontal" width="match_parent">
                            <TextView gravity="left" height="wrap_content" text="{{@item.openTimeDesc}}" textColor="@color/kColorThreeLevelText" textSize="11" width="wrap_content"/>
                        </LinearLayout>
                        <!-- 订单编号 -->
                        <LinearLayout gravity="centerVertical" height="16" marginLeft="16" marginRight="16" marginTop="4" onClick="@event.followOrders.copyOrderId(`{{@item.orderId}}`)" orientation="horizontal" width="match_parent">
                            <TextView gravity="left" height="wrap_content" text="{{@item.orderIdDesc}}" textColor="@color/kColorThreeLevelText" textSize="11" width="wrap_content"/>
                            <!-- 复制粘贴图标 -->
                            <ImageView height="12" marginLeft="4" src="@drawable/edge_engine_me_copy" width="12"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 分割线 -->
                    <TextView background="@color/KBaseColorPrimarySeparator" height="0.5" marginLeft="16" marginRight="16" marginTop="12" width="match_parent"/>
                </LinearLayout>
            </Cell>
        </RecyclerView>
        <!-- 空样式 -->
        <LinearLayout gravity="centerHorizontal" height="wrap_content" orientation="vertical" visibility="{{@data.followOrders.emptyVisible | gone}}" width="match_parent">
            <ImageView height="60" marginTop="40" src="@drawable/edge_engine_empty" width="60"/>
            <TextView gravity="center" height="wrap_content" marginTop="8" text="{{@i18n/n_contract_trade_no_record}}" textColor="@color/eBaseColorThreeLevelText" textSize="12" width="match_parent"/>
            <LinearLayout background="@color/eContentNavUnselectedBackground" cornerRadius="4" gravity="center" height="40" marginTop="20" paddingLeft="40" paddingRight="40" width="wrap_content">
                <TextView gravity="center" height="18" onClick="@event.followOrders.gotoTrade()" text="{{@i18n/n_live_recommend_copy}}" textColor="@color/kColorMajorTheme100" textFontWeight="500" textSize="14" width="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <!-- 平仓弹窗 -->
    <TextView height="0" onPopDismiss="@event.tradeClose.followerClose()" popBackgroundDimmed="true" popCancelOnTouchOutside="true" popModalPositon="bottom" popShow="{{@data.tradeClose.followerTradeClosePopShow|false}}" popShowMode="modal" popTemplate="follower_trade_close.xml" text="" width="0"/>
</LinearLayout>
