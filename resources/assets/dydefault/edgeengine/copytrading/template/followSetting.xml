<LinearLayout height="match_parent" orientation="vertical" width="375" background="@color/KBaseColorContentBackground">
    <LinearLayout width="match_parent" height="58" marginTop="10" marginLeft="16" marginRight="16" gravity="centerVertical" orientation="horizontal" onClick="@event.followSetting.nicknameTapped()">
        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_copy_trading_followsetting_trader_nickname}}" textSize="16" textColor="@color/kColorPrimaryText" textFontWeight="400"/>
        <View weight="1" height="0" width="0"/>
        <LinearLayout width="wrap_content" height="20" orientation="horizontal" gravity="centerVertical">
            <TextView width="wrap_content" height="wrap_content" text="{{@data.followSetting.nickname}}" marginRight="0" textSize="14" textColor="@color/kColorSecondaryText" textFontWeight="400"/>
            <ImageView marginRight="0" width="20" height="20" src="@drawable/edge_engine_icon_copysetting_next2"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout width="match_parent" height="58" gravity="centerVertical" marginLeft="16" marginRight="16" orientation="horizontal" onClick="@event.followSetting.introductionTapped()">
        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_kline_intro_title}}" textSize="16" textColor="@color/kColorPrimaryText" textFontWeight="400"/>
        <View weight="1" height="0" width="0"/>
        <LinearLayout width="wrap_content" height="20" orientation="horizontal" gravity="centerVertical">
            <TextView width="wrap_content" height="wrap_content" text="{{@data.followSetting.introduction}}" textSize="14" textColor="@color/kColorSecondaryText" textFontWeight="400" maxWidth="132"/>
            <ImageView marginRight="0" width="20" height="20" src="@drawable/edge_engine_icon_copysetting_next2"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout width="match_parent" height="58" gravity="centerVertical" marginLeft="16" marginRight="16" orientation="horizontal" onClick="@event.followSetting.labelSettingTapped()">
        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_copy_trading_followsetting_trader_label}}" textSize="16" textColor="@color/kColorPrimaryText" textFontWeight="400"/>
        <View weight="1" height="0" width="0"/>
        <LinearLayout width="wrap_content" height="20" orientation="horizontal" gravity="centerVertical">
            <TextView width="wrap_content" height="wrap_content" text="{{@data.followSetting.labelString}}" textSize="14" textColor="@color/kColorSecondaryText" textFontWeight="400"/>
            <ImageView marginRight="0" width="20" height="20" src="@drawable/edge_engine_icon_copysetting_next2"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout width="match_parent" height="58" gravity="centerVertical" marginLeft="16" marginRight="16" orientation="horizontal" visibility="{{@data.followSetting.openStatus | gone}}">
        <LinearLayout width="wrap_content" height="43" orientation="vertical">
            <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_copy_trading_followsetting_trader_open}}" textSize="16" textColor="@color/kColorPrimaryText" textFontWeight="400"/>
            <TextView width="wrap_content" height="wrap_content" text="{{@data.followSetting.distributionSelectionText}}" textSize="12" textColor="@color/kColorSecondaryText" textFontWeight="400"/>
        </LinearLayout>
        <View weight="1" height="0" width="0"/>
        <ImageView marginRight="0" width="40" height="24" src="@drawable/edge_engine_copytrading_switch_on" onClick="@event.followSetting.openTapped()"/>
    </LinearLayout>
    <LinearLayout width="match_parent" height="58" gravity="centerVertical" marginLeft="16" marginRight="16" orientation="horizontal" visibility="{{@data.followSetting.itemVisible | visible}}">
        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_copy_trading_followsetting_trader_open}}" textSize="16" textColor="@color/kColorPrimaryText" textFontWeight="400"/>
        <View weight="1" height="0" width="0"/>
        <ImageView marginRight="0" width="40" height="24" src="@drawable/edge_engine_copytrading_switch_off" onClick="@event.followSetting.openTapped()"/>
    </LinearLayout>
    <LinearLayout width="match_parent" height="58" gravity="centerVertical" orientation="horizontal" marginLeft="16" marginRight="16" onClick="@event.followSetting.followerTapped()" visibility="{{@data.followSetting.openStatus | gone}}" popTemplate="follow_numbers_pop.xml" popShow="{{@data.followSetting.followNumbersPopShow|false}}" popCancelOnTouchOutside="true" popBackgroundDimmed="true" popShowMode="modal" popModalPositon="bottom" onPopDismiss="@event.followNumbers.popDismiss()">
        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_copy_trading_followsetting_trader_maximum}}" textSize="16" textColor="@color/kColorPrimaryText" textFontWeight="400"/>
        <View weight="1" height="0" width="0"/>
        <LinearLayout width="wrap_content" height="20" orientation="horizontal" gravity="centerVertical">
            <TextView width="wrap_content" height="wrap_content" text="{{@data.followSetting.fullUserNum}}" textSize="14" textColor="@color/kColorSecondaryText" textFontWeight="400"/>
            <ImageView marginRight="0" width="20" height="20" src="@drawable/edge_engine_icon_copysetting_next2"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout width="match_parent" height="58" gravity="centerVertical" orientation="horizontal" marginLeft="16" marginRight="16" onClick="@event.followSetting.followerTapped()" visibility="{{@data.followSetting.itemVisible | visible}}">
        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_copy_trading_followsetting_trader_maximum}}" textSize="16" textColor="@color/kColorPrimaryText" textFontWeight="400"/>
        <View weight="1" height="0" width="0"/>
        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_copy_trading_followsetting_trader_start_tips}}" textSize="14" textColor="@color/KBaseInputInvalidTipColor" textFontWeight="400"/>
    </LinearLayout>
    
    <View height="0" popCancelOnTouchOutside="false" popShowMode="modal" popModalPositon="bottom" onPopDismiss="@event.followSetting.labelSettingPopDismiss()" popShow="{{@data.followSetting.labelSettingPopShow}}" popTemplate="labelSetting_pop.xml"/>
    <View height="0" popCancelOnTouchOutside="false" popShowMode="modal" popModalPositon="bottom" onPopDismiss="@event.followSetting.distributionSelectionPopDismiss()" popShow="{{@data.followSetting.distributionSelectionPopShow}}" popTemplate="distribution_selection_pop.xml"/>
    <View height="0" popCancelOnTouchOutside="false" popShowMode="modal" popModalPositon="center" onPopDismiss="@event.followSetting.openFollowPopDismiss()" popShow="{{@data.followSetting.openFollowPopShow}}" popTemplate="openFollowDialog.xml"/>
    <View height="0" popCancelOnTouchOutside="false" popShowMode="modal" popModalPositon="center" onPopDismiss="@event.followSetting.closeFollowPopDismiss()" popShow="{{@data.followSetting.closeFollowPopShow}}" popTemplate="closeFollowDialog.xml"/>
    <View height="0" popCancelOnTouchOutside="false" popShowMode="modal" popModalPositon="center" popShow="{{@data.followSetting.nicknamePopShow}}" popTemplate="nicknameDialog.xml"/>
</LinearLayout>
