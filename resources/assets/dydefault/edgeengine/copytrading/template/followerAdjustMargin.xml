<LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content" onClick="@event.followerPosition.closeKeyBoard()" orientation="vertical" topLeftRadius="8" topRightRadius="8" width="375">

    <LinearLayout gravity="centerVertical" height="wrap_content" marginBottom="12" marginLeft="16" marginRight="16" marginTop="12" orientation="horizontal" width="match_parent">

        <TextView height="wrap_content" text="{{@i18n/n_copy_trading_adjust_position_margin}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="16" width="wrap_content"/>

        <View height="0" weight="1" width="0"/>

        <ImageView height="28" onClick="@event.followerPosition.onAdjustMarginClose()" src="@drawable/trade_margin_coupon_title_close" width="28"/>
    </LinearLayout>

    <LinearLayout height="wrap_content" marginBottom="16" marginLeft="16" marginRight="16" orientation="vertical" width="match_parent">
        <!-- 增加 减少 -->
        <LinearLayout background="@color/KBaseColorInputBackground" cornerRadius="4" gravity="centerVertical" height="36" marginBottom="8" marginTop="8" orientation="horizontal" width="match_parent">

            <TextView background="{{@data.followerPosition.addBackColor}}" cornerRadius="4" gravity="center" height="match_parent" marginBottom="2" marginLeft="2" marginTop="2" onClick="@event.followerPosition.onAdjustMargin(0)" text="{{@i18n/n_copy_trading_position_add_margin}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="169"/>

            <View height="0" weight="1" width="1"/>

            <TextView background="{{@data.followerPosition.reduceBackColor}}" cornerRadius="4" gravity="center" height="match_parent" marginBottom="2" marginRight="2" marginTop="2" onClick="@event.followerPosition.onAdjustMargin(1)" text="{{@i18n/n_copy_trading_position_reduce_margin}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="169"/>
        </LinearLayout>
        <!-- 数量 -->
        <LinearLayout gravity="centerVertical" height="44" orientation="horizontal" width="match_parent">

            <LinearLayout background="@color/KBaseColorInputBackground" cornerRadius="4" gravity="centerVertical" height="match_parent" marginBottom="4" marginTop="4" orientation="horizontal" width="match_parent">

                <EditText bindText="@data.followerPosition.amount" gravity="left" height="wrap_content" hint="{{@i18n/n_contract_trade_input_amount}}" inputType="numberDecimal" marginLeft="8" onFocusChange="@event.followerPosition.onFocusChange(1,@eventParams)" onTextChange="@event.followerPosition.onTextChange(1,@eventParams)" requestFocus="{{@data.followerPosition.amountFocus}}" textColor="@color/kColorPrimaryText" textColorHint="@color/eButtonUnenabledBgColor" textFilter="@dataParser.trade_parser(10,4,@eventParams)" textFontWeight="500" textSize="14" weight="1" width="wrap_content"/>

                <TextView gravity="center" height="match_parent" marginLeft="12" text="USDT" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>

                <View background="@color/kColorPrimarySeparator" gravity="center" height="16" marginLeft="12" width="1"/>

                <TextView gravity="center" height="match_parent" marginLeft="12" marginRight="8" onClick="@event.followerPosition.onMax()" text="{{@i18n/n_otc_max}}" textColor="@color/baseColorMajorTheme100" textFontWeight="500" textSize="14" width="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <!-- 当前仓位持仓保证金 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" marginBottom="4" marginTop="4" maxWidth="180" text="{{@i18n/n_copy_trading_position_margin}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="12" width="wrap_content"/>

            <View height="1" weight="1"/>

            <TextView gravity="right" height="wrap_content" marginTop="4" maxWidth="140" text="{{ @data.followerPosition.marginPosition | -- }}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>

        </LinearLayout>

        <!-- 最大可增加 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" marginBottom="4" marginTop="4" maxWidth="180" text="{{@data.followerPosition.maxMargin}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="12" width="wrap_content"/>

            <View height="1" weight="1"/>

            <TextView gravity="right" height="wrap_content" marginTop="4" maxWidth="140" text="{{ @data.followerPosition.available | -- }}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
        </LinearLayout>

        <!-- 调整后参考强平价 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" marginBottom="4" marginTop="4" maxWidth="180" text="{{@i18n/n_contract_refer_force_cose_price}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="12" width="wrap_content"/>

            <View height="1" weight="1"/>

            <TextView gravity="right" height="wrap_content" marginTop="4" maxWidth="140" text="{{ @data.followerPosition.liquidationPrice | -- }}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
        </LinearLayout>

        <LinearLayout height="wrap_content" orientation="vertical" width="match_parent">

            <LinearLayout gravity="right" height="76" orientation="vertical" width="match_parent">

                <TextView background="@color/baseColorMajorTheme100" cornerRadius="4" gravity="center" height="match_parent" marginBottom="16" marginTop="16" onClick="@event.followerPosition.onConfirm()" text="{{@i18n/n_copy_trading_confirm}}" textColor="#FFFFFF" textFontWeight="500" textSize="14" width="match_parent"/>
            </LinearLayout>

            <View height="20" width="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
