<LinearLayout width="375" height="wrap_content" orientation="vertical">
    <LinearLayout gravity="centerHorizontal" height="wrap_content" orientation="vertical" width="match_parent">
        <LinearLayout width="240" height="wrap_content" orientation="vertical" cornerRadius="8" background="@color/KBaseColorContentBackground">
            <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal">
                <TextView width="wrap_content" height="wrap_content" marginTop="12" marginLeft="12" textSize="14" textFontWeight="500" textColor="@color/kColorPrimaryText" text="2"/>
                <TextView width="wrap_content" height="wrap_content" marginTop="13" textSize="10" textFontWeight="400" textColor="@color/kColorSecondaryText" text="/2"/>
            </LinearLayout>
            <TextView width="match_parent" height="wrap_content" marginTop="4" marginLeft="12" marginRight="12" textSize="12" textFontWeight="400" maxLines="0" maxWidth="216" textColor="@color/kColorSecondaryText" text="{{@i18n/n_copy_trading_setting_guide_step2}}"/>
            <LinearLayout marginTop="12" marginRight="12" marginBottom="12" width="match_parent" height="24" orientation="horizontal" gravity="right" layout_gravity="right">
                <TextView width="wrap_content" height="match_parent" paddingLeft="16" paddingRight="16" gravity="center" background="@color/KBaseColorInputBackground" cornerRadius="4" textSize="12" textFontWeight="500" textColor="@color/kColorPrimaryText" text="{{@i18n/n_exchange_guide_last}}" onClick="@event.copySetting.guideLast()"/>
                <TextView width="wrap_content" height="match_parent" marginLeft="12" paddingLeft="16" paddingRight="16" gravity="center" background="@color/kColorMajorTheme100" cornerRadius="4" textSize="12" textFontWeight="500" textColor="@color/KBaseTextColor" text="{{@i18n/n_grid_user_guide_complete}}" onClick="@event.copySetting.nextPop(2)"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView width="8" height="4" src="@drawable/edge_engine_earn_pop_down"/>
    </LinearLayout>
    <LinearLayout width="match_parent" height="wrap_content" gravity="top" orientation="vertical" cornerRadius="8" marginLeft="10" marginRight="10" background="@color/KBaseColorContentBackground">
        <LinearLayout height="wrap_content" orientation="vertical" marginTop="8" marginLeft="6" marginRight="6" marginBottom="8" width="match_parent">

            <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent">

                <BottomLineTextView height="18" text="{{@i18n/n_copy_trading_leversetting_amount}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="150"/>

                <View height="1" weight="1"/>

                <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="wrap_content" marginRight="0">
                    <TextView gravity="right" height="wrap_content" marginLeft="0" text="{{@data.copySetting.modelString}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
                    <ImageView height="12" marginLeft="2" src="@drawable/edge_engine_icon_copysetting_next" width="12"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout background="@color/KBaseColorInputBackground" borderColor="{{@data.copySetting.copyAmountBoardColor}}" borderWidth="1" cornerRadius="8" gravity="centerVertical" height="50" marginTop="12" orientation="horizontal" width="match_parent">

                <EditText bindText="@data.copySetting.copyAmount" gravity="centerVertical" height="match_parent" hint="{{@data.copySetting.copyAmountHint}}" inputType="numberDecimal" marginLeft="8" onFocusChange="@event.copySetting.onFocusChange(1,@eventParams)" onTextChange="@event.copySetting.onTextChange(1,@eventParams)" requestFocus="{{@data.copySetting.copyAmountFocus}}" textColor="@color/kColorPrimaryText" textColorHint="@color/eButtonUnenabledBgColor" textFilter="@dataParser.trade_parser(10,2,@eventParams)" textFontWeight="500" textSize="14" weight="1" width="0"/>

                <TextView gravity="right" height="wrap_content" marginLeft="8" marginRight="8" paddingBottom="4" paddingTop="4" text="{{@data.copySetting.amountUint}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="500" textSize="14" width="wrap_content"/>

            </LinearLayout>

            <TextView height="wrap_content" marginTop="8" text="{{@data.copySetting.editErrorTips}}" textColor="@color/kColorPriceRed" textFontWeight="400" textSize="12" visibility="{{@data.copySetting.fixedMarginErrorVisible|gone}}" width="wrap_content"/>

            <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="8" orientation="horizontal" width="match_parent">
                <TextView height="wrap_content" text="{{@i18n/n_grid_trade_available_money}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>

                <TextView height="wrap_content" marginLeft="4" text="{{@data.copySetting.availableTransferStr}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" width="wrap_content"/>

                <TextView height="wrap_content" marginLeft="8" text="{{@i18n/n_live_gift_transfer}}" textColor="@color/kColorMajorTheme100" textFontWeight="400" textSize="12" width="wrap_content"/>
            </LinearLayout>
            <!-- 止损比例 -->
            <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="24" orientation="horizontal" width="match_parent">
                <TextView height="wrap_content" text="{{@i18n/n_copy_trading_sl_percent}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" weight="1" width="0"/>
                <LinearLayout background="@color/KBaseColorInputBackground" cornerRadius="4" gravity="centerVertical" height="28" orientation="horizontal" width="90" enable="false">
                    <EditText bindText="@data.copySetting.stopLossRatio" gravity="centerVertical" height="match_parent" hint="{{@data.copySetting.stopLossRatioHint}}" inputType="number" marginLeft="8" onFocusChange="@event.copySetting.onFocusChange(11,@eventParams)" onTextChange="@event.copySetting.onTextChange(11,@eventParams)" requestFocus="{{@data.copySetting.stopLossRatioFocus}}" textColor="@color/kColorPrimaryText" textColorHint="@color/eButtonUnenabledBgColor" textFilter="@dataParser.trade_parser(10,0,@eventParams)" textFontWeight="500" textSize="12" weight="1" width="0" enable="false"/>
                    <TextView gravity="right" height="wrap_content" marginRight="8" text="%" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="14" width="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <SeekBar bubbleShow="false" bindProgress="@data.copySetting.currentProgress1" bubbleTextColor="@color/KBaseTextColor" bubbleTextSize="11" height="16" marginTop="8" max="{{@data.copySetting.maxLever1}}" min="@data.copySetting.minLever1" onValueChange="@event.copySetting.sliderValueChanged(1,@eventParams)" sectionCount="4" width="match_parent" enable="false"/>
            <LinearLayout height="16" orientation="horizontal" width="match_parent">
                <TextView height="match_parent" text="{{@data.copySetting.stopLossTitle1}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" marginStart="2" textSize="12" weight="1" width="0"/>
                <TextView height="match_parent" text="{{@data.copySetting.stopLossTitle2}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" marginLeft="3" textSize="12" weight="1" width="0"/>
                <TextView height="match_parent" text="{{@data.copySetting.stopLossTitle3}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" marginLeft="0" textSize="12" weight="1" width="0"/>
                <TextView height="match_parent" text="{{@data.copySetting.stopLossTitle4}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" marginLeft="6" textSize="12" weight="1" width="0"/>
                <TextView height="match_parent" text="{{@data.copySetting.stopLossTitle5}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
