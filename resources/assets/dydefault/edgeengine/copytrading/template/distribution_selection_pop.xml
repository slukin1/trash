<LinearLayout width="match_parent" height="wrap_content" gravity="centerVertical" orientation="vertical" topRightRadius="8" topLeftRadius="8" background="@color/KBaseColorContentBackground">
    <LinearLayout paddingLeft="16" paddingRight="16" width="match_parent" height="44" gravity="center" orientation="horizontal">
        <TextView height="match_parent" width="wrap_content" gravity="center|left" text="{{@i18n/n_copy_trading_followsetting_trader_share_ratio_title}}" textSize="16" textColor="@color/kColorPrimaryText" textFontWeight="500"/>
        <View weight="1"/>
        <LinearLayout width="44" height="44" gravity="center|right" orientation="horizontal" onClick="@event.followSetting.clickedClose()">
            <ImageView width="28" height="28" src="@drawable/edge_engine_copy_trading_dialog_close"/>
        </LinearLayout>
    </LinearLayout>
    <View background="@color/kColorPrimarySeparator" width="match_parent" height="0.5"/>
    <LinearLayout width="match_parent" height="wrap_content" gravity="centerVertical" orientation="vertical">
        <For data="@data.followSetting.ratios" itemKey="element" typeKey="type">
            <Cell width="match_parent" height="wrap_content" type="1">
                <LinearLayout width="match_parent" marginLeft="16" marginRight="16" height="48" gravity="center" orientation="horizontal" onClick="@event.followSetting.clickedItem({{@element.index}})">
                    <TextView gravity="left|center" height="48" width="wrap_content" text="{{@element.title}}" textColor="{{@element.textColor}}" textFontWeight="500" textSize="14"/>
                    <View weight="1"/>
                    <ImageView width="16" height="16" src="@drawable/edge_engine_trader_list_sort_selected" visibility="{{@element.selImageVisibility}}"/>
                </LinearLayout>
            </Cell>
        </For>
    </LinearLayout>
    <View width="match_parent" height="8"/>
    <TextView width="match_parent" height="44" background="@color/baseColorMajorTheme100" marginLeft="16" marginRight="16" textColor="#FFFFFF" onClick="@event.followSetting.radioConfirm()" marginBottom="16" cornerRadius="4" gravity="center" marginTop="16" textSize="14" textFontWeight="500" text="{{@i18n/n_otc_balance_trade_deal_confirm}}"/>
    <View background="@color/KBaseColorContentBackground" height="34" width="match_parent"/>
</LinearLayout>
