<LinearLayout background="#161616" height="wrap_content" orientation="vertical" width="match_parent" paddingBottom="12">

    <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" paddingLeft="16" paddingRight="16" paddingTop="12" width="match_parent">

        <LinearLayout height="wrap_content" marginRight="20" orientation="vertical" weight="1" width="0">

            <TextView height="wrap_content" text="{{@data.traderInfo.traderInfo.nickName}}" textColor="#E6E6E6" textFontWeight="500" textSize="24" width="match_parent"/>

            <LinearLayout gravity="centerVertical" height="16" marginTop="4" orientation="horizontal" visibility="{{@data.traderInfo.showTraderTags | gone}}" width="match_parent">

                <For data="@data.traderInfo.commonTags" itemKey="item">

                    <Cell background="#313132" cornerRadius="2" height="match_parent" marginRight="2" type="normal" visibility="{{@item.isShowCell | gone}}" width="wrap_content">

                        <TextView height="wrap_content" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@item.tag}}" textColor="#8C8C93" textFontWeight="400" textSize="10" width="wrap_content"/>
                    </Cell>
                </For>
            </LinearLayout>

            <LinearLayout height="wrap_content" marginTop="10" orientation="horizontal" width="match_parent">

                <LinearLayout height="wrap_content" orientation="vertical" weight="1" width="0">

                    <TextView height="wrap_content" text="{{@i18n/n_copy_trading_number}}" textColor="#8C8C93" textFontWeight="400" textSize="12" width="match_parent"/>

                    <TextView height="wrap_content" marginTop="2" text="{{@data.traderInfo.copyNum}}" textColor="#E6E6E6" textFontWeight="500" textSize="12" width="match_parent"/>
                </LinearLayout>

                <LinearLayout height="wrap_content" orientation="vertical" weight="1" width="0">

                    <TextView height="wrap_content" text="{{@i18n/n_copytrading_accumulated_follower_num}}" textColor="#8C8C93" textFontWeight="400" textSize="12" width="match_parent"/>

                    <TextView height="wrap_content" marginTop="2" text="{{@data.traderInfo.traderData.totalCopyUserNum}}" textColor="#E6E6E6" textFontWeight="500" textSize="12" width="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView cornerRadius="47" height="94" scaleType="center_crop" src="{{@data.traderInfo.traderInfo.imgUrl}}" width="94"/>
    </LinearLayout>
    
    <LinearLayout gravity="bottom" width="match_parent" height="wrap_content" marginLeft="16" marginRight="16" paddingTop="20" orientation="horizontal" onClick="@event.traderInfo.updownTapped()" visibility="{{@data.traderInfo.showIntroduction | gone}}">
        <TextView height="wrap_content" marginLeft="0" maxWidth="343" text="{{@data.traderInfo.introduction}}" textColor="#8C8C93" textFontWeight="400" textSize="12" weight="1" width="0" maxLines="{{@data.traderInfo.maxLines}}"/>
        <ImageView height="8" width="8" src="{{@data.traderInfo.arrowImage}}" marginLeft="-4" padddingBottom="2"/>
    </LinearLayout>

</LinearLayout>
