<LinearLayout width="match_parent" height="wrap_content" marginTop="11" gravity="centerVertical" orientation="vertical" topRightRadius="8" topLeftRadius="8" paddingTop="8" background="@color/KBaseColorContentBackground">

    <!-- 顶部标题+关闭按钮 -->
    <LinearLayout paddingLeft="16" paddingRight="16" width="match_parent" height="44" gravity="center" orientation="horizontal">
        <TextView height="match_parent" width="wrap_content" gravity="center|left" text="{{@i18n/n_otc_order_filter}}" textSize="16" textColor="@color/kColorPrimaryText" textFontWeight="500"/>
        <View weight="1"/>
        <LinearLayout width="44" height="44" gravity="center|right" orientation="horizontal" onClick="@event.sortPop.clickedClose()">
            <ImageView width="28" height="28" src="@drawable/edge_engine_copy_trading_dialog_close"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 分跟线 -->
    <View background="@color/kColorPrimarySeparator" width="match_parent" height="0.5"/>

    <!-- 交易员资产(USDT) -->
    <LinearLayout marginLeft="16" marginRight="16" width="match_parent" height="wrap_content" gravity="left" orientation="vertical">
        <TextView marginTop="16" height="wrap_content" width="wrap_content" gravity="center|left" text="{{@data.sortPop.assetTitle}}" textSize="14" textColor="@color/kColorPrimaryText" textFontWeight="400"/>
        <View height="8"/>
        <SeekBar bubbleTextColor="@color/kColorWhiteText" bubbleTextSize="11" bubbleShow="true" height="16" onValueChange="@event.sortPop.assetSliderValueChanged(@eventParams)" bindProgress="@data.sortPop.assetProgress" min="{{@data.sortPop.assetMin}}" max="{{@data.sortPop.assetMax}}" sectionCount="1" unit="" width="match_parent"/>

        <LinearLayout width="match_parent" height="16" gravity="center" orientation="horizontal">
            <TextView height="match_parent" width="wrap_content" gravity="center|left" text="{{@data.sortPop.assetMin}}" textSize="12" textColor="@color/kColorThreeLevelText" textFontWeight="400"/>
            <View weight="1"/>
            <TextView height="match_parent" width="wrap_content" gravity="center|left" text="{{@data.sortPop.assetMax}}" textSize="12" textColor="@color/kColorThreeLevelText" textFontWeight="400"/>
        </LinearLayout>
    </LinearLayout>

    <View width="match_parent" height="16"/>

    <!-- 带单规模 -->
    <LinearLayout marginLeft="16" marginRight="16" width="match_parent" height="wrap_content" gravity="left" orientation="vertical">
        <TextView marginTop="16" height="wrap_content" width="wrap_content" gravity="center|left" text="{{@data.sortPop.auMTitle}}" textSize="14" textColor="@color/kColorPrimaryText" textFontWeight="400"/>
        <View height="8"/>
        <SeekBar bubbleTextColor="@color/kColorWhiteText" bubbleTextSize="11" bubbleShow="true" height="16" onValueChange="@event.sortPop.scaleSliderValueChanged(@eventParams)" bindProgress="@data.sortPop.scaleProgress" min="{{@data.sortPop.aumMin}}" max="{{@data.sortPop.aumMax}}" sectionCount="1" unit="" width="match_parent"/>

        <LinearLayout width="match_parent" height="16" gravity="center" orientation="horizontal">
            <TextView height="match_parent" width="wrap_content" gravity="center|left" text="{{@data.sortPop.aumMin}}" textSize="12" textColor="@color/kColorThreeLevelText" textFontWeight="400"/>
            <View weight="1"/>
            <TextView height="match_parent" width="wrap_content" gravity="center|left" text="{{@data.sortPop.aumMax}}" textSize="12" textColor="@color/kColorThreeLevelText" textFontWeight="400"/>
        </LinearLayout>
    </LinearLayout>

    <!--  胜率  -->
    <LinearLayout width="match_parent" height="wrap_content" marginTop="16" gravity="center|left" orientation="vertical">
        <TextView marginLeft="16" height="20" width="wrap_content" gravity="center|left" text="{{@i18n/copy_trading_win_rate}}" textSize="14" textColor="@color/kColorPrimaryText" textFontWeight="400"/>
        <View height="12"/>
        <GirdView crossAxisItemCount="2" crossAxisSpace="8" data="@data.sortPop.winRateRange" height="{{@data.sortPop.winRateViewHeight}}" itemKey="item" mainAxisSpace="12" marginLeft="16" marginRight="16" orientation="vertical" typeKey="cellType" visibility="visible" width="match_parent">
            <GirdCell cellType="1" height="{{@data.sortPop.winRateCellHeight}}" width="167.5">
                <LinearLayout cornerRadius="4" gravity="centerVertical" height="36" borderWidth="{{@item.borderWidth}}" borderColor="@color/kColorMajorTheme100" onClick="@event.sortPop.winRateItemSelected({{@item.index}})" orientation="horizontal" width="match_parent" background="{{@item.background}}">
                    <TextView height="match_parent" width="match_parent" text="{{@item.text}}" textColor="@color/kColorPrimaryText" textFontWeight="500" gravity="center" textSize="12"/>
                </LinearLayout>
            </GirdCell>
        </GirdView>
    </LinearLayout>

    <!--  带单人数  -->
    <LinearLayout width="match_parent" height="wrap_content" marginTop="16" gravity="center|left" orientation="vertical">
        <TextView marginLeft="16" height="20" width="wrap_content" gravity="center|left" text="{{@i18n/n_copytrading_follow_num}}" textSize="14" textColor="@color/kColorPrimaryText" textFontWeight="400"/>
        <View height="12"/>
        <GirdView crossAxisItemCount="2" crossAxisSpace="8" data="@data.sortPop.followerNumRange" height="{{@data.sortPop.followViewHeight}}" itemKey="item" mainAxisSpace="12" marginLeft="16" marginRight="16" orientation="vertical" typeKey="cellType" visibility="visible" width="match_parent">
            <GirdCell cellType="1" height="36" width="167.5">
                <LinearLayout cornerRadius="4" gravity="centerVertical" height="36" borderWidth="{{@item.borderWidth}}" borderColor="@color/kColorMajorTheme100" onClick="@event.sortPop.followItemSelected({{@item.index}})" orientation="horizontal" width="match_parent" background="{{@item.background}}">
                    <TextView height="match_parent" width="match_parent" text="{{@item.text}}" textColor="@color/kColorPrimaryText" textFontWeight="500" gravity="center" textSize="12"/>
                </LinearLayout>
            </GirdCell>
        </GirdView>
    </LinearLayout>

    <!--  隐藏满员  -->
    <LinearLayout width="match_parent" height="24" marginTop="16" marginLeft="16" marginRight="16" gravity="center" orientation="horizontal">
        <TextView height="match_parent" width="wrap_content" gravity="center|left" text="{{@i18n/n_copytrading_hidden_full}}" textSize="14" textColor="@color/kColorPrimaryText" textFontWeight="400"/>
        <View weight="1"/>
        <ImageView height="24" width="40" gravity="center|right" src="{{@data.sortPop.fullHideSwitch}}" onClick="@event.sortPop.clickedFullHideSwitch()"/>
    </LinearLayout>

    <!--  重置、确定  -->
    <LinearLayout width="match_parent" height="44" marginTop="32" marginLeft="16" marginRight="16" gravity="center" orientation="horizontal">
        <TextView height="match_parent" width="167.5" cornerRadius="4" gravity="center" text="{{@i18n/n_exchange_order_reset}}" textSize="14" textColor="@color/kColorPrimaryText" background="@color/KBaseColorInputBackground" textFontWeight="500" onClick="@event.sortPop.clickedReset()"/>
        <View width="8"/>
        <TextView height="match_parent" width="167.5" cornerRadius="4" gravity="center" text="{{@i18n/n_contract_string_confirm}}" textSize="14" textColor="@color/kColorWhiteText" background="@color/kColorMajorTheme100" textFontWeight="500" onClick="@event.sortPop.clickedDone()"/>
    </LinearLayout>

    <View width="match_parent" height="34"/>
</LinearLayout>
