<LinearLayout background="@color/KBaseColorContentBackground" height="match_parent" orientation="vertical" width="match_parent">
    <FrameLayout height="match_parent" width="match_parent">
        <!-- 列表数据 -->
        <RecyclerView data="@data.historyFollowOrders.list" gravity="centerVertical" height="match_parent" itemKey="item" loadMoreStatus="{{@data.historyFollowOrders.loadMoreStatus}}" onLoadMore="@event.historyFollowOrders.onLoadMore()" onRefresh="@event.historyFollowOrders.onRefresh()" orientation="vertical" refreshStatus="{{@data.historyFollowOrders.refreshStatus}}" typeKey="type" visibility="{{@data.historyFollowOrders.listVisible | invisible}}" width="match_parent">
            <Cell height="wrap_content" type="normal" width="match_parent">
                <LinearLayout height="wrap_content" orientation="vertical" width="match_parent">
                    <!-- 数据行 -->
                    <LinearLayout height="wrap_content" onClick="@event.historyFollowOrders.clickedItem({{@item.index}})" orientation="vertical" width="match_parent">
                        <!-- 币种 状态 -->
                        <LinearLayout gravity="centerVertical" height="18" marginLeft="16" marginRight="16" marginTop="16" orientation="horizontal" width="match_parent">
                            <!-- 币种名称 -->
                            <TextView background="{{@item.directionColor}}" cornerRadius="2" height="14" paddingBottom="1" paddingLeft="2" paddingRight="2" paddingTop="1" text="{{@item.directionLabel}}" textColor="#FFFFFF" textSize="10" width="wrap_content"/>
                            <TextView height="wrap_content" marginLeft="4" text="{{@item.symbolDesc}}" textColor="@color/kColorPrimaryText" textFontWeight="600" textSize="14" width="wrap_content"/>
                            <ImageView gravity="left" height="14" src="@drawable/edge_engine_next_step" width="14"/>
                            <LinearLayout height="14" marginLeft="10" orientation="horizontal" width="40">
                                <ImageView height="14" onClick="@event.historyFollowOrders.share({{@item.index}})" scaleType="fitXY" src="@drawable/edge_engine_share_list" width="14"/>
                            </LinearLayout>
                            <TextView gravity="right" height="wrap_content" onClick="@event.historyFollowOrders.showFokAlert('{{@item.status}}', '{{@item.index}}')" text="{{@item.statusDesc}}" textColor="{{@item.statusDescColor}}" textFontWeight="500" textSize="12" weight="1" width="0"/>
                            <ImageView height="12" onClick="@event.historyFollowOrders.showFokAlert('{{@item.status}}', '{{@item.index}}')" paddingLeft="4" src="@drawable/edge_engine_copy_trading_fok" visibility="{{@item.statusMore}}" width="16"/>
                        </LinearLayout>
                        <!-- tag行 -->
                        <LinearLayout gravity="center" height="16" marginLeft="16" marginRight="16" marginTop="6" orientation="horizontal" width="match_parent">
                            <LinearLayout height="match_parent" width="wrap_content">
                                <TextView background="@color/baseColorInputBackground" cornerRadius="2" height="wrap_content" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@item.modeTypeName}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
                                <TextView background="@color/baseColorInputBackground" cornerRadius="2" height="wrap_content" marginLeft="4" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@item.leverDesc}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
                                <TextView background="@color/baseColorInputBackground" cornerRadius="2" height="wrap_content" marginLeft="4" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@item.directionDesc}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
                            </LinearLayout>
                            <View height="match_parent" weight="1" width="0"/>
                        </LinearLayout>
                        <!-- 跟单交易员信息 -->
                        <LinearLayout gravity="centerVertical" height="wrap_content" marginLeft="16" marginRight="16" marginTop="12" onClick="@event.historyFollowOrders.toTraderDetail('{{@item.traderUserSign}}')" orientation="horizontal" width="match_parent">

                            <ImageView cornerRadius="12" height="24" scaleType="center_crop" src="{{@item.traderImg}}" width="24"/>

                            <TextView height="wrap_content" marginLeft="4" text="{{@item.traderNick}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="12" width="match_parent"/>
                        </LinearLayout>
                        <!-- 收益额 收益率-->
                        <LinearLayout height="wrap_content" marginLeft="16" marginRight="16" marginTop="12" orientation="horizontal" visibility="{{@item.showProfit}}" width="match_parent">
                            <!-- 收益 -->
                            <TextView height="wrap_content" maxLines="0" text="{{@item.profitTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                            <!-- 收益率 -->
                            <TextView gravity="right" height="wrap_content" maxLines="0" text="{{@i18n/n_copy_trading_yield}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                        </LinearLayout>
                        <LinearLayout gravity="centerVertical" height="16" marginLeft="16" marginRight="16" orientation="horizontal" visibility="{{@item.showProfit}}" width="match_parent">
                            <!-- 收益 -->
                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" isSubscript="true" text="{{@item.profitStr}}" textColor="{{@item.profitDescColor}}" textFontWeight="500" textSize="14" weight="1" width="0"/>
                            <!-- 收益率 -->
                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" gravity="right" height="wrap_content" text="{{@item.profitRateStr}}" textColor="{{@item.profitDescColor}}" textFontWeight="500" textSize="14" weight="1" width="0"/>
                        </LinearLayout>
                        <!-- 开仓价格 开仓数量 收益额-->
                        <LinearLayout height="wrap_content" marginLeft="16" marginRight="16" marginTop="12" orientation="horizontal" width="match_parent">
                            <!-- 开仓价格 -->
                            <TextView height="wrap_content" maxLines="0" text="{{@item.openPriceTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                            <!-- 开仓数量 -->
                            <TextView height="wrap_content" maxLines="0" text="{{@item.openAmountTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                            <!-- 平仓价格 -->
                            <TextView gravity="right" height="wrap_content" maxLines="0" text="{{@item.closePriceTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                        </LinearLayout>
                        <LinearLayout gravity="centerVertical" height="16" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent">
                            <!-- 开仓价格 -->
                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" isSubscript="true" text="{{@item.openPriceStr}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                            <!-- 开仓数量 -->
                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" text="{{@item.openAmountVolume}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                            <!-- 平仓价格 -->
                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" gravity="right" height="wrap_content" text="{{@item.closePriceStr}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                        </LinearLayout>
                        <!-- 平仓价格 带单分成 -->
                        <LinearLayout height="wrap_content" marginLeft="16" marginRight="16" marginTop="12" orientation="horizontal" width="match_parent">
                            <!-- 盈利分成 -->
                            <TextView height="wrap_content" maxLines="0" text="{{@item.followTakesTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                            <!--                            &lt;!&ndash; 盈利分成 &ndash;&gt;-->
                            <!--                            <TextView height="wrap_content" maxLines="0"-->
                            <!--                                text="{{@item.followTakesTitle}}"-->
                            <!--                                textColor="@color/kColorThreeLevelText" textSize="12" weight="1"-->
                            <!--                                width="0" />-->
                            <!--                            <View height="16" weight="1" width="0" />-->
                        </LinearLayout>
                        <LinearLayout gravity="centerVertical" height="16" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent">
                            <!--                            &lt;!&ndash; 盈利分成 &ndash;&gt;-->
                            <!--                            <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform"-->
                            <!--                                height="wrap_content" text="{{@item.closePriceStr}}" isSubscript="true"-->
                            <!--                                textColor="@color/kColorPrimaryText" textSize="12" weight="1"-->
                            <!--                                width="0" />-->
                            <!-- 盈利分成 -->
                            <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" weight="1" width="0">
                                <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" text="{{@item.followTakes}}" textColor="{{@item.followTakesColor}}" textSize="12" width="wrap_content"/>
                                <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" text="{{@item.followRate}}" textColor="@color/kColorPrimaryText" textSize="12" width="wrap_content"/>
                            </LinearLayout>
                            <!--                            <View height="match_parent" weight="1" width="0" />-->
                        </LinearLayout>
                    </LinearLayout>
                    <!-- 分割线 -->
                    <TextView background="@color/KBaseColorPrimarySeparator" height="0.5" marginLeft="16" marginRight="16" marginTop="12" width="match_parent"/>
                </LinearLayout>
            </Cell>
        </RecyclerView>
        <!-- 空样式 -->
        <LinearLayout gravity="centerHorizontal" height="wrap_content" orientation="vertical" visibility="{{@data.historyFollowOrders.emptyVisible | gone}}" width="match_parent">
            <ImageView height="60" marginTop="40" src="@drawable/edge_engine_empty" width="60"/>
            <TextView gravity="center" height="wrap_content" marginTop="8" text="{{@i18n/n_contract_trade_no_record}}" textColor="@color/eBaseColorThreeLevelText" textSize="12" width="match_parent"/>
            <LinearLayout background="@color/eContentNavUnselectedBackground" cornerRadius="4" gravity="center" height="40" marginTop="20" paddingLeft="40" paddingRight="40" width="wrap_content">
                <TextView gravity="center" height="18" onClick="@event.historyFollowOrders.gotoTrade()" text="{{@i18n/n_live_recommend_copy}}" textColor="@color/kColorMajorTheme100" textFontWeight="500" textSize="14" width="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <View background="@color/KBaseColorInputBackground" height="0" onPopDismiss="@event.historyFollowOrders.popDismiss()" popCancelOnTouchOutside="false" popModalPositon="center" popShow="{{@data.historyFollowOrders.fokFailedReasonShow}}" popShowMode="modal" popTemplate="history_order_fok_reason_pop.xml" width="match_parent"/>
</LinearLayout>
