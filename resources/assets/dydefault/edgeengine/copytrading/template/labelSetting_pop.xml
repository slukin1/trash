<LinearLayout width="match_parent" height="wrap_content" gravity="centerVertical" orientation="vertical" topRightRadius="8" topLeftRadius="8" background="@color/KBaseColorContentBackground">
    <LinearLayout paddingLeft="16" paddingRight="16" width="match_parent" height="44" gravity="center" orientation="horizontal">
        <TextView height="match_parent" width="wrap_content" gravity="center|left" text="{{@i18n/n_copy_trading_followsetting_trader_modify_label}}" textSize="16" textColor="@color/kColorPrimaryText" textFontWeight="500"/>
        <View weight="1"/>
        <LinearLayout width="44" height="44" gravity="center|right" orientation="horizontal" onClick="@event.followSetting.clickedClose()">
            <ImageView width="28" height="28" src="@drawable/edge_engine_copy_trading_dialog_close"/>
        </LinearLayout>
    </LinearLayout>
    <View background="@color/kColorPrimarySeparator" width="match_parent" height="0.5"/>

    <LinearLayout width="match_parent" height="wrap_content" marginTop="12" gravity="center|left" orientation="vertical">
        <TextView marginLeft="16" height="wrap_content" width="wrap_content" gravity="center|left" text="{{@i18n/n_copy_trading_followsetting_trader_modify_label_tips}}" textSize="12" textColor="@color/kColorPrimaryText" textFontWeight="400"/>
        <View height="12"/>
        <GirdView crossAxisItemCount="2" crossAxisSpace="8" data="@data.followSetting.labels" height="128" itemKey="item" mainAxisSpace="10" marginLeft="16" marginRight="16" orientation="vertical" typeKey="cellType" visibility="visible" width="match_parent">
            <GirdCell cellType="1" height="36" width="167.5">
                <LinearLayout cornerRadius="4" gravity="centerVertical" height="36" borderWidth="{{@item.borderWidth}}" borderColor="@color/kColorMajorTheme100" onClick="@event.followSetting.labelSelected({{@item.index}})" orientation="horizontal" width="match_parent" background="{{@item.background}}">
                    <TextView height="match_parent" width="match_parent" text="{{@item.text}}" textColor="{{@item.textColor}}" textFontWeight="400" gravity="center" textSize="12"/>
                </LinearLayout>
            </GirdCell>
        </GirdView>
        <View height="12"/>
    </LinearLayout>
    <TextView width="match_parent" height="44" background="@color/baseColorMajorTheme100" marginLeft="16" marginRight="16" textColor="#FFFFFF" onClick="@event.followSetting.labelConfirm()" marginBottom="16" cornerRadius="4" gravity="center" marginTop="16" textSize="14" textFontWeight="500" text="{{@i18n/n_otc_balance_trade_deal_confirm}}"/>
    <View background="@color/KBaseColorContentBackground" height="34" width="match_parent"/>
</LinearLayout>
