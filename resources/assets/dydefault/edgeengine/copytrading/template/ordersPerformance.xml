<LinearLayout height="match_parent" orientation="vertical" width="match_parent">

    <Scroller height="0" orientation="vertical" weight="1" width="match_parent">

        <LinearLayout height="wrap_content" orientation="vertical" paddingBottom="24" width="match_parent">

            <TextView gravity="centerVertical" height="53" paddingLeft="16" text="{{@i18n/n_copytrading_orders_situation}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="18" width="match_parent"/>

            <LinearLayout borderColor="@color/kColorPrimarySeparator" borderWidth="0.5" cornerRadius="8" height="wrap_content" marginLeft="16" marginRight="16" orientation="vertical" paddingBottom="12" paddingLeft="12" paddingRight="12" paddingTop="12" width="match_parent">

                <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent">
                    <BottomLineTextView height="25" onClick="@event.ordersPerformance.showTotalProfitsTips()" text="{{@i18n/copy_trading_total_profits}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="200"/>

                    <TextView height="wrap_content" text="{{@i18n/n_copytrading_follow_total_profit}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" width="wrap_content"/>
                </LinearLayout>

                <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="6" orientation="horizontal" width="match_parent">
                    <TextView height="wrap_content" text="{{@data.traderInfo.traderData.totalProfitStr}}" textColor="{{@data.traderInfo.traderData.totalProfitColor}}" textFontWeight="500" textSize="20" weight="1" width="0"/>

                    <TextView height="wrap_content" text="{{@data.traderInfo.traderData.copyTotalProfitStr}}" textColor="{{@data.traderInfo.traderData.copyTotalProfitColor}}" textFontWeight="500" textSize="20" width="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 总收益率 -->
            <LinearLayout gravity="centerVertical" height="36" marginTop="8" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

                <TextView height="wrap_content" text="{{@i18n/copy_trading_total_rate}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="0"/>

                <TextView height="wrap_content" text="{{@data.traderInfo.traderData.apyStr}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
            </LinearLayout>

            <!-- 交易胜率 -->
            <LinearLayout gravity="centerVertical" height="36" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

                <TextView height="wrap_content" text="{{@i18n/n_copy_trading_trade_win_rate}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="0"/>

                <TextView height="wrap_content" text="{{@data.traderInfo.traderData.winRateStr}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
            </LinearLayout>

            <!-- 最大回撤 -->
            <LinearLayout gravity="centerVertical" height="36" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

                <TextView height="wrap_content" text="{{@i18n/n_copytrading_maximum_drawdown}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="0"/>

                <TextView height="wrap_content" text="{{@data.traderInfo.traderData.mddStr}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
            </LinearLayout>

            <!-- 带单规模 -->
            <LinearLayout gravity="centerVertical" height="36" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

                <TextView height="wrap_content" text="{{@i18n/n_copytrading_AUM}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="0"/>

                <TextView height="wrap_content" text="{{@data.traderInfo.traderData.aumStr}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
            </LinearLayout>

            <!-- 分成比例 -->
            <LinearLayout gravity="centerVertical" height="36" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

                <TextView height="wrap_content" text="{{@i18n/n_copytrading_share_ratio}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="0"/>

                <TextView height="wrap_content" text="{{@data.traderInfo.traderData.takeRateStr}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
            </LinearLayout>

            <LinearLayout borderColor="@color/kColorPrimarySeparator" borderWidth="0.5" cornerRadius="8" height="wrap_content" marginLeft="16" marginRight="16" marginTop="8" orientation="vertical" paddingBottom="12" paddingLeft="12" paddingRight="12" paddingTop="12" width="match_parent">

                <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent">
                    <TextView height="wrap_content" text="{{@i18n/n_copytrading_total_orders_num}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="0"/>

                    <TextView height="wrap_content" text="{{@i18n/n_copytrading_days_of_entry}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" width="wrap_content"/>
                </LinearLayout>

                <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="6" orientation="horizontal" width="match_parent">
                    <TextView height="wrap_content" text="{{@data.traderInfo.traderData.copyNumStr}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="20" weight="1" width="0"/>

                    <TextView height="wrap_content" text="{{@data.traderInfo.traderData.daysOfEntry}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="20" width="wrap_content"/>
                </LinearLayout>

                <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="10" orientation="horizontal" width="match_parent">

                    <TextView height="wrap_content" text="{{@i18n/n_copytrading_num_of_profitable}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" width="wrap_content"/>

                    <TextView height="wrap_content" marginLeft="5" text="{{@data.traderInfo.traderData.winN}}" textColor="#00A171" textFontWeight="400" textSize="14" weight="1" width="0"/>

                    <TextView height="wrap_content" text="{{@i18n/n_copytrading_num_of_losses}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" width="wrap_content"/>

                    <TextView height="wrap_content" marginLeft="5" text="{{@data.traderInfo.traderData.lossN}}" textColor="#E94359" textFontWeight="400" textSize="14" width="wrap_content"/>
                </LinearLayout>

                <LinearLayout height="6" marginTop="10" orientation="horizontal" width="match_parent">

                    <View background="#00A171" bottomLeftRadius="3" height="6" topLeftRadius="3" visibility="{{@data.traderInfo.traderData.showTwoWinLoss | gone}}" weight="{{@data.traderInfo.traderData.winNWeight}}" width="0"/>

                    <ImageView height="6" scaleType="fitXY" src="@drawable/edge_engine_percent_mid" visibility="{{@data.traderInfo.traderData.showTwoWinLoss | gone}}" width="8"/>

                    <View background="#E94359" bottomRightRadius="3" height="6" topRightRadius="3" visibility="{{@data.traderInfo.traderData.showTwoWinLoss | gone}}" weight="{{@data.traderInfo.traderData.lossNWeight}}" width="0"/>

                    <View background="{{@data.traderInfo.traderData.winLossBg}}" cornerRadius="3" height="6" visibility="{{@data.traderInfo.traderData.showOneWinLoss | visible}}" width="match_parent"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout height="wrap_content" marginTop="8" orientation="vertical" visibility="{{@data.ordersPerformance.showMore | gone}}" width="match_parent">

                <!-- 平均盈利 -->
                <LinearLayout gravity="centerVertical" height="36" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

                    <TextView height="wrap_content" text="{{@i18n/n_copytrading_average_profit}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="0"/>

                    <TextView height="wrap_content" text="{{@data.traderInfo.traderData.avgProfitStr}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
                </LinearLayout>

                <!-- 平均亏损 -->
                <LinearLayout gravity="centerVertical" height="36" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

                    <TextView height="wrap_content" text="{{@i18n/n_copytrading_average_loss}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="0"/>

                    <TextView height="wrap_content" text="{{@data.traderInfo.traderData.avgLostStr}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
                </LinearLayout>

                <!-- 盈亏比 -->
                <LinearLayout gravity="centerVertical" height="36" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

                    <TextView height="wrap_content" text="{{@i18n/n_copytrading_profit_loss_ratio}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="0"/>

                    <TextView height="wrap_content" text="{{@data.traderInfo.traderData.profitLostStr}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
                </LinearLayout>

                <!-- 平均持仓时间 -->
                <LinearLayout gravity="centerVertical" height="36" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

                    <TextView height="wrap_content" text="{{@i18n/n_live_recommend_hold_time}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="0"/>

                    <TextView height="wrap_content" text="{{@data.traderInfo.traderData.avgHoldTimeStr}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
                </LinearLayout>

                <!-- 交易频次(每周) -->
                <LinearLayout gravity="centerVertical" height="36" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

                    <TextView height="wrap_content" text="{{@i18n/n_copytrading_transaction_frequency_weekly}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="0"/>

                    <TextView height="wrap_content" text="{{@data.traderInfo.traderData.weekTradeNumStr}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
                </LinearLayout>

                <!-- 交易对喜好 -->
                <LinearLayout gravity="centerVertical" height="36" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

                    <TextView height="wrap_content" text="{{@i18n/n_copytrading_symbol_preferences}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="0"/>

                    <TextView height="wrap_content" text="{{@data.traderInfo.traderData.likeSymbol}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
                </LinearLayout>

                <!-- 最近交易时间 -->
                <LinearLayout gravity="centerVertical" height="36" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">

                    <TextView height="wrap_content" text="{{@i18n/n_copytrading_recent_transaction_time}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" weight="1" width="0"/>

                    <TextView height="wrap_content" text="{{@data.traderInfo.traderData.lastTradeStr}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout gravity="center" height="48" onClick="@event.ordersPerformance.showMore()" orientation="horizontal" width="match_parent">

                <TextView height="wrap_content" text="{{@data.ordersPerformance.moreText}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14" width="wrap_content"/>

                <ImageView height="8" marginLeft="2" src="{{@data.ordersPerformance.arrow}}" width="8"/>
            </LinearLayout>

            <View background="@color/KBaseColorDeepestBackground" height="6" width="match_parent"/>

            <LinearLayout gravity="centerVertical" height="57" orientation="horizontal" width="match_parent">
                <BottomLineTextView height="25" onClick="@event.ordersPerformance.showYieldTips()" paddingLeft="16" paddingRight="10" text="{{@i18n/n_copy_trading_yield}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="18" weight="1" width="200"/>

                <LinearLayout gravity="center" height="wrap_content" onClick="@event.ordersPerformance.yieldFilterClick()" orientation="horizontal" paddingRight="16" width="wrap_content">

                    <TextView height="wrap_content" text="{{@data.ordersPerformance.yieldFilterText}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>

                    <ImageView height="8" marginLeft="2" src="@drawable/edge_engine_copytrading_arrow_down" width="8"/>
                </LinearLayout>
            </LinearLayout>

            <LineChart data="{{@data.ordersPerformance.yieldList}}" fillEndColor="#000173E5" fillStartColor="#4D0173E5" height="180" labelCount="{{@data.ordersPerformance.yieldCount}}" lineColor="@color/kColorMajorTheme100" marginBottom="24" marginLeft="16" marginRight="16" paddingBottom="5" suffix="%" width="match_parent" xAxisColor="@color/kColorThreeLevelText" yAxisColor="@color/kColorThreeLevelText"/>

            <View background="@color/KBaseColorDeepestBackground" height="6" width="match_parent"/>

            <LinearLayout gravity="centerVertical" height="57" orientation="horizontal" width="match_parent">
                <BottomLineTextView height="25" onClick="@event.ordersPerformance.showDailyRevenueTips()" paddingLeft="16" paddingRight="10" text="{{@i18n/n_copytrading_daily_revenue}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="18" weight="1" width="200"/>

                <LinearLayout gravity="center" height="wrap_content" onClick="@event.ordersPerformance.dailyRevenueFilterClick()" orientation="horizontal" paddingRight="16" width="wrap_content">

                    <TextView height="wrap_content" text="{{@data.ordersPerformance.dailyRevenueFilterText}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>

                    <ImageView height="8" marginLeft="2" src="@drawable/edge_engine_copytrading_arrow_down" width="8"/>
                </LinearLayout>
            </LinearLayout>

            <BarChart data="{{@data.ordersPerformance.dailyRevenueList}}" height="180" labelCount="{{@data.ordersPerformance.dailyRevenueCount}}" marginLeft="16" marginRight="16" negativeColor="{{@data.traderInfo.traderData.downColor}}" paddingBottom="5" positiveColor="{{@data.traderInfo.traderData.upColor}}" width="match_parent" xAxisColor="@color/kColorThreeLevelText" yAxisColor="@color/kColorThreeLevelText"/>
        </LinearLayout>
    </Scroller>

    <View height="0" onPopDismiss="@event.timelineFilter.popDismiss()" popCancelOnTouchOutside="false" popModalPositon="bottom" popShow="{{@data.timelineFilter.popShow}}" popShowMode="modal" popTemplate="timelineFilter.xml"/>

    <View height="0" onPopDismiss="@event.commonPop.popDismiss()" popCancelOnTouchOutside="false" popModalPositon="center" popShow="{{@data.commonPop.popShow}}" popShowMode="modal" popTemplate="commonPop.xml"/>
</LinearLayout>
