<LinearLayout width="match_parent" height="match_parent" paddingLeft="16" paddingRight="16" paddingTop="16" orientation="vertical" background="@color/KBaseColorContentBackground">
    <LinearLayout width="match_parent" height="wrap_content" orientation="vertical" visibility="{{data.traderOrderDetail.orderVisible}}">
        <!-- 币种 状态 -->
        <LinearLayout width="match_parent" height="18" orientation="horizontal" gravity="centerVertical">
            <!-- 币种名称 -->
            <TextView paddingTop="1" paddingBottom="1" paddingLeft="2" paddingRight="2" cornerRadius="2" width="wrap_content" height="wrap_content" text="{{@data.traderOrderDetail.direction}}" textColor="#FFFFFF" textSize="10" textFontWeight="500" background="{{@data.traderOrderDetail.directionColor}}"/>
            <TextView marginLeft="4" width="wrap_content" height="wrap_content" textFontWeight="500" textSize="14" textColor="@color/kColorPrimaryText" text="{{@data.traderOrderDetail.symbol}}"/>
        </LinearLayout>
        <!-- tag -->
        <LinearLayout width="match_parent" height="16" marginTop="6" gravity="centerVertical" orientation="horizontal">
            <For data="@data.traderOrderDetail.tagsModelList" itemKey="item">
                <Cell type="normal" width="wrap_content" height="match_parent" background="@color/baseColorInputBackground" marginRight="4" cornerRadius="2">
                    <TextView paddingTop="2" paddingBottom="2" paddingLeft="4" paddingRight="4" width="wrap_content" height="match_parent" text="{{@item.title}}" textSize="10" textFontWeight="500" textColor="@color/kColorSecondaryText"/>
                </Cell>
            </For>
        </LinearLayout>
        
        <!-- 收益、收益率 -->
        <LinearLayout width="match_parent" height="wrap_content" marginTop="12" gravity="centerVertical" orientation="horizontal">
            <!-- 收益 -->
            <LinearLayout width="wrap_content" height="wrap_content" gravity="top" orientation="vertical">
                <TextView width="wrap_content" height="16" text="{{@data.traderOrderDetail.title_profit}}" textSize="12" textFontWeight="400" textColor="@color/KBaseColorSecondaryText"/>
                <TextView width="wrap_content" height="16" text="{{@data.traderOrderDetail.profit}}" textSize="14" textFontWeight="500" textColor="{{@data.traderOrderDetail.profitColor}}"/>
            </LinearLayout>
            <View weight="1"/>
            <!-- 收益率 -->
            <LinearLayout width="wrap_content" height="wrap_content" gravity="right" orientation="vertical">
                <TextView width="wrap_content" height="16" text="{{@data.traderOrderDetail.title_profitRate}}" textSize="12" textFontWeight="400" textColor="@color/KBaseColorSecondaryText"/>
                <TextView width="wrap_content" height="16" text="{{@data.traderOrderDetail.profitRate}}" textSize="14" textFontWeight="500" textColor="{{@data.traderOrderDetail.profitRateColor}}"/>
            </LinearLayout>
        </LinearLayout>
        
        <!-- 开仓、平仓 -->
        <LinearLayout marginTop="12" width="match_parent" height="wrap_content" orientation="horizontal">
            <!-- 开仓价格 -->
            <LinearLayout width="114.5" height="wrap_content" orientation="vertical">
                <TextView width="match_parent" height="16" text="{{@data.traderOrderDetail.title_openPrice}}" textSize="12" textFontWeight="400" textColor="@color/KBaseColorSecondaryText"/>
                <TextView width="match_parent" height="16" text="{{@data.traderOrderDetail.openPrice}}" textSize="12" textFontWeight="400" autoSizeTextType="uniform" autoSizeMinTextSize="10" isSubscript="true" textColor="@color/kColorPrimaryText"/>
            </LinearLayout>
            <!-- 开仓数量 -->
            <LinearLayout width="114" height="wrap_content" orientation="vertical">
                <TextView width="match_parent" height="16" text="{{@data.traderOrderDetail.title_openNumber}}" textSize="12" textFontWeight="400" textColor="@color/KBaseColorSecondaryText"/>
                <TextView width="match_parent" height="16" text="{{@data.traderOrderDetail.openNumber}}" textSize="12" textFontWeight="400" textColor="@color/kColorPrimaryText"/>
            </LinearLayout>
            <!-- 平仓价格 -->
            <LinearLayout width="114.5" height="wrap_content" orientation="vertical">
                <TextView width="match_parent" height="16" gravity="center|right" text="{{@data.traderOrderDetail.title_closePrice}}" textSize="12" textFontWeight="400" textColor="@color/KBaseColorSecondaryText"/>
                <TextView width="match_parent" height="16" gravity="center|right" text="{{@data.traderOrderDetail.closePrice}}" textSize="12" textFontWeight="400" autoSizeTextType="uniform" autoSizeMinTextSize="10" isSubscript="true" textColor="@color/kColorPrimaryText"/>
            </LinearLayout>
        </LinearLayout>
        <!-- 分割线 -->
        <View marginTop="12" width="match_parent" height="0.5" background="@color/KBaseColorPrimarySeparator"/>
        
        <View height="12"/>
        
        <!-- 止盈价格等 -->
        <For data="@data.traderOrderDetail.otherModelList" itemKey="item">
            <Cell type="other" width="match_parent" height="wrap_content">
                <LinearLayout width="match_parent" height="wrap_content" marginBottom="8" orientation="vertical">
                    <LinearLayout width="match_parent" height="wrap_content" orientation="horizontal" gravity="centerVertical">
                        <TextView width="wrap_content" height="wrap_content" text="{{@item.title}}" textColor="@color/KBaseColorSecondaryText" textSize="12" textFontWeight="400"/>
                        <View weight="1"/>
                        <TextView width="wrap_content" height="wrap_content" textFontWeight="400" textSize="12" isSubscript="true" textColor="@color/kColorPrimaryText" text="{{@item.subTitle}}"/>
                    </LinearLayout>
                </LinearLayout>
            </Cell>
        </For>
        
    </LinearLayout>
    <!-- 空样式 -->
    <LinearLayout width="match_parent" height="match_parent" orientation="vertical" gravity="center" visibility="{{@data.traderOrderDetail.emptyVisible | gone}}">
        <ImageView width="60" height="60" src="@drawable/edge_engine_empty"/>
        <TextView marginTop="8" width="match_parent" height="wrap_content" gravity="center" textSize="12" text="{{@i18n/n_contract_trade_no_record}}" textColor="@color/eBaseColorThreeLevelText"/>
    </LinearLayout>
</LinearLayout>
