<LinearLayout topLeftRadius="8" topRightRadius="8" width="375" height="wrap_content" background="@color/KBaseColorContentBackground" orientation="vertical">

    <LinearLayout width="match_parent" height="wrap_content" gravity="centerVertical" orientation="horizontal">

                <TextView width="wrap_content" height="wrap_content" marginStart="16" marginTop="12" marginBottom="12" text="{{@i18n/n_exchange_timing_order_confirm}}" textSize="16" textColor="@color/kColorPrimaryText" textFontWeight="500"/>

                <View width="0" height="0" weight="1"/>

                <ImageView width="wrap_content" height="wrap_content" marginRight="16" onClick="@event.tradePanel.popOrderConfirmClose()" src="@drawable/edge_engine_copy_trading_dialog_close"/>
    </LinearLayout>

    <LinearLayout width="match_parent" height="wrap_content" marginLeft="16" marginRight="16" gravity="centerVertical" orientation="horizontal">

                <TextView paddingTop="1" paddingBottom="1" paddingLeft="2" paddingRight="2" cornerRadius="2" width="wrap_content" height="wrap_content" text="{{@data.tradePanel.disPalyDirection}}" textColor="#FFFFFF" textSize="10" background="{{@data.tradePanel.disPalyDirectionColor}}"/>

                <TextView width="wrap_content" height="wrap_content" marginLeft="6" text="{{@data.tradePanel.disPalyTitle}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14"/>
    </LinearLayout>

    <LinearLayout width="match_parent" height="wrap_content" marginLeft="16" marginRight="16" marginTop="10" gravity="centerVertical" orientation="horizontal">
                <TextView cornerRadius="2" width="wrap_content" height="wrap_content" background="@color/baseColorInputBackground" paddingLeft="4" paddingTop="2" paddingRight="4" paddingBottom="2" text="{{@data.tradePanel.disPalyMode}}" textColor="@color/kColorThreeLevelText" textFontWeight="500" textSize="10"/>
                <TextView cornerRadius="2" width="wrap_content" height="wrap_content" marginLeft="4" background="@color/baseColorInputBackground" paddingLeft="4" paddingTop="2" paddingRight="4" paddingBottom="2" text="{{@data.tradePanel.disPalyLever}}" textColor="@color/kColorThreeLevelText" textFontWeight="500" textSize="10"/>
                <TextView cornerRadius="2" width="wrap_content" height="wrap_content" marginLeft="4" background="@color/baseColorInputBackground" paddingLeft="4" paddingTop="2" paddingRight="4" paddingBottom="2" text="{{@data.tradePanel.disPalyOpenDirection}}" textColor="@color/kColorThreeLevelText" textFontWeight="500" textSize="10"/>
    </LinearLayout>

    <LinearLayout width="match_parent" height="wrap_content" marginTop="10" orientation="horizontal" paddingLeft="16" paddingTop="8" paddingRight="16" paddingBottom="8">

                <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_copy_trading_entrust_type}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14"/>

                <View width="0" height="0" weight="1"/>

                <TextView width="wrap_content" height="wrap_content" text="{{@data.tradePanel.disPalyType}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14"/>

    </LinearLayout>

    <LinearLayout width="match_parent" height="wrap_content" marginTop="10" orientation="horizontal" paddingLeft="16" paddingTop="8" paddingRight="16" paddingBottom="8">

                <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_contarct_share_position_open_price}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14"/>

                <View width="0" height="0" weight="1"/>

                <TextView width="wrap_content" height="wrap_content" text="{{@data.tradePanel.disPalyOpenPrice}}" isSubscript="true" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14"/>

    </LinearLayout>

    <LinearLayout width="match_parent" height="wrap_content" marginTop="10" orientation="horizontal" paddingLeft="16" paddingTop="8" paddingRight="16" paddingBottom="8">

                <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_copy_trading_position_open_number}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14"/>

                <View width="0" height="0" weight="1"/>

                <TextView width="wrap_content" height="wrap_content" text="{{@data.tradePanel.disPalyOpenAmont}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14"/>

    </LinearLayout>


    <LinearLayout width="match_parent" height="wrap_content" marginTop="10" orientation="horizontal" paddingLeft="16" paddingRight="16" visibility="{{@data.tradePanel.tpShow | gone}}">
            <View background="@color/baseColorInputBackground" width="match_parent" height="0.5"/>
    </LinearLayout>

    <LinearLayout width="match_parent" height="wrap_content" marginTop="10" orientation="horizontal" paddingLeft="16" paddingTop="8" paddingRight="16" paddingBottom="8" visibility="{{@data.tradePanel.tpShow | gone}}">

        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_copy_trading_tp_percent}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14"/>

        <View width="0" height="0" weight="1"/>

        <TextView width="wrap_content" height="wrap_content" text="{{@data.tradePanel.disPalyTpRatio}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14"/>

    </LinearLayout>

    <LinearLayout width="match_parent" height="wrap_content" marginTop="10" orientation="horizontal" paddingLeft="16" paddingTop="8" paddingRight="16" paddingBottom="8" visibility="{{@data.tradePanel.tpShow | gone}}">

        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_contract_take_profit_trigger_price}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14"/>

        <View width="0" height="0" weight="1"/>

        <TextView width="wrap_content" height="wrap_content" text="{{@data.tradePanel.disPalyTpTriggerPrice}}" isSubscript="true" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14"/>

    </LinearLayout>

    <LinearLayout width="match_parent" height="wrap_content" marginTop="10" orientation="horizontal" paddingLeft="16" paddingTop="8" paddingRight="16" paddingBottom="8" visibility="{{@data.tradePanel.tpShow | gone}}">

        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_copytrading_tp_forecasted_profit}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" maxLines="0" maxWidth="160" textSize="14"/>

        <View width="0" height="0" weight="1"/>

        <TextView width="wrap_content" height="wrap_content" text="{{@data.tradePanel.disPalyTpIncome}}" textColor="#00A171" textFontWeight="400" textSize="14"/>

    </LinearLayout>

    <LinearLayout width="match_parent" height="wrap_content" marginTop="10" orientation="horizontal" paddingLeft="16" paddingRight="16" visibility="{{@data.tradePanel.slShow | gone}}">
    <View background="@color/baseColorInputBackground" width="match_parent" height="0.5"/>
    </LinearLayout>

    <LinearLayout width="match_parent" height="wrap_content" marginTop="10" orientation="horizontal" paddingLeft="16" paddingTop="8" paddingRight="16" paddingBottom="8" visibility="{{@data.tradePanel.slShow | gone}}">

        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_copy_trading_sl_percent}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14"/>

        <View width="0" height="0" weight="1"/>

        <TextView width="wrap_content" height="wrap_content" text="{{@data.tradePanel.disPalySlRatio}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14"/>

    </LinearLayout>

    <LinearLayout width="match_parent" height="wrap_content" marginTop="10" orientation="horizontal" paddingLeft="16" paddingTop="8" paddingRight="16" paddingBottom="8" visibility="{{@data.tradePanel.slShow | gone}}">

        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_contract_stop_loss_trigger_price}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="14"/>

        <View width="0" height="0" weight="1"/>

        <TextView width="wrap_content" height="wrap_content" text="{{@data.tradePanel.disPalySlTriggerPrice}}" isSubscript="true" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14"/>

    </LinearLayout>

    <LinearLayout width="match_parent" height="wrap_content" marginTop="10" orientation="horizontal" paddingLeft="16" paddingTop="8" paddingRight="16" paddingBottom="8" visibility="{{@data.tradePanel.slShow | gone}}">

        <TextView width="wrap_content" height="wrap_content" text="{{@i18n/n_copytrading_sl_expect_loss}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" maxLines="0" maxWidth="160" textSize="14"/>

        <View width="0" height="0" weight="1"/>

        <TextView width="wrap_content" height="wrap_content" text="{{@data.tradePanel.disPalySlIncome}}" textColor="#E94359" textFontWeight="400" textSize="14"/>

    </LinearLayout>
    <TextView width="match_parent" height="44" background="@color/baseColorMajorTheme100" marginLeft="16" marginRight="16" marginTop="16" textColor="#FFFFFF" marginBottom="16" cornerRadius="4" onClick="@event.tradePanel.confirmOrder()" gravity="center" textSize="14" textFontWeight="500" text="{{@i18n/n_otc_balance_trade_deal_confirm}}"/>


</LinearLayout>
