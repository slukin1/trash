<LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content" topLeftRadius="8" topRightRadius="8" width="375">

    <LinearLayout height="wrap_content" marginBottom="16" marginLeft="16" marginRight="16" orientation="vertical" width="match_parent">

        <!--确认平仓title-->
        <LinearLayout bottom="10" gravity="centerVertical" height="wrap_content" marginTop="12" orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" text="{{@i18n/n_copy_trading_confirm_close_title}}" textColor="@color/kColorPrimaryText" textFontWeight="600" textSize="16" width="wrap_content"/>

            <View height="0" weight="1" width="0"/>

            <ImageView height="28" onClick="@event.followerPosition.onClose()" src="@drawable/trade_margin_coupon_title_close" width="28"/>
        </LinearLayout>

        <!--币种信息-->
        <LinearLayout gravity="centerVertical" height="20" marginTop="12" orientation="horizontal" width="match_parent">

            <TextView background="{{@data.followerPosition.positionClose.directionColor}}" cornerRadius="2" height="wrap_content" paddingBottom="1" paddingLeft="2" paddingRight="2" paddingTop="1" text="{{@data.followerPosition.positionClose.directionLabel}}" textColor="#FFFFFF" textFontWeight="500" textSize="10" width="wrap_content"/>

            <TextView gravity="centerVertical" height="wrap_content" marginLeft="4" text="{{@data.followerPosition.positionClose.symbolDesc}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>
        </LinearLayout>

        <LinearLayout height="wrap_content" marginTop="10" orientation="horizontal" width="match_parent">

            <TextView background="@color/baseColorInputBackground" cornerRadius="2" height="wrap_content" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@data.followerPosition.positionClose.modeTypeName}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
            <TextView background="@color/baseColorInputBackground" cornerRadius="2" height="wrap_content" marginLeft="4" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@data.followerPosition.positionClose.leverDesc}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
            <TextView background="@color/baseColorInputBackground" cornerRadius="2" height="wrap_content" marginLeft="4" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@data.followerPosition.positionClose.directionDesc}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
        </LinearLayout>

        <!-- 平仓类型 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" marginBottom="8" marginTop="8" maxWidth="160" text="{{@i18n/n_copy_trading_close_type}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="14" width="wrap_content"/>

            <View height="1" weight="1"/>

            <TextView gravity="right" height="wrap_content" marginBottom="8" marginTop="8" maxWidth="160" text="{{@i18n/n_copy_trading_market_price}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="wrap_content"/>
        </LinearLayout>

        <!-- 开仓价格 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" marginBottom="8" marginTop="8" maxWidth="160" text="{{@i18n/n_contract_avg_position_price}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="14" width="wrap_content"/>

            <View height="1" weight="1"/>

            <TextView gravity="right" height="wrap_content" marginTop="10" maxWidth="160" text="{{@data.followerPosition.positionClose.openAvgPrice}}" isSubscript="true" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="wrap_content"/>
        </LinearLayout>

        <!-- 合约数量 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" marginBottom="8" marginTop="8" maxWidth="160" text="{{@i18n/n_copy_trading_future_number}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="14" width="wrap_content"/>

            <View height="1" weight="1"/>

            <TextView gravity="right" height="wrap_content" marginTop="10" maxWidth="160" text="{{@data.followerPosition.positionClose.futureNumber}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="wrap_content"/>
        </LinearLayout>

        <!-- 最新价格 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" marginBottom="8" marginTop="8" maxWidth="160" text="{{@i18n/n_copy_trading_last_price}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="14" width="wrap_content"/>

            <View height="1" weight="1"/>

            <TextView gravity="right" height="wrap_content" marginTop="10" maxWidth="160" text="{{@data.followerPosition.positionClose.marketPrice}}" isSubscript="true" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="wrap_content"/>
        </LinearLayout>

        <!-- 预计盈亏 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" marginBottom="8" marginTop="8" maxWidth="160" text="{{@i18n/n_copy_trading_estimate_profit}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="14" width="wrap_content"/>

            <View height="1" weight="1"/>

            <TextView gravity="right" height="wrap_content" marginTop="10" maxWidth="160" text="{{@data.followerPosition.positionClose.profit}}" textColor="{{@data.followerPosition.positionClose.profitColor}}" textFontWeight="400" textSize="14" width="wrap_content"/>
        </LinearLayout>

        <!--确认-->
        <LinearLayout background="#0173E5" bottomLeftRadius="4" bottomRightRadius="4" height="wrap_content" marginTop="20" onClick="@event.followerPosition.popConfirm()" orientation="horizontal" topLeftRadius="4" topRightRadius="4" width="match_parent">

            <View height="0" weight="1" width="0"/>

            <LinearLayout gravity="right" height="wrap_content" orientation="horizontal" paddingBottom="12" paddingTop="12" width="wrap_content">

                <TextView gravity="center" height="wrap_content" text="{{@i18n/n_copy_trading_confirm}}" textColor="#FFFFFF" textFontWeight="500" textSize="14" width="wrap_content"/>
            </LinearLayout>

            <View height="0" weight="1" width="0"/>
        </LinearLayout>

        <View height="30" width="1"/>
    </LinearLayout>
</LinearLayout>
