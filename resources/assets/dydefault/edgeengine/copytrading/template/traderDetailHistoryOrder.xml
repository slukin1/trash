<LinearLayout width="match_parent" height="match_parent" orientation="vertical" background="@color/KBaseColorContentBackground">
    <FrameLayout width="match_parent" height="match_parent">
        <!-- 列表数据 -->
        <RecyclerView height="match_parent" width="match_parent" gravity="centerVertical" orientation="vertical" data="@data.traderDetailHistoryOrder.list" itemKey="item" typeKey="type" onLoadMore="@event.traderDetailHistoryOrder.onLoadMore()" loadMoreStatus="{{@data.traderDetailHistoryOrder.loadMoreStatus}}" visibility="{{@data.traderDetailHistoryOrder.listVisible | invisible}}">
            <Cell type="normal" width="match_parent" height="wrap_content">
                <LinearLayout width="match_parent" height="wrap_content" orientation="vertical">
                    <!-- 数据行 -->
                    <LinearLayout width="match_parent" height="wrap_content" orientation="vertical" onClick="@event.traderDetailHistoryOrder.clickedItem({{@item.index}})">
                        <!-- 币种 状态 -->
                        <LinearLayout width="match_parent" height="18" marginTop="16" marginLeft="16" marginRight="16" orientation="horizontal" gravity="centerVertical">
                            <!-- 币种名称 -->
                            <TextView paddingTop="1" paddingBottom="1" paddingLeft="2" paddingRight="2" cornerRadius="2" width="wrap_content" height="14" text="{{@item.directionLabel}}" textColor="#FFFFFF" textSize="10" background="{{@item.directionColor}}"/>
                            <TextView marginLeft="4" width="wrap_content" height="wrap_content" textFontWeight="600" textSize="14" textColor="@color/kColorPrimaryText" text="{{@item.symbolDesc}}"/>
                            <ImageView height="14" marginLeft="4" src="@drawable/edge_engine_copy_trading_next" width="14"/>
                        </LinearLayout>
                        <!-- tag行 -->
                        <LinearLayout width="match_parent" height="16" marginTop="6" marginLeft="16" marginRight="16" orientation="horizontal" gravity="center">
                            <LinearLayout width="wrap_content" height="match_parent">
                                <TextView paddingTop="2" paddingBottom="2" paddingLeft="4" paddingRight="4" cornerRadius="2" background="@color/baseColorInputBackground" width="wrap_content" height="wrap_content" text="{{@item.modeTypeName}}" textSize="10" textColor="@color/kColorSecondaryText"/>
                                <TextView marginLeft="4" paddingTop="2" paddingBottom="2" paddingLeft="4" paddingRight="4" width="wrap_content" height="wrap_content" cornerRadius="2" background="@color/baseColorInputBackground" text="{{@item.leverDesc}}" textSize="10" textColor="@color/kColorSecondaryText"/>
                                <TextView marginLeft="4" paddingTop="2" paddingBottom="2" paddingLeft="4" paddingRight="4" width="wrap_content" height="wrap_content" cornerRadius="2" background="@color/baseColorInputBackground" text="{{@item.directionDesc}}" textSize="10" textColor="@color/kColorSecondaryText"/>
                            </LinearLayout>
                            <View width="0" height="match_parent" weight="1"/>
                        </LinearLayout>
                        <!-- 收益 收益率 -->
                        <LinearLayout height="wrap_content" marginLeft="16" marginRight="16" marginTop="14" orientation="horizontal" width="match_parent">
                            <!-- 收益 -->
                            <TextView height="wrap_content" maxLines="0" text="{{@i18n/n_copy_trading_income}}" textColor="@color/kColorThreeLevelText" textSize="12" width="wrap_content"/>
                            <!-- 收益率 -->
                            <TextView gravity="right" height="wrap_content" maxLines="0" text="{{@i18n/n_copy_trading_yield}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                        </LinearLayout>

                        <LinearLayout gravity="centerVertical" height="16" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent">
                            <!-- 收益 -->
                            <TextView height="wrap_content" maxLines="0" text="{{@item.profitStr}}" textColor="{{@item.profitDescColor}}" textFontWeight="500" textSize="14" width="wrap_content"/>
                            <!-- 收益率 -->
                            <TextView gravity="right" height="wrap_content" maxLines="0" text="{{@item.profitRateStr}}" textColor="{{@item.profitDescColor}}" textFontWeight="500" textSize="14" weight="1" width="0"/>
                        </LinearLayout>
                        <!-- 开仓价格 开仓数量 平仓价格-->
                        <LinearLayout width="match_parent" height="wrap_content" marginTop="14" marginLeft="16" orientation="horizontal" marginRight="16">
                            <!-- 开仓价格 -->
                            <TextView width="0" height="wrap_content" weight="1" textSize="12" textColor="@color/kColorThreeLevelText" text="{{@item.openPriceTitle}}" maxLines="0"/>
                            <!-- 开仓数量 -->
                            <TextView width="0" height="wrap_content" weight="1" textSize="12" textColor="@color/kColorThreeLevelText" text="{{@item.openAmountTitle}}" maxLines="0"/>
                            <!-- 平仓价格 -->
                            <TextView width="0" height="wrap_content" weight="1" textSize="12" gravity="right" textColor="@color/kColorThreeLevelText" text="{{@item.closePriceTitle}}" maxLines="0"/>
                        </LinearLayout>
                        <LinearLayout width="match_parent" height="16" marginLeft="16" orientation="horizontal" marginRight="16" gravity="centerVertical">
                            <!-- 开仓价格 -->
                            <TextView width="0" height="wrap_content" weight="1" textSize="12" textColor="@color/kColorPrimaryText" text="{{@item.openPriceStr}}" isSubscript="true" autoSizeTextType="uniform" autoSizeMinTextSize="8"/>
                            <!-- 开仓数量 -->
                            <TextView width="0" height="wrap_content" weight="1" textSize="12" textColor="@color/kColorPrimaryText" text="{{@item.openAmountVolume}}" autoSizeTextType="uniform" autoSizeMinTextSize="8"/>
                            <!-- 平仓价格 -->
                            <TextView width="0" height="wrap_content" weight="1" textSize="12" gravity="right" textColor="@color/kColorPrimaryText" text="{{@item.closePriceStr}}" isSubscript="true" autoSizeTextType="uniform" autoSizeMinTextSize="8"/>
                        </LinearLayout>
                        <!-- 带单分成 -->
                        <!-- <LinearLayout
                                width="match_parent"
                                height="wrap_content"
                                marginTop="14"
                                marginLeft="16"
                                marginRight="16"
                                orientation="horizontal">
                            <TextView
                                    width="0"
                                    height="wrap_content"
                                    weight="1"
                                    textSize="12"
                                    textColor="@color/kColorThreeLevelText"
                                    text="{{@item.followTakesTitle}}"
                                    maxLines="0" />
                            <View
                                    width="0"
                                    height="16"
                                    weight="1" />
                        </LinearLayout>
                        <LinearLayout
                                width="match_parent"
                                height="16"
                                marginLeft="16"
                                marginRight="16"
                                orientation="horizontal"
                                gravity="centerVertical">
                            <TextView
                                    width="0"
                                    height="wrap_content"
                                    weight="1"
                                    textSize="12"
                                    textColor="{{@item.followTakesColor}}"
                                    text="{{@item.followTakes}}"
                                    autoSizeTextType="uniform"
                                    autoSizeMinTextSize="8" />
                            <View
                                    width="0"
                                    height="match_parent"
                                    weight="1" />
                        </LinearLayout> -->
                    </LinearLayout>
                    <!-- 分割线 -->
                    <TextView marginTop="12" width="match_parent" height="0.5" marginLeft="16" marginRight="16" background="@color/KBaseColorPrimarySeparator"/>
                </LinearLayout>
            </Cell>
        </RecyclerView>
        <!-- 空样式 -->
        <LinearLayout width="match_parent" height="wrap_content" orientation="vertical" gravity="centerHorizontal" visibility="{{@data.traderDetailHistoryOrder.emptyVisible | gone}}">
            <ImageView marginTop="120" width="60" height="60" src="@drawable/edge_engine_empty"/>
            <TextView marginTop="8" width="match_parent" height="wrap_content" gravity="center" textSize="12" text="{{@i18n/n_contract_trade_no_record}}" textColor="@color/eBaseColorThreeLevelText"/>
        </LinearLayout>
    </FrameLayout>
    <View width="match_parent" height="0" popCancelOnTouchOutside="false" popShowMode="modal" popModalPositon="center" onPopDismiss="@event.traderDetailHistoryOrder.popDismiss()" popShow="{{@data.traderDetailHistoryOrder.fokFailedReasonShow}}" popTemplate="fok_reason_pop.xml" background="@color/KBaseColorInputBackground"/>
</LinearLayout>
