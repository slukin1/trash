<LinearLayout width="match_parent" height="match_parent" orientation="vertical" background="@color/KBaseColorContentBackground">
    <!-- 仅显示前10名跟单者 -->
    <LinearLayout width="match_parent" height="36">
        <TextView marginLeft="16" width="match_parent" height="match_parent" gravity="centerVertical" text="仅显示前10名跟单者" textSize="12" textColor="@color/kColorSecondaryText"/>
    </LinearLayout>
    <FrameLayout width="match_parent" height="0" weight="1">
        <!-- 列表数据 -->
        <RecyclerView height="match_parent" width="match_parent" gravity="centerVertical" orientation="horizontal" data="@data.traderDetailFollower.list" itemKey="item" typeKey="type" visibility="{{@data.traderDetailFollower.listVisible | invisible}}">
            <Cell type="normal" marginTop="12" marginLeft="16" marginRight="16" width="match_parent" height="wrap_content">
                <LinearLayout width="match_parent" height="wrap_content" orientation="vertical">
                    <LinearLayout width="match_parent" height="28" gravity="centerVertical">
                        <ImageView cornerRadius="14" height="28" scaleType="fitXY" src="{{@item.imgUrl}}" width="28"/>
                        <TextView marginLeft="8" height="wrap_content" text="{{@item.nickName}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout width="match_parent" height="20" marginTop="12" orientation="horizontal">
                        <TextView height="wrap_content" text="{{@i18n/n_copy_trading_documentary_transaction_volume}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>
                        <View height="0" weight="1" width="0"/>
                        <TextView height="wrap_content" text="{{@i18n/n_copy_trading_documentary_income_usdt}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout width="match_parent" height="20" orientation="horizontal">
                        <TextView height="wrap_content" text="{{@item.tradeAgg}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
                        <View height="0" weight="1" width="0"/>
                        <TextView height="wrap_content" text="{{@item.profit}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
                    </LinearLayout>
                    <!-- 分割线 -->
                    <TextView marginTop="12" width="match_parent" height="0.5" background="@color/KBaseColorPrimarySeparator"/>
                </LinearLayout>
            </Cell>
        </RecyclerView>
        <!-- 空样式 -->
        <LinearLayout width="match_parent" height="wrap_content" orientation="vertical" gravity="centerHorizontal" visibility="{{@data.traderDetailFollower.emptyVisible | gone}}">
            <ImageView marginTop="120" width="60" height="60" src="@drawable/edge_engine_empty"/>
            <TextView marginTop="8" width="match_parent" height="wrap_content" gravity="center" textSize="12" text="{{@i18n/n_contract_trade_no_record}}" textColor="@color/kColorThreeLevelText"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
