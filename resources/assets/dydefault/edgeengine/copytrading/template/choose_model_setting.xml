<LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content" orientation="vertical" topLeftRadius="8" topRightRadius="8" width="375">
    <LinearLayout gravity="centerVertical" height="44" orientation="horizontal" width="match_parent">
        <TextView height="wrap_content" marginBottom="12" marginStart="16" marginTop="12" text="{{@i18n/n_copy_trading_leversetting_model_setting}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="16" width="wrap_content" maxWidth="315" autoSizeTextType="uniform" autoSizeMinTextSize="12"/>
        <View height="0" weight="1" width="0"/>
        <ImageView height="wrap_content" marginRight="16" onClick="@event.copySetting.closeChooseModel()" src="@drawable/edge_engine_copy_trading_dialog_close" width="wrap_content"/>
    </LinearLayout>

    <LinearLayout marginLeft="0" marginRight="0" width="375" height="0.5" background="@color/KBaseColorPrimarySeparator" orientation="vertical"/>
    
    <LinearLayout background="@color/KBaseColorInputBackground" cornerRadius="8" height="108" marginLeft="16" marginRight="16" marginTop="16" onClick="@event.copySetting.chooseModel(1)" orientation="horizontal" paddingBottom="16" paddingTop="16" width="match_parent" gravity="centerVertical">
        <LinearLayout height="wrap_content" orientation="vertical" weight="1" width="0">
            <TextView height="wrap_content" marginLeft="12" text="{{@i18n/n_copy_trading_fixed_margin}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="match_parent"/>
                
            <TextView height="wrap_content" marginLeft="12" marginTop="4" marginRight="10" maxLines="3" text="{{@i18n/n_copy_trading_leversetting_model_tips1}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="match_parent"/>
              
              <LinearLayout height="16" marginLeft="12" gravity="left" marginTop="4" orientation="horizontal" width="match_parent" onClick="@event.copySetting.setHigherFixedMargin()">
                  <TextView height="match_parent" text="{{@i18n/n_copy_trading_set_higher_margin}}" textColor="@color/kColorMajorTheme100" textFontWeight="400" textSize="12" width="wrap_content"/>
                  <ImageView height="14" src="@drawable/edge_engine_copy_trading_next" width="14" marginLeft="0" gravity="left"/>
              </LinearLayout>
        </LinearLayout>
        <ImageView height="16" marginRight="12" src="{{@data.copySetting.chooseModelType1Image}}" width="16"/>
    </LinearLayout>

    <LinearLayout background="@color/KBaseColorInputBackground" cornerRadius="4" gravity="centerVertical" height="108" marginBottom="16" marginLeft="16" marginRight="16" marginTop="16" onClick="@event.copySetting.chooseModel(2)" orientation="horizontal" paddingBottom="16" paddingTop="16" width="match_parent">
        <LinearLayout height="wrap_content" orientation="vertical" weight="1" width="0">
            <TextView height="wrap_content" marginLeft="12" text="{{@i18n/n_copy_trading_leversetting_mulriple}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="14" width="match_parent"/>

            <TextView height="wrap_content" marginLeft="12" marginTop="4" marginRight="10" maxLines="3" text="{{@i18n/n_copy_trading_leversetting_model_tips2}}" textColor="@color/kColorThreeLevelText" textFontWeight="400" textSize="12" width="match_parent"/>
        </LinearLayout>

        <ImageView height="16" marginRight="12" src="{{@data.copySetting.chooseModelType2Image}}" width="16"/>
    </LinearLayout>
    
    <View background="@color/KBaseColorContentBackground" height="34" width="match_parent"/>
</LinearLayout>
