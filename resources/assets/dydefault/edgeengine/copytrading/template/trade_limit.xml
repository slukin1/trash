<LinearLayout background="@color/KBaseColorContentBackground" height="wrap_content" topLeftRadius="8" topRightRadius="8" width="375" orientation="vertical" onClick="@event.tradeLimit.closeKeyBoard()">

    <!--止盈止损title-->
    <LinearLayout height="wrap_content" marginTop="12" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent" gravity="centerVertical">

        <TextView height="wrap_content" text="{{@i18n/n_copy_trading_trade_limit_title}}" textColor="@color/kColorPrimaryText" textFontWeight="600" textSize="16" width="wrap_content"/>

        <View height="0" weight="1" width="0"/>

        <ImageView height="28" onClick="@event.tradeLimit.close()" src="@drawable/trade_margin_coupon_title_close" width="28"/>
    </LinearLayout>

    <!-- 风险提示 -->
    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="12" orientation="horizontal" width="375" background="#0FFF9635">

        <ImageView height="12" width="12" marginTop="12" marginBottom="12" marginLeft="16" src="@drawable/edge_engine_copy_trading_tip"/>

        <TextView height="wrap_content" width="wrap_content" maxWidth="324" marginLeft="7" text="{{@i18n/n_copy_trading_trade_limit_tip}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" marginBottom="10" marginTop="10" popTemplate="trade_limit_alert.xml" popShow="{{@data.tradeLimitAlert.alertPopShow|false}}" popCancelOnTouchOutside="false" popBackgroundDimmed="true" popShowMode="modal" popModalPositon="center" onClick="@event.tradeLimit.showAlert()"/>

    </LinearLayout>

    <LinearLayout height="wrap_content" marginBottom="16" marginLeft="16" marginRight="16" orientation="vertical" width="match_parent">

        <!--币种信息-->
        <LinearLayout gravity="centerVertical" height="38" orientation="horizontal" width="match_parent">

            <TextView height="wrap_content" width="wrap_content" text="{{@data.tradeLimit.buyTitle}}" background="{{@data.tradeLimit.tabBuyTextColor}}" textColor="#FFFFFF" textFontWeight="500" textSize="10" marginTop="11" paddingBottom="1" paddingTop="1" paddingLeft="2" paddingRight="2" cornerRadius="2"/>

            <TextView marginTop="10" marginLeft="4" height="wrap_content" text="{{@data.tradeLimit.symbolName}}" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" width="wrap_content"/>

            <View height="0" weight="1" width="0"/>

            <!-- todo 标签 -->
            <LinearLayout width="150" height="20" orientation="horizontal" gravity="right" marginLeft="5" marginTop="10">
                <TextView paddingTop="2" paddingBottom="2" paddingLeft="4" paddingRight="4" cornerRadius="2" background="@color/baseColorInputBackground" width="wrap_content" height="wrap_content" text="{{@data.tradeLimit.modeTypeName}}" textSize="10" textColor="@color/kColorSecondaryText" maxWidth="80" autoSizeTextType="uniform" autoSizeMinTextSize="8"/>
                <TextView marginLeft="4" paddingTop="2" paddingBottom="2" paddingLeft="4" paddingRight="4" width="wrap_content" height="wrap_content" cornerRadius="2" background="@color/baseColorInputBackground" text="{{@data.tradeLimit.leverDesc}}" textSize="10" textColor="@color/kColorSecondaryText"/>
                <TextView marginLeft="4" paddingTop="2" paddingBottom="2" paddingLeft="4" paddingRight="4" width="wrap_content" height="wrap_content" cornerRadius="2" background="@color/baseColorInputBackground" text="{{@data.tradeLimit.directionDesc}}" textSize="10" textColor="@color/kColorSecondaryText" maxWidth="65" autoSizeTextType="uniform" autoSizeMinTextSize="8"/>
            </LinearLayout>

        </LinearLayout>

        <!-- 价格信息 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="vertical" width="match_parent" marginTop="10">
            <!-- 标题 收益额 收益率 最新价格 -->
            <LinearLayout gravity="centerVertical" height="17" orientation="horizontal" width="match_parent">

                <TextView height="wrap_content" width="0" weight="1" text="{{@data.tradeLimit.profitTitle}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="12"/>

                <TextView height="wrap_content" width="0" weight="1" text="{{@i18n/n_copy_trading_yield}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="12"/>

                <TextView height="wrap_content" width="0" weight="1" text="{{@data.tradeLimit.lastPriceTitle}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="12" gravity="right"/>

            </LinearLayout>

            <!-- 收益额 收益率 最新价格 -->
            <LinearLayout gravity="centerVertical" orientation="horizontal" width="match_parent" height="14" marginTop="3">

                <TextView height="wrap_content" width="0" weight="1" text="{{@data.tradeLimit.profit}}" textColor="{{@data.tradeLimit.profitColor}}" textFontWeight="400" textSize="12"/>

                <TextView height="wrap_content" width="0" weight="1" text="{{@data.tradeLimit.profitRatio}}" textColor="{{@data.tradeLimit.profitColor}}" textFontWeight="400" textSize="12"/>

                <TextView height="wrap_content" width="0" weight="1" text="{{@data.tradeLimit.marketPriceDesc}}" isSubscript="true" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" gravity="right"/>
            </LinearLayout>

            <!-- 标题 爆仓价格 开仓价格 开仓数量 -->
            <LinearLayout gravity="centerVertical" height="17" orientation="horizontal" width="match_parent" marginTop="10">

                <TextView height="wrap_content" width="0" weight="1" text="{{@data.tradeLimit.storehousePriceTitle}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="12"/>

                <TextView height="wrap_content" width="0" weight="1" text="{{@data.tradeLimit.openPirceTitle}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="12"/>

                <TextView height="wrap_content" width="0" weight="1" text="{{@data.tradeLimit.openAmountTitle}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="12" gravity="right"/>

            </LinearLayout>

            <!-- 爆仓价格 开仓价格 开仓数量 -->
            <LinearLayout gravity="centerVertical" height="14" orientation="horizontal" width="match_parent" marginTop="3">

                <TextView height="wrap_content" width="0" weight="1" text="{{@data.tradeLimit.explosionPriceDesc}}" isSubscript="true" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"/>

                <TextView height="wrap_content" width="0" weight="1" text="{{@data.tradeLimit.openPriceDesc}}" isSubscript="true" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"/>

                <TextView height="wrap_content" width="0" weight="1" text="{{@data.tradeLimit.openAmountDesc}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" gravity="right"/>

            </LinearLayout>

            <View width="343" height="0.5" background="@color/eColorPrimarySeparator" marginTop="10"/>

        </LinearLayout>

        <!-- 规则提示 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="vertical" width="match_parent">

            <LinearLayout gravity="centerVertical" height="28" orientation="horizontal" width="match_parent">

                <ImageView height="12" width="12" src="@drawable/edge_engine_copy_trading_select"/>

                <TextView height="wrap_content" width="wrap_content" maxWidth="324" marginLeft="7" text="FOK" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12"/>

            </LinearLayout>

            <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent" marginTop="8" marginBottom="4" visibility="{{@data.tradeLimit.ruleVisibility|gone}}">

                <TextView height="wrap_content" width="wrap_content" maxWidth="343" richText="{{@data.tradeLimit.rule}}" textColor="@color/KBaseColorSecondaryText" textFontWeight="400" textSize="12" maxLines="3"/>

            </LinearLayout>
        </LinearLayout>

        <!--止盈设置价格-->
        <LinearLayout gravity="centerVertical" height="44" orientation="horizontal" width="match_parent" onClick="@event.tradeLimit.clickEditBackground()" marginTop="2">

            <LinearLayout background="@color/KBaseColorInputBackground" borderColor="{{@data.tradeLimit.takeProfit1BoardColor}}" borderWidth="0.5" cornerRadius="4" gravity="centerVertical" height="match_parent" marginTop="4" marginBottom="4" orientation="horizontal" width="213">

                <EditText gravity="left" height="wrap_content" width="130" inputType="numberDecimal" marginLeft="8" marginTop="8" marginBottom="8" requestFocus="{{@data.tradeLimit.takeProfit1Focus}}" onFocusChange="@event.tradeLimit.onFocusChange(1,@eventParams)" onTextChange="@event.tradeLimit.onTextChange(1,@eventParams)" bindText="@data.tradeLimit.takeProfitPrice" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" hint="{{@i18n/n_copy_trading_tp_trigger_price}}" textColorHint="@color/eButtonUnenabledBgColor"/>

                <View weight="1" height="1"/>

                <TextView gravity="right" height="wrap_content" marginRight="8" paddingBottom="4" paddingTop="4" text="USDT" textColor="@color/KBaseColorSecondaryText" textFontWeight="500" textSize="14" width="wrap_content"/>

            </LinearLayout>

            <View weight="1" height="1"/>

            <LinearLayout background="@color/KBaseColorInputBackground" borderColor="{{@data.tradeLimit.takeProfit2BoardColor}}" borderWidth="0.5" cornerRadius="4" gravity="centerVertical" height="match_parent" marginTop="4" marginBottom="4" orientation="horizontal" width="122" onClick="@event.tradeLimit.clickEditBackground()">

                <EditText gravity="left" height="wrap_content" width="80" inputType="numberDecimal" marginLeft="8" marginTop="8" marginBottom="8" requestFocus="{{@data.tradeLimit.takeProfit2Focus}}" onFocusChange="@event.tradeLimit.onFocusChange(2,@eventParams)" onTextChange="@event.tradeLimit.onTextChange(2,@eventParams)" bindText="@data.tradeLimit.takeProfitRatio" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" hint="{{@i18n/n_copy_trading_tp_percent}}" textColorHint="@color/eButtonUnenabledBgColor"/>

                <View width="5" height="1"/>

                <TextView gravity="right" height="wrap_content" marginRight="8" marginTop="8" marginBottom="8" text="%" textColor="@color/KBaseColorSecondaryText" textFontWeight="500" textSize="14" width="15"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 止盈错误提示 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent" visibility="{{@data.tradeLimit.takeProfitPriceErrorVisible|gone}}">

            <TextView height="wrap_content" width="wrap_content" maxWidth="300" text="{{@data.tradeLimit.takeProfitPriceError}}" textColor="@color/KBaseInputInvalidTipColor" textFontWeight="400" textSize="12"/>

        </LinearLayout>

        <!-- 止盈委托价格 -->
        <LinearLayout gravity="centerVertical" height="44" orientation="horizontal" width="match_parent">

            <LinearLayout background="@color/eColorInputFillDisabled" cornerRadius="4" gravity="centerVertical" height="match_parent" marginTop="4" marginBottom="4" orientation="horizontal" width="213">

                <TextView gravity="left" width="wrap_content" height="wrap_content" marginLeft="8" marginTop="8" marginRight="8" marginBottom="8" text="{{@i18n/n_copy_trading_tp_entrust_price}}" textColor="@color/eButtonUnenabledBgColor" textFontWeight="500" textSize="14" maxWidth="190"/>

            </LinearLayout>

            <View weight="1" height="1"/>

            <LinearLayout background="@color/eColorInputFillDisabled" cornerRadius="4" gravity="centerVertical" height="match_parent" marginTop="4" marginBottom="4" orientation="horizontal" width="122">

                <TextView gravity="left" width="wrap_content" height="wrap_content" marginLeft="8" marginTop="8" marginRight="8" marginBottom="8" text="{{@i18n/n_copy_trading_market_price}}" textColor="@color/eButtonUnenabledBgColor" textFontWeight="500" textSize="14" maxWidth="100"/>
            </LinearLayout>

        </LinearLayout>

        <!-- 止盈提示 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent" marginRight="1" marginBottom="4">

            <TextView height="wrap_content" width="match_parent" richText="{{@data.tradeLimit.takeProfitExpectedRichText}}" textFontWeight="400" maxLines="3"/>

        </LinearLayout>

        <!--止损设置价格-->
        <LinearLayout gravity="centerVertical" height="44" orientation="horizontal" width="match_parent" onClick="@event.tradeLimit.clickEditBackground()">

            <LinearLayout background="@color/KBaseColorInputBackground" borderColor="{{@data.tradeLimit.stopLoss1BoardColor}}" borderWidth="0.5" cornerRadius="4" gravity="centerVertical" height="match_parent" marginTop="4" marginBottom="4" orientation="horizontal" width="213">

                <EditText background="@color/KBaseColorInputBackground" gravity="left" height="wrap_content" width="130" inputType="numberDecimal" marginLeft="8" marginTop="8" marginBottom="8" requestFocus="{{@data.tradeLimit.stopLoss1Focus}}" onFocusChange="@event.tradeLimit.onFocusChange(3,@eventParams)" onTextChange="@event.tradeLimit.onTextChange(3,@eventParams)" bindText="@data.tradeLimit.stopLossPrice" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" hint="{{@i18n/n_copy_trading_sl_trigger_price}}" textColorHint="@color/eButtonUnenabledBgColor"/>

                <View weight="1" height="1"/>

                <TextView gravity="right" height="match_parent" marginRight="8" marginBottom="8" marginTop="9" text="USDT" textColor="@color/KBaseColorSecondaryText" textFontWeight="500" textSize="14" width="wrap_content"/>

            </LinearLayout>

            <View weight="1" height="1"/>

            <LinearLayout background="@color/KBaseColorInputBackground" borderColor="{{@data.tradeLimit.stopLoss2BoardColor}}" borderWidth="0.5" cornerRadius="4" gravity="centerVertical" height="match_parent" marginTop="4" marginBottom="4" orientation="horizontal" width="122">

                <EditText background="@color/KBaseColorInputBackground" gravity="left" height="wrap_content" width="80" inputType="numberDecimal" marginLeft="8" marginTop="8" marginBottom="8" requestFocus="{{@data.tradeLimit.stopLoss2Focus}}" onFocusChange="@event.tradeLimit.onFocusChange(4,@eventParams)" onTextChange="@event.tradeLimit.onTextChange(4,@eventParams)" bindText="@data.tradeLimit.stopLossRatio" textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="14" hint="{{@i18n/n_copy_trading_sl_percent}}" textColorHint="@color/eButtonUnenabledBgColor"/>

                <View width="5" height="1"/>

                <TextView gravity="right" height="wrap_content" marginRight="8" marginTop="8" marginBottom="8" text="%" textColor="@color/KBaseColorSecondaryText" textFontWeight="500" textSize="14" width="15"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 止损报错 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent" visibility="{{@data.tradeLimit.stopLossPriceErrorVisible|gone}}">

            <TextView height="wrap_content" width="wrap_content" maxWidth="300" text="{{@data.tradeLimit.stopLossPriceError}}" textColor="#F95A50" textFontWeight="400" textSize="12"/>

        </LinearLayout>

        <!-- 止损委托价格 -->
        <LinearLayout gravity="centerVertical" height="44" orientation="horizontal" width="match_parent">

            <LinearLayout background="@color/eColorInputFillDisabled" cornerRadius="4" gravity="centerVertical" height="match_parent" marginTop="4" marginBottom="4" orientation="horizontal" width="213">
                <TextView gravity="left" width="wrap_content" height="wrap_content" marginLeft="8" marginTop="8" marginRight="8" marginBottom="8" text="{{@i18n/n_copy_trading_sl_entrust_price}}" textColor="@color/eButtonUnenabledBgColor" textFontWeight="500" textSize="14" maxWidth="190"/>
            </LinearLayout>

            <View weight="1" height="1"/>

            <LinearLayout background="@color/eColorInputFillDisabled" cornerRadius="4" gravity="centerVertical" height="match_parent" marginTop="4" marginBottom="4" orientation="horizontal" width="122">
                <TextView gravity="left" width="wrap_content" height="wrap_content" marginLeft="8" marginTop="8" marginRight="8" marginBottom="8" text="{{@i18n/n_copy_trading_market_price}}" textColor="@color/eButtonUnenabledBgColor" textFontWeight="500" textSize="14" maxWidth="100"/>
            </LinearLayout>

        </LinearLayout>

        <!-- 止损提示 -->
        <LinearLayout gravity="centerVertical" height="wrap_content" orientation="horizontal" width="match_parent" marginTop="4" onClick="@event.tradeLimit.closeKeyBoard()">

            <TextView height="wrap_content" width="match_parent" richText="{{@data.tradeLimit.stopLossExpectedRichText}}" textFontWeight="400" maxLines="3"/>

        </LinearLayout>

        <!--确认-->
        <LinearLayout height="wrap_content" orientation="vertical" width="match_parent">

            <LinearLayout gravity="right" height="76" width="match_parent" orientation="vertical">

                <TextView cornerRadius="4" background="{{@data.tradeLimit.confirmBackgroud}}" marginTop="16" marginBottom="16" gravity="center" height="match_parent" width="match_parent" text="{{@i18n/n_copy_trading_confirm}}" textColor="#FFFFFF" textFontWeight="500" textSize="14" onClick="@event.tradeLimit.confirm()"/>

            </LinearLayout>

            <View width="match_parent" height="20"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
