<LinearLayout height="match_parent" orientation="vertical" width="375">
    <LinearLayout gravity="centerVertical" height="40" orientation="horizontal" paddingLeft="16" paddingRight="16" width="match_parent">
        <LinearLayout background="{{@data.currentDelegation.limitBg}}" cornerRadius="4" gravity="centerVertical" height="24" onClick="@event.currentDelegation.tabSelect(0)" orientation="horizontal" paddingLeft="8" paddingRight="8" width="wrap_content">

            <TextView height="wrap_content" text="{{@i18n/n_contract_intro_limit}}" textColor="{{@data.currentDelegation.limitOrderColor}}" textFontWeight="500" textSize="12" width="wrap_content"/>

            <TextView height="wrap_content" text="{{@data.currentDelegation.limitPriceOrdersCount}}" textColor="{{@data.currentDelegation.limitOrderColor}}" textFontWeight="500" textSize="12" width="wrap_content"/>
        </LinearLayout>

        <LinearLayout background="{{@data.currentDelegation.profitAndLossBg}}" cornerRadius="4" gravity="centerVertical" height="24" marginLeft="8" onClick="@event.currentDelegation.tabSelect(1)" orientation="horizontal" paddingLeft="8" paddingRight="8" width="wrap_content">

            <TextView height="wrap_content" text="{{@i18n/n_copy_trading_trade_limit_title}}" textColor="{{@data.currentDelegation.profitAndLossColor}}" textFontWeight="500" textSize="12" width="wrap_content"/>

            <TextView height="wrap_content" text="{{@data.currentDelegation.stopProfitStopLossCount}}" textColor="{{@data.currentDelegation.profitAndLossColor}}" textFontWeight="500" textSize="12" width="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout height="match_parent" orientation="vertical" width="match_parent">
        <LinearLayout gravity="centerVertical" height="32" width="match_parent">
            <LinearLayout gravity="centerVertical" height="32" onClick="@event.currentDelegation.onSelectionChange()" width="wrap_content">
                <!-- 只看当前品种 -->
                <ImageView height="12" marginLeft="16" scaleType="fitXY" src="{{@data.currentDelegation.checkboxImg}}" width="12"/>
                <TextView gravity="center" height="match_parent" marginLeft="4" text="{{@i18n/n_contract_position_only_current}}" textColor="@color/kColorSecondaryText" textSize="12" width="wrap_content"/>
            </LinearLayout>
            <View height="1" weight="1" width="0"/>
            <TextView background="@color/baseColorInputBackground" cornerRadius="4" gravity="center" height="24" marginRight="16" onClick="@event.currentDelegation.showCancelDialog()" paddingLeft="8" paddingRight="8" text="{{@i18n/n_margin_cancel_order}}" textColor="@color/kColorPrimaryText" textSize="12" width="wrap_content"/>
        </LinearLayout>
        <FrameLayout height="match_parent" width="match_parent">
            <RecyclerView data="@data.currentDelegation.listData" height="match_parent" indexKey="i" itemKey="recyclerItem" orientation="vertical" typeKey="type" width="match_parent">

                <Cell height="wrap_content" type="limit" width="match_parent">
                    <LinearLayout height="wrap_content" orientation="vertical" width="match_parent">
                        <!-- 数据行 -->
                        <LinearLayout height="wrap_content" orientation="vertical" width="match_parent">
                            <!-- 币种 -->
                            <LinearLayout gravity="centerVertical" height="wrap_content" marginLeft="16" marginRight="16" marginTop="16" orientation="horizontal" width="match_parent">
                                <!-- 币种名称 -->
                                <TextView background="{{@recyclerItem.directionColor}}" cornerRadius="2" height="wrap_content" paddingBottom="1" paddingLeft="2" paddingRight="2" paddingTop="1" text="{{@recyclerItem.directionLabel}}" textColor="#FFFFFF" textSize="10" width="wrap_content"/>
                                <TextView height="wrap_content" marginLeft="4" text="{{@recyclerItem.symbolDesc}}" textColor="@color/kColorPrimaryText" textFontWeight="600" textSize="14" width="wrap_content"/>
                                <View height="1" weight="1" width="0"/>
                                <TextView background="@color/kColorInputFill" cornerRadius="2" gravity="center" height="20" onClick="@event.currentDelegation.cancelOrder(0, '{{@recyclerItem.itemIndex}}')" paddingLeft="8" paddingRight="8" text="{{@i18n/n_market_qicek_trade_position}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
                            </LinearLayout>
                            <!-- tag行 收益率-->
                            <LinearLayout height="16" marginLeft="16" marginRight="16" marginTop="6" orientation="horizontal" width="match_parent">
                                <TextView background="@color/baseColorInputBackground" cornerRadius="2" height="wrap_content" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@recyclerItem.modeTypeName}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
                                <TextView background="@color/baseColorInputBackground" cornerRadius="2" height="wrap_content" marginLeft="4" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@recyclerItem.leverDesc}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
                                <TextView background="@color/baseColorInputBackground" cornerRadius="2" height="wrap_content" marginLeft="4" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@recyclerItem.directionDesc}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
                            </LinearLayout>
                            <!-- 委托量 委托价 冻结保证金-->
                            <LinearLayout height="wrap_content" marginLeft="16" marginRight="16" marginTop="14" orientation="horizontal" width="match_parent">
                                <!-- 委托量 -->
                                <TextView height="wrap_content" maxLines="0" text="{{@recyclerItem.orderVolumeTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                                <!-- 委托价 -->
                                <TextView height="wrap_content" maxLines="0" text="{{@recyclerItem.commissionPriceTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                                <!-- 冻结保证金 -->
                                <TextView gravity="right" height="wrap_content" maxLines="0" text="{{@recyclerItem.freezeMarginTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                            </LinearLayout>
                            <LinearLayout gravity="centerVertical" height="16" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent">
                                <!-- 委托量 -->
                                <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" text="{{@recyclerItem.orderVolume}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                                <!-- 委托价 -->
                                <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" text="{{@recyclerItem.commissionPrice}}" isSubscript="true" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                                <!-- 冻结保证金 -->
                                <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" gravity="right" height="wrap_content" text="{{@recyclerItem.freezeMargin}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                            </LinearLayout>
                            <!-- 成交量 成交均价 手续费 -->
                            <LinearLayout height="wrap_content" marginLeft="16" marginRight="16" marginTop="14" orientation="horizontal" width="match_parent">
                                <!-- 成交量 -->
                                <TextView height="wrap_content" maxLines="0" text="{{@recyclerItem.turnoverTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                                <!-- 成交均价 -->
                                <TextView height="wrap_content" maxLines="0" text="{{@recyclerItem.averageTransactionPriceTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                                <!-- 手续费 -->
                                <TextView gravity="right" height="wrap_content" maxLines="0" text="{{@recyclerItem.feesTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                            </LinearLayout>
                            <LinearLayout gravity="centerVertical" height="16" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent">
                                <!-- 成交量 -->
                                <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" text="{{@recyclerItem.turnover}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                                <!-- 成交均价 -->
                                <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" text="{{@recyclerItem.averageTransactionPrice}}" isSubscript="true" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                                <!-- 手续费 -->
                                <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" gravity="right" height="wrap_content" text="{{@recyclerItem.fees}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                            </LinearLayout>

                            <TextView height="wrap_content" marginLeft="16" marginRight="16" marginTop="14" maxLines="0" text="{{@recyclerItem.orderTime}}" textColor="@color/kColorThreeLevelText" textSize="12" width="match_parent"/>
                        </LinearLayout>

                        <!-- 分割线 -->
                        <TextView background="@color/KBaseColorPrimarySeparator" height="0.5" marginLeft="16" marginRight="16" marginTop="12" width="match_parent"/>
                    </LinearLayout>
                </Cell>

                <Cell height="wrap_content" type="profit_loss" width="match_parent">
                    <LinearLayout height="wrap_content" orientation="vertical" width="match_parent">
                        <!-- 数据行 -->
                        <LinearLayout height="wrap_content" orientation="vertical" width="match_parent">
                            <!-- 币种 -->
                            <LinearLayout gravity="centerVertical" height="wrap_content" marginLeft="16" marginRight="16" marginTop="16" orientation="horizontal" width="match_parent">
                                <!-- 币种名称 -->
                                <TextView background="{{@recyclerItem.directionColor}}" cornerRadius="2" height="wrap_content" paddingBottom="1" paddingLeft="2" paddingRight="2" paddingTop="1" text="{{@recyclerItem.directionLabel}}" textColor="#FFFFFF" textSize="10" width="wrap_content"/>
                                <TextView height="wrap_content" marginLeft="4" text="{{@recyclerItem.symbolDesc}}" textColor="@color/kColorPrimaryText" textFontWeight="600" textSize="14" width="wrap_content"/>
                                <View height="1" weight="1" width="0"/>
                                <TextView background="@color/kColorInputFill" cornerRadius="2" gravity="center" height="20" onClick="@event.currentDelegation.cancelOrder(1, '{{@recyclerItem.itemIndex}}')" paddingLeft="8" paddingRight="8" text="{{@i18n/n_market_qicek_trade_position}}" textColor="@color/kColorPrimaryText" textFontWeight="400" textSize="12" width="wrap_content"/>
                            </LinearLayout>
                            <!-- tag行 收益率-->
                            <LinearLayout height="16" marginLeft="16" marginRight="16" marginTop="6" orientation="horizontal" width="match_parent">
                                <TextView background="@color/baseColorInputBackground" cornerRadius="2" height="wrap_content" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@recyclerItem.modeTypeName}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
                                <TextView background="@color/baseColorInputBackground" cornerRadius="2" height="wrap_content" marginLeft="4" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@recyclerItem.leverDesc}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
                                <TextView background="@color/baseColorInputBackground" cornerRadius="2" height="wrap_content" marginLeft="4" paddingBottom="2" paddingLeft="4" paddingRight="4" paddingTop="2" text="{{@recyclerItem.directionDesc}}" textColor="@color/kColorSecondaryText" textSize="10" width="wrap_content"/>
                            </LinearLayout>
                            <!-- 委托量 委托价 冻结保证金-->
                            <LinearLayout height="wrap_content" marginLeft="16" marginRight="16" marginTop="14" orientation="horizontal" width="match_parent">
                                <!-- 委托量 -->
                                <TextView height="wrap_content" maxLines="0" text="{{@recyclerItem.orderVolumeTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                                <!-- 触发价 -->
                                <TextView height="wrap_content" maxLines="0" text="{{@recyclerItem.triggerPriceTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                                <!-- 委托价 -->
                                <TextView gravity="right" height="wrap_content" maxLines="0" text="{{@recyclerItem.commissionPriceTitle}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                            </LinearLayout>
                            <LinearLayout gravity="centerVertical" height="16" marginLeft="16" marginRight="16" orientation="horizontal" width="match_parent">
                                <!-- 委托量 -->
                                <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" text="{{@recyclerItem.orderVolume}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                                <!-- 触发价 -->
                                <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" height="wrap_content" text="{{@recyclerItem.triggerPriceShow}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                                <!-- 委托价 -->
                                <TextView autoSizeMinTextSize="8" autoSizeTextType="uniform" gravity="right" height="wrap_content" text="{{@i18n/n_exchange_order_list_market}}" textColor="@color/kColorPrimaryText" textSize="12" weight="1" width="0"/>
                            </LinearLayout>

                            <LinearLayout gravity="centerVertical" height="wrap_content" marginLeft="16" marginRight="16" marginTop="14" orientation="horizontal" width="match_parent">
                                <LinearLayout borderColor="@color/kColorThreeLevelText" borderWidth="1" cornerRadius="2" height="20" paddingLeft="8" paddingRight="8" width="wrap_content">
                                    <TextView gravity="center" height="20" text="{{@recyclerItem.orderType}}" textColor="@color/kColorThreeLevelText" textSize="12" width="wrap_content"/>
                                </LinearLayout>
                                <TextView gravity="right" height="wrap_content" maxLines="0" text="{{@recyclerItem.orderTime}}" textColor="@color/kColorThreeLevelText" textSize="12" weight="1" width="0"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- 分割线 -->
                        <TextView background="@color/KBaseColorPrimarySeparator" height="0.5" marginLeft="16" marginRight="16" marginTop="12" width="match_parent"/>
                    </LinearLayout>
                </Cell>
            </RecyclerView>
            <!-- 空样式 -->
            <LinearLayout gravity="centerHorizontal" height="wrap_content" orientation="vertical" visibility="{{@data.currentDelegation.showEmpty | gone}}" width="match_parent">
                <ImageView height="60" marginTop="40" src="@drawable/edge_engine_empty" width="60"/>
                <TextView gravity="center" height="wrap_content" marginTop="8" text="{{@i18n/n_contract_trade_no_record}}" textColor="@color/eBaseColorThreeLevelText" textSize="12" width="match_parent"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <View height="0" onPopDismiss="@event.currentDelegation.cancelDialogClose()" popArrowDirection="up" popArrowHeight="0" popArrowWidth="0" popBackgroundDimmed="true" popCancelOnTouchOutside="false" popModalPositon="center" popShow="{{@data.currentDelegation.cancelOrderDialogShow}}" popShowMode="modal" popTemplate="cancelAllOrderDialog.xml" width="0"/>
</LinearLayout>
