<LinearLayout
        topLeftRadius="8"
        topRightRadius="8"
        width="375"
        height="wrap_content"
        background="@color/KBaseColorContentBackground"
        orientation="vertical">
        <LinearLayout
                width="375"
                height="wrap_content"
                paddingBottom="16"
                orientation="vertical">
                <LinearLayout
                        width="match_parent"
                        height="28"
                        marginTop="8"
                        marginLeft="16"
                        marginRight="16"
                        gravity="centerVertical"
                        orientation="horizontal">
                        <TextView
                                width="wrap_content"
                                height="wrap_content"
                                text="{{ @data.bottomListRadioDialog.topTitle | -- }}"
                                textSize="16"
                                textColor="@color/kColorPrimaryText"
                                textFontWeight="500" />
                        <View
                                weight="1"
                                height="0"
                                width="0" />
                        <ImageView
                                width="wrap_content"
                                height="wrap_content"
                                src="@drawable/edge_engine_copy_trading_dialog_close"
                                onClick="@event.bottomListRadioDialog.popDismiss()" />
                </LinearLayout>
                <View
                        marginTop="8"
                        height="0.5"
                        background="@color/kColorPrimarySeparator"
                        width="match_parent" />
                <For
                        data="@data.bottomListRadioDialog.list"
                        itemKey="item">
                        <Cell
                                type="normal"
                                marginTop="16"
                                marginLeft="16"
                                marginRight="16"
                                width="match_parent"
                                height="wrap_content">
                                <LinearLayout
                                        width="match_parent"
                                        height="wrap_content"
                                        background="@color/KBaseColorInputBackground"
                                        cornerRadius="4"
                                        gravity="centerVertical"
                                        orientation="vertical"
                                        paddingLeft="12"
                                        paddingRight="12"
                                        paddingTop="12"
                                        paddingBottom="12">
                                        <LinearLayout
                                                width="match_parent"
                                                height="wrap_content"
                                                gravity="centerVertical"
                                                orientation="horizontal"
                                                onClick="@event.bottomListRadioDialog.typeTapAction('{{@item.index}}')">
                                                <LinearLayout
                                                        width="0"
                                                        weight="1"
                                                        height="wrap_content"
                                                        gravity="centerVertical"
                                                        orientation="horizontal">
                                                        <LinearLayout
                                                                width="290"
                                                                height="wrap_content"
                                                                gravity="centerVertical"
                                                                orientation="vertical">
                                                                <TextView
                                                                        width="match_parent"
                                                                        height="wrap_content"
                                                                        text="{{@item.title}}"
                                                                        maxLines="2"
                                                                        textSize="14"
                                                                        textColor="@color/kColorPrimaryText"
                                                                        textFontWeight="500" />
                                                                <TextView
                                                                        width="match_parent"
                                                                        height="wrap_content"
                                                                        marginTop="4"
                                                                        text="{{@item.subTitle}}"
                                                                        textSize="10"
                                                                        maxLines="0"
                                                                        textColor="@color/KBaseColorSecondaryText"
                                                                        textFontWeight="400" />
                                                        </LinearLayout>
                                                </LinearLayout>
                                                <ImageView
                                                        width="16"
                                                        height="16"
                                                        visibility="{{@item.unSelectedImageVisibility | visible}}"
                                                        src="@drawable/icon_copytrading_currency_selection_n" />
                                                <ImageView
                                                        width="16"
                                                        height="16"
                                                        visibility="{{@item.selectedImageVisibility | gone}}"
                                                        src="@drawable/icon_copytrading_currency_selection_s" />
                                        </LinearLayout>
                                </LinearLayout>
                        </Cell>
                </For>
        </LinearLayout>
</LinearLayout>
