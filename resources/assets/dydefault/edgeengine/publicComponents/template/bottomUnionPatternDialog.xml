<LinearLayout
    topLeftRadius="8"
    topRightRadius="8"
    width="375"
    height="wrap_content"
    background="@color/KBaseColorContentBackground"
    orientation="vertical">
    <LinearLayout
        width="375"
        height="wrap_content"
        paddingBottom="16"
        orientation="vertical">
        <LinearLayout
            width="match_parent"
            height="28"
            marginTop="8"
            marginLeft="16"
            marginRight="16"
            gravity="centerVertical"
            orientation="horizontal">
            <TextView
                width="wrap_content"
                height="wrap_content"
                text="{{@i18n/n_asset_pattern}}"
                textSize="16"
                textColor="@color/kColorPrimaryText"
                textFontWeight="500" />
            <View
                weight="1"
                height="0"
                width="0" />
            <ImageView
                width="wrap_content"
                height="wrap_content"
                src="@drawable/edge_engine_copy_trading_dialog_close"
                onClick="@event.bottomUnionPatternDialog.popDismiss()" />
        </LinearLayout>
        <View
            marginTop="8"
            height="0.5"
            background="@color/kColorPrimarySeparator"
            width="match_parent" />

        <!--单币保证金-->
        <LinearLayout
            width="match_parent"
            height="wrap_content"
            background="@color/baseColorInputBackground"
            borderColor="{{@data.bottomUnionPatternDialog.singleBorderColor}}"
            borderWidth="1"
            cornerRadius="8"
            orientation="horizontal"
            gravity="start"
            marginTop="16"
            marginLeft="16"
            marginRight="16"
            onClick="@event.bottomUnionPatternDialog.pickSingle()"
            >
                <ImageView
                    width="40"
                    height="42"
                    marginTop="16"
                    marginLeft="12"
                    src="@drawable/edge_engine_single_asset" />
                <LinearLayout
                    width="0"
                    weight="1"
                    height="wrap_content"
                    gravity="centerVertical"
                    marginLeft="12"
                    marginRight="12"
                    marginTop="16"
                    orientation="vertical">
                    <TextView
                        width="match_parent"
                        height="wrap_content"
                        text="{{@i18n/n_single_asset_pattern_str}}"
                        maxLines="1"
                        textSize="16"
                        textColor="@color/kColorPrimaryText"
                        textFontWeight="500" />
                    <TextView
                        width="match_parent"
                        height="wrap_content"
                        marginTop="6"
                        marginBottom="16"
                        lineSpacing="6"
                        text="{{@i18n/n_single_asset_pattern_desc}}"
                        textSize="12"
                        maxLines="0"
                        textColor="@color/KBaseColorSecondaryText"
                        textFontWeight="400" />
                </LinearLayout>

        </LinearLayout>

        <!-- 联合保证金 -->
         <LinearLayout
            width="match_parent"
            height="wrap_content"
            background="@color/baseColorInputBackground"
            borderColor="{{@data.bottomUnionPatternDialog.unionBorderColor}}"
            borderWidth="1"
            cornerRadius="8"
            orientation="horizontal"
            gravity="start"
            marginTop="12"
            marginLeft="16"
            marginRight="16"
            onClick="@event.bottomUnionPatternDialog.pickUnion()"
            >
                <ImageView
                    width="40"
                    height="42"
                    marginTop="16"
                    marginLeft="12"
                    src="@drawable/edge_engine_union_asset" />
                <LinearLayout
                    width="0"
                    weight="1"
                    height="wrap_content"
                    gravity="centerVertical"
                    marginLeft="12"
                    marginRight="12"
                    marginTop="16"
                    orientation="vertical">
                    <TextView
                        width="match_parent"
                        height="wrap_content"
                        text="{{@i18n/n_unit_asset_pattern_str}}"
                        maxLines="1"
                        textSize="16"
                        textColor="@color/kColorPrimaryText"
                        textFontWeight="500" />
                    <TextView
                        width="match_parent"
                        height="wrap_content"
                        marginTop="6"
                        marginBottom="16"
                        lineSpacing="6"
                        text="{{@i18n/n_unit_asset_pattern_desc}}"
                        textSize="12"
                        maxLines="0"
                        textColor="@color/KBaseColorSecondaryText"
                        textFontWeight="400" />
                </LinearLayout>

        </LinearLayout>

        <!-- 说明 -->
        <RichTextView
            width="match_parent"
            height="wrap_content"
            marginTop="12"
            marginBottom="16"
            marginLeft="16"
            marginRight="16"
            textSize="12"
            lineSpacing="6"
            lineHeight="14"
            maxLines="0"
            textColor="@color/KBaseColorSecondaryText"
            richText="{{@data.bottomUnionPatternDialog.richTextData}}"
            richTextLinkCallback="@event.bottomUnionPatternDialog.richTextLinkCallback()"
        />
    </LinearLayout>
</LinearLayout>
