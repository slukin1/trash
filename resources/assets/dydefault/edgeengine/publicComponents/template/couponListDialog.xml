<LinearLayout background="@color/KBaseColorContentBackground" height="454" orientation="vertical"
    paddingBottom="16" topLeftRadius="8" topRightRadius="8" width="375">

    <LinearLayout gravity="centerVertical" height="44" orientation="horizontal" paddingLeft="16"
        paddingRight="16" width="match_parent">

        <TextView height="wrap_content" text="{{@i18n/n_exchange_coupon_label}}"
            textColor="@color/kColorPrimaryText" textFontWeight="500" textSize="16" weight="1"
            width="0" />

        <ImageView height="28" onClick="@event.couponListDialog.popDismiss()"
            src="@drawable/edge_engine_copy_trading_dialog_close" width="28" />
    </LinearLayout>

    <View background="@color/kColorPrimarySeparator" height="0.5" width="match_parent" />

    <RecyclerView data="@data.couponListDialog.coupons" height="0" itemKey="item"
        orientation="vertical" weight="1" width="match_parent">
        <Cell height="wrap_content" marginLeft="16" marginRight="16" marginTop="16" type="coupon"
            width="match_parent">
            <LinearLayout background="@color/KBaseColorInputBackground" cornerRadius="8"
                gravity="centerVertical" height="wrap_content" orientation="vertical"
                paddingBottom="12" paddingLeft="12" paddingRight="12" paddingTop="12"
                width="match_parent">
                <LinearLayout gravity="centerVertical" height="wrap_content"
                    onClick="@event.couponListDialog.couponTapAction('{{@item.index}}')"
                    orientation="horizontal" width="match_parent">
                    <LinearLayout gravity="centerVertical" height="wrap_content"
                        orientation="horizontal" weight="1" width="0">
                        <LinearLayout gravity="centerVertical" height="wrap_content"
                            orientation="vertical" width="200">
                            <TextView gravity="centerVertical" height="20" maxLines="2"
                                text="{{@item.title}}" textColor="@color/kColorPrimaryText"
                                textFontWeight="500" textSize="14" width="match_parent" />
                            <TextView gravity="centerVertical" height="14"
                                text="{{@i18n/n_transaction_spot_leverage_available}}"
                                textColor="@color/KBaseColorSecondaryText" textFontWeight="400"
                                textSize="10" width="match_parent" />
                            <TextView gravity="centerVertical" height="14" text="{{@item.time}}"
                                textColor="@color/KBaseColorSecondaryText" textFontWeight="400"
                                textSize="10" width="match_parent" />
                        </LinearLayout>
                        <LinearLayout height="24" marginRight="16" orientation="horizontal"
                            weight="1" width="0" >
                            <TextView gravity="right" height="wrap_content" marginRight="2"
                                text="{{@item.amount}}" textColor="@color/kColorPrimaryText"
                                textFontWeight="500" textSize="24" weight="1" width="0" />
                            <TextView gravity="right" height="wrap_content"
                                text="{{@item.baseCurrency}}"
                                textColor="@color/eAssetBlackButtonColor" textFontWeight="400"
                                textSize="12" width="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView height="16" src="@drawable/icon_copytrading_currency_selection_n"
                        visibility="{{@item.unSelectedImageVisibility | visible}}" width="16" />
                    <ImageView height="16" src="@drawable/icon_copytrading_currency_selection_s"
                        visibility="{{@item.selectedImageVisibility | gone}}" width="16" />
                </LinearLayout>
                <View background="@color/kColorPrimarySeparator" height="0.5" marginTop="12"
                    width="match_parent" />
                <LinearLayout height="wrap_content" marginTop="12"
                    onClick="@event.couponListDialog.unfoldRulesTapAction('{{@item.index}}')"
                    orientation="horizontal" visibility="{{@item.foldVisibility | visible}}"
                    width="match_parent">
                    <TextView height="wrap_content" text="{{@item.rules}}"
                        textColor="@color/KBaseColorSecondaryText" textFontWeight="400"
                        textSize="10" weight="1" width="0" />
                    <ImageView gravity="centerVertical" height="8" marginLeft="3"
                        src="@drawable/edge_engine_copytrading_arrow_down" width="8" />
                </LinearLayout>
                <LinearLayout height="wrap_content" marginTop="12"
                    onClick="@event.couponListDialog.unfoldRulesTapAction('{{@item.index}}')"
                    orientation="horizontal" visibility="{{@item.unfoldVisibility | gone}}"
                    width="match_parent">
                    <TextView height="wrap_content" maxLines="0" text="{{@item.rules}}"
                        textColor="@color/KBaseColorSecondaryText" textFontWeight="400"
                        textSize="10" weight="1" width="0" />
                    <ImageView gravity="centerVertical" height="8" marginLeft="3"
                        src="@drawable/edge_engine_copytrading_arrow_up" width="8" />
                </LinearLayout>
            </LinearLayout>
        </Cell>
        <Cell height="wrap_content" marginLeft="16" marginRight="16" marginTop="16" type="discount"
            width="match_parent">
            <LinearLayout background="@color/KBaseColorInputBackground" cornerRadius="8"
                gravity="centerVertical" height="wrap_content" orientation="vertical"
                paddingBottom="12" paddingLeft="12" paddingRight="12" paddingTop="12"
                width="match_parent">
                <LinearLayout gravity="centerVertical" height="wrap_content"
                    orientation="horizontal" width="match_parent">
                    <LinearLayout gravity="centerVertical" height="wrap_content"
                        orientation="horizontal" weight="1" width="0">
                        <LinearLayout gravity="centerVertical" height="wrap_content"
                            orientation="vertical" width="200">
                            <TextView gravity="centerVertical" height="20" maxLines="2"
                                text="{{@item.title}}" textColor="@color/kColorPrimaryText"
                                textFontWeight="500" textSize="14" width="match_parent" />
                            <TextView gravity="centerVertical" height="14" marginTop="2"
                                text="{{@item.time}}" textColor="@color/KBaseColorSecondaryText"
                                textFontWeight="400" textSize="10" width="match_parent" />
                        </LinearLayout>
                        <LinearLayout gravity="right" height="wrap_content" marginRight="32"
                            orientation="vertical" weight="1" width="0">
                            <LinearLayout gravity="centerVertical" height="wrap_content"
                                orientation="horizontal" width="wrap_content">
                                <TextView gravity="right" height="wrap_content" marginRight="2"
                                    text="{{@item.fee}}" textColor="@color/kColorPrimaryText"
                                    textFontWeight="500" textSize="24" width="wrap_content" />
                                <!--<TextView gravity="right" height="wrap_content" marginTop="6"
                                    text="{{@i18n/n_transaction_fee}}"
                                    textColor="@color/eAssetBlackButtonColor" textFontWeight="400"
                                    textSize="12" width="wrap_content" />-->
                            </LinearLayout>

                            <TextView background="@color/kColorMajorTheme006" cornerRadius="2"
                                height="wrap_content" marginTop="6" paddingBottom="2"
                                paddingLeft="4" paddingRight="4" paddingTop="2"
                                text="{{@item.stateText}}" textColor="@color/kColorMajorTheme100"
                                textFontWeight="400" textSize="10" width="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View background="@color/kColorPrimarySeparator" height="0.5" marginTop="12"
                    width="match_parent" />
                <LinearLayout height="wrap_content" marginTop="12"
                    onClick="@event.couponListDialog.unfoldRulesTapAction('{{@item.index}}')"
                    orientation="horizontal" visibility="{{@item.foldVisibility | visible}}"
                    width="match_parent">
                    <TextView height="wrap_content" text="{{@item.rules}}"
                        textColor="@color/KBaseColorSecondaryText" textFontWeight="400"
                        textSize="10" weight="1" width="0" />
                    <ImageView gravity="centerVertical" height="8" marginLeft="3"
                        src="@drawable/edge_engine_copytrading_arrow_down" width="8" />
                </LinearLayout>
                <LinearLayout height="wrap_content" marginTop="12"
                    onClick="@event.couponListDialog.unfoldRulesTapAction('{{@item.index}}')"
                    orientation="horizontal" visibility="{{@item.unfoldVisibility | gone}}"
                    width="match_parent">
                    <TextView height="wrap_content" maxLines="0" text="{{@item.rules}}"
                        textColor="@color/KBaseColorSecondaryText" textFontWeight="400"
                        textSize="10" weight="1" width="0" />
                    <ImageView gravity="centerVertical" height="8" marginLeft="3"
                        src="@drawable/edge_engine_copytrading_arrow_up" width="8" />
                </LinearLayout>
            </LinearLayout>
        </Cell>
    </RecyclerView>

    <TextView background="{{@data.couponListDialog.btnBackground}}" cornerRadius="4"
        gravity="center" height="44" marginLeft="16" marginRight="16" marginTop="16"
        onClick="@event.couponListDialog.popConfirm()" text="{{@i18n/n_sure}}"
        textColor="{{@data.couponListDialog.btnColor}}" textFontWeight="500" textSize="14"
        width="match_parent" />
</LinearLayout>
