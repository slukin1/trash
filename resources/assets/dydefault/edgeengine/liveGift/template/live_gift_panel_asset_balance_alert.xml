<LinearLayout height="wrap_content" marginBottom="16" marginLeft="16" marginRight="16"
    marginTop="16" orientation="vertical" width="293">
    <LinearLayout gravity="centerVertical" height="wrap_content"
        orientation="horizontal" width="match_parent">
        <TextView height="wrap_content" text="{{@i18n/n_contract_trade_reminder_text}}" textSize="16" textWeight="600"
            width="wrap_content" textColor="#000000" />
        <View height="0" weight="1" width="0" />
        <ImageView height="16" src="@drawable/hb_live_intro_close" width="16" onClick="@event.closeAlert()" />
    </LinearLayout>
    <TextView width="match_parent" marginTop="16" text="{{@i18n/n_live_gift_insufficient_balance}}" textSize="14"
        textWeight="400" height="wrap_content" textColor="#000000" maxLines="0"/>
    <LinearLayout gravity="centerVertical" height="wrap_content" marginTop="16"
        orientation="horizontal" width="match_parent">
        <CornerView background="#FAFAFA" gravity="center" height="40" text="{{@i18n/n_live_gift_transfer}}" textSize="14"
            textWeight="500" width="142.5" onClick="@event.transfer()" textColor="#0173E5" cornerRadius="4"/>
        <CornerView background="#0173E5" gravity="center" height="40" marginLeft="8" text="{{@i18n/n_live_gift_recharge}}"
            textSize="14" textWeight="500" width="142.5" onClick="@event.deposit()" textColor="#FFFFFF" cornerRadius="4"/>
    </LinearLayout>
</LinearLayout>

