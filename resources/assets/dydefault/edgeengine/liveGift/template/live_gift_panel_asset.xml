<LinearLayout
    width="match_parent"
    height="match_parent"
    orientation="horizontal"
    gravity="centerVertical"
    marginStart="16">
    <ImageView
        width="14"
        height="14"
        src="@drawable/content_live_drop_coin"/>
    <TextView
        width="wrap_content"
        height="wrap_content"
        textSize="10"
        marginStart="6"
        text="{{@i18n/n_live_gift_spot_assets}}: "
        textWeight="400"
        textColor="#E6E6E6"/>
    <TextView
        width="wrap_content"
        height="match_parent"
        textSize="10"
        gravity="center"
        paddingStart="1"
        paddingEnd="5"
        text="{{@data.balance | --}} {{@data.balanceTitle}}"
        textWeight="400"
        onClick="@event.deposit()"
        textColor="#0173E5"/>
    <ImageView
        width="12"
        height="match_parent"
        scaleType="fitCenter"
        onClick="@event.deposit()"
        src="@drawable/live_gift_bottom_arrow"/>

    <LinearLayout
        width="wrap_content"
        height="match_parent"
        orientation="horizontal"
        marginStart="22"
        gravity="centerVertical">

        <TextView
            width="wrap_content"
            height="wrap_content"
            textSize="10"
            text="{{@i18n/n_live_hot_coin}}: "
            textWeight="400"
            textColor="#E6E6E6"/>
        <TextView
            width="wrap_content"
            height="match_parent"
            textSize="10"
            gravity="center"
            paddingStart="1"
            paddingEnd="5"
            text="{{@data.integral | --}}"
            textWeight="400"
            onClick="@event.getIntegral()"
            textColor="#0173E5"/>
        <ImageView
            width="12"
            height="match_parent"
            scaleType="fitCenter"
            onClick="@event.getIntegral()"
            visibility="{{@data.integralGetVisible | gone}}"
            src="@drawable/live_gift_bottom_arrow"/>
    </LinearLayout>
</LinearLayout>

